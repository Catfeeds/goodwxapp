/**app.wxss**/

/*官方组件不够,weui来凑*/
@import 'style/weui.wxss';
page {
  height: 100%;
  width: 100%;
  overflow: hidden;
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}


.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*搜索出现的歌曲 star*/

.searchReault-list {
  position: absolute;
  width: 100%;
  z-index: 10;
}

.song-name {
  color: #35b558;
  font-size: 18px;
}

.song-singer {
  color: #888;
  font-size: 12px;
}

/*搜索出现的歌曲 end*/

.banner .slide-image {
  width: 100%;
  height: 100%;
}

/*首页  排行榜  tab切换 star*/

.swiper-tab {
  text-align: center;
  height: 40px;
  line-height: 40px;
  border-bottom: solid 1px #e6e6e6;
}

.swiper-tab-list {
  font-size: 14px;
  color: #777;
  display: inline-block;
  width: 50%;
}

/*选中状态字体颜色*/

.on {
  color: #35b558;
}

.swiper-box {
  display: block;
  width: 100%;
}

.swiper-box .container {
  overflow-y: auto;
}

/*首页  排行榜  tab切换    ---end--*/

/*推荐   star*/

.header {
  position: relative;
  background-color: #fff;
  padding: 6px 0;
}


/*推荐标题内容*/

.header text {
  font-size: 20px;
  font-weight: 400;
  padding: 20px 0;
  padding-left: 16px;
}

/*推荐标题内容前的竖线*/

.header text::before {
  content: '';
  display: inline-block;
  width: 2px;
  height: 20px;
  vertical-align: middle;
  background-color: #35b558;
  position: absolute;
  left: 6px;
  top: 12px;
}

.lists-content {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.lists-content navigator {
  width: calc((100% - 8px) / 3);
  margin-bottom: 12px;
}

.lists-content .image {
  width: 100%;
  height: 130px;
  margin: 0 auto;
}

.lists-content navigator view:last-child {
  font-size: 14px;
  width: 100%;
  height: 44px;
  margin-top: 5px;
  display: block;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

/*推荐   end*/

.red {
  color: red;
}

/*主页底部播放器    star*/

.audio {
  height: 50px;
  width: 100%;
  display: flex;
  justify-content: center;
}

/*封面*/

.audio-cover {
  width: 50px;
  height: 50px;
  margin: 0 5px;
  border-radius: 50%;
  position: relative;
  top: -5px;
  box-shadow: 0 0 5px #666;
}

.audio .progress {
  width: calc(100% - 45px);
  display: flex;
  justify-content: center;
}

.song-information {
  
  padding-top: 5px;
  width: 80%;
  font-size: 14px;
}

.song-information .author {
  font-size: 12px;
  color: #666;
}

.operations {
  height: 100%;
  line-height: 60px;
}

.audio-btn {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  z-index: 1;
}

/*主页底部播放器    end*/

/*正在播放页面 */

.filter-bg {
  filter: blur(20px);
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  opacity: 0.4;
  z-index: -1;
}

.cover {
  padding: 20px 0;
}

.controls {
  text-align: center;
}

.controls .audio-btn {
  width: 30px;
  height: 30px;
}
