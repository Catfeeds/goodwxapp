page{ background: #f5f5f5; }
.question{ background: #f5f5f5; padding: 0 10px 12px;}
.item{ margin-top: 10px; background: #fff; width: 100%;}
.toptext{ line-height: 28px; position: relative; padding: 10px 40px 10px 10px; color: #030303; font-size: 15px; }
.icon01{ position: absolute; right: 10px; top: 15px; height: 18px; width: 20px; }
.bottext{ border-top: 1px solid #f5f5f5; font-size: 16px; color: #000; line-height: 28px; padding: 10px; display: none;}
.itemopen .toptext{ color: #7A7A7A; }
.itemopen .bottext{ display: block; }
.botbtn{ display: block; margin-top: 12px; width: 100%; line-height: 40px; color: #fff; border-radius: 4px; background: #FF8237; font-size: 16px; text-align: center; }
.icon02{width: 23px; height: 19px; vertical-align: middle; margin-right: 5px; }