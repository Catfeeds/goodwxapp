<!--pages/bind/bind.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/index/loading.gif"></image>
  </view>
  <block wx:else>

    <image class="title" src="/images/more/title.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <image class="logo" src="/images/more/logo.png"></image>
        <image class="wave" src="/images/more/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/more/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
        <form class="login-form">
          <view class="input-group {{name_focus ? 'active' : ''}}">
            <text class="input-label">姓名</text>
            <input type="text" cursor-spacing="30" id="name" maxlength="10" placeholder="请输入你的姓名" bindinput="nameInput" bindfocus="inputFocus" bindblur="inputBlur" />
          </view>
          <view class="input-group {{userid_focus ? 'active' : ''}}">
            <text class="input-label">学号</text>
            <input type="number" cursor-spacing="30" id="userid" maxlength="14" placeholder="请输入你的学号" bindinput="useridInput" bindfocus="inputFocus" bindblur="inputBlur" />
          </view>
          <view class="input-group {{passwd_focus ? 'active' : ''}}">
            <text class="input-label">密码</text>
            <input password="true" cursor-spacing="30" id="passwd" placeholder="请输入密码" bindinput="passwdInput" bindfocus="inputFocus" bindblur="inputBlur" />
          </view>
          <view class="login-help" bindtap="showHelp">
            <text>帮助</text>
            <image class="login-help-img" src="/images/more/help.png"></image>
          </view>
        </form>
        <view class="confirm-btn" bindtap="bind">
          <text>确认绑定</text>
        </view>
      </view>
      <view class="help" id="help" wx:if="{{help_status}}" bindtap="tapHelp">
        <view class="box">
          <view class="box-hd">
            <text class="box-title">帮助</text>
            <image class="box-close" src="/images/more/close.png" bindtap="hideHelp"></image>
          </view>
          <view class="box-bd">
            <view class="help-q">1、帐号和密码是什么？</view>
            <view class="help-a">
              <text>密码：这个加入我大模协或许可以告诉你</text>
              <text>学号：14位数字（如：20150210470410）</text>
              <text>密码：新生开学时在学校官网注册时所设置的密码</text>
            </view>
            <view class="help-q">2、新生注意？</view>
            <view class="help-a">
              <text>2017新生在官网注册成功后方可使用</text>
            </view>
            <view class="help-q">3、忘记密码？</view>
            <view class="help-a">
              <text>请询问导员，帮助查询密码</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>