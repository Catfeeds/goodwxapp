<!--detail.wxml-->
<view class="log-list">
  <view class="describe">
    <view class="desc-title">
      <text class="desc-v">咨询问题:</text>
      <text class="desc-time">{{data.question_time}}</text>
    </view>
    <text class="desc-content">{{data.question}}</text>
  </view>
  <view class="describe">
    <view class="desc-title">
      <text class="desc-v">院长回复:</text>
      <text class="desc-time">{{data.response_time}}</text>
    </view>
    <text class="desc-content">{{data.response}}</text>
  </view>
</view>