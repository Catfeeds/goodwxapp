/* detail.wxss */
.log-list{
    display: flex;
    flex-direction: column;
    align-items: stretch;
}
.describe{
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 45rpx 30rpx;
    display: flex;
    flex-flow: column nowrap;
    color: #545454;
    line-height: 175%;
    background: #fff;
    margin-top: 15rpx;
    border-top: 1px #e5e5e5 solid;
    border-bottom: 1px #e5e5e5 solid;
}
.desc-title{
    display: flex;
    font-size: 13pt;
    line-height: 200%;
    margin-bottom: 15rpx;
}
.desc-v{
    flex: 1;
}
.desc-time{
    font-size: 11pt;
    color: #888;
}
.desc-list{
    display: flex;
    flex-direction: column;
    border-left: 8rpx solid #ddd;
    padding-left: 15rpx;
    color: #777;
    margin-bottom: 15rpx;
    font-size: 10pt;
}
.desc-content{
    padding-bottom: 15rpx;
}