/* pages/core/club/club.wxss */

.container {
  background-color: #f7f7f7;
  padding: 20rpx;
}

.count {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  display: flex;
  background: #f7f7f7;
  background: rgba(255, 255, 255, 0.9);
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.count-title {
  color: #888;
  padding: 20rpx 20rpx 15rpx;
}

.order {
  background-color: #fff;
  margin-bottom: 20rpx;
  border: 1px solid #eee;
  border-radius: 15rpx;
}

.order-title {
  display: flex;
  align-items: center;
  height: 125rpx;
  font-size: 13pt;
  margin-left: 30rpx;
  border-bottom: 1px solid #eee;
}

.order-state-icon {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}

.order-time {
  flex: 1 1 auto;
  white-space: nowrap;
  text-overflow: ellipsis;
  /* overflow: hidden; */
}

.order-state {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 30rpx;
  font-weight: bold;
}

.order-state-0 {
  color: #ffcb63;
}

.order-state-1 {
  color: #73b4ef;
}

.order-state-2 {
  color: #e78ab0;
}

.order-state-3 {
  color: #9f8bea;
}

.order-state-refused {
  color: #999;
}

.list-sign {
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-sign-icon {
  width: 30rpx;
  height: 30rpx;
  padding: 20rpx;
  transition: transform 0.2s;
  transform: rotate(0deg);
}

.list-sign-icon-show {
  transform: rotate(180deg);
}

.order-content {
  padding: 10rpx 30rpx;
}

.order-content-item {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 5rpx;
}

.item-ul {
  display: flex;
  flex: 1;
  flex-flow: column nowrap;
  padding: 10rpx 30rpx 15rpx;
  overflow: hidden;
}

.item-ul-li {
  display: flex;
  border-top: 1px solid #eee;
  padding: 25rpx 5rpx 20rpx;
}

.ul-li-content {
  color: #888;
  flex: 1;
}
