/* pages/cet/cetshow.wxss */
@import "../chengji/chengji.wxss";

.cj-info-ctn {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;
  border-radius: 3px;
  background: #fff;
  margin-top: 50rpx;
  width: 92%;
  margin-left: 4%;
}

.grade-comment {
  color: #000;
  font-size: 14pt;
  padding: 25rpx;
  font-weight: 500;
}

.cj-info-box {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;
  padding: 5rpx 30rpx 15rpx;
}

.cj-info {
  background: #fff;
  font-size: 11pt;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eee;
  padding: 25rpx 10rpx 20rpx 5rpx;
}

.cj-info-socre {
  padding-left: 100rpx;
}

.msg {
  text-align: center;
  font-weight: bold;
  font-size: 18pt;
  padding-top: 100rpx;
  color: #e65454;
}
