/* pages/core/computer/computer.wxss */
.article {
  background: white;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  padding: 10rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.article .image {
  width: 100%;
  height: 380rpx;
}

.article .title {
  font-weight: 600;
  word-break: break-all;
  font-size: 18px;
  color: black;
  margin: 20rpx 10rpx;
}

.article .author {
  margin: 15rpx 10rpx;
  color: #f7982a;
  font-size: 13px;
}

.article .content {
  line-height: 40rpx;
  margin: 15rpx 10rpx;
  font-size: 15px;
  color: black;
}