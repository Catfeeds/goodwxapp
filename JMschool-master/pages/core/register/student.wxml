<!--pages/core/student/student.wxml-->
<view class="container {{main.mainDisplay?'home':'active'}}">

  <!--头部-->
  <view class="header">
    <image class="xs-logo" src="/images/core/register.png"></image>
    <view class="header-more">
      <view class="login-help" bindtap="showHelp">
        <text>帮助</text>
        <image class="login-help-img" src="/images/more/help.png"></image>
      </view>
    </view>

    <!--搜索框-->

    <view class="search-input">
      <view class="search-icon-box">
        <image class="search-icon" src="/images/core/xs/search-sign.png"></image>
      </view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{grade}}">
        <view class="picker">
          {{grade[index]}}
        </view>
      </picker>
      <form class="input-form" bindreset="bindClearSearchTap" bindsubmit="bindConfirmSearchTap">
        <input class="input-text" value="{{header.defaultValue}}" focus="{{!header.defaultValue}}" bindinput="bindSearchInput" type="text" name="search" placeholder="姓名" bindconfirm="bindConfirmSearchTap" />
        <button class="input-clear-button" formType="reset" hover-class="none" wx:if="{{header.inputValue}}"> 
          <image class="clear-icon" src="/images/core/xs/clear.png"></image>
        </button>
        <button class="input-confirm-button" formType="submit" hover-class="none">
          <text>搜索</text>
        </button>
      </form>
    </view>
  </view>

  <!--页面主体部分-->
  <view class="main" wx:if="{{main.total}}">

    <!--主体部分标题-->
    <view class="main-title">
      <text class="title-text">学生名单 （{{main.total}}人）</text>
    </view>

    <!--主体部分内容列表-->
    <view class="main-list" wx:for="{{testData}}" wx:key="item">

      <!--列表的一个元素的模板结构-->
      <view class="list-item">

        <!--信息直接显示部分-->
        <view class="item" data-index="{{index}}" bindtap="bindOpenList">
          <view class="item-content">
            <image class="item-content-image" src="{{item[12]}}"></image>
            <view class="item-content-state">
              <view class="content-state-name">
                <text class="state-name-active">{{item[10]}}</text>{{item[11]}}
              </view>
              <view class="content-state-stuId">学号：
                <text class="state-name-active">{{item[0]}}</text>
              </view>
            </view>
          </view>

          <!--信息直接显示部分的下拉标识-->
          <view class="list-sign">
            <image class="list-sign-icon {{!item[13] ? 'list-sign-icon-show' : ''}}" src="/images/core/common/up.png"></image>
          </view>
        </view>

        <!--信息隐藏的下拉列表-->
        <view class="item-ul" hidden="{{!item[13]}}">
          <view class="item-ul-li">
            <text class="ul-li-label">在班编号</text>
            <text class="ul-li-content">{{item[1]}}</text>
          </view>
          <view class="item-ul-li">
            <text class="ul-li-label">班级名称</text>
            <text class="ul-li-content">{{item[5]}}</text>
          </view>
          <view class="item-ul-li">
            <text class="ul-li-label">学籍状态</text>
            <text class="ul-li-content">{{item[9]}}</text>
          </view>
        </view>
      </view>
    </view>

    <!--提示消息-->
    <view class="search-message">
      <text class="message-title">{{main.message}}</text>
    </view>
  </view>
  <view class="help" id="help" wx:if="{{header.help_status}}" bindtap="tapHelp">
    <view class="box">
      <view class="box-hd">
        <text class="box-title">帮助</text>
        <image class="box-close" src="/images/more/close.png" bindtap="hideHelp"></image>
      </view>
      <view class="box-bd">
        <view class="help-q">1、选择年级</view>
        <view class="help-a">
          <text>如:2015级,选择2015</text>
        </view>
        <view class="help-q">2、输入姓名</view>
        <view class="help-a">
          <text>输入你的姓名,至少两个字符,如:张三</text>
        </view>
      </view>
    </view>
  </view>

  <!--提示消息-->
  <view class="search-message" hidden="{{messageObj.messageDisplay}}">
    <text class="message-title">{{messageObj.message}}</text>
  </view>
</view>