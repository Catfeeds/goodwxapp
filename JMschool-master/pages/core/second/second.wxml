<!--pages/core/second/second.wxml-->
<view class="container">
  <view class="ks-header">
    <view class="ks-text">
      <text class="ks-header-title">补考安排</text>
      <text class="ks-header-info">学号：{{user.student_no}}</text>
      <text class="ks-header-info">姓名：{{user.student_name}}</text>
    </view>
    <image class="ks-bg" src="/images/core/kaoshi.png"></image>
  </view>
  <view wx:if="{{remind}}" class="remind-box">
    <image class="remind-img" src="/images/index/nothing.png"></image>
    <text class="remind-text">{{remind}}</text>
  </view>
  <block wx:else>
    <view class="ks-class-ctn">
      <block wx:for="{{list}}" wx:key="index">
        <view class="ks-class-item {{!item[9] ? '': 'ks-item-show'}}">
          <view class="ks-hd" data-id="{{index}}" bindtap="slideDetail">
            <view class="ks-hd-left">
              <view class="ks-hd-name">
                {{item[2]}}
              </view>
              <view class="ks-hd-other" wx:if="{{item[6]}}">
                考试地点:{{item[6]}}
              </view>
            </view>
            <image class="ks-item-icon" src="/images/core/common/down.png"></image>
          </view>
          <view class="ks-detail">
            <view class="ks-detail-item">
              <text class="ks-detail-label">课程要求</text>
              <text class="ks-detail-content">{{item[3]}}</text>
            </view>
            <view class="ks-detail-item">
              <text class="ks-detail-label">考试周次</text>
              <text class="ks-detail-content">第{{item[4]}}周</text>
            </view>
            <view class="ks-detail-item">
              <text class="ks-detail-label">考试时间</text>
              <text class="ks-detail-content">{{item[5]}}</text>
            </view>
            <view class="ks-detail-item" wx:if="{{item[7]}}">
              <text class="ks-detail-label">注意事项</text>
              <text class="ks-detail-content">{{item[7]}}</text>
            </view>
            <view class="ks-detail-item" wx:if="{{item[8]}}">
              <text class="ks-detail-label">备注</text>
              <text class="ks-detail-content">{{item[8]}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
  </block>
</view>