/*新闻列表*/

.news {
  margin-top: 50px;
}

.news-item {
  padding: 0.5rem;
  height: auto;
  display: flex;
  justify-content: center;
  align-items: center;
}

.news-item-info {
  height: 100%;
  padding-right: 10px;
  flex: 5;
}

.title {
  font-size: 15px;
  font-weight: 500;
}

.channelName, .source, .time {
  font-size: 12px;
  color: #999;
  padding-right: 0.5rem;
}

.news-item-image {
  flex: 2;
  height: 80px;
}

.news-item-image3 {
  display: block;
  width: 100%;
}

.tab-selector {
  margin: 0 10px;
}

.selector-header {
  position: relative;
  left: 0;
  top: 0;
  height: 50px;
  text-align: center;
  line-height: 50px;
}

.tab-item {
  display: inline-block;
  text-align: center;
  width: 21%;
  height: 25px;
  border: solid 1px #ccc;
  border-radius: 4px;
  margin: 5px 1% 5px 2%;
  font-size: 14px;
  line-height: 25px;
}

.attration-title, .newest-title {
  padding: 5px 1%;
  color: #ccc;
}

.close-selector {
  position: absolute;
  right: 0;
  top: 0;
  height: 50px;
  width: 30px;
  line-height: 50px;
  font-size: 20px;
}

.attration, .newest {
  margin-bottom: 10px;
}

.selected {
  color: #48c23d;
  border-color: #48c23d;
}

.ball-beat {
  position: fixed;
  left: 0;
  top: 0;
  margin-top: 50px;
  box-sizing: border-box;
  padding-top: 15px;
  width: 100%;
  text-align: center;
}

@-webkit-keyframes ball-beat {
  50% {
    opacity: 0.2;
    -webkit-transform: scale(0.75);
    transform: scale(0.75);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

@keyframes ball-beat {
  50% {
    opacity: 0.2;
    -webkit-transform: scale(0.75);
    transform: scale(0.75);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale(1);
    transform: scale(1);
  }
}

.ball-beat > view {
  background-color: #48c23d;
  width: 10px;
  height: 10px;
  border-radius: 100%;
  margin: 2px;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
  display: inline-block;
  -webkit-animation: ball-beat 0.7s 0s infinite linear;
  animation: ball-beat 0.7s 0s infinite linear;
}

.ball-beat > view:nth-child(2n-1) {
  -webkit-animation-delay: 0.35s !important;
  animation-delay: 0.35s !important;
}

