<!--pages/news/news.wxml-->
<view class="container">

  <!--新闻分类-->
  <scroll-view class="filter" scroll-x="true">
    <view class="filter-tab">
      <block wx:for="{{list}}" wx:key="id">
        <image class="filter-item {{active.type === item.type ? 'active' : ''}}" data-id="{{item.id}}" id="{{item.type}}" bindtap="changeFilter" src="/images/news/{{item.type}}@colour.png"></image>
      </block>
    </view>
  </scroll-view>

  <!--新闻列表-->
  <view class="content">
    <view class="loader">
      <image src="/images/index/loading.gif" wx-if="{{loading}}"></image>
    </view>
    <view class="body-view">

      <!--头条-->
      <block wx:if="{{active.id==0}}">
        <block wx:for="{{active.data}}" wx:key="item.articleid">
          <view>
            <navigator url="./detail/school_detail/school_detail?detail={{item[0]}}&title={{item[2]}}&time={{item[3]}}">
              <view>
                <view style="margin-top:10px;">
                  <image class="one-pic" src="http://www.ecjtuit.com.cn{{item[1]}}"></image>
                  <text class="title-one-pic right">{{item[2]}} </text>
                </view>
              </view>
              <view>
                <text class="subtitle" style=""> 浏览:{{item[4]}}</text>
                <text class="subtitle" style="float:right;margin:3px 5px;">发布时间:{{item[3]}}</text>
              </view>
              <view class="line"></view>
            </navigator>
          </view>
        </block>
      </block>

      <!--教务公告-->
      <block wx:if="{{active.id==1}}">
        <block wx:for="{{active.data}}" wx:key="item.articleid">
          <navigator url="./detail/jw_detail/jw_detail?detail={{item[0]}}&title={{item[1]}}&time={{item[2]}}">
            <view class="list-item jw">
              <view class="list-item-left">
                <text class="list-item-title">{{item[1]}}</text>
                <text class="list-item-time">{{item[2]}}</text>
              </view>
              <image class="list-item-icon" src="/images/news/jw.png"></image>
            </view>
          </navigator>
        </block>
      </block>
    </view>
  </view>

  <!--提醒消息-->
  <text class="content-ending">{{active.remind}}</text>

  <!--悬浮消息-->
  <view class="fix_tip {{disabledRemind?'active':''}}">
    <text>无权限查阅</text>
  </view>
</view>