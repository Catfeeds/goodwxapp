
<!--detail.wxml (common)-->
<import src="../../../../wxParse/wxParse.wxml" />
<view class="container">
  <view wx:if="{{remind}}" class="remind-box">
    <image wx:if="{{remind == '加载中'}}" class="remind-img" src="/images/index/loading.gif"></image>
    <block wx:else>
      <image class="remind-img" src="/images/index/nothing.png"></image>
      <text class="remind-text">{{remind}}</text>
    </block>
  </view>
  <block wx:else>
    <view class="title">
      <text>{{title}}</text>
    </view>
    <view class="info">
      <text wx:if="{{time}}">发布时间：{{time}}</text>
      <text>{{"--教务处"}}</text>
    </view>
    <view class="content">
      <view class="wxParse">
        <template is="wxParse" data="{{wxParseData:article.nodes}}" />
      </view>
    </view>
    <swiper class="files_list" wx:if="{{files_len}}" indicator-dots="{{files_len !== 1}}" autoplay="{{!file_loading}}">
      <swiper-item wx:for="{{files_list}}" wx:key="fjid">
        <view class="file">
          <image src="/images/news/file.png" class="file-img"></image>
          <view class="fileNameSource">
            <text class="file-name">{{item.fjname}}</text>
            <text class="file-source">{{"掌上交理"}}</text>
          </view>

          <!--<view class="file-remind">
            <image wx:if="{{file_loading}}" src="/images/index/loading.gif"></image>
            <text wx:else data-preview="{{item.preview}}" data-url="{{item.fujian}}" bindtap="getFj">{{item.preview ? '点击预览' : '无法预览'}}</text>
          </view>-->
          <view class="file-remind">
            <image wx:if="{{file_loading}}" src="/images/index/loading.gif"></image>
            <text data-url="{{item.fujian}}" bindtap="getFj">{{'点击预览'}}</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </block>
</view>