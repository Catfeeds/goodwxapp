<view class="login_box" wx:if="{{login}}">
    <view class="login">
        <image bindtap="bindViewTap" class="userinfo-avatar" src="/images/icon_my_empty.png" background-size="cover"></image>
           <view bindtap="login">
               登录 / 注册
           </view>
         <!--   <view bindtap="register">

            </view>-->
    </view>
    <view class="login_img">
         <image src="../../images/login.png" class="empty"></image>
    </view>
</view>
<view class="login_box" wx:else>
    <view class="login_info">
        <image class="userinfo-avatar" background-size="cover"  src="/images/info.jpg"></image>
        <text>最初的守望</text>
        <text>133****5555</text>
    </view>
    <view class="login_content">
        <view class="set_item my_order" bindtap="clickOrder">
            <image class="icon_img" background-size="cover"  src="/images/icon_order.png"></image>
            我的订单
            <image class="icon_right" background-size="cover"  src="/images/icon_right.png"></image>
        </view>
        <view class="set_item"  bindtap="clickSet">
            <image class="icon_set" background-size="cover"  src="/images/icon_set.png"></image>
            设置
            <image class="icon_right" background-size="cover"  src="/images/icon_right.png"></image>
        </view>
    </view>
</view>
