page{
  background-color: #ececec;
  color:#4A494A;
  font-size:36rpx;
}
.login_box{
    width:100%;
    height:100%;
}
.userinfo-avatar {
  width:128rpx;
  height:128rpx;
  border-radius:50%;
  vertical-align:midden;
  display:inline-block;
  overflow:hidden;
  margin-top:50rpx;
  margin-right:20rpx;
}
.login_info{
    width:100%;
    height:428rpx;
    background:#fff;
    text-align:center;
}
.login_info text{
    display:block;
    margin:16rpx 0;
}
.login_content{
    background:#fff;
    height:176rpx;
    box-shadow:0 2px 4px 0 #e6e6e6;
}
.product_nopay{
    width:100%;
    margin-top:12rpx;
    padding:20rpx 0 20rpx 28rpx;
    background:#fff;
}
.product_title{
    height:88rpx;
    line-height:88rpx;
}
.product_title view{
    display:inline-block;
}
.product_timer{
    color:#999999;
    font-size:26rpx;
}
.product_state{
    color:#CE4141;
    font-size:32rpx;
    float:right;
    margin-right:60rpx;
}
.product_info{
     width:100%;
     height:100%;
     background:#fff;
}
.product_item image{
    margin-right:24rpx;
    width:238rpx;
    height:150rpx;
}
.product_item_info{
    width:424rpx;
}
.product_item{
    display:flex;
    margin-bottom:20rpx;
    background:#f8f8f8;
}
.product_name{
    color:#4A494A;
    font-size:30rpx;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
.product_teachername{
    color:#9B9A9B;
    font-size:28rpx;
    margin-top:10rpx;
}
.pay_box{
    margin-top:12rpx;
    background:#fff;
}
.pay_total{
    height:82rpx;
    line-height:82rpx;
    padding:0 32rpx;
    text-align:right;
}
.pay_total span:last-child{
    color:#CE4141;
}
.wx_pay{
    height:82rpx;
    line-height:82rpx;
    padding:0 32rpx;
    text-align:left;
}
.wx_pay .radio{
    float:right;
}
.pay_body{
     height:128rpx;
     position:fixed;
     bottom:0;
     width:100%;
}
.pay_body button{
    width:50%;
    display:inline-block;
    border-radius:0;
    overflow:visible;
    height:100%;
    line-height:128rpx;
}
.pay_body button:after{
    border:0;
}
.price{
    color:#CE4141;
}
.btn_pay{
    border-left:1px solid #CE4141;
    background-color:#CE4141;
    color:#fff;
}


