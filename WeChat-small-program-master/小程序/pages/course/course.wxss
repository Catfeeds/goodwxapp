.tab_box{
    min-height:356rpx;
    background:#fff;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  height:88rpx;
  line-height:88rpx;
  margin-top:12rpx;
  border-bottom:1px solid #d8d8d8;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 88rpx;
  margin-left:48rpx;
}
.navbar .item.active{
  color: #CE4141;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #CE4141;
}

.class_info{
    padding:20rpx;
    line-height:1.5;
    background:#fff;
}
.lessons_box{
    width:100%;
    height:100%;
    background:#fff;
}
.lessons_li li{
    padding:5rpx 20rpx;
    display:block;
    height:80rpx;
    line-height:80rpx;
    border-bottom:2rpx solid #F0F0F0;
}
.course_null{
    width:100%;
    height:450rpx;
    background:#fff;
    text-align:center;
}
.course-empty{
    width:320rpx;
    height:356rpx;
    margin-top:82rpx;
}
.bay{
    position:fixed;
    bottom:0;
    display:block;
    height:128rpx;
    width:100%;
    text-align:center;
    border-top:1px solid #ccc;
}
.bay_body{
     height:128rpx;
     position:fixed;
     bottom:0;
     width:100%;
}
.bay_body button{
    width:50%;
    display:inline-block;
    border-radius:0;
    overflow:visible;
    height:100%;
    line-height:128rpx;
}
.bay_body button:after{
    border:0;
}
.price{
    color:#CE4141;
}
.btn_bay{
    border-left:1px solid #CE4141;
    background-color:#CE4141;
    color:#fff;
}
