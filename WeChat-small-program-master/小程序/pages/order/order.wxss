page{
    background:#ececec;
    height: 100%;
    color:#4A494A;
}
.navbar{
    height:88rpx;
    line-height:88rpx;
    background: #fff;
    /**
      flex: none;
      display: flex;
      **/

}
.navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 88rpx;
    margin-left:48rpx;
}
.navbar .item.active{
    color: #CE4141;
}
.navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: -20rpx;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #CE4141;
}
.product{
    width:100%;
    height:100%;
    padding-left:28rpx;
    background:#fff;
    margin-top:12rpx;
}
.product_nopay{
    width:100%;
    padding:20rpx 0 20rpx 28rpx;
    background:#fff;
}
.product_title{
    height:88rpx;
    line-height:88rpx;
}
.product_title view{
    display:inline-block;
}
.product_timer{
    color:#999999;
    font-size:26rpx;
}
.product_state{
    color:#CE4141;
    font-size:32rpx;
    float:right;
    margin-right:60rpx;
}
.product_info{
     width:100%;
     height:100%;
     background:#fff;
}
.product_item image{
    margin-right:24rpx;
    width:238rpx;
    height:150rpx;
}
.product_item_info{
    width:424rpx;
}
.product_item{
    display:flex;
    margin-bottom:20rpx;
    background:#f8f8f8;
}
.product_name{
    color:#4A494A;
    font-size:30rpx;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
.product_teachername{
    color:#9B9A9B;
    font-size:28rpx;
    margin-top:10rpx;
}
.product_price{
    border-bottom:1px solid #EFEFEF;
    height:86rpx;
    line-height:86rpx;
    margin-left:-28rpx;
    text-align:right;
    margin-right:50rpx;
}
.product_price view{
    display:inline-block;
}
.product_length{
    color:#9B9A9B;
    font-size:26rpx;
    margin-left:256rpx;
}
.product_Total{
    font-size:40rpx;
}
.product_detail_box{
    padding:12rpx 0;
    height:88rpx;
    margin-right:40rpx;
    text-align:right;
}
.product_detail{
    width:112rpx;
    height:48rpx;
    display:inline-block;
    padding:6rpx 24rpx;
    border:1px solid #D8D8D8;
    border-radius:40rpx;
    font-size:26rpx;
    text-align:center;
    line-height:48rpx;
    margin:12rpx;
}
.product_detail_active{
    border-color:#CE4141;
    color:#CE4141;
}
.detail_box{
    height:106rpx;
    background:#fff;
    padding:26rpx 18rpx 28rpx 32rpx;
    margin:12rpx 0;
}
.detail_word{
    display:inline-block;
    text-align:left;
    font-size:36rpx;
}
.detail_describe{
    color:#9B9A9B;
    font-size:28rpx;
    margin:20rpx 0;
}
.product_title_pay{
    height:88rpx;
    line-height:88rpx;
    background:#fff;
    font-size:32rpx;
    border-bottom:1px solid #efefef;
    padding-left:28rpx;
}
.detail_btn{
    display:inline-block;
    text-align:center;
    float:right;
    width:116rpx;
    height:40rpx;
    padding:8rpx 30rpx;
    border:1px solid #D8D8D8;
    border-radius:40rpx;
    font-size:26rpx;
    line-height:40rpx;
}
.detail_btn_active{
    border-color:#CE4141;
    color:#CE4141;
}
.pay_box{
    margin-top:12rpx;
    background:#fff;
}
.pay_method{
    height:82rpx;
    line-height:82rpx;
    border-bottom:1px solid #efefef;
    padding:0 32rpx;
}
.pay_method span:last-child{
   float:right;
}
.pay_total{
    height:82rpx;
    line-height:82rpx;
    padding:0 32rpx;
    text-align:right;
}
.pay_total span:last-child{
    color:#CE4141;
}
.orderInfo_box{
    margin-top:12rpx;
    background:#fff;
    color:#9b9a9b;
    font-size:28rpx;
}
.orderInfo_box view{
    height:88rpx;
    line-height:88rpx;
    padding-left:32rpx;
    border:1px solid #efefef;
}
