<view class="set_box">
    <view class="remind">
        课程开课提醒
        <view class="remind_switch">
            <switch checked bindchange="switchChange"/>
        </view>
    </view>
    <view class="set">
        提醒时间
        <view class="set_select">
            <picker mode = multiSelector class="country" bindchange="bindPickerChange"  value="{{index}}" range="{{timers}}">
                课程开始前 {{minute}}
            </picker>
            <image class="icon_right" background-size="cover"  src="/images/icon_right.png"></image>
        </view>
    </view>
</view>