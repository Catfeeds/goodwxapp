page{
  background-color: #ececec;
}
.telephone_box{
    width:100%;
    height:542rpx;
    margin-top:18rpx;
    background:#fff;
   /** padding:0 40rpx;**/
}
.telephone_title{
    padding:64rpx 0;
    text-align:center;
}
.telephone_text{
    width:670rpx;
    height:100rpx;
    line-height:100rpx;
    border:1px solid #D8D8D8;
    display:flex;
    font-size:32rpx;
    margin-left:40rpx;
}
.country{
    width:134rpx;
    height:100%;
    text-align:center;
    border-right:1px solid #D8D8D8;
}
.phone{
    padding-left:28rpx;
    width:536rpx;
}
.telephone_text input{
     height:100rpx;
}
.telephone_code{
    margin-top:30rpx;
}
.code{
     width:222rpx;
     color:#19AC15;
     text-align:center;
     border-left:1px solid #D8D8D8;
}
.code_disable{
    width:222rpx;
    color:#ccc;
    text-align:center;
    border-left:1px solid #D8D8D8;
}
.info{
    color:#9B9A9B;
    font-size:28rpx;
    padding:68rpx;
}
.bind_btn{
    width:670rpx;
    height:88rpx;
    margin:0 40rpx;
    background:#19AD16;
    color:#fff;
    font-size:36rpx;
    text-align:center;
    line-height:88rpx;
}
.bind_btn_disable{
    width:670rpx;
    height:88rpx;
    margin:0 40rpx;
    background:#d8d8d8;
    color:#fff;
    font-size:36rpx;
    text-align:center;
    line-height:88rpx;
}
.section{
      font-size:28rpx;
      margin-left: 50rpx;
      margin-top: 30rpx;
    }
