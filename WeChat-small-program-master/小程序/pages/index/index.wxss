/**index.wxss**/
.container_index{
  background:#ecedee;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.swiprer_box{
   display:block;
   height:350rpx;
}
.slide-image{
    width: 100%;
    height:350rpx;
}
.menu_item{
    padding:10px;
}
.course_title{
    width:100%;
    height:100rpx;
    font-size:32rpx;
    display:block;
    background:#fff;
}
.course_title .active_li{
    border-bottom:1px solid red;
}
.scroll-header li{
  margin:0 10px;
  display:inline-block;
  height:70rpx;
  padding-top:30rpx;
}
.topnav{
    position: fixed;
    top: 0;
    left: 0;
    padding:10px;
    background:#fff;
}
.course_null{
    width:100%;
    height:362rpx;
    text-align:center;
}
.course-empty{
    width:320rpx;
    height:356rpx;
    margin-top:152rpx;
}
.courseList{
    height: 100%;
    width:100%;
    /**
    display:flex;
    flex-direction:row;
    flex-wrap:wrap;
     justify-content:space-between;
     **/
    height:70vh;
    padding-left:13rpx;
}
.course_item text{
    display:inline-block;
    text-align:left;
}
.course_item{
    margin-top:10rpx;
    width:48vw;
    background:#fff;
    height:310rpx;
    float:left;
    margin-right:8rpx;
}
.course_item text{
    display:block;
    margin-left:12rpx;
}
.course_img{
    width:100%;
    height:204rpx;
}
.course_name{
    width:300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size:28rpx;
}
.course_price{
    font-size:16px;
    color:#CE4141;
    font-size:32rpx;

}

.scroll-header{
    white-space: nowrap;
}
.my{
    position: fixed;
    bottom:40rpx;
    right:20rpx;
    border-radius: 50%;
    overflow: hidden;
    z-index: 500;
}
.my .icon{
    background-color:#fff;
    width: 100rpx;
    height: 100rpx;
    font-size: 12px;
    color: #CE4141;
    text-align: center;
    border-radius: 50%;
    -webkit-background-size: 50px auto;
    opacity:.8;
    box-shadow:0px 0px 3px 1px #c7c7c7;
    position:relative
}
.icon view{
    display:inline-block;
    font-size:24rpx;
    position:absolute;
    bottom:0;
    left:0;
    top:55rpx;
    right:0;
}
.my .icon_img{
    width:35rpx;
    height:35rpx;
    position:absolute;
    top:13rpx;
    left:33rpx;
}
.my .icon:before{
    background-position: -342rpx 0;
    width:30rpx;
    height:30rpx;
    left:calc(50% - 15rpx);
    top:20rpx;
}