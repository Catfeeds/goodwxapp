page{
  background:#ececec;
  height: 100%;
  color:#4A494A;
  font-size:32rpx;
}
.detail_box{
    height:106rpx;
    background:#fff;
    padding:26rpx 18rpx 28rpx 32rpx;
    margin:12rpx 0;
}
.detail_word{
    display:inline-block;
    text-align:left;
    font-size:36rpx;
}
.detail_btn{
    display:inline-block;
    text-align:center;
    float:right;
    width:116rpx;
    height:40rpx;
    padding:8rpx 30rpx;
    border:1px solid #D8D8D8;
    border-radius:40rpx;
    font-size:26rpx;
    line-height:40rpx;
}
.detail_btn_active{
    border-color:#CE4141;
    color:#CE4141;
}
.detail_describe{
    color:#9B9A9B;
    font-size:28rpx;
    margin:20rpx 0;
}
.product{
    width:100%;
    padding:20rpx 0 20rpx 28rpx;
    background:#fff;
}
.product_title{
    height:88rpx;
    line-height:88rpx;
    background:#fff;
    font-size:32rpx;
    border-bottom:1px solid #efefef;
    padding-left:28rpx;
}
.product_timer{
    color:#999999;
    font-size:26rpx;
}
.product_state{
    color:#CE4141;
    font-size:32rpx;
    float:right;
    margin-right:60rpx;
}
.product_info{
     width:100%;
     height:100%;
     background:#fff;
}
.product_item image{
    margin-right:24rpx;
    width:238rpx;
    height:150rpx;
}
.product_item_info{
    width:424rpx;
}
.product_item{
    display:flex;
    margin-bottom:20rpx;
    background:#f8f8f8;
}
.product_name{
    color:#4A494A;
    font-size:30rpx;
    display:-webkit-box;
    -webkit-line-clamp:2;
    -webkit-box-orient:vertical;
    overflow:hidden;
}
.product_teachername{
    color:#9B9A9B;
    font-size:28rpx;
    margin-top:10rpx;
}
.pay_box{
    margin-top:12rpx;
    background:#fff;
}
.pay_method{
    height:82rpx;
    line-height:82rpx;
    border-bottom:1px solid #efefef;
    padding:0 32rpx;
}
.pay_method span:last-child{
   float:right;
}
.pay_total{
    height:82rpx;
    line-height:82rpx;
    padding:0 32rpx;
    text-align:right;
}
.pay_total span:last-child{
    color:#CE4141;
}
.orderInfo_box{
    margin-top:12rpx;
    background:#fff;
    color:#9b9a9b;
    font-size:28rpx;
}
.orderInfo_box view{
    height:88rpx;
    line-height:88rpx;
    padding-left:32rpx;
    border:1px solid #efefef;
}
