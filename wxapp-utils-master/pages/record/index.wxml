<view class="page__hd">录音功能</view>

<view class="qui-output">
  <text>
    录音状态: {{status}}\n
    录音时长: {{duration}}s\n
    临时文件: {{tempFilePath}}\n
    保存文件: {{savedFilePath}}
  </text>
</view>

<view class="qui-btn-area">
  <button type="primary" class="qui-btn" bindtouchstart="onRecord" bindtouchend="onStop">Record</button>
  <button type="default" class="qui-btn" bindtap="onPlay">Play</button>
</view>
