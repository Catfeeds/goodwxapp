@import './components/noticeDialog/index.wxss';
page {
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
page .page-loading {
  height: 100%;
}
page .page-loading .loading-container {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  padding-top: 40%;
  position: relative;
}
page .page-loading .loading-container .loading-background {
  width: 80%;
  height: 500rpx;
  margin: 0 auto;
  text-align: center;
  position: relative;
}
page .page-loading .loading-container .loading-background .bg-shadow {
  position: absolute;
  opacity: 0;
  transform: scale(0.25);
}
page .page-loading .loading-container .loading-background .bg-shadow.darker {
  width: 296rpx;
  height: 374rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a65b315756d5.png') no-repeat center center;
  background-size: cover;
  right: -40rpx;
  bottom: -40rpx;
}
page .page-loading .loading-container .loading-background .bg-shadow.dark {
  width: 458rpx;
  height: 410rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a65b31515d36.png') no-repeat center center;
  background-size: cover;
  left: 10rpx;
  bottom: -20rpx;
}
page .page-loading .loading-container .loading-background .bg-shadow.light {
  width: 510rpx;
  height: 456rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a65b315446ce.png') no-repeat center center;
  background-size: cover;
  left: 120rpx;
  top: -60rpx;
}
page .page-loading .loading-container .loading-images {
  position: absolute;
  width: 80%;
  text-align: center;
  left: 10%;
  top: 25%;
}
page .page-loading .loading-container .loading-images .image-text {
  width: 262rpx;
  height: 298rpx;
  opacity: 0;
  transform: scale(0.25);
}
page .page-loading .loading-container .loading-images .image-cloud {
  position: absolute;
  width: 142rpx;
  height: 82rpx;
  top: 100rpx;
  right: 10rpx;
  opacity: 0;
  z-index: 9;
}
page .page-loading .loading-container .loading-images .image-cloud.small {
  width: 72rpx;
  height: 42rpx;
  top: 180rpx;
  right: 420rpx;
}
page .page-loading .auth-container {
  height: 100%;
}
page .page-loading .auth-container .remind-info {
  font-size: 42rpx;
  text-align: center;
  padding-top: 260rpx;
}
page .page-loading .auth-container button {
  width: 90%;
  margin-top: 80rpx;
  background-color: #44b549;
  color: #fff;
  font-size: 36rpx;
}
page .page-loading .auth-container .bottom-text {
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 40rpx;
}
page .page-loading .auth-container .bottom-text text {
  color: #6d6d6e;
  font-size: 26rpx;
}
