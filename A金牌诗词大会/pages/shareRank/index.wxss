@import '../templates/rankItem/index.wxss';
@import '../templates/shareBtn/index.wxss';
@keyframes fade-in-animation {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fade-out-animation {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .share-rank {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
}
page .share-rank .top-banner {
  width: 100%;
  height: 172rpx;
  background: url('http://img.gsxservice.com/51384503_f6eck4v4.jpeg') repeat-y center center;
  background-size: cover;
  padding-top: 80rpx;
  box-sizing: border-box;
}
page .share-rank .top-banner .group-name {
  font-size: 32rpx;
  color: #31D486;
  text-align: center;
}
page .share-rank .rank-list {
  padding-top: 20rpx;
  height: 72%;
}
page .share-rank button {
  font-size: 32rpx;
  color: #FFFFFF;
  width: 540rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  background-image: radial-gradient(50% 32%, #ff9002 49%, #ff5a21 100%);
  background: #FF9100;
  margin-top: 20rpx;
}
page .share-rank button image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 6rpx;
}
page .share-rank button:after {
  display: none;
}
