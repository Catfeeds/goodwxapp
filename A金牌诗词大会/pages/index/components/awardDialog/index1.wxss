@import '../../../../css/variable/dialog.wxss';
.award-dialog .dialog-box .dialog-mask {
  opacity: 0.4;
}
.award-dialog .dialog-box .dialog-wrapper {
  transform: scale(0.25);
  opacity: 0;
  top: 5%;
  height: 970rpx;
  border-radius: 20rpx;
}
.award-dialog .dialog-box .dialog-wrapper .content {
  padding: 0;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list {
  width: 80%;
  margin: 0 auto;
  position: relative;
  right: 2%;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item {
  display: inline-block;
  width: 30%;
  height: 224rpx;
  position: relative;
  margin-right: 5%;
  margin-top: 10rpx;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item:nth-child(3n) {
  margin: 0;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money {
  width: 176rpx;
  height: 186rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a6a852990b2c.png') no-repeat center center;
  background-size: cover;
  box-sizing: border-box;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money image {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money .set-opacity {
  opacity: 0.6;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money .text-money {
  font-size: 28rpx;
  color: #31D486;
  position: absolute;
  left: 60rpx;
  bottom: 50rpx;
}
@keyframes money-animation {
  0% {
    top: 0rpx;
  }
  25% {
    top: 8rpx;
  }
  50% {
    top: 16rpx;
  }
  75% {
    top: 8rpx;
  }
  100% {
    top: 0rpx;
  }
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money .active {
  animation: money-animation 1s linear infinite;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .money .img-getted {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  left: 120rpx;
  top: 110rpx;
}
.award-dialog .dialog-box .dialog-wrapper .content .award-list .award-item .day-info {
  font-size: 28rpx;
  color: #9D9D9E;
  position: absolute;
  bottom: -10rpx;
  left: 44rpx;
}
.award-dialog .dialog-box .dialog-wrapper .action-btn {
  margin-top: 20rpx;
  z-index: 10001;
  position: relative;
}
.award-dialog .dialog-box .dialog-wrapper .bg-md {
  width: 398rpx;
  height: 408rpx;
  position: absolute;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a6a85296312d.png') no-repeat center center;
  right: 0;
  background-size: cover;
  bottom: 20rpx;
  opacity: .7;
  z-index: 10000;
}
