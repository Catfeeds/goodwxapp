<view class="dialog-component invite-dialog" wx:if="{{showDialog}}">
    <view class="dialog-box">
        <view class="dialog-mask">
        </view>
        <view class="dialog-wrapper" animation="{{inviteDlgAniData}}">
            <view class="close-icon" bindtap="closeDialog">
                <image src="https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a6a8535a79dc.png"></image>
            </view>
            <view class="content">
                <view class="img-libai">
                    <image src="https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a6a852927f22.jpg"></image>
                </view>
                <view class="user-name">李白</view>
                <view class="invite-text">邀请你参加诗词大会</view>
            </view>
            <view class="action-btn" bindtap="joinPractice">
                立即参加
            </view>
        </view>
    </view>
</view>