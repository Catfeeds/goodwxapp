@import "../../css/variable/common.wxss";
@import "../../css/icomoon/style.wxss";
@import "./animation/avatar.wxss";
@import "./animation/vs.wxss";
@import "./animation/combo.wxss";
@import "./animation/tagRound.wxss";
@import "./animation/hat.wxss";
@import "./animation/totalScore.wxss";
@import "./animation/resultBtn.wxss";
page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .pk-wrapper {
  position: relative;
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
}
page .pk-wrapper .vs {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 10;
}
page .pk-wrapper .vs .img {
  width: 100%;
  height: 100%;
}
page .pk-wrapper .vs .icon-vs {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #15AA63;
  font-size: 60rpx;
}
page .pk-wrapper .count-down-over {
  display: none;
}
page .pk-wrapper .pk-find .count-down {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 60%;
}
page .pk-wrapper .pk-find .count-down .find-enemy-tips {
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 32rpx;
  margin-top: 20rpx;
}
page .pk-wrapper .pk-find .my-avatar {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .pk-find .enemy-avatar {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .avatar,
page .pk-wrapper .vs {
  position: absolute;
}
page .pk-wrapper .avatar .hat,
page .pk-wrapper .vs .hat {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 10;
}
page .pk-wrapper .pk-pk .my-avatar,
page .pk-wrapper .pk-over .my-avatar,
page .pk-wrapper .invite-pk .my-avatar,
page .pk-wrapper .invite-over .my-avatar,
page .pk-wrapper .pk-pk .enemy-avatar,
page .pk-wrapper .pk-over .enemy-avatar,
page .pk-wrapper .invite-pk .enemy-avatar,
page .pk-wrapper .invite-over .enemy-avatar {
  position: absolute;
  top: 7%;
}
page .pk-wrapper .pk-pk .count-down-pk,
page .pk-wrapper .invite-pk .count-down-pk {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 6.5%;
}
page .pk-wrapper .pk-pk .combo,
page .pk-wrapper .invite-pk .combo {
  position: absolute;
  top: 14%;
  width: 100%;
}
page .pk-wrapper .pk-pk .double-combo,
page .pk-wrapper .invite-pk .double-combo {
  width: 390rpx;
  height: 200rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 33%;
}
page .pk-wrapper .pk-pk .double-combo .img,
page .pk-wrapper .invite-pk .double-combo .img {
  width: 100%;
  height: 100%;
}
page .pk-wrapper .btn-invite {
  background: #FF9100;
  color: #FFFFFF;
}
page .pk-wrapper .invite-find .avatar,
page .pk-wrapper .invite-find .vs {
  top: 20%;
}
page .pk-wrapper .invite-find .me {
  left: 5%;
}
page .pk-wrapper .invite-find .enemy {
  right: 5%;
}
page .pk-wrapper .invite-find .footer {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  bottom: 10%;
  text-align: center;
}
page .pk-wrapper .invite-find .footer .btn {
  width: 320rpx;
  height: 88rpx;
  border-radius: 130rpx;
  font-size: 32rpx;
  letter-spacing: 0;
  line-height: 88rpx;
  margin-top: 30rpx;
}
page .pk-wrapper .invite-find .footer .btn-giveup {
  border: 1px solid #FF9100;
  color: #FF9100;
}
page .pk-wrapper .invite-find .invite {
  position: absolute;
  top: 45%;
  width: 100%;
  text-align: center;
}
page .pk-wrapper .invite-find .invite .waiting {
  font-size: 40rpx;
  color: #FF9100;
  letter-spacing: 0.5px;
}
page .pk-wrapper .invite-find .invite .question-tips {
  font-size: 28rpx;
  color: #F1F1F1;
  letter-spacing: 0;
}
page .pk-wrapper .invite-find .invite .start {
  width: 576rpx;
  height: 110rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a67ed6c5b1a6.png') no-repeat;
  background-size: 100% 100%;
  font-size: 60rpx;
  text-align: center;
  line-height: 110rpx;
  color: #fff;
  margin: 20rpx auto;
}
page .pk-wrapper .invite-find .invite .start .icon {
  display: inline-block;
}
page .pk-wrapper .ring {
  width: 100%;
}
page .pk-wrapper .ring .title-wrap {
  width: 100%;
  position: absolute;
  top: 35%;
  text-align: center;
}
page .pk-wrapper .ring .title-wrap .tag-wrap .icon {
  color: #fff;
  font-size: 80rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .ring .title-wrap .tag-wrap .tag {
  font-size: 28rpx;
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  color: #fff;
  background: #15AA63;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .ring .title-wrap .tag-wrap .tag,
page .pk-wrapper .ring .title-wrap .tag-wrap .round {
  opacity: 0;
}
page .pk-wrapper .ring .title-wrap .title {
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  margin: 0 48rpx;
  position: relative;
}
page .pk-wrapper .ring .title-wrap .title .blanks {
  display: inline-block;
  height: 56rpx;
  width: 56rpx;
  border: 4rpx solid #FF9100;
  border-radius: 8rpx;
  text-align: center;
  line-height: 56rpx;
  font-size: 40rpx;
  color: #FFFFFF;
  margin: 0 5rpx;
}
page .pk-wrapper .ring .questions {
  bottom: 12%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .ring .score {
  position: absolute;
  bottom: 6%;
}
page .pk-wrapper .ring .my-score {
  left: 4%;
}
page .pk-wrapper .ring .enemy-score {
  right: 4%;
}
page .pk-wrapper .over .result {
  position: absolute;
  top: 55%;
  width: 100%;
}
page .pk-wrapper .over .avatar,
page .pk-wrapper .over .vs {
  top: 20%;
}
page .pk-wrapper .over .total-score {
  position: absolute;
  z-index: 10;
}
page .pk-wrapper .over .my-total-score {
  left: 13%;
}
page .pk-wrapper .over .enemy-total-score {
  right: 13%;
}
page .pk-wrapper .over .footer {
  letter-spacing: 0;
  color: #FFFFFF;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  width: 100%;
  bottom: 6%;
  z-index: 10;
}
page .pk-wrapper .over .footer .btn-anim {
  opacity: 0;
}
page .pk-wrapper .over .footer .btn {
  font-size: 32rpx;
  color: #FFFFFF;
  width: 420rpx;
  height: 88rpx;
  margin: 0 auto;
  box-shadow: 0 12rpx 20rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 144rpx;
  line-height: 88rpx;
}
page .pk-wrapper .over .footer .btn-again {
  background: #FF9100;
}
page .pk-wrapper .over .footer .btn-share {
  background: #15AA63;
  margin-top: 30rpx;
  margin-bottom: 22rpx;
}
page .pk-wrapper .over .footer .btn-share .icon-share {
  display: inline-block;
  font-size: 36rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
page .pk-wrapper .over .footer .share-tips {
  font-size: 32rpx;
  color: #FFFFFF;
}
page .pk-wrapper .invite-find-error .my-avatar {
  position: aboslute;
  left: 50%;
  transform: translate(-50%, 0);
}
page .pk-wrapper .invite-find-error .find-error {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 50%;
  width: 600rpx;
  text-align: center;
}
page .pk-wrapper .invite-find-error .find-error .tips {
  font-size: 28rpx;
  color: #F1F1F1;
  letter-spacing: 0;
  text-align: center;
}
page .pk-wrapper .invite-find-error .find-error .btn {
  height: 88rpx;
  width: 320rpx;
  border-radius: 130rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  line-height: 88rpx;
  margin: 20rpx auto;
}
page .pk-wrapper .invite-find-error .find-error .btn-invite {
  background: #15AA63;
}
page .pk-wrapper .invite-find-error .find-error .join-pk-rate-btn {
  background: #FF9100;
}
