@import "../../../../css/variable/common.wxss";
@keyframes leaf-1-anim {
  from {
    opacity: 0;
    transform: rotate(25deg);
  }
  25% {
    opacity: 1;
    transform: translate(200rpx, 180rpx) rotate(-10deg);
  }
  50% {
    opacity: 1;
    transform: translate(300rpx, 240rpx) rotate(-40deg);
  }
  75% {
    opacity: 1;
    transform: translate(400rpx, 300rpx) rotate(-80deg);
  }
  100% {
    opacity: 0;
    transform: translate(600rpx, 360rpx) rotate(-120deg);
  }
}
