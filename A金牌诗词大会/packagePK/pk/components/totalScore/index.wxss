.total-score-wrap {
  width: 144rpx;
  height: 144rpx;
  position: relative;
  z-index: 10;
  border-radius: 20rpx;
  text-align: center;
  overflow: hidden;
}
.total-score-wrap .mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 20;
  opacity: 0.4;
  background: #000000;
}
.total-score-wrap .content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  z-index: 30;
}
.total-score-wrap .content .title {
  font-size: 28rpx;
  color: #999999;
  letter-spacing: 0;
  margin-top: 20rpx;
}
.total-score-wrap .content .score {
  font-size: 40rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  margin-top: 15rpx;
}
