@import './template/star.wxss';
@import "../../css/icomoon/style.wxss";

@keyframes fade-in-animation {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .join-pkrate {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
}
page .join-pkrate .top-banner {
  width: 100%;
  height: 222rpx;
  background: url('http://img.gsxservice.com/51384433_rkh31bcq.jpeg') repeat-y center center;
  background-size: cover;
  animation: fade-in-animation 1s linear;
}
page .join-pkrate .top-banner .season-title {
  text-align: center;
}
page .join-pkrate .top-banner .season-title image {
  width: 374rpx;
  height: 86rpx;
}
page .join-pkrate .top-banner .season-time {
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
page .join-pkrate .top-banner .user-info {
  padding: 0 40rpx;
  margin-top: 20rpx;
}
page .join-pkrate .top-banner .user-info .exp-info {
  display: inline-block;
}
page .join-pkrate .top-banner .user-info .exp-info .player-level {
  font-size: 14px;
  color: #55CAB9;
}
page .join-pkrate .top-banner .user-info .exp-info .exp-progress {
  position: relative;
  margin-left: 20rpx;
  width: 302rpx;
  height: 28rpx;
  display: inline-block;
  top: 4rpx;
}
page .join-pkrate .top-banner .user-info .exp-info .exp-progress > view {
  position: absolute;
  top: 0;
  left: 0;
}
page .join-pkrate .top-banner .user-info .exp-info .exp-progress .mask {
  background: #000000;
  border-radius: 100px;
  opacity: 0.4;
  height: 28rpx;
  width: 302rpx;
}
page .join-pkrate .top-banner .user-info .exp-info .exp-progress .inner-bar {
  background-image: linear-gradient(-269deg, #26a8d2 3%, #51f09a 58%, #ea7715 95%);
  border-radius: 16px;
  height: 20rpx;
  top: 4rpx;
  left: 4rpx;
}
page .join-pkrate .top-banner .user-info .exp-info .exp-progress .inner-bar.android {
  top: 6rpx;
}
page .join-pkrate .top-banner .user-info .content {
  display: inline-block;
  margin-left: 20rpx;
}
page .join-pkrate .top-banner .user-info .content text {
  font-size: 24rpx;
  color: #fff;
  position: relative;
  left: 10rpx;
  bottom: 4rpx;
}
page .join-pkrate .top-banner .user-info .content image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 6rpx;
}
page .join-pkrate .level-list {
  padding-top: 10rpx;
  height: 58%;
  transform: scale(0.8);
  opacity: 0;
}
page .join-pkrate .level-list .level-item {
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.4);
  width: 670rpx;
  height: 200rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 30rpx;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a65b36167033.png') no-repeat center center;
  background-size: cover;
  border-radius: 10px;
  padding: 60rpx 30rpx 60rpx 80rpx;
  box-sizing: border-box;
}
page .join-pkrate .level-list .level-item:last-child {
  margin-bottom: 10rpx;
}
page .join-pkrate .level-list .level-item > view {
  display: inline-block;
  vertical-align: top;
}
page .join-pkrate .level-list .level-item .text-grade {
  font-size: 60rpx;
  color: #fff;
  margin-right: 20rpx;
  position: relative;
  top: 10rpx;
}
page .join-pkrate .level-list .level-item .stars.single-line {
  position: relative;
  top: 20rpx;
}
page .join-pkrate .level-list .level-item.unlock {
  background-image: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a6aca657798c.png');
}
@keyframes active-animation {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(0.95);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}
page .join-pkrate .level-list .level-item.active {
  animation: active-animation 0.5s ease;
}
page .join-pkrate .level-list .level-item .locked-image {
  width: 80rpx;
  height: 28rpx;
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.4);
  border-radius: 1.86px;
}
page .join-pkrate .for-more {
  width: 20rpx;
  height: 122rpx;
  margin: 30rpx auto;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a65b361c3a48.png') no-repeat center center;
  background-size: cover;
}
page .join-pkrate .remind-text {
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
}
