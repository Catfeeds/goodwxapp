@import '../../../../css/variable/dialog.wxss';

.award-rules-dialog {
  transform: scale(0.25);
  opacity: 0;
}
.award-rules-dialog .dialog-box .dialog-wrapper {
  top: 0;
  height: 95%;
}
.award-rules-dialog .dialog-box .dialog-wrapper .close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .close-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: .5;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content {
  font-size: 30rpx;
  height: 80%;
  overflow-y: scroll;
  color: #FBFBFB;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .inner-title {
  font-size: 30rpx;
  text-align: center;
  border-bottom: 2rpx solid #5F506C;
  padding-bottom: 20rpx;
  margin-top: 40rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .award-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #5F506C;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .award-item > view {
  display: inline-block;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .award-item .award-img image {
  width: 176rpx;
  height: 176rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .award-item .award-info {
  margin-left: 40rpx;
  font-size: 32rpx;
  color: #FBFBFB;
  vertical-align: top;
  position: relative;
  top: 30rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .award-item .award-info .text-rate {
  color: #FF9100;
  margin-bottom: 30rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .time-info {
  margin-top: 20rpx;
}
.award-rules-dialog .dialog-box .dialog-wrapper .content .text-explain {
  margin-top: 40rpx;
}
