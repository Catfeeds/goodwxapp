@keyframes fade-in-animation {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fade-out-animation {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .outer-container {
  height: 100%;
  overflow-y: hidden;
}
page .page-save-info {
  box-sizing: border-box;
  height: 100%;
  padding: 0 40rpx;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
}
page .page-save-info .user-avatar {
  width: 498rpx;
  height: 348rpx;
  margin: 0 auto;
  animation: fade-in-animation 1s linear;
  position: relative;
  background: url('https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a697eca8ad52.png') no-repeat center center;
  background-size: cover;
  text-align: center;
}
page .page-save-info .user-avatar .box {
  position: absolute;
  color: #fff;
  left: 176rpx;
  top: 80rpx;
}
page .page-save-info .user-avatar .box .user-name {
  font-size: 32rpx;
}
page .page-save-info .user-avatar .box image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  overflow: hidden;
  /* border: 8rpx solid #e4cdd1; */
}
page .page-save-info .text-label {
  position: relative;
  width: 90%;
  margin: 0 auto;
  font-size: 16px;
  color: #FFD517;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  text-align: center;
}
page .page-save-info .text-label.is-htc {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
page .page-save-info .text-label image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
}
page .page-save-info .text-label image.dot-left {
  top: -24rpx;
  left: -34rpx;
}
page .page-save-info .text-label image.dot-right {
  right: -20rpx;
  bottom: -16rpx;
}
page .page-save-info canvas {
  width: 442rpx;
  height: 420rpx;
  left: 106rpx;
}
page .page-save-info .bottom-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 23%;
}
page .page-save-info .bottom-wrapper .save-pic {
  font-size: 14px;
  color: #FFFFFF;
  text-align: center;
  background: #FF9100;
  border-radius: 72px;
  width: 400rpx;
  height: 88rpx;
  margin: 20rpx auto;
  line-height: 88rpx;
  margin-top: 40rpx;
}
page .page-save-info .bottom-wrapper .save-pic image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 6rpx;
  margin-right: 10rpx;
}
page .page-save-info .bottom-wrapper .text-info {
  text-align: center;
  font-size: 28rpx;
  color: #FFFFFF;
}
page .saveinfo-canvas {
  width: 100%;
  height: 100%;
}
