<view class="container">
	<div class="head">
	  <div class="timeline" wx:if="{{orderDetail.status==5 && orderDetail.endString>=0 && showTimeLine}}"><view class="hc"><image src='../../../static/images/icon_important.png'></image><text wx:if="{{orderDetail.endString>0}}">距离竣工时间还有{{orderDetail.endString}}天</text><text wx:else>预计竣工时间到了，请尽快联系修理厂</text></view><image bindtap='closeTimeline' src='../../../static/images/icon_close.png'></image></div>
		<div class="imgPanel">
			<image src="../../../static/images/img_head.png" class="icon"></image>
			<div class="content-info vc">
				<p>{{orderDetail.garageName}}</p>
				<div class="title">
					接车单
				</div>
				<div class="number">
					<span>NO.</span><span>{{orderDetail.orderNumber}}</span><span>(车主联)</span>
				</div>
			</div>
		</div>
	</div>
	<view class="main_content detail">
		  <view class="switch_container">
			    <view class="switch_btn" data-switchId="part1" bindtap="handleSwitch">
					    <view class='hc'><text>基本信息</text><image class="arrow" wx:if="{{!switchs.part1 && orderDetail.status>=4}}" src="../../../static/images/arrow-down.png"></image><image wx:if="{{switchs.part1 && orderDetail.status>=4}}" class="arrow active" src="../../../static/images/arrow-down.png"></image></view>
							<view class="status">
								<image wx:if="{{orderDetail.scanStatus==3}}" src="../../../static/images/label_certain.png"></image>
								<image wx:elif="{{orderDetail.scanStatus==2}}" src="../../../static/images/label_waitCertain.png"></image>
								<image wx:elif="{{orderDetail.scanStatus==4}}" src="../../../static/images/label_reject.png"></image>
							</view>
					</view>
					<view class="carInfo" wx:if="{{switchs.part1}}">
						<view class="item">
							<view class="label">接车时间</view>
							<view class="text">{{orderDetail.createdDateStr}}</view>
						</view>
						<view class="item">
							<view class="label">车型/车款</view>
							<view class="text">{{orderDetail.autoModelChnName}}</view>
						</view>
						<view class="item">
							<view class="label">车牌号</view>
							<view class="text" style="letter-spacing:0;">{{orderDetail.vehicleLicenceCode}}</view>
						</view>
						<view class="item" wx:if="{{orderDetail.vehicleFrameNo}}">
							<view class="label">车架号</view>
							<view class="text" style="letter-spacing:0;">{{orderDetail.vehicleFrameNo}}</view>
						</view>
						<view class="item">
							<view class="label">里 程</view>
							<view class="text_fixed">{{orderDetail.mileage}}km</view>
							<view class="label border_horizontal" style="width:120rpx;">油 量</view>
							<view class="text_fixed">{{orderDetail.oil}}%</view>
						</view>
						<view class="item">
							<view class="label">客户姓名</view>
							<view class="text_fixed">{{orderDetail.userName}}{{orderDetail.sex=='1'?'先生':orderDetail.sex=='2'?'女士':''}}</view>
							<view class="label border_horizontal" style="width:120rpx;" wx:if="{{orderDetail.contactMobile}}">客户手机</view>
							<view class="text_contactMobile" style="letter-spacing:0;" wx:if="{{orderDetail.contactMobile}}">{{orderDetail.contactMobile}}</view>
						</view>
						<view class="item">
							<view class="label" >服务项目</view>
							<view class="text">{{orderDetail.serviceItems}}{{orderDetail.customServiceItem?"("+orderDetail.customServiceItem+")":""}}</view>
						</view>
						<view class="item require" wx:if="{{orderDetail.description}}">
							<view class="label">客户要求</view>
							<view class="text">{{orderDetail.description}}</view>
						</view>
						<view class="item" wx:if="{{orderDetail.takeOldDevice==1}}">
								<view class="label" wx:if="{{orderDetail.takeOldDevice==1}}">旧件处理</view>
								<view class="text_fixed"  wx:if="{{orderDetail.takeOldDevice==1}}">带走</view>
								<view class="label border_horizontal" style="width:120rpx;" wx:if="{{orderDetail.washCar==1}}">是否洗车</view>
								<view class="text_contactMobile" style="letter-spacing:0;" wx:if="{{orderDetail.washCar==1}}">洗车</view>
						</view>
						<view class="item" wx:if="{{orderDetail.takeOldDevice!=1 && orderDetail.washCar==1}}">
									<view class="label" wx:if="{{orderDetail.washCar==1}}">是否洗车</view>
									<view class="text_fixed" style="letter-spacing:0;" wx:if="{{orderDetail.washCar==1}}">洗车</view>
						</view>
						<view class="checkPhotos" wx:if="{{orderDetail.checkPhotoList && orderDetail.checkPhotoList.length}}">
	             <view class="title">环车检查</view>
							 <view class="checkPhotos_photoList">
	                 <image bindtap="previewCheckPhotos" data-i="{{index}}" wx:key="{{index}}" wx:for="{{orderDetail.checkPhotoList}}" src="{{item.urlSmall}}"></image>
							 </view>
						</view>
	          <view class="checkPhotos" wx:if="{{orderDetail.vehicleFrameNo || orderDetail.vehicleFrameNoIdPhoto}}">
	             <view class="title">车架号</view>
	             <view class="text" style="letter-spacing:0;" wx:if="{{orderDetail.vehicleFrameNo}}">{{orderDetail.vehicleFrameNo}}</view>
	             <view class="checkPhotos_photoList" wx:if="{{orderDetail.vehicleFrameNoIdPhoto}}">
	                 <image bindtap="previewVehicleFrameNoIdPhoto"   src="{{orderDetail.vehicleFrameNoIdPhoto.urlSmall}}"></image>
	             </view>
	          </view>
					</view>
			</view>
	    <view class="switch_container" wx:if="{{orderDetail.status>=4}}">
			    <view class="switch_btn" data-switchId="part2" bindtap="handleSwitch">
					    <view class="hc"><text>检车报价</text><image class="arrow" wx:if="{{!switchs.part2 && orderDetail.status>=4}}" src="../../../static/images/arrow-down.png"></image><image wx:if="{{switchs.part2 && orderDetail.status>=4}}" class="arrow active" src="../../../static/images/arrow-down.png"></image></view>
							<view class="status">
								<image wx:if="{{orderDetail.status==5}}" src="../../../static/images/label_ok.png"></image>
								<image wx:elif="{{orderDetail.status==4}}" src="../../../static/images/label_wait.png"></image>
								<image wx:elif="{{orderDetail.status==6}}" src="../../../static/images/label_refuse.png"></image>
							</view>
					</view>
					<view wx:if="{{switchs.part2 && orderDetail.status>=4}}">
					<view class="checkOrder">
							<view class="title">检查项目</view>
							<view class="item" wx:for="{{orderDetail.itemList}}" wx:for-index="i" wx:key="{{i}}">
								<view class="tr tr1">
									<view class="no">{{i+1}}</view>
									<view class="label">
										{{item.itemName}}
									</view>
									<view class="text {{item.normal==1?'':'red'}}">
										{{item.normal==1?"正常":"异常"}}
									</view>
								</view>
								<view class="tr tr2" wx:if="{{item.normal==2 && item.abnormalPhotoList && item.abnormalPhotoList.length}}">
									<view class="no">
									</view>
									<view class="label sub"><text>异常点照片</text></view>
									<view class="photos">
										<view bindtap="previewImg" wx:for="{{item.abnormalPhotoList}}" data-i="{{i}}" data-j="{{j}}" wx:for-index="j" wx:key="{{j}}" wx:for-item="_item">
											<image src="{{_item.urlSmall}}"></image>
										</view>
									</view>
								</view>

								<view class="tr tr3" wx:if="{{item.normal==2 && item.remark}}">
									<view class="no"></view>
									<view class="label sub">备注</view>
									<view class="mark">{{item.remark}}</view>
								</view>
							</view>
						</view>
						<view class="checkResult">
							<view class="title mb20">检查结果</view>
							<view class="context {{checkRed?'red':''}}">
								{{checkResult}}
							</view>
							<view class="context" wx:if="{{orderDetail.checkResultDescription}}">{{orderDetail.checkResultDescription}}</view>
						</view>
						<view class="advise" wx:if="{{orderDetail.suggestion}}">
							<view class="title  mb20">维修项目</view>
							<view class="tr">{{orderDetail.suggestion}}</view>
						</view>
						<view class="advise" wx:if="{{endDate}}" >
							<view class="title mb20">预计竣工时间</view>
							<view class="tr">{{endDate}}</view>
						</view>
						<view class="cost" wx:if="{{orderDetail.estimatePrice && (!planItemList || !planItemList.length)}}">
	             <view class="title mb20">预估费用</view>
							 <view class="context" style="padding-bottom:30rpx;">{{orderDetail.estimatePrice}}</view>
						</view>
						<view class="cost" wx:else>
							<view class="title mb20">预估费用</view>
							<view class="context">
								  <view class="tableTitle tr"><view>项目名称</view><view>材料费</view><view>工时费</view><view>小计</view></view>
									<view class="planItem tr" wx:for="{{planItemList}}" wx:key="{{index}}"><view>
									         <view>{{item.planItemName}}</view>
											     <view class="remark">{{item.remark}}</view>
											 </view>
											 <view>{{item.materialPrice}}.00</view>
											 <view>{{item.workingPrice}}.00</view>
											 <view>{{item.totalPrice}}.00</view>
								 </view>
								 <view class="totalPrice">总计：<text class="red">{{orderDetail.totalPrice}}.00元</text></view>
							</view>
						</view>
				</view>
			</view>
		</view>
		<view class="topNav">
			<view class="topNav_item"><text class="on">接车</text></view>
			<view class="topNav_item"><text class="{{step>=2?'on':''}}">扫码</text></view>
			<view class="topNav_item"><text class="{{step>=3?'on':''}}">检车</text></view>
			<view class="topNav_item"><text class="{{step>=4?'on':''}}">报价</text></view>
			<view class="topNav_item"><text class="{{step>=5?'on':''}}">完成</text></view>
		</view>
  <view class="modal" wx:if="{{showPhoneModal}}">
	    <view class="modal_container">
		     	<view class="title">请先登录</view>
			    <view class="text">允许授权手机号码即可完成登录</view>
					<button class="getPhoneNumber" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">微信登录</button>
			</view>
	</view>

	<div class="buttons" wx:if="{{(orderDetail.status=='1' && orderDetail.scanStatus!='3' && orderDetail.scanStatus!='4')|| orderDetail.status=='4'}}">
	  <view wx:if="{{orderDetail.status=='1'}}"><form report-submit="true" bindsubmit="doRefuse"><button class="left"  formType="submit">拒绝</button></form></view>
    <view wx:else><form report-submit="true" bindsubmit="doRefuse"><button class="left"  formType="submit">不同意</button></form></view>
		<view wx:if="{{orderDetail.status=='1'}}"><form report-submit="true" bindsubmit="doConfirm"><button class="right"  formType="submit">确认</button></form></view>
		<view wx:else><form report-submit="true" bindsubmit="doConfirm"><button class="right"  formType="submit">同意</button></form></view>
	</div>

	<view class="buttons toHome" wx:else bindtap="_toHome">返回首页</view>
	<view class="phoneBtn" bindtap="_callingPhone" wx:if="{{orderDetail.contactMobileList && orderDetail.contactMobileList[0]}}"><image src="../../../static/images/phone_btn.png"></image><text>联系修理厂</text></view>
</view>
