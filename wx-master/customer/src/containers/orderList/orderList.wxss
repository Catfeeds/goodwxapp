.content-wrap {
	width: 100%;
	height: 100%;
	background-color: #ffffff;
}

.list {
	background: #ffffff;
}

.item {
	height: 130rpx;
	margin: 0rpx 30rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	box-sizing: border-box;
}

.item+.item {
	border-top: 1rpx solid #e2e4e6;
}

.item .topside {
	width: 100%;
	margin-bottom: 5rpx;
	display: flex;
	justify-content: space-between;
}

.topside {
	font-size: 34rpx;
	line-height: 39rpx;
	color: #333333;
	letter-spacing: 0px;
}

.topside p:nth-child(1) {
	width: 70%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.status1{
  color:#ff6600
}
.status2{
  color:#FF4E00
}
.status3{
  color:#0EA87F
}
.status4{
  color:#F91C52
}
.item .underneath {
	width: 100%;
	margin-top: 5rpx;
	font-size: 26rpx;
	line-height: 31rpx;
	color: #999999;
	letter-spacing: 0px;
}

.noList {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column
}

.noList image {
	width: 213rpx;
	height: 220rpx;
}

.noList p {
	font-size: 30rpx;
	color: #999999;
	letter-spacing: 0px;
	text-align: center;
	margin-top: 34rpx;
	margin-bottom: 300rpx;
}

.pullDownTitle,
.pullUpTitle {
	display: block;
	text-align: center;
	font-size: 26rpx;
	line-height: 80rpx;
	color: #999999;
}

.scrollView{
	overflow-y: visible;
}
