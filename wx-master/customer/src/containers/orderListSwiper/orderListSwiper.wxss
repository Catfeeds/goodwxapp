.swiperContainer{
    position: absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top:100rpx;
}
.swiperContainer swiper{
  background:#ffffff;
  /* border:1px solid #e2e4e6; */
  border-radius:10rpx;
  width:578rpx;
  height:840rpx;
  margin:0 30rpx;
  overflow:hidden;
}
.left,.right{
  position:absolute;
  width:55rpx;
  height:840rpx;
  background:#ffffff;
  border:1px solid #e2e4e6;
  border-radius:10rpx;
  top:100rpx;

}
.left{
left:0;
}
.right{
right:0;
}
.slide-item{
    width:100%;
    height:100%;
    padding-top:99rpx;
    padding-left:70rpx;
    padding-right:70rpx;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:flex-start;
    box-sizing:border-box;
    text-align:center;
    border:1px solid #e2e4e6;
    position:relative;
}
.switchBtn{
    position: absolute;
    bottom:56rpx;
    width:100%;
    font-size:34rpx;
    text-align: center;
}
.title {
	background-image: linear-gradient(-90deg, #FFFFFF 15%, #FFC262 39%, #FFC262 59%, #FFFFFF 81%);
	height: 37rpx;
	line-height: 37rpx;
  font-size:24rpx;
	width: 300rpx;
	display: block;
	margin: auto;
	text-align: center;
	margin-top: 8rpx;
  margin-bottom:15rpx;
	color: #ffffff;
  text-align:center;
}
.no,.time{
  font-family:PingFang-SC-Medium;
  font-size:24rpx;
  color:#a5a5a5;
  letter-spacing:0px;
  text-align:center;
}
.carInfo{
  margin-top:53rpx;
  font-family:PingFang-SC-Medium;
  font-size:24rpx;
  color:#a5a5a5;
  letter-spacing:0px;
  text-align:center;
}
.checkRes{
  font-family:PingFang-SC-Medium;
  font-size:30rpx;
  color:#ff6600;
  letter-spacing:0px;
  text-align:center;
  margin-top:125rpx;
  height:150rpx;
}
.checkRes span{
  color:#a5a5a5;
}
.toDetailBtn{

background:linear-gradient(-45deg,#ffaf2e 0%,#ff6d10 100%);
border-radius:100rpx;
color:#fff;
text-align:center;
line-height:80rpx;
width:260rpx;
height:80rpx;
}
.noList{
position:absolute;
width:100%;
height:100%;
display:flex;
flex-direction:column;
align-items:center;
justify-content:center;

}
.noList image {
	width: 200rpx;
	height: 154rpx;
}
.tag {
	position: absolute;
	top:86rpx;
	right: 16rpx;
	width: 200rpx;
	height: 154rpx;
	opacity: 0.5;
  z-index:1;
}
.tag2{
  width:190rpx;
}
.garageName{
  font-size:40rpx;
  width:100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.indicator{
font-size:28rpx;
color:#a5a5a5;
position:absolute;
text-align:center;
width:100%;
bottom:-40rpx;
}
