.logo {
	text-align: center;
}

.logo image {
	width: 113rpx;
	height: 112rpx;
	margin: auto;
	margin-top: 93rpx;
	margin-bottom: 20rpx;
}

p {
	display: block;
	text-align: center;
}

.title {
	font-size: 40rpx;
	line-height: 56rpx;
	color: #000000;
}

.desc {
	font-size: 28rpx;
	line-height: 40rpx;
	color: #888888;
}

.form {
	margin-top: 64rpx;
	background-color: #FFFFFF;
	padding-left: 30rpx;
	padding-right: 30rpx;
	padding-top: 1rpx;
	padding-bottom: 1rpx;
}

.form p {
	text-align: left;
}

.form p+p {
	border-top: 1px solid #e2e4e6;
}

.form input {
	margin-top: 30rpx;
	margin-bottom: 30rpx;
	margin-left: 10rpx;
	margin-right: 50rpx;
	font-size: 34rpx;
	color: #333333;
}

.form .phcolor {
	color: #b2b2b2;
}

.form p:nth-child(2) input {
	width: 400rpx;
}

.form .codeBtn {
	width: 200rpx;
	height: 70rpx;
	display: block;
	box-sizing: border-box;
	background: #d8d8d8;
	border-radius: 4rpx;
	font-size: 30rpx;
	line-height: 70rpx;
	color: #ffffff;
	text-align: center;
	position: relative;
	float: right;
	top: -90rpx;
	right: 10rpx;
}

.form icon {
	float: right;
	position: relative;
	top: -68rpx;
}

.form p:nth-child(2) icon {
	right: 40rpx;
}

.loginBtn {
	background: #d8d8d8;
	box-sizing: border-box;
	border-radius: 10rpx;
	width: 670rpx;
	height: 94rpx;
	margin: auto;
	margin-top: 90rpx;
	text-align: center;
	font-size: 36rpx;
	line-height: 94rpx;
	color: #ffffff;
}

.loginBtn.orange,
.codeBtn.orange {
	background: #ff6600;
}