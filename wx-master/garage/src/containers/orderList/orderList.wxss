/**index.wxss**/

.scroller_container {
	box-sizing: border-box;
	padding-top:80rpx;
}

.item {
	margin: 20rpx 20rpx 0;
	min-height: 164rpx;
	padding:40rpx 30rpx 0;
	align-items: center;
	background:#fff;
  box-sizing:border-box;
	border-radius:8rpx;
	box-shadow:0 2px 2px #ddd;
	position:relative;
}
.item .right{
  position:absolute;
	top:38rpx;
	right:-10rpx;
}
.carName{
	margin-bottom: 20rpx;
	font-size: 34rpx;
	color: #333;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	line-height:1;
	max-width: 480rpx;
}
.pullUpTitle {
	display: block;
	text-align: center;
	font-size: 26rpx;
	line-height: 80rpx;
	color: #999999;
}

.status image{
   width:142rpx;
	 height:60rpx;
}

.userInfo{
	margin-bottom:20rpx;
	width:100%;
}
.info text:first-child {
	margin-right: 20rpx;
}

.userInfo text{
	font-size: 24rpx;
	color: #a5a5a5;
	text-align: right;
	line-height:30rpx;
}
.userInfo .info,.userInfo .date{
font-size:0;
}
.userInfo .date{
 width:215rpx;
 text-align:right;
}

.userInfo .info text{
  font-size:28rpx;

}

.status .refuse {
	font-size: 34rpx;
	color: #f60;
}

.status .wait {
	color: #1aad19;
}

.status .temporary {
	color: #4a90e2;
}

.firstIn {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: #fff;
}

.firstIn .title text {
	font-size: 40rpx;
	font-weight: 600;
	color: #368fdb;
}

.firstIn .Intro text {
	font-size: 40rpx;
	font-weight: 600;
}

.firstIn .content {
	margin-top: 78rpx;
}

.firstIn .content text {
	font-size: 30rpx;
	line-height: 52rpx;
	color: #888;
}

.tipImg {
	width: 100%;
}

.tipImg image {
	display: block;
	width: 750rpx;
  height:1916rpx;
}

.firstIn .content .order {
	display: inline-block;
	text-align: center;
	margin-right: 17rpx;
	width: 36rpx;
	height: 36rpx;
	line-height: 34rpx;
	color: #fff;
	border-radius: 100%;
	background: #bcbcbc;
}

.firstIn .add_tip {
  width:100%;

	padding:10rpx 0 30rpx;
	background:#0164CA;
}
.add_tip image{
height:80rpx;
width:340rpx;
}
.add_tip .add {
	color: #368fdb;
	font-weight: bold;
}

.right {
	text-align: right;
}

.import {
  position:relative;
	text-align: center;
}

.text {
	display: block;
	margin: auto;
	width: 520rpx;
	top: 485rpx;

}
.tips{
	margin-top: -500rpx;
}

.text .tip {
	text-align: left;
	font-size: 32rpx;
	color: #ffffff;
	line-height: 51rpx;
}
.weui-loadmore{
	margin:0 auto;
	padding:20rpx;
}
.sort{
   position:fixed;
	 top:0;
	 left:0;
	 width:100%;
	 z-index:2;
	 font-size:28rpx;
	 line-height:50rpx;
}
.sortTop{
display:flex;
background:#fff;
height:80rpx;
align-items:center;
justify-content:center;

font-size:26rpx;
color:#999;
}
.sortTop .sortBtn{
  flex:1;
	text-align:center;
	line-height:80rpx;

}
.sortTop .sortBtn text{
  display:inline-block;
	vertical-align:middle;
	color:#888
}
.sortTop .sortBtn image{
  display:inline-block;
	vertical-align:middle;
	width:20rpx;
	height:20rpx;
	margin-left:8rpx;
}
.sortTop .sortBtn.active text{
  color:#000;
}
.sortTop .sortBtn.active image{
  transform:rotate(180deg);
	transform-origin:center center;
}
.sortTop .sortInput{
   width:120rpx;
	 border-left:1px solid #e0e0e0;
	 height:50rpx;
	 display:flex;
	 align-items:center;
	 justify-content:center;
}
.sortTop .sortInput image{
   width:48rpx;
	 height:48rpx;
}

.totals{
text-align:center;
line-height:30rpx;
font-size:24rpx;
background:#fff;
}
.sortPlant{
 overflow:hidden;
 background:#fff;
 padding-bottom:20rpx;
 border-top:1px solid #e0e0e0;
}
.sortPlant view{
    float:left;
		width:216rpx;
		height:60rpx;
		line-height:60rpx;
		text-align:center;
		font-size:26rpx;
		color:#999;
		background:#f0f0f0;
		margin-left:20rpx;
		margin-top:20rpx;
}
.sortPlant .selected{
		color:#000
}

.sortShadow{
 position:fixed;
 top:0;
 bottom:0;
 left:0;
 right:0;
 background:rgba(0,0,0,0.4);
 z-index:-1;

}
.middleLine{
   margin-top:24rpx;
   font-size:22rpx;
	 line-height:1;
   color:#888;
   text-align:center;
}
.middleLine .line{
   height:1px;
   width:100rpx;
   background:#e5e5e5;
}
.middleLine view{
   display:inline-block;
   vertical-align:middle;
}
.middleLine .middle_text{
margin:0 30rpx;
color:#999
}
