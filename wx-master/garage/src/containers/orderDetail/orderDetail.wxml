<view class="wrapper" >
  <view class="container" wx:if="{{isLoad}}">
	<view class="header">
		<view class="content">
			<image class="order_top" src="../../../images/order_top.png" mode="aspectFitßß"></image>
			<view class="content-info vc">
				<view class="çç garageName">{{orderDetail.garageName}}</view>
				<view class="type">接车单</view>
				<view class="orderNumber">NO. <text class="number">{{orderDetail.orderNumber}}</text>（商户联）</view>
			</view>
		</view>
	</view>
	<view class="main_content detail">
	  <view class="switch_container">
		    <view class="switch_btn" data-switchId="part1" bindtap="handleSwitch">
				    <text>基本信息</text><image class="arrow" wx:if="{{!switchs.part1}}" src="../../../images/arrow-down.png"></image><image wx:else class="arrow active" src="../../../images/arrow-down.png"></image>
						<view class="status">
							<image wx:if="{{orderDetail.scanStatus==3}}" src="../../../images/label_certain.png"></image>
							<image wx:elif="{{orderDetail.scanStatus==2}}" src="../../../images/label_waitCertain.png"></image>
							<image wx:elif="{{orderDetail.scanStatus==4}}" src="../../../images/label_reject.png"></image>
						</view>
				</view>
				<view class="carInfo" wx:if="{{switchs.part1}}">
					<view class="item">
						<view class="label" >接车时间</view>
						<view class="text">{{orderDetail.createdDateStr}}</view>
					</view>
					<view class="item">
						<view class="label">车型/车款</view>
						<view class="text">{{orderDetail.autoModelChnName}}</view>
					</view>
					<view class="item" >
						<view class="label">车牌号</view>
						<view class="text" style="letter-spacing:0;">{{orderDetail.vehicleLicenceCode}}</view>
					</view>
					<view class="item">
						<view class="label" >里 程</view>
						<view class="text_fixed">{{orderDetail.mileage}}km</view>
						<view class="label border_horizontal" style="width:120rpx;">油 量</view>
						<view class="text_fixed">{{orderDetail.oil}}%</view>
					</view>
					<view class="item" >
						<view class="label">客户姓名</view>
						<view class="text_fixed">{{orderDetail.userName}}{{orderDetail.sex=='1'?'先生':orderDetail.sex=='2'?'女士':''}}</view>
						<view class="label border_horizontal" style="width:120rpx;" wx:if="{{orderDetail.contactMobile}}">客户手机</view>
						<view class="text_contactMobile" style="letter-spacing:0;" wx:if="{{orderDetail.contactMobile}}">{{orderDetail.contactMobile}}</view>
					</view>
					<view class="item">
						<view class="label" >服务项目</view>
						<view class="text">{{orderDetail.serviceItems}}{{orderDetail.customServiceItem?"("+orderDetail.customServiceItem+")":""}}</view>
					</view>
					<view class="item require" wx:if="{{orderDetail.description}}">
						<view class="label">客户要求</view>
						<view class="text">{{orderDetail.description}}</view>
					</view>
          <view class='item' wx:if="{{orderDetail.insuranceExpireDate}}">
              <view class="label">保险到期时间</view>
              <view class="text">{{orderDetail.insuranceExpireDate}}</view>
          </view>
          <view class="item" wx:if="{{orderDetail.nextMaintainDate}}">
              <view class="label">下次保养时间</view>
              <view class="text">{{orderDetail.nextMaintainDate}}</view>
          </view>
          <view class="item" wx:if="{{orderDetail.takeOldDevice==1}}">
                <view class="label">旧件处理</view>
                <view class="text_fixed">带走</view>
                <view class="label border_horizontal" style="width:120rpx;" wx:if="{{orderDetail.washCar==1}}">是否洗车</view>
                <view class="text_contactMobile" style="letter-spacing:0;" wx:if="{{orderDetail.washCar==1}}">洗车</view>
          </view>
          <view class="item" wx:if="{{orderDetail.takeOldDevice!=1 && orderDetail.washCar==1}}">
                <view class="label" wx:if="{{orderDetail.washCar==1}}">是否洗车</view>
                <view class="text_fixed" style="letter-spacing:0;" wx:if="{{orderDetail.washCar==1}}">洗车</view>
          </view>
					<view class="checkPhotos" wx:if="{{orderDetail.checkPhotoList && orderDetail.checkPhotoList.length}}">
             <view class="title">环车检查</view>
						 <view class="checkPhotos_photoList">
                 <image bindtap="previewCheckPhotos" data-i="{{index}}" wx:key="{{index}}" wx:for="{{orderDetail.checkPhotoList}}" src="{{item.urlSmall}}"></image>
						 </view>
					</view>

          <view class="checkPhotos" wx:if="{{orderDetail.vehicleFrameNo || orderDetail.vehicleFrameNoIdPhoto}}">
             <view class="title">车架号</view>
             <view class="text" style="letter-spacing:0;" wx:if="{{orderDetail.vehicleFrameNo}}">{{orderDetail.vehicleFrameNo}}</view>

             <view class="checkPhotos_photoList" wx:if="{{orderDetail.vehicleFrameNoIdPhoto}}">
                 <image bindtap="previewVehicleFrameNoIdPhoto"   src="{{orderDetail.vehicleFrameNoIdPhoto.urlSmall}}"></image>
             </view>
          </view>
				</view>
		</view>
    <view class="switch_container">
		    <view class="switch_btn" data-switchId="part2" bindtap="handleSwitch">
				    <text>检车报价</text><image class="arrow" wx:if="{{!switchs.part2}}" src="../../../images/arrow-down.png"></image><image wx:else class="arrow active" src="../../../images/arrow-down.png"></image>
						<view class="status">
							<image wx:if="{{orderDetail.status==5}}" src="../../../images/label_ok.png"></image>
							<image wx:elif="{{orderDetail.status==4}}" src="../../../images/label_wait.png"></image>
							<image wx:elif="{{orderDetail.status==6}}" src="../../../images/label_refuse.png"></image>
						</view>
				</view>
				<view wx:if="{{switchs.part2}}">
				<view class="checkOrder" wx:if="{{!orderDetail.skipCheckCar}}">
						<view class="title">检查项目</view>
						<view class="item" wx:for="{{orderDetail.itemList}}" wx:for-index="i" wx:key="{{i}}">
							<view class="tr tr1">
								<view class="no">{{i+1}}</view>
								<view class="label">
									{{item.itemName}}
								</view>
								<view class="text {{item.normal==1?'':'red'}}">{{item.normal==1?"正常":"异常"}}</view>
							</view>
							<view class="tr tr2" wx:if="{{item.normal==2 && item.abnormalPhotoList && item.abnormalPhotoList.length}}">
								<view class="no">
								</view>
								<view class="label sub"><text>异常点照片</text></view>
								<view class="photos">
									<view bindtap="previewImg" wx:for="{{item.abnormalPhotoList}}" data-i="{{i}}" data-j="{{j}}" wx:for-index="j" wx:key="{{j}}" wx:for-item="_item">
										<image src="{{_item.urlSmall}}"></image>
									</view>
								</view>
							</view>

							<view class="tr tr3" wx:if="{{item.normal==2 && item.remark}}">
								<view class="no"></view>
								<view class="label sub">备注</view>
								<view class="mark">{{item.remark}}</view>
							</view>
						</view>
					</view>
					<view class="checkResult" wx:if="{{!orderDetail.skipCheckCar}}">
						<view class="title mb20">检查结果</view>
						<view class="context {{checkRed?'red':''}}">
							{{checkResult}}
						</view>
            <view class="context" wx:if="{{orderDetail.checkResultDescription}}">{{orderDetail.checkResultDescription}}</view>
					</view>
					<view class="advise" wx:if="{{orderDetail.suggestion}}">
						<view class="title mb20">维修项目</view>
						<view class="tr">{{orderDetail.suggestion}}</view>
					</view>
					<view class="advise" wx:if="{{endDate}}" >
						<view class="title mb20">{{orderDetail.status=='7'?'取车时间':'预计竣工时间'}}</view>
						<view class="tr">{{endDate}}</view>
					</view>
					<view class="cost" wx:if="{{orderDetail.estimatePrice && (!planItemList || !planItemList.length)}}">
             <view class="title mb20">预估费用</view>
						 <view class="context" style="padding-bottom:30rpx;">{{orderDetail.estimatePrice}}</view>
					</view>
					<view class="cost" wx:else>
						<view class="title mb20">预估费用</view>
						<view class="context">
							  <view class="tableTitle tr"><view>项目名称</view><view>材料费</view><view>工时费</view><view>小计</view></view>
								<view class="planItem tr" wx:for="{{planItemList}}" wx:key="{{index}}"><view>
								         <view>{{item.planItemName}}</view>
										     <view class="remark">{{item.remark}}</view>
										 </view>
										 <view>{{item.materialPrice}}.00</view>
										 <view>{{item.workingPrice}}.00</view>
										 <view>{{item.totalPrice}}.00</view>
							 </view>
							 <view class="totalPrice">总计：<text class="red">{{orderDetail.totalPrice}}.00元</text></view>
						</view>
					</view>
			</view>
		</view>
	</view>
	<view class="modify_btn" bindtap="_toChange">修改接车单</view>
  <view class="footer_btn" wx:if="{{orderDetail.status==6}}" bindtap="_toQuote">修改报价</view>
	<view class="footer_btn" wx:else bindtap="_toHome">返回首页</view>
	<!--<view class="btn_group space-between">
		<view class="btn vc" wx:if="{{orderDetail.status==2}}" bindtap="miniProgramCode"><text>小程序码</text></view>
		<picker wx:if="{{orderDetail.status==2}}" mode="selector" value="{{sendMethodVal}}" range="{{sendMethodPicker}}" range-key="text" bindchange="bindMethodChange">
			<view class="btn vc" wx:if="{{orderDetail.status==2}}"><text>转发</text></view>
		</picker>
		<view class="btn vc" wx:if="{{orderDetail.status==2}}" bindtap="actionSheetTap"><text>通知客户</text></view>

		<view class="btn vc" wx:if="{{orderDetail.status==4}}" bindtap="doChange"><text>修改</text></view>
	</view>-->
	<action-sheet hidden="{{actionSheetHidden}}" bindchange="actionSheetChange">
		<view style="text-align: center;font-size: 34rpx;line-height: 68rpx;color: #368fdb;">请选择</view>
		<!--<button class="sendWx" open-type="share" bindtap="actionSheetChange">转发微信</button>-->
		<button class="sendWx" bindtap="createShareImg">微信发送给客户</button>
		<button class="sendMsg" bindtap="sendMsg">发送短信给客户</button>
		<!--<block wx:for-items="{{actionSheetItems}}">
			<action-sheet-item class="item" bindtap="bind{{item.bindtap}}">{{item.txt}}</action-sheet-item>
		</block>-->
		<action-sheet-cancel class="cancel">取消</action-sheet-cancel>
	</action-sheet>
  </view>
	<view class="pop p2" wx:if="{{pop_2}}">
			 <view class="pop_container">
						<view class='pop_content'>
							 <view class="t1">切换至 <span class="strong">{{switchGarageName}}</span></view>
							 <view class="t2">切换门店才能进入哦！</view>
						</view>
						<view class="pop_btn"><view class="_confirm" bindtap="_confirm">切换</view></view>
			 </view>

	</view>
  <view class="phoneBtn flex" bindtap="_callingPhone" wx:if="{{orderDetail.contactMobile}}"><image src="../../../images/phone_btn.png"></image><text>联系车主</text></view>
</view>
