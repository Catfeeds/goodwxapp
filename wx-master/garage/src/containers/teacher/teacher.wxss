.page{
  position:absolute;
  top:0;
  bottom:0;
  width:100%;
  height:100%;
  overflow-y:scroll;
  background-image: linear-gradient(-176deg, #368FDB 0%, #605BCF 63%);
  color:#fff;
  text-align:center;
}
.indictor{
position:absolute;
bottom:0.3rem;
font-size: 20rpx;
color: #FFFFFF;
letter-spacing: 0;
line-height: 28rpx;
margin-left:15rpx;
display:inline-block;
}
.title{
  font-size:48rpx;
  position:relative;
}
.addition{
  font-size:28rpx;
  margin:10rpx 0 20rpx;
}
.tip text{
  font-size:24rpx;
  color:#fdffa6;
  display:inline-block;
  vertical-align:middle;
}
.page .btnGroup{
  margin-top:40rpx;
  padding:0 75rpx;
  display:flex;
}
.page .btnGroup .btn{
  flex:1;
  font-size: 32rpx;
  line-height:86rpx;
  border:1px solid #fff;
  border-radius:86rpx;
  text-align:center;
}
.page .btnGroup .nextBtn{
  margin-left:40rpx;
  background:#fff;
  color:#368fdb
}
.page .btnGroup .btn:first-child{
   margin-left:0;
}

.page2{
  text-align:center;
}
.t1{
font-size: 38rpx;
color: #333333;
letter-spacing: 0;
line-height: 38rpx;
margin:30rpx 0 24rpx;
}
.t2{
font-size: 24rpx;
color: #999999;
letter-spacing: 0;
line-height: 24rpx;
}
.page2 .btnGroup{
  padding:40rpx 40rpx 60rpx;
  display:flex;
}
.page2 .btnGroup .btn{
  flex:1;
  line-height:86rpx;
  border:1px solid #368fdb;
  color:#368fdb;
  border-radius:86rpx;
  font-size:32rpx;
}
.page2 .btnGroup .btn:last-child{
   background:#368fdb;
   color:#fff;
   margin-left:40rpx;
}
.mt20{
  margin-top:20rpx;
}
.t3{
  font-size:32rpx;
  padding:30rpx 0;
}
.code image{
   width:270rpx;
   height:270rpx;
   margin-bottom:30rpx;
}
.copyBtn{
   margin:30rpx auto 0;
   padding:10rpx 20rpx;
   color:#368fdb;
   border:1px solid #368fdb;
   border-radius:40rpx;
   width:180rpx;
   font-size:26rpx;

}
.section:first-child{
  padding-top:70rpx;
}
.section:last-child{
  padding-bottom:40rpx;
}
.section{
background:#fff;
}
