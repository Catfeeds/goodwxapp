<view class="wrapper">
   <view class="page" wx:if="{{!status}}">

       <view class='image'><image src="https://pamap-gr.pingan.com.cn/mobile/images/wx/teach_v1/teach{{currentIndex}}.png"></image></view>
       <view class="info">
            <view class="title">{{info[currentIndex-1].title}}<view class='indictor'>({{currentIndex}}/{{total}})</view></view>
            <view class="addition">{{info[currentIndex-1].addition}}</view>
            <view class="tip"><image class="light" src="../../../images/light.png"></image><text>{{info[currentIndex-1].tip}}</text></view>
      </view>
      <view class="btnGroup" ><view class="btn" wx:if="{{currentIndex!=1}}" bindtap="prevStep">上一步</view><view class="btn nextBtn" bindtap="nextStep">{{currentIndex==total?'完成':'下一步'}}</view></view>
   </view>
   <view wx:else class="page2">
       <view class="section">
           <icon type="success" size="70"/>
           <view class="t1">恭喜您，完成学习</view>
           <view class="t2">您还可以在“商户中心-使用指南”中找到我哦～</view>
           <view class="btnGroup"><view class="btn" bindtap="teachAgain">再看一遍</view><view class="btn" bindtap="toGarageList">立即使用</view></view>
       </view>
       <view class="section mt20">
           <view class="t3">平安好汽修客服</view>
           <view class="code"><image src="../../../images/code.png"></image></view>
           <view class="t2">如果有疑问，请联系客服微信：pahqx03</view>
           <view class="copyBtn" bindtap="_copy">复制微信号</view>
       </view>
   </view>
</view>
