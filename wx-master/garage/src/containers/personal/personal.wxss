.personal_top {
	width: 100%;
	background: #fff;
}

.name {
	font-size: 36rpx;
	color: #333;
	font-weight: 600;
	line-height: 50rpx;
}

.orderInfo {
	margin-top: 75rpx;
	padding-bottom: 30rpx;
}

.orderInfo .title {
	line-height: 44rpx;
	font-size: 32rpx;
	font-weight: 600;
	text-align: center;
	color: #555555;
}

.orderInfo>view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1;
}

.orderInfo .number {
	font-weight: 600;

	font-size: 50rpx;
}

.totalOrders {
	border-right: 1px solid #e2e4e6;
}

.menu {
	margin-top: 30rpx;
	padding-left: 30rpx;
	background: #fff;
}

.menu_item{

	display: flex;
	justify-content: space-between;
	align-items: center;
}

.menu_item .menu_title {
	font-size: 34rpx;
	line-height: 86rpx;
}
.menu_item .arrow{
	height: 32rpx;
	width: 40rpx;
	margin-right: 28rpx;
	transform:rotate(-90deg);
	transform-origin:center center;
}
.avator {
	width: 160rpx;
	height: 160rpx;
	border-radius: 100%;
	margin: 0 auto;
	padding: 61rpx 0 17rpx;
}

.avator image {
	width: 150rpx;
	height: 150rpx;
	border: 1rpx solid #eee;
	border-radius: 75rpx;
}
.hc{
-webkit-box-pack:center;
-webkit-justify-content:center;
        justify-content:center;
}
