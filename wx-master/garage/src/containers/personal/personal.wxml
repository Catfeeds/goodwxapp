<view class="container fullPage">
	<view class="personal_top">
		<view class="personInfo">
			<view class="avator">
				<image wx:if="{{photoThumbUrl}}" src="{{photoThumbUrl}}"></image>
        <image wx:else src="../../../images/icon_no_gar_photo.jpg"></image>
			</view>
			<view class="hc"><text class="name">{{garageName}}</text></view>
			<view class="btn" wx:if="{{showChangeGarage}}" bindtap="_showSwitchGarage">切换门店</view>
		</view>
	</view>
	<view class="menu">
		<view class="menu_item b_1" bindtap="_toModelSet">
			<text class="menu_title">模板设置</text>
			<image class="arrow" src="../../../images/arrow-down.png"></image>
		</view>
		<view class="menu_item b_1" bindtap="_teacher">
			<text class="menu_title">使用指南</text>
			<image class="arrow" src="../../../images/arrow-down.png"></image>
		</view>
		<view class="menu_item" bindtap="_about">
			<text class="menu_title">关于接车单</text>
			<image class="arrow" src="../../../images/arrow-down.png"></image>
		</view>
	</view>
	<view class="pop p1" wx:if="{{pop_1}}">
			 <view class="pop_container">
						<view class='pop_title'>请选择要切换的门店</view>
						<view class='pop_content'>
                 <view class="garageList" wx:for="{{garageList}}" wx:key="{{index}}">
                       <view class="garageItem {{item.isCurrentGarage?'active':''}}" bindtap="_switchGarage" data-idGarage="{{item.idGarage}}"><text>{{item.garageName}}</text><icon wx:if="{{item.isCurrentGarage}}" type="success_no_circle" size="30" color="#368FDB" style="height:30px"/></view>
								 </view>
						</view>
						<view class="pop_btn"><view class="cancel" bindtap="_cancel">取消</view></view>
			 </view>

	</view>
</view>
