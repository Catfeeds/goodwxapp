.modal{
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    background:rgba(0,0,0,.5);
    display:flex;
    align-items:center;
    justify-content:center;
}
.wrapper{

}
.item{
    background:#fff;
    padding:0 30rpx;
    height:160rpx;
    border-bottom:1px solid #e5e5e5;
    display:flex;
    align-items:center;
}
.item:first-child{
   border-top:1px solid #e5e5e5;
}
.item .title{
    font-size:32rpx;
}
.item .desc{
   font-size:24rpx;
   color:#999;
}
.modalBtn{
   text-align:center;
   font-size:24rpx;
   margin-top:60rpx;
   color:#0090DE
}
.item .leftImg{
   width:60rpx;
   height:60rpx;
   margin-right:30rpx;
}
.modal .content{
background:#fff;
padding:0 40rpx 70rpx;
}
.modal .content .choice{
  display:flex;
  padding:40rpx 0;
}
.modal .content .choice:first-child{

  border-bottom:1px solid #E2E4E6
}
.modal .choice image{
  width:220rpx;
  height:180rpx;
  margin-right:30rpx;
}
.modal .choice .title{
  font-size:32rpx;
  color:#333;
}
.modal .choice .desc{
   font-size:24rpx;
   color:#999;
}
.modal .choice .add{
   font-size:24rpx;
   color:#666;
}
.btn{
   width:240rpx;
   height:60rpx;
   color:#0090de;
   border:1px solid #0090de;
   margin:0 auto;
   line-height:60rpx;
   border-radius:30rpx;
   text-align:center;
   font-size:32rpx;
}
