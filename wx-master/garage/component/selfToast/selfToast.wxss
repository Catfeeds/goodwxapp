.toast_self{
    position: fixed;
    top:0;
    bottom:0;
    right:0;
    left:0;
    background: transparent;
    display: flex;
    justify-content: center;
    z-index:999;
}
.toast_self_content{
     padding-top:9px;
     width:100px;
     height:108px;
     margin-top:116px;
     background: rgba(0,0,0,0.7);
     color:#fff;
     display:flex;
     align-items: center;
     justify-content: center;
     flex-direction: column;
     border-radius: 8px;
     box-sizing: border-box;
}
.toast_self_content .weui-loading {
    width:40px;
    height:40px;
}
.toast_self_content p{
    margin:10px 0;
    font-size:14px;
}