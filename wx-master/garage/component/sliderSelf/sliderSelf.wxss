/**sliderSelf.wxss**/
.slider_self{
  margin-left:38rpx;
  height:100rpx;
  position: relative;
}
.slider_bar{
   display: -webkit-box;
   display: -webkit-flex;
   display: flex;
   -webkit-box-pack: justify;
   -webkit-justify-content: space-between;
           justify-content: space-between;
  width:492rpx;
  height:4rpx;
  background:#b2b2b2;
  position: relative;
  top:60rpx;
}
.slider_bar_scale{
    -webkit-box-flex:1;
    -webkit-flex:1;
            flex:1;
    position: relative;
    bottom:10rpx;
}
.slider_bar_scale text{
    font-size:32rpx;
    color:#368fdb;
}
.slider_bar_scale:before{
    content:'';
    display: block;
    width:1px;
    background: #b2b2b2;
    height:10rpx;
}
.slider_bar_scale_long:before{
   position: relative;
   bottom:10rpx;
   height:20rpx;
}
.slider_bar_scale:first-child text{
    display: inline-block;
    position: absolute;
    left:-12rpx;
    top:-50rpx;
}
.slider_bar_scale:nth-of-type(6) text{
    display: inline-block;
    position: absolute;
    top:-50rpx;
    left:-20rpx;
}
.slider_bar_scale:last-child text{
    display: inline-block;
    position: absolute;
    top:-50rpx;
    right:-40rpx;
}
.slider_bar_scale:last-child{
   display: -webkit-box;
   display: -webkit-flex;
   display: flex;
   -webkit-box-pack: justify;
   -webkit-justify-content: space-between;
           justify-content: space-between;
}
.slider_bar_scale:last-child:after{
    content:'';
    display: block;
    position: relative;
    bottom:10rpx;
    width:1px;
    background: #b2b2b2;
    height:20rpx;
}
.slider_thumb{
  position:absolute;
  top:0rpx;
  width:50rpx;
  height:100rpx;

}
.slider_thumb::before{
  content:'';
  display: block;
  position: absolute;
  width:4rpx;
  height:80rpx;
  left:23rpx;
  background: #368fdb;
}
.slider_thumb::after{
  content:'';
  display: block;
  position: absolute;
  width:24rpx;
  height:24rpx;
  background: #368fdb;
  bottom:0;
  left:13rpx;
}
