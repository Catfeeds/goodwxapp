/**app.wxss**/
@import "/common/weui.wxss";
@import "/common/iconfont.wxss";

view {
  color: darkgrey;
  font-size: 14px;
  font-family: '微软雅黑';
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 95%;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin: auto;
}

.column_view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.row_view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.left {
  justify-content: flex-start;
}

.right {
  justify-content: flex-end;
}

.row_space_between {
  align-items: space-between;
}

.row_left {
  align-items: flex-start;
}

.row_center {
  align-items: center;
}

.row_full_fill {
  align-items: stretch;
  flex: 1;
}

.column_space_between {
  justify-content: space-between;
}

.column_left {
  justify-content: flex-start;
}

.column_right {
  justify-content: flex-end;
}

.column_center {
  justify-content: center;
}

.column_top {
  align-items: flex-start;
}

.small_icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.time {
  width: 130rpx;
  font-size: 11px;
}

.post_btn {
  display: flex;
  color: black;
  font-size: 11px;
  text-align: center;
  bottom: 40rpx;
  right: 30rpx;
  width: 128rpx;
  height: 128rpx;
  z-index: 9;
  position: fixed;
  background-color: #ffda44;
  border-radius: 50%;
  line-height: 26px;
}

.icon_new_blog {
  color: black;
  font-size: 24px;
  margin-bottom: -16rpx;
}

.type_tab {
  box-sizing: border-box;
  font-size: 11px;
  /* color: #576b95; */
  color: darkgrey;
  margin-left: 4rpx;
  margin-right: 4rpx;
}

.follow {
  color: white;
  background-color: #f86c20;
  padding-left: 3px;
  padding-right: 3px;
  font-size: 11px;
  margin-right: 10rpx;
}

.followed {
  color: darkgrey;
  border: 1px solid darkgrey;
  background: whitesmoke;
}

.hide {
  display: none;
}
