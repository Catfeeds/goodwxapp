/**index.wxss**/
@import "/pages/template/blog_list_item.wxss";
@import "/pages/template/float_comment.wxss";

swiper {
  width: 100%;
  height: 240rpx;
  align-items: center;
  padding-bottom: 20rpx;
}

swiper-item image {
  width: 100%;
  height: 240rpx;
}

.index_scroll {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.type_box {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  margin-top: 5rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  padding-bottom: 20rpx;
}

.type_tab_hover {
  color: rgba(87, 107, 149, 0.4);
}

.type_view {
  width: 25%;
}

.type_img {
  width: 96rpx;
  height: 72rpx;
  border-radius: 5%;
}

.hide {
  display: none;
}
