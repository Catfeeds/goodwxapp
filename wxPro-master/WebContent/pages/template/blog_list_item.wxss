.list_item {
  border-bottom: 1rpx solid #d9d9d9;
  margin-bottom: 20rpx;
}

.weui-cells::after {
  border: 0;
}

.weui-cells::before {
  border: 0;
}

.item_left {
  width: 108rpx;
  padding-right: 10rpx;
}

.row_title {
  width: 88%;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: black;
}

.row_desc {
  font-size: 12px;
}

.user_name {
  width: 100rpx;
  font-size: 12px;
  color: black;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.level {
  font-size: 11px;
}

.honor_icon {
  width: 25rpx;
  height: 35rpx;
}

.thumb_img {
  width: 100rpx;
  height: 100rpx;
  /*border-radius: 5%;*/
}
