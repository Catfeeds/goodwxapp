/* pages/view/view.wxss */

/* 使用scroll-view必须指定高度，或者限制外层page的高度，否则scroll-view会把page自动撑大，滚动失效 */

page {
  height: 100%;
}

.view_scroll {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
  height: 82%;
}

.comment_form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 16%;
  border: 1px solid lightgrey;
}

.user_avatar {
  width: 96rpx;
  height: 96rpx;
  /*margin-left: 110rpx;
  border-radius: 50%;*/
}

.user_nickname {
  color: #aaa;
}

.user_avatar_small {
  width: 64rpx;
  height: 64rpx;
  border-radius: 5%;
}

.title {
  /* width: 100%; */
  font-size: 18px;
  color: black;
}

.desc {
  padding-top: 20rpx;
  width: 100%;
  min-height: 160rpx;
  font-size: 14px;
  color: #353535;
}

.user_name_small {
  font-size: 12px;
  color: black;
}

.comment_left {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.comment_desc {
  font-size: 11px;
  color: #353535;
  flex: 3;
}

.comment_content {
  height: 3em;
}

.honor_icon_small {
  width: 25rpx;
  height: 35rpx;
}

.list_comment_item {
  padding-top: 20rpx;
}

.list_comment_item_right {
  border-bottom: 1rpx solid #d9d9d9;
}

.location_icon {
  width: 50rpx;
  height: 70rpx;
}

.user_info {
  /* border-bottom: 1rpx solid lightgrey;
  margin-bottom: 10rpx; */
  padding-bottom: 10rpx;
}

.user_info_right {
  display: flex;
  flex-direction: column;
  /* border-bottom: 1rpx solid lightgrey;
  margin-bottom: 10rpx; */
  padding-left: 20rpx;
}
