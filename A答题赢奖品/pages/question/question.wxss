/*倒计时*/
Page{
    background:#f9f7ec;
    width:100%;
    height:100%;
    overflow:hidden;
}
.circle {
    width: 100rpx;
    height: 100rpx;
    position:absolute;
    z-index:2;
    top:0rpx;
    right:0rpx;
    transform: translate(40%,-50%);
    border-radius: 50%;
    background:orange;
}
.pie_left, .pie_right {
    width:100rpx;
    height:100rpx;
    position: absolute;
    top: 0;left: 0;
}
.left, .right {
    width:100rpx;
    height:100rpx;
    background:blue;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    transition:all 1s linear;
}
.pie_right, .right {
    clip:rect(0,auto,auto,50rpx);
}
.pie_left, .left {
    clip:rect(0,50rpx,auto,0);

}
.countNum{
    color:blue
}
.mask {
    width: 80rpx;
    height: 80rpx;
    color:black;
    border-radius: 50%;
    left:50%;
    top: 50%;
    transform:translate(-50%,-50%);
    background: #fff;
    position: absolute;
    text-align: center;
    font-size: 60rpx;
    font-weight: bold;
    line-height:80rpx;
}
.head-wrap{
    width:670rpx;
    height:350rpx;
    margin:0 auto;
    background:white;
    border:1px solid green;
    position:relative;
    top:50rpx;
}
#userInfo{
    height:130rpx;
    width:130rpx;
    border-radius:50%;
    background: #53ff90;
    position:absolute;
    top:0;
    left:0;
    transform: translate(-35%,-35%);
}
.grade{
    color:orange;
    font-size:40rpx;
    margin:40rpx 0 0 100rpx;
    line-height:100rpx;
}
.grade text{
    font-size:60rpx;
    font-weight:bold;
    color:blue;
}
.header{
    text-align: left;
    margin: 20rpx 40rpx;
    line-height: 80rpx;
    font-size: 40rpx;
}
.question{
    box-sizing:border-box;
    margin-top:50rpx;
    padding:60rpx 100rpx;
}
.option{
    height: 130rpx;
    text-align:left;
    margin-bottom: 30rpx;
    line-height: 130rpx;
    font-size: 50rpx;
    transition:all .4s;
}
.change{
    width: 100%;
    height: 100rpx;
    display:flex;
}
.alert-wrap{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,.5);
    z-index:6;
}
.wrong-alert{
    position:absolute;
    top:50%;
    left:50%;
    width:70%;
    height:600rpx;
    padding:40rpx;
    background:white;
    transform:translate(-50%,-50%);
}
.wrong-alert icon{
    position:absolute;
    top:0;
    right:0;
    transform:translate(50%,-50%);
    background:#fc0;
    border-radius:50%;
}
.wrong-alert text{
    display:block;
    font-size:30rpx;
    line-height:50rpx;
    text-align:center;
    margin-top:30rpx;
}
.wrong-alert button{
    margin-top:283rpx;
    background:#fc0;
    border-radius:40rpx;
}
#fail{
    width:360rpx;
    position:absolute;
    left:50%;
    top:78rpx;
    transform: translateX(-50%);
}