.content{
    position:relative;
    top:0;
    left:0;
}
.bg-content{
    height:1600rpx;
    width:100%;
}
#banner{
    position:absolute;
    top:0;
    left:0;
    height:500rpx;
    width:100%;
}
#challenge{
    box-sizing:border-box;
    width:422rpx;
    position:absolute;
    bottom:646rpx;
    left:50%;
    transform:translateX(-50%);
}
.share{
    box-sizing:border-box;
    width:80%;
    height:80rpx;
    line-height:80rpx;
    position:absolute;
    color:white;
    background:#020b37;
    left:50%;
    transform:translateX(-50%);
    bottom:670rpx;
    border:1px solid white;
    border-radius: 130rpx/160rpx;
    font-size:30rpx;
    transition:all 1s;
    transform-origin:right;
}
.hover{
    transform:scale(2);
    background:yellow;
}
icon {
  position:relative;
  top:65%;
  transform:translateY(-50%);
}
.prompt{
    width:80%;
    position:absolute;
    top:45rpx;
    right:30rpx;
}
.left-prompt{
    height:50rpx;
    padding:0 90rpx;
    line-height:50rpx;
    background:white;
    border-radius:40rpx;
    float:left;
    font-size:26rpx;
}
.right-prompt{
    height:50rpx;
    margin-right:40rpx;
    font-size:26rpx;
    line-height:50rpx;
    background: #ff3e65;
    float:right;
    color:white;
    border-radius:40rpx;
}
#detail{
    width:100%;
    height:100%;
    position:absolute;
    left:0;
    top:0;
    background:rgba(0,0,0,.5);
}
.detail-main{
    width:80%;
    height:44%;
    background:white;
    margin:200rpx auto;
    padding:40rpx 20rpx;
    position:relative;
}
.item-sign{
    width:50rpx;
    height:50rpx;
    display:inline-block;
    margin-right:30rpx;
    border-radius:50%;
    background:#ff3455;
    color:white;
    line-height:50rpx;
    text-align:center;
}
.item-content{
    font-size:30rpx;
    line-height:60rpx;
}
#detail button{
    height:80rpx;
    line-height:80rpx;
    background:#fc0;
    border-radius:40rpx;
    position:absolute;
    left:50%;
    bottom:40rpx;
    padding:0 80rpx;
    transform:translateX(-50%);
}
#detail icon{
    position:absolute;
    right:0;
    top:0;
    transform: translate(50%,-50%);
    background:#fc0;
    border-radius:50%;
}
.toy-text{
    position:absolute;
    top:1000rpx;
    left:50%;
    transform: translateX(-50%);
    z-index:3;
    width:80%;
    border:1px solid red;
    font-size:45rpx;
    color:red;
    text-align:center;
}
#toy{
    position:relative;
    top:-500rpx;
    width:100%;
    height:4900rpx;
}
