<!--搜索-->
<form bindsubmit="onSearchSubmit" report-submit="true">
    <view class="search-bar flex mt10">
        <view class="input-inner sub">
            <view class="flex search-box">
                <text class="mr5 iconfont icon-search"></text>
                <input type="text" class="sub" placeholder="请输入关键词" focus="{{searchShow}}" bindblur="onHideSearchBlur" confirm-type="搜索" name="keyword" value="{{param.keyword}}" />
                <text class="ml5 iconfont icon-close f12" catchtap="onClearKeywordTap"></text>
            </view>
            <label class="search-show tc grey" wx:if="{{!searchShow}}" catchtap="onShowSearchTap">
                <text class="mr5 iconfont icon-search"></text>
                <text>搜索</text>
            </label>
        </view>
        <button form-type="submit" wx:if="{{searchShow}}" hover-class="active" class="green searchbtn f14">搜索</button>
    </view>
</form>

<!--Banner-->
<template name="category">
    <form report-submit='true' bindsubmit='onNavigateTap'>
        <swiper class="fenlei gridXb mt10" style="height:{{categorys[0].length<6?'216':'372'}}rpx;" indicator-dots="true">
            <swiper-item wx:for="{{categorys}}" wx:key="{{index}}" wx:for-item='categoryGroup'>
                <view class="classify-box clearfix">
                    <button class="classify-list tc" wx:for="{{categoryGroup}}" wx:key="{{item.id}}" data-url="../lists/lists?cid={{item.id}}&title={{item.title}}" form-type='submit'>
                        <image class="list-img" src="{{item.cover}}" mode="aspectFill"></image>
                        <view class="list-text lineText">{{item.title}}</view>
                    </button>
                </view>
            </swiper-item>
        </swiper>
    </form>
</template>

<!--广告位-->
<template name="ad">
    <form report-submit='true' bindsubmit='onAdTap'>
        <button class="adsense tc mt10" wx:if="{{ad_img}}" form-type='submit'>
            <image class="ad-img" src="{{ad_img}}" mode="aspectFill"></image>
            <text class="ad-text f12 write">广告</text>
        </button>
    </form>
</template>

<block wx:if="{{config.ad_sort==1}}">
    <template is="ad" data="{{ad_img:ad_img}}" />
    <template is="category" data="{{categorys:categorys,imgHeight:imgHeight}}" />
</block>
<block wx:else>
    <template is="category" data="{{categorys:categorys,imgHeight:imgHeight}}" />
    <template is="ad" data="{{ad_img:ad_img}}" />
</block>

<view class="tr bgwhite pageviews grey f12" wx:if="{{config.show_statistics}}">
    <text class="mr10">浏览：{{config.view_count}}</text>
    <text class="mr10">发布：{{config.info_count}}</text>
    <text class="mr10">分享：{{config.share_count}}</text>
</view>

<view class="notice mt10 arrowR flex" wx:if="{{config.notices&&config.notices.length}}">
    <view class="red mr10 iconfont icon-notificationfill"></view>
    <swiper class="sub" vertical autoplay circular>
        <swiper-item class="lineText" wx:for="{{config.notices}}" wx:key="{{index}}" data-doc-id="{{item.doc_id}}" catchtap='onNoticeTap'>
            {{item.title}}
        </swiper-item>
    </swiper>
</view>

<!--排序分类-->
<form report-submit='true' bindsubmit='onSwtchTabTap'>
    <view class="tc paixu f16 grey mt10 mb10" id='tab'>
        <view class="flex {{isTabFixed?'fixed-top':''}}">
            <button class="sub title-item {{param.type==0?'active':''}}" data-index="0" form-type='submit'>最新发布</button>
            <button class="sub title-item {{param.type==2?'active':''}}" data-index="2" form-type='submit'>最新回复</button>
            <button class="sub title-item {{param.type==3?'active':''}}" data-index="3" wx:if='{{config.show_wallet_bonus!==0}}' form-type='submit'>红包福利</button>
            <button class="sub title-item {{param.type==1?'active':''}}" data-index="1" form-type='submit'>距离最近</button>
        </view>
    </view>
</form>

<!-- 返回顶部 -->
<view class="return-top arrowT" wx:if='{{canIUse.pageScrollTo}}' hidden='{{!isTabFixed}}' catchtap='onScrollTopTap'></view>

<import src="../tpl.wxml" />
<template is="doc-list" data="{{data,styles,comment,config,hasMore,isLoading}}" />

<!--我要发布-->
<view class="aside-float">
    <block wx:if='{{config.show_push||config.show_push===undefined }}'>
        <button class="iconfont icon-add" type="primary" catchtap="onNavigateTap" data-url="../release/release" data-type="switch" wx:if='{{!config.custom_push_btn}}'></button>
        <button style='font-size:24rpx' type="primary" catchtap="onNavigateTap" data-url="../release/release" data-type="switch" wx:else>{{config.custom_push_btn_text}}</button>
    </block>

    <block wx:if='{{config.show_service||config.show_service===undefined }}'>
        <button class="iconfont icon-kefu" type="primary" open-type='contact' wx:if='{{!config.custom_service_btn}}'></button>
        <button style='font-size:24rpx' type="primary" open-type='contact' wx:else>{{config.custom_service_btn_text}}</button>
    </block>
</view>

<!-- 消息提示 -->
<view class="news-tips" hidden='{{!notNewMsg}}'>您有新的评论消息！</view>

<!-- 新消息弹出框 -->
<view class="floatBox news-pop" hidden='{{!notNewMsg}}'>
    <view class="news-pop-cont mid tc">
        <view class="f16">您有3条未读消息</view>
        <view class="mt15">
            <button class="news-read-btn" size="mini" plain='true'>前去查看</button>
        </view>
    </view>
    <view class="floatBox floatBoxBg"></view>
</view>

<!-- 广告弹框 -->
<import src='../../plug-in/template/tpl.wxml' />
<template is='popup-big' data='{{data:ad_popup}}' />