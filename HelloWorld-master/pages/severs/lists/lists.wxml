<form report-submit='true' bindsubmit='onLoadChooseCateTap'>
    <view class="info-title-box mb10" wx:if='{{categorys.length}}'>
        <scroll-view class="info-title f16 grey" scroll-x="true" style="height:92rpx;">
            <button class="title-item {{childCid==0?'active':''}}" data-cid='0' form-type='submit'>全部</button>
            <button class="title-item {{childCid==item.id?'active':''}}" wx:for='{{categorys}}' wx:key='{{item.id}}' data-cid='{{item.id}}' form-type='submit'>{{item.title}}</button>
        </scroll-view>
    </view>
</form>

<form report-submit='true' bindsubmit='onToggleTagTap'>
    <view class='screen-tags'>
        <button class='tags-item {{item.active?"active":""}}' wx:for='{{tags}}' wx:key='{{index}}' data-index='{{index}}' form-type='submit'>{{item.text}}</button>
    </view>
</form>

<!-- 暂无信息 -->
<form report-submit='true' bindsubmit='onWriteChooseCateTap' wx:if='{{!isLoading && !data.length}}'>
    <view class="no-content tc">
        <image class="no-content-img" src="http://www.ixiaochengxu.cc/resource/images/common/no-message.png" mode="widthFix"></image>
        <view>暂时还没有{{title}}信息~</view>
        <button class="mt15" size='mini' type='primary' form-type='submit'>去发布</button>
    </view>
</form>

<import src="../tpl.wxml" />
<template is="doc-list" data="{{data,comment,config,cate_invalid:true,hasMore,isLoading}}" />

<!--我要发布-->
<view class="aside-float">
    <block wx:if='{{config.show_push||config.show_push===undefined }}'>
        <form report-submit='true' bindsubmit='onWriteChooseCateTap'>
            <button class="iconfont icon-add" type="primary" form-type='submit' wx:if='{{!config.custom_push_btn}}'></button>
            <button style='font-size:24rpx' type="primary" form-type='submit' wx:else>{{config.custom_push_btn_text}}</button>
        </form>
    </block>

    <block wx:if='{{config.show_service||config.show_service===undefined }}'>
        <button class="iconfont icon-kefu" type="primary" open-type='contact' wx:if='{{!config.custom_service_btn}}'></button>
        <button style='font-size:24rpx' type="primary" open-type='contact' wx:else>{{config.custom_service_btn_text}}</button>
    </block>
</view>