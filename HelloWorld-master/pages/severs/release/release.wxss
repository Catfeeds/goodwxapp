/* pages/severs/release/release.wxss */

@import "/css/DuoguanInfo/DuoguanInfo-template-default.wxss";


page{background: #fff;}
button.classify-list{font-size: inherit;line-height: inherit;margin: 0;}
button.classify-list::after{border: none;}
.fenlei {padding: 20rpx 0;}
.classify-list {padding: 20rpx 0;max-width: 20%;min-width: 20%;background: transparent;}
.classify-list .list-img {display: inline-block;width: 90rpx;height: 90rpx;border-radius: 50%;}
.classify-list:active {-webkit-filter: brightness(0.8);filter: brightness(0.8);}

.pup-content {line-height: 92rpx;width: 100%;position: absolute;bottom: 0;left: 0;z-index: 2;transform: translateY(100%);animation: fadeInUp 0.3s 0.3s linear forwards;}
.floatBoxBg{opacity: 0;animation: fadeIn 0.3s linear forwards;}
.pop-item-box{max-height: 552rpx;overflow-y:auto;-webkit-overflow-scrolling: touch;}
.pop-item:active{background: rgba(0, 0, 0, 0.05);}
.pop-item:last-child.gridXb::before {display: none;}
@keyframes fadeIn{
  0%{opacity: 0;}
  100%{opacity: 1;}
}
@keyframes fadeInUp{
  0%{transform: translateY(100%);}
  100%{transform: translateY(0);}
}