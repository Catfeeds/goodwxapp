/* pages/myCenter/shop/shopset/shopset.wxss */
.mobile-col{
    background: #fff;
    padding: 0 15px;
    margin-bottom: 10px;
}
.inner-name{
    position: relative;
}
.mobile-col::after{
    display: block;
    content: "";
    clear: both;
}
.inner-name::before{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: -15px;
    height: 1px;
    background: #ddd;
}
.inner-name:last-child::before{
    height: 0;
    background: none;
}
.mobile-col .label-text{
    float: left;
    line-height: 46px;
    font-size: 15px;
    padding-right: 8px;
}
.mobile-col .inner-intro{
    /* padding-left: 70px; */
    padding-top:8px;
}
.mobile-col .shop-inner{
    position: relative;
    height: 150px;
    padding: 10px 0;
}
.mobile-col .piclist{
    float: left;
    width: 55px;
    height: 55px;
    margin-right:10px;
    margin-bottom:10px;
}
.mobile-col .piclist image{
    display: block;
    width: 100%;
    height: 100%;
}
.shop-inner .inner-pic{
    display: block;
    width: 100%;
    height: 100%;
}
.shop-inner .setinnerpic{
    position: absolute;
    bottom: 20px;
    right:10px;
    display:block;
    color:#fff;
    font-size:13px;
    background:#000;
    opacity:0.6;
    padding:6px 15px;
    border-radius:15px;
}
.inner-intro .label-text{
    font-size: 15px;
    padding-right: 8px;
    padding-top: 9px;
}
.inner-name input{
    font-size: 13px;
    color: #666;
    padding: 10px 0;
}
.block-centent .linktext{
    height:37px;
    padding-left:70px;
    padding-top:9px;
}
.linktext input{
    border:1px solid #ddd;
    border-radius:3px;
    padding-left:5px;
    padding-right:30px;
    font-size: 12px;
    color: #999;
}
.mobile-col .block-tab{
    padding:10px 0;
}
.block-tab .tablist text{
    border:1px solid #ddd;
    font-size: 11px;
    color: #666;
    height: 25px;
    display: inline-block;
    margin-right: 7px;
    line-height: 20px;
    padding: 0 15px;
    margin-bottom: 10px;
    border-radius: 2px;
}
.block-tab .settab input{
    border:1px solid #ddd;
    font-size: 12px;
    margin-right: 20px;
    color: #999;
    border-radius: 2px;
    height: 32px;
    width: 60%;
    float: left;
    padding-left: 7px;
}
.settab .tabaddbtn{
    font-size:14px;
    border-radius:2px;
    border:1px solid #ddd;
    height:32px;
    display:inline-block;
    line-height:32px;
    padding:0 15px;
}
.inner-intro textarea{
    font-size: 13px;
    color: #666;
    width: 100%;
    padding:7px 0;
    height: 110px;
}
.picimg .addicon{
    display: block;
    width: 55px;
    height: 55px;
}
.add-btn{
    margin-top: 25px;
    padding: 0 25px;
    margin-bottom: 15px;
}
.add-btn .btn{
    background: #1AAD16;
    line-height: 38px;
    font-size: 14px;
    color: #fff;
}