<!--pages/circle/issuestate/issuestate.wxml-->
<view class='row-view'>
    <view class='mobile-col' style='padding-bottom:10px'>
        <!-- <view class='label-text'>动态内容</view> -->
        <view class='inner-intro'>
            <textarea bindinput="FamilySce" placeholder='请输入你要发布的内容'></textarea>
        </view>
        <view class='inner-file'>
            <view class='piclist' wx:for="{{FilePaths}}" wx:key=""><image src='{{item}}'></image></view>
            <view class='picimg'>
                <image class='addicon' bindtap='FamilyImg' src='/images/introduce/medium/add.png'></image>
            </view>
        </view>
    </view>

    <view class='add-btn' bindtap='setMyFamily'><button class='btn'>发布</button></view>
</view>

