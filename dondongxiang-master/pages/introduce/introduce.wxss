.top-info {
  position: relative;
  padding: 100px 20px 20px 20px;
  background-color: #ffffff;
}

.top-info .info-photo {
  position: absolute;
  top: 15px;
  left: 10px;
  width: 55px;
  height: 55px;
  border-radius: 50%;
}

.top-info .info-name {
  position: absolute;
  top: 18px;
  left: 75px;
  height: 30px;
  font-size: 15px;
  color: #333333;
  font-weight: bold;
  max-width: 31%;
  white-space: nowrap;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
}

.top-info .info-type {
  position: absolute;
  top: 48px;
  left: 75px;
  height: 25px;
  font-size: 14px;
  color: #999999;
}

.top-info .follow-btn {
  position: absolute;
  top: 15px;
  right: 10px;
  height: 30px;
  line-height: 28px;
  width: 80px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #c5c5c5;
  background-color: #f8f8f8;
  border-radius: 4px;
  color: #678297;
}

.top-info .follow-btn text {
  font-size: 16px;
  vertical-align: 1px;
  margin-right: 4px;
}

.top-info .contact-btn {
  position: absolute;
  top: 53px;
  right: 10px;
  height: 30px;
  line-height: 28px;
  width: 80px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #1aad16;
  background-color: #1aad16;
  border-radius: 4px;
  color: #ffffff;
}

.info-desc {
  font-size: 15px;
  color: #333333;
  line-height: 24px;
}
.info-desc::after{
    display: block;
    clear: both;
    content: "";
}

.info-qrcode {
  position: absolute;
  top: 15px;
  right: 105px;
  height: 60px;
  text-align: center;
}

.info-qrcode image {
  width: 40px;
  height: 40px;
}

.info-qrcode view {
  text-align: center;
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  color: #999999;
}

.info-desc-img {
  position: relative;
  margin-top: 10px;
}

.info-desc-img::before {
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -10px;
  left: -14px;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-right: 10px solid #e6e6e6;
  border-bottom: 10px solid transparent;
}

.info-desc-img::after {
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -10px;
  right: -14px;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-left: 10px solid #e6e6e6;
  border-bottom: 10px solid transparent;
}

.desc-img{
    float: left;
    box-sizing: border-box;
    padding: 0 4px;
}
.desc-img image{
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
}
.desc-img image::after{
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    border:1px solid #ddd;
    content: "";
    bottom: 0;
}

.info-data {
  position: relative;
  width: 100%;
  height: 70px;
  background-color: #ffffff;
  margin: 10px 0;
}

.info-data .info-data-item {
  position: absolute;
  width: 33.33%;
  height: 50px;
  top: 10px;
  bottom: 10px;
  text-align: center;
}

.info-data .info-data-item image {
  width: 24px;
  height: 24px;
}

.info-data-item view {
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  color: #333333;
}

.home-tabs {
  width: 100%;
  height: 50px;
  background: #fff;
  margin-top: 10px;
  border-bottom: 1px solid #efefef;
}
.home-tab-item{
  width: 50%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
  color: #999999;
  float: left;
  position: relative;
}
.home-tab-item.active {
  color: #333333;
}
.home-tab-item.active::after{
  content: '';
  position: absolute;
  width: 80px;
  bottom: 0;
  left: 50%;
  margin-left: -40px;
  height: 2px;
  background-color: #1aad16;
}

.tab-block {
  display: none;
}

.tab-block.active {
  display: block;
}

.arrow-btn, .close-btn, .share-btn, .dong-btn {
  position: fixed;
  bottom: 20px;
  left: 20px;
  width: 40px;
  height: 40px;
  background-color: #acacac;
  border-radius: 50%;
  box-shadow: 0 0 10px #999999;
  display: none;
}

.arrow-btn.active, .close-btn.active, .share-btn.active, .dong-btn.active {
  display: block;
}

.arrow-btn image, .close-btn image {
  width: 20px;
  height: 20px;
  margin: 10px;
}

.share-btn view, .dong-btn view {
  font-size: 11px;
  color: #ffffff;
  line-height: 15px;
  text-align: center;
}

.share-btn {
  left: 80px;
} 

.dong-btn {
  left: 140px;
}

.edit-btn {
  position: fixed;
  bottom: 20px;
  right: 0;
  height: 40px;
  line-height: 40px;
  background-color: #1aad16;
  font-size: 13px;
  color: #ffffff;
  border-radius: 20px 0 0 20px;
  padding: 0 20px;
  box-shadow: 0 5px 10px #999;
}

.goods-list .goods-item {
  width: 50%;
  display: inline-block;
}

.goods-list .goods-item .goods-item-block {
  background-color: #ffffff;
  border: 1px solid #cccccc;
  margin: 10px;
}

.goods-list .goods-item .goods-item-block {
  margin-left: 0;
  margin: 5px;
}

.goods-list .goods-item:first-child .goods-item-block {
  margin-left: 5px;
  margin-right: 5px;
}

.goods-list .goods-item .goods-item-block image {
  width: 100%;
}

.goods-list .goods-item .goods-item-block .goods-title {
  padding: 5px;
  font-size: 14px;
  line-height: 25px;
  height: 25px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333333;
}

.goods-list .goods-item .goods-item-block .goods-price {
  padding: 0 5px 5px;
  font-size: 16px;
  line-height: 20px;
  color: #f41313;
}

.load-more {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #999999;
}

.tab-block{
    background: #fff;
}
.inner-block{
    padding: 10px;
}
.inner-block::after{
    display: block;
    clear: both;
    content: "";
}
.inner-block image{
    height: 100px;
}

.ShowPhoneInfo{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
}
.ShowPhoneInfo .ShowMsgBg{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
}
.ShowPhoneInfo .ShowBulgView{
    position: absolute;
    top: 50%;
    left: 50%;
    background: #fff;
    width: 80%;
    margin-left: -40%;
    border-radius: 4px;
    box-sizing: border-box;
    padding: 15px;
    font-size: 14px;
    color: #333;
    margin-top: -80px;
}
.ShowBulgView .title{
    font-size: 16px;
    padding-bottom: 10px;
    padding-top: 5px;
    line-height: 16px;
}
.ShowBulgView .cent{
    color: #1aad16;
    max-width:70%;
    height: 20px;
    display: inline-block;
    overflow: hidden;
}
.ShowBulgView .label{
    float: left;
}
.ShowBulgView .col-list{
    position: relative;
    padding-top: 8px;
    height: 25px;
    line-height: 25px;
    overflow: hidden;
}
.ShowBulgView .copyBtn{
    position: absolute;
    top: 0;
    right: 0;
    width: 40px;
    height: 22px;
    font-size: 10px;
    line-height: 22px;
    padding: 0;
    color: #678297;
}
.ShowBulgView .phonicon{
    position: absolute;
    top: 10px;
    right: 9px;
    width: 20px;
    height: 20px;
    border-radius: 100%;
}