/* pages/introduce/edit/edit.wxss */
.item-cricle{
    background: #fff;
    padding: 10px;
    position: relative;
    margin-bottom: 10px;
    min-height: 60px;
}
.cricle-col image{
    display: block;
    width: 60px;
    height: 60px;
    float: left;
}
.cricle-col .s-name{
    font-size: 15px;
    color: #333;
    display: block;
    padding-top: 5px;
}
.xs-block .phone{
    padding-top: 3px;
}
.xs-block .phone .input{
    height: 26px;
    font-size: 13px;
}
.cricle-col .xs-block{
    padding-left: 70px;
}
.cricle-col .rigbtn.editbtn{
    position: absolute;
    bottom: 10px;
    right: 10px;
    line-height:26px;
    font-size:13px;
    color:#36cdef;
    z-index: 2;
}
.contact{
    background: #fff;
    margin-bottom: 10px;
}
.contact .itemView{
    position: relative;
    height: 45px;
    overflow: hidden;
    font-size: 13px;
}
.itemView .label{
    display: block;
    width: 70px;
    overflow: hidden;
    height: 45px;
    line-height: 45px;
    text-align: left;
    text-indent: 10px;
    position: relative;
}
.itemView .label::after{
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    content: "*";
    color: red;
    font-size: 14px;
    line-height: 14px;
    margin-top: -9px;
    margin-left: -7px;
}
.itemView .input{
    position: absolute;
    top: 50%;
    left: 70px;
    right: 10px;
    margin-top: -0.7rem;
}
.content{
    background: #fff;
    padding: 10px;
}
.contentText .label{
    display: block;
    float: left;
    width: 60px;
    font-size: 13px;
}
.contentText textarea{
    font-size: 13px;
    margin-left: 60px;
    width: initial;
    padding-top: 1px;
    height: 100px;
}
.content .img-v{
    padding: 10px 0 15px;
}
.upload-img-btn{
    display: block;
    width: 60px;
    height: 60px;
    margin-bottom: 10px;
}
.img-v .img{
    width: 60px;
    height: 60px;
    position: relative;
    float: left;
    margin-right: 10px;
    margin-bottom: 10px;
}
.img-v .img::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 2px;
    border: 1px solid #ddd;
}
.img-v .img image{
    width: 100%;
    height: 100%;
    display: block;
}
.img-v .colse{
    position:absolute;
    top:-3px;
    right:-3px;
    background:#999;
    color:#fff;
    display:block;
    width:16px;
    height:16px;
    line-height:14px;
    text-align:center;
    border-radius:100%;
    font-size:13px;
    z-index: 2;
}
.content .submit{
    margin-bottom: 50px;
}