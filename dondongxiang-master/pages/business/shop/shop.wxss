.cover-block {
  position: relative;
}

.cover-block .cover-mask {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
}

.cover-block .cover-title {
  position: absolute;
  bottom: 10px;
  left: 10px;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
  color: #ffffff;
}
.merchant-info {
  background-color: #ffffff;
  position: relative;
  margin-bottom: 10px;
}

.merchant-info .merchant-title {
  height: 39px;
  line-height: 40px;
  border-bottom: 1px solid #e5e5e5;
  font-size: 15px;
  color: #999999;
  padding: 0 10px;
}

.merchant-info .merchant-name {
  padding: 0 10px;
  height: 30px;
  margin-top: 10px;
  font-size: 16px;
  color: #333333;
  line-height: 30px;
}

.merchant-info .merchant-address {
  padding: 0 10px;
  height: 30px;
  font-size: 16px;
  color: #999999;
  line-height: 30px;
  padding-right: 60px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.merchant-info .merchant-distance {
  padding-left: 30px;
  height: 30px;
  font-size: 16px;
  color: #999999;
  line-height: 30px;
  position: relative;
}

.merchant-info .merchant-distance image {
  position: absolute;
  width: 16px;
  height: 16px;
  top: 7px;
  left: 12px;
}

.merchant-info .merchant-mobile {
  position: absolute;
  width: 30px;
  height: 30px;
  top: 75px;
  right: 20px;
}

.merchant-info .merchant-desc {
  padding: 10px;
  line-height: 24px;
  font-size: 15px;
  color: #333333;
}

.merchant-info .desc-closed, .merchant-info .desc-opened {
  padding: 10px;
  text-align: center;
}

.merchant-info .desc-closed image, .merchant-info .desc-opened image {
  width: 20px;
  height: 20px;
}

.merchant-info .desc-opened {
  display: none;
}

.merchant-info .desc-opened.opened {
  display: block;
}

.merchant-info .desc-closed.opened {
  display: none;
}

.merchant-info .merchant-desc.closed {
  height: 40px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.filter-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 49px;
  background-color: #ffffff;
  border-bottom: 1px solid #cccccc;
}

.filter-box .filter-item {
  position: absolute;
  top: 10px;
  bottom: 10px;
  width: 25%;
  text-align: center;
}

.filter-item .filter-item-text {
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #666666;
  position: relative;
  display: inline-block;
}

.filter-item .filter-item-text.price-text {
  padding-right: 20px;
}

.filter-item .filter-item-text.price-text::before {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-top: 5px solid #999999;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  top: 16px;
  right: 0;
}

.filter-item .filter-item-text.price-text::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-bottom: 5px solid #999999;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  top: 8px;
  right: 0;
}

.filter-item.active.top .filter-item-text.price-text::before {
  border-top: 5px solid #f41313;
}

.filter-item.active.bottom .filter-item-text.price-text::after {
  border-bottom: 5px solid #f41313;
}

.filter-item .filter-item-text.filter-text, .filter-item .filter-item-text.filterup-text {
  padding-right: 20px;
}

.filter-item .filter-item-text.filter-text::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-top: 6px solid #999999;
  border-right: 6px solid transparent;
  border-left: 6px solid transparent;
  top: 10px;
  right: 0;
}

.filter-item .filter-item-text.filterup-text::after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-bottom: 6px solid #999999;
  border-right: 6px solid transparent;
  border-left: 6px solid transparent;
  top: 13px;
  right: 0;
}

.filter-item.active .filter-item-text.filter-text::after {
  border-top: 6px solid #f41313;
}

.filter-item.active .filter-item-text.filterup-text::after {
  border-bottom: 6px solid #f41313;
}

.filter-item.active .filter-item-text {
  color: #f41313;
}

.filter-item .filter-item-text image {
  width: 14px;
  height: 14px;
  position: absolute;
  top: 8px;
  right: 0;
}

.goods-list .goods-item {
  width: 50%;
  display: inline-block;
}

.goods-list .goods-item .goods-item-block {
  background-color: #ffffff;
  border: 1px solid #cccccc;
  margin: 10px;
}

.goods-list .goods-item .goods-item-block {
  margin-left: 0;
  margin: 5px;
}

.goods-list .goods-item:first-child .goods-item-block {
  margin-left: 5px;
  margin-right: 5px;
}

.goods-list .goods-item .goods-item-block image {
  width: 100%;
}

.goods-list .goods-item .goods-item-block .goods-title {
  padding: 5px;
  font-size: 14px;
  line-height: 25px;
  height: 25px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333333;
}

.goods-list .goods-item .goods-item-block .goods-price {
  padding: 0 5px 5px;
  font-size: 16px;
  line-height: 20px;
  color: #f41313;
}

.load-more {
