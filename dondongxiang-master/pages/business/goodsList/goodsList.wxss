.goods-list .goods-item {
  width: 50%;
  display: inline-block;
}

.goods-list .goods-item .goods-item-block {
  background-color: #ffffff;
  border: 1px solid #cccccc;
  margin: 10px;
}

.goods-list .goods-item .goods-item-block {
  margin-left: 0;
  margin-right: 5px;
}

.goods-list .goods-item:first-child .goods-item-block {
  margin-left: 5px;
  margin-right: 5px;
}

.goods-list .goods-item .goods-item-block image {
  width: 100%;
}

.goods-list .goods-item .goods-item-block .goods-title {
  padding: 5px;
  font-size: 14px;
  line-height: 25px;
  height: 25px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333333;
}

.goods-list .goods-item .goods-item-block .goods-price {
  padding: 0 5px 5px;
  font-size: 16px;
  line-height: 20px;
  color: #f41313;
}

.selectlist{
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    z-index: 9;
    background: #fff;
}
.selectlist .col-list{
    float: left;
    width: 50%;
    text-align: center;
    height: 40px;
    line-height: 40px;
    font-size: 15px;
    overflow: hidden;
}
.selectlist-hide{
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 8;
    background: #000;
    opacity: 0.5;
}

.load-more {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #999999;
}