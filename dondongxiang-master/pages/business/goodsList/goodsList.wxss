.goods-box{
    padding-top: 100px;
}
.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #efefef;
}

.search-box .search-input {
  position:relative;
  margin:9px 10px;
  height:34px;
  background:#fff;
  border-radius:3px;
}

.search-box .search-input .search-icon {
  position: absolute;
  width: 14px;
  height: 14px;
  top: 8px;
  left: 10px;
}

.search-box .search-input .input-block {
  position: absolute;
  top: 0;
  left: 30px;
  right: 10px;
  bottom: 0;
}

.search-box .search-input .input-block input {
  width: 100%;
  height: 34px;
  font-size: 14px;
}

.filter-item .item-text{
    position: relative;
}
.item-text.item-sec{
    padding-right: 13px;
}
.item-text.item-sec::before{
    display: block;
    content: "";
    position: absolute;
    top: 10px;
    right: 0;
    width: 0;
    height: 0;
    border-top: 5px solid #f41313;
    border-right: 5px solid transparent;
    border-left: 5px solid transparent;
}

.filter-box {
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  height: 49px;
  background-color: #ffffff;
  border-bottom: 1px solid #cccccc;
}

.filter-box .filter-item {
  width: 25%;
  text-align: center;
  float: left;
  position: relative;
  height:50px;
  line-height:50px;
}
.filter-box .filter-item.active{
    color: #f41313;
}
.filter-box .filter-item::after{
    display: block;
    clear: both;
    content: "";
}

