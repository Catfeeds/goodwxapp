.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #efefef;
}

.search-box .search-input {
  position: relative;
  margin: 10px 15px;
  height: 30px;
  background-color: #ffffff;
  border-radius: 15px;
}

.search-box .search-input .search-icon {
  position: absolute;
  width: 14px;
  height: 14px;
  top: 8px;
  left: 10px;
}

.search-box .search-input .input-block {
  position: absolute;
  top: 0;
  left: 30px;
  right: 10px;
  bottom: 0;
}

.search-box .search-input .input-block input {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}

.category-item {
  text-align: center;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  position: relative;
  background-color: #f0f0f0;
  border-bottom: 1px solid #ffffff;
  color: #666666;
}

.category-item.active {
  background-color: #ffffff;
}

.category-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 3px;
  background-color: #f41313;
}

.product-item{
  width: 33.33%;
  display: inline-block;
  margin: 10px 0;
  display: none;
}
.product-item.active{
    display: block;
}

.product-item .product-img {
  width: 80%;
  margin: 5px auto;
  display: block;
}

.product-item .product-title {
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  text-align: center;
}