<view class="search-box">
  <view class="search-input">
    <image class="search-icon" src="/images/icon_normal_search.png"></image>
    <view class="input-block">
      <input type='text' placeholder='输入你想搜索的产品类目'></input>
    </view>
  </view>
</view>
<view class="fix-box" style='top:50px;background-color:#f0f0f0;width:100px;'>
  <view class="relative-box">
    <scroll-view scroll-y style='width:100%;height:100%;'>
      <view class="category-item {{currentTab==0 ? 'active' : ''}}" bindtap='changeActive' data-current="0">iOS教程</view>
      <view class="category-item {{currentTab==1 ? 'active' : ''}}" bindtap='changeActive' data-current="1">安卓教程</view>
      <view class="category-item {{currentTab==2 ? 'active' : ''}}" bindtap='changeActive' data-current="2">H5教程</view>
      <view class="category-item {{currentTab==3 ? 'active' : ''}}" bindtap='changeActive' data-current="3">PHP教程</view>
      <view class="category-item {{currentTab==4 ? 'active' : ''}}" bindtap='changeActive' data-current="4">Python</view>
      <view class="category-item {{currentTab==5 ? 'active' : ''}}" bindtap='changeActive' data-current="5">Maya</view>
      <view class="category-item {{currentTab==6 ? 'active' : ''}}" bindtap='changeActive' data-current="6">其他</view>
    </scroll-view>
  </view>
</view>
