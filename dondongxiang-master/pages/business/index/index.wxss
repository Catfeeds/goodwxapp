.relative-box{
    background: #fff;
}
.block-btn{
    text-align: center;
    font-size: 14px;
    line-height: 45px;
    height: 45px;
    overflow: hidden;
    color: #999;
}
.block-title{
    height: 35px;
    line-height: 35px;
    overflow: hidden;
    font-size: 13px;
    position: relative;
    text-indent: 20px;
}
.block-title::after{
    display: block;
    content: "";
    position: absolute;
    top: 7px;
    left: 10px;
    bottom: 7px;
    width: 3px;
    background: #1aad16;
}
.block-body .col-list:first-child{
    border-top: 1px solid #ddd;
}
.block-body .col-list{
    padding: 10px;
    position: relative;
}
.block-body .col-list::before{
    display: block;
    content: "";
    position: absolute;
    right: 0;
    left: 10px;
    bottom: 0;
    height: 1px;
    background: #ddd;
}
.block-body .col-list:last-child::before{
    left: 0;
}
.col-list .photo-img,.col-list .photo-img .img{
    display: block;
    width: 60px;
    height: 60px;
    border-radius: 100%;
}
.col-list .photo-img{
    float: right;
    position: relative;
    width: 20%;
}
.photo-img .vipimg{
    display: block;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 2;
    width: 18px;
    height: 18px;
}
.col-list .xs-item{
    font-size: 15px;
    float: left;
    width: 80%;
}
.xs-item .divide{
    padding: 0 5px;
}
.xs-item .coo-name{
    line-height: 18px;
    height: 18px;
    overflow: hidden;
    padding-top: 4px;
}
.xs-item .coo-centent{
    font-size: 12px;
    color: #999;
    line-height: 18px;
    height: 18px;
    overflow: hidden;
    margin-top: 2px;
}
 .tion-desc{
    font-size: 12px;
    color: #999;
    line-height:18px;
    height:18px;
    overflow:hidden;
    margin-top: 1px;
}
.store-list::after,.col-xs::after,.col-list::after{
    display: block;
    clear: both;
    content: "";
}
.store-list{
    padding-right: 2%;
    padding-bottom:5px;
}
.one-product{
    border:1px solid #ddd;
    float:left;
    margin-left:2%;
    width: 48%;
    box-sizing: border-box;
    margin-bottom: 8px;
    padding: 5px;
}
.product-img,.product-img image{
    display: block;
    width: 100%;
    max-height: 130px;
}
.price-wrap{
    padding: 6px;
}
.price-wrap .g_price{
    display: block;
    color: red;
    line-height: 16px;
    margin-top: 6px;
}
.price-wrap .g_text{
    display: block;
    height: 36px;
    line-height: 18px;
    font-size: 15px;
    color: #666;
    overflow: hidden;
}
.col-body .name{
    font-size:16px;
    color:#333;
    line-height:20px;
    height:20px;
    overflow:hidden;
}
.shopinfo{
    padding-top:4px;
    height:21px;
    line-height:21px;
    overflow:hidden;
}
.shopinfo .goodicon{
    float:left;
    margin-right:4px;
}
.shopinfo .goodicon image{
    display:block;
    float:left;
    width:18px;
    height:18px;
}
.mean{
    font-size: 13px;
    color: #999;
}
.pay-info{
    margin-top:3px;
    height:20px;
    line-height:20px;
    overflow:hidden;
    font-size: 13px;
    color: #999;
}
.pay-info .mag{
    background:#ddd;
    color:#fff;
    font-size:10px;
    padding:0 3px;
    margin-right:7px;
}
.xs-info{
    font-size: 13px;
    color: #999;
}
