.search-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 8px 10px;
  background: #efefef;
}

.search-box .search-input {
  position: relative;
  height: 34px;
  border-radius: 20px;
  background: #fff;
}

.search-box .search-input .search-icon {
  position: absolute;
  width: 16px;
  height: 16px;
  top: 9px;
  left: 14px;
}

.search-box .search-input .input-block {
  position: absolute;
  top: 0;
  left: 40px;
  right: 10px;
  bottom: 0;
}

.search-box .search-input .input-block input {
  width: 100%;
  height: 34px;
  line-height: 34px;
  font-size: 13px;
}

.filter-box {
  position: fixed;
  top: 50px;
  left: 0;
  right: 0;
  height: 45px;
  background: #fff;
  border-bottom: 1px solid #ddd;
}

.filter-box .filter-item {
  position: absolute;
  top: 10px;
  bottom: 10px;
  width: 33.33%;
  border-right: 1px solid #cccccc;
  text-align: center;
}

.filter-box .filter-item:last-child {
  border: 0;
}

.filter-item .filter-item-text {
  height: 30px;
  line-height: 27px;
  font-size: 14px;
  color: #666666;
  padding-right: 20px;
  position: relative;
  display: inline-block;
}

.filter-item .filter-item-text image {
  width: 14px;
  height: 14px;
  position: absolute;
  top: 6px;
  right: 0;
}

.ration-item{
  position: relative;
  background: #fff;
  padding: 10px;
  font-size: 15px;
}
.ration-item::after{
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 10px;
  height: 1px;
  background: #efefef;
}
.ration-img{
    width: 60px;
    height: 60px;
    float: left;
    position: relative;
}
.ration-img .ration-photo{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.ration-img .ration-vip{
    position: absolute;
    top: 0;
    right: 0;
    width: 15px;
    height: 15px;
    display: block;
}
.ration-title,.ration-desc,.ration-type{
    padding-left: 10px;
}
.ration-title{
    line-height: 20px;
    height: 20px;
    overflow: hidden;
    margin-bottom: 5px;
}
.ration-type,.ration-desc{
    font-size: 13px;
    color: #999;
    line-height: 16px;
    height: 16px;
    overflow: hidden;
    margin-top: 2px;
}
.time-select{
    position: fixed;
    right: 0;
    bottom: 50px;
    z-index: 999;
}
.load-more{
    text-align: center;
    line-height:40px;
    font-size:15px;
    color:#999;
}
.time-select-item{
    background: #bbb;
    height: 34px;
    line-height: 34px;
    font-size: 14px;
    color: #fff;
    text-align: center;
    margin-top: 8px;
    border-radius: 18px 0 0 18px;
    padding: 0 15px;
}