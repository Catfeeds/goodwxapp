/* pages/business/ShopList/ShopList'.wxss */
.search-block{
    background:#fff;
    padding:10px 15px 10px 40px;
    position:fixed;
    top:0;
    left:0;
    right:0;
    z-index:99;
}
.searchmap{
    display: block;
    width:25px;
    height:25px;
    position:absolute;
    top:18px;
    left:10px;
}
.search-block .search-input{
    background:#eaeaea;
    border:1px solid #ddd;
    border-radius:4px;
    position:relative;
}
.search-input .sea-icon{
    width:20px;
    height:20px;
    display:block;
    position:absolute;
    top:9px;
    left:10px;
}
.search-input .text{
    height:37px;
    margin-left:40px;
    font-size:14px;
    padding-right:8px;
    padding-top:1px;
}
.search-block .search-data{
    background:#fff;
    position:absolute;
    top:60px;
    left:0;
    right:0;
}
.search-block .search-data::after,.row-list::after,.row-list .goodicon::after{
    display: block;
    content: "";
    clear: both;
}
.search-data .col-tab{
    float: left;
    width: 25%;
    line-height: 35px;
    text-align: center;
}
.search-data .col-tab .icon{
    width: 15px;
    height: 15px;
    vertical-align: middle;
    margin-left: 3px;
}
.search-data .col-tab .text{
    font-size: 13px;
    color: #999;
}
.row-view{
    margin-top: 107px;
}
.row-view .row-list{
    position: relative;
    padding: 10px;
    background: #fff;
}
.row-view .row-list::before{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    right: 0px;
    left: 10px;
    height: 1px;
    background: #ddd;
}
.row-view .row-list:last-child::before{
    background: none;
    height: 0;
}
.row-list .col-xs-8{
    float: left;
    width: 80%;
}

.row-list .goodicon image{
    display: block;
    float: left;
    width: 18px;
    height: 18px;
}
.row-list .col-xs-2{
    float: right;
    width: 20%;
    font-size: 13px;
    color: #999;
    padding-top: 20px;
}
.row-list .shopimg{
    width: 70px;
    height: 70px;
    float: left;
}
.row-list .goodicon{
    float: left;
    margin-right: 4px;
}
.row-list .shopinfo{
    padding-top: 4px;
    height: 21px;
    line-height: 21px;
    overflow: hidden;
}
.row-list .shopimg image{
    display: block;
    width: 100%;
    height: 100%;
}
.row-list .col-body{
    padding-left: 80px;
    font-size: 14px;
    color: #999;
}
.row-list .col-body .name{
    font-size:16px;
    color:#333;
    line-height:20px;
    height:20px;
    overflow: hidden;
}
.row-list .pay-info{
    margin-top: 3px;
    height: 20px;
    line-height: 20px;
    overflow: hidden;
}
.row-list .pay-info .mag{
    background:#ddd;
    color:#fff;
    font-size:12px;
    padding:0 3px;
    margin-right:7px;
}
