/* pages/friends/friends.wxss */
.search-block{
    margin-bottom: 10px;
    background: #fff;
    padding: 10px 15px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 99;
}
.search-block .search-info{
    background: #eaeaea;
    border: 1px solid #ddd;
    border-radius: 4px;
    position: relative;
}
.search-info .sea-icon{
    width:20px;
    height:20px;
    display: block;
    position: absolute;
    top: 9px;
    left: 10px;
}
.search-info .text{
    height:37px;
    margin-left:40px;
    font-size:14px;
    padding-right:8px;
    padding-top: 1px;
}
.item-list{
    background: #fff;
    position: relative;
    padding: 8px;
}
.container{
    margin-top: 70px;
    border-bottom: 1px solid #ddd;
}
.item-list::after{
    display: block;
    content: "";
    position: absolute;
    left: 10px;
    right: 0;
    bottom: 0;
    height: 1px;
    background: #ddd;
}
.item-list:last-child::after{
    background: #fff;
}
.body-cent{
    position: relative;
}
.right-phone{
    position: absolute;
    top: 0;
    right: 0;
    width: 36px;
    height: 100%;
    overflow: hidden;
    z-index: 5;
}
.right-phone image{
    display: block;
    width: 26px;
    height: 26px;
    margin-top: 20px;
}
.body-cent .fripic{
    width: 50px;
    height: 50px;
    float: left;
}
.body-cent .fripic image{
    display: block;
    width: 100%;
    height: 100%;
}
.rightcent{
    padding-left: 58px;
    min-height: 50px;
    position: relative;
    margin-right: 40px;
}
.rightcent .frititle{
    font-size: 15px;
    color: #333;
    line-height: 18px;
    overflow: hidden;
    height: 18px;
    margin-bottom: 10px;
    padding-top: 3px;
}
.rightcent .fritext{
    font-size: 12px;
    color: #999;
    height: 15px;
    overflow: hidden;
}