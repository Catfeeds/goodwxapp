/* pages/myCenter/shop/GoodsAdmin/GoodsAdmin.wxss */
.Goods-bar{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 99;
    height: 45px;
}
.Goods-bar .tab-xs-4{
    float: left;
    width: 50%;
    text-align: center;
    height: 45px;
    line-height: 45px;
    font-size: 15px;
    color: #333;
}
.tab-xs-4 .msg{
    color: red;
    padding-left: 3px;
}
.tab-xs-4.active .initl{
    position: relative;
    display: inline-block;
}
.tab-xs-4.active .initl::after{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: red;
}
.Goods-item{
    padding-top: 55px;
}
.good-list{
    border-bottom: 1px solid #ddd;
    position: relative;
    padding: 10px;
    background: #fff;
}
.good-list:last-child{
    border-bottom: none;
}
.good-img{
    width: 60px;
    height: 60px;
    float: left;
    border:1px solid #ddd;
    border-radius: 3px;
}
.good-img image{
    display: block;
    width: 100%;
    height: 100%;
}
.good-info{
    padding-left: 70px;
    font-size: 14px;
    color: #999;
    min-height: 62px;
}
.good-info .name{
    font-size: 16px;
    color: #333;
    line-height: 16px;
    height: 16px;
    overflow: hidden;
    padding-top: 3px;
    margin-bottom: 5px;
}
.good-info .price{
    color: red;
    line-height: 16px;
    margin-bottom: 1px;
}
.good-list .arrowicon{
    position: absolute;
    top: 33px;
    right: 10px;
    width: 20px;
    height: 20px;
    display: block;
}
.good-list .arrowicon.eit{
    top: 20px;
    width: 30px;
    height: 30px;
}
.Goods-item .col-xs{
    display: none;
}
.Goods-item .col-xs.active{
    display: block;
}
.good-list .foot-bar{
    font-size: 16px;
    text-align: right;
    padding-top: 10px;
    position: relative;
    margin-top: 10px;
}
.good-list .foot-bar::before{
    display: block;
    content: "";
    background: #ddd;
    height: 1px;
    position: absolute;
    top: 0;
    left: -10px;
    right: -10px;
}
.foot-bar .barbtn{
    color: #fff;
    display: inline-block;
    margin-left: 5px;
    text-align: center;
    height: 35px;
    line-height: 35px;
    padding: 0 15px;
    border-radius: 4px;
}
.foot-bar .addbtn{
    background: #ff9600;
}
.foot-bar .delbtn{
    background: #f41213;
}
.good-list.initl{
    border-bottom: none;
    margin-bottom: 10px;
}
.good-list .item-bar{
    margin-top: 10px;
    padding-top: 10px;
    border-top: 1px solid #ddd;
}
.good-list .item-bar::after{
    display: block;
    content: "";
    clear: both;
}
.item-bar .bar-btn{
    float: right;
    height: 30px;
    text-align: center;
    line-height: 30px;
    font-size: 13px;
    background: #ff9600;
    border-radius: 3px;
    padding: 0 10px;
    color: #fff;
    margin-left: 10px;
}
.footmsgtext{
    text-align: center;
    padding: 15px 0;
}