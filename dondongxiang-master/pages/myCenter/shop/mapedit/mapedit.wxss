/* pages/myCenter/shop/mapedit/mapedit.wxss */
.infolist{
    background: #fff;
    position: relative;
    padding: 10px;
    border-bottom: 1px solid #ddd;
}
.infolist .l-label{
    width:95px;
    font-size:16px;
    float:left;
    height:30px;
    line-height:30px;
}
.infolist .r-inputtext{
    min-height: 30px;
    padding-left: 95px;
}
.infolist .r-inputtext input{
    font-size: 13px;
    color: #999;
}
.infolist .r-inputtext .text{
    color: #999;
    font-size: 14px;
    display: block;
    padding: 6px 5px; 
}
.infolist .r-inputtext textarea{
    font-size: 14px;
    color:#999;
    padding-top:6px;
    width: 100%;
    display: block;
}
.infolist .rigtharrow{
    position: absolute;
    top: 50%;
    right: 5px;
    width: 24px;
    height: 24px;
    margin-top: -12px;
    display: block;
}
.r-inputtext.switch{
    position: absolute;
    top: 50%;
    right: 10px;
    margin-top: -16px;
}
.infolist .msg{
    font-size: 12px;
    color: #999;
}
.stitebtn{
    line-height: 40px;
    height: 40px;
    font-size: 15px;
    background: #f41313;
    color: #fff;
    text-align: center;
    position: fixed;
    bottom: 50px;
    left: 20px;
    right: 20px;
    border-radius: 4px;
}

.picker-view{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    top: 0;
    z-index: 99;
}
.picker-view .picker-mag{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
}
.picker-view .picker-wrep{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 55%;
    background: #fff;
}
.picker-wrep .wrep-title{
    position: relative;
    height: 45px;
    line-height: 45px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    font-size: 18px;
    color: #333;
}
.picker-wrep .wrep-title .coles{
    position: absolute;
    top: 0;
    right: 0;
    width: 45px;
    height: 100%;
    text-align: center;
    color: #999;
}
.picker-wrep .wrep-ber{
    height: 45px;
    line-height: 45px;
    font-size: 15px;
    border-bottom: 1px solid #ddd;
    padding: 0 10px;
}
.picker-wrep .wrep-ber .tab{
    margin-right:15px;
    position: relative;
    float: left;
    display: block;
}
.wrep-ber .tab.active{
    color: #fa650a;
}
.wrep-ber .tab.active::after{
    display: block;
    content: "";
    height: 2px;
    background: #fa650a;
    left: 0;
    right: 0;
    bottom: 0;
    position: absolute;
}
.picker-center .list{
    font-size: 15px;
    color: #333;
    padding: 10px;
}
.picker-center .list text.active{
    color: #fa650a;
}