.tab-block {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50px;
  background-color: #ffffff;
}

.tab-item {
  position: relative;
  width: 20%;
  line-height: 50px;
  font-size: 13px;
  text-align: center;
  color: #333333;
  float: left;
}
.tab-item::after{
    display: block;
    clear: both;
    content: "";
}

.tab-item.active {
  color: #f41313;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 3px;
  right: 3px;
  height: 2px;
  background-color: #f41313;
}

.order-block{
  position: absolute;
  top: 50px;
  left: 0;
  right: 0;
}

.footmsgtext{
    text-align: center;
    padding: 15px 0;
}

.order-item {
  margin-top: 10px;
  background-color: #ffffff;
}

.order-item .order-num-block {
  position: relative;
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #efefef;
}

.order-item .order-num-block .order-num {
  position: absolute;
  top: 10px;
  left: 10px;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
  color: #333;
  overflow: hidden;
}
.order-num-block .order-num text{
    display: inline-block;
    font-size: 12px;
}

.order-item .order-num-block .order-status {
  position: absolute;
  top: 10px;
  right: 10px;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #f41313;
}

.order-item .goods-info {
  position: relative;
  width: 100%;
  height: 100px;
}

.order-item .goods-info image {
  position: absolute;
  top: 10px;
  left: 10px;
  width: 78px;
  height: 78px;
  border: 1px solid #cccccc;
}

.goods-title {
  position: absolute;
  top: 10px;
  left: 100px;
  right: 10px;
  height: 30px;
  line-height: 30px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333333;
  font-size: 16px;
}

.goods-type {
  position: absolute;
  top: 45px;
  left: 100px;
  right: 10px;
  height: 20px;
  line-height: 20px;
  color: #999999;
  font-size: 14px;
}

.goods-price {
  position: absolute;
  top: 70px;
  left: 100px;
  right: 10px;
  height: 20px;
  line-height: 20px;
  color: #f41313;
  font-size: 15px;
}

.goods-num {
  position: absolute;
  top: 70px;
  right: 10px;
  height: 20px;
  line-height: 20px;
  color: #999999;
  font-size: 15px;
}

.order-info {
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
  border-top: 1px solid #efefef;
  font-size: 14px;
  color: #666666;
  text-align: right;
}
.order-info .delorder{
    border:1px solid #f41313;
    color: #f41313;
    padding: 2px 10px;
}

.order-info text {
  font-size: 15px;
  margin: 0 5px;
}