.save-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 50%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 16px;
  color: #ffffff;
  background-color: #ff9600;
}
.form-picker .picker{
    position:absolute;
    top:0;
    right:30px;
    width:80%;
    bottom:0;
    text-align:right;
    line-height:40px;
    font-size: 16px;
    color: #999;
}
.form-item .form-arrow{
    position: absolute;
    top: 8px;
    right: 5px;
    width: 25px;
    height: 25px;
    display: block;
}

.continue-btn {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 50%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 16px;
  color: #ffffff;
  background-color: #f41313;
}

.publish-form {
  background-color: #ffffff;
}

.image-list {
  height: 100px;
}

.image-list .image-block-item, .image-list .image-block-add {
  width: 100px;
  height: 100px;
  display:block;
  position: relative;
  float: left;
}

.image-list .image-block-item image {
  width: 78px;
  height: 78px;
  border: 1px solid #efefef;
  position: absolute;
  top: 10px;
  left: 10px;
}

.image-list .image-block-item .image-delete {
  position: absolute;
  top: 2px;
  right: 2px;
  width: 20px;
  height: 20px;
  background-color: #d7d7d7;
  color: #ffffff;
  line-height: 18px;
  text-align: center;
  border-radius: 10px;
  font-size: 14px;
}

.image-list .image-block-add .image-add-btn {
  width: 78px;
  height: 78px;
  border: 1px solid #efefef;
  position: absolute;
  top: 10px;
  left: 10px; 
  color: #999999;
  line-height: 78px;
  text-align: center;
  font-size: 30px;
}

.form-item {
  height: 40px;
  width: 100%;
  position: relative;
  border-top: 1px solid #efefef;
  box-sizing: border-box;
}

.form-item .form-item-name {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  color: #333333;
  line-height: 20px;
}

.form-item .form-item-value {
  position: absolute;
  top: 7px;
  left: 100px;
  right: 10px;
}

.form-item .form-item-value input {
  height: 26px;
  width: 100%;
  text-align: right;
  font-size: 15px;
  color: #999999;
  line-height: 20px;
}

.section__title {
  margin: 20rpx;
}

.section {
  width: 100%;
  font-size: 35rpx;
  margin: 10rpx;
  color: #000;
}
.form-item .pro-desc{
    margin-top: 30px;
    padding-bottom: 15px;
}
.form-item .pro-desc textarea{
    display: block;
    width: 100%;
    font-size: 15px;
}
.form-item .img-v::after{
    display: block;
    content: "";
    clear: both;
}
.form-item .img-v .img{
    width: 80px;
    height: 80px;
    float: left;
    position: relative;
    margin-bottom: 10px;
    margin-right: 10px;
}
.form-item .img-v .img image{
    display: block;
    width: 100%;
    height: 100%;
}
.form-item .img-v .img .colse{
    display: block;
    width: 20px;
    height: 20px;
    text-align: center;
    line-height: 20px;
    color: #fff;
    background: #ddd;
    border-radius: 100%;
    position: absolute;
    top: -5px;
    right: -5px;
}