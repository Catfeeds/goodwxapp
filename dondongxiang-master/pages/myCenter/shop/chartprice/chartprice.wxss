/* pages/myCenter/shop/chartprice/chartprice.wxss */
.pay-succeed-view{
    background: #7bb96e;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 15px;
}
.pay-succeed-bd{
    background: #fff;
    border-radius: 6px;
    box-sizing: border-box;
    padding: 0 20px;
    text-align: center;
    padding-bottom: 20px;
}
.pay-succeed-bd .pay-title{
    font-size: 18px;
    color: #333;
    border-bottom: 1px dashed #ddd;
    padding: 15px 0;
    line-height: 20px;
}
.pay-succeed-bd .pay-time{
    padding:30px 0 20px;
    color: #1aad16;
    font-size: 18px;
    line-height: 20px;
}
.pay-succeed-bd .pay-sum{
    font-size:36px;
    line-height:38px;
}
.pay-succeed-bd .pay-nub{
    font-size: 16px;
    color: #999;
    padding-top: 20px;
}
.pay-succeed-bd .pay-ok{
    width:90px;
    border:1px solid #1aad16;
    font-size:16px;
    margin:40px auto 20px;
    height:38px;
    line-height:38px;
    border-radius:3px;
    color:#1aad16;
}
.wx_pay_icon{
    display:block;
    position:absolute;
    bottom:20px;
    left:50%;
    width:80px;
    height:17px;
    margin-left:-40px;
}