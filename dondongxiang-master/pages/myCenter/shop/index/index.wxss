.self-info {
  width: 100%;
  height: 160px;
  background-color: #ffffff;
  position: relative;
}

.self-info-img {
  position: absolute;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  top: 30px;
  left: 50%;
  margin-left: -30px;
}

.self-info-name {
  position: absolute;
  border-radius: 50%;
  bottom: 40px;
  left: 0;
  right: 0;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
  color: #333333;
  text-align: center;
}

.data-block {
  margin-top: 20px;
  position: relative;
  width: 100%;
  height: 90px;
  background-color: #ffffff;
}

.data-block .data-item {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 33.33%;
  text-align: center;
}

.data-block .data-item .data-title {
  margin-top: 15px;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: #999999;
}

.data-block .data-item .data-value {
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  color: #333333;
}

.menus-block {
  margin-top: 20px;
  position: relative;
  width: 100%;
  height: 201px;
}

.menu-item {
  position: absolute;
  width: 50%;
  height: 100px;
}

.menu-item .menu-item-block {
  position: relative;
  width: 100%;
  height: 100px;
  background-color: #ffffff;
  text-align: center;
}

.menu-item .menu-item-block .menu-block {
  display: inline-block;
  height: 30px;
  line-height: 30px;
  padding-left: 40px;
  position: relative;
  margin-top: 35px;
}

.menu-item .menu-item-block .menu-block image {
  position: absolute;
  width: 30px;
  height: 30px;
  top: 0;
  left: 0;
}

.menu-item .menu-item-block .menu-block text {
  font-size: 16px;
  color: #333333;
}