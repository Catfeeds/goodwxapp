/* pages/myCenter/shop/shopset/shopset.wxss */
.mobile-col{
    background: #fff;
    padding: 0 15px;
    margin-bottom: 10px;
}
.inner-name{
    position: relative;
}
.mapicon{
    position: absolute;
    top: 50%;
    right: -5px;
    width: 20px;
    height: 20px;
    display: block;
    margin-top: -10px;
}
.mobile-col::after{
    display: block;
    content: "";
    clear: both;
}
.inner-name::before{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: -15px;
    height: 1px;
    background: #ddd;
}
.inner-name:last-child::before{
    height: 0;
    background: none;
}
.mobile-col .label-text{
    float: left;
    line-height: 46px;
    font-size: 15px;
    padding-right: 8px;
}
.mobile-col .inner-intro{
    padding-left: 70px;
    padding-top:8px;
}
.mobile-col .shop-inner{
    position: relative;
    height: 150px;
    padding: 10px 0;
}
.shop-inner .inner-pic{
    display: block;
    width: 100%;
    height: 100%;
}
.shop-inner .setinnerpic{
    position: absolute;
    bottom: 20px;
    right:10px;
    display:block;
    color:#fff;
    font-size:13px;
    background:#000;
    opacity:0.6;
    padding:6px 15px;
    border-radius:15px;
}
.inner-intro .label-text{
    font-size: 15px;
    padding-right: 8px;
    padding-top: 9px;
}
.inner-name input{
    font-size: 13px;
    color: #666;
    padding: 10px 0;
    height: 26px;
}
.block-centent .linktext{
    height:37px;
    padding-left:70px;
    padding-top:9px;
}
.linktext input{
    border:1px solid #ddd;
    border-radius:3px;
    padding: 3px 30px 2px 5px;
    font-size: 12px;
    color: #999;
}
.mobile-col .block-tab{
    padding:10px 0;
}
.block-tab .tablist .tab{
    border:1px solid #ddd;
    font-size: 11px;
    color: #666;
    height: 30px;
    display: inline-block;
    margin-right: 7px;
    line-height: 30px;
    padding: 0 15px;
    margin-bottom: 10px;
    border-radius: 2px;
    position: relative;
}
.block-tab .deltab{
    display:inline-block;
    height:32px;
    font-size:15px;
    text-align:center;
    line-height:32px;
    background:#ddd;
    vertical-align:top;
    padding:0 8px;
    margin-bottom: 10px;
}
.block-tab .settab input{
    border:1px solid #ddd;
    font-size: 12px;
    margin-right: 20px;
    color: #999;
    border-radius: 2px;
    height: 32px;
    width: 60%;
    float: left;
    padding-left: 7px;
}
.settab .tabaddbtn{
    font-size:14px;
    border-radius:2px;
    border:1px solid #ddd;
    height:32px;
    display:inline-block;
    line-height:32px;
    padding:0 15px;
}
.inner-intro textarea{
    font-size: 13px;
    color: #666;
    width: 100%;
    padding:7px 0;
    height: 110px;
}
.picimg .addicon{
    display: block;
    width: 55px;
    height: 55px;
}
.add-btn{
    margin-top: 25px;
    padding: 0 25px;
    margin-bottom: 15px;
}
.add-btn .btn{
    background: #1AAD16;
    line-height: 38px;
    font-size: 14px;
    color: #fff;
}


.dialog-view{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
}
.dialog-view .dialog-bg{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
}
.dialog-view .dialog-main{
    background: #fff;
    width: 70%;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -35%;
    margin-top: -110px;
    border-radius: 4px;
}
.dialog-view .dialog-title{
    height: 45px;
    line-height: 45px;
    color: #333;
    font-size: 18px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}
.dialog-view .dialog-bd{
    padding: 20px 0;
    font-size: 15px;
    color: #333;
    text-align: center;
}
.dialog-view .foot-btn{
    height: 44px;
    border-top: 1px solid #ddd;
}
.dialog-view .foot-btn .mesrt-btn{
    width: 100%;
    float: left;
    text-align: center;
    font-size: 15px;
    box-sizing: border-box;
    line-height: 44px;
    color: #00c2ff;
}
.inner-file::after{
    display: block;
    content: "";
    clear: both;
}
.inner-file .picimg .img{
    float: left;
    width:55px;
    height: 55px;
    position: relative;
    margin-bottom: 10px;
    margin-right: 10px;
}
.inner-file .img image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 3px;
}
.picimg .colse{
    position: absolute;
    top: 0;
    right: 0;
    color: #fff;
    background: #ddd;
    display: block;
    width: 20px;
    height: 20px;
    border-radius: 100%;
    text-align: center;
    line-height: 16px;
    font-size: 30px;
}