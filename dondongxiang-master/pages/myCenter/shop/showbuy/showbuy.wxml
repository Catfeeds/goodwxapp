<!--pages/myCenter/shop/showbuy/showbuy.wxml-->
<view class='buy_section_bd'>
    <view class='col-inner site-item' bindtap='checksite'>
        <view class='userinfo'>
            <text class='name'>雪松</text>
            <text class='phone'>1635465656356</text>
        </view>
        <view class='map'>广东省广州市天河区石牌桥23号</view>
        <view class='rigtharrow' bindtap='maplist'><image src='/images/myCenter/arrow.png'></image></view>
        <view class='checkbox'><icon type="{{mapcheckbox}}" size="25" color="orange"></icon></view>
    </view>
    <view class='col-inner meart-item' catchtap="selectDish">
        <view class='inner-tab'><text class='label-text' style='padding-left:35px;'>门店消费</text></view>
        <view class='checkbox'><icon type="{{checkbox}}" size="25" color="orange"></icon></view>
    </view>
    <view class='col-inner info-item'>
        <view class='inner-tab'><text class='label-text'>商品信息</text></view>
        <view class='order_info'>
            <view class='hproduct'>
                <view class='pro-img'><image src='/images/demo_goods.jpg'></image></view>
                <view class='pro-info'>
                    <view class='prc-name'>便捷式家庭雾化器</view>
                    <view class='prc-prc'>
                        <text>￥1280</text>
                        <text class='num'>x1</text>
                    </view>
                </view>
            </view>
        </view>
        <view class='inner-tab'>
            <text class='label-text'>优惠卷</text>
            <view class='content arrorright'><text>无可用</text></view>
            <image class='iconarrow' src="/images/myCenter/arrow.png"></image>
        </view>
        <view class='inner-tab'>
            <text class='label-text'>买家留言</text>
            <view class='content'><input class='desc-input' placeholder='选填，30字内'></input></view>
        </view>
    </view>
    <view class='col-inner buy-item'>
        <view class='buy-block'>
            <text class='buy-text'>商品总价</text>
            <text class='buy-num'>￥1280.00</text>
        </view>
        <view class='buy-block'>
            <text class='buy-text'>运费</text>
            <text class='buy-num'>+￥12.00</text>
        </view>
        <view class='buy-block'>
            <text class='buy-text'>优惠</text>
            <text class='buy-num'>-￥0.00</text>
        </view>
    </view>
</view>
<view class='bar_buy_section'>
    <view class='chart-label'>
        <text class='text'>合计：</text>
        <text class='msgpric'>￥{{total_fee}}</text>
    </view>
    <view class='chart-price' bindtap='pay'>提交订单</view>
</view>  
