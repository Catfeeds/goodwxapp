/* pages/myCenter/shop/showbuy/showbuy.wxss */
.buy_section_bd{
    padding-bottom: 44px;
}
.buy_section_bd .col-inner{
    padding: 10px;
    position: relative;
    margin-bottom: 10px;
    background: #fff;
}
.col-inner.site-item{
    font-size: 15px;
    color: #999;
    line-height: 30px;
    padding-left: 45px;
}
.site-item .userinfo{
    overflow: hidden;
    height: 30px;
    max-width: 90%;
}
.site-item .userinfo .name{
    padding-right: 10px;
}
.site-item .map{
    overflow: hidden;
    height: 30px;
    max-width: 90%;
}
.col-inner .checkbox{
    position: absolute;
    top: 50%;
    left: 10px;
    margin-top: -13px;
}
.info-item .inner-tab{
    font-size:16px;
    color:#333;
    position: relative;
}
.buy_section_bd .col-inner.info-item{
    padding-top: 0;
    padding-bottom: 0;
}
.col-inner .inner-tab::before,.info-item .order_info::before{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    height: 1px;
    background: #ddd;
    left: 0;
    right: -10px;
}
.col-inner .inner-tab:last-child::before{
    height: 0;
    background: none;
}
.col-inner .inner-tab::after{
    display: block;
    clear: both;
    content: "";
}
.inner-tab .label-text{
    float: left;
    line-height: 50px;
    height: 50px;
    font-size: 15px;
}
.inner-tab .content{
    padding-left: 80px;
    padding-top: 13px;
    padding-right: 25px;
}
.inner-tab .arrorright{
    text-align: right;
}
.inner-tab .arrorright text{
    font-size: 13px;
    color: #999;
}
.order_info .pro-img{
    width: 60px;
    height: 60px;
    float: left;
}
.order_info .pro-img image{
    display: block;
    width: 100%;
    height: 100%;
}
.order_info .pro-info{
    padding-left: 70px;
}
.order_info .prc-name{
    line-height:16px;
    font-size:14px;
    height:32px;
    overflow:hidden;
    padding-top: 5px;
}
.order_info .prc-prc{
    color: #f41213;
    line-height:18px;
}
.order_info .prc-prc .num{
    font-size: 14px;
    float: right;
}
.info-item .order_info{
    min-height: 60px;
    padding:15px 0 15px;
    position: relative;
}
.inner-tab .iconarrow,.iconarrow{
    position: absolute;
    top: 50%;
    right: 0;
    display: block;
    width: 20px;
    height: 20px;
    margin-top: -10px;
}
.content .desc-input{
    font-size: 14px;
}





.buy-item .buy-block{
    font-size: 15px;
    color: #333;
    line-height: 34px;
}
.buy-item .buy-block .buy-num{
    float: right;
    color: #f41213;
}
.bar_buy_section{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background: #fff;
    font-size: 16px;
}
.bar_buy_section .chart-label{
    float: left;
    width: 70%;
    background: #f7f5f6;
    height: 44px;
    line-height: 44px;
    overflow: hidden;
    color: #333;
    text-indent: 15px;
}
.chart-label .msgpric{
    color: #f41213;
}
.bar_buy_section .chart-price{
    float: right;
    text-align: center;
    width: 30%;
    background: #f41213;
    color: #fff;
    line-height: 44px;
}
.rigtharrow{
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 42px;
    z-index: 3;
}
.rigtharrow image{
    display: block;
    width: 26px;
    height: 26px;
    margin: 60% auto;
}