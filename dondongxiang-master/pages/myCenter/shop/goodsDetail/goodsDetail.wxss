.cert-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 60px;
  background-color: #ffffff;
  border-top: 1px solid #cccccc;
}

.cert-btn .cert-num {
  position: absolute;
  top: 2px;
  right: 8px;
  width: 16px;
  height: 16px;
  line-height: 16px;
  border-radius: 8px;
  text-align: center;
  font-size: 11px;
  background-color: #f41313;
  color: #ffffff;
}

.cert-btn image {
  position: absolute;
  width: 26px;
  height: 26px;
  left: 17px;
  top: 6px;
}

.cert-btn .btn-text {
  position: absolute;
  height: 14px;
  line-height: 14px;
  font-size: 11px;
  color: #737373;
  left: 0;
  right: 0;
  bottom: 4px;
  text-align: center;
}

.other-btns {
  position: fixed;
  bottom: 0;
  left: 60px;
  right: 0;
  height: 50px;
  background: #fff;
  border-top: 1px solid #ccc;
  z-index: 999;
}

.other-btns .add-cert-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 50%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 16px;
  color: #ffffff;
  background-color: #ff9600;
}

.other-btns .buy-btn {
  position: absolute;
  bottom: 0;
  right: 0;
  left: 50%;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-size: 16px;
  color: #ffffff;
  background-color: #f41313;
}

.goods-title {
  border-top: 1px solid #efefef;
  background-color: #ffffff;
  padding: 10px 10px 5px;
  line-height: 30px;
  font-size: 16px;
  color: #333333;
}

.goods-desc {
  background-color: #ffffff;
  padding: 0 10px;
  line-height: 20px;
  font-size: 15px;
  color: #999999;
}

.goods-price {
  background-color: #ffffff;
  padding: 5px 10px 10px;
  line-height: 30px;
  font-size: 14px;
  color: #f41313;
}

.goods-price text {
  font-size: 19px;
}

.goods-tabs {
  position: relative;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  margin-top: 10px;
}

.goods-tabs .goods-tab-item {
  float: left;
  width: 50%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
  color: #333333;
  position: relative;
}
.tab-blockbox{
    padding-bottom: 51px;
}

.goods-tabs .goods-tab-item.active {
  color: #f41313;
}

.goods-tabs .goods-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 20px;
  right: 20px;
  height: 2px;
  background: #f41313;
}

.rank-title {
  position: relative;
  width: 100%;
  height: 40px;
  background-color: #f0f0f0;
}

.rank-title .rank-title-item {
  position: absolute;
  top: 0;
  left: 20px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #999999;
}

.rank-item {
  position: relative;
  width: 100%;
  height: 80px;
  background-color: #ffffff;
  border-bottom: 1px solid #efefef;
}

.rank-item .rank-num {
  position: relative;
  left: 15px;
  width: 34px;
  height: 100%;
  text-align: center;
}

.speak-style{
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -120rpx;
    margin-left: -120rpx;
    height: 240rpx;
    width: 240rpx;
    border-radius: 20rpx;
    background: #000;
    opacity: 0.6;
}
.item-style{
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}
.sound-style{
  position: absolute;
  width: 74rpx;
  height:150rpx;
  margin-top: 45rpx;
  margin-left: 83rpx;
}

.rank-item .rank-num text {
  line-height:34px;
  font-size:14px;
  color:#333333;
  display:block;
  overflow:hidden;
  width:34px;
  position:absolute;
  top:50%;
  margin-top:-17px;
}

.rank-item .rank-num image {
  width: 34px;
  height: 34px;
  position: absolute;
  top: 50%;
  left: 0;
  margin-top: -17px;
}

.rank-item .rank-photo {
  position: absolute;
  top: 10px;
  left: 60px;
  width: 60px;
  height: 60px;
}

.rank-item .rank-name {
  position: absolute;
  top: 10px;
  left: 130px;
  height: 20px;
  line-height: 20px;
  font-size: 15px;
  color: #333333;
}

.rank-item .rank-voice {
  position: absolute;
  top: 35px;
  left: 135px;
}

 .rank-item .rank-voice .rank-voice-block {
  width: 100px;
  height: 30px;
  background-color: #ffffff;
  border-radius: 3px;
  border: 1px solid #efefef;
  position: relative;
 }

.rank-item .rank-voice .rank-voice-block::before {
  content: '';
  position: absolute;
  top: 5px;
  left: -16px;
  width: 0;
  height: 0;
  border-width: 8px;
  border-style: solid;
  border-color: transparent #e5e5e5 transparent transparent;
  z-index: 100;
}

.rank-item .rank-voice .rank-voice-block::after {
  content: '';
  position: absolute;
  top: 6px;
  left: -14px;
  width: 0;
  height: 0;
  border-width: 7px;
  border-style: solid;
  border-color: transparent #ffffff transparent transparent;
  z-index: 100;
}

.rank-item .rank-voice .rank-voice-block image {
  width: 12px;
  height: 12px;
  margin: 8px 5px;
}

.rank-item .rank-voice .rank-voice-block .rank-voice-sign {
  position: absolute;
  top: 2px;
  right: -12px;
  width: 6px;
  height: 6px;
  border-radius: 3px;
  background-color: #f41313;
}

.rank-item .rank-voice .rank-voice-block .rank-voice-num {
  position: absolute;
  top: 10px;
  right: -25px;
  width: 20px;
  height: 20px;
  line-height: 20px;
  font-size: 14px;
  color: #999999;
}

.rank-item .check-box {
  position:absolute;
  top:50%;
  right:10px;
  width:25px;
  height:25px;
  margin-top:-12px;
  z-index: 33;
}

.rank-item .check-box image {
  width: 12px;
  height: 12px;
  margin: 4px;
  display: none;
}

.rank-item .check-box.checked {
  background-color: #fea509;
}

.rank-item .check-box.checked image {
  display: block;
}

.tab-block {
  display: none;
}

.tab-block.active {
  display: block;
}

.pro-info{
    position: relative;
}
.pro-info .voide-btn{
    position: absolute;
    bottom: 10px;
    right: 10px;
    display: block;
    width: 35px;
    height: 35px;
}
.activit-block{
    background: #fff;
    margin-top: 10px;
}
.activit-block .activit-row{
    position: relative;
    padding: 12px 15px;
    font-size: 15px;
}
.activit-row .activitarrow{
    position: absolute;
    top:50%;
    right:5px;
    width:25px;
    height:25px;
    margin-top:-12px;
}
.activit-block .activit-row.top-bor{
    border-bottom: 1px solid #ddd;
}
.activit-row .col-left{
    float: left;
    width: 60px;
}
.activit-row .col-right{
    padding-left: 60px
}
.activit-row .col-right .sum{
    background: #f41313;
    height: 20px;
    color: #fff;
    font-size: 10px;
    padding:1px 3px;
    margin-right:5px;
    border-radius: 2px;
}
.activit-row .col-right .info text{
    border:1px solid #f41313;
    color:#f41313;
    font-size:12px;
    padding:1px 3px;
    margin-right:5px;
}
.activit-row .col-right .info{
    padding: 5px 0;
}