/* pages/dynamic/cash/cash.wxss */
.payhd{
    padding: 40px 0 30px;
    text-align: center;
    font-size: 12x;
    background: #fff;
}
.payhd .msgicon{
    display: block;
    width: 60px;
    height: 60px;
    margin: 0 auto;
}
.payhd .paytit{
    font-size: 11px;
    display: block;
    line-height: 12px;
    margin-top:10px;
    margin-bottom:10px;
}
.payhd .allpays{
    font-size: 26px;
    line-height: 26px;
    display: block;
    font-weight: 600;
}
.itembd{
    padding: 0 45px;
    font-size: 11px;
    background: #fff;
}
.postpay .msgtit{
    height: 35px;
    line-height: 35px;
}
.setpay{
    height: 40px;
    margin-bottom: 15px;
}
.setpay text{
    font-size: 46px;
    float: left;
    line-height: 40px;
    margin-right: 5px;
}
.allpaysize{
    text-align: center;
}
.setpay input{
    font-size: 30px;
    height: 40px;
}
.bankname .name,.allpaysize .alltx{
    color: #73bdf3;
    padding-left: 8px;
}
.setpaybtn{
    padding: 10px 15px;
    background: #fff;
}
.setpaybtn .btn{
    margin-bottom: 10px;
    line-height: 40px;
    font-size: 14px;
}
.item-foot{
    font-size: 10px;
    padding: 10px 15px;
}
.item-foot text{
    display: block;
    padding-bottom: 5px;
}

.ShowPhoneInfo{
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 99;
}
.ShowPhoneInfo .ShowMsgBg{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
}
.ShowPhoneInfo .ShowBulgView{
    position: absolute;
    top: 50%;
    left: 50%;
    background: #fff;
    width: 80%;
    margin-left: -40%;
    border-radius: 4px;
    box-sizing: border-box;
    padding: 15px;
    font-size: 14px;
    color: #333;
    margin-top: -45%;
}
.ShowBulgView .title{
    font-size: 16px;
    padding-bottom: 10px;
    padding-top: 5px;
    line-height: 16px;
}
.ShowBulgView .cent{
    color: #1aad16;
    max-width:70%;
    height: 20px;
    display: inline-block;
    overflow: hidden;
}
.ShowBulgView .label{
    float: left;
}
.ShowBulgView .col-list{
    position: relative;
    padding-top: 8px;
    height: 35px;
    line-height: 35px;
    overflow: hidden;
}
.ShowBulgView .copyBtn{
    position: absolute;
    top: 0;
    right: 0;
    width: 40px;
    height: 22px;
    font-size: 10px;
    line-height: 22px;
    padding: 0;
    color: #678297;
}
.ShowBulgView .phonicon{
    position: absolute;
    top: 10px;
    right: 9px;
    width: 20px;
    height: 20px;
    border-radius: 100%;
}