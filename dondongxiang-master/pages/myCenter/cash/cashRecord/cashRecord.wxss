.hdbar{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #fff;
    height: 43px;
    line-height: 43px;
    font-size: 14px;
}
.wordview .col-list::after,.wordview .hdbar::after{
    display: block;
    clear: both;
    content: "";
}
.viewmain{
    padding-top: 48px;
}
.viewmain .col-list{
    background: #fff;
    font-size:13px;
    padding:10px 0;
    margin-bottom: 5px;
}
.wordview .col-xs-15{
    width: 15%;
    float: left;
    text-align: center;
}
.wordview .col-xs-35{
    width: 35%;
    float: left;
    text-align: center;
}
.msgtext{
    padding:16px 0;
    text-align:center;
}