.top-info {
  position: relative;
  padding: 100px 20px 20px 20px;
  background-color: #ffffff;
}

.top-info .info-photo {
  position: absolute;
  top: 15px;
  left: 10px;
  width: 55px;
  height: 55px;
  border-radius: 50%;
}

.top-info .info-name {
  position: absolute;
  top: 18px;
  left: 75px;
  height: 30px;
  font-size: 15px;
  color: #333333;
  font-weight: bold;
}

.top-info .info-type {
  position: absolute;
  top: 48px;
  left: 75px;
  height: 25px;
  font-size: 14px;
  color: #999999;
}

.top-info .follow-btn {
  position: absolute;
  top: 15px;
  right: 10px;
  height: 30px;
  line-height: 28px;
  width: 80px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #c5c5c5;
  background-color: #f8f8f8;
  border-radius: 4px;
  color: #678297;
}

.top-info .follow-btn text {
  font-size: 16px;
  vertical-align: 1px;
  margin-right: 4px;
}

.top-info .contact-btn {
  position: absolute;
  top: 53px;
  right: 10px;
  height: 30px;
  line-height: 28px;
  width: 80px;
  text-align: center;
  font-size: 14px;
  border: 1px solid #1aad16;
  background-color: #1aad16;
  border-radius: 4px;
  color: #ffffff;
}

.info-desc {
  font-size: 15px;
  color: #333333;
  line-height: 24px;
}

.info-qrcode {
  position: absolute;
  top: 15px;
  right: 105px;
  height: 60px;
  text-align: center;
}

.info-qrcode image {
  width: 40px;
  height: 40px;
}

.info-qrcode view {
  text-align: center;
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  color: #999999;
}

.info-desc-img {
  position: relative;
  margin-top: 10px;
}

.info-desc-img::before {
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -10px;
  left: -14px;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-right: 10px solid #e6e6e6;
  border-bottom: 10px solid transparent;
}

.info-desc-img::after {
  content: '';
  position: absolute;
  top: 50%;
  margin-top: -10px;
  right: -14px;
  width: 0;
  height: 0;
  border-top: 10px solid transparent;
  border-left: 10px solid #e6e6e6;
  border-bottom: 10px solid transparent;
}

.desc-img{
    float: left;
    box-sizing: border-box;
    padding: 0 4px;
}
.desc-img image{
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
}
.desc-img image::after{
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    border:1px solid #ddd;
    content: "";
    bottom: 0;
}

.info-data {
  position: relative;
  width: 100%;
  height: 70px;
  background-color: #ffffff;
  margin: 10px 0;
}

.info-data .info-data-item {
  position: absolute;
  width: 33.33%;
  height: 50px;
  top: 10px;
  bottom: 10px;
  text-align: center;
}

.info-data .info-data-item image {
  width: 24px;
  height: 24px;
}

.info-data-item view {
  height: 24px;
  line-height: 24px;
  font-size: 14px;
  color: #333333;
}

.home-tabs {
  width: 100%;
  height: 50px;
  background: #fff;
  margin-top: 10px;
  border-bottom: 1px solid #efefef;
}
.home-tab-item{
  width: 50%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 15px;
  color: #999999;
  float: left;
  position: relative;
}
.home-tab-item.active {
  color: #333333;
}
.home-tab-item.active::after{
  content: '';
  position: absolute;
  width: 80px;
  bottom: 0;
  left: 50%;
  margin-left: -40px;
  height: 2px;
  background-color: #1aad16;
}

.tab-block {
  display: none;
}

.tab-block.active {
  display: block;
}

.arrow-btn, .close-btn, .share-btn, .dong-btn {
  position: fixed;
  bottom: 20px;
  left: 20px;
  width: 40px;
  height: 40px;
  background-color: #acacac;
  border-radius: 50%;
  box-shadow: 0 0 10px #999999;
  display: none;
}

.arrow-btn.active, .close-btn.active, .share-btn.active, .dong-btn.active {
  display: block;
}

.arrow-btn image, .close-btn image {
  width: 20px;
  height: 20px;
  margin: 10px;
}

.share-btn view, .dong-btn view {
  font-size: 11px;
  color: #ffffff;
  line-height: 15px;
  text-align: center;
}

.share-btn {
  left: 80px;
} 

.dong-btn {
  left: 140px;
}

.edit-btn {
  position: fixed;
  bottom: 20px;
  right: 0;
  height: 40px;
  line-height: 40px;
  background-color: #1aad16;
  font-size: 13px;
  color: #ffffff;
  border-radius: 20px 0 0 20px;
  padding: 0 20px;
  box-shadow: 0 5px 10px #999;
}

.goods-list .goods-item {
  width: 50%;
  display: inline-block;
}

.goods-list .goods-item .goods-item-block {
  background-color: #ffffff;
  border: 1px solid #cccccc;
  margin: 10px;
}

.goods-list .goods-item .goods-item-block {
  margin-left: 0;
  margin: 5px;
}

.goods-list .goods-item:first-child .goods-item-block {
  margin-left: 5px;
  margin-right: 5px;
}

.goods-list .goods-item .goods-item-block image {
  width: 100%;
}

.goods-list .goods-item .goods-item-block .goods-title {
  padding: 5px;
  font-size: 14px;
  line-height: 25px;
  height: 25px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  color: #333333;
}

.goods-list .goods-item .goods-item-block .goods-price {
  padding: 0 5px 5px;
  font-size: 16px;
  line-height: 20px;
  color: #f41313;
}

.load-more {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #999999;
}

.wrap-bar-tab{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9;
    background: #fff;
}
.wrap-bar-tab .wrap-tab{
    float: left;
    width:50%;
    text-align: center;
    font-size: 15px;
    line-height:42px;
    height:42px;
    position: relative;
}
.wrap-bar-tab .wrap-tab.active{
    color: #1aad16;
}
.wrap-bar-tab .wrap-tab.active::after{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    left: 5px;
    right: 5px;
    color: #1aad16;
    background: #1aad16;
    height: 1px;
}
.relative-box.active{
    display: block;
}
.relative-box{
  display: none;
}

.row-view .row-list{
    position: relative;
    padding: 10px;
    background: #fff;
}
.row-view .row-list::before{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    right: 0px;
    left: 10px;
    height: 1px;
    background: #ddd;
}
.row-view .row-list:last-child::before{
    background: none;
    height: 0;
}
.row-list .col-xs-8{
    float: left;
    width: 80%;
}

.row-list .goodicon image{
    display: block;
    float: left;
    width: 18px;
    height: 18px;
}
.row-list .col-xs-2{
    float: right;
    width: 20%;
    font-size: 13px;
    color: #999;
    padding-top: 20px;
}
.row-list .shopimg{
    width: 70px;
    height: 70px;
    float: left;
}
.row-list .goodicon{
    float: left;
    margin-right: 4px;
}
.row-list .shopinfo{
    padding-top: 4px;
    height: 21px;
    line-height: 21px;
    overflow: hidden;
}
.row-list .shopimg image{
    display: block;
    width: 100%;
    height: 100%;
}
.row-list .col-body{
    padding-left: 80px;
    font-size: 14px;
    color: #999;
}
.row-list .col-body .name{
    font-size:16px;
    color:#333;
    line-height:20px;
    height:20px;
    overflow: hidden;
}
.row-list .pay-info{
    margin-top: 3px;
    height: 20px;
    line-height: 20px;
    overflow: hidden;
}
.row-list .pay-info .mag{
    background:#ddd;
    color:#fff;
    font-size:12px;
    padding:0 3px;
    margin-right:7px;
}
.search-block .search-data::after,.row-list::after,.row-list .goodicon::after{
    display: block;
    content: "";
    clear: both;
}
.row-list{
    background: #fff;
    box-sizing: border-box;
    padding: 10px;
}

.itemmsgtext{
    text-align: center;
    padding-top:70px;
}
.itemmsgtext image{
    display: block;
    width: 65px;
    height: 65px;
    margin: 0 auto 10px;
}