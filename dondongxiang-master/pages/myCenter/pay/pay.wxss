/* pages/pay/pay.wxss */
page{
  height: 100%;
  background: rgb(244,244,244);
}
.pay{
  
overflow-x: hidden;
width: 100%;
display: flex;
justify-content: center;
flex-wrap: wrap
}
.addP{
    height: 100rpx;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin: 20rpx;
  padding: 20rpx 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 12px;
  flex-wrap: wrap
}
.addP_msg{
  width: 100%;
  text-align: center
}
.addP image{
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  left: 0;
  right: 0
}
.top_box{
  position: absolute;
  width: 100%;
  top:0;
  height: 10rpx;
  background: url(http://www.image.newdream1688.com/img/public/096.png);
  font-size: 100%
}
.pay_add{
  height: 121rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  margin: 20rpx 0;
  width: 100%;
  padding: 20rpx;
  background: #fff
}
.pay_img image{
width: 40rpx;
height: 40rpx
}
.pay_msg{
  height: 100rpx;
  font-size: 13px;
  padding: 0 20rpx;
text-align: left
}
.pay_name{
  display: flex;
  align-items: center;    
  justify-content: flex-start;
  position: relative
}
.pay_name_r{
position: absolute;
right: 20rpx;
}
.pay_name_l{
  padding: 10rpx;
  display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp:1;
overflow: hidden;
}
.dd_box_msg{
  padding: 20rpx;
  background: #fff
}
.dd_box{
  width: 95%;
  position: relative;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;

  border-radius: 10rpx;
  padding-bottom:10rpx 
}
.dd_box_msg{
  width: 100%;
  font-size: 12px;

}

.dd_box_img{
height: 150rpx;
width: 150rpx
}
.dd_box_img image{
  width: 100%;
  height: 100%
}
.dd_box_con{
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top:1px dashed #efefef;

  padding: 10rpx;
}
.dd_box_con_msg{
  width: 80%;
  padding-left: 20rpx;
  font-size: 12px;
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap
}
.dd_box_con_name{
 display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp:2;
overflow: hidden;
}
.dd_box_con_list{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 12px;
  background: #fff;
  border-top: 1px dashed #efefef;
  color: #ff4546
}
.dd_box_con_list view{
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}
radio-group{
  width: 100%;

}
.maney{
  width: 100%;
  text-align: right;
  padding-right: 20rpx;
  color: red
}
.count{
   width: 100%;
  text-align: right;
  padding-right: 20rpx;
}
.foot{
  height: 80rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
    display: flex;
  justify-content: flex-end;
  align-items: center
}

.foot view{
  height: 100%;
}
.foot_count{
  width: 70%;
  font-size: 16px;
  font-weight: 700;
   display: flex;
     padding-left: 20rpx;
  justify-content: flex-start;
  align-items: center;
}
.foot_count text{
  color: #ff4546;
  font-size: 20px
}
.goPay{
width: 30%;
color: #fff;
background: #1AAD16;
font-size: 13px;
display: flex;
justify-content: center;
align-items: center
}
.bt_dd{
  color: #8B7BFF !important
}
.switch_box{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 30rpx
}
.switch_box view{
  width: 50%
}
.body-view{
  display: flex;
  justify-content: flex-end
}
.body_view{
  margin-bottom: 80rpx
}
.jf_button{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-top: 1rpx solid #efefef
}
.jf_botton_left{
  width: 50%;
}
.jf_botton_right{
  width: 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20rpx
}
.jf_botton_right image{
  width: 50rpx;
  height: 50rpx
}