/* pages/myCenter/teamRank/familydist/familydist.wxss */
.block-head{
    background: #fff;
    position: relative;
    font-size: 13px;
}
.block-head .edit-card{
    position: absolute;
    top: 40px;
    left: 0;
    background: #1AAD16;
    color: #fff;
    height:25px;
    line-height:25px;
    padding-right:10px;
    border-radius:0 15px 15px 0;
}
.block-head .add-stat{
    position: absolute;
    top: 25px;
    right: 0;
    background: #1AAD16;
    color: #fff;
    height:25px;
    line-height:25px;
    padding:0 10px;
    border-radius:15px 0 0 15px;
}
.block-head .stat-fam{
    position: absolute;
    top: 60px;
    right: 0;
    background: #1AAD16;
    color: #fff;
    height:25px;
    line-height:25px;
    padding:0 10px;
    border-radius:15px 0 0 15px;
}
.block-head .hdfaminfo{
    text-align: center;
    padding-bottom: 15px;
}
.hdfaminfo .fam-pic{
    width: 60px;
    height: 60px;
    margin: 0 auto;
    padding-bottom: 10px;
    font-size: 15px;
    padding-top: 15px;
}
.hdfaminfo .fam-pic image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
    
}
.hdfaminfo .fam-name{
    margin-bottom: 5px;
}
.hdfaminfo .fam-info{
    margin-bottom: 5px;
}
.hdfaminfo .fam-inner{
    width: 80px;
    height: 30px;
    line-height: 30px;
    color: #fff;
    font-size: 13px;
    display: inline-block;
    background: #1AAD16;
    border-radius: 3px;
}
.block-head .fam-desc{
    font-size: 11px;
    color: #fff;
    background: #000;
    opacity: 0.3;
    padding: 5px 10px;
}
.block-start-bar{
    background: #fff;
    padding: 5px 0;
    font-size: 14px;
}
.block-start-bar::after{
    display: block;
    content: "";
    clear: both;
}
.block-start-bar .start-tab{
    float: left;
    width: 50%;
    text-align: center;
    position: relative;
    color: #999;
}
.block-start-bar .start-tab:first-child::before{
    display: block;
    content: "";
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 1px;
    background: #ddd;
}
.block-start-bar .start-tab .sum{
    color: #333;
    font-size: 12px;
}
.min-inner .main-tab::after,.col-list::after,.hdfaminfo::after{
    content: "";
    display: block;
    clear: both;
}
.main-tab .col-25{
    float:left;
    font-size:12px;
    color:#999;
    width:25%;
    background:#ddd;
    height:25px;
    line-height:25px;
    text-align:center;
}
.main-tab .col-50{
    float:left;
    background:#ddd;
    font-size:12px;
    color:#999;
    width:50%;
    height:25px;
    line-height:25px;
    text-align:left;
}
.m-row .col-list{
    background:#fff;
    border-bottom:1px solid #ddd;
    position:relative;
    padding:5px 10px;
}
.m-row .col-list:last-child{
    border-bottom: none;
}
.col-list .col-left{
    float:left;
    width:15%;
    text-align:center;
    font-size:13px;
    height:35px;
    line-height:35px;
    overflow:hidden;
    text-indent:-5px;
}
.col-list .col-center{
    float:left;
    width:65%;
    font-size:12px;
}
.col-center .dl-img,.col-center .dl-img image{
    width:35px;
    height:35px;
    display:block;
    border-radius:100%;
    float:left;
}
.col-center .culd-bd{
    padding-left:43px;
}
.col-center .name{
    line-height:13px;
    margin-top:4px;
}
.col-center .cen-taxt{
    font-size:8px;
    color:#999;
    margin-top:4px;
    height:10px;
    overflow:hidden;
}
.col-list .col-right{
    width:20%;
    float:left;
    padding:7px 10px;
    box-sizing:border-box;
    font-size:12px;
    text-align:right;
    color: #00c2ff;
}






.footerbar{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 99;
    padding: 10px;
    background: #fff;
}
.footerbar .addfamilybtn{
    background: #1AAD16;
    font-size: 15px;
    color: #fff;
    text-align: center;
    height: 35px;
    line-height: 35px;
    border-radius: 3px;
}