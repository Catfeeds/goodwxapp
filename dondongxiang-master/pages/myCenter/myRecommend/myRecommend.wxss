/* pages/dynamic/myRecommend/myRecommend.wxss */
.hdtagbar.alter{
    top: 0;
}
.hdtagbar.alter .col-tab.active::after{
    background: none;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 10px 10px;
    border-color: transparent transparent #efefef transparent;
    left: 50%;
    margin-left: -10px;
}
.hdtagbar{
    height: 45px;
    position: fixed;
    top: 55px;
    left: 0;
    right: 0;
    z-index: 2;
    background: #fff;
}
.hdtagbar .col-tab{
    float: left;
    width: 50%;
    text-align: center;
    height: 45px;
    line-height: 45px;
    font-size: 14px;
    position: relative;
    color: #666;
}
.hdtagbar .col-tab.active::after{
    position: absolute;
    display: block;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: #1aad16;
    content: ""
}
.hdtagbar .col-tab.active{
    color: #1aad16;
}
.view-row{
    margin-top: 100px;
}
.view-row .view-col{
    display: none;
}
.view-row .view-col.active{
    display: block;
}
.col-list{
    padding:10px;
    background:#fff;
    margin-bottom:6px;
    position: relative;
}
.label-img{
    float:left;
    width:50px;
    height:50px;
}
.col-list .label-img image{
    width:100%;
    height:100%;
    display:block;
}
.col-right{
    padding-left:70px;
    min-height:50px;
    font-size:16px;
    margin-right: 80px;
}
.col-right .name{
    margin-bottom:8px;
    height:20px;
    line-height:20px;
    overflow:hidden;
    padding-top:3px;
}
.col-right .rectext{
    color:#999;
    font-size:12px;
    height:16px;
    line-height:16px;
    overflow:hidden;
}
.dataprice{
    position: absolute;
    right: 10px;
    top:50%;
    margin-top: -7px;
    font-size: 12px;
    color: #1aad16;
}
.datastatr{
    text-align: center;
    padding-top:50px;
}
.datastatr .icon{
    display: block;
    width: 70px;
    height: 70px;
    margin: 0 auto;
}
.datastatr .text{
    margin-top: 10px;
}