/* pages/dynamic/about/about.wxss */
.main{
    padding: 25px 15px;
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: #fff;
}
.colhd{
    border-bottom: 1px solid #ddd;
    padding-bottom: 25px;
    text-align: center;
}
.main .colhd image{
    width: 45px;
    height:45px;
    display: block;
    margin: 0 auto;
    border-radius: 100%;
    margin-bottom: 15px;
}
.main .colhd .name{
    display: block;
    font-size: 16px;
    line-height: 6px;
    padding-bottom: 10px;
}
.main .colhd .versions{
    font-size: 12px;
    display: block;
    line-height: 13px;
    color: #999;
}
.main .colbd{
    font-size: 12px;
    line-height: 16px;
    padding-top: 30px;
}
.main .colbd text{
    display: block;
    padding-bottom: 8px;
}
.main .colconf{
    position: absolute;
    text-align: center;
    bottom: 25px;
    left: 0;
    right: 0;
}
.colconf .mobile{
    font-size: 10px;
    color: #999;
}
.colconf .mobile text{
    display: block;
}
.colconf .songtit{
    color: #666;
    font-size: 12px;
    padding-bottom: 10px;
}