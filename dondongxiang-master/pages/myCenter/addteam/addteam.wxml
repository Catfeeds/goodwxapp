<!--pages/myCenter/addteam/addteam.wxml-->
<view class='row-view'>
    <view class='mobile-col'>
        <view class='inner-name'><input type='text' bindinput="FamilyName" placeholder="请输出入家族名称（12字内）"></input></view>
        <view class='inner-intro'><textarea bindinput="FamilySce" placeholder='请输出入家族简介（50字内）'></textarea></view>
        <view class='inner-file'>
            <view class='picimg'>
                <image class='addicon' bindtap='FamilyImg' src='{{src}}'></image>
            </view>
            <text class='picname'>家族头像</text>
        </view>
    </view> 
    <view class='add-btn' bindtap='setMyFamily'><button class='btn'>创建</button></view>
</view>
