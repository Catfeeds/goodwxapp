.user_hd_item{
    min-height: 70px;
    padding: 10px;
    background: #fff;
    position: relative;
    margin-bottom: 10px;
}
.user_hd_item .item_left{
    float: left;
    width: 70px;
    height: 70px;
}
.item_left .image{
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 100%;
}
.user_hd_item .item-middle{
    padding-left: 80px;
    font-size: 14px;
    padding-right: 50px;
}
.item-middle .price{
    color: red;
    padding-right: 5px;
}
.item-middle .msgtext{
    color: #999;
    font-size: 12px;
}
.item-middle .mark{
    font-size: 16px;
}
.item-middle .btn_action{
    width: 50px;
    font-size: 12px;
    margin-left: initial;
    padding: 0;
    line-height: 23px;
    margin-top: 5px;
}
.item-right .arrimg{
    width: 20px;
    height: 20px;
    vertical-align: middle;
}
.user_hd_item .item-right{
    position: absolute;
    right: 10px;
    font-size: 16px;
    bottom: 10px;
}
.item-right .btn_action{
    font-size: 14px;
    color: #999;
    text-align: right;
    line-height: 16px;
    margin-top: 8px;
}
.item-middle .grade{
    color: #f3ec10;
    font-size: 12px;
    padding-left: 5px;
}
.rowlist .wrep-msgnub{
    position:absolute;
    right:30px;
    top:50%;
    margin-top:-10px;
    color:#fff;
    font-size:15px;
    z-index:3;
    line-height:21px;
    background:red;
    padding:0 5px;
    border-radius:13px;
}
.message_list .rowlist{
    background: #fff;
    position: relative;
    font-size: 14px;
    padding: 12px 10px;
}
.message_list .rowlist:last-child{
    border-bottom: 1px solid #ddd;
    margin-bottom: 10px;
}
.message_list .rowlist::after{
    display: block;
    content: "";
    position: absolute;
    bottom: 0;
    height: 1px;
    background: #ddd;
    left: 40px;
    right: 0px;
}
.message_list .rowlist:last-child::after{
    background: none;
}
.rowlist .centext{
    line-height: 24px;
}
.rowlist .labelicon{
    display: block;
    width: 25px;
    height: 25px;
    float: left;
    margin-right: 6px;
}
.rowlist .arrowicon{
    position:absolute;
    top:50%;
    right:5px;
    width:26px;
    height:26px;
    margin-top:-13px;
}
.order .centext{
    max-width: 120px;
    float: left;
}
.order .allorder{
    position: relative;
    float: right;
    line-height: 24px;
    margin-right: -10px;
}
.order .allorder text{
    padding-right: 30px;
    font-size: 12px;
    color: #999;
}
.order .rowlist{
    height: 24px;
}
.message_list.order{
    margin-bottom: 10px;
}
.message_list.order .rowlist::after{
    left: 0;
}
.order-tab{
  background: #fff;
}
.order-tab::after{
    display: block;
    content: "";
    clear: both;
}
.order-tab .ord-col-3{
    float: left;
    width: 25%;
    text-align: center;
    font-size: 13px;
    padding: 10px 0;
}
.order-tab .icon{
    width: 35px;
    height: 35px;
    display: block;
    margin: 0 auto;
}
.order-tab .text{
    margin-top: 2px;
    display: block;
}