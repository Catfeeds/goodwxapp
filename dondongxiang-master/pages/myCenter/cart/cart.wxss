/* pages/gwc/gwc.wxss */
page{
  height: 100%;
  background: rgb(244,244,244);
}
checkbox{
  display: none;
}

.checkbox{
  display: flex;
  align-items: center;
  padding:0 20rpx;
  background: #fff;
  margin: 10rpx
}
.checkbox icon{
  margin-right: 20rpx;
}
.gwc_list{
  height: 164rpx;

  width: 73%;
  margin-left: 10rpx;
  margin-top: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.gwc_img{
  width:150rpx;
height:150rpx;

}
.gwc_img image{
  height: 100%;
  width: 100%
}
.gwc_name{
  font-size: 12px;
      display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 1;
overflow: hidden;
}
.gwc_msg{
  width: 75%;
  height: 150rpx;
  padding-left: 20rpx
}
.gwc_pic{
  display: flex;
  justify-content: flex-start;
  align-items: center
}
.gwc_pic_now{
color: red
}
.gwc_pic_old{
  font-size: 16rpx;
  text-decoration:line-through;
  margin-left: 20rpx
}
.del{
  height: 30rpx;
  width: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right: 30rpx
}
.del image{
  width: 100%;
  height: 100%
}
.cz_sp{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative
}
.cz view{
width: 40rpx;
height: 40rpx
}
.cz image{
width: 100%;
height: 100%
}
.cz{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 50%
}
.specs{
  width: 50%;
  font-size: 20rpx;
  position: absolute;
bottom:-9rpx;
right:-10rpx;


}
.num{
  margin: 0 10rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
icon{
  border: 1px solid #ccc;
  border-radius: 100px;
  width: 40rpx;
  height: 40rpx;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center
}
.foot{
  height: 80rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
    display: flex;
  justify-content: center;
  align-items: center
}

.foot view{
  height: 100%;
}
.all_count{
width: 35%;
display: flex;
justify-content: center;
align-items: center;
font-size: 13px
}
.all_count icon{
  margin-right: 20rpx
}
.foot_count{
  width: 70%;
  font-size: 16px;
  font-weight: 700;
   display: flex;
     padding-left: 20rpx;
  justify-content: flex-start;
  align-items: center;
}
.foot_count text{
  color: red;
  font-size: 20px
}
.goPay{
width: 30%;
color: #fff;
background: #FA5778;
font-size: 13px;
display: flex;
justify-content: center;
align-items: center
}
.user_info{
  height: 250rpx;
  width: 100%;
  background: #ef581e;
  display: flex;
  justify-content: center;
  flex-wrap: wrap
}
.user_info image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx
}
.user_name{
  color: #fff;
  font-size: 15px;
  width: 100%;
  text-align: center
}
image{
  width: 100rpx;
  height: 100rpx
}
.img_box{
  width: 100%;
  text-align: center
}
.box{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  position: absolute;
  width: 100%;
  top:300rpx
}
.btn{
  font-size: 12px
}