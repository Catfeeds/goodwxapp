/* pages/myCenter/wordview/wordview.wxss */
.wordview{
    padding: 10px;
}
.wordlist{
    background: #fff;
    padding: 10px;
    position: relative;
    margin-bottom: 10px;
}
.wordlist::after{
    display: block;
    clear: both;
    content: "";
}
.wordlist .left-cent{
    font-size: 15px;
    color: #333;
    padding-right: 70px;
}
.wordlist .left-cent .title{
    height: 42px;
    overflow: hidden;
    margin-bottom: 6px;
}
.wordlist .time{
    font-size: 12px;
    color: #999;
    height: 17px;
    overflow: hidden;
    line-height: 17px;
}
.wordlist .right-img{
    position: absolute;
    right: 10px;
    top: 10px;
    bottom: 10px;
    width: 65px;
    z-index: 2;
}
.wordlist .right-img image{
    display: block;
    width: 65px;
    height: 65px;
}