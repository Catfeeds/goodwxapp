/* pages/mine/mine.wxss */

.header {
  padding: 30px 0px 20px 0px;
}
.header .avatar {
  display: block;
  width: 96px;
  height: 96px;
  margin: 0px auto;
  border-radius: 50%;
}
.header .nick {
  display: block;
  color: #ec3851;
  text-align: center;
  margin-top: 20px;
}
.header .edit {
  width: 16px;
  height: 16px;
  vertical-align: middle;
}
.header .sexage {
  display: block;
  color: #909398;
  font-size: 12px;
  text-align: center;
  margin-top: 10px;
}

.cells {
  padding: 15px 0px;
}
.cells .group {
  display: block;
  padding: 0px 7px 0px 12px;
  margin-top: 15px;
  border-top: 0.5px solid #efefef;
  border-bottom: 0.5px solid #efefef;
  background: #fcfcfc;
}
.cells .group:first-child {
  margin-top: 0px;
}
.cells .group .item {
  display: block;
  height: 44px;
  color: #353535;
  font-size: 14px;
  text-align: left;
  line-height: 44px;
  padding-left: 12px;
  border: 0px;
  border-bottom: 0.5px solid #efefef;
  background: #fcfcfc;
}
.cells .group .item:last-child {
  border-bottom: none;
}
.cells .group .item.create {
  color: #ec3851;
}