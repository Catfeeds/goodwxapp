/* pages/mine/score/score.wxss */

page {
  background: #f3f3f3;
}

.score {
  display: block;
  font-size: 14px;
  line-height: 26px;
  padding: 12px 15px;
  background: #f3f3f3;
}
.score .avatar {
  display: block;
  width: 64px;
  height: 64px;
  margin: 0px auto;
  border-radius: 50%;
}
.score .desc {
  display: block;
  text-align: center;
  padding: 5px 0px;
}
.score .desc strong {
  color:#dd6572;
  font-weight: bold;
}

.missions {
  display: block;
  padding: 0px 7px 0px 12px;
  border-top: 0.5px solid #dfdfdf;
  border-bottom: 0.5px solid #dfdfdf;
  background: #ffffff;
}
.missions .item {
  display: block;
  height: 48px;
}
.missions .item .header {
  float: left;
  display: block;
  width: 36px;
  height: 36px;
  margin: 6px 0px;
  border-radius: 50%;
}
.missions .item .nick {
  display: block;
  height: 47px;
  font-size: 14px;
  line-height: 47px;
  margin-left: 48px;
  margin-right: 64px;
  border-bottom: 0.5px dotted #dfdfdf;
}
.missions .item .point {
  float:right;
  display: block;
  width: 64px;
  height: 47px;
  color: #dd6572;
  font-size: 12px;
  line-height: 47px;
  text-align: right;
  border-bottom: 0.5px dotted #dfdfdf;
}
.missions .item:last-child .nick,
.missions .item:last-child .point {
  border-bottom: 0px dotted #dfdfdf;
}

.controls {
  display: block;
  padding: 15px;
}