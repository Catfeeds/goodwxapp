/* pages/mine/about/about.wxss */

page {
  background: #f3f3f3;
}

.review {
  display: block;
}
.review .logo {
  display: block;
  width: 96px;
  height: 96px;
  margin: 50px auto 0px auto;
  border-radius: 12px;
  background: #dd6572;
}
.review .title {
  display: block;
  height: 48px;
  color: #dd6572;
  font-size: 18px;
  line-height: 48px;
  text-align: center;
  padding-top: 10px;
}
.review .version {
  display: block;
  color: #969696;
  font-size: 12px;
  line-height: 36px;
  text-align: center;
}
.review .description {
  display: block;
  color: #707070;
  font-size: 14px;
  line-height: 24px;
  padding: 0px 25px;
}

.controls {
  display: block;
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 96px;
}
.controls .contact {
  display: block;
  width: 128px;
  height: 36px;
  color: #ffffff;
  font-size: 14px;
  border-radius: 5px;
  background: #dd6572;
}
.controls .copyright {
  display: block;
  color: #969696;
  font-size: 12px;
  line-height: 48px;
  text-align: center;
}