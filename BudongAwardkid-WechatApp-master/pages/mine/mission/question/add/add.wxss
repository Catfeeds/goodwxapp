/* pages/mine/mission/question/add/add.wxss */


page {
  background: #f3f3f3;
}

.voice {
  display: block;
  text-align: center;
  padding: 15px;
}
.voice .record {
  display: inline-block;
  margin: 10px;
}
.voice .player {
  display: inline-block;
  margin: 10px;
}

.cells {
  padding: 15px 0px;
}
.cells .group {
  display: block;
  padding: 0px 7px 0px 12px;
  margin-top: 15px;
  /*border-top: 1px solid #dfdfdf;*/
  border-top: 0.5px solid #dfdfdf;
  /*border-bottom: 1px solid #dfdfdf;*/
  border-bottom: 0.5px solid #dfdfdf;
  background: #ffffff;
}
.cells .group:first-child {
  margin-top: 0px;
}
.cells .group .item {
  display: block;
  height: 44px;
  font-size: 14px;
  text-align: left;
  line-height: 44px;
  padding-left: 12px;
  border: 0px;
  border-bottom: 0.5px solid #dfdfdf;
  background: #ffffff;
}
.cells .group .item:last-child {
  border-bottom: none;
}
.cells .group .item input {
  height: 44px;
  line-height: 44px;
}
.controls {
  display: block;
  padding: 15px;
}