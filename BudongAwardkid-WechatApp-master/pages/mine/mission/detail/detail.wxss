/* pages/mine/mission/detail/detail.wxss */

page {
  background: #f3f3f3;
}

.questions {
  display: block;
  padding: 0px 7px 0px 12px;
  margin-top: 10px;
  border-top: 0.5px solid #dfdfdf;
  border-bottom: 0.5px solid #dfdfdf;
  background:#ffffff;
}
.questions .item {
  display: block;
  height: 44px;
  border-bottom: 0.5px dotted #dfdfdf;
}
.questions .item:last-child{
  border-bottom: 0px;
}
.questions .item .title {
  display: block;
  height: 43px;
  font-size: 14px;
  line-height: 43px;
  margin-right: 48px;
}
.questions .item .title em {
  display: inline-block;
  height: 22px;
  color: #ffffff;
  font-size: 12px;
  line-height: 22px;
  vertical-align: middle;
  padding: 0px 5px;
  margin: 10px 3px 10px 0px;
  border-radius: 3px;
  background: #dd6572;
}
.questions .item .title small {
  color: #969696;
  font-size: 12px;
}
.questions .item .delete {
  float:right;
  display: block;
  width: 48px;
  height: 28px;
  color: #ff0000;
  font-size: 12px;
  line-height: 28px;
  text-align: center;
  padding: 0px;
  margin: 8px 0px 8px 8px;
  background: transparent;
}
.questions .item.create .title {
  color: #dd6572;
}

.controls {
  display: block;
  padding: 15px;
  text-align: center;
}
.controls button {
  font-size: 14px;
  margin-bottom: 15px;
}
.controls .share {
  display: inline-block;
  margin: 0px 10px;
}
.controls .cancel {
  border: 0.5 solid #dfdfdf;
}