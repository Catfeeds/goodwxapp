<!--pages/mine/profile/profile.wxml-->

<view class="container">
  <view class="cells">
    <view class="group">
      <span class="item">
        <picker bindchange="onBirthyearChange" value="{{birthyearIndex}}" range="{{birthyearItems}}">
          <view class="picker">
            出生年份：{{birthyear}} 年
          </view>
        </picker>
      </span>
    </view>
    <view class="controls">
      <button type="primary" bindtap="onProfileChange" > 确认修改 </button>
    </view>
  </view>
</view>
