/* pages/index/mission/guess/guess.wxss */

.titlebar {
  display: block;
  height: 32px;
  padding: 6px 12px;
}
.titlebar .author {
  float: left;
  display: block;
  height: 32px;
  border-radius: 16px;
  background: #909398;
}
.titlebar .author .header {
  float: left;
  display: block;
  width: 32px;
  height: 32px;
  border-radius: 16px;
}
.titlebar .author .duration {
  float: left;
  display: block;
  color: #ffffff;
  font-size: 14px;
  line-height: 32px;
  text-align: center;
  padding: 0px 12px 0px 7px;
}
.titlebar .coins {
  float: right;
  display: block;
  height: 32px;
  color: #ffffff;
  font-size: 14px;
  line-height: 32px;
  text-align: center;
  padding: 0px 15px;
  border-radius: 16px;
  background: #909398;
}

.player {
  display: block;
  height: 130px;
  padding: 50px 0px;
}
.player .disc {
  display: block;
  width: 60px;
  height: 60px;
  padding: 60px;
  margin: 0px auto;
  border-radius: 50%;
  border: 5px solid #353535;
  background: #353535;
  background: -webkit-linear-gradient(180deg, yellowgreen 0,yellowgreen 25%, cornflowerblue 25%,cornflowerblue 50%,gold 50%,gold 75%,orangered 75%,orangered 100%);
}
.player .disc.playing{
  animation: disc 3600ms linear 10ms infinite;
}
.player .disc .centre {
  display: block;
  width: 40px;
  height: 40px;
  border: 10px solid #323232;
  border-radius: 50%;
  background: #ffffff;
}
.player .actions {
  display: block;
  text-align: center;
  padding-top: 30px;
}
.player .actions .button {
  display: inline-block;
  height: 40px;
  font-size: 14px;
  padding: 5px 15px;
  margin: 0px 5px;
  border-radius: 5px;
  border: 0.5px solid #efefef;
  background: #fcfcfc;
}
.player .actions .button em {
  display: block;
  color: #353535;
  line-height: 20px;
}
.player .actions .button small {
  display: block;
  color: #909398;
  font-size: 12px;
  line-height: 20px;
}

.controls {
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 30px;
}
.controls input {
  display: block;
  width: 100%;
  height: 44px;
  font-size: 14px;
  text-align: center;
  margin: 0px auto;
  border-radius: 5px;
  border: 0.5px solid #dfdfdf;
  background: #fcfcfc;
}

@keyframes disc {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}