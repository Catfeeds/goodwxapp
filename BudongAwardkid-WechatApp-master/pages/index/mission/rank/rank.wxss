/* pages/index/mission/rank/rank.wxss */

.header {
  display: block;
  font-size: 14px;
  line-height: 26px;
  padding: 12px 15px;
}
.header .avatar {
  display: block;
  width: 64px;
  height: 64px;
  margin: 0px auto;
  border-radius: 50%;
}
.header .caption {
  display: block;
  color: #ec3851;
  font-size: 18px;
  text-align: center;
  padding-top: 10px;
}
.header .title {
  display: block;
  color: #353535;
  font-size: 14px;
  text-align: center;
}
.header .desc {
  display: block;
  color: #353535;
  text-align: center;
}
.header .desc strong {
  color:#ec3851;
  font-weight: bold;
}

.players {
  display: block;
  padding: 0px 7px 0px 12px;
  border-top: 0.5px solid #efefef;
  border-bottom: 0.5px solid #efefef;
  background: #fcfcfc;
}
.players .item {
  display: block;
  height: 48px;
}
.players .item .avatar {
  float: left;
  display: block;
  width: 36px;
  height: 36px;
  margin: 6px 0px;
  border-radius: 50%;
}
.players .item .nick {
  display: block;
  height: 47px;
  color: #576b95;
  font-size: 14px;
  line-height: 47px;
  margin-left: 48px;
  margin-right: 64px;
  border-bottom: 0.5px dotted #dfdfdf;
}
.players .item .score {
  float: right;
  display: block;
  width: 64px;
  height: 47px;
  color: #707070;
  font-size: 12px;
  line-height: 47px;
  text-align: right;
  border-bottom: 0.5px dotted #dfdfdf;
}
.players .item.winner .score {
  color: #ec3851;
}
.players .item:last-child .nick,
.players .item:last-child .score {
  border-bottom: 0px dotted #dfdfdf;
}

.controls {
  display: block;
  padding: 15px;
  text-align: center;
}
.controls button {
  font-size: 14px;
  margin-bottom: 15px;
}
.controls .share {
  display: inline-block;
  color: #353535;
  margin: 0px 10px;
  border: 0.5px solid #efefef;
  background: #fcfcfc;
}