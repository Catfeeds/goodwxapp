/**app.wxss**/
/*头部显示名字和时间整体样式*/
.bigList{
  padding: 15rpx 15rpx 15rpx 15rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  background-color: white;
}
.containerTop{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 18rpx;
}
.topRightView{
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
}
.topRightTime{
  font-size: 20rpx;
  color: #b8b2b2;
  margin-top: 10rpx;
}
.profileImage{  
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.topRightName{
  font-size: 24rpx;
  color: #295c9d;
}

.contentBottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.bottomItemView{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.contentIcon{  /* 这里是icon的 */
  width: 45rpx;
  height: 45rpx;
}
.doNum{/* 这里是点赞那些的数量的 */
  font-size: 24rpx;
  color: #b8b2b2;
  margin-left: 8rpx;
}
/*分割线样式*/
.divLine{
  background: #f3f3f3;
  width: 100%;
  height: 15rpx;
}
.btn{
  background-color: white;
}
button::after{
  content: " ";
  width: 0;
  height: 0;
}