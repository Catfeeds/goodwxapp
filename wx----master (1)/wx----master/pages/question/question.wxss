/*倒计时*/
Page{
    width:100%;
    height:100vh;
    overflow:hidden;
}
#quesBc{
    position:absolute;
    left:0;
    top:0;
    width:100%;
    height:100%;
    z-index:-1;
}
.readyStar-wrap{
    width:100%;
    height:100%;
    background:#cde9ff;
    position:relative;
    z-index:22;
    padding:100rpx 0;
    box-sizing: border-box;
    overflow:hidden;
}
.readyStar{
    height:90%;
    width:90%;
    margin:0 auto;
    box-sizing:border-box;
    background:white;
    border:1px solid #4482ff;
}
.readyStar image{
    display:block;
    width:150rpx;
    height:150rpx;
    border-radius:50%;
    margin:40rpx auto;
}
.readyStar text{
    display:block;
    text-align:center;
    font-size:44rpx;
    color:#3a9bfb;
}
.readyStar view{
    text-align:center;
    font-size:128rpx;
    margin:140rpx 140rpx 50rpx 140rpx;
}
.circle {
    width: 130rpx;
    height: 130rpx;
    position:absolute;
    z-index:2;
    top:25rpx;
    left:50%;
    transform: translateX(-50%);
    border-radius: 50%;
    background:#3a9bfb;
}
.pie_left, .pie_right {
    width:130rpx;
    height:130rpx;
    position: absolute;
    top: 0;left: 0;
}
.left, .right {
    width:130rpx;
    height:130rpx;
    background:#52b8eb;
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    transition:all 1s linear;
}
.pie_right, .right {
    clip:rect(0,auto,auto,65rpx);
}
.pie_left, .left {
    clip:rect(0,65rpx,auto,0);

}
.countNum{
    color:blue
}
.mask {
    width: 100rpx;
    height: 100rpx;
    color:#6286e7;
    border-radius: 50%;
    left:50%;
    top: 50%;
    transform:translate(-50%,-50%);
    background: #fff;
    position: absolute;
    text-align: center;
    font-size: 60rpx;
    font-weight: bold;
    line-height:100rpx;
}
#userInfo{
    height:130rpx;
    width:130rpx;
    border-radius:50%;
    position:absolute;
    top:19rpx;
    left:10rpx;
}
.rightWords{
    position:absolute;
    z-index:2;
    top:45rpx;
    right:28rpx;
    font-size:60rpx;
    color:white;
}
.rightWordP{
    position:absolute;
    z-index:2;
    top:176rpx;
    right:28rpx;
    font-size:29rpx;
    color:white;
}
.leftWords{
    position:absolute;
    z-index:2;
    top:176rpx;
    left:28rpx;
    font-size:29rpx;
    color:white;
}
.header{
    position:absolute;
    text-align:center;
    color:white;
    width:70%;
    left:50%;
    top:302rpx;
    transform: translateX(-50%);
}
.question{
    position:absolute;
    width:80%;
    height:400rpx;
    left:50%;
    top:500rpx;
    z-index:3;
    transform: translateX(-50%);
}
.option{
    height:102rpx;
    text-align:left;
    margin-bottom:30rpx;
    line-height:108rpx;
    font-size:45rpx;
    border-radius:100rpx;
    transition:all .4s;
}
.change{
    width: 100%;
    height: 100rpx;
    display:flex;
}
.alert-wrap{
    position:absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background:rgba(0,0,0,.5);
    z-index:6;
}
.wrong-alert,.win-alert{
    position:absolute;
    top:50%;
    left:50%;
    width:70%;
    height:600rpx;
    padding:40rpx;
    color:white;
    background:rgba(0,0,0,.2);
    transform:translate(-50%,-50%);
}
.wrong-alert icon,.win-alert icon{
    position:absolute;
    top:0;
    right:0;
    transform:translate(50%,-50%);
    background:#3a9bfb;
    border-radius:50%;
}
.wrong-alert text,.win-alert text{
    display:block;
    font-size:30rpx;
    line-height:50rpx;
    text-align:center;
    margin-top:30rpx;
}
.wrong-alert button,.win-alert button{
    margin-top:283rpx;
    background:#3a9bfb;
    border-radius:40rpx;
    position:relative;
    z-index:3;
    color:white;
}
.wrong-alert .rePlay,.win-alert .rePlay{
    margin-top:40rpx;
}
.win-alert button{
    margin-top:424rpx;
}
#fail,#win{
    width:360rpx;
    position:absolute;
    left:50%;
    top:78rpx;
    transform: translateX(-50%);
}
.final .btn-wrap{
    margin-top:207rpx;
}
.final button{
    background:#3a9bfb;
    color:white;
    width:320rpx;
    margin-top:40rpx;
    border-radius:40rpx;
    font-size:33rpx;

}
