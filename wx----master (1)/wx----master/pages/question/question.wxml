<!--倒计时开始-->
<image id="quesBc" src="../../img/quesBc.jpg"></image>
<view class="readyStar-wrap" style="display:{{showReady}}">
    <view class="readyStar">
        <image src="{{userInfo.avatarUrl}}"></image>
        <text>{{userInfo.nickName}}</text>
        <text>----- 开始挑战 -----</text>
        <view>{{readyNum}}</view>
        <text>倒计时</text>
    </view>
</view>
    <view class="circle">
        <view class="pie_left">
            <view class="left" style="transform:rotate({{leftDeg}}deg);"></view>
        </view>
        <view class="pie_right">
            <view class="right"style="transform:rotate({{rightDeg}}deg);"></view>
        </view>
        <view class="mask">
            <view>{{countNum}}</view>
        </view>
    </view>
    <image src="{{userInfo.avatarUrl}}" id="userInfo"></image>
    <view class="leftWords">笨人网络</view>
    <text class="rightWords">{{(index)}}/{{questionLength}}</text>
    <view class="rightWordP">已连续答对</view>
    <view class="header">{{postList[index].name}}?</view>
<view class="question">
    <button id='A' class="option" bindtap="btnOpClick" style="background-color:{{bc_a}};color:{{fontColor_a}}">A.{{postList[index].content[0]}}</button>
    <button id='B' class="option" bindtap="btnOpClick" style="background-color:{{bc_b}};color:{{fontColor_b}}">B.{{postList[index].content[1]}}</button>
    <button id='C' class="option" bindtap="btnOpClick" style="background-color:{{bc_c}};color:{{fontColor_c}}">C.{{postList[index].content[2]}}</button>
    <button id='D' class="option" bindtap="btnOpClick" style="background-color:{{bc_d}};color:{{fontColor_d}}">D.{{postList[index].content[3]}}</button>
</view>
<view class="alert-wrap" style="display:{{bShowAlert}}">
    <view class="wrong-alert">
        <text>答错了,转发到不同群,</text>
        <text>即可马上复活并继续道题</text>
        <button open-type="share">转发到不同群</button>
        <image id="fail" mode="aspectFit" src="../../img/answerfail.png"></image>
        <icon bindtap="closeAlert" color="white" size="25" type="cancel"></icon>
    </view>
</view>
<view class="alert-wrap" style="display:{{bOutAlert}}">
    <view class="wrong-alert">
        <text>答错了</text>
        <text>很遗憾,本次挑战结束</text>
        <button bindtap="goBack">回到首页</button>
        <button class="rePlay" bindtap="rePlay">再次挑战</button>
        <image id="fail" mode="aspectFit" src="../../img/answerfail.png"></image>
        <icon bindtap="outAlert" color="white" size="25" type="cancel"></icon>
    </view>
</view>
<view class="alert-wrap" style="display:{{bWinAlert}}">
    <view class="win-alert">
        <text>恭喜你获得一张5元话费卡</text>
        <image id="win" mode="aspectFit" src="../../img/answerWin.png"></image>
        <button bindtap="check">查看话费卡</button>
        <button class="rePlay" bindtap="rePlay">再次挑战</button>
        <icon bindtap="closeWinAlert" color="white" size="25" type="cancel"></icon>
    </view>
</view>
<view class="readyStar-wrap final" style="display:{{bFinal}}">
    <view class="readyStar">
        <image src="{{userInfo.avatarUrl}}"></image>
        <text style="font-size:37rpx;margin-bottom:20rpx;">{{userInfo.nickName}}</text>
        <text>----- 挑战失败 -----</text>
        <view class="btn-wrap">
            <button bindtap="goBack">回到首页</button>
            <button class="rePlay" bindtap="rePlay">再次挑战</button>
        </view>

    </view>
</view>