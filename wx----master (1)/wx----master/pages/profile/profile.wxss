/* pages/profile/profile.wxss */
canvas{
    height:70%;
    width:70%;
    position:absolute;
    left:50%;
    top:200rpx;
    transform: translateX(-50%);
}
button::after{
    border:none;
}
Page{
    width:100%;
    height:100vh;
    overflow:hidden;
    background:#fcf9ee;
    box-sizing: border-box;
    font-weight:144;
}
view{
    box-sizing: border-box;
}
.content{
    background:#fcf9ee;
    width:100%;
    height:100vh;
    position:fixed;
    left:0;
    top:0;
}

#userImg{
    position:absolute;
    border-radius:50%;
    left:50%;
    transform: translateX(-50%);
    top:-2rpx;
}
.user-grade{
    position:absolute;
    width:100%;
    text-align:center;
    top:131rpx;
    color:white;
}
.toForm{
    position:absolute;
    left:50%;
    top:218rpx;
    transform:translateX(-50%);
    width:186rpx;
    height:56rpx;
    line-height:56rpx;
    color:#4d83e5;
    background:white;
    border-radius:40rpx;
    font-size:30rpx;

}
.user-num{
    font-size:50rpx;
    font-weight:bold;
    color:white;
}
.common{
    height:200rpx;
    width:200rpx;
    text-align:center;
    font-size:26rpx;
    position:absolute;
    color:#002973;
}
.common text{
    font-size:50rpx;
    color:#4d83e5;
}
.left-info{
    top:374rpx;
    left:40rpx;
}
.center-info{
    top:336rpx;
    left:50%;
    transform:translateX(-50%);
}
.right-info{
    top:374rpx;
    right:40rpx;
}
.common .smallSize{
    font-size:40rpx;
}
.showGrade{
    position:absolute;
    top:552rpx;
    left:50rpx;
    width:290rpx;
    border-radius:40rpx;
    background:white;
    font-size:30rpx;
    background:#4d83e5;
    color:white;
    box-sizing: border-box;
}
.getChance{
    width:290rpx;
    box-sizing: border-box;
    position:absolute;
    top:552rpx;
    right:50rpx;
    color:#4d83e5;
    border:1px solid #4d83e5;
    border-radius:40rpx;
    background:white;
    font-size:30rpx;
}
.share-mask{
    position:absolute;
    top:0rpx;
    left:0;
    width:100%;
    height:1200rpx;
    background:rgba(0,0,0,.5);
}
.mask-content{
    margin:120rpx auto 0;
    padding:70rpx 40rpx 0;
    width:600rpx;
    height:870rpx;
    background:#4d83e5;
    position:relative;
}
.mask-content icon{
    position:absolute;
    right:0rpx;
    top:0rpx;
    transform:translate(50%,-50%);
    border-radius:50%;
    background:#3a9bfb;
}
.mask-header{
    width:100%;
    text-align:center;
    font-size:34rpx;
    color:white;
}
.share-wrap{
    margin-top:120rpx;
    width:550rpx;
    padding:10rpx 0;
}
.share-wrap button{
    border:1px solid #4d83e5;
    width:500rpx;
    font-size:28rpx;
    position:relative;
    z-index:5;
    opacity:0;
}
#shareBtn{
    width:92%;
    height:126rpx;
    position:absolute;
    top:200rpx;
    left:50%;
    transform: translateX(-50%);
    z-index:0;
}
#xcx{
    position:absolute;
    width:100%;
    height:100%;
    left:0;
    top:0;
    background:rgba(0,0,0,.5);
}
#xcx button{
    position:absolute;
    left:50%;
    bottom:23rpx;
    transform: translateX(-50%);
    background:#4d83e5;
    color:white;
    width:355rpx;
    height:71rpx;
    line-height:71rpx;
}
.custom{
    position:fixed;
    right:0;
    top:284rpx;
    border-radius:50%;
    width:100rpx;
    height:100rpx;
}