Page{
    background:#cde9ff;
    color:#002973;
    font-weight:100;
}
button{
    color: #002973;
}
.content{
    position:relative;
    top:0;
    left:0;
}
.bg-content{
    height:1600rpx;
    width:100%;
}
#banner{
    position:absolute;
    left:50%;
    top:24rpx;
    transform:translateX(-50%);
    width:705rpx;
    height:476rpx;

}
#challenge{
    box-sizing:border-box;
    width:383rpx;
    position:absolute;
    top:355rpx;
    left:50%;
    transform:translateX(-50%);
}
.share{
    box-sizing:border-box;
    width:80%;
    height:80rpx;
    position:absolute;
    color:white;
    background:#3a9bfb;
    left:50%;
    top:790rpx;
    transform:translateX(-50%);
    border-radius:130rpx/160rpx;
    font-size:30rpx;
}
icon {
  position:relative;
  top:44%;
  transform:translateY(-50%);
}
.prompt{
    width:80%;
    position:absolute;
    top:45rpx;
    right:30rpx;
}
.left-prompt{
    height:50rpx;
    margin-top:21rpx;
    margin-left:20rpx;
    padding:0 90rpx;
    line-height:50rpx;
    background:white;
    border-radius:40rpx;
    float:left;
    font-size:26rpx;
}
.right-prompt{
    height:50rpx;
    margin-top:21rpx;
    margin-right:38rpx;
    font-size:26rpx;
    line-height:50rpx;
    background:white;
    float:right;
    border-radius:40rpx;
}
#detail{
    width:100%;
    height:100%;
    position:fixed;
    left:0;
    top:0;
    z-index:4;
}
.detail-main{
    width:80%;
    height:72%;
    background:white;
    margin:200rpx auto;
    padding:40rpx 20rpx;
    position:relative;
}
.item{
    margin-bottom:18rpx;
}
.item-sign{
    width:45rpx;
    height:45rpx;
    display:inline-block;
    margin-right:30rpx;
    border-radius:50%;
    background:#3a9bfb;
    color:white;
    line-height:45rpx;
    text-align:center;
    float:left;
    margin-top:20rpx;
}
.item-content{
    font-size:27rpx;
}
#detail button{
    height:80rpx;
    line-height:80rpx;
    background:#3a9bfb;
    border-radius:40rpx;
    position:absolute;
    left:50%;
    bottom:40rpx;
    padding:0 80rpx;
    color:white;
    transform:translateX(-50%);
}
#detail icon{
    position:absolute;
    right:0;
    top:0;
    transform: translate(50%,-50%);
    background:#3a9bfb;
    border-radius:50%;
}

.switchTab{
    position:absolute;
    top:928rpx;
    left:0;
    width:100%;
}
.switchTab button{
    width:33.3%;
    height:60rpx;
    line-height:60rpx;
    font-size:28rpx;
    display:inline-block;
    border:none;
    background-color:none;
    border-radius:0;
}
button::after{
    border:none;
}
.switchTab .active{
    background:#3a9bfb;
    color:white;
}
.switchTab .com{
    display:none;
}
.switchTab .cur{
    display:block;
}
.switchTab view .sign{
    color:white;
    display:block;
    width:40rpx;
    height:40rpx;
    text-align:center;
    font-size:30rpx;
    display:inline-block;
    border-radius:50%;
    background:#3a9bfb;
}

.switchTab image{
    width:75rpx;
    height:75rpx;
    border-radius:50%;
    position:relative;
    top:20rpx;
    margin:0 10rpx;
}
.switchTab #toy{
    position:relative;
    top:-10rpx;
    width:94%;
    height:400rpx;
    left:50%;
    border-radius:0%;
    transform:translateX(-52%);
    margin:0;

}
.switchTab .zoom{
    font-size:40rpx;
    color:#3a9bfb;
}
.switchTab .floRight{
    float:right;
    margin-top:32rpx;
    margin-right:40rpx;
}
.switchTab #loadMore{
    width:100%;
    text-align:center;
    margin:30rpx 0;
}
.opera{
    margin-top:40rpx;
    text-align: center;
}
.opera button{
    background:#3a9bfb;
    color:white;
    margin-right:20rpx;
}
