/**app.wxss**/

page, body {
  width: 100%;
  height: 100%;
  position: relative;
}

image {
  font-size: 0;
  display: block;
}

video {
  display: block;
}

html {
  padding: 0 !important;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.error {
  background: rgba(0, 0, 0, 0.80);
  border-radius: 4px;
  text-align: center;
  position: fixed;
  height: auto;
  line-height: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  z-index: 999999;
}
