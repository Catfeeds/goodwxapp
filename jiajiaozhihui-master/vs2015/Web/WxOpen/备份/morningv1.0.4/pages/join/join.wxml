<view class="page">
  <view class="page__bd">
    <view class="weui-cells" wx:if="{{!gNameEmpty}}">
        <navigator url="{{path+query}}" open-type="redirect" class="weui-cell weui-cell_access ">
            <view class="weui-cell__hd"></view>
            <view class="weui-cell__bd">
                微信群一
            </view>
            <view class="weui-cell__ft"></view>
        </navigator>
        <view class="weui-cell weui-cell_access ">
            <view class="weui-cell__hd"></view>
            <view class="weui-cell__bd">
                微信群二
            </view>
            <view class="weui-cell__ft"></view>
        </view>
        <view class="weui-cell weui-cell_access ">
            <view class="weui-cell__hd"></view>
            <view class="weui-cell__bd">
                微信群三
            </view>
            <view class="weui-cell__ft"></view>
        </view>
    </view> 
    <block wx:if="{{gNameEmpty}}">
      <view class="weui-cells weui-cells_after-title" >
        <view class="weui-cell weui-cell_input">
          <input class="weui-input" maxlength="10" placeholder="请先修改群名" />
        </view>
      </view>
      <view class="weui-btn-area">
          <button style="background:#f60;color:#fff;" bindtap="update" class="weui-btn weui-btn_primary">修改</button>
      </view>
    </block>
    
  </view>
</view>