<view class="page">
    <view class="page__bd">
        <view class="weui-cells " style="margin-top:0;">
            <view bindtap="gotoHabit" class="weui-cell weui-cell_access">
                <view class="weui-cell__bd"></view>
                <view class="weui-cell__ft" style="color:#f60">
                    <view class="fa fa-plus">新增</view>
                </view>
            </view>
        </view>
        <view class="weui-cells__title" >习惯</view>
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <block wx:for="{{habits}}">
                    <navigator url="/pages/punchcard/punchcard?habitid={{item.habitId}}" 
                        open-type="navigate" 
                        class="weui-media-box weui-media-box_appmsg">
                        <view class="weui-media-box__hd">
                            <image mode="aspectFit" src="{{item.imgurl}}" style="width:150rpx;height:100rpx"></image>
                        </view>
                        <view class="weui-media-box__bd">
                            <view class="weui-media-box__title habit-media__title" >第{{item.finish}}天</view>
                            <view class="weui-media-box__desc habit-media__desc" >{{item.title}}</view>
                        </view>
                    </navigator>
                </block>
            </view>
        </view>
    </view>
</view>