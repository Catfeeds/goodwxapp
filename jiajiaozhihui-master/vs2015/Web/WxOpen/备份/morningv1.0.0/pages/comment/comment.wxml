<block>
    <view class="model">
        <form bindsubmit="addDetail">
            <view style="padding:15px 10px;">
                <textarea  
                    class="weui-textarea"
                    auto-focus="true" 
                    style="height:350rpx;" 
                    placeholder="说说你的心路历程" 
                    maxlength="300"
                    bindinput="bindinput"
                    name="notes">
                </textarea>
            </view>
            <view style="padding:15px 10px;">
                <view class="weui-flex ">
                    <view class="weui-flex__item" style="text-align:left;color:#aaa;">
                        <view bindtap="chooseImage"  class="fa fa-camera fa-2x"></view>
                    </view>
                    <view class="weui-flex__item">
                        <button style="{{valid.length?'background:#f60;color:#fff;':''}}" 
                            disabled="{{valid.length?false:true}}" 
                            size="mini" form-type="submit"> 提交 </button>
                    </view>
                </view>
            </view>
        </form>
    </view>
</block>