}
.right{
  right:0;
}
.left{
  left: 0;
}
.circleProgress{
  width:300rpx;
  height:300rpx;
  border:30rpx solid transparent;
  border-radius:50%;
  position: absolute;
  top :50;
  transform: rotate(45deg);
}
.rightcircle{
  border-top:30rpx solid #2fcc85;
  border-right:30rpx solid #2fcc85;
  right:1px;
  transform:rotate(-135deg);
}
.leftcircle{
  border-bottom:30rpx solid #2fcc85;
  border-right:30rpx solid #2fcc85;
  left :1px;
  transform:rotate(-45deg);
}
.circleProgressLoad_right{
  animation:circleProgressLoad_right .6s linear forwards;
  -webkit-animation: circleProgressLoad_right .6s linear forwards;
}
.circleProgressLoad_left{
  animation:circleProgressLoad_left .6s linear .6s forwards;
  -webkit-animation: circleProgressLoad_left .6s linear .6s forwards;
}
@-webkit-keyframes circleProgressLoad_right{
  0%{
    opacity: 0;
    transform: rotate(-135deg);
    -webkit-transform: rotate(-135deg);
  }
  100%{
    opacity: 1;
    transform: rotate(45deg);
    -webkit-transform:rotate(45deg); 
  }
}
@-webkit-keyframes circleProgressLoad_left{
  0%{
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg)
  }
  100%{
    transform: rotate(135deg);
    -webkit-transform: rotate(135deg)
  }
}