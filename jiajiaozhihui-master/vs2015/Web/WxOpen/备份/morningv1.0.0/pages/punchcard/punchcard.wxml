<view class="page">
  <view class="page__bd">
    <view class="modele">
        <view class="module-b">
            <!-- 状态为0：倒计时 -->
            <block wx:if="{{btn == 0}}">
                <view class="sign-wrap" bindtap="punchCard">
                    <view class="sign-btn">
                        <image src="../image/sign_btn_{{btn}}.png"></image>
                        
                        <!--
                        <view class="circleProgress_wrapper">
                            <view class="wrapper right">
                                <view class="circleProgress rightcircle {{btnPress ? 'circleProgressLoad_right':''}}"></view>
                            </view>
                            <view class="wrapper left">
                                <view class="circleProgress leftcircle {{btnPress ? 'circleProgressLoad_left':''}}"></view>
                            </view>
                        </view>
                        -->
                    </view>
                </view>
            </block>
            <!-- 状态为1：已打卡 -->
            <block wx:if="{{btn == 1}}">
                <view class="sign-wrap">
                    <view class="sign-btn">
                        <image src="../image/sign_btn_2.png"></image>
                        
                    </view>
                </view>
            </block>
            <block >
                <view class="weui-flex card-wrap">
                    <view class="weui-flex__item">
                        <button bindtap="addComment"  style="{{btn==1?'background:#f60;color:#fff;':''}} "
                            disabled="{{btn==0?true:false}}" size="mini" >记录一下</button>
                    </view>
                    <view class="weui-flex__item">
                        <button  open-type="share" style="background:#f60;color:#fff;" size="mini"  >分享习惯</button>
                    </view>
                </view> 
            </block>
        </view> 
    </view>     
  </view>
</view>
