<import src="/pages/common/template/habitdetail.wxml" />
<view class="page">
    <view class="page__bd">
        <view>
            <image style="width:100%;" mode="widthFix" src="/pages/image/wxopen.jpg"></image>
        </view>
        <view class="weui-cells "  >
            <view  class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <picker bindchange="bindPickerChange"  value="{{index}}" range="{{array}}" range-key="title">
                        <view class="picker">
                        当前选择：{{array[index].title}}
                        </view>
                    </picker>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </view>
        </view>
        <view>
            <template is="habitdetail" data="{{...items}}" />
        </view>
    </view>
</view>