.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #fff;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}
.recommend{
  background:#fff;
  padding:15px;
  margin-top:15px;
}
.recommend-head{
  
}
.recommend-head image{
  width:40px;
  height:40px;
  border-radius:20px;
}


.recommend-head__nickname{
  color:#000;
  font-size:20px;
  text-align: left;
}
.recommend-head__time{
  text-align: left;
  color: #aaa;
}
.recommend-message{
  text-align: left;
  width:100%;
  height: auto;
  word-wrap: break-word;
  display:block;
  word-break:break-all;
}
.recommend-target{
  padding-top:15px;
  padding-bottom:15px;
  width:325rpx;
  height:325rpx;
  text-align: center;
}
.recommend-target__content1{
  width:300rpx;
  height:300rpx;
  border-radius:150rpx;
  border: 1px solid #f00;
  background: url(../image/tagar.png) no-repeat;
}
.recommend-target__content{
  width:300rpx;
  height:300rpx;
  position: relative;
  background-size: 100%;
}
.recommend-target__image{
  width:300rpx; 
  height:300rpx;
}
.recommend-action{
  border-top:1px solid #eee;
  border-bottom:1px solid #eee;
  width:100%;
  padding-top:5px;
  padding-bottom:5px;
}
.recommend-action__like{
  border-right:0px solid #eee;
  color:#666;
}

.recommend-action__comment{
  border-right:0px solid #eee;
  color:#666;
}
.recommend-action__more{
  color:#666;
}
.recommend-like{
  border-bottom:1px solid #eee;
}
.recommend-like__header{
  padding:0;
  text-align: left
}
.recommend-like__header image{
  width:60rpx;
  height: 60rpx;
  border-radius:30rpx;
  margin-right:9rpx;
}

.recommend-like__more{
  width:50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border:1px solid #f00;
  text-align: center;
  color:#f00;
}
.recommend-comment{
  font-size:14px;
  
}
.recommend-comment__header{
  padding-right:10px;
  color:#99CCCC;
}
.recommend-comment__message{
  text-align: left;
  color:#333;
}
.join_wrap{
    background:#FF6600;
    width:100%;
    position:fixed;
    bottom:0rpx;
}
.join_wrap .title{
    color:#fff;
}
.join_wrap .desc{
    color:#fff;
    font-size: 24rpx;
}
.join_wrap .input{
    border-radius: 10px;
    border:1px solid #fff;
    color:#fff;
}
.modele{
    border-radius: 10px;
    box-shadow: 1px 1px 2px #666 ;
    border:1px solid #eee;
    background: #fff;
    margin:5px 5px 0 5px;
    padding-bottom:20px;
    padding-top:20px;
}
.babit-rank{
    display: -ms-flex;
    display: -webkit-flex;
    display: flex;
    -ms-flex-align: center;
    -webkit-align-items: center;
    -webkit-box-align: center;
    align-items: center;
}
.habit{
  position: relative;
}
.babit-rank__sn{
    padding-left:5px;
    padding-right:5px;
    color:#99CCCC;
    font-size:16px;
}
.habit-cell::before{
    border-top:none;
}
.habit-cells::before{
    border-top:none;
}
.habit-cells::after{
  border-bottom:none;
}
.habit-panel::before{
  border-top:none;
}
.habit-panel::after{
  border-bottom:none;
}
.habit-rank__nickName{
  padding-left:10px;
  
}
.habit-rank__desc{
  padding-left:10px;
  color:#f60;
}
