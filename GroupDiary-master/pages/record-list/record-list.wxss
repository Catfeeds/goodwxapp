@import "../../common/common.wxss";

page {
  background: #eee;
}

.record {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  background: white;
}

.record .user-img {
  height: 80rpx;
  width: 80rpx;
  border-radius: 100%;
  margin-left: 30rpx;
  margin-top: 25rpx;
}

.record .content {
  display: flex;
  width: 600rpx;
  margin-top: 35rpx;
  margin-left: 20rpx;
  flex-direction: column;
}

.record .content .user-name {
  font-size: 32rpx;
  color: #58b6ff;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.record .content .text {
  margin-top: 18rpx;
  color: #353535;
  font-size: 28rpx;
}

.record .content .image {
  margin-top: 18rpx;
  width: 534rpx;
}

.record .content .address {
  display: flex;
  flex-direction: row;
  height: 30rpx;
  align-items: center;
  margin-top: 20rpx;
}

.record .content .address .icon {
  height: 30rpx;
  width: 30rpx;
}

.record .content .address .name {
  color: #58b6ff;
  font-size: 24rpx;
  line-height: 30rpx;
}

.record .content .bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 18rpx;
  margin-bottom: 25rpx;
}

.record .content .bottom .date {
  color: gray;
  font-size: 24rpx;
}

.record .content .bottom .delete {
  color: #58b6ff;
  font-size: 24rpx;
  margin-left: 20rpx;
}
