@import "../../common/common.wxss";

page {
  background-color: #eee;
}

.content {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding-top: 30rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.content .input {
  font-size: 30rpx;
  color: #1c1c1c;
  width: 100%;
  height: 150rpx;
}

.content .select-image {
  margin-top: 30rpx;
  width: 534rpx;
}

.address {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  height: 100rpx;
  background-color: white;
}

.address .icon {
  height: 40rpx;
  width: 40rpx;
  margin-left: 30rpx;
}

.address .text {
  flex: 1;
  font-size: 28rpx;
  color: #9b9b9b;
  margin-left: 20rpx;
}

.address .arrow {
  width: 24rpx;
  height: 24rpx;
  margin-right: 30rpx;
}

.anonymity {
  position: fixed;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-right: 20rpx;
  height: 100rpx;
  right: 0;
}

.anonymity .text {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #9b9b9b;
}

.submit {
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.submit .btn {
  width: 690rpx;
  line-height: 94rpx;
  text-align: center;
  color: white;
  border-radius: 78rpx;
  border: 8rpx solid #cde9ff;
  font-size: 32rpx;
  font-weight: bold;
}

.clickable {
  background-color: #58b6ff;
}

.unclickable {
  background-color: #cde9ff;
}
