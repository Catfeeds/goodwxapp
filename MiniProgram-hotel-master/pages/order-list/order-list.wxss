/* pages/order-list/order-list.wxss */
.container{
  background-color: #f2f2f2;
  min-height: 1200rpx;
}
.navbar{
  height: 88rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between
}
.navbar-item{
  width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  text-align: center
}
.navbar-item.active{
  color: #e1443b;
  position: relative
}
.navbar-item.active::after{
  content: '';
  width: 160rpx;
  height: 4rpx;
  background-color: #e1443b;
  position: absolute;
  left: 0;
  bottom: 0
}
.order-item{
  background-color: #ffffff;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.order-hd{
  height: 150rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  line-height: 50rpx;
  border-bottom: 1rpx #eeeeee solid;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.order-state{
  color: #e1443b
}
.order-num{
  height: 136rpx;
  margin-left: 30rpx;
  line-height: 88rpx;
  border-bottom: 2rpx #eeeeee solid;
  position: relative
}
.order-num::after{
  content: '';
  width: 22rpx;
  height: 22rpx;
  border-top: 3rpx #b8b8bc solid;
  border-right: 3rpx #b8b8bc solid;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -11rpx
}
.goods-list{
  height: 178rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  border-bottom: 1rpx #eeeeee solid;
  display: flex;
  align-items: center
}
.goods-list image{
  width: 120rpx;
  height: 118rpx;
  margin-right: 22rpx
}
.order-ft{
  height: 100rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.totalPrice{
  color: #e1443b
}
.order-manage{
  display: flex;
  justify-content: flex-end
}
.cancel,.toPay{
  width: 162rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 6rpx
}
.cancel{
  border: 1rpx #cacaca solid;
}
.toPay{
  color: #e3473a;
  border: 2rpx #e3473a solid;
  margin-left: 20rpx
}
.section-ft{
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  color: #989898
}