<!--pages/recommend-list/recommend-list.wxml-->
<view class='recommend-list'>
  <view class='recommend-item' wx:for='{{items}}' wx:key='code'>
    <image src='{{item.url}}'></image>
    <view class='hotel-text'>
      <view class='hotel-title'>{{item.title}}</view>
      <view class='time'>{{item.time}}</view>
    </view>
  </view>
</view>