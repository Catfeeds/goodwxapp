
/* 日历表样式 */
.section-hd{
  height: 240rpx;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  background-color: white;
}
.hotel-time{
  height: 144rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  color: #888888;
  font-size: 30rpx;
  line-height: 60rpx;
  padding-top: 32rpx;
  position: relative
}
.endTime{
  text-align: right
}
.time{
  color: #ff9c01
}
.hotel-time::after{
  content: '';
  width: 2rpx;
  height: 120rpx;
  background-color: #ededed;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -60rpx;
}
