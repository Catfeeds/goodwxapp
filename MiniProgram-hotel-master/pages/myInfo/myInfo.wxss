/* pages/myInfo/myInfo.wxss */
.container{
  font-size: 30rpx
}
.userInfo{
  height: 220rpx;
  padding-top: 90rpx;
  background-color: #f2f2f2;
  border-bottom: 2rpx solid #e4e4e4;
  margin-bottom: 20rpx; 
  text-align: center
}
.userPic{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%
}
.userName{
  line-height: 80rpx;
}
.shopping{
  height: 316rpx;
  border-bottom: 14rpx solid #f2f2f2;
  position: relative
}
.shoppingTitle{
  height: 98rpx;
  border-bottom: 2rpx solid #e4e4e4;
  padding-left: 36rpx;
  line-height: 98rpx;
}
.order-all{
  position: absolute;
  right: 68rpx;
  top: 29rpx;
  color: #696969;
}
.order-all::after{
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #696969;
  border-right: 3rpx solid #696969;
  position: absolute;
  right: -35rpx;
  top: 50%;
  transform: rotate(45deg);
  margin-top: -11rpx
}
/* 弹性布局 */
.shoppingContent{
  display: flex;   
  justify-content: space-around;
  height: 214rpx
}
.content-item{
  width: 120rpx;
  height: 134rpx;
  text-align: center;
  margin-top: 50rpx
}
.content-item image{
  width: 66rpx;
  height: 66rpx
}
.content-item view{
  line-height: 70rpx;
  color: #a2a2a2
}
.info-list{
  margin-bottom: 30rpx
}
.info-item{
  height: 96rpx;
  border-bottom: 2rpx solid #e4e4e4;
  line-height: 96rpx;
  padding-left: 36rpx;
  position: relative
}
.info-item::after{
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #696969;
  border-right: 3rpx solid #696969;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: rotate(45deg);
  margin-top: -11rpx
}