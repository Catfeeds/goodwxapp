<!--pages/myInfo/myInfo.wxml-->
<view class='container'>
  <view class='userInfo'>
    <image class='userPic' src='{{userPic}}'></image>
    <view class='userName'>{{userName}}</view>
  </view>
  <view class='shopping'>
    <view class='shoppingTitle'>
      <text>我的订单</text>
    </view>
    <view class='shoppingContent'>
      <view class='order-all' data-id='1' bindtap='orderList'>全部订单</view>
      <view class='content-item' data-id='2' bindtap='orderList'>
        <image src='/image/23.png'></image>
        <view>待付款</view>
      </view>
      <view class='content-item' data-id='3' bindtap='orderList'>
        <image src='/image/24.png'></image>
        <view>待入住</view>
      </view>
    </view>
  </view>
  <view class='info-list'>
    <view class='info-item' wx:for='{{items}}' wx:key='code' data-id='{{index}}' bindtap='skip_link'>{{item}}</view>
  </view>
</view>
