<!--pages/about/about.wxml-->
<view class='container'>
  <view class='navbar'>
    <view class="navbar-item {{currentTab==index?'active':''}}" wx:for='{{navbar}}' wx:key='code' data-id='{{index}}' bindtap='navbarTap'>{{item}}</view>
  </view>
  <view class='margin-top'></view>
  <!-- 关于我们 -->
  <view class='aboutUs' hidden='{{currentTab!==0}}'>
  <!-- 文本编辑插件 -->
  </view>
  <!-- 联系方式 -->
  <view class='contact-box' hidden='{{currentTab!==1}}'>
    <view class='service-hd'>
    <button class='contact-button' open-type='contact'></button>
    <image src='/image/st.png'></image>
    <view class='hd-title'>点击在线客服</view>
  </view>
  <view class='service-bd'>
    <view class='service-item'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{title}}</view>
    </view>
    <view class='service-item' bindtap='phone'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{phone}}<text>[一键拨号]</text></view>
    </view>
    <view class='service-item' bindtap='Landline'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{telephone}}<text>[一键拨号]</text></view>
    </view>
    <view class='service-item'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{weChat}}</view>
    </view>
    <view class='service-item'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{QQ}}</view>
    </view>
    <view class='service-item' bindtap='location'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>{{address}}[一键导航]</view>
    </view>
    <view class='service-item' bindtap='toForm'>
      <view class='service-img'><image src='/image/s1.png'></image></view>
      <view class='service-content'>留言</view>
    </view>
  </view>
  </view>
</view>