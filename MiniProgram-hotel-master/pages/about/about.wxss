/* pages/about/about.wxss */
.container{
  background-color: #f2f2f2;
  min-height: 1200rpx;
}
.navbar{
  width: 100%;
  height: 80rpx;
  background-color: #f4f4f4;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
  display: flex;
  justify-content: space-around;
  align-items: center
}
.navbar-item{
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center
}
.navbar-item.active{
  color: #e5403c;
  position: relative
}
.navbar-item.active::after{
  content: '';
  width: 120rpx;
  height: 4rpx;
  background-color: #e5403c;
  position: absolute;
  left: 0;
  bottom: 0
}
.margin-top{
  width: 100%;
  height: 80rpx
}

/* 联系方式 */
.contact-box{
  margin-top: 50rpx
}
.service-hd{
  width: 250rpx;
  height: 90rpx;
  position: relative;
  margin-bottom: 58rpx;
  margin-left: auto;
  margin-right: auto
}
.contact-button{
  width: 250rpx;
  height: 90rpx;
  z-index: 2;
  position: absolute;
  opacity: 0.001
}
.service-hd image{
  width: 250rpx;
  height: 90rpx;
}
.hd-title{
  width: 250rpx;
  height: 45rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 23rpx;
  color: #ffffff
}
.service-hd::before,.service-hd::after{
  content: '';
  width: 190rpx;
  height: 4rpx;
  background: #e85452;
  position: absolute;
  top: 50%;
  margin-top: -2rpx;
  left: -215rpx
}
.service-hd::after{
  left: 275rpx
}
.service-bd{
  margin-bottom: 360rpx
}
.service-item{
  width: 676rpx;
  height: 100rpx;
  border: 4rpx solid #e85452;
  color: #7c7c7c;
  margin-bottom: 30rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
}
.service-img{
  width: 100rpx;
  height: 100rpx;
  background: #e85452;
  display: inline-flex;
  align-items: center;
  justify-content: space-around
}
.service-img image{
  width: 60rpx;
  height: 60rpx
}
.service-content{
  width: 576rpx;
  padding-left: 26rpx;
  font-size: 30rpx;
  line-height: 100rpx;
}
.service-content text{
  float: right
}