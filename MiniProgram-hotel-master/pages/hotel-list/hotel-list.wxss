/* pages/hotel-list/hotel-list.wxss */
.container{
  background-color: #f5f4f9;
  min-height: 1200rpx
}
.search{
  width: 702rpx;
  height: 74rpx;
  padding: 24rpx;
  line-height: 74rpx;
  background-color: #f5f4f9;
  display: inline-flex;
  position: fixed;
  left: 0;
  top: 0
}
.search-input{
  height: 74rpx;
  width: 534rpx;
  background-color: #ffffff;
  padding-left: 64rpx;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
  font-size: 30rpx
}
.search-button{
  background-color: #19203d;
  width: 168rpx;
  height: 74rpx;
  color: #ffffff;
  padding: 0;
  line-height: 74rpx;
  font-size: 34rpx;
  border: none;
  border-radius: 0;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx
}
.search-icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 40rpx;
  top: 42rpx
}

.hotel-list{
  margin-top: 122rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}
.hotel-item{
  background-color: #ffffff;
  width: 338rpx;
  height: 470rpx;
  margin-bottom: 24rpx
}
.hotel-item image{
  width: 338rpx;
  height: 338rpx
}
.hotel-title{
  font-size: 26rpx;
  line-height: 74rpx;
  padding-left: 25rpx
}
.hotel-item .number{
  padding: 0 25rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between
}
.hotel-item .price{
  color: #e53752;
}
.hotel-item .sale-num{
  color: #afafaf
}
.section-ft{
  height: 115rpx;
  line-height: 115rpx;
  text-align: center;
  font-size: 30rpx;
  color: #939393
}
