<!--pages/payHtml/payHtml.wxml-->
<view class='container'>
  <view class='add-address' wx:if='{{address_empty}}' bindtap='add_address'>
    <view class='plus'>+</view>
    <view>添加预定人及联系方式</view>
  </view>
  <view class='user-info' wx:else bindtap='select_address'>
    <image src='/image/address.png'></image>
    <text class='name'>姓名：{{name}}</text>
    <view class='address'>联系方式：{{phone}}</view>
  </view>
  <view class='order-list'>
    <view class='order-list-title'>{{goods_list_title}}</view>
    <view class='order-item' wx:for='{{items}}' wx:key='code'>
      <image class='goods-img' src='{{item.url}}'></image>
      <view class='order-text'>
        <view class='goods-title'>{{item.goods_title}}</view>
        <view class='goods-num'>
          <view class='goods-price'>￥{{item.goods_price}}</view>
          <view class='sale-volume'>X{{item.sale_volume}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class='order-time'>
    <view>预定时间</view>
    <view>{{date}}至{{dateF}}</view>
  </view>
  <view class='remarks'>
    <label>备注</label><input type='text' placeholder='如需备注请输入'></input>
  </view>
  <view class='section-ft'>
    <view class='totalPrice'>合计：￥{{totalPrice}}</view>
    <view class='toPay'>提交订单</view>
  </view>
</view>