/* pages/payHtml/payHtml.wxss */
.container{
  background-color: #f2f2f2
}
.add-address{
  height: 118rpx;
  padding-top: 28rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  position: relative;
}
.plus{
  width: 60rpx;
  height: 60rpx;
  font-size: 50rpx;
  font-weight: bold;
  color: #ffffff;
  background-color: #3382f8;
  text-align: center;
  line-height: 60rpx;
  margin: 0 30rpx;
}
.user-info{
  height: 150rpx;
  padding-top: 30rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  position: relative
}
.user-info image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 32rpx;
  margin-right: 42rpx;
}
.name{
  margin-right: 30rpx
}
.address{
  padding-left: 100rpx;
  color: #7b7b7b
}
.add-address::after,.user-info::after{
  content: '';
  width: 22rpx;
  height: 22rpx;
  border-top: 3rpx #bcbcbe solid;
  border-right: 3rpx #bcbcbe solid;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  right: 32rpx;
}
.order-list{
  background-color: #ffffff;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}
.order-list-title{
  height: 92rpx;
  line-height: 92rpx;
  font-size: 28rpx;
}
.order-item{
  height: 220rpx;
  border-top: 2rpx #ececec solid;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.goods-img{
  width: 170rpx;
  height: 170rpx
}
.order-text{
  width: 500rpx;
  height: 170rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between
}
.goods-num{
  text-align: right
}
.goods-price{
  height: 100rpx
}
.sale-volume{
  color: #929292
}
.remarks,.order-time{
  height: 92rpx;
  padding-left: 30rpx;
  line-height: 92rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
  display: flex
}
.order-time{
  justify-content: space-between;
  padding-right: 60rpx
}
.remarks{
  margin-bottom: 0;
  border-bottom: 1rpx #ededed solid
}
.remarks label{
  width: 150rpx
}
.remarks input{
  height: 92rpx
}
.section-ft{
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #e64240;
  border-top: 2rpx #ececec solid;
  display: flex;
  justify-content: flex-end;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 3
}
.toPay{
  width: 250rpx;
  color: #ffffff;
  background-color: #e64240;
  font-size: 30rpx;
  text-align: center;
  margin-left: 32rpx
}