/**index.wxss**/
.container{
  background-color: #f2f2f2;
}
.hd-slide{
  width: 100%;
  height: 468rpx;
}
.slide-image{
  width: 750rpx;
  height: 468rpx
}
.search{
  width: 702rpx;
  height: 74rpx;
  margin: 24rpx;
  line-height: 74rpx;
  display: inline-flex;
  position: relative
}
.search-input{
  height: 74rpx;
  width: 534rpx;
  background-color: #ffffff;
  padding-left: 64rpx;
  border-top-left-radius: 14rpx;
  border-bottom-left-radius: 14rpx;
  font-size: 30rpx
}
.search-button{
  background-color: #19203d;
  width: 168rpx;
  height: 74rpx;
  color: #ffffff;
  padding: 0;
  line-height: 74rpx;
  font-size: 34rpx;
  border: none;
  border-radius: 0;
  border-top-right-radius: 14rpx;
  border-bottom-right-radius: 14rpx
}
.search-icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 12rpx;
  top: 20rpx
}
.service-list{
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-bottom: 20rpx
}
.service-item{
  width: 170rpx;
  height: 180rpx;
  margin-top: 32rpx;
  text-align: center
}
.service-item image{
    width: 100rpx;
    height: 100rpx
}
.service-title{
  line-height: 58rpx;
  font-size: 26rpx
}
.hotel-list{
  margin-left: 24rpx;
  margin-right: 24rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap
}
.hotel-item{
  background-color: #ffffff;
  width: 338rpx;
  height: 470rpx;
  margin-bottom: 24rpx
}
.hotel-item image{
  width: 338rpx;
  height: 338rpx
}
.hotel-title{
  font-size: 26rpx;
  line-height: 74rpx;
  padding-left: 25rpx
}
.hotel-item .number{
  padding: 0 25rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between
}
.hotel-item .price{
  color: #e53752;
}
.hotel-item .sale-num{
  color: #afafaf
}
.section-ft{
  height: 115rpx;
  line-height: 115rpx;
  text-align: center;
  font-size: 30rpx;
  color: #939393
}
