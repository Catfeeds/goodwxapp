<!--pages/address/address.wxml-->
<view class='container'>
  <view class='address-list'>
    <view class='address-item' wx:for='{{items}}' wx:key='code' data-index='{{index}}' bindtap='checkedState'>
      <icon type='success_no_circle' size='23' color='#e23531' wx:if='{{item.checkedState}}'></icon>
      <icon type='success_no_circle' size='23' color='#ffffff' wx:else></icon>
      <view class='user-info'>
        <view class='user-info-hd'>
          <view class='name'>{{item.name}}</view>
          <view>{{item.phone}}</view>
        </view>
        <view class='address'>{{item.address}}</view>
      </view>
      <image class='edit' src='/image/edit.png'></image>
    </view>
  </view>
  <view class='section-ft' bindtap='address_add'>
    <view class='add-icon'>+</view>
    <view>新增收货地址</view>
  </view>
</view>