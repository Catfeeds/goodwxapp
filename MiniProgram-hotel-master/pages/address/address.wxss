/* pages/address/address.wxss */
.address-item{
  height: 160rpx;
  border-bottom: 1rpx #f0f0f0 solid;
  padding: 22rpx 26rpx 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.user-info{
  width: 560rpx;
  font-size: 28rpx
}
.user-info-hd{
  line-height: 80rpx;
  display: flex
}
.name{
  width: 160rpx
}
.address{
  font-size: 26rpx;
  color: #797979
}
.edit{
  width: 42rpx;
  height: 42rpx
}
.section-ft{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx #f0f0f0 solid;
  font-size: 28rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 5
}
.add-icon{
  width: 40rpx;
  height: 40rpx;
  background-color: #f13d40;
  border-radius: 50%;
  color: #ffffff;
  margin: 0 30rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.section-ft::after{
  content: '';
  width: 22rpx;
  height: 22rpx;
  border-top: 3rpx #797979 solid;
  border-right: 3rpx #797979 solid;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -11rpx;
}