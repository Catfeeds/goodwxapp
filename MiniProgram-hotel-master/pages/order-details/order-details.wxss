/* pages/order-details/details.wxss */
.container{
  background-color: #f2f2f2;
  padding-top: 20rpx;
  font-size: 28rpx;
}
.order-state{
  height: 140rpx;
  background-color: #ffffff;
  border-bottom: 1rpx #ededed solid;
  padding-left: 30rpx;
  display: flex;
  align-items: center
}
.order-state-img{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx
}
.order-state-text{
  height: 100rpx;
  line-height: 50rpx
}
.order-state-title{
  color: #e64240
}
.order-state-explain{
  color: #929292
}

.user-info{
  height: 120rpx;
  padding-top: 20rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.user-info image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 32rpx;
  margin-right: 42rpx;
}
.name{
  margin-right: 30rpx
}
.order-list{
  background-color: #ffffff;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}
.order-list-title{
  height: 92rpx;
  line-height: 92rpx;
  font-size: 28rpx;
}
.order-item{
  height: 220rpx;
  border-top: 2rpx #ececec solid;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.goods-img{
  width: 170rpx;
  height: 170rpx
}
.order-text{
  width: 500rpx;
  height: 170rpx;
  font-size: 28rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between
}
.goods-num{
  text-align: right
}
.goods-price{
  height: 100rpx
}
.sale-volume{
  color: #929292
}
.hotel-time,.leave-time,.goods-totalPrice,.discount,.totalPrice,.remarks{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #ff8d00;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between
}
.remarks{
  color: #000000
}