/* pages/hotel-reserve/hotel-reserve.wxss */
.reserve-hd{
  width: 695rpx;
  height: 110rpx;
  border-top: 2rpx solid #dddddd;
  font-size: 26rpx;
  padding-left: 30rpx;
  padding-right: 25rpx;
  line-height: 110rpx;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  z-index: 3
}
.date{
  display: inline-flex;
  width: 430rpx;
  align-items: center;
  color: #5e5e5e
}
.date image{
  width: 46rpx;
  height: 46rpx;
  margin-right: 26rpx
}
.reserve-item{
  margin-top: 112rpx
}
.item-hd{
  height: 180rpx;
  padding-left: 24rpx;
  padding-right: 72rpx;
  border-top: 7rpx solid #f1f1f1;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.item-content{
  width: 410rpx;
  height: 100rpx;
}
.item-content image{
  width: 150rpx;
  height: 100rpx;
  vertical-align: middle
}
.item-content .title{
  font-size: 30rpx;
  margin-left: 22rpx;
  font-weight: bold;
  position: relative
}
.item-content .title::after{
  content: '';
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #010101;
  border-right: 3rpx solid #010101;
  transform: rotate(45deg);
  position: absolute;
  right: -20rpx;
  top: 50%;
  margin-top: -10rpx
}
.price{
  font-size: 30rpx;
  line-height: 40rpx;
  position: relative
}
.price::after{
  content: '';
  width: 24rpx;
  height: 24rpx;
  border-top: 3rpx solid #b8b8b8;
  border-right: 3rpx solid #b8b8b8;
  transform: rotate(135deg);
  position: absolute;
  right: -50rpx;
  top: 50%;
  margin-top: -12rpx
}
.nowPrice{
  color: #fb0206;
  height: 56rpx;
  font-size: 26rpx
}
.nowPrice text{
  font-weight: bold
}
.save-price{
  color: #b8b8b8
}
.save-price text{
  text-decoration: line-through
}
.price-list{
  height: 150rpx;
  padding-left: 24rpx;
  border-top: 2rpx solid #dddddd;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.list-title{
  font-size: 30rpx
}
.list-bd{
  display: flex;
  align-items: center;
  padding-left: 24rpx;
  padding-right: 42rpx
}
.payMode{
  background-color: #ffd9cd;
  font-size: 24rpx;
  width: 110rpx;
  height: 100rpx;
  color: #e74341;
  line-height: 40rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-left: 30rpx
}
.book{
  background-color: #e74341;
  height: 60rpx;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 60rpx;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}