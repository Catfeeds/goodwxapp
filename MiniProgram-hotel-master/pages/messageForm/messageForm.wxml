<!--pages/messageForm/messageForm.wxml-->
<view class='container'>
  <form>
    <view class='form-list'>
      <label>预约</label>
    </view>
    <view class='form-list flex-wrap'>
      <label>预约人</label><input type='text' placeholder='姓名'></input>
    </view>
    <view class='form-list flex-wrap'>
      <label>电话</label><input type='text' placeholder='请留下电话号码'></input>
    </view>
    <view class='form-list'>
      <view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="picker">
            日期: {{date}} (点击修改)
          </view>
        </picker>
      </view>
      <view>
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
          <view class="picker">
            时间: {{time}} (点击修改)
          </view>
        </picker>
      </view>
    </view>
    <view class='message'>
      <label>留言</label>
      <textarea placeholder='如需留言请输入'></textarea>
    </view>
    <button class='form-button'>确认提交</button>
  </form>
</view>
