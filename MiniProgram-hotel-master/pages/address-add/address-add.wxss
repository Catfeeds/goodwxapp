/* pages/address-add/address-add.wxss */
.form-item{
  height: 88rpx;
  background-color: #ffffff;
  line-height: 88rpx;
  font-size: 28rpx;
  border-bottom: 1rpx #eeeeee solid;
  margin-left: 30rpx;
  display: flex
}
.form-item-address{
  height: 110rpx;
}
.form-item label{
  width: 160rpx;
}
.form-item input{
  height: 88rpx;
  line-height: 88rpx
}
.form-item:nth-of-type(1){
  padding-top: 20rpx
}
.form-item-address textarea{
  line-height: 60rpx
}
.button-list{
  background-color: #f5f4f9
}
.save,.cancel{
  width: 690rpx;
  height: 80rpx;
  color: #ffffff;
  background-color: #e64240;
  font-size: 34rpx;
}
.save{
  margin-top: 30rpx;
  margin-bottom: 30rpx
}
.cancel{
  background-color: #ffffff;
  color: #000000
}