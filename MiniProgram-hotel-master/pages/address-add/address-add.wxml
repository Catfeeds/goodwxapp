<!--pages/address-add/address-add.wxml-->
<view class='container'>
  <form>
    <view class='form-item'>
      <label>联系人</label>
      <input type='text' placeholder='姓名'></input>
    </view>
    <view class='form-item'>
      <label>手机号码</label>
      <input type='text' placeholder='11位手机号码'></input>
    </view>
    <view class='form-item'>
      <label>选择地区</label>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">{{region[0]}}  {{region[1]}}  {{region[2]}}</picker>
    </view>
    <view class='form-item form-item-address'>
      <label>详细地址</label>
      <textarea placeholder='街道门牌信息'></textarea>
    </view>
    <view class='form-item'>
      <label>邮政编码</label>
      <input type='text' placeholder='邮政编码'></input>
    </view>
    <view class='button-list'>
      <button class='save'>保存</button>
      <button class='cancel'>取消</button>
    </view>
  </form>
</view>