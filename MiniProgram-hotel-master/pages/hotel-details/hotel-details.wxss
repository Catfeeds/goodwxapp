/* pages/hotel-details/hotel-details.wxss */
.container{
  background-color: #f2f2f2
}
.hd-slide{
  width: 100%;
  height: 750rpx;
}
.slide-image{
  width: 750rpx;
  height: 750rpx;
}
.section-hd{
  height: 200rpx;
  line-height: 100rpx;
  padding-left: 36rpx;
  background-color: #ffffff;
  margin-bottom: 24rpx;
  position: relative
}
.hotel-title{
  font-size: 30rpx;
}
.price{
  font-size: 28rpx;
  color: #f83144
}
.collection{
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 30rpx;
  bottom: 48rpx
}
.collection image{
  width: 55rpx;
  height: 55rpx
}
.sales-volume,.discount{
  height: 98rpx;
  background-color: #ffffff;
  line-height: 98rpx;
  font-size: 28rpx;
  padding-left: 36rpx
}
.sales-volume{
  border-bottom: 2rpx #f1f1f1 solid;
}
.discount{
  margin-bottom: 24rpx
}
.discount text{
  color: #ff8f00
}
.section-bd-title{
  height: 130rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  padding-left: 36rpx;
  background-color: #ffffff
}
