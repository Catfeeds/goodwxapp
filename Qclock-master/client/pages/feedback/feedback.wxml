<!--pages/feedback/feedback.wxml-->
<view class="page-section">
  <!-- <view class="page-section-title">这是一个可以自动聚焦的textarea</view> -->
  <view class="textarea-wrp">
    <textarea bindinput='bindTextareaInput' auto-focus='true' placeholder='请输入您的意见或者建议以便我们持续优化' auto-focus="true" style="height: 6em" />
  </view>
  <view class="btn-area">
    <button bindtap='send' type="primary" style='background-color: #5fa9f0;'>提交反馈</button>
    <button open-type='contact'>联系客服</button>
  </view>
</view>