
.btn-search {
width:100rpx;
height:100rpx;
display: block;
padding:0;
background-size:cover;
position:fixed;
right:14rpx;
bottom:100rpx;
border-radius: 50%;
z-index: 999;
}

.hot-item{
  height: 300rpx;
  background: #eee;
   position: relative;
}

.hot-imgview{
  margin-left:5px; 
  margin-top: 10px;
  width: 98%;
  height: 280rpx;
  border-color:#ff99c1;
  border-radius:4px;
  border-width:4px;
}

.hot-title{
  position: absolute;
  padding-top: 100rpx;
  font-size: 20px;
  color: #ff99c1;
  text-align: center;
  width:100%;
}

.hot-icon{
  position: absolute;
  width:100rpx;
  height:100rpx;
  left: 10rpx;
  top: 10rpx;
  z-index: 998;
}

.hot-price{
  position: absolute;
  padding-top: 255rpx;
  font-size: 17px;
  color: rgba(186,186,186,1);
  text-align: center;
  width:100%;
}

.like-title{
    padding: 10px;
    font-size: 16px;
    background: #fff;
    color: #ff99c1;
}
