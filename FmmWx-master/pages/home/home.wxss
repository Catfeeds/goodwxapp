/**index.wxss**/
page{
    height: 100%;
}
/*导航*/
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
    margin-bottom: 2rpx;
}
.swiper-box{
  height: 375rpx;
}
.swiper-box .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx; 
    margin-left: 20rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;  
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
.swiper-box .wx-swiper-dot-active::before{
    background:#ff99c1;    
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.slide-image{
    height: 375rpx;
    width:100%
}

.slide-title{
  position: absolute;
  bottom: 30rpx;
  left: 0rpx;
  font-size: 20px;
  color: #ff99c1;
  text-align: center;
  width:100%
}

.like-title{
    padding: 10px;
    font-size: 16px;
    background: #fff;
    color: #ff99c1;
}

.hot-icon{
  position: absolute;
  width:100rpx;
  height:100rpx;
  left: 10rpx;
  top: 10rpx;
  z-index: 998;
}

.myweui-grid {
  position: relative;
  float: left;
  /* padding: 60px 10px; */
  width: 50%;
  box-sizing: border-box;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  border-radius: 2px;
  background-color: white;
}
.myweui-grid__icon {
  padding-top: 14rpx;
  display: block;
  width: 90%;
  height: 350rpx;
  margin: 0 auto;
}
.myweui-grid__label {
  margin-top: 4px;
  display: block;
  text-align: left;
  color: #ff99c1;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 20rpx;
}
.myweui-grid__subview {
  margin-top: 4px;
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.myweui-grid__subviewlabel {
  float: left;
  text-align: left;
  color: black;
  font-size: 16px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 20rpx;
}
.myweui-grid__subviewsublabel {
  float: right;
  margin-top: 6rpx;
  text-align: left;
  color: lightgrey;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-right: 20rpx;
}

.notice{
