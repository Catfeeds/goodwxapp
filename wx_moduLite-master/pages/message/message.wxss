/* pages/message/message.wxss */
.clear{
  clear: both;
  overflow: hidden;
}
.msg-item{
  padding: 15px;
  border-bottom: 1px solid #f0f0f0;
}
.head-box{
  width: 70px;
  height: 70px;
  border-radius: 50%;
  float: left;
  margin-right: 10px;
}
.main-box{
  margin-left: 80px;
}
.main-top{
  height: 30px;
  line-height: 29px;
}
.name{
  font-size: 18px;
  color: #333;
  float: left;
}
.date{
  font-size: 12px;
  color: #888;
  float: right; 
}

.main-bot{
    word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal; 
  color: #666;
  font-size: 14px;
  line-height: 20px;
}

.no-msg{
  font-size: 16px;
  color: #999;
  margin: 50px 0;
  text-align: center;
}

/* ======== 2.0 ========  */
.time{
  text-align: center;
}
.time-in{
  display: inline-block;
  text-align: center;
  color: #999;
  font-size: 0.6rem;
  margin: 0 0 1rem;
  padding: 2px 5px;
  border-radius: 2px;
  background: rgba(0,0,0,0.1)
}
.msg-head{
  width: 45px;
  text-align: right;
  float: left;
}
.msg-head image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.text-box{
  margin-left: 65px;
  font-size: 0.8rem;
  position: relative;
  border: 1px solid #5892f1;
  border-radius: 5px;
  padding: 0.2rem;
  margin-right: 1rem;
  background: rgba(88,146,241, 0.1)
}
.text-trigle{
  display: inline-block;
  width: 0;
  height: 0;
  border-right: 10px solid #5892f1;
  border-top: 8px solid transparent;
  border-bottom: 2px solid transparent;
  position: absolute;
  top: 5px;
  left: -10px;
}
/*  */
.text-msg-box, .txtp-msg-box{
  padding: 1rem;
}
/*  */
.txtp-in{
  margin: auto 1rem;
  border: 1px solid #e6e6e6;
  /* background: #f5f5f5; */
}
.txtp-title{
  margin: 0 1rem;
  padding: 0.8rem 0 0.6rem;
  border-bottom: 1px solid #e6e6e6;
}
.txtp-title image{
  width: 35px;
  height: 35px;
  border-radius: 50%;
  vertical-align: middle;
}
.txtp-title text{
  color: #666;
  font-size: 0.8rem;
  margin-left: 0.5rem; 
}
.msg-cont{
  padding: 1rem;
}
.msg-txt{
  font-size: 0.8rem;
  margin-bottom: 6px;
}
.msg-pic{
  width: auto;
  height: 6rem;
}
.txtp-bot{
  margin: 0 1rem;
  padding: 0.8rem 0;
  color: #5892f1;
  /* text-align: right; */
  font-size: 0.8rem;
  border-top: 1px solid #e6e6e6;
}

.text_break{
  word-break: break-all;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    white-space: normal;
}