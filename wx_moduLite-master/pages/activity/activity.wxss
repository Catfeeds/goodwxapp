/* activity.wxss */

.tab-box{
  height: 40px;
  width: 100%;
  position: fixed;
  top: 0;
  background: #5892f1;
  z-index: 99;
}
.tab{
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 36px;
  font-size: 16px;
  background: #5892f1;
  height: 40px;
  color: #fff;
}
.active{
  color: #fff;
  border-bottom: 4px solid #fff;
  box-sizing: border-box;
}
.tab-in{
  display: inline-block;

}
/* *  */
.list-box{
  display: none;
}
.list-box.active{
  display: block;
}
/*  */

.main{
  margin-top: 40px;
  width: 100%;
  padding: 0;
}

/* 当前活动列表  */
.current-list-box{
  position: absolute;
  width: 100%;
  top: 40px;
  bottom: 0;
  overflow: hidden; 
}
#cur-swiper{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: auto;
}
swiper-item{
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}
.cur-item{
  width: 90%;
  height: 70%;
  margin: auto;
  border-radius: 8px;
  position: relative;
  top: 22%;
  background: rgba(255,255,255,1);
  color: #333;
  box-shadow: 0px 0px 18px #666;
}
.key-box{
  position: absolute;
  top: -15px;
  text-align: center;
  width: 100%;
}
.key{
  display: inline-block;
  font-size: 15px;
  padding: 5px 15px;
  background: #5892f1;
  color: #fff;
}
.cur-title{
  font-size: 18px;
  width: 80%;
  margin: auto;
  text-align: center;
  padding: 2rem 0 1rem;
}
.cur-desc{
  width: 90%;
  margin: auto;
  font-size: 15px;
  text-align: center;
}
.cur-desc view{
  display: block;
  height: 20px;
}

.cur-bot{
  position: absolute;
  width: 100%;
  bottom: 0;
  font-size: 13px;
  text-align: center;
}
.cur-num{
  width: 90%;
  margin: 8px auto 0;
  padding: 8px 0;
  border-top: 1px solid #999;
  display: flex;
  color: #999;
  font-size: 12px;
}
.cur-view-num{
  flex: 1;
  border-right: 1px solid #999;
}
.cur-join-num{
  flex: 1;
}











/*============  */
.bg-box{
  width: 100%;
  height: 11em;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  margin-bottom: 10px;
}
.info-box{
  background-color: rgba(128,128,128,0.5);
  height: 11em;
  width: 100%;
  position: relative;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.main-info{
  text-align: center;
}
.title{
  font-size:1em;
  padding:0 10px;
  margin:5px 0;

}
.time{
  font-size:0.75em;
  margin: 0.5em 0;
}
.btn-primary{
  line-height:24px;
  margin-top:12px;
  color: #333;
}
.join{
  position: absolute;
  right: 5px;
  bottom: 8px;
  font-size:12px;
  text-align:right;
}
.num{
  margin-right: 20px;
}



