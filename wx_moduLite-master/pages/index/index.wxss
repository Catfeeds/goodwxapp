  bottom: -5px;
  right: 0;
}


/*  */
.refresh{
  position: fixed;
  width: 40px;
  height: 40px;
  background: #fff;
  box-shadow: 0 5px 25px #ccc;
  bottom: 30px;
  right: 15px;
  border-radius: 50%;
}
.refresh-image{
  width: 20px;
  height: 20px;
  margin: 10px;
}
.refresh_animate{
  animation: refresh 0.6s linear infinite; 
}
@keyframes refresh {
  50%{
    transform: rotate(180deg);
  }
  100%{
    transform: rotate(360deg);
  }
}


/*=================main-swiper  */
.main-swiper{
  position: absolute;
  width: 100%;
  top: 42px;
  bottom: 0;
  overflow: hidden; 
  height: auto;
}

.load-info-box{
  width: 100%;
  height: 0;
  color: #ff6666;
  font-size: 12px;
  background: #fff;
  text-align: center;
  line-height: 34px;
  overflow: hidden;
}
.load-in{
  display: block;
  background: #ffcccc;
  overflow: hidden
}
.load_animate{
  animation: loading 0.8s linear;
}
.loadin_animate{
  animation: loadin 0.8s linear;
}
@keyframes loading {
  0%{
    height: 34px;
  }
  80%{
    height: 34px;
  }
  100%{
    height: 0;
  }
}
@keyframes loadin {
  70%{
    opacity: 0.8;
  }
  100%{
    opacity: 0.6;
  }
}