/**index.wxss**/

/*顶部分类滑块  */
.category{
  position: fixed; 
  top: 0;
  width: 100%;
  padding-bottom:1px;
  z-index: 99;
}
.scroll-view_H{
  white-space: nowrap;
  width: 90%;
  float: left;
  overflow-y: hidden;
  overflow-x: scroll;
  background: #fff;
  height: 42px;
  background-color: #5892f1;
}
.scroll-view-item_H{
  font-size: 18px;
  padding: 0 15px;
  display: inline-block;
  color: #fff;
  height: 42px;
}
.scroll-view-txt{
  padding: 7px 0;
}
.scroll-view_H .active{
  border-bottom: 2px solid #fff;
  color: #fff;
  box-sizing:border-box;
  height: 40px;
}
.edit-cate{
  position: absolute;
  right: 0;
  top: 0;
  width:10%;
  min-width: 42px;
  background-color: #5892f1;
  text-align: center;
  height: 42px;
  box-shadow: -1px 0 100px rgba(255, 255, 255, 0.4);
}
.cate-img{
  width: 30px; 
  height: 30px;
  float: left;
  margin: 6px
}

swiper-item{
  overflow-y: auto;
}
