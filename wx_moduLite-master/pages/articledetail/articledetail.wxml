<!--pages/articledetail/articledetail.wxml-->
<import src="../../components/wxParse/wxParse.wxml"/>
<view class='app'>
  <!--页面模板  -->

  <template name="comment">
    <!--评论模板  -->
    <view class='comment-item clear'>
      <view class='com-left'>
        <view class='user-head' style='background: url("{{avatarUrl}}") center / cover no-repeat'></view>      
      </view>
      <view class='com-right'>

        <view class='com-name-box'>
          <view class='com-uname'>{{nickName}}</view>
           <view class='thumb-box' data-id='{{id}}' bindtap='{{tap}}'>
            <view class='thumb-num' >{{thumb}}</view>
            <image class='thumb-ico' src='{{src}}'></image>
          </view> 
        </view>

        <view class='com-cont'>
          {{comment}}
        </view>
      </view>
    </view>
  </template>

  <!-- 加载过渡效果模板 -->
  <template name="loading">
    <view class='loading-bg'>
      <view class='loading'><image src='../../pictures/loading.gif'></image></view>
    </view>
  </template>
  
  <!--推荐阅读模板  -->
  <!-- <template name="recommend">
  
  </template> -->




<view class='{{loadingShow}}'>
  <template is="loading"></template>
</view>


<view class='main-container {{mainShow}}'>
<!--页面主体  -->
  <view class='title'>{{article.title}}</view>
  <view class='author'>
    <view class='a-author'>{{article.author}}</view>
    <view class='from'>来源：{{article.from}}</view>
  </view>
  <view class='content {{contentShow}}' id='content'>
    <!--文章正文，wx.parse转义  -->
    <template is="wxParse" data="{{wxParseData:moduContent.nodes}}"/>
  </view>
 
   <view class='comments-box {{commentShow}}'>
    <view class='com-title'>全部评论</view>
    <block wx:for="{{commentsList}}">
      <template is="comment" data="{{...item}}"></template>
    </block>
    <view class='loadinfo-box'>
      <view class='loadinfo' bindtap='loadComments'>{{loadinfo}}</view>
    </view>
  </view>
</view> 
  <!-- <view class='recommend-box'>
    <view class='com-title'>相关阅读</view>
    <block>
      
    </block>
  </view> -->
   

  <!--底部交互  -->
  <view class='foot'>
    <view class='ft-left'>
      <input type='text' class='sendComment' placeholder='想说点什么吧？' value='{{value}}' cursor-spacing="8" confirm-type='send'
       bindinput='getInputValue' bindconfirm='sendMessage'></input>
       <!-- <view style='font-size: 14px; color: #ccc; text-align: center; line-height: 30px;'>文章评论功能即将上线</view> -->
    </view>
    <view class='ft-right'>
      <!-- <view class='ft-r-item' bindtap=''>
        <image src='../../pictures/comment.png'></image>
        <view>评论</view>
      </view> -->
      <view class='ft-r-item' bindtap='{{followOption}}'>
        <image src='{{followHeart}}'></image>
        <view>{{followtxt}}</view>
      </view>
      <view class='ft-r-item'>
        <button class='openshare' open-type='share'></button>
        <image src='../../pictures/share.png'></image>
        <view>分享</view>
      </view>
    </view>
  </view>
</view>
