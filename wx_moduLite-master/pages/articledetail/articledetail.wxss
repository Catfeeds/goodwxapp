/* pages/articledetail/articledetail.wxss */
@import "/components/wxParse/wxParse.wxss";
.app{
  margin: 0 4%;
}
.title{
  font-size: 1.5rem;
  font-weight: bold;
  color: #333;
  margin: 20px 0 10px;
}
.author{
  font-size: 14px;
  color: #999;
  margin: 0 0 22px;
}

.content{
  margin-bottom: 3rem;
}

.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
  background: #fff;
  padding: 8px 0;
  height: 30px;
  border-top: 1px solid #f0f0f0;
  overflow: hidden;
}
.ft-left{
  width: 60%;
  float: left;
}
.sendComment{
  /* width: 80%; */
  height: 30px;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
  font-size: 16px;
  background: #f6f6f6;
  padding: 0 8px;
  margin-left: 8%;
}


.ft-right{
  width: 40%;
  float: right;
  display: flex;
}
.ft-r-item{
  flex: 1;
  font-size: 12px;
  color: #999;
  text-align: center;
  position: relative;
}
.ft-r-item image{
  width: 16px;
  height: 16px;
}
.openshare{
  position:absolute;
  width:90%;
  height:90%;
  background:transparent;
  left:5%;
}
.openshare::after{
  content: none;
}

/*评论  */
.comments-box{
  margin-bottom: 80px;
}
.comment-item{
  margin-bottom: 1rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid #eee;
}
.com-title{
  font-size: 16px;
  border-left: 6px solid #5892f1;
  padding-left: 10px;
  line-height: 16px;
  margin-bottom: 15px;
  overflow: hidden;
  height: 18px;
}
.com-left{
  width: 60px;
  float: left;
}
.user-head{
  width: 45px;
  height: 45px;
  display: inline-block;
  border-radius: 50%;
}
.com-right{
  margin-left: 60px;
}
.com-uname{
  color: #4f6388;
  font-size: 1rem;
  display: inline-block;
}
.thumb-box{
  font-size: 14px;
  color: #666;
  float: right;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
}
.thumb-ico{
  width: 20px;
  height: 20px;
  margin-left: 5px;
}
.thumb-num{
  display: inline-block;
  height: 20px;
  overflow: hidden;
  line-height: 26px;
}
.com-cont{
  color: #333;
  font-size: 0.8rem;
  margin-top: 0.5rem;
}


/*推荐  */
.recommend-box{
  margin-bottom: 80px;
}


.loadinfo-box{
  text-align: center;
}
.loadinfo{
  color: #5892f1;
  display: inline-block;
  padding: 4px 15px;
  border: 1px solid #5892f1;
  font-size: 14px;
  border-radius: 3px;
}

.a-author{
  display: inline-block;
}
.from{
  display: inline-block;
  color: #5892f1;
  margin-left: 15px;
} 

.loading-bg{
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -9;
}
.loading{
  text-align: center;
  color: #ccc;
  font-size: 2rem;
  height: 80px;
  width: 100%;
}
.loading image{
  width: 208px;
  height: 70px;
}