/* activitydetail.wxss */
.section{
  padding: 15px 0;
  border-bottom: 2px solid #f2f2f2;
}
.no-border{
  border: none;
}
.section-in{
  width: 96%;
  margin: auto;
}
.bt-ask-box{
  margin-bottom: 65px;
}
/*  */
.banner{
  width: 100%;
  min-height: 200px;
  height: 11rem;
}
.banner image{
  width: 100%;
  height: 200px;
  opacity: 0;
}

/*  */
.title{
  font-size: 20px;
  color: #333;
  margin: 15px 10px;
  text-align: center;
}
.sec-title{
  font-size: 16px;
  color: #333;
  border-left: 4px solid #5892f1;
  padding-left: 10px;
  line-height: 16px;
}
.progress-box{
  margin: 12px 0;
  height: 18px;
}
.progress{
  width: 68%;
  float: left;
  margin-top: 7px;
}
.limit{
  width: 30%;
  font-size: 12px;
  color: #999;
  float: right;
}
.join-box{
  font-size: 14px;
}
.join-head{
  margin-top: 10px;
}
.join-item{
  width: 30px;
  height: 30px;
  display: inline-block;
  border-radius: 50%;
}

/*  */
.act-info{
  font-size: 13px;
  color: #666;
  line-height: 24px;
  margin-left: 5px;
}
.act-desc{
  font-size: 14px;
  margin: 10px 0 0;
}
.act-desc view{
  display: block;
  text-align: center;
  height: 20px;
}

/* * */
.fixed-option{
  width: 100%;
  padding: 8px 0 4px;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1px solid #f0f0f0;
  overflow: hidden;
}
.opt-left{
  width: 45%;
  float: left;
}
.opt-box{
  width: 50%;
  display: inline-block;
  text-align: center;
  font-size: 10px;
  color: #999;
  position: relative;
}
.opt-ico{
  width: 16px;
  height: 16px;
}
.openshare{
  position:absolute;
  width:90%;
  height:90%;
  background:transparent;
  left:5%;
}
.openshare::after{
  content: none;
}

.opt-right{
  width: 55%;
  float: right;
  font-size: 15px;
  text-align: center;
}
.ask-btn{
  display: inline-block;
  width: 40%;
  color: #5892f1;
  padding: 8px 0;
}
.join-box{
  display: inline-block;
  width: 60%;
}
.join-btn{
  width: 80%;
  margin: auto;
  border-radius: 4px;
  padding: 8px 0;
  text-align: center;
  color: #fff;
  background: #5892f1;
}

/*评论框  */
.box-bt-bg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 98;
  background: rgba(0,0,0,0.2)
}
.comments-box-bt{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 200px;
  border-top: 1px solid #f0f0f0;
  overflow: hidden;
  z-index: 99;
}
.box-opt{
  height: 40px;
  width: 92%;
  margin: 0 4%;
  border-bottom: 1px solid #f0f0f0;
  line-height: 40px;
  font-size: 16px;
  box-sizing: border-box;
}
.box-opt .opt-left{
  float: left;
  width: 20px;
  height: 20px;
  margin: 10px;
}
.box-opt .opt-right{
  width: auto;
  float: right;
  color: #5892f1;
  letter-spacing: 2px;
  text-align: right;
}
.text-box{
  height: 150px;
  width: 92%;
  margin: 0 4%;
}
.publish-area{
  padding: 5px 0;
  width: 100%;
  height: 150px;
}

/*问答区  */
.com-left{
  width: 60px;
  float: left;
}
.user-head{
  width: 45px;
  height: 45px;
  display: inline-block;
  border-radius: 50%;
}
.com-right{
  margin-left: 60px;
}
.com-name{
   color: #333; 
  font-size: 1rem;
}
.com-cont{
  font-size: 0.8rem;
  margin: 8px 0 0;
  color: #666;
}

.act-ask-box{
  margin: 10px 0 0 10px;
}
.com-box{
  margin-bottom: 0.5rem;
}
.answer{
  margin: 8px 0 0 55px;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 4px;
}
.answer .user-head{
  width: 40px;
  height: 40px;
}
.answer .com-name{
  font-size: 0.85rem;
}
.answer .com-cont{
  font-size: 0.75rem;
}

/*表单  */
.form{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}
.form-in{
  width: 90%;
  height: auto;
  background: #fff;
  border-radius: 0.4rem;
}
.form-title{
  text-align: center;
  font-size: 1rem;
  background: #5892f1;
  color: #fff;
  line-height: 2.5rem;
  border-top-left-radius: 0.4rem;
  border-top-right-radius: 0.4rem;
}
.form-main{
  margin: 1rem 0.6rem;
  max-height: 400px;
  /* overflow-y: scroll;  */
}
.form-main input{
  margin:8px 0;
  /* border:1px solid #eee;
  box-sizing:border-box;
  padding:0 5px; */
  font-size:1rem;

}
.picker-in{
  display:block;
  height:1.4rem;
  text-overflow:clip;
  overflow:hidden;
  white-space:nowrap;
  font-family:UICTFontTextStyleBody;
  min-height:1.4rem;
   font-size:1rem;
   margin:8px 0;
   line-height: 1.4rem;
}
.input-wrap{
  width: 100%;
  border-bottom: 1px solid #f0f0f0;
}

.form-opt{
  width: 60%;
  margin: auto;
}
.form-opt button{
  line-height: 2rem;
  margin-bottom: 0.5rem;
}
.label-box{
  width: 5rem;
  float: left;
}
.label{
  width: 4rem;
  height: 1rem;
  text-align: justify;
  float: left;
}
.label::after{
  content: "";
  display: inline-block;
  width: 100%;
}
