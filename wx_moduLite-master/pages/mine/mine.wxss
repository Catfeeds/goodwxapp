/* mine.wxss */

.user-info{
  width: 100%;
  height: 10em;
  position: relative;
}
.info-bg{
  position: absolute;
  width: 100%;
  height: 100%;
   background: url("https://www.shtongnian.com/image/mine_bg.jpg") left center / cover no-repeat; 
  z-index: -1;
  opacity: 0.8;
}
.head-box{
  padding: 1em 0 0;
  display: inline-block;
  vertical-align: middle;
  opacity: initial;
}
.user-head{
  width: 4em;
  height: 4em;
  border-radius: 50%;
  margin-left: 1.5em;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  border: 2px solid #fff;
  box-sizing: border-box;
}
.user-name{
  text-align: center;
  font-size: 1em;
  display: inline-block;
  margin: auto 1em;
  color: #fff;
}

.opt-item{
  background: #fff;
  height: auto;
  clear: both;
  overflow: hidden;
  padding: 0.5em 0.6em;
}
.opt-icon{
  width: 30px;
  height: 30px;
  float: left;
  margin-right: 15px;
}
.opt-icon image{
  width: 100%;
  height: 100%;
}
.opt-name{
  font-size: 16px;
  line-height: 30px;
}
.opt-name image{
  width: 20px;
  height: 20px;
  float: right;
  margin: 5px;
}

.section{
  box-shadow: 0 2px 10px #ccc;
  width: 92%;
  margin: 0 auto 15px;
  background: rgba(255,255,255,0.9);
  border-radius: 0.3rem;
}
.nums-sec{
  display: flex;
  padding: 1.5rem 0;
  margin-top: -3rem;
}
.nums{
  flex: 1;
  color: #5892f1;
  font-size: 1.5rem;
  text-align: center;
}
.type{
  font-size: 0.8rem;
  color: #333;
}

.dot{
  width: 8px;
  height: 8px;
  color: #f00;
  border-radius: 50%;
  display: inline-block;
  background: #f00;
  /* vertical-align: text-top; */
  margin-left: 5px;
  float: right;
  margin-top: 11px;
}

