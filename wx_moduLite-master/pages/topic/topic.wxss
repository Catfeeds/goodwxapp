/* topic.wxss */

/*页面初始化模板 样式  */
.n-new, .new{
  width: 100%;
  height: 140px;
  background: #f4f4f4;
  margin-top: 2px;
  position: relative;
}
.n-join{
  position: absolute;
  width: 100px;
  height: 20px;
  display: block;
  text-align: center;
  left: 50%;
  margin-left: -50px;
  background: #e0e0e0;
  bottom: -8px;
}
.n-main-box, .main-box{
  margin-top: 16px;
  padding: 0 10px;
}
.n-title, title{
  width: 100%;
  height: 28px;
  background: #f4f4f4;
}
.n-cont{
  width: 100%;
  height: 16px;
  margin-top: 5px;
  background: #f4f4f4;
}

/*  */
.new-topic-box{
  padding-bottom: 30px;
  border-bottom: 1px solid #dedede;
}
.new{
  height: 168px;
  background-size: cover;
  background-repeat: no-repeat;
}
.join{
  width: 100%;
  height: 20px;
  position: absolute;
  bottom: -8px;
  color: #fff;
  text-align: center;
}
.join-text{
  background: #5892f1;
  color: #fff;
  padding: 2px 5px;
  font-size: 14px;
}
.title{
  font-weight: bold;
  font-size: 18px;
  line-height: 30px; 
  padding: 10px 0;
  text-align: center;
}
.cont{
  font-size: 14px;
  color: #666;
  line-height: 20px;
}


/*往期话题  */
.ban-title{
  text-align: center;
  font: bold 16px ""; 
  line-height: 60px;
}
.ban-title::before{
  content: "";
  display: inline-block;
  width: 15px;
  height: 15px;
  background: #5892f1;
  vertical-align: middle;
  margin-right: 5px;
  margin-bottom: 2px;
}
.img{
  width: 40%;
  height: 80px;
  display: inline-block;
  background-size: cover;
  background-repeat: no-repeat;
}
.info-box{
  display: inline-block;
  width: 60%;
  height: 80px;
  overflow: hidden;
  float: right;
}
.item-box{
  padding-bottom: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid #dedede;
}
.item-title{
  font-size: 14px;
  height: 26px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding-left: 10px;
}
.item-content{
  padding-left: 10px;
  font-size: 12px;
  color: #666;
  height: 32px;
  line-height: 16px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.item-join{
  margin-top: 8px;
  height: 12px;
  font-size: 10px;
  color: #888;
  text-align: right;
}
.num{
  margin-right: 12px;
}
