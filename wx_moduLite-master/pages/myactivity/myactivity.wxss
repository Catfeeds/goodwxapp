/* pages/myactivity/myactivity.wxss */
.act-box{
  width: 90%;
  margin: 1.5rem auto;
  border-bottom: 1px solid #eee;
}
.act-bg{
  height: 8rem;
  position: relative;
  text-align: center;
  line-height: 8rem;
  font-size: 1.2rem;
  color: #fff;
  border-radius: 5px;
}
.cover-bg{
  position: absolute;
  height: 100%;
  width: 100%;
  background: rgba(125,125,125,0.3);
  z-index: 99;
  border-radius: 5px;
}
.act-sta{
  position: relative;
  z-index: 100;
}
.act-title{
  font-size: 1rem;
  text-align: left;
  margin: 0.3rem 0 0.5rem;
}