/* topicdetail.wxss */
.banner{
  width: 100%;
  height: 11em;
  min-height: 200px;
}
.title{ 
  font-size: 22px;
  text-align: center;
  margin: 1rem 0;
}
.content{
  font-size: 16px;
  color: #515151;
  line-height: 20px;
  text-align: left;
  padding: 0 10px;
}


/*people  */
.people{
  margin: 1rem 0;
  padding-bottom: 15px;
  border-bottom: 1px solid #e0e0e0;
}
.join{
  font-size:14px;
  color:#666;
  margin-bottom:5px;
}
.icon{
  display: inline-block;
  vertical-align: middle;
  width: 20px;
  height: 16px;
  margin-right: 5px;
}
.icon image{
  width: 16px;
  height: 16px;
}
.head-box{
  width: 30px;
  height: 30px;
  display: inline-block;
  margin: 5px;
  float: left;
}
.head-box image{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  /* box-shadow: 2px 2px 5px #ccc; */
}
.bull{
  display: inline-block;
  float: left;
  height: 30px;
  line-height: 30px;
}


/*comments  */
.load-more{
  padding-bottom: 80px; 
}
.com-title{
  font-size: 16px;
  border-left: 6px solid #5892f1;
  padding-left: 10px;
  line-height: 16px;
  margin-left: 8px;
}

.com-item-box{
  margin: 22px 0.5rem 0 8px;
}
/* * */
.user-head{
  width: 40px;
  height: 40px;
  display: inline-block;
  vertical-align: middle;
}
.user-head image{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
/* * */
.user-name{
  display: inline-block;
  height: 40px;
  vertical-align: middle;
  margin-left: 10px;
}
.name{
  font-size: 0.8rem;
}
.time{
  font-size: 0.7rem;
  color: #666;
}
/* * */
.thumb{
  display: inline-block;
  float: right;
  height: 20px;
  line-height: 20px;
}
.thumb-num{
  font-size: 14px;
  display: inline-block;
  color: #666;
  margin-right: 5px;
  height: 20px;
  line-height: 26px;
}
.thumb-icon{
  display: inline-block;
  height: 20px;
  float: right;
}
.thumb-ico{
  width: 20px;
  height: 20px;
}

.com-bot{
  margin: 10px 0 0 48px;
}
.com-cont{
  font-size: 0.8rem;
  color: #515151;
}


/* send-box  */
.send-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #f6f6f6;
  z-index: 9;
}
.send-left{
  width: 60%;
  display: inline-block;
  float: left;
}
.send-btn{
  width: 90%;
  margin: 8px auto 6px;
  background: #5892f1;
  border-radius: 4px;
  font-size: 16px;
  text-align: center;
  color: #fff;
  padding: 5px 0;
}



.send-right{
  width: 40%;
  display: inline-block;
  float: right;
}
.opt-box{
  width: 50%;
  display: inline-block;
  text-align: center;
  font-size: 10px;
  color: #999;
  padding-top: 8px; 
  position: relative;
}
.opt-ico{
  width: 16px;
  height: 16px;
}
.openshare{
  position:absolute;
  width:90%;
  height:90%;
  background:transparent;
  left:5%;
}
.openshare::after{
  content: none;
}
/*评论框  */
.box-bt-bg{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 98;
  background: rgba(0,0,0,0.2)
}
.comments-box-bt{
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  height: 200px;
  border-top: 1px solid #f0f0f0;
  overflow: hidden;
  z-index: 99;
}
.box-opt{
  height: 40px;
  width: 92%;
  margin: 0 4%;
  border-bottom: 1px solid #f0f0f0;
  line-height: 40px;
  font-size: 16px;
  box-sizing: border-box;
}
.opt-left{
  float: left;
  width: 20px;
  height: 20px;
  padding: 10px;
}
.opt-left image{
  width: 20px;
  height: 20px;
  display: inline;
}
.opt-right{
  float: right;
  color: #5892f1;
  letter-spacing: 2px;
}
.text-box{
  height: 150px;
  width: 92%;
  margin: 0 4%;
}
.publish-area{
  padding: 5px 0;
  width: 100%;
  height: 150px;
}
