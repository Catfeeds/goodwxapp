<!--pages/index/detail/index.wxml-->
<view class="page">
  <view class="page__hd i-header">
    <view class="i-header-h1 h50">共享车位——</view>
    <view class="i-header-h1">基于图像识别的智能车位共享</view>
  </view>

    <view class="page__bd">
        <view class="weui-article">
            <view class="weui-article__h1"> {{description}}
            <view class="weui-article__h3">车位编号：{{equipId}} </view>
                     <view class="weui-article__h3">车位位置：{{description}} </view>
                     <view class="weui-article__h3">拥有者编号：{{userId}} </view>
                     <view class="weui-article__h3">具体位置信息如下：</view>
            </view>
             <view wx:if="{{state == 0}}">
              <button type='primary' class='weui-btn' bindtap='sendEmail'>点击预约</button>
            </view>
            <view wx:elif="{{state == 1}}">
              <button type='warn' class='weui-btn'>正在使用中，不可预约</button>
            </view>
            <view wx:else>
              <button type='default' class='weui-btn'>未发布，不可预约</button>
            </view>
            <view class="weui-article__section">
                <view class="weui-article__section">
                      <map id="map" longitude="{{location_nl}}" latitude="{{location_el}}" scale="15" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" circles="{{circles}}" bindregionchange="regionchange" show-location style="width: 100%; height: 350px;">
</map>
                    <view class="weui-article__p">
                       {{rows.content}}
                    </view>
                     
                </view>
            </view>
        </view>
    </view>
    <view class="page__ft">
      <view class="page__bd page__bd_spacing">
        <view class="weui-footer ">
          <view class="weui-footer__text">\n Copyright © 2017-12</view>
          <view class='weui-footer__text'>\n 江苏科技大学 | 苏州理工学院</view>
          <view class='weui-footer__text'>\n 计算机协会</view>
        </view>
      </view>
    </view>
</view>
