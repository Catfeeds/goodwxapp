/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.monitor-tag-online {
    position: absolute; 
    left: 50%;
    margin-left: -15px;
    margin-top: -15px;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #6fc323;
    z-index: 2;
    border: 1px solid rgba(140, 140, 140, 0.8);
    box-shadow: 0pt 2px 5px rgba(105, 108, 109, 0.7),
    0px 0px 10px 5px rgba(255, 255, 255, 0.4) inset;
}
.monitor-tag-body {
    width: 95%;
    height: 95%;
    margin: auto;
    padding: 5%;
    margin-bottom: 30rpx;
    background: #ffffff;
    border-radius: 10px;
    box-sizing: border-box;
    z-index: 1;
    border: 1px solid rgba(56, 145, 248, 0.8);
    box-shadow: 0pt 2px 5px rgba(56, 146, 250, 0.7),
    0px 0px 8px 5px rgba(208, 223, 226, 0.4) inset;
}
.tag-offline {
  background: #9a9a9a;
}
.tag-alarming {
  background: #ff5934
}
.add_layer{width:100%;height:100%;background:rgba(66, 69, 72, 0.74);position:fixed;left:0;top:0;}
.add_layer input,.add_layer textarea,.add_layer button{width:80%;margin:0 auto;margin:15px auto;font-size:14px;padding:10rpx;}
.add_layer input,.add_layer textarea{
  background:#fff;
}
.diary_list{border-bottom:1px solid #ccc;margin:0px 0;padding:10px;position:relative;}
.diary_list text{font-size:16px;color:#1e1e1e;}
.diary_list view{font-size:14px;padding:5px 0}
.diary_list button{
  position:absolute;
  right:15px;
  top:12px;
}
.diary_list button.modify{right:90px;}


