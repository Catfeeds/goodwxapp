<!--pages/guanlijianli/guanlijianli.wxml-->
<view class="page">
<form bindsubmit="formSubmit" bindreset="formReset">
<view class="page__bd" style="padding-bottom:0px;">
    <view class="linputer">
        <view class="lbutton" >
            <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{region}}">
              <view class="picker">
                {{region[1][multiIndex[1]]}}
              </view>
            </picker>
        </view>
        <view class="rinput">
            <input name="zhiwei" class="inputer" placeholder="搜索职位" bindfocus="xuanzhong"  value="{{zhiwei}}"  />
            <!--<button formType="submit" plain="true" class="search" style="border:0px solid #fff;">搜索</button>-->
        </view>
    </view>
</view>


</form>
<view class="page__bd" style="padding:10px 10px;display:{{remenyincang}};margin:auto 0px;">

	<block wx:for-items="{{remen}}" wx:key="{{index}}"  wx:for-index="idx">
        <view class="weui-flex">
        <block wx:for-items="{{item}}" wx:key="{{index}}"  wx:for-index="idx">
            <view class="weui-flex__item">
                <!--<view>{{item.position_name}}</view>-->
                <text class="yuanjiao" data-hi="{{item.position_name}}" bindtap = "remen">{{item.position_name}}</text>
            </view>
        </block>
		</view>
	</block>
	
</view>
<view class="page__bd" style="display:{{zhiweixianshi}};">
    <!-- <view class="weui-cells__title"></view> -->
    <view class="weui-cells weui-cells_after-title">
  <view>
     <!-- <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHeight}}px;" class="list" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">  -->
         <block wx:for-items="{{info}}" wx:key="{{index}}"> 
            <view data-id="{{item.token}}" bindtap="tiaozhuan">
                 <view class="zhiwei">
                    <view class="content">
                      <view class="left">
                        <view class="img">
                          <image style="width:64px;height:64px;border-radius: 50%;line-height: 76px;" src="{{item.logo}}"></image>
                        </view>
                      </view>
                      <view class="right">
                        <view class="top"><text style="font-size:16px;">{{item.name}}</text><text style="float:right; color:#999999;font-size:14px;">{{item.updatetime}}</text></view>
                        <view class="mid"><text>{{item.xingbie}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.bron}}岁  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.jingyan}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.shi}}</text></view>
                        <view class="bottom"><text style="float:left;">求职  <text style="color:#545151">{{item.zhiwei}}  </text><text style="color:#E2E2E2;font-size: 0.70rem;"> |   </text>  </text><text style="float:left;width:55%; text-overflow: ellipsis;white-space: nowrap;overflow: hidden;margin-left:5px;">  薪资  {{item.xinzi}}/月</text></view>
                      </view>
                    </view>
                </view> 
            </view>
            
         </block> 
          </view>
     <!-- </scroll-view>  -->

    </view>
   
</view>
</view>

