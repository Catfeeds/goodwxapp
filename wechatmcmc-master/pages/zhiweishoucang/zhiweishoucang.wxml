

<view class="page">

    <view class="page__bd">
        
        
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
             <view class="weui-tab__panel"> 
                <view  hidden="{{activeIndex != 0}}">
                    <!--选项一-->
                   
                            <view class="page" style=""> 

                            <view class="page__hd" style="padding:0px 10px 10px 10px;margin-top:0px;"> 
                                  
                              
                              <view class="list-full"> 
                              

                            <view wx:for-items="{{info}}" wx:key="{{index}}" > 

                              <navigator url="../jobs/jobs?token={{item.token}}" hover-class="weui-grid_active" open-type="navigate"> 
                                <view class="list-zhiwei"> 
                                  <image src="{{item.logo}}" /> 
                                  <view class="zhiwei-rigth"> 
                                    <view class="zhiwei-rigth-name"> 
                                      <text class="name">{{item.title}}</text> 
                                      <text class="gongzi">{{item.gongzi}}</text> 
                                    </view> 
                                    <view class="zhiwei-rigth-company"> 
                                      <text class="name">{{item.company}}</text> 
                                      
                                    </view> 
                                    <view class="zhiwei-rigth-dizhi"> 
                                      <text class="name">{{item.city}} {{item.quyu}} <text style="color:#E2E2E2;font-size: 0.70rem;">|</text> {{item.renshu}} <text style="color:#E2E2E2;font-size: 0.70rem;">|</text> {{item.jingyan}}<text class="time" style="float:right;">{{item.updatetime}}</text></text> 
                               
                                    </view>   
                                  </view> 
                                </view> 
                              </navigator> 

                            </view>                           
                              </view>
                            </view>
                            <view class="page__bd">
                              

                            </view>

                            </view> 
              
                </view>
                <view  hidden="{{activeIndex != 1}}">
                    <!--选项二-->
                    <block wx:for="{{shop}}">
                  <view class="top2"></view>
                    <navigator url="../shop/shop?token={{item.id}}" class="list">
                        <view class="left">
                          <image src="{{item.logo}}" mode="aspectFill"></image>
                        </view>
                        <view class="right">
                          <view class="right_t">
                            <text>{{item.title}}</text>
                          </view>
                          <view class="right_b">
                            <view class="info">
                              <view class="dizhi">
                                <text>{{item.province}} {{item.city}}</text>
                              </view>
                              <view class="gongsi">
                                <text>{{item.gongsi}}</text>
                              </view>
                            </view>
                            <view class="icon">
                              <block wx:if="{{item.vip==1}}">
                                <image src="http://www.mcmchw.com/Public/tupian/sas1.png"></image>
                              </block>
                              <block wx:if="{{item.vip==0}}">
                                <image src="http://www.mcmchw.com/Public/tupian/sas.png"></image>
                              </block>
                              
                            </view>
                          </view>
                        </view>
                    </navigator>
                    <view class="bottom"></view>
                  </block>
              </view>
             </view> 
        </view>

        


    </view>
</view>

