<!--share.wxml-->
<view class="page">
  <view class="info">
     <view style="width:50px;height:50px;margin:0 auto;  ">
     <image src="{{zhiwei[0].logo}}" style="width:50px;height:50px;border-radius: 50%;"></image>
     </view>
     <view style="margin-top:6px;margin-bottom:2px;"><text>{{zhiwei[0].gongsi}}</text></view>
     <view style="line-height:130%;"><text>餐饮招聘信息</text></view>
  </view>
  <view class="content">
        <block wx:if="{{token==1}}">
              <block wx:for-items="{{zhiwei}}" wx:key="{{index}}">
                    <view class="list">
                      <view class="left">
                          <view class="img">
                            <image src="{{item.logo}}"></image>
                          </view>
                      </view>
                      <view class="right">
                          <view class="rigth-name" style="margin-top:3.5px;">
                          <text class="name">{{item.co_title}}</text>
                          <text class="gongzi">{{item.xinzi}}</text>
                        </view>
                        <view class="rigth-company" style="margin-top:3.5px;">
                          <text class="name">{{item.gongsi}}</text>
                          <text class="time" style="color:#18B345;">展示中</text>
                        </view>
                        <view class="rigth-dizhi" style="margin-top:3.5px;">
                          <text class="name">{{item.city}} {{item.area}} | {{item.co_renshu}}人 | {{item.co_jingyan}}</text>
                          <text class="time">{{item.date}}</text>
                        </view>
                      </view>
                    </view>
                </block>
        </block> 
        <block wx:if="{{token==0}}">
              <block wx:for-items="{{zhiwei}}" wx:key="{{index}}">
                <navigator url="../jobs/jobs?token={{item.co_id}}" hover-class="weui-grid_active" open-type="navigate">
                    <view class="list">
                      <view class="left">
                          <view class="img">
                            <image src="{{item.logo}}"></image>
                          </view>
                      </view>
                      <view class="right">
                        <view class="rigth-name">
                          <text class="name">{{item.co_title}}</text>
                          <text class="gongzi">{{item.xinzi}}</text>
                        </view>
                        <view class="rigth-company">
                          <text class="name">{{item.gongsi}}</text>
                          <text class="time" style="color:#18B345;">展示中</text>
                        </view>
                        <view class="rigth-dizhi">
                          <text class="name">{{item.city}} {{item.area}} | {{item.co_renshu}}人 | {{item.co_jingyan}}</text>
                          <text class="time">{{item.date}}</text>
                        </view>
                      </view>
                    </view>
                  </navigator>
                </block>
        </block> 
        
  </view> 

  <view class="foot" ><button class="btn" style="line-height:{{height}}px;" open-type="share">立即分享</button></view>

</view>