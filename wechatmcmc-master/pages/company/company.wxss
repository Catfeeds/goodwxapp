/* pages/company/company.wxss */
.companylogo{
    text-align: center;
    margin-top: 10px;
}
.companylogo > image{
    border: 1px solid #e8e8e8;
    width: 50px;
    height: 50px;
}
.companyname{
    text-align: center;
    font-size: 16px;
    padding-bottom:10px;
    padding-top: 5px;
    border-bottom: 1px solid #e8e8e8;
}
.hitem{
    margin-bottom: 5px;
    padding-left:20px;

}
.hitem .disabled {
    /*color: #c4c4c4;*/
}
.hitem .vitem {
    font-size: 12px;
    display: inline-block;
    float:left;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
    margin-bottom:10px;
    position:relative;
    line-height: 12px;

}
.hitem image{
    width:15px;
    height: 15px;
    display:inline-block;
    vertical-align:middle;
}
.companyinfo{
    margin:10px 0px;    
    background-color: white;
    padding:0px 10px;
}
.companyinfo   .title{
    font-size: 14px;
    padding: 10px 0px;
    border-bottom: 1px solid #e8e8e8;
}
.companyinfo   .des{
    font-size: 12px;
    padding: 10px 0px;
}
.companyinfo image{
    width:15px;
    height: 15px;
    display:inline-block;
    vertical-align:middle;
}


.list-zhiwei{
    /*padding: 3px 0px;*/
    padding-top: 13px;
    border-bottom: 1px solid #e8e8e8;
}
.list-zhiwei   image{
  display: inline-block;
  float: left;
  width: 60px;
  height: 60px;
  border: none;
  outline: none;
  padding-top: 2px;

}
.zhiwei-rigth{
  margin-left: 70px;
  height: 80px;
  color: #333;
}
.zhiwei-rigth-name{
    
}
.zhiwei-rigth-name > .name{
  font-size: 14px;
  float: left;
  width: 50%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight:400;
}

.zhiwei-rigth-name > .gongzi{
  font-size: 0.7rem;
  color: #d81e06;
  /*letter-spacing:0.01px;*/
  float: right;
}
.zhiwei-rigth-company > .name{
  font-size: 14px;
  float: left;
  width: 60%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}
.zhiwei-rigth-company > .time{
  font-size: 0.71rem;
  color: #999;
  float: right;
}
.zhiwei-rigth-dizhi > .name{
  font-size: 14px;
  float: left;
  width: 100%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}