<view class="title1">
     <view style="width:50px;height:50px;margin:0 auto;  ">
     <image src="{{logo}}" style="width:50px;height:50px;border-radius: 50%;"></image>
     </view>
     <view style="margin-top:6px;margin-bottom:2px;"><text>{{gongsi}}</text></view>
     <view style="line-height:130%"><text >餐饮供应信息</text></view>
</view>

    <block wx:for="{{zhiwei}}">
         <view class="top2"></view>
         <navigator url="../shop/shop?token={{item.id}}" class="list">
            <view class="left">
              <image src="{{item.logo}}" mode="aspectFill"></image>
            </view>
            <view class="right">
              <view class="right_t">
                <text>{{item.title}}</text>
              </view>
              <view class="right_b">
                <view class="info">
                  <view class="dizhi">
                    <text style="color:green;font-size:14px;">展示中</text>
                  </view>
                  <view class="gongsi">
                    <text>{{item.city}} {{item.area}}</text>
                  </view>
                </view>
                <view class="icon">
                  <block wx:if="{{item.vip==1}}">
                    <image src="http://www.mcmchw.com/Public/tupian/sas1.png"></image>
                  </block>
                  <block wx:if="{{item.vip==0}}">
                    <image src="http://www.mcmchw.com/Public/tupian/sas.png"></image>
                  </block>
                  
                </view>
              </view>
            </view>
         </navigator>
         <view class="bottom"></view>
    </block>
<view class="foot" ><button class="btn"  open-type="share">立即分享</button></view>