<!--pages/details/details.wxml-->
<view class="top">
  <view class="left" style="height:{{height}}px;line-height:{{height}}px;margin-top:{{top}}px;">+{{plus}}</view>
  <view class="right" style="height:{{height}}px;line-height:{{height}}px;margin-top:{{top}}px;">-{{less}}</view>
</view>
<view id="login_frame" >
	<view class="with-line">金币明细</view>
</view>
<block wx:for="{{info}}" wx:key="key1">
    <view class="list">
      <block wx:if="{{item.way==0}}" wx:key="key">
        <text class="l_top1">+{{item.jinbi}}</text>
      </block>
      <block wx:if="{{item.way==1}}">
        <text class="l_top2">-{{item.jinbi}}</text>
      </block>
        <text class="l_mid">{{item.type}}</text>
        <text class="l_right">{{item.time}}</text>
    </view>
</block>


