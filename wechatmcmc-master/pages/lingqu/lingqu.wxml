<view style="width:100%;height:{{height}}px;background-color:#D9D6D6;padding-top:3px;">
      <block wx:for-items="{{yh}}" wx:key="{{index}}">
            <view class="youhui">
                <view class="left">
                    <view class='img'>
                      <image src="/images/youhui.png" style="width:64px;height:64px;margin-top:8px;"></image>
                    </view>
                    <view class='cent'>
                      <view class="c_top">仅可购买招聘简历套餐</view>
                      <view class="c_bottom">
                        <text><text style="vertical-align:super;">¥</text><text style="font-size:18px;">{{item.l_jine}}</text> 满{{item.l_zjine}}使用</text>
                      </view>
                    </view>
                    <view style="width:5px;height:80px;float:right;">
                      <view class="cro_right_top"></view>
                      <view class="cro_right_bottom"></view>
                      </view>
                </view>
                <block wx:if="{{item.status==0}}">
                  <view class="right" bindtap="ling" data-id="{{item.l_id}}">
                    立即领取
                    <view style="width:5px;height:80px;float:left;"> 
                          <view class="cro_left_top"></view>
                          <view class="cro_left_bottom"></view>
                    </view>

                  </view>
                </block>
                <block wx:if="{{item.status==1}}">
                  <view class="right" style="  background-color:#E1DFDF;">
                    已经领取
                    <view style="width:5px;height:80px;float:left;"> 
                          <view class="cro_left_top"></view>
                          <view class="cro_left_bottom"></view>
                    </view>

                  </view>
                </block>
            </view>
      </block>
</view>
