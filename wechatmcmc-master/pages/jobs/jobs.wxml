<!--pages/jobs/jobs.wxml-->
<form bindsubmit="formsubmit" report-submit='true'>
<view class="page" >
<!--start-->
<view class="page__hd" style="padding:10px;">

    <view class="postitle">
        <view class="title">{{info.title}}</view>
    </view>
    <view class="detail">
        
        <view class="items">
			<view class="weui-flex">
                <view class="weui-flex__item">
					<view class="items-ii" style="min-width:108px;">
						<image class="icon" src="http://www.mcmchw.com/Public/tupian/z4.png" />
						<text style="margin-left:5px;" class="item"><text class="text">{{info.gongzi}}</text></text>
					</view>
				</view>
                <view class="weui-flex__item">
					<view class="items-ii" style="margin-left:20px;">
						<image class="icon" src="http://www.mcmchw.com/Public/tupian/z10.png" />
						<text style="margin-left:5px;" class="item"><text class="text">{{info.renshu}}</text></text>
					</view>
				</view>
                <view class="weui-flex__item">
					<view class="items-ii">
						<image class="icon" src="http://www.mcmchw.com/Public/tupian/z11.png" />
						<text style="margin-left:5px;" class="item"><text class="text">{{info.xingbie}}</text></text>
					</view>
				</view>
            </view>
			<view class="weui-flex">
                <view class="weui-flex__item">
					<view class="items-ii"style="min-width:108px;">
						<image class="icon" src="http://www.mcmchw.com/Public/tupian/z3.png" />
						<text style="margin-left:5px;" class="item"><text class="text">{{info.city}} {{info.quyu}}</text></text>
					</view>
				</view>
                <view class="weui-flex__item">
					<view class="items-ii"style="margin-left:20px;">
						<image class="icon" src="http://www.mcmchw.com/Public/tupian/z5.png" />
						<text style="margin-left:5px;" class="item"><text class="text">{{info.jingyan}}</text></text>
					</view>
				</view>
        <view class="weui-flex__item">
					
				</view>
            </view>
        
        
        
        
        

        </view>
    </view>
    <!--公司-->
     <navigator url="../company/company?token={{info.companytoken}}">
    <view class="company">
       
            <image src="{{info.logo}}"  />
            <view class="desc">
                <view class="dleft">
                    <view class="title">{{info.company}}</view>
                    <!-- <view class="info">{{info.companydes}}</view> -->
                </view>
                <image src="{{info.renzheng}}" class="dright" />
            </view>
       
    </view>
     </navigator>
    <!--职位描述-->
    <view class="positiondesc">
        <view class="header">职位描述</view>
        <view class="content">
            <text>{{info.zhiweimiaoshu}}</text>
        </view>
    </view>

    <!--企业信息-->
    <view class="positiondesc">
        <view class="header">公司信息</view>
        <view class="content2">
          
            <view style=" width:23%;float:left;"><text >公司地址：</text></view>
            <view style="width:77%;float:left; text-align:left;">{{info.qiyedizhi}}</view>
            <view style=" width:23%;float:left;padding:10px 0px;"><text> 联 系 人：</text></view>
            <view style="width:77%;float:left;padding:10px 0px;text-align:left;">{{info.lianxiren}}</view>
            <view style=" width:23%;float:left;padding:5px 0px;"><text>联系电话：</text></view>
            <view style="width:77%;float:left;padding:5px 0px;text-align:left;" bindtap="callphone" data-name="{{info.callphone}}">{{info.callphone}}</view>
           <view style="width:90%;height:80px; position: absolute;margin-top:100px;"></view>
          
        </view>
    </view>


       

</view>

</view>

    <view class="foot">
        <view class="left" bindtap="toudi"><button class="btn2" style="background-color:#D81E06;" form-type="submit">立即应聘</button></view>
        <view class="mid" bindtap="shoucang"><button class="btn2" style="background-color:#FF5902" form-type="submit">收藏</button></view>
        <view  class="right">
          <button class="btn" open-type="share" form-type="submit">
            分享
          </button>
        </view>
    </view>
</form> 