/* zhiwei.wxss */
/* pages/jianliku/jianliku.wxss */
button{
 
 border:none;

  text-align:left;

  padding:0;

  margin:0;

  line-height:1.5;
  
}
.weui-cell{
    border-top: 1px solid #eee;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.linputer{
    position: relative;
    border-bottom: 1px solid #e8e8e8;
    height: 45px;
}
.lbutton{
    float: left;
    height: 45px;
    line-height: 45px;
    font-size: 14px;
    text-align: center;
    width: 88px;
    border-right: 1px solid #e8e8e8;
}
.city{
    display: inline-block;
}
.rinput{
    height: 45px;
    margin-left: 89px;
    position: relative;
}
.inputer {
    display: block;
    border: none;
    padding: 10px 0;
    height: 25px;
    line-height: 25px;
    color: #333;
    width: 60%;
    margin: 0 0 0 5%;
    font-size: 14px;
    float: left;
}
.search{
    display: inline-block;
    width: 20%;
    height: 45px;
    line-height: 45px;
    float: right;
    position: relative;
    font-size: 14px;
    border:0px solid #fff;
}


.list-zhiwei{
    /*padding: 3px 0px;*/
    padding-top: 10px;
    border-bottom: 1px solid #e8e8e8;
}
.list-zhiwei > image{
  display: inline-block;
  float: left;
  width: 60px;
  height: 60px;
  border: none;
  outline: none;
  padding-top: 2px;

}
.zhiwei-rigth{
  margin-left: 70px;
  height: 75px;
  color: #333;
}
.zhiwei-rigth-name{
    
}

.zhiwei-rigth-name > .name{
  font-size: 14px;
  float: left;
  width: 50%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight:400;
}

.zhiwei-rigth-name > .gongzi{
  font-size: 0.8rem;
  color: #d81e06;
  /*letter-spacing:0.01px;*/
  float: right;
}
.zhiwei-rigth-company > .name{
  font-size: 14px;
  float: left;
  width: 60%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}
.zhiwei-rigth-company > .time{
  font-size: 0.71rem;
  color: #999;
  float: right;
}
.zhiwei-rigth-dizhi > .name{
  font-size: 14px;
  float: left;
  width: 100%;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
}
.share{
  width:70px;
  height:70px;

  border-radius: 50%;
  z-index: 5;
  bottom:0px;
  float:right;
  position: fixed;
  
}
.share>image{
  width:70px;
  height:70px;
}