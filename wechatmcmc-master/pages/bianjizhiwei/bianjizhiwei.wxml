						<text style="margin-left:5px;" class="item"><text class="text">{{info.jingyan}}</text></text>
					</view>
				</view>
                <view class="weui-flex__item">
					
				</view>
            </view>
        
        
        
        
        

        </view>
    </view>
    <!--公司-->
    <view class="company">
        <navigator url="../company/company?token={{info.companytoken}}">
            <image src="{{info.logo}}"  />
            <view class="desc">
                <view class="dleft">
                    <view class="title">{{info.company}}</view>
                    <!-- <view class="info">{{info.companydes}}</view> -->
                </view>
                <image src="{{info.renzheng}}" class="dright" />
            </view>
        </navigator>
    </view>
    <!--职位描述-->
    <view class="positiondesc">
        <view class="header">职位描述</view>
        <view class="content">
            <text>{{info.zhiweimiaoshu}}</text>
        </view>
    </view>

    <!--企业信息-->
   <view class="positiondesc">
