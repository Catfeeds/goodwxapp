.postitle{
    height: 48px;
    line-height: 48px;
    padding: 0 15px;
    border-bottom: 1px solid #e8e8e8;
}

.postitle .title {
    color: #333;
    font-size: 16px;
    max-width: 70%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    float: left;
    font-weight:500;
}
.detail{
    border-bottom: 1px solid #e8e8e8;
    min-height: 45px;
    padding: 15px;
}
.items > .item{
    
}
.weui-btn{
    font-size:16px;
}
button {
    border-radius:0px;
}
.items .items-ii{
    display: inline-block;
    float: left;
    color: #333;
    font-size: 12px;
    position: relative;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 11px;
}
.icon{
    display: inline-block;
    height: 15px;
    width: 15px;
    vertical-align: middle;
}
.company{
    border-bottom: 1px solid #e8e8e8;
    min-height: 50px;
    padding: 15px;
    padding-bottom:25px;
}
.company image{
    width: 60px;
    height: 60px;
    float: left;
}
.company  .desc{
    margin-left: 70px;
    min-height: 10px;
}
.company .dleft {
    float: left;
    min-height: 10px;
    min-width: 10px;
    max-width: 80%;
}
.company .dleft .title {
    color: #d81e06;
    font-size: 16px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-bottom: 5px;
    margin-top:5px;
    font-weight:500;
    line-height: 50px;
}
.company .dleft .info {
    color: #888;
    font-size: 12px;
}

.desc .dright{
    float: right;
    display: inline-block;
    width: 29px;
    height: 29px;
    /*background-size: 250px 250px;*/
    margin-top: 15px;
}
.positiondesc{
    min-height: 10px;
}
.positiondesc .header {
    background-color: #eee;
    height: 25px;
    line-height: 25px;
    padding-left: 15px;
    color: #999;
    font-size: 14px;
}

.positiondesc .content {
    word-break: break-all;
    padding: 15px;
    color: #555;
    font-size: 12px;
    line-height: 16px;
}