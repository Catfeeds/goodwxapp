/* shop.wxss */
.top{
  border-bottom: 10px solid #F8F8F8;
  }
.title{
  width:100%;
  height:75px;
  border-bottom: 1px solid #E8E8E8;
  
}
.t_top{
  width:90%;
  margin-left:5%;
  height:50px;
  font-size: 18px;
  line-height:23px
}
.t_bottom{
  width:90%;
  height:15px;
  margin-left:5%;
}
.t_left{
  width:50%;
  color:#646464;
  font-size: 12px;
  height:20px;
  float:left;
}
.t_right{
  text-align: right;
   width:50%;
  color:#D81E06;
  font-size: 12px;
  height:20px;
  float:right;
}
.type{
  width:100%;
  border-bottom: 7px solid #E8E8E8;
}
.type_1{
  width:90%;
  height:40px;
  margin-left:5%;
  border-bottom: 1px solid #E8E8E8;
}
.type_2{
  width:90%;
  height:40px;
  margin-left:5%;
  
}
.ty_title{
  float:left;
  font-size:14px;
  color:#646464;
  line-height: 40px;
}
.ty_name{
  float:left;
  width:75%;
  font-size:14px;
  margin-left:5%;
  line-height: 40px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.address{
  width:100%;
  border-bottom:7px solid  #E8E8E8;
}
.a_title{
  width:100%;
  height:40px;
  font-size:14px;
  border-bottom: 1px solid #E8E8E8;
}
.a_title>text{
  margin-left:5%;
  line-height: 40px;
}
.a_dizhi{
  width:100%;
  height:40px;
 font-size:13px;
}
.a_dizhi>text{
  margin-left:5%;
  line-height: 40px;
}
.info{
  width:100%;
}
.xiangqing{
   width:90%;
    margin-left:5%;
   font-size:16px;
   padding-top:7px;
}


.bottom{
  width:100%;
  height:40px;
  position: fixed;
  bottom: 0px;
  
  color:#ffffff;
}
.b_left{
  width:50%;
  height:40px;
  float:left;
  text-align: center;
  background-color: #D81E06;
}
.b_mid{
  width:25%;
  height:40px;
  float:left;
   text-align: center;
   background-color: #FF5902;
}
.b_right{
  width:25%;
  height:40px;
  float:left;
   text-align: center;
   color:#000000;
   background-color: #ffffff;
}
.b_text>text,.b_mid>text{
  line-height: 40px;
}
.b_img{
  width:40%;
  height:100%;
  text-align: right;
  float:left;
}
.b_text{
  width:60%;
  height:100%;
  text-align: left;
  float:left;
}
.b_img>image{
width:20px;
  height:20px;
  margin-top:10px;
}

.btn{
  font-size: 14px;
  text-align: center;
  line-height: 40px;
  background-color:#FFFFFF;
}
button[class="btn"]::after {
  border: 0;
} 


