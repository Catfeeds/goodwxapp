<!--pages/getjianli/getjianli.wxml-->
<!--pages/workspost/workspost.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells__title"></view>
        <view class="logo_header">
            <image class="logo" src="{{info.logo}}" />
        </view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.name}}</text>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">性别</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.xingbie}}</text>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">年龄</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.bron}}</text>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">工作经验</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.jingyan}}</text>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">期望职位</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.zhiwei}}</text>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">期望薪资</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.xinzi}}</text>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">期望区域</view>
                </view>
                <view class="weui-cell__bd">
                    <text class="weui-input">{{info.quyu}}</text>
                </view>
            </view>
           <view style='background-color:#F8F8F8;width:100%;height:10px;' >
           
                <view  style='background-color:#F8F8F8;font-size:18px; padding-left:13px;position: relative;display: -webkit-box;display: -webkit-flex; display: flex;-webkit-box-align: center;-webkit-align-items: center;align-items: center;'>
                    <view class="weui-label">自我介绍</view>
                </view>
               
            </view>
            <view class='weui-cell_input' style="padding: 17px 15px; position: relative;display: -webkit-box;display: -webkit-flex; display: flex;-webkit-box-align: center;-webkit-align-items: center;align-items: center;" >
                  <text style="font-size:17px;">{{info.jieshao}}</text>
            </view>

        </view>



        <view style="margin-top:20px;" class="weui-btn-area">
            <block wx:if='{{look==0}}'>
                <button class="weui-btn" hover-class="none" type="default" bindtap="callphone">查看联系方式</button>
            </block>
            <block wx:if='{{look==1}}'>
                <button class="weui-btn" hover-class="none" type="default" data-id="{{phone}}" bindtap="callphone">
                <view style="height:100%;display:inline-block;vertical-align:middle;line-height:100%"><image style="width:32px;height:32px;" src="/images/call.png"/></view>
                {{phone}}
                </button>
            </block>
        </view>
    </view>
</view>

