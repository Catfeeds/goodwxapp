<view class="page">
<!--start-->
<view class="page__hd" style="padding:10px;padding-top:0px;">
    <!--<view class="weui-cells__title"></view>-->

  <!--列表-->
  


<block wx:for-items="{{info}}" wx:key="{{index}}">
<view class="list-full">
  <navigator url="../bianjizhiwei/bianjizhiwei?token={{item.token}}" hover-class="weui-grid_active" open-type="navigate">
    <view class="list-zhiwei">
      <image src="{{item.logo}}" />
      <view class="zhiwei-rigth">
        <view class="zhiwei-rigth-name">
          <text class="name">{{item.title}} </text>
          <text class="gongzi">{{item.gongzi}}</text>
        </view>
        <view class="zhiwei-rigth-company">
          <text class="name">{{item.company}}</text>
           <block wx:if="{{item.shangjia == 2}}">
          <text class="time" style="color:#18B345;">展示中</text>
        </block>
        <block wx:if="{{item.shangjia == 1}}">
          <text class="time" style="color:#FF5800;">未上架不展示</text>
        </block>
          
        </view>
        <view class="zhiwei-rigth-dizhi">
          <text class="name">{{item.shi}} {{item.qu}} | {{item.renshu}} | {{item.jingyan}}</text>
          <text class="time">{{item.updatetime}}</text>
        </view>
        </view>
    </view>
  </navigator>
     <view class="caidan">
     <block wx:if="{{item.shangjia==1}}">
          <view style="display:inline-block;margin-right:10px;">
              <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" bindtap="shuaxinshangjia"  plain="true">刷新</button>
          </view>
      </block>
      <block wx:if="{{item.shangjia==2}}">
          <view style="display:inline-block;margin-right:10px;">
              <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" bindtap="shuaxin"  plain="true">刷新</button>
          </view>
      </block>
     <!-- <view style="display:inline-block;margin-right:10px; ">
            <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}"   open-type="share" plain="true">分享</button>
        </view> -->

        <view style="display:inline-block;margin-right:10px;">
            <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" plain="true" bindtap="xiugai">修改</button>
        </view>

        <block wx:if="{{item.shangjia == 2}}">
            <view style="display:inline-block;margin-right:10px;">
                <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" plain="true" bindtap="xiajia">下架</button>
            </view>
        </block>
        <block wx:if="{{item.shangjia==1}}">
            <view style="display:inline-block;margin-right:10px;">
                <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" plain="true" bindtap="shangjia">上架</button>
            </view>
        </block>
        <view style="display:inline-block;">
            <button class="weui-btn" style="border-color:#EA1E00;color:#EA1E00;padding:0px 10px;" type="default" data-id="{{item.token}}" plain="true" bindtap="shanchu">删除</button>
        </view>
      </view>
      </view> 
</block>

