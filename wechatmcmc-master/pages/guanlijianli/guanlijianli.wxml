<!--pages/guanlijianli/guanlijianli.wxml-->
<view class="page">

    <view class="page__bd">
        <view class="weui-cells__title"></view>
        <view><text style="margin-left:10px;color:red;">金币余额:</text><text style="color:red;">{{taocan}}</text> <text style="color:red;float:right;margin-right:10px;" bindtap="pay">金币充值</text></view>
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
             <view class="weui-tab__panel"> 
                <view  hidden="{{activeIndex != 0}}">
                    <!--选项一-->
                      <view >
                          <view wx:for-items="{{info}}" wx:key="{{index}}">
                              <view bindtap="look" data-id="{{item.token}}" data-status="{{item.chakan}}" >
                                <view class="zhiwei" >
                                  <view class="content">
                                    <view class="left">
                                        <view class="img">
                                          <image style="width:64px;height:64px;border-radius: 50%;line-height: 76px;" src="{{item.logo}}"></image>
                                        </view>
                                    </view>
                                    <view class="right">
                                        <view class="top"><text style="font-size:16px;">{{item.name}}</text><text style="float:right; color:#999999;font-size:14px;">{{item.updatetime}}</text></view>
                                        <view class="mid"><text>{{item.xingbie}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.bron}}岁  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.jingyan}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.shi}}</text></view>
                                        <view class="bottom"><text style="float:left;">求职  <text style="color:#545151">{{item.zhiwei}}  </text><text style="color:#E2E2E2;font-size: 0.70rem;"> |   </text>  </text><text style="float:left;width:55%; text-overflow: ellipsis;white-space: nowrap;overflow: hidden;margin-left:5px;">  薪资  {{item.xinzi}}/月</text></view>
                                    </view>
                                    
                                  </view>
                                  
                                </view> 
                            </view>
                          </view>
                      </view>
                </view>
                <view  hidden="{{activeIndex != 1}}">
                    <!--选项二-->
                        <view >
                        <view wx:for-items="{{xiazai}}" wx:key="{{index}}">
                            <navigator url="../getxiazai/getxiazai?token={{item.token}}" hover-class="weui-grid_active" open-type="navigate">
                            
                                  <view class="zhiwei">
                                    <view class="content">
                                      <view class="left">
                                        <view class="img">
                                          <image style="width:64px;height:64px;border-radius: 50%;line-height: 76px;" src="{{item.logo}}"></image>
                                        </view>
                                      </view>
                                      <view class="right">
                                        <view class="top"><text style="font-size:16px;">{{item.name}}</text><text style="float:right; color:#999999;font-size:14px;">{{item.updatetime}}</text></view>
                                        <view class="mid"><text>{{item.xingbie}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.bron}}岁  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.jingyan}}  <text style="color:#E2E2E2;font-size: 0.70rem;">|</text>  {{item.shi}}</text></view>
                                        <view class="bottom"><text style="float:left;">求职  <text style="color:#545151">{{item.zhiwei}}  </text><text style="color:#E2E2E2;font-size: 0.70rem;"> |   </text>  </text><text style="float:left;width:55%; text-overflow: ellipsis;white-space: nowrap;overflow: hidden;margin-left:5px;">  薪资  {{item.xinzi}}/月</text></view>
                                    </view>
                                    </view>
                                  </view> 
                            </navigator>
                        </view>
                        </view>
              </view>
             </view> 
        </view>

        


    </view>
</view>
