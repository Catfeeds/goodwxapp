<form bindsubmit="formSubmit" bindreset="formReset">
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view class="page__bd">
        <view class="weui-cells__title"></view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">标题</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="title" class="weui-input" maxlength="9" placeholder="4-9字 不能含特殊字符" value="{{ret.co_title}}"/>
                </view>
            </view>
            
            
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">职位类别</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="zhiweileibie" bindchange="bindzhiweiChange" value="{{zhiweiIndex}}" range="{{zhiweitype}}">
                        <view class="weui-select weui-select_in-select-after">{{zhiweitype[zhiweiIndex]}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">薪资待遇</view>
                </view>
                <view style="width:65px;flex:none;box-flex:none;" class="weui-cell__bd">
                    <input name="zuidixinzi" style="text-align:center" maxlength="5" type="number" class="weui-input" value="{{ret.co_salary}}" placeholder="薪资"/>
                </view>
               <text style="margin-right:0px;">-</text>
                <view style="width:65px;flex:none;box-flex:none;"  class="weui-cell__bd">
                    <input name="zuigaoxinzi" style="text-align:center" maxlength="5" type="number"   class="weui-input" value="{{ret.co_zuigaoxinzi}}" placeholder="薪资"/>
                </view>
                 <text style="float:right;">元/月</text>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">经验要求</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="jingyan"  bindchange="bindjingyanChange" value="{{jingyanIndex}}" range="{{jingyantype}}">
                        <view class="weui-select weui-select_in-select-after">{{jingyantype[jingyanIndex]}}</view>
                    </picker>
                </view>
            </view>
           
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">招聘人数</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="renshu" class="weui-input" value="{{ret.co_renshu}}" placeholder="只能输数字"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">性别要求</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="xingbie"  bindchange="bindxingbieChange" value="{{xingbieIndex}}" range="{{xingbietype}}">
                        <view class="weui-select weui-select_in-select-after">{{xingbietype[xingbieIndex]}}</view>
                    </picker>
                </view>
            </view>
            <!--<view class="weui-cells__title">文本域</view>-->
             <view class=" weui-cells_after-title" style="background-color:#F8F8F8;border-top:1px solid #D9D9D9;">
               
                    <view style="margin-left:17px;padding-top:4px;">
                    <view class="weui-label">职位描述</view>
                    </view>
                    
                
            </view>
             <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    
                    <view class="weui-cell__bd">
                        <textarea name="miaoshu"  class="weui-textarea" value="{{ret.co_miaoshu}}" placeholder="岗位职责、任职资格、福利等。" style="height: 3em" />
                        
                    </view>
                </view>
            </view>

        </view>
       <view class="weui-cells weui-cells_after-title" >
            <view class="weui-cells__title"></view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">联系人</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="user" type="text" class="weui-input" value="{{ret.co_user}}" />
                </view>
            </view>
            <view class="weui-cell weui-cell_select">
                <view class="weui-cell__hd weui-cell__hd_in-select-after">
                    <view class="weui-label">联系电话</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="phone" type="number" maxlength="11" class="weui-input" value="{{ret.co_number}}" placeholder="固定电话请加上区号"/>
                </view>
            </view>
          </view>
       

        <checkbox-group bindchange="bindAgreeChange">
            <label class="weui-agree" for="weuiAgree">
                <view class="weui-agree__text">
                    <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
                    <view class="weui-agree__checkbox-icon">
                        <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
                    </view>
                    阅读并同意<navigator url="../fabuxuzhi/fabuxuzhi?token=1" class="weui-agree__link">《发布须知》</navigator>
                </view>
            </label>
        </checkbox-group>
            <button class="weui-btn" style="width:90%;background-color:#FF5902;color:#ffffff; " formType="submit" hover-class="none" type="default">发布职位</button>

    </view>
</view>
</form>