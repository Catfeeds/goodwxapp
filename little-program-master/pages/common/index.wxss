/* index-bd */

/* kind-list */
.kind-list-item {
  margin: 20rpx 0;
  background-color: #F8F8F8;
  border-radius: 4rpx;
  overflow:hidden;
}
.kind-list-item:first-child{
  margin-top:0;
}
/* kind-list-item */
.kind-list-item-hd{
  padding: 30rpx;
  display: flex; 
  /* 使得这个盒子内的内容显示为一行  */
  align-items: center;   

  transition: opacity .3s;  
}
.kind-list-item-hd-show{
  opacity: .3;
}
.kind-list-item-bd{
  height: 0;
  overflow: hidden;
}
.kind-list-item-bd-show{
  height: auto;
}
/* kind-list-item-hd */
.kind-list-text{
   flex:1;
   /* 让所有弹性盒模型对象的子元素都有相同的长度，忽略它们内部的内容：  */
}
.kind-list-img{
  width: 60rpx;
  height:60rpx;
}
/* kind-list-item-bd */
.navigator-box{
  opacity:0;  
  /* 设置一个元素的透明度级别 */
  position: relative; 
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;

  transform: translateY(-50%); 
  transition: .3s; 
  /* translateY是使得这个元素沿着 Y 轴平移 -50% 是从上到下，否则是从下到上 transition 决定了这个动作持续的时间 */
}
.navigator-box-show{
  opacity: 1;
  transform: translateY(0);
}
/* navigator-box */
.navigator{
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before{
  display: none;
}
/* navigator */
.navigator-text{
  flex: 1;
}
.navigator-arrow{
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after{
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71,0.71,-0.71,0.71,0,0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}