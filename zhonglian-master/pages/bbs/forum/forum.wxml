<!--forum.wxml-->
<view class="forum">
    <view class="forum-item" wx:for="{{data}}" wx:key="*this">
        <view class="forum-tit f18 mcolor" catchtap="onToggleTap" data-id="{{item.id}}">
            <view class="set fr {{item.isOpen?'':'active'}}"></view>
            <text class="iconfont icon-cascades"></text> {{item.name}}
        </view>
        <view class="forum-box" wx:if="{{item.isOpen}}">
            <view class="forum-con gridXb flex" wx:for="{{item.child}}" wx:key="*this" catchtap="onNavigateTap" data-url="../forumlist/forumlist?id={{item.id}}&name={{item.weiba_name}}">
                <image src="{{hostUrl}}{{item.logo}}" class="forum-img"></image>
                <view class="sub">
                    <text class="forum-name">{{item.weiba_name}}</text>
                    <text class="linght lineText f12 desc">{{item.intro}}</text>
                </view>
            </view>
        </view>
    </view>
</view>