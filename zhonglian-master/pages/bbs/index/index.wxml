<!--index.wxml-->
<block wx:if="{{isload}}">
  <view class="glo_load_view">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text>
    <text>正在努力加载</text>
  </view>
</block>
<block wx:else>
  <view class="flex tc gridXb f18 header">
    <view class="sub {{tabIndex==0?'active':''}}" catchtap="onTabSwitchTap" data-index="0">首页</view>
    <view class="sub {{tabIndex==1?'active':''}}" catchtap="onTabSwitchTap" data-index="1">公告</view>
    <view class="sub {{tabIndex==2?'active':''}}" catchtap="onTabSwitchTap" data-index="2">精华</view>
    <view class="sub" catchtap="onNavigateTap" data-url="../forum/forum">版块</view>
  </view>

  <!--content-->

  <view class="proclamation mt15">
    <!--公告消息-->
    <view class="notice-tips">
      <view class="tip-list gridXb" wx:for="{{notices}}" wx:key="*this" catchtap="onNavigateTap" data-url="../detail/detail?id={{item.id}}">
        <text class="mr10 mcolor f16 iconfont icon-notification"></text>
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>

  <!--帖子列表 start-->
  <view class="postList">
    <block wx:for="{{data}}" wx:key="*this">
      <view class="post-item">
        <view class="info">
          <block wx:if="{{item.digest > 1}}">
            <view class="fr state marrow">精华</view>
          </block>
          <view class="fr mcolor forum-name">{{item.weiba_name}}</view>
          <view class="user-info">
            <view class="fl avatar">
              <image src="{{item.avatar}}"></image>
            </view>
            <view class="fl grey">{{item.user_name}}</view>
          </view>
        </view>
        <view catchtap="onNavigateTap" data-url="../detail/detail?id={{item.id}}" class="desc">
          <text class="tit">{{item.title}}</text>
          <text class="lineText3">{{item.content}}</text>
          <view class="flex albums is-three" wx:if="{{item.img_list}}" catchtap="onPreviewTap" data-imgs="{{item.img_list}}">
            <view class="sub pic-item" wx:for="{{item.img_list}}" wx:key="*this">
              <image src="{{item}}" mode="aspectFill" data-index="{{index}}"></image>
            </view>
          </view>
        </view>
        <view class="grey f12 item-footer">
          <view class="fr">
            <text class="iconfont icon-comment mr20">{{item.reply_count}}</text>
            <text class="iconfont icon-appreciate">{{item.praise}}</text>
          </view>
          <view>
            <text class="mr10">{{item.post_time}}</text>
            <text>{{item.read_count}} 阅</text>
          </view>
        </view>
      </view>
    </block>
  </view>
  <!--帖子列表 end-->
  <!--loading start-->
  <view class="m20 tc grey loading" wx:if="{{isShowLoading}}">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text>
    <text>正在加载...</text>
  </view>
  <!--loading end-->
  <!--发帖按钮 start-->
  <view class="post-btn" catchtap="onNavigateTap" data-url="../post/post">
    <text class="iconfont icon-write"></text>
  </view>
  <!--发帖按钮 end-->
</block>