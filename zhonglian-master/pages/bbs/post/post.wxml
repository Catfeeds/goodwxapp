<!--post.wxml-->
<view class="new-post">
  <form bindsubmit="onFormSubmit" bindreset="formReset" report-submit="true">
    <view class="input-text-box">
      <view class="section">
        <input type="text" class="" name="title" placeholder="请输入标题" maxlength="50" />
      </view>
      <view class="section">
        <picker bindchange="onPickerChange" range="{{weiba_list}}" range-key="weiba_name" style="padding:0;">
          <view class="picker new-post-cap arrowR">
            <text class="grey">请选择版块：</text>{{weiba_name}}
          </view>
        </picker>
      </view>
      <view class="section" style="padding-top:15px;">
        <textarea class="textarea" name="content" placeholder="写点什么吧..." maxlength="-1" />
      </view>
    </view>
    <view class="upload-img">
      <view class="item" wx:for="{{imgs}}" wx:key="*this">
        <image src="{{item}}" mode="aspectFill"></image>
        <text class="iconfont icon-close item-del" catchtap="onDelImgTap" data-index="{{index}}"></text>
      </view>
      <view class="item add" bindtap="onChoiceImageTap"></view>
    </view>
    <view class="mod-bar f16 gridXb flex">
      <button form-type="submit" type="primary" disabled="{{btnPushDisable}}">发表</button>
    </view>
  </form>
</view>