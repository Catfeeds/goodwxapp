<block wx:if="{{postlist == null}}">
  <!--暂无内容提示 start-->
  <view class="no-content tc">
    <text class="no-content-icon iconfont icon-yemianwuneirong"></text>
    <view class="no-content-font">暂无订单信息</view>
  </view>
  <!--暂无内容提示 end-->
</block>
<block wx:else>
  <view class="ol-list">
    <block wx:for="{{orderlist}}" wx:key="*this">
      <view class="ol-item">
        <view class="ol-item-info gridXb" bindtap="user_orderinfo_bind" id="{{item.id}}">
          <view class="ol-item-state fr red">
            <block wx:if="{{item.order_status == '0'}}">
              <text>待签收</text>
            </block>
            <block wx:if="{{item.order_status == '1'}}">
              <text>待评价</text>
            </block>
            <block wx:if="{{item.order_status == '2'}}">
              <text>已完成</text>
            </block>
          </view>
          <view class="ol-item-id">订单号：{{item.order_sn}}</view>
        </view>
        <view class="ol-item-con" bindtap="user_orderinfo_bind" id="{{item.id}}">
          <!--订单商品 start-->
          <block wx:for="{{item.goods_list}}" wx:for-item="gitem">
            <view class="ol-one flex">
              <view class="ol-img">
                <image src="{{imgUrlPX}}{{gitem.cover}}" mode="aspectFill"></image>
              </view>
              <view class="ol-one-text sub">
                <text>{{gitem.title}}</text>
              </view>
            </view>
          </block>
          <!--订单商品 end-->
        </view>
        <view class="ol-item-foot gridXt f12">
          <view class="ol-item-del fr">
            <block wx:if="{{item.order_status == '1'||item.order_status == '2'}}">
              <text class="iconfont icon-delete" bindtap="delete_user_order" id="{{item.id}}"></text>
            </block>
          </view>
          <view class="ol-item-pay">
            <text>订单金额：¥{{item.order_amount}}</text>
            <text class="fr blue">{{item.dept_name}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>

  <!--loading start-->
  <view class="m20 tc grey loading" wx:if="{{showLoading}}">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text>
    <text>正在加载...</text>
  </view>
  <!--loading end-->
</block>