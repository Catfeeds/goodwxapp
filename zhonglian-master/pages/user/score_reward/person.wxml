<view class="">
    <checkbox-group catchchange='onSelectChange'>
        <view class="item flex gridXt" wx:for='{{data}}' wx:key='{{index}}'>
            <label>
                <checkbox value="{{item.uid}}" checked='{{item.checked}}' />
            </label>
            <image class="user-img ml10" src="{{item.avatar}}" mode="aspectFill" catchtap='onNavigateTap' data-url='/pages/ranking/person?uid={{item.uid}}'></image>
            <view class="sub ml10" catchtap='onNavigateTap' data-url='reward?uids={{item.uid}}'>{{item.user_name}}</view>
            <view class="blue">{{item.fenzhi}}</view>
        </view>
    </checkbox-group>
</view>

<!-- 批量录入积分 -->
<view class="bottom-fiexd-box">
    <view class="bottom-fiexd gridXt flex tc">
        <view class="sub" catchtap='onToggleChecked' style='line-height:26px;'>全选/全不选</view>
        <button class="sub zhanR" disabled='{{checkIds.length==0}}' catchtap='onRewardTap'>录入所选</button>
        <button class="sub zhanB" catchtap='onRewardTap' data-type='0' wx:if="{{is_admin||is_root}}">录入本站</button>
    </view>
</view>