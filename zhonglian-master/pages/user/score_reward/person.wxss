/* pages/user/score_reward/person.wxss */

page .wx-checkbox-input {
    border-radius: 50%;
    transform: scale(0.9);
}

.blue {
    color: #3a94f3;
}

.fb {
    font-weight: bold;
}

.item {
    align-items: center;
    background: #fff;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.item .num {
    width: 60rpx;
}

.user-img-title {
    width: 80rpx;
}

.user-img {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: #e0e0e0;
}

.bottom-fiexd-box {
    height: 84rpx;
}

.bottom-fiexd {
    background: #fff;
    position: fixed;
    bottom: 0;
}

.bottom-fiexd>.sub {
    padding: 20rpx 0;
}

.bottom-fiexd .zhanR, .bottom-fiexd .zhanB {
    color: #fff;
    padding: 12rpx 15rpx;
    font-size: 14px;
    border-radius: 0;
}

.bottom-fiexd .zhanR {
    background: #e51d1d;
}

.bottom-fiexd .zhanB {
    background: #ec407a;
}

.bottom-fiexd .zhanR::after, .bottom-fiexd .zhanB::after {
    border-radius: 0;
    border: 0;
}
