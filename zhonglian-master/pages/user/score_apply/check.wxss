/* pages/user/info/score_check.wxss */

.card {
    position: relative;
    background-color: white;
    margin: 20rpx 0;
    border-radius: 2px;
    box-shadow: 1px 1px 5px #ddd;
}

.card .card-header, .card .card-footer {
    padding: 20rpx 30rpx;
}

.card .card-header .card-header-title {
    font-weight: bold;
    font-size: 16px;
    color: red;
}

.card .card-content {
    color: #474747;
}

.card .card-content .card-content-inner {
    padding: 20rpx 30rpx;
}

.imgs-item {
    width: 33.333333%;
    padding-top: 33.333333%;
    display: inline-block;
    position: relative;
    margin: 0 0 -6px 0;
}

.imgs-item image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.text-fail {
    color: #f25e5e;
}

.text-success {
    color: #45e082;
}

.no-data {
    position: relative;
    margin-top: 45%;
}

.no-data .no-data-inner {
    padding: 30rpx;
}

.footer-item button:nth-child(n+2) {
    margin-left: 20rpx;
}

button.btn {
    font-size: 12px;
    line-height: 2;
    vertical-align: bottom;
    border-radius: 3px;
}

.tip {
    background-color: white;
    padding: 8px 15px;
}

.tip.warn {
    background-color: wheat;
	color: red;
}
