/* pages/user/info/score_apply_lists.wxss */

.card {
    position: relative;
    background-color: white;
    margin: 20rpx 0;
    border-radius: 2px;
    box-shadow: 2px 3px 5px #e0e0e0;
}

.card .card-header, .card .card-footer {
    padding: 20rpx 30rpx;
}

.card .card-header .card-header-title {
    font-weight: bold;
    font-size: 16px;
    color: red;
}

.card .card-content {
    color: #474747;
}

.card .card-content .card-content-inner {
    padding: 20rpx 30rpx;
}

.card .card-footer {
    display: table;
    table-layout: fixed;
    width: 100%;
}

.card-footer .footer-item {
    display: table-cell;
}

.imgs-item {
    width: 33.333333%;
    padding-top: 33.333333%;
    display: inline-block;
    position: relative;
    margin: 0 0 -6px 0;
}

.imgs-item image {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.text-grey {
    color: #888;
}

.text-default {
    color: #888;
}

.text-fail {
    color: #f25e5e;
}

.text-success {
    color: #45e082;
}

.no-data {
    position: relative;
    margin-top: 45%;
}

.no-data .no-data-inner {
    padding: 30rpx;
}

.no-data .no-data-inner .no-data-msg {
    text-align: center;
}

.float-btn-group {
    position: fixed;
    width: 80px;
    padding: 15px;
    bottom: 5%;
    right: 5%;
}

.float-btn-group .btn {
    width: 50px;
    height: 50px;
    line-height: 50px;
    text-align: center;
    border-radius: 50%;
    background-color: #f25e5e;
    box-shadow: 0 0 15px #f25e5e;
    margin: 5px auto;
    color: white;
    font-size: 28px;
}

.float-btn-group .btn:active {
    background-color: #e24e4e;
}
