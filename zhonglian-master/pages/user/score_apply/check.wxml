<!--pages/user/info/score_check.wxml-->
<block wx:if="{{data}}">
    <view wx:if='quota>fenzhi' class='tip'>当前剩余信用积分额度：{{quota-fenzhi}}</view>
    <view wx:else class='tip warn'>当前剩余信用积分额度已使用完毕！</view>
</block>

<block wx:if="{{data.length}}">
    <view class="card" wx:for="{{data}}" wx:key="{{item.id}}">
        <view class="card-header">
            <view class='fr'>
                <text class='blue'>{{item.username}}</text>
            </view>
            <view class='card-header-title'>{{item.score}}</view>
        </view>
        <view class="card-content">
            <view class='card-content-inner'>
                <view>{{item.remark}}</view>
                <view class='imgs' catchtap='onPreviewTap' data-imgs="{{item.attachments}}">
                    <view class='imgs-item ' wx:for='{{item.attachments}}' wx:key='{{index}}'>
                        <image src='{{hostUrl}}{{item}}' data-index='{{index}}' />
                    </view>
                </view>
            </view>
        </view>
        <view class="card-footer flex">
            <view class="footer-item grey sub">{{item.create_time}}</view>
            <view class="footer-item">
                <block wx:if="{{item.status==0}}">
                    <button size="mini" type="warn" plain class='btn btn-danger' catchtap='onCheckedTap' data-index='{{index}}' data-type='1'>通过</button>
                    <button size="mini" type="primary" plain class='btn btn-success' catchtap='onCheckedTap' data-index='{{index}}' data-type='2'>不通过</button>
                </block>
                <block wx:else>
                    <text class="text-fail" wx:if="{{item.status==2}}">审核不通过</text>
                    <text class="text-success" wx:else>审核通过</text>
                </block>
            </view>
        </view>
    </view>
</block>
<view class="no-data" wx:else>
    <view class="no-data-inner tc">
        <view class="no-data-msg">审核列表空空如也~~</view>
    </view>
</view>