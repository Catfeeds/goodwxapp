.title {
    font-size: 22px;
    text-align: center;
    font-weight: 800;
    margin: 25% auto 60rpx auto;
    color: #474747;
    text-shadow: -1px 0px 1px #474747;
}

.input-group {
    background-color: white;
}

.input-row {
    position: relative;
}

.input-row:not(:last-child)::after, .input-group::after {
    content: '';
    display: block;
    position: absolute;
    height: 1px;
    background-color: #ddd;
    left: 0;
    right: 0;
    transform: scaleY(0.3);
}

.input-group::before {
    top: 0;
}

.input-row:not(:last-child)::after, .input-group::after {
    bottom: 0;
}

.input-row input {
    padding: 10px;
    height: auto;
}

.btn-row {
    padding: 15px;
}
