<view class="title">绑定账号</view>

<form bindsubmit="onSubmit" report-submit>
    <view class="input-group">
        <view class="input-row">
            <input type="text" name="username" maxlength="48" placeholder="用户名" />
        </view>
        <view class="input-row">
            <input type="password" name="pwd" maxlength="48" placeholder="密码" />
        </view>
        <view class="input-row">
            <input type="password" name="repwd" maxlength="48" placeholder="确认密码" />
        </view>
    </view>
    <view class="btn-row">
        <text class="red">需要绑定企业内部账号方可使用！</text>
        <button type="primary" form-type="submit">确定</button>
    </view>
</form>