<view class="title">修改密码</view>

<form bindsubmit="onSubmit" report-submit>
    <view class="input-group">
        <view class="input-row">
            <input type="password" name="oldpw" maxlength="48" placeholder="原密码" />
        </view>
        <view class="input-row">
            <input type="password" name="newpw" maxlength="48" placeholder="新密码" />
        </view>
        <view class="input-row">
            <input type="password" name="renewpw" maxlength="48" placeholder="确认密码" />
        </view>
    </view>
    <view class="btn-row">
        <button type="primary" form-type="submit" disabled='{{!info}}'>确定</button>
    </view>
</form>