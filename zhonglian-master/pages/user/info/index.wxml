                </view>
            </block>

            <block wx:if="{{is_show_score_check}}">
                <view class="gridXt"></view>
                <view class="my-menu-item arrowR " catchtap="onNavigateTap" data-url="../score_apply/check">
                    <text class="green f20 mr5 iconfont icon-shenhe"></text>
                    <text>积分审核</text>
                </view>
            </block>

            <block wx:if="{{is_manager||is_manager2||is_admin||is_root||is_assistant}}">
                <view class="gridXt"></view>
                <view class="my-menu-item arrowR " catchtap="onNavigateTap" data-url="{{is_manage||is_assistant?'../score_reward/person?dept_id='+dept_id:'../score_reward/index'}}">
