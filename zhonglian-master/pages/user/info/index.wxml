                </view>
            </block>

            <view class="gridXt"></view>
            <view class="my-menu-item arrowR " catchtap="onUnBindAccountTap">
                <text class="green f20 mr5 iconfont icon-jiebang"></text>
                <text>解绑当前账号</text>
            </view>

            <view class="gridXt"></view>
            <view class="my-menu-item arrowR " catchtap="onNavigateTap" data-url='modifyPwd'>
                <text class="green f20 mr5 iconfont icon-xiugaimima"></text>
                <text>修改密码</text>
            </view>


