.Member_head {
    background: #e51d1d;
    position: relative;
    height: 150px;
    padding-top: 20px;
    font-size: 14px;
}

.Member_img {
    width: 5rem;
    margin: 0 auto;
    text-align: center;
    color: #fff;
}

.userinfo_name {
    clear: both;
    width: 100%;
    padding-top: 10px;
}

.userinfo-avatar {
    border-radius: 50%;
    width: 80px;
    height: 80px;
    border: 5px solid #f9f9f9;
}

.user_edit_con {
    margin-top: 15px;
    background: #fff;
}

.user_account_info {
    color: #333;
    font-size: 14px;
    padding: 20px 10px;
}

.user_account_info text {
    background: rgba(9, 187, 9, 0.1);
    border: 1px dashed #09a507;
    color: #09a507;
    font-size: 16px;
    padding: 8px 30px;
    margin: 0 8px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
}

.user_edit_li_input {
    position: relative;
}

.user_edit_li_input::after {
    position: absolute;
    left: 15px;
    right: 0;
    bottom: 0;
    height: 1px;
    background-color: #ddd;
    content: '';
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.label, .radio-label {
    width: 70px;
    color: #888;
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
}

.label {
    display: inline-block;
    padding: 8px 8px 8px 15px;
    line-height: 21px;
    margin-top: 5px;
    position: absolute;
    z-index: 100;
}

.user_edit_li_input input, .user_edit_li_input textarea {
    line-height: 21px;
    font-size: 14px;
    padding: 8px 15px 8px 70px;
    color: #333;
}

.user_edit_li_input input {
    height: 46px;
}

.user_edit_li_input textarea {
    display: block;
    width: auto;
}

.radio-group {
    line-height: 21px;
    font-size: 14px;
    padding: 10px 15px;
}

.radio-group text:first-child {
    margin-right: 15px;
}

.radio-group radio {
    margin-right: 10rpx;
}

button {
    background: #e51d1d;
    color: #fff;
    font-size: 14px;
    padding: 6px 0;
}

button::after {
    border: 0;
}
