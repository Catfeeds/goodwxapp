/* mallcart.wxss */

.mallcart-title {
  padding: 10px;
  background: #fff;
}

.mallcart-del {
  width: 30px;
  text-align: center;
}

.radio {
  width: 30px;
  text-align: center;
}

.cart-item {
  padding: 15px 10px;
  background: #fff;
  margin-top: 5px;
}

.cart-img {
  width: 60px;
  height: 60px;
  display: block;
  margin-right: 8px;
}

.cart-title {
  line-height: 140%;
}

.count-set {
  width: auto;
  border: 1px solid #eee;
}

.count-set text {
  display: block;
  line-height: 30px;
  padding: 0 15px;
}

.buy-couts {
  border-left: 1px solid #eee;
  border-right: 1px solid #eee;
  width: 50px;
  height: 30px;
}

.count-set .flase {
  background: rgba(0, 0, 0, 0.05);
  color: #999;
}

.mallcart-float {
  height: 46px;
}

.mallcart-foot {
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 46px;
  line-height: 46px;
  background: #fff;
}

.mall-cart-sum {
  line-height: 18px;
  padding-top: 5px;
}

.mall-cart-btn {
  background: #e64340;
  display: block;
  color: #fff;
  padding: 0 30px;
  border-radius: 0;
}

.mask {
  background-color: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 99999;
}

.mask-content {
  background-color: white;
  position: absolute;
  bottom: 0;
  width: 100%;
  box-shadow: 0 -3px 15px #666;
  max-height: 80%;
  overflow-y: auto;
  overflow-x: hidden;
}

.mask-content.list {
}

.mask-content.list>.list-item {
  padding: 10px 15px;
  position: relative;
  color: #474747;
  transition: all 0.15s;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.mask-content.list>.list-item:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.mask-content.list>.list-item::after {
  content: '';
  background-color: #ddd;
  height: 1px;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  transform: scaleY(0.3);
}

.mask-content-title {
  padding: 0 15px;
  background-color: #f0f5f5;
  box-shadow: 0 -10px 15px #666;
  position: fixed;
  width: 100%;
  line-height: 32px;
  margin-top: -32px;
}
