
<!--malldetail.wxml-->

<!--商品幻灯片 start-->
<block wx:if="{{glo_is_load}}">
  <view class="glo_load_view">
    <text class="iconfont icon-loading animated infinite rotate mr5"></text>
    <text>正在努力加载</text>
  </view>
</block>
<block wx:else>
  <view class="swiper">
    <swiper indicator-dots="true" autoplay="true" indicator-color="#fff" indicator-active-color="#e64340" current="{{swiperCurrent}}" interval="5000" duration="600" bindchange="swiperChange">
      <block wx:for="{{goods_info.photo}}">
        <swiper-item>
          <image src="{{imgUrlPX}}{{item}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>

    <!--<view class="dots">
    <block wx:for="{{goods_info.g_photo}}" wx:key="unique">
      <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
    </block>
  </view>-->
  </view>

  <!--商品幻灯片 end-->

  <!--goods start-->
  <view class="goods-info">
    <block wx:if="{{goods_info.promote_status == 1}}">
      <view class="title f16">
        <text class="cuxiao">促</text>{{goods_info.title}}</view>
      <view class="price red f18">{{goods_info.price}} 积分
        <text class="delLine grey f12 ml10">原价：{{goods_info.market_price}} 积分</text>
      </view>
    </block>
    <block wx:else>
      <view class="title f16">{{goods_info.title}}</view>
      <view class="price red f18">{{goods_info.price}} 积分</view>
    </block>
    <view class="clearfix flex grey gridXt">

      <!--<text class="sub">运费：{{shop_config.yunfei_base}} 元</text>-->
      <text class="sub">库存：{{goods_info.storage}}</text>
      <text class="sub">已兑换：{{goods_info.sale_number}}</text>
    </view>
  </view>

  <!--goods end-->

  <!--goods-detail start-->
  <view class="goods-detail mt15">
    <view class="nav-tab f16 tc flex">
      <block wx:if="{{this_g_nav == 1}}">
        <view class="sub active">商品详情</view>
      </block>
      <block wx:else>
        <view class="sub" bindtap="goods_nav_bind" id="1">商品详情</view>
      </block>
      <block wx:if="{{this_g_nav == 2}}">
        <view class="sub active">商品评价</view>
      </block>
      <block wx:else>
        <view class="sub" bindtap="goods_nav_bind" id="2">商品评价</view>
      </block>
    </view>

    <!--商品详情-->
    <view class="container" wx:if="{{this_g_nav==1}}">
      <view class="wxParse">
        <import src="../../../wxParse/wxParse.wxml" />
        <template is="wxParse" data="{{wxParseData:content.nodes}}" />
      </view>
    </view>

    <!--评价记录-->
    <view class="recording-part" wx:if="{{this_g_nav==2}}">
      <block wx:for="{{commentList}}" wx:for-item="citem">
        <view class="r-item gridXb">
          <view class="info flex">
            <image src="{{citem.headimgurl}}" width="40" height="40" mode="aspectFill"></image>
            <view class="sub f12">
              <text class="linght fr">{{citem.addtime}}</text>
              <text class="grey">{{citem.nickname}}</text>
              <view class="content mt8 lineText2">
                <text>{{citem.content}}</text>
              </view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>

  <!--goods-detail end-->

  <!--底部浮动 start-->
  <view class="foot-nav mt15">
    <view class="flex con gridXt tc">
      <view class="fast-links mr15 flex f12">

        <!--<view class="sub gridYr" bindtap="bind_contant_kefu">
        <text class="iconfont icon-mark red">客服</text>
      </view>-->
        <view class="sub cart notempty" bindtap="bind_go_cart">
          <text class="iconfont icon-cart">购物车</text>
        </view>
      </view>
      <view class="add-cart sub f16" bindtap="bind_goods_add_cart">
        <button class="add-cart-btn">加入购物车</button>
      </view>
    </view>
  </view>

  <!--底部浮动 end-->

  <!--加入购物车 start-->
  <view class="add-cart-box floatBox" wx:if="{{is_add_cart_view}}">
    <view class="layout">
      <text class="iconfont icon-close fr" bindtap="add_cart_close_bind"></text>
      <view class="layout-info gridXb flex">
        <image src="{{imgUrlPX}}{{goods_info.cover}}" width="40" height="40" mode="aspectFill"></image>
        <view class="sub ml10">
          <view class="lineText">{{goods_info.title}}</view>
          <view class="red f18">

            <!--<block wx:if="{{goods_info.promote_status == 1}}">￥{{goods_info.price}}</block>
          <block wx:else>
          ￥{{goods_info.market_price}}
          </block>-->
            {{goods_info.price}} 积分
          </view>
        </view>
      </view>
      <view>
        <block wx:for="{{goods_specification}}" wx:for-item="itemType">
          <view class="attr_list">
            <view class="attr_list_t">{{itemType.name}}：</view>
            <block wx:for="{{itemType.values}}" wx:for-item="itemVal">
              <block wx:if="{{itemVal.ischeck}}">
                <view class="attr_list_li on" bindtap="select_attr_bind" id="{{itemVal.id}}" data-type="{{itemType.name}}">{{itemVal.label}}</view>
              </block>
              <block wx:else>
                <view class="attr_list_li" bindtap="select_attr_bind" id="{{itemVal.id}}" data-type="{{itemType.name}}">{{itemVal.label}}</view>
              </block>
            </block>
          </view>
        </block>
      </view>
      <view class="options">
        <view class="options-tiem">
          <view class="count-set tc fr flex">
            <view class="sub" bindtap="bind_cart_number_jian">
              <text class="iconfont icon-move"></text>
            </view>
            <view class="sub">
              <input type="number" value="{{cart_default_number}}" class="buy-couts" disabled="true" />
            </view>
            <view class="sub" bindtap="bind_cart_number_jia">
              <text class="iconfont icon-add"></text>
            </view>
          </view>
          <view class="name" style="line-height:30px;">
            <text>购买数量：</text>
          </view>
        </view>
      </view>
      <button class="add-cart-btn" bindtap="goods_add_cart" disabled="{{btn_add_cart_disabled}}">加入购物车</button>
    </view>
    <view class="floatBox floatBoxBg" style="display:block;" bindtap="set_close"></view>
  </view>

  <!--加入购物车 end-->
</block>