/**mall.wxss**/
.swiper{ width: 100%; position: relative; padding-bottom: 52%;}
.swiper swiper{ position: absolute; left: 0; top: 0;  width: 100%; height: 100%;}
.swiper image{ width: 100%; height: 100%;}

.swiper .dots{
  position: absolute;
  left:0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper .dots .dot{
  margin: 0 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8rpx;
  transition: all .6s;
}
.swiper .dots .dot.active{
  width: 16rpx;
  background: #e51d1d;
}
.wx-swiper-dots.wx-swiper-dots-horizontal{padding-left:2rpx;}

.mall-menu{ height: 54px; line-height: 54px; background:#e51d1d; overflow: hidden;}
.mall-menu .sub{ overflow: hidden;}
.mall-menu .content{ white-space: nowrap;}
.mall-menu .content view{ display: inline-block; padding: 0 10px; height: 54px;}
.mall-menu view.active{ border-bottom: 2px solid #ffdd76; color: #ffdd76;}
.mall_top_search{width:50px;background: #fff;line-height: 70px;}

.search-bar{width:100%;height:54px; padding:20rpx 30rpx; display: -webkit-box; -webkit-box-align: center; background:#fff;position:absolute; left: 0; top: 0; z-index: 99999999;}
.search-bar-warper{background:#f5f5f5;height:80rpx;border-radius:6rpx;}
.search-bar-warper input{width:100%; height: 80rpx;}

.mall-list .content .item{ float: left; background: #fff; width: 47%; margin-top: 2%; margin-left: 2%;}
.mall-list .content .pic{ width: 100%; overflow: hidden; position: relative; padding-bottom: 80%;}
.mall-list .content .pic image{ width: 100%; height: 100%; position: absolute;}
.mall-list .content .price{ position: absolute; bottom: 6px; right: 6px; padding:0 6px; background: rgba(0, 0, 0, 0.4); color: #fff; border-radius: 3px;}
.mall-list .content .title{ margin: 8px 6px 6px; background: #fff;display: block;}

.cart-float-btn{ background:#e51d1d; color: #fff; width: 82rpx; height: 82rpx; border-radius: 50%; line-height: 82rpx; text-align: center; font-size: 16px; position: fixed; right: 16rpx; bottom: 16px; z-index: 99;}
.cart-float-btn.notempty::after{ content:""; display: block; width: 9px; height: 9px; border: 1px solid #e51d1d; border-radius: 50%; background: #fff; position: absolute; top:3px; right:3px;}



