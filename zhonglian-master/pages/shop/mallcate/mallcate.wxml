<block wx:if="{{glo_is_load}}">
    <view class="glo_load_view">
        <text class="iconfont icon-loading animated infinite rotate mr5"></text><text>正在努力加载</text>
    </view>
</block>
<block wx:else>
<block wx:if="{{cate_list == null || cate_list == ''}}">
<!--暂无内容提示 start-->
<view class="no-content tc">
    <text class="no-content-icon iconfont icon-yemianwuneirong"></text>
    <view class="no-content-font">暂无商品分类</view>
</view>
<!--暂无内容提示 end-->
</block>
<block wx:else>
<view class="cate_list">
   <block wx:for="{{cate_list}}">
        <view bindtap="index_item_bind" id="{{item.id}}" data-name="{{item.name}}">{{item.name}}<text>></text></view>
   </block>
</view>
</block>
</block>