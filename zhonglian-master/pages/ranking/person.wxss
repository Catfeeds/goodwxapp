/* pages/ranking/ranking/ranking.wxss */

.red {
    color: #e51d1d;
}

/*头部*/

.top-bg {
    background-image: linear-gradient(-45deg, #f06f43 0%, #e51d1d 70%);
    position: relative;
}

.topbg {
    width: 347rpx;
    height: 330rpx;
    position: absolute;
    right: 0;
}

.user-msg {
    padding: 60rpx;
}

.user-img {
    width: 120rpx;
    height: 120rpx;
    border: 7rpx solid #fff;
    border-radius: 50%;
}

.yellow {
    color: #ffdd76;
}

.jifen {
    padding-bottom: 46rpx;
}

/*荣誉室*/

.honours {
    background-image: linear-gradient(#fff3db, #fff);
    padding: 30rpx 0;
}

.honours .title {
    padding: 20rpx 0;
    position: relative;
}

.honours .icon-question {
    position: absolute;
    right: 30rpx;
}

.honor-box {
    position: relative;
    width: 750rpx;
    overflow-x: hidden;
}

.honor {
    white-space: nowrap;
    padding: 30rpx 0;
}

.honor.grade1 {
    transform: translateX(280rpx);
}

.honor.grade2 {
    transform: translateX(80rpx);
}

.honor.grade3 {
    transform: translateX(-110rpx);
}

.honor.grade4 {
    transform: translateX(-290rpx);
}

.honor.grade5 {
    transform: translateX(-480rpx);
}

.honor.grade6 {
    transform: translateX(-690rpx);
}

.honor.grade7 {
    transform: translateX(-880rpx);
}

.honor.grade8 {
    transform: translateX(-1070rpx);
}

.honor.grade9 {
    transform: translateX(-1260rpx);
}

.honor.grade1 .honor-list:nth-child(n+2) .honor-bg,
.honor.grade2 .honor-list:nth-child(n+3) .honor-bg,
.honor.grade3 .honor-list:nth-child(n+4) .honor-bg,
.honor.grade4 .honor-list:nth-child(n+5) .honor-bg,
.honor.grade5 .honor-list:nth-child(n+6) .honor-bg,
.honor.grade6 .honor-list:nth-child(n+7) .honor-bg,
.honor.grade7 .honor-list:nth-child(n+8) .honor-bg,
.honor.grade8 .honor-list:nth-child(n+9) .honor-bg {
    opacity: 0.5;
}

.honor-list {
    position: relative;
    display: inline-block;
    padding: 0 5rpx;
}

.honor-bg {
    width: 186rpx;
    height: 128rpx;
    margin-bottom: 15rpx;
}

/*荣誉室弹层*/

.honours-pop {
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.7);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 22;
    display: block;
}

.shuoming {
    width: 680rpx;
    background: #fff;
    position: relative;
    padding: 40rpx 10rpx;
    border-radius: 6rpx;
}

.close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}

/*进度条*/

.progress {
    width: 680rpx;
    background: #ccc;
    margin: 20rpx auto 40rpx;
    border-radius: 20rpx;
}

.progress-bar {
    width: 60%;
    height: 20rpx;
    background-image: linear-gradient(90deg, #e62521, #ffad00);
    border-radius: 20rpx;
}

.honours .tips {
    padding: 10rpx 30rpx;
    background: #ffef58;
    display: inline-block;
    border-radius: 40rpx;
    position: relative;
}

.honours .tips::before, .honours .tips::after {
    content: '';
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    background: #ffef58;
    border-radius: 50%;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
}

.honours .tips::before {
    left: -20rpx;
}

.honours .tips::after {
    right: -20rpx;
}

/*等级名称*/

.honours .grade {
    border-bottom: 1px solid #e51d1d;
}

/*表扬*/

.praise-total {
    padding: 30rpx;
}

.praise-list {
    background: #fff;
    padding: 30rpx;
}

.content-genre {
    position: relative;
    padding-right: 26rpx;
    margin-right: 10rpx;
}

.content-genre::after {
    content: '';
    display: inline-block;
    border-left: 20rpx solid #e51d1d;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid transparent;
    position: absolute;
    right: 0;
    top: 0;
}
