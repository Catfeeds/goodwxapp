/* pages/home/article/article.wxss */
@import "../../wxParse/wxParse.wxss";

.contenter {
  background: #fff;
  padding: 30rpx;
}

/*头部标题*/

.top-title {
  padding-bottom: 20rpx;
}

.top-title .title {
  padding: 20rpx 0;
}

/*文章内容*/

.article {
  overflow: hidden;
  padding: 30rpx 0;
  line-height: 1.4;
  position: relative;
}

.article .content {
}

.article .article-img {
  width: 100%;
  height: 400rpx;
}

/*弹出页面背景*/

.popup-write {
  background: rgba(0, 0, 0, 0.7);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

/*写留言弹出页面*/

.write-content {
  width: 750rpx;
  background: #fff;
  position: absolute;
  bottom: 0;
  animation: fadeInDown 0.5s;
}

@keyframes fadeInUp {
  from {
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }

  to {
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
  }
}

@keyframes fadeInDown {
  from {
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
  }

  to {
    -webkit-transform: translateY(0);
    transform: translateY(0);
  }
}

.write-content textarea {
  width: 100%;
  padding: 30rpx;
  word-break: break-all;
  border: 0;
  resize: none;
}

.saying {
  padding: 30px;
}

.saying .img {
  width: 70rpx;
  height: 70rpx;
}

.saying .userlist .time {
  padding-bottom: 20rpx;
}

.saying .author {
  padding-left: 20rpx;
  position: relative;
}

.saying .author::before {
  content: '';
  display: block;
  width: 4rpx;
  height: 28rpx;
  background: #09bb07;
  position: absolute;
  top: 8rpx;
  left: 0;
}
