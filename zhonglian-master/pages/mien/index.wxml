<!--pages/mien/mien_index/index.wxml-->
<!--商品幻灯片 start-->
<view class="glo_load_view" wx:if="{{isload}}">
  <text class="iconfont icon-loading animated infinite rotate mr5"></text>
  <text>正在努力加载</text>
</view>
<block wx:else>
  <view class="swiper">
    <swiper autoplay="true" interval="5000" duration="600" indicator-dots="true" indicator-color="#fff" indicator-active-color="#e51d1d" circular="true">
      <block>
        <swiper-item wx:for="{{ad_list}}" wx:key="*this">
          <view class="img-text white lineText">{{item.title}}</view>
          <image src="{{hostUrl}}{{item.cover}}" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
</block>
<!--商品幻灯片 end-->
<!--横排列表-->
<view class="tab-head white flex">
  <view class="tab-title flex bgpink mr15" catchtap="onNavigateTap" data-url="lists?name=history&title=中联站史">
    <text class="sub f28 mr5 iconfont icon-zhongguoshiyoucnpc"></text>
    <view class="sub f16">中联站史</view>
  </view>
  <view class="tab-title flex bgyellow mr15" catchtap="onNavigateTap" data-url="lists?name=manage&title=管理纵横">
    <text class="sub f28 mr5 iconfont icon-guanli"></text>
    <view class="sub f16">管理纵横</view>
  </view>
  <view class="tab-title flex bggreen mr15" catchtap="onNavigateTap" data-url="lists?name=staff_manual&title=员工文苑">
    <text class="sub f28 mr5 iconfont icon-shu"></text>
    <view class="sub f16">员工文苑</view>
  </view>
</view>
<!--选项卡内容-->
<view class="tab-content" wx:for="{{data}}" wx:key="*this">
  <!--新闻-->
  <view class="news">
    <view class="title red flex gridXb" catchtap="onNavigateTap" data-url="lists?cid={{item.id}}&title={{item.title}}">
      <text class="mr5 f18 iconfont icon-news_fill_light"></text>
      <text class="sub f16 arrowR">{{item.title}}</text>
    </view>
    <view class="list-content">

      <view class="list flex gridXb" wx:for="{{item.doc_list}}" wx:key="*this">
        <image class="left-img" src="{{hostUrl}}{{item.cover}}" mode="aspectFill"></image>
        <view class="right-content" catchtap="onNavigateTap" data-url="article?id={{item.id}}">
          <view class="lineText f16">{{item.title}}</view>
          <view class="text-content mt5 lineText2 grey">{{item.description}}</view>
        </view>
      </view>

    </view>
  </view>
</view>