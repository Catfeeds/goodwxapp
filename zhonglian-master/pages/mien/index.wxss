.swiper {
  width: 100%;
  position: relative;
  padding-bottom: 50%;
}

.swiper swiper {
  position: absolute;
  left: 0;
  top: -1rpx;
  width: 100%;
  height: 100%;
}

swiper-item {
  position: relative;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.swiper .img-text {
  width: 750rpx;
  padding-left: 30rpx;
  padding-right: 150rpx;
  line-height: 2;
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
}

