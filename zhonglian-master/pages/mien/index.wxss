.bgpink {
  background-image: linear-gradient(45deg, #f04a4a 0%, #ff5959 100%);
  box-shadow: 0 5rpx 10rpx rgba(229, 29, 29, 0.3);
}

.bgyellow {
  background-image: linear-gradient(45deg, #fba207 0%, #fec52b 100%);
  box-shadow: 0 5rpx 10rpx rgba(252, 147, 19, 0.3);
}

.bggreen {
  background-image: linear-gradient(45deg, #60b51f 0%, #5ac811 100%);
  box-shadow: 0 5rpx 10rpx rgba(88, 167, 31, 0.3);
}

.tab-head {
  padding: 30rpx;
}

.tab-title {
  border-radius: 10rpx;
  padding: 20rpx 40rpx 20rpx 30rpx;
  line-height: 38rpx;
}

.tab-title:last-child {
  margin-right: 0;
}

.tab-title .iconfont {
  line-height: 76rpx;
}

.tab-content {
  background: #fff;
  padding-left: 30rpx;
  margin-bottom: 10px;
}

.tab-content .title {
  line-height: 88rpx;
}

.tab-content .list {
  padding: 30rpx 0;
}

.tab-content .left-img {
  width: 150rpx;
  height: 120rpx;
}

.tab-content .right-content {
  width: 570rpx;
  padding: 0 20rpx;
}

.right-content .text-content {
  line-height: 1.3;
}
