/**note.wxss**/

.top-half {
  width: 91%;
  margin-left: 40rpx;
  margin-bottom: 70rpx;
  padding-bottom: 10rpx;
  align-self: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
}

.user-icon {
  height: 72rpx;
  width: 72rpx;
  margin: 0 10rpx 0 0;
  border-radius: 10%;
}

.user-info {
  align-self: flex-start;
  margin:  0 0 20rpx 0;
}

.date-info {
  align-items: flex-start;
}

.name-text {
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.date-text {
  font-size: 28rpx;
  color: #a3a3a3;
}

.note-text {
  font-size: 32rpx;
  letter-spacing: 2rpx;
}

.note-info {
  margin: 15rpx 0 0 0;
  align-self: flex-end;
}

.star {
  width: 32rpx;
  height: 30rpx;
}

.star-number {
  font-size: 22rpx;
  color: #a3a3a3;
  margin: 0 30rpx 0 8rpx;
}

.tip {
  padding-top: 120rpx;
  padding-bottom: 160rpx;
  color: #e1e1e1;
  font-size: 48rpx;
  letter-spacing: 3rpx;
}

.comment-list {
  align-self: flex-start;
  width: 89%;
  margin-left: 40rpx;
  padding: 20rpx 15rpx 25rpx 25rpx;
  box-sizing: border-box;
  background-color: #e4e4e4;
}

.comment {
  margin-bottom: 10rpx;
  align-items: flex-start;
  justify-content: flex-start;
  font-size: 24rpx;
}

.c-name {
  font-size: 24rpx;
  letter-spacing: 2rpx;
  color: #0066cc;
  margin-right: 5rpx;
}

.c-text {
  font-size: 24rpx;
  margin-left: 10rpx;
}


.edit-aera {
  width: 100%;
  background-color: #fafafa;
  border-top: 2rpx solid #e1e3e2;
  position: fixed;
  display: flex;
  align-items: center;
}

.c-input {
  width: 650rpx;
  height: 60rpx;
  background: #fcfcfc;
  border: 2rpx solid #e7e8e7;
  margin: 15rpx 20rpx 15rpx 20rpx;
  border-radius: 3%;

}
