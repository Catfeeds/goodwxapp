/**index.wxss**/
.s-container {
  height: 100%;
}

/*::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}*/

.top-half {
  padding: 30rpx 22rpx 15rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.top-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
  letter-spacing: 4rpx;
  align-self: flex-start;
  margin-left: 40rpx;
  margin-bottom: 10rpx;
  padding-left: 0;
}

button[plain] {
  border: none;
}

.top-icon {
  width: 34rpx;
  height: 35rpx;
}

.line {
  height: 1rpx;
  width: 95%;
  background: #ababab;
  margin-left: 40rpx;
  transform: scaleY(.3);
  align-self: flex-start;
}

.bottom-half {
  width: 100%;
}

.q-list {
  width: 100%;
}

.s_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-self: flex-start;
}

.q_item {
  margin: 25rpx 0 25rpx 40rpx;
}
.q_icon {
  width: 32rpx;
  height:32rpx;
  border-radius: 30%;
  margin: 0 25rpx 0 0;
}
.q_title {
  align-self: center;
  letter-spacing: 2rpx;
  max-width: 400rpx;
  font-size: 32rpx;
}
.extra {
  margin-right: 35rpx;
}
.time {
  font-size: 28rpx;
  color: #a3a3a3;
}
.bubble {
  background-color: #ff0000;
  height: 24rpx;
  width: 24rpx;
  border-radius: 50%;
  margin-left: 72rpx;
  margin-top: -10rpx;
  position: absolute;
  align-self: flex-start;
}

.tip {
  padding-top: 320rpx;
  color: #e5e5e5;
  font-size: 48rpx;
  letter-spacing: 3rpx;
}
