/*list.wxss*/
page {
  background-color: #ffffff;
}

.top-half {
  width: 91%;
  margin-left: 40rpx;
  margin-bottom: 15rpx;
  align-self: flex-start;
  justify-content: space-between;
  box-sizing: border-box;
}
.q-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 5rpx;
  
}
.new-note {
  align-self: flex-end;
}
.top-text {
  font-weight: bold;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 2rpx;
  margin-right: 5rpx;
}
.top-icon {
  width: 24rpx;
  height: 24rpx;
}

.line {
  height: 1rpx;
  width: 91%;
  background: #8a8a8a;
  margin-left: 40rpx;
  transform: scaleY(.3);
  align-self: flex-start;
}

.note-list {
  margin-top: 40rpx;
  width: 100%;
}

.n-list {
  width: 100%;
}

.note-item {
  width: 90%;
  background-color: #f4f4f4;
  display: flex;
  flex-direction: column;
  align-self: center;
  margin: 0 0 40rpx 40rpx;
  border-radius: 15rpx;
}

.note-text {
  padding: 10rpx 15rpx 10rpx 15rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
}
.note-info {
  padding: 10rpx 37rpx 15rpx 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.publish {
  background-color: #ffffff;
  width: 100%;
  padding: 30rpx 0 30rpx 0;
  justify-content: center;
}





.author-info {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.user-icon {
  width: 40rpx;
  height:40rpx;
  border-radius: 30%;
  margin: 0 10rpx 0 0;
}

.user-name {
  color: #a3a3a3;
  font-size: 22rpx;
  letter-spacing: 1rpx;
}

.view-data {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.star {
  width: 28rpx;
  height: 26rpx;
  margin: 0 8rpx 0 30rpx;
}

.star-number {
  font-size: 22rpx;
  color: #a3a3a3;
}

.tip {
  padding-top: 320rpx;
  color: #e1e1e1;
  font-size: 48rpx;
  letter-spacing: 3rpx;
}

.item-line {
  height: 1rpx;
  background: #e5e5e5;
  transform: scaleY(.4);
  margin: 0 40rpx 0 28rpx;
}