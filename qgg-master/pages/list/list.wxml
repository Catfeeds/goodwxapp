<!--logs.wxml-->
<view class="v-container">
  <view class="h-container top-half">
    <image class='q-icon' src='{{q_icon_url}}'></image>
    <view class='new-note' bindtap='toEdit'>
      <text class='top-text' style='color:{{edit_color}}'>发布备忘</text>
      <!--<image class='top-icon' src='../../assets/images/edit.png'></image>-->
    </view>
  </view>
  
  <view class='line'></view>

  <view class="note-list v-container">
    <view wx:if="{{has_nlist}}" class='n-list'>
      <block wx:for="{{notes}}" wx:key="*this">
        <view id="{{item.message_id}}" class="note-item" bindtap='getNoteDetail'>
          <text wx:if='{{item.read_status == 2}}' class="note-text" style='color:#a3a3a3'>{{item.message_intro}}</text>
          <text wx:else class="note-text" style='color:#000000'>{{item.message_intro}}</text>
          <view class='item-line'></view>
          <view class="note-info">
            <view class="author-info">
              <image class="user-icon" src="{{item.user_head_img}}"></image>
              <text class="user-name">{{item.user_group_name}}</text>
            </view>
            <view class="view-data">
              <image class="star" src="../../assets/images/see.png"></image>
              <text class="star-number">{{item.view_amount}}</text>
              <image class="star" src="../../assets/images/message.png"></image>
              <text class="star-number">{{item.thumb_amount}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view wx:else class='tip'>
      <text>暂时没有公告</text>
    </view>
  </view>


</view>