/* edit.wxss */
page {
  height: 100%;
}

.pre-name {
  font-weight: bold;
  margin-right: 20rpx;
}

.edit-page {
  justify-content: space-between;
  height: 100%;
}

.q-info {
  width: 660rpx;
  padding: 70rpx 0 20rpx 0;
  align-self: center;
}

.q-name {
  font-size: 32rpx;
  font-weight: 400; 
  letter-spacing: 2rpx;
}

.q-icon {
  width: 54rpx;
  height: 54rpx;
  border-radius: 10%; 
}

.edit-area {
  background-color: #ffffff;
  height: 480rpx;
  width: 660rpx;
  align-self: center;
  border: 1rpx solid #a8a8a8;
  border-radius: 2%;
}

.send {
  width: 660rpx;
  align-self: center;
  margin-top: 100rpx;
  margin-bottom: 50rpx;
  background-color: #000000;
  color: #ffffff;
  letter-spacing: 20rpx;
  border: none;
}

.touched {
  background-color: #030303;
  opacity: 0.7;
}

.edit-form{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}