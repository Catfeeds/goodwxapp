/* header.wxss */

.top {
  width: 100%;
  height: 95rpx;
  position: fixed;
  top: 0;
  left: 0;
  text-align: center;
  font-family: "微软雅黑";
  z-index: 9;
}

.top text {
  color: #fff;
  font-size: 26rpx;
  padding: 0rpx 10rpx;
  float: left;
}

.top .address {
  width: 20rpx;
  height: 30rpx;
  margin-top: 37rpx;
  float: left;
  margin-left: 20rpx;
}

.top_city {
  text-decoration: underline;
  line-height: 95rpx;
}

.top .choose {
  width: 30rpx;
  height: 40rpx;
  margin-top: 32rpx;
  float: left;
}

.top .photo {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: 5rpx;
  right: 60rpx;
}

.top .telephone {
  position: absolute;
  bottom: 5rpx;
  right: 15rpx;
  font-size: 24rpx;
  color: #fff;
}

.top .telephone2 {
  right: 50rpx;
}

.activity {
  color: #fff;
  font-size: 26rpx;
  line-height: 95rpx;
  position: absolute;
  left: 50%;
  top: 0;
  text-align: center;
  width: 30%;
  margin-left: -15%;
}

.chooseCity_wrap {
  position: fixed;
  z-index: 11;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  font-size: 30rpx;
  font-family: "微软雅黑";
  transition: all 0.5s;
  box-shadow: 0 -1rpx 5rpx 0 #ccc;
}

.chooseCity_wrap_wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10;
}

.chooseCity_wrap picker-view-column {
  text-align: center;
}

.chooseCity_wrap .cancel {
  position: absolute;
  left: 20rpx;
  top: 15rpx;
  color: #aaa;
  z-index: 99;
  font-size: 32rpx;
}

.chooseCity_wrap .confirm {
  position: absolute;
  right: 20rpx;
  top: 15rpx;
  color: green;
  z-index: 99;
  font-size: 32rpx;
}

/*login*/

.map_wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99;
}

.map2 {
  width: 620rpx;
  height: 600rpx;
  background: #fff;
  border-radius: 10rpx;
  font-family: "微软雅黑";
  transition: all 0.3s;
  position: fixed;
  left: 65rpx;
  top: 300rpx;
  z-index: 100;
}

.map2 .close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 280rpx;
  bottom: -100rpx;
}

.map2 .sure {
  width: 473rpx;
  height: 90rpx;
  margin: 50rpx auto;
  display: block;
}

.map2 .title {
  display: block;
  height: 160rpx;
  background: #621192;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 160rpx;
  font-size: 50rpx;
  letter-spacing: 10rpx;
}

.map2 .input {
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
}

.map2 .input_wrap {
  width: 560rpx;
  height: 78rpx;
  background: #e8e1f1;
  border-radius: 10rpx;
  margin: 0 auto;
}

.map2 .yzm .input_wrap {
  width: 320rpx;
  float: left;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.map2 .input input {
  font-size: 35rpx;
  position: absolute;
  left: 120rpx;
  top: 22rpx;
  min-height: 0rpx;
  height: 34rpx;
  line-height: 34rpx;
  width: 220rpx;
}
.map2 .mobile input{
  width: 490rpx;
}

.map2 .yzm .getCode {
  width: 208rpx;
  height: 78rpx;
  border-radius: 10rpx;
  float: left;
  color: #fff;
  text-align: center;
  line-height: 78rpx;
  font-size: 34rpx;
}

.map2 .mobile image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50rpx;
  top: 12rpx;
}

.mobile {
  margin-top: 60rpx;
}

/*活动规则*/
.activity_wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.7);
}

.activity_main {
  width: 80%;
  height: 76%;
  position: fixed;
  top: 5%;
  left: 7%;
  z-index: 101;
  background: #fff;
  transition: all 0.3s;
  border-radius: 10rpx;
  color: #666;
  font-family: "微软雅黑";
  padding: 3%;
}

.activity_main image {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 290rpx;
  bottom: -80rpx;
}
.ac_title {
  text-align: center;
  font-size: 34rpx;
  color: #000;
}
.activity_main text {
  display: block;
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
