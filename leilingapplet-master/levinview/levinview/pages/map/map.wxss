/* map.wxss */

/*地图*/

.M_map_wrap {
  width: 100%;
  height: 100%;
}

.M_map2 {
  width: 100%;
  height: 100%;
  background: #fff;
  margin: 0rpx;
  position: relative;
}

#map {
  width: 100%;
  height: 700rpx;
}

.M_map2 .choose4s {
  width: 473rpx;
  height: 90rpx;
  margin: 15rpx auto;
  display: block;
}

.M_map2 .sure {
  width: 473rpx;
  height: 90rpx;
  margin: 20rpx auto 0;
  display: block;
}

#scroll {
  height: 250rpx;
  width: 92%;
  margin: 0 auto;
  padding: 0 4%;
}

#scroll .scroll-view-item {
  height: 60rpx;
  border-bottom: 1rpx solid #4a4468;
}

#scroll .scroll-view-item .title {
  font-size: 26rpx;
  color: #4b456b;
  font-weight: 900;
  padding-left: 20rpx;
  display: block;
  margin-top: 20rpx;
}

#scroll .scroll-view-item  .con {
  font-size: 26rpx;
  padding-left: 20rpx;
  color: #4b456b;
  line-height: 60rpx;
}

#scroll radio {
  margin-top: -40rpx;
  float: right;
}
