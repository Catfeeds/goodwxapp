/* detail.wxss */
@import "../header/header.wxss";

.wrap {
  position: relative;
  width: 100%;
  height: 100%;
}

swiper-item image {
  height: 350rpx;
  width: 750rpx;
}

swiper {
  height: 350rpx;
  width: 750rpx;
}

.blink_wrap {
  background: #fff;
  width: 100%;
  height: 725rpx;
  padding-top: 25rpx;
}

.blink {
  width: 700rpx;
  height: 720rpx;
  margin: 0rpx auto;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx 0 #ccc;
}

.blink .ld {
  text-align: center;
  color: #60379d;
  font-weight: 900;
  padding-top: 40rpx;
  letter-spacing: 5rpx;
}

.listText text {
  display: block;
  color: #4b446e;
  font-size: 26rpx;
  padding: 0 30rpx 0 40rpx;
  margin-top: 10rpx;
  line-height: 34rpx;
}

.picker_wrap {
  width: 660rpx;
  margin: 0 auto;
  overflow: hidden;
}

.picker_wrap .picker {
  width: 640rpx;
  height: 70rpx;
  border: 1px solid #60379d;
  border-radius: 10rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  padding-left: 10rpx;
  color: #60379d;
  font-weight: 900;
  margin: 8px auto;
}

.picker_wrap .picker2 {
  width: 430rpx;
  margin-left: 0;
}

.info {
  width: 660rpx;
  margin: 0 auto;
  position: relative;
}

.info .text {
  display: block;
  font-size: 26rpx;
  line-height: 50rpx;
  padding-left: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 5rpx;
}

.next image {
  margin: 10rpx auto 0;
  width: 450rpx;
  height: 90rpx;
  display: block;
}

.info  .map {
  position: absolute;
  right: 0rpx;
  top: -85rpx;
  color: #ff5200;
  height: 50rpx;
  line-height: 50rpx;
}

.info  .map image {
  width: 50rpx;
  height: 50rpx;
  padding-right: 10rpx;
  vertical-align: middle;
}

.info  .map text {
  font-weight: 900;
  border-bottom: 1px solid #ff5200;
  font-size: 30rpx;
}

/*地图*/

.M_map_wrap {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 99;
  transition: all 0.3s;
}

.M_map2 {
  width: 100%;
  height: 1000rpx;
  background: #fff;
  margin: 0rpx auto 0;
  position: relative;
}

#map {
  width: 100%;
  height: 500rpx;
}

.M_map2 .close {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 46%;
  bottom: -100rpx;
}

.M_map2 .choose4s {
  width: 473rpx;
  height: 90rpx;
  margin: 15rpx auto;
  display: block;
}

.M_map2 .sure {
  width: 473rpx;
  height: 90rpx;
  margin: 40rpx auto;
  display: block;
}

#scroll {
  height: 220rpx;
  width: 92%;
  margin: 0 auto;
  padding: 0 4%;
}

#scroll .scroll-view-item {
  height: 100rpx;
  border-bottom: 1rpx solid #4a4468;
}

#scroll .scroll-view-item .title {
  font-size: 26rpx;
  color: #4b456b;
  font-weight: 900;
  padding-left: 20rpx;
  display: block;
  margin-top: 20rpx;
}

#scroll .scroll-view-item  .con {
  font-size: 26rpx;
  padding-left: 20rpx;
  color: #4b456b;
  line-height: 60rpx;
}

#scroll radio {
  margin-top: -10rpx;
  float: right;
}
