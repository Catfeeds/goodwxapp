App({
  data: {
    picUrl: "http://uat.zwmedia.com.cn/ltb_static_files/",
    requestUrl: "https://uat.zwmedia.com.cn/"
  },
  getUserInfo: function (cb) {
    var that = this
    if (this.globalData.userInfo) {
      typeof cb == "function" && cb(this.globalData.userInfo)
    } else {
      //调用登录接口
      wx.login({
        success: function () {
          wx.getUserInfo({
            success: function (res) {
              that.globalData.userInfo = res.userInfo.avatarUrl
              typeof cb == "function" && cb(that.globalData.userInfo)
            },fail:function(){
              that.globalData.userInfo = that.data.picUrl +"levin/img/photo.jpg"
              typeof cb == "function" && cb(that.globalData.userInfo)
            }
          })
        }
      })
    }
  },
  globalData: {
    userInfo: null
  }
})