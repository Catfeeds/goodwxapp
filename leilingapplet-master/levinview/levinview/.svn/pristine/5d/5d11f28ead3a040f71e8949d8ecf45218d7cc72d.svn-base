/* regInfo.wxss */
@import "../header/header.wxss";

.infoRegister_wrap {
  background: #fff;
  width: 100%;
  padding-top: 20rpx;
}

.infoRegister {
  width: 97%;
  height: 800rpx;
  margin: 0rpx auto;
  overflow: hidden;
  padding-top: 260rpx;
}

.infoRegister label {
  float: left;
  width: 44%;
  line-height: 70rpx;
  margin-left: 6%;
  margin-bottom: 40rpx;
  margin-top:1rpx;
}

.radio-group {
  font-size: 26rpx;
  line-height: 70rpx;
}

.infoRegister label text {
  float: left;
  font-weight: 900;
  font-size: 40rpx;
  color: #58349e;
  margin-right: 20rpx;
}

.infoRegister .sex text {
  margin-right: 10rpx;
}

.infoRegister .mobile2 {
  width: 94%;
}

.infoRegister .mobile2 .getCode {
  width: 200rpx;
  height: 70rpx;
  margin-left: 18rpx;
  float: left;
  background: #621192;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  font-size: 34rpx;
}

.infoRegister .input_wrap {
  height: 68rpx;
  border: 1rpx solid #58349e;
  float: left;
  border-radius: 10rpx;
  position: relative;
}

.infoRegister .name .input_wrap {
  width: 200rpx;
}

.infoRegister .mobile2 .input_wrap {
  width: 300rpx;
}

.infoRegister  .input_wrap input {
  position: absolute;
  left: 10rpx;
  top: 18rpx;
  font-size: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  min-height: 0;
}

.infoRegister label picker {
  color: #c9c7d4;
  width: 120rpx;
  border: 1px solid #58349e;
  height: 70rpx;
  float: left;
  border-radius: 10rpx;
  padding-left: 10rpx;
}

.imgCom image {
  display: block;
  margin: 75rpx auto 0;
  width: 450rpx;
  height: 90rpx;
}

.code {
  text-align: center;
  width: 600rpx;
  height: 80rpx;
  background: #f3ebf6;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 230rpx;
}

.code input {
  display: block;
  font-size: 34rpx;
  font-weight: 900;
  padding: 23rpx 0;
  height: 34rpx;
  line-height: 34rpx;
}
