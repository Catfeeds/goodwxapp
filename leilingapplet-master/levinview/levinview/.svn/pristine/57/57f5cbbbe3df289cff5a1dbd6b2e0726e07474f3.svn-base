<!--header.wxml-->
<view class="top" style="background:url({{imagesUrl}}levin/img/line.jpg) repeat-x left;c  background-size: auto 95rpx;">
     <image src="{{photoURL}}" bindtap="updatePhoto" class="photo"></image>
     <view bindtap="switchCity">
        <image src="{{imagesUrl}}levin/img/address.png" class="address"></image>
        <text>{{city}}</text>
        <image src="{{imagesUrl}}levin/img/choose.png" class="choose"></image>
     </view>
     <view class="chooseCity_wrap">
           <view class="chooseCity" style="top:{{show? '-95rpx':'0'}}">
           <label>
              <text>省份</text>
              <picker bindchange="bindProChange" value="{{i}}" range="{{arrayPro}}">
                <view class="picker"   style="background:  #fff url({{imagesUrl}}levin/img/down.png) no-repeat 94%; background-size: 20rpx auto;">
                    {{arrayPro[i]}}
                </view>
              </picker>
           </label>
            <label>
              <text>城市</text>
              <picker bindchange="bindCityChange" value="{{j}}" range="{{arrayCity}}">
                <view class="picker" style="background:  #fff url({{imagesUrl}}levin/img/down.png) no-repeat 94%; background-size: 20rpx auto;">
                {{arrayCity[j]}}
                </view>
              </picker>
           </label>
           </view>
     </view>
</view>
<view class="map_wrap" style="transform:{{showLogin ? 'scale(1,1)' : 'scale(0,0)'}};">
    <view class="map2" >
        <text class="title">登录</text>
        <view class="input mobile">
            <input  type="number" maxlength="11"  placeholder="请输入手机号" bindblur="testMobile"/>
            <image src="{{imagesUrl}}levin/img/mobile.png"></image>
        </view>
         <view class="input yzm">
            <input  type="number" maxlength="6" bindblur="testVerifycode"/>
            <image src="{{imagesUrl}}levin/img/code.png" bindtap="getCode"></image>
        </view>
        <image src="{{imagesUrl}}levin/img/close.png" class="close" bindtap="close2"></image>
        <image src="{{imagesUrl}}levin/img/login.png" class="sure" bindtap="user_login"></image>
    </view>
</view>

