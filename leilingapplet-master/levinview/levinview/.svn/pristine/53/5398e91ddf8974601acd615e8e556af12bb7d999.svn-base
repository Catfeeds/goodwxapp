<!--regInfo.wxml-->
<include src="../header/header.wxml" />
<view class="container">
  <view class="infoRegister_wrap">
    <view class="infoRegister" style="background: #fff url({{imagesUrl}}title2.png) no-repeat left top;  background-size: 100% auto;">
      <label class="name">
            <text>姓名:</text>
             <view class="input_wrap">
                 <input  bindinput="testName" value="{{name}}"/>
             </view>
            
         </label>
      <label class="sex">
            <text>性别:</text>
          <radio-group class="radio-group" bindchange="bindSexChange"> 
              <radio value="{{arraySex[0].sex}}" checked="{{arraySex[0].checked}}" color="#60379d"/>男
              <radio value="{{arraySex[1].sex}}" checked="{{arraySex[1].checked}}" color="#60379d"/>女
          </radio-group>
         </label>
      <label class="mobile2">
            <text>电话:</text>
            <view class="input_wrap">
                <input  bindblur='testMobile1' type="number" maxlength="11" value="{{mobile}}" bindinput="testMobile2"/>
            </view>
             <view class="getCode" bindtap="{{getCode}}" style="display:{{code ? 'block' : 'none'}};background:{{color}}" >{{yzm}}</view>
         </label>
      <!--验证码  -->
      <view class="code" style="display:{{code ? 'block' : 'none'}};">
        <input type="number" maxlength="4" bindblur="testVerifycode1" focus="{{focus}}" bindinput="keyDown" />
      </view>
      <!--预约  -->
      <view class="yuyue imgCom" bindtap="yuyue">
        <image src="{{imagesUrl}}yuyue.png"></image>
      </view>
      <!--上一步  -->
      <view class="pre imgCom" bindtap="pre">
        <image src="{{imagesUrl}}pre.png"></image>
      </view>
    </view>
  </view>
</view>