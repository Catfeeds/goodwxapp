/* detail.wxss */
@import "../header/header.wxss";
.wrap{
  position: relative;
  width: 100%;
  height: 100%;
}
swiper image{
  width: 100%;
  height:100%;
}
swiper{
  height:360rpx;
   width: 750rpx;
}
.blink_wrap{
  background: #fff;
  width:100%;
  height: 725rpx;
   padding-top:25rpx;
}
.blink{
  width: 700rpx;
  height: 700rpx;
  margin:0rpx auto;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx 0 #ccc;
}
.listText{
  padding-top:105rpx;
}
.listText text{
  display: block;
  color:#4b446e;
  font-size: 26rpx;
  padding: 0 30rpx 0 40rpx;
  margin-bottom:20rpx;
  line-height: 34rpx;
}
.picker_wrap{
  width: 660rpx;
  margin:30rpx auto 0;
  height: 80rpx;
}
.picker_wrap .picker{
  width: 310rpx;
  height: 80rpx;
  border:1px solid #60379d;
  border-radius: 20rpx;
  float: left;
  line-height: 76rpx;
  font-size: 22rpx;
  padding-left: 10rpx;
  color:#60379d;
  font-weight: 900;
  letter-spacing: 5rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

} 
.picker_wrap .picker2{
  float: right;
}
.info{
  width: 660rpx;
  margin: 0 auto;
  position: relative;
}
.info .text{
  display: block;
  margin-top:20rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  padding-left:60rpx;
   overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;


}
.next image{
  margin:20rpx auto 0;
  width: 500rpx;
  height: 100rpx;
  display: block;
}
.info  .map{
  position: absolute;
  right:100rpx;
  top:0;
  color:#ff5200;
  height: 50rpx;
  line-height: 50rpx;
 
}
.info  .map image{
  width: 50rpx;
  height:50rpx;
  padding-right:10rpx;
  vertical-align: middle;
}
.info  .map text{
  font-weight: 900;
  border-bottom:1px solid #ff5200;
  font-size: 30rpx;
}

/*地图*/
.M_map_wrap{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  z-index: 99;
  transition: all .5s;
}
.M_map2{
  width:620rpx;
  height: 867rpx;
  background: #fff;
  border-radius: 20rpx;
  margin:180rpx auto 0;
  position: relative;
}
#map{
  width: 620rpx;
  height: 400rpx;
}
.M_map2 .close{
  width:60rpx;
  height: 60rpx;
  position: absolute;
  right:-55rpx;
  top:-50rpx;
}
.M_map2 .choose4s{
  width:473rpx;
  height: 90rpx;
  margin:15rpx auto;
  display: block;
}
.M_map2 .sure{
  width:473rpx;
  height: 90rpx;
  margin:15rpx auto;
  display: block;
}
#scroll{
  height: 210rpx;
  width: 560rpx;
  margin:0 auto;
}
#scroll .scroll-view-item{
  height: 100rpx;
  border-bottom:1rpx solid #4a4468;
}
#scroll .scroll-view-item .title{
   font-size: 24rpx;
   color:#4b456b;
   font-weight: 900;
   padding-left: 20rpx;
   display: block;
   margin-top:20rpx;
}
#scroll .scroll-view-item  .con{
  font-size: 24rpx;
  padding-left: 20rpx;
  color:#4b456b;
  line-height: 60rpx;
}
#scroll radio{
  margin-top:-10rpx;
  float: right;
}