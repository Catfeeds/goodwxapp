/* regInfo.wxss */
@import "../header/header.wxss";
.infoRegister_wrap{
  background: #fff;
  width:100%;
  padding-top:20rpx;
}
.infoRegister{
  background: #fff url(../../img/title2.png) no-repeat left top;
  width:97%;
  height: 800rpx;
  background-size: 100% auto;
  margin:0rpx auto;
  overflow: hidden;
  padding-top:260rpx;
}
.infoRegister label{
  float: left;
  width: 44%;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 6%;
  margin-bottom: 40rpx;
}
.infoRegister label text{
  float: left;
  font-weight: 900;
  font-size:40rpx;
  color:#58349e;
  margin-right: 20rpx; 
}
.infoRegister label input{
  float: left;
  width: 190rpx;
  border:1px solid #58349e;
  height: 70rpx;
  border-radius: 10rpx;
  color:#c9c7d4;
  padding-left: 10rpx;
}
.infoRegister .mobile2{
  width: 94%;
}
.infoRegister .mobile2 image{
  width:180rpx;
  height: 70rpx;
  margin-left: 18rpx;
  float: left;
}
.infoRegister .mobile2 input{
  width:300rpx;
}
.infoRegister label picker{
  color:#c9c7d4;
  width:120rpx;
  border:1px solid #58349e;
  height: 70rpx;
  float: left;
  border-radius: 10rpx;
  padding-left: 10rpx;
  background: url(../../img/down2.png) no-repeat 90rpx;
  background-size: 30rpx auto;
}
.imgCom image{
  display: block;
  margin:75rpx auto 0;
  width: 450rpx;
  height: 90rpx;
}
.code {
  text-align: center;
}
.code view{
  color:#4a436c;
  font-size: 40rpx;
  letter-spacing: 10rpx;
}
.code view text{
  color:#583694;
  font-size: 60rpx;
}
.code input{
  width: 600rpx;
  height: 90rpx;
  background: #f3ebf6;
  display: block;
  margin:40rpx auto;
  border-radius: 15rpx;
  font-size: 50rpx;
  font-weight: 900;
}