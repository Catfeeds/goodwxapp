<!--regInfo.wxml-->
<include src="../header/header.wxml"/>
<view class="container">
   <view class="infoRegister_wrap">
      <view class="infoRegister">
         <label class="name">
            <text>姓名:</text>
            <input placeholder="您的姓名"  />
         </label>
          <label class="sex">
            <text>性别:</text>
            <picker bindchange="bindSexChange" value="{{iSex}}" range="{{arraySex}}">
                <view class="picker">
                    {{arraySex[iSex]}}
                </view>
            </picker>
         </label>
         <label class="mobile2">
            <text>电话:</text>
            <input placeholder="您的电话号码"  />
            <image src="../../img/code.png"></image>
         </label>
         <!--验证码  -->
         <view class="code">
                <input  type="number"  maxlength="6"/>
                <view>接收短信大约<text>{{number}}</text>秒</view>
         </view>
         <!--预约  -->
         <view class="yuyue imgCom" bindtap="yuyue">
           <image src="../../img/yuyue.png"></image>
         </view>
         <!--上一步  -->
         <view class="pre imgCom" bindtap="pre">
            <image src="../../img/pre.png"></image>
         </view>
      </view>
   </view>
</view>
