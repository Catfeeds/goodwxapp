/* testDriveInfo.wxss */
@import "../header/header.wxss";
.infoRegister_wrap{
  background: #fff;
  width:100%;
  padding-top:10rpx;
}
.infoRegister{
  background: #fff url(../../img/bg.png) no-repeat left top;
  width:98%;
  height: 1080rpx;
  background-size: 100% auto;
  margin:0rpx auto;
}
.infoRegister .people{
   margin-bottom:17rpx;
}
.infoRegister .people image{
  display: block;
  margin:0rpx auto;
  width:317rpx;
  height: 75rpx;
  padding-top:35rpx;
}
.infoRegister label{
  display: block;
  width: 100%;
  height: 70rpx;
  margin-top:17rpx;
}
.infoRegister label text{
  width: 22%;
  float: left;
  text-align: right;
  font-size:40rpx;
  line-height: 70rpx;
  color: #58359d;
  font-weight: 900
}
.infoRegister label input{
  width: 65%;
  float: left;
  font-size:40rpx;
  line-height: 70rpx;
  color: #58359d;
  border:1rpx solid #5f399e;
  border-radius: 10rpx;
  height: 68rpx;
  margin-left: 10rpx;
}
.infoRegister .button image{
  display: block;
  margin:0 auto;
  width:418rpx;
  height:90rpx;
  margin-bottom:35rpx;
}
.uploadPic image{
  display: block;
  margin:20rpx auto;
  width:470rpx;
  height:240rpx;
}

/*提示信息  */
.tishi {
  margin:0 auto;
  font-size: 26rpx;
  color:#433d5f;
  width: 400rpx;
  text-align: center;
  background: url(../../img/star.png) no-repeat left;
  background-size: 30rpx auto;
}