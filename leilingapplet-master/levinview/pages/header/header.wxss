/* header.wxss */
.top{
  width: 100%;
  height: 95rpx;
  background:url(../../img/line.jpg) repeat-x left;
  background-size: auto 95rpx;
  position: fixed;
  top:0;
  left:0;
  text-align: center;
  font-family: "微软雅黑";
  z-index: 9;
}
.top text{
  color:#fff;
  font-size: 26rpx;
  padding:20rpx 10rpx;
  display: inline-block;
  vertical-align: middle;
   margin-top:15rpx;
}
.top .address{
  width:30rpx;
  height: 40rpx;
   vertical-align: middle;
    margin-top:15rpx;
}
.top .choose{
  width:30rpx;
  height: 40rpx;
   vertical-align: middle;
   margin-top:15rpx;
}
.top .photo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: absolute;
  top:7rpx;
  left:24rpx;
}
.top .chooseCity_wrap{
  height: 95rpx;
  width: 100%;
  position:absolute;
  top:95rpx;
  left:0;
  z-index:888;
  overflow: hidden;
  text-align: left;
}
.top .chooseCity{
  height: 95rpx;
  width: 100%;
  position:absolute;
  left:0;
  background: #ed7020;
  z-index:88;
  transition: all .5s;
  overflow: hidden;
}
.top .chooseCity label{
  float: left;
  width: 50%;
}
.top .chooseCity label text{
  width: 20%;
  text-align: center;
  color:#000;
  float: left;
}
.top .chooseCity label .picker{
  width: 50%;
  height: 60rpx;
  float: left;
  margin-top:18rpx;
  font-size: 25rpx;
  line-height: 60rpx;
  padding-left:20rpx;
  background:  #fff url(../../img/down.png) no-repeat 94%;
  background-size: 20rpx auto;
}
/*login*/
.map_wrap{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  z-index: 99;
}
.map2{
  width:620rpx;
  height: 700rpx;
  background: #fff;
  border-radius: 20rpx;
  margin:300rpx auto 0;
  position: relative;
  font-family: "微软雅黑";
}
.map2 .close{
  width:60rpx;
  height: 60rpx;
  position: absolute;
  right:-50rpx;
  top:-45rpx;
}
.map2 .sure{
  width:473rpx;
  height: 90rpx;
  margin:15rpx auto;
  display: block;
}
.map2 .title{
  display: block;
  height: 160rpx;
  background: #621192;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  color:#fff;
  text-align: center;
  line-height: 160rpx;
  font-size: 70rpx;
  letter-spacing: 20rpx;
}
.map2 .input{
  height: 78rpx;
  line-height: 78rpx;
  margin-bottom:30rpx;
  position: relative;
}
.map2 .input input{
  width: 470rpx;
  height: 78rpx;
  display: block;
  margin:0 auto;
  background: #e8e1f1;
  border-radius: 20rpx;
  padding-left:90rpx;
}
.map2 .yzm input{
   width: 250rpx;
   float: left;
   margin-left: 30rpx;
   margin-right:20rpx
}
.map2 .mobile image{
  width:60rpx;
  height: 60rpx;
  position: absolute;
  left:50rpx;
  top:9rpx;
}
.map2 .password image{
  width:60rpx;
  height: 60rpx;
  position: absolute;
  left:50rpx;
  top:9rpx;
}
.map2 .yzm image{
   width: 208rpx;
   height: 78rpx;
}
.mobile{
  margin-top:60rpx;
}
.map2 .password{
  margin-bottom:60rpx;
}