<!--header.wxml-->
<view class="top">
     <image src="{{photoURL}}" bindtap="updatePhoto" class="photo"></image>
     <view bindtap="switchCity">
        <image src="../../img/address.png" class="address"></image>
        <text>{{city}}</text>
        <image src="../../img/choose.png" class="choose"></image>
     </view>
     <view class="chooseCity_wrap">
           <view class="chooseCity" style="top:{{show? '-95rpx':'0'}}">
           <label>
              <text>省份</text>
              <picker bindchange="bindProChange" value="{{i}}" range="{{arrayPro}}">
                <view class="picker">
                    {{arrayPro[i]}}
                </view>
              </picker>
           </label>
            <label>
              <text>城市</text>
              <picker bindchange="bindCityChange" value="{{j}}" range="{{arrayCity}}">
                <view class="picker">
                {{arrayCity[j]}}
                </view>
              </picker>
           </label>
           </view>
     </view>
</view>
<view class="map_wrap" style="display:{{showLogin?'block':'none'}}">
    <view class="map2" >
        <text class="title">登录</text>
        <view class="input mobile">
            <input  type="number" maxlength="11"  placeholder="请输入手机号"/>
            <image src="../../img/mobile.png"></image>
        </view>
         <view class="input yzm">
            <input  type="number" maxlength="6" />
            <image src="../../img/code.png"></image>
        </view>
         <view class="input password">
            <input  type="text" placeholder="请输入密码"/>
             <image src="../../img/pass.png"></image>
        </view>
        <image src="../../img/close.png" class="close" bindtap="close2"></image>
        <image src="../../img/login.png" class="sure"></image>
    </view>
</view>

