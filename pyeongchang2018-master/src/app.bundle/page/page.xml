<?xml version="1.0"?>
<Page xmlns:xsi="//www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="/src/app.bundle/View.xsd">
    <View id="welcomePage">
        <View  id="welcomeGif" height="match" width="match"></View>
        <PanoView id="welcomePano" visible="false" ></PanoView>
        <View id="welcomeElement" visible="false">
            <ImageView src="/images/welcome/mengceng.png"></ImageView>
            <ImageView src="/images/welcome/welcome2.png" gravity="center"  width="match" height="match" ></ImageView>
        </View>
    </View>
    <View id ="panoPage" visible="false" >
        <View id="panoControl">
            <View id="top" height="wrap">
                <ImageView src="/images/pano/shadow_top.png" height="130dp"></ImageView>
                <ImageView id="topLeft" src="/images/welcome/logo.png"  width="100dp" height="wrap" margin="5dp" ></ImageView>
                <View id="topRight"  height="50dp" width="wrap" gravity="right" contentGravity="centerVertical" layout="horizontal" marginRight="15dp" >
                    <View id="video"  height="wrap" width="wrap" marginRight="10dp">
                        <ImageView id="video" src="/images/video-icon.png" height="15dp" width="wrap"></ImageView>
                    </View>
                    <View id="music"  height="wrap" width="wrap" marginRight="10dp">
                        <ImageView id="musicOn" src="/images/pano/music_on.png" height="24dp" width="wrap"></ImageView>
                        <ImageView id="musicOff" src="/images/pano/music_off.png" height="24dp" width="wrap" visible="false"></ImageView>
                    </View>
                    <View id="gravity" height="wrap" width="wrap" marginRight="10dp" >
                        <ImageView id="grOff" src="/images/pano/gr_off.png" height="24dp" width="wrap"></ImageView>
                        <ImageView id="grOn" src="/images/pano/gr_on.png" height="24dp" width="wrap" visible="false"></ImageView>
                    </View>
                    <ImageView id="vrOn" src="/images/pano/vr_on.png" height="24dp" width="wrap" marginRight="10dp"></ImageView>
                    <ImageView id="map" src="/images/pano/map.png" height="24dp" width="wrap" marginRight="10dp"></ImageView>
                    <ImageView id="intro" src="/images/pano/intro.png" height="24dp" width="wrap" marginRight="10dp"></ImageView>
                </View>
                <View id="areaMarker" layout="vertical" contentGravity="centerHorizontal" height="wrap" width="wrap" marginTop="60dp" marginRight="30dp" gravity="right">
                    <View id="panoMaker"  height="40dp" width="40dp" nativeAttrClass="panoMaker"></View>
                    <TextView id="areaText" text="江陵片区" height="wrap" width="wrap" fontSize="18dp" fontColor="#ffffff"></TextView>
                    <TextView id="areaText_en" text="GuangNeung" height="wrap" width="wrap" fontSize="16dp" fontColor="#ffffff"></TextView>
                </View>
            </View>
            <View id="activityIcon" height="wrap" width="wrap" contentGravity="centerVertical" gravity="centerVertical|right">
                <ImageView height="wrap" width="120dp" src="/images/pano/photo_icon.png" ></ImageView>
                <View marginRight="3dp" marginTop="1dp" layout="vertical" height="wrap" width="wrap" gravity="right">
                    <TextView id="blink" fontSize="13dp" text="Touch Me"  fontColor="#ffffff" height="wrap" width="wrap"></TextView>
                    <TextView  fontSize="13dp" text="我的冬奥照"  fontColor="#ffff00" height="wrap" width="wrap"></TextView>
                </View>
            </View>
            <View id="bottom" height="match"  gravity="bottom" visible="false" >
                <ImageView src="/images/pano/bottom_shadow.png" gravity="bottom" width="match" height="wrap" />
                <!--<View background="#000000" height="150dp" gravity="bottom" alpha="0.5"></View>-->
                <View id="panScrollBottom" gravity="bottom" layout="vertical" height="wrap" padding="15dp" >
                    <View height="wrap" >
                        <View layout="vertical" height="wrap">
                            <View id="textIntro" height="wrap">
                                <!--<View background="#000000" height="40dp" alpha="0.5"></View>-->
                                <View height="wrap"  layout="vertical"  >
                                    <View height="wrap" width="match" >
                                        <TextView fontColor="#ffffff" fontSize="16dp" id="panoName" text="全景看冬奥 这里是平昌" height="wrap" width="wrap"></TextView>
                                        <TextView id="panoInfoCtrl" gravity="right"  fontColor="#ffffff" fontSize="16dp" marginRight="10dp"  visible="true"  width="wrap"  height="20dp" text="详情 >>>"/>
                                    </View>
                                    <!--<View height="wrap" width="match" >-->
                                        <TextView gone="true" fontColor="#ffffff" fontSize="16dp" id="panoNamEN" text="there is pc" height="wrap" width="wrap"></TextView>
                                        <!--<TextView id="panoInfoCtrl" gravity="right"  fontColor="#ffffff" fontSize="16dp" marginRight="10dp"  visible="true"  width="wrap"  height="20dp" text="详情 >>>"/>-->
                                    <!--</View>-->
                                    <TextView gone="true"  id="panoDetail" marginTop="5dp" maxLine="1" fontSize="14dp"  height="wrap" clipToBounds="true"  fontColor="#ffffff"  text="第23届冬季奥运会将于2018年2月9日-25日在韩国江原道平昌展开。新华社独家全景带你看平昌，一同感受冬奥魅力。"  width="match"></TextView>
                                </View>
                            </View>
                            <View>
                        </View>
                    </View>
                    </View>
                    <ScrollView gone="true"  layout="horizontal" marginTop="6dp" id="album_image_scroll" height="wrap"
                                width="fill">
                    </ScrollView>
                </View>
            </View>
        </View>
        <View id="panoIntroPage" visible="false" >
            <View background="#000000" alpha="0.5"></View>
            <ImageView id="panoInfoCtrl2" gravity="right" marginRight="25dp" marginTop="30dp"  visible="true"  width="wrap"  height="20dp" src="/images/pano/down.png"/>
            <View  layout="vertical" padding="20dp" >
                <TextView marginTop="50dp" fontColor="#ffffff" fontSize="16dp" id="panoName2" text="全景看冬奥 这里是平昌" height="wrap" width="match"></TextView>
                <TextView gone="true" fontColor="#ffffff" fontSize="16dp" id="panoNamEN1" text="there is pc" height="wrap" width="wrap"></TextView>
                <View clipToBounds="true" >
                    <ScrollView  id="panoIntroScrollView"   marginTop="20dp">
                        <TextView marginTop="5dp"   height="wrap"   fontColor="#ffffff" id="panoDetail2" text="第23届冬季奥运会将于2018年2月9日-25日在韩国江原道平昌展开。新华社独家全景带你看平昌，一同感受冬奥魅力。"  width="match"></TextView>
                    </ScrollView>
                </View>
            </View>
        </View>
    </View>
    <View id="introPage" visible="false" height="match" width="match"  >
        <View background="#000000" alpha="0.5"></View>
        <View height="80dp"  contentGravity="centerVertical">
            <TextView fontSize="20dp" fontColor="#ffffff" text="全景看冬奥 这里是平昌" height="wrap" width="wrap" marginLeft="20dp" ></TextView>
            <ImageView id="close" gravity="right" src="/images/pano/close.png" height="30dp" width="wrap" marginRight="20dp"></ImageView>
        </View>
        <View clipToBounds="true" marginRight="20dp" marginLeft="20dp" marginTop="80dp">
            <ScrollView >
                <TextView id="htmlTextView" fontSize="16dp" marginTop="20dp" width="match" fontColor="#ffffff" height="wrap"></TextView>
            </ScrollView>
        </View>
    </View>
    <View id="mapPage" visible="false">
        <ImageView id="mapBg"   src="/images/map/map.jpg"  height="match" width="wrap"></ImageView>
        <View id="mapMarkerLayer"  >
            <View id="panoNameView"  anchorX="0.5" height="wrap" width="wrap" padding="5dp" visible="false">
                <View background="#063359" alpha="0.2" ></View>
                <View layout="vertical" contentGravity="centerHorizontal" height="wrap" width="wrap">
                    <TextView id="mapPanoName"   fontColor="#ffffff" height="wrap" width="wrap" ></TextView>
                    <TextView id="mapPanoNameEN"   fontColor="#ffffff" height="wrap" width="wrap" ></TextView>
                </View>
            </View>
        </View>
        <View height="100dp" contentGravity="centerVertical">
            <ImageView id="closeMap" gravity="right" src="/images/map/close_2.png" height="30dp" width="wrap" marginRight="20dp"></ImageView>
        </View>
    </View>
    <View id="disTouch" visible="false" height="match">
        <ImageView id = "vrOff" height="30dp" gravity="right" marginTop="20dp"  marginRight="20dp" width="wrap" src="/images/pano/vr_off.png"  ></ImageView>
    </View>
    <View id="photoPage" visible="false" >
        <ImageView src="/images/welcome/photoBg.jpg" height="match" width="match"></ImageView>
        <View id="photoUpLoad" contentGravity="centerHorizontal" >
            <View  layout="vertical" gravity="centerHorizontal" contentGravity="centerHorizontal">
                <View height="fill 3" width="wrap" marginTop="20dp" contentGravity="center" >
                    <ImageView src="/images/photo/test.png" height="80dp"  width="wrap"  ></ImageView>
                </View>
                <View height="fill 3" contentGravity="center">
                    <View id="camera" height="190dp" width="190dp"  contentGravity="centerHorizontal" >
                        <ImageView  src="/images/photo/rectangle.png"></ImageView>
                        <View id="photoHead"></View>
                        <View id="photoTip" layout="vertical" height="wrap" width="wrap" marginTop="20dp"  contentGravity="centerHorizontal">
                            <ImageView id="cameraIcon" src="/images/photo/photograph.png" height="100dp" width="wrap" ></ImageView>
                            <TextView text="点击上传" fontSize="20dp"  marginTop="10dp" contentGravity="center" fontColor="#BDBDBD" height="wrap" width="130dp" ></TextView>
                            <TextView text="正面清晰照" fontSize="20dp" contentGravity="center" fontColor="#BDBDBD" height="wrap" width="130dp" ></TextView>
                        </View>
                    <ImageView id="loading" height="25dp" width="wrap" gone="true"  src="/images/photo/loading.gif" gravity="centerVertical" ></ImageView>
                    </View>
                </View>
                <View height="fill 2" contentGravity="center">
                    <View layout="horizontal" height="wrap" width="wrap" >
                        <View id="boy" layout="horizontal" contentGravity="centerVertical" height="wrap" width="wrap">
                        <View height="20dp" width="20dp" borderWidth="1dp" clipToBounds="true" borderCorner="20dp" borderColor
                        ="#0C6CBC">
                        <View id="boyChoose" height="10dp" width="10dp" background="#0C6CBC" gravity="center" clipToBounds="true" borderCorner="10dp"></View>
                        </View>
                        <View layout="vertical" marginLeft="10dp"  height="wrap" width="wrap">
                        <TextView height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="我是男神"></TextView>
                        <TextView height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="Male"></TextView>
                        </View>
                        </View>
                        <View id="girl" layout="horizontal" contentGravity="centerVertical" marginLeft="20dp" height="wrap" width="wrap">
                    <View height="20dp" width="20dp" borderWidth="1dp" clipToBounds="true" borderCorner="20dp" borderColor
                    ="#0C6CBC">
                    <View id="girlChoose" visible="false" height="10dp" width="10dp" background="#0C6CBC" gravity="center" clipToBounds="true" borderCorner="10dp"></View>
                    </View>
                    <View layout="vertical" marginLeft="10dp"  height="wrap" width="wrap">
                    <TextView height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="我是女神"></TextView>
                    <TextView height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="Female"></TextView>
                    </View>
                    </View>
                    </View>
                </View>
                <View height="fill 2" contentGravity="center">
                    <View id="getPhoto" height="wrap" width="wrap"  contentGravity="center">
                        <ImageView id="btn_get_photo" src="/images/photo/photo_btn1.png" height="46dp" width="wrap" ></ImageView>
                        <View layout="vertical" contentGravity="centerHorizontal" height="wrap" width="wrap">
                            <TextView id="btn_getphoto_zh" text="生成照片" fontSize="16dp" fontColor="#0C6CBC" width="wrap" height="wrap"></TextView>
                            <TextView id="btn_getphoto_en" height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="Generate"></TextView>
                        </View>
                    </View>
                </View>
            </View>
        </View>
        <View id="photoShow"  visible="false"  contentGravity="centerHorizontal">
            <View layout="vertical"  width="match  0.8"    contentGravity="centerHorizontal" marginTop="50dp">
                <View height="fill 7 " >
                    <View height="wrap" gravity="center"  clipToBounds="true" borderCorner="10dp" width="match" contentGravity="center">
                        <ImageView id="photoResult"   height="wrap" width="match"></ImageView>
                        <ImageView id="loading2" height="25dp" width="wrap" gone="true"  src="/images/photo/loading.gif" gravity="centerVertical" ></ImageView>
                    </View>
                        <View layout="vertical" marginTop="120dp" gravity="center" alpha="0.5"   clipToBounds="true" borderCorner="20dp" height="wrap" background="#000000" contentGravity="centerHorizontal"  width="160dp">
                            <TextView text="长按图片保存" fontSize="14dp" fontColor="#ffffff" width="wrap" height="wrap"></TextView>
                            <TextView height="wrap" width="wrap" fontSize="12dp" fontColor="#ffffff" text="Long press to save"></TextView>
                        </View>
                </View>
                <View height="fill 1.5 " contentGravity="center">
                    <ScrollView id="mobanScroll" layout="horizontal" height="60dp" >
                    </ScrollView>
                </View>
                <View height="fill 1.5" contentGravity="center" >
                    <View id="operationShow"   layout="horizontal" height="wrap" width="wrap">
                        <View id="reUpload" borderWidth="1dp" borderColor="#0C6CBC" borderCorner="30" clipToBounds="true" height="46dp" width="110dp" contentGravity="center">
                            <View layout="vertical" contentGravity="centerHorizontal"  height="wrap" width="wrap">
                                <TextView id="btn_reupload_zh"  height="16dp" width="wrap" contentGravity="center" fontSize="16dp" fontColor="#0C6CBC" text="重新上传"></TextView>
                                <TextView id="btn_reupload_en" height="wrap" width="wrap" fontSize="16dp" fontColor="#0C6CBC" text="Re-upload"></TextView>
                            </View>
                        </View>
                        <View id="showMyPhoto" marginLeft="20dp"  borderWidth="1dp" borderColor="#0C6CBC" background="#0C6CBC"  borderCorner="30" clipToBounds="true" height="46dp" width="110dp" contentGravity="center" >
                            <View layout="vertical" contentGravity="centerHorizontal"  height="wrap" width="wrap">
                                <TextView id="btn_show_zh" height="16dp" width="wrap" contentGravity="center" fontSize="16dp" fontColor="#ffffff" text="秀出照片"></TextView>
                                <TextView id="btn_show_en" height="wrap" width="wrap" fontSize="16dp" fontColor="#ffffff" text="Show"></TextView>
                            </View>
                        </View>
                    </View>
                </View>
            </View>
        </View>
        <View id="backPano" layout="horizontal" contentGravity="centerVertical" height="wrap" width="wrap" marginTop="20dp" marginLeft="20dp">
            <ImageView src="/images/pano/arrow2.png" height="18dp" width="wrap"></ImageView>
            <TextView  marginLeft="5dp" text="返回全景 Aerial view" height="wrap" width="wrap" fontSize="14dp" fontColor="#ffffff"></TextView>
        </View>
    </View>
    <View id="guideShare" background="#000000" alpha="0.7" visible="false" >
        <ImageView gravity="right" marginRight="20dp" marginTop="10dp"  src="/images/shareArror.png" height="wrap" width="60dp"  ></ImageView>
    </View>
    <View id="overFlow" visible="false" ></View>
    <View id="alertView"  contentGravity="center" visible="false">
        <View  height="200dp" padding="10dp" width="200dp"  >
            <View background="#000000" alpha="0.5" clipToBounds="true" borderCorner="20dp"></View>
            <TextView id="message" contentGravity="center" gravity="center" height="wrap" fontColor="#ffffff"  fontSize="16dp"></TextView>
        </View>
    </View>
</Page>