/**dialog**/
.dialog .mask{
  width:100%;
  height:100%;
  background:#999;
  filter:alpha(opacity=80);  
  -moz-opacity:0.8;  
  -khtml-opacity: 0.8;  
  opacity: 0.8;  
  top:0;
  left:0;
  position:fixed;
  z-index:991;
}
.dialog{
  width:100%;
  height:100%;
  position:absolute;
  top:0;
  left:0;
  z-index:99;
}
.dialog .inner{
  position:absolute;
  top:50%;
  left:50%;
  width:560rpx;
  padding:55rpx 0 0 0;
  background:#fff;
  border-radius:10rpx;
  transform: translate(-50%, -50%);
  text-align:center;
  z-index:998;
}
.dialog .inner .suc{
  margin:0 auto;
}
.dialog .inner .tt{
  font-size:36rpx;
}
.dialog .inner .detail{
  line-height:38rpx;
  font-size:28rpx;
  text-align:left;
  padding:0 40rpx;
}
.btnDialog{
  border:none;
  border-top:1rpx solid #d2d3d5;
  background:#fff;
  color:#057bff;
  margin-top:50rpx;
  margin:55rpx 0 0 0;
  border-radius:0;
  border-bottom-left-radius:10px;
  border-bottom-right-radius:10px;
}
.btnDialog::after{
  content:none;
}
.btnDialog.button-hover {
    background: #fff;
}