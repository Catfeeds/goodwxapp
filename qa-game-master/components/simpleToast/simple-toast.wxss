/**simple-toast**/
.simple-toast{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding:500rpx 0;
  z-index: 1000;
}

.simple-toast text{
  color:#FFF;
  padding:30rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size:30rpx;
  background-color: rgba(0, 0, 0, 0.7);
}

.simple-toast.active text{
    animation: fadeUp 0.6s ease;
}