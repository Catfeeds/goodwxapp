@import "../../assets/stylesheets/base.wxss";
@import "../../assets/stylesheets/common.wxss";
page{
	background:#222d42;
	height: 100%;
}
.container {
	background:url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/bg.jpg) no-repeat center -140rpx;
	background-size: 750rpx 1333rpx;
	position:relative;
	width:100%;
	font-size:32rpx;
	padding: 30rpx 0 0 0;
	min-height: 100%;
}

.information .infoInner{
	overflow: hidden;
	width: 696rpx;
	margin:0 auto;
	background-color: #fffde1;
	box-shadow: 0rpx 3rpx 6rpx 0rpx rgba(0, 0, 0, 0.2);
	border-radius: 13rpx;
}
.information .infoInner .re_h{
	height: 70rpx;
	line-height: 70rpx;
	position: relative;
	text-align: center;
	width: 100%;
	background-color: #7fabff;
	color:#fefefe;
	font-size: 26rpx;
}
.information .infoInner .re_h .close{
	background: url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/btnc.png) no-repeat center;
	background-size: 39rpx 39rpx;
	display: inline-block;
	width:39rpx;
	height:39rpx;
	position: absolute;
	top:15rpx;
	right:15rpx;
}
.information .infoInner .re_input{
	width: 548rpx;
	margin:44rpx auto 0;
	background-color: #acacac;
	border-radius: 31rpx;
	height: 63rpx;
	line-height: 63rpx;
	display: flex;
	align-items:center;
}
.information .infoInner .first{
	margin:71rpx auto 0!important;
}
.information .infoInner .re_input .key{
	color:#222d42;
	display: inline-block;
	width: 170rpx;
	font-size: 27rpx;
	text-align: right;
	margin-right: 5rpx;
}
