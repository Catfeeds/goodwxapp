@import "../../assets/stylesheets/base.wxss";
@import "../../assets/stylesheets/common.wxss";
page{
	background:#222d42;
}
.container {
	background:url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/bg.jpg) no-repeat center -140rpx;
	background-size: 750rpx 1333rpx;
	position:relative;
	width:100%;
	font-size:32rpx;
}
.qa .head{
	text-align: center;
}
.qa .head .headImg{
	width:105rpx;
	height:105rpx;
	border-radius: 100%;
	margin:15rpx auto;
}
.nickName{
	text-align: center;
	font-size: 23rpx;
	color: #ffffff;
}
.question{
	background:url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/qbg.png) no-repeat center;
	background-size: 702rpx 308rpx;
	position:relative;
	font-size:27rpx;
	color: #4f1a00;
	width:612rpx;
	height:238rpx;
	padding: 70rpx 45rpx 0 45rpx;
	margin:45rpx auto 0;
}
.question .h{
	background:url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/rbg.png) no-repeat center;
	background-size: 275rpx 57rpx;
	position:absolute;
	width:275rpx;
	height:57rpx;
	line-height: 57rpx;
	text-align: center;
	font-size:24rpx;
	color:#fff;
	top:-28rpx;
	left:50%;
	transform:translate(-50%,0);
	-webkit-transform:translate(-50%,0);
}
.question .t{
	text-align: center;
	font-size:32rpx;
	color:#4f1a00;
}
.question .d{
	margin-top: 25rpx;
	text-align: center;
	font-size:32rpx;
	line-height: 42rpx;
	color:#4f1a00;
}
.question .result_true{
	margin-top: 30rpx;
	text-align: center;
	font-size: 73rpx;
	letter-spacing: 3rpx;
	font-weight: bold;
	color: #10a800;
}
.question .time{
	background:url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/numbg.png) no-repeat center;
	background-size: 109rpx 109rpx;
	position:absolute;
	width:109rpx;
	height:109rpx;
	line-height: 109rpx;
	text-align: center;
	font-size:34rpx;
	color:#fff;
	bottom:-54rpx;
	left:50%;
	transform:translate(-50%,0);
	-webkit-transform:translate(-50%,0);
}
.answer{
	width:651rpx;
	margin:75rpx auto 0;
}
.ans{
	margin-bottom: 43rpx;
	width: 100%;
	padding: 35rpx 0;
	background: #ffffe9;
	border-radius: 13rpx;
	text-align: center;
	font-size: 32rpx;
	color: #4f1a00;
}
.ans_true{
	background:#10a800 url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/o.png) no-repeat 40rpx center;
	background-size: 51rpx 51rpx;
	color:#fff;
}
.ans_false{
	background:#ff0000 url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/x.png) no-repeat 40rpx center;
	background-size: 51rpx 51rpx;
	color:#fff;
}
.result_false{
	position: fixed;
	width:100%;
	height:100%;
	z-index: 10;
	top:0;
	left:0;
}
.result_false .resultInner{
	z-index: 11;
	position: absolute;
	width:528rpx;
	text-align: center;
	background: #fffde1;
	box-shadow: 0rpx 3rpx 6rpx 0rpx rgba(0, 0, 0, 0.2);
	border-radius: 13rpx;
	top:50%;
	left:50%;
	overflow: hidden;
	transform:translate(-50%,-50%);
    -webkit-transform:translate(-50%,-50%);
}
.result_false .resultInner .re_h{
	height: 70rpx;
	line-height: 70rpx;
	position: relative;
	width: 100%;
	background-color: #7fabff;
	color:#fefefe;
	font-size: 26rpx;
}
.result_false .resultInner .re_h .close{
	background: url(https://staticdaily.zhongan.com/website/open/assets/wp/qaGame/btnc.png) no-repeat center;
	background-size: 39rpx 39rpx;
	display: inline-block;
	width:39rpx;
	height:39rpx;
	position: absolute;
	top:15rpx;
	right:15rpx;
}
.re_p1{
	font-size: 45rpx;
	letter-spacing: 2rpx;
	color: #426098;
	margin-top: 71rpx;
	font-weight: bold;
}
.re_p2{
	font-size: 32rpx;
	letter-spacing: 2rpx;
	color: #888888;
	margin-top: 45rpx;
}
.re_p2 text{
	font-size: 41rpx;
	color: #ff5a00;
	font-weight: bold;
}
.re_p3{
	font-size:32rpx;
	letter-spacing: 2rpx;
	color: #888888;
	margin-top: 35rpx;
}
.btnShare{
	width:310rpx;
	height:84rpx;
	line-height: 84rpx;
	background-color: #426098;
	border-radius: 41rpx;
	margin:50rpx auto 42rpx;
	font-size: 34rpx;
	letter-spacing: 6rpx;
	color: #fefefe;
}