<view class='wx_dialog_container' hidden="{{!isShow}}">
    <view class='wx-mask'></view>
    <view class='wx-dialog'>
        <view class='wx-dialog-title' hidden="{{ showTitle }}">{{ title }}</view>
        <view class='wx-dialog-content'>{{ content }}</view>
        <view class='wx-dialog-footer'>
          <view class='wx-dialog-btn wx-dialog-cancle' catchtap='_cancelEvent'>{{ cancelText }}</view>
          <button class='wx-dialog-btn wx-dialog-share' open-type="share" style="color: #3CC51F" catchtap='_confirmEvent'>{{ confirmText }}</button>
        </view>
    </view>
</view>