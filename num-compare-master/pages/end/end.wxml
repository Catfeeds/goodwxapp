<view class='end-game'>
  <view class="end-image">
    <image src='/static/images/trophy@2x.png'></image>
  </view>

  <view class='score-show'>
    <view class='end-rank'>
      <view class='curr-game-rank'>
        <view class='curr-text'>本次得分</view>
        <view class='curr-score'>4800</view>
      </view>

      <view class='curr-game-rank'>
        <view class='curr-text'>当前排名</view>
        <view class='curr-score'>100+</view>
      </view>
    </view>
    <view class='history-score'>历史最佳    6400</view>
  </view>

  <view class='end-game-bottom'>
    <view class='share-title'>成功分享给好友后可继续游戏</view>
    <button class='share-continue'>分享续命（5）</button>
    <button style='display: none'>再玩一次</button>
  </view>
</view>