/* pages/end/end.wxss */
.end-game{
  height: 100vh;
  background-color: #3F3A62;
  color: #ffffff;
  text-align: center;
}
.end-image{
  width: 100%;
  height: 256rpx;
  padding-top: 48rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  text-align: center
}
.end-image image{
  width: 160rpx;
  height: 208rpx;
}



.score-show{
  height: 368rpx;
  padding-top: 64rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.end-rank{
  display: flex;
  width: 100%;
}
.curr-game-rank{
  flex: 1;
}
.curr-text{
  font-size: 32rpx;
  font-weight: bolder;
}
.curr-score{
  font-size: 62rpx;
  font-weight: bolder;
}
.history-score{
  font-size: 28rpx;
  margin-bottom: 32rpx;
}





.share-title{
  font-size: 28rpx;
  margin-bottom: 32rpx;
}
.share-continue{
  width: 480rpx;
  height: 96rpx;
  background-color: #FEB930;
  color: #ffffff;
  font-size: 36rpx;
  letter-spacing: 4rpx;
  border-radius: 45rpx;
}
button::after{
  border: none;
}