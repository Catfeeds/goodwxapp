.container{
  width: 100vw;
  height: 100vh;
}
.home-content{
  width: 100%;
  height: 100%;
  background: url("http://l.test.81youxi.com/public/image/cdx/num-BJ@2x1.png") no-repeat left top;
  background-size: cover;
  position: relative;
}
.num-image{
  width: 688rpx;
  height: 208rpx;
  position: absolute;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%)
}
.game-introduce{
  text-align: center;
  width: 100%;
  position: absolute;
  left: 0;
  top: calc(48 / 81 * 100vh);
}
.btn-box{
  position: absolute;
  left: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-box button{
  width: 608rpx;
  height: 100%;
  border-radius: 44.96rpx;
}
.start-game{
  background: url("http://l.test.81youxi.com/public/image/cdx/num-BJ@2x2.png") no-repeat left top;
  background-size: 100% 100%;
}
.change-bgc{
  background: url("http://l.test.81youxi.com/public/image/cdx/num-BJ@2x3.png") no-repeat left top;
  background-size: 100% 100%;
}
.start-game-friends{
  background: #6453DA;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.change-bgx-text{
  background: rgb(84, 70, 183); 
  opacity: .9
}
.btn-top{
  top: calc(56 / 81 * 100vh)
}
.btn-bottom{
  top: calc(65 / 81 * 100vh)
}