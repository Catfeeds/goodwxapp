/* pages/user/user.wxss */
.container{
  padding: 20rpx;
  height: 100vh;
}
.user-container{
  display: flex;
  height: 150rpx;
}
.user-pic,
.user-name{
  height: 100%;
  background: #fff;
  border-radius: 20rpx;
}
.user-pic{
  flex: 1;
  
}
.user-pic image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.user-name{
  flex: 4;
  padding-left: 20rpx;
  line-height: 150rpx;
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #333;
  box-sizing: border-box;
}
.eos-item{
  margin-top: 20rpx;
  padding: 20rpx;
  width: 710rpx;
  height: 160rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
}
.eos-vote-name{
  font-size: 33rpx;
}
.eos-vote-result{
  display: flex;
  padding-top: 10rpx;
  height: 35rpx;
  justify-content: space-between;
  font-size: 22rpx;
  color: #666;
}
.eos-earn-title{
  margin-right: 10rpx;
}
.eos-loss-title{
  margin-left: 10rpx;
}
.eos-vote-progress{
  position: relative;
  margin-top: 10rpx;
  height: 25rpx;
  width: 100%;
  background: #89c997;
  border-radius: 14rpx;
}
.eos-vote-active{
  position: absolute;
  left:0;top:0;
  width: 44%;
  height: 100%;
  border-radius: 14rpx;
  background: #c8535c;
  transition: width 0.5s ease-out;
}
.my-coin{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: #333;
}
.my-coin .count{
  color: #c8535b;
}
.eos-earn{
  color: #c8535c;
}
.eos-loss{
  color: #999;
}