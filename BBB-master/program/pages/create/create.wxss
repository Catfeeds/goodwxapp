.container{
  height: 100vh;
}
.form-group{
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
   font-size:33rpx;
  color: #333; 
  border-bottom: 1rpx solid #dedede;
  justify-content: space-between;
  background: #fff;
}
.form-group label{
  flex: 1;
}
.form-group input{
  flex: 4;
  height: 89rpx;
  text-align: right;
  font-size: 22rpx;
}
.tips-box{
  margin:144rpx auto;
  width: 505rpx;
  height: 162rpx;
  background: #fff;
  border-radius: 20rpx;
  font-size: 22rpx;
  box-sizing: border-box;
  padding: 35rpx;
  color: #959595;
}
.tips-box text{
  display: inline-block;
  transform: translateY(-30rpx);
}
.tips-weichat{
  margin-left: 130rpx;
}
.btn-submit{
  bottom: 60rpx;
  background: #c8535c;
}