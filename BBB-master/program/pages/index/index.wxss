.container {
  height: 100vh;
  overflow: hidden;
}
.eos-wrap{
  box-sizing: border-box;
  margin: 200rpx auto 0;
  padding:50rpx 56rpx;
  width: 540rpx;
  height: 294rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx 5rpx rgba(204, 204, 204, .5);
}
.eos-text-1{
  display: block;
  font-size: 60rpx;
  font-weight: bold;
}
.eos-text-2{
  display: inline-block;
  margin:20rpx 0rpx 70rpx 80rpx;
  font-size: 48rpx;
}
.eos-text-3{
  display: inline-block;
  font-size: 80rpx;
  font-weight: bold;
  transform:  rotateZ(20deg);
  transform-origin: center bottom;
}
.eos-buttons{
  margin:100rpx auto;
  text-align: center;
}
.btn{
  position: relative; 
  display: inline-block;
  width: 193rpx;
  height: 178rpx;
  font-size: 36rpx;
  cursor: pointer;
}
.btn:active{
  background: none;
}
.btn-left-hand{
  margin-right: 150rpx;
}
.btn-left-hand-image,
.btn-right-hand-image{
   position:absolute;
   left:0px;top:0px;
   width:100%;
   z-index: 0;
}
.btn-right-hand-text,
.btn-left-hand-text{
  position: relative;
  z-index: 2;
  color: #fff;
  line-height: 150rpx;
}
.btn-right-hand-text{
  right: 20rpx;
}
.btn-left-hand-text{
  left: 20rpx;
}