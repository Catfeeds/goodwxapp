/* pages/addbb/addbb.wxss */
.container{
  height: 100vh;
}
.form-group{
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
   font-size:33rpx;
  color: #333; 
  border-bottom: 1rpx solid #dedede;
  justify-content: space-between;
}
.form-group label{
  flex: 1;
}
.form-group input{
  flex: 4;
  height: 89rpx;
  text-align: right;
  font-size: 22rpx;
}
.btn-create{
  height: 55rpx;
  width: 140rpx;
  border-radius: 28rpx;
  background: #c8535c;
  font-size: 22rpx;
  color: #fff;
  text-align: center;
  line-height: 55rpx;
  transform: translateY(17rpx);
}
.eos-btn-share{
  bottom: 60rpx;
  background: #c8535c;
}
.result-box{
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  margin: 18rpx auto 24rpx;
  width: 540rpx;
  height: 266rpx;
  background: #fff;
  border-radius: 20rpx;
}
.me{
  font-size: 41rpx;
  color: #333;
}
.eos-buttons{
  text-align: center;
}
.btn{ 
  position: relative; 
  display: inline-block;
  width: 120rpx;
  height: 110rpx;
  font-size: 22rpx;
  cursor: pointer;
}
.btn-left-hand{
  margin-right: 90rpx;
}
.btn-left-hand-image,
.btn-right-hand-image{
   position:absolute;
   left:0px;top:0px;
   width:100%;
   z-index: 0;
}
.btn-right-hand-text,
.btn-left-hand-text{
  position: relative;
  z-index: 2;
  color: #fff;
  line-height: 110rpx;
}
.btn-right-hand-text{
  right: 10rpx;
}
.btn-left-hand-text{
  left: 10rpx;
}
.home_content {
  margin-top: 20rpx;
  width: 710rpx;
}
.content_detail {
  position: relative;
  box-sizing: border-box;
  padding: 25rpx;
  margin-bottom: 25rpx;
  border-radius: 4px;
  /*box-shadow: 0px 0px 4px 2px #888;*/
  background: #fff;
}

.content-name {
  position: relative;
  width: 200rpx;
}
.name {
  font-size: 33rpx;
  font-weight: bold;
}
.total {
  font-size: 20rpx;
}
.eos-item-join-count{
  font-size: 25rpx;
  color: #666;
}
.earn{
  color: #c8535c;
}
.share{
  transform: translateY(10rpx);
  margin-top: 5rpx;
  float: right;
   width: 26rpx;
  height: 30rpx;
}
.img-share{
  width: 26rpx;
  height: 26rpx;
  display: block;
}
.content-share  {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.status {
  margin-top: 25rpx;
}
.content-progress {
   margin-top: 15rpx; 
}
button[plain]{ 
  border:0 
}
.eos-vote-progress{
  position: relative;
  margin-top: 10rpx;
  height: 25rpx;
  width: 100%;
  background: #89c997;
  border-radius: 14rpx;
}
.eos-vote-active{
  position: absolute;
  left:0;top:0;
  width: 44%;
  height: 100%;
  border-radius: 14rpx;
  background: #c8535c;
  transition: width 0.5s ease-out;
}
.eos-item{
  margin: 20rpx auto;
  padding: 20rpx;
  width: 710rpx;
  height: 160rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background-color: #fff;
}
.eos-vote-name{
  margin-top:-10rpx;
  font-size: 33rpx;
}
.eos-vote-result{
  display: flex;
  height: 35rpx;
  justify-content: space-between;
  font-size: 22rpx;
  color: #666;
}
.eos-earn-title{
  margin-right: 10rpx;
}
.eos-loss-title{
  margin-left: 10rpx;
}
