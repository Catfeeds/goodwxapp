.container{
  padding: 20rpx;
  min-height: 100vh;
}
.title {
  font-size: 24rpx;
  color: #666;
}
.home_content {
  margin-top: 20rpx;
  width: 710rpx;
}
.content_detail {
  position: relative;
  box-sizing: border-box;
  padding: 25rpx;
  margin-bottom: 25rpx;
  border-radius: 4px;
  /*box-shadow: 0px 0px 4px 2px #888;*/
  background: #fff;
}

.content-name {
  position: relative;
  width: 200rpx;
}
.name {
  font-size: 33rpx;
  font-weight: bold;
}
.total {
  font-size: 20rpx;
}
.eos-item-join-count{
  font-size: 25rpx;
  color: #666;
}
.earn{
  color: #c8535c;
}
.share{
  transform: translateY(10rpx);
  margin-top: 5rpx;
  float: right;
   width: 26rpx;
  height: 30rpx;
}
.img-share{
  width: 26rpx;
  height: 26rpx;
  display: block;
}
.content-share  {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.status {
  margin-top: 25rpx;
}
.content-progress {
   margin-top: 15rpx; 
}
button[plain]{ 
  border:0 
}
.eos-vote-progress{
  position: relative;
  margin-top: 10rpx;
  height: 25rpx;
  width: 100%;
  background: #89c997;
  border-radius: 14rpx;
}
.eos-vote-active{
  position: absolute;
  left:0;top:0;
  width: 44%;
  height: 100%;
  border-radius: 14rpx;
  background: #c8535c;
  transition: width 0.5s ease-out;
}