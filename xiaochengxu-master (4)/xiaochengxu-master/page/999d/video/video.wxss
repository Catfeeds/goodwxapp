.video {
  position: absolute;
  top: 420rpx;
  bottom: 0;
  width: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  background: #f8f8f8;
}

.section {
  position: absolute;
  width: 100%;
  height: 420rpx;
}

.video-source {
  width: 100%;
  height: 100%;
}

.video-message {
  background: #fff;
  padding: 20rpx 20rpx;
}

.video-title {
  font-size: 28rpx;
  color: #444;
  line-height: 50rpx;
}

.video-count {
  color: #999;
  font-size: 24rpx;
  padding-left: 10rpx;
  margin-top: 20rpx;
}
.video-options{
  height: 140rpx;
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #e2e2e2;  
}
.video-options .options-item{
  box-sizing: border-box;
  padding-top: 24rpx;
  display: inline-block;
  width: 25%;  
  text-align: center;
}
.video-options .options-item .shoucan-text-color{
  color: #d91470;
}
.video-options .options-item text{
  display: block;
  text-align: center;
  margin-top: 20rpx;
  color: #444;
  font-size: 26rpx;
}

.video-team {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  vertical-align: middle;
}

.video-team image {
  height: 82rpx;
  width: 82rpx;
  border-radius: 41rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}

.video-team text {
  font-size: 30rpx;
  color: #444;
  line-height: 0;
}

.video-tab {
  background: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
}

.video-tab-content {
}

.tab-item {
  height: 140rpx;
  margin-bottom: 20rpx;
  vertical-align: top;
}

.item-box {
  box-sizing: border-box;
  display: inline-block;
}

.item-left {
  vertical-align: top;
  width: 35%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.item-left navigator {
  height: 100%;
}

.item-right {
  position: relative;
  padding-left: 30rpx;
  vertical-align: top;
  width: 65%;
  height: 100%;
}

.item-left image {
  vertical-align: top;
  width: 100%;
  height: 100%;
}

.item-right text {
  font-size: 30rpx;
  color: #444;
  line-height: 40rpx;
}

.v-item-count {
  position: absolute;
  bottom: 0;
  font-size: 24rpx;
  color: #999;
  vertical-align: middle;
  line-height: 0;
}

.video_list {
  text-align: left;
  background: #fff;
  border-bottom: 1px solid #d8d8d8;
  width: 100%;
  z-index: 1;
  font-size: 28rpx;
  color: #39424a;
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  /*overflow: hidden;
    white-space: nowrap;
    word-break: keep-all;
    text-overflow: ellipsis;*/
  background-color: hsla(0, 0%, 100%, 0.9);
  padding: 20rpx 20rpx;
  margin-bottom: 20rpx;
  line-height: 40rpx;
  text-indent: 20rpx;
  position: relative;
}

.video_list:before {
  content: "";
  display: block;
  width: 6rpx;
  background: #2ea7e0;
  position: absolute;
  height: 40rpx;
  left: 20rpx;
  top: 16rpx;
}

.button-share{
  background: none;
  font-size: inherit;
  line-height: inherit;
  overflow: visible;
  color: #fff;
  border-radius: 0;
  border: 0;
  outline:none;
}

.button-share::after{
  border: none;
}
