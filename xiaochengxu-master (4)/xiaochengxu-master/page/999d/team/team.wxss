/* page/999d/team/team.wxss */
.team {
  height: 100%;
  width: 100%;
}

.team-head {
  position: relative;
  height: 270rpx;
  width: 100%;
  overflow: hidden;
}

.team-image {
  position: absolute;
  z-index: 9;
  left: 0;
  top: 0;
  width: 100%;
  height: 270rpx;
}

.team-image .team-back {
  position: absolute;
  width: 100%;
  height: 270rpx;
  filter: blur(10px);
}

.team-message {
  position: absolute;
  z-index: 10;
  height: 140rpx;
  padding: 65rpx 35rpx;
}

.team-message image {
  box-sizing: border-box;
  height: 140rpx;
  width: 140rpx;
  border-radius: 70rpx;
  border: 2rpx solid #cecacb;
}

.team-nickname {
  padding: 25rpx 15rpx;
  display: inline-block;
  vertical-align: top;
}

.hanor {
  color: #fff;
  background: #f20045;
  padding: 5rpx 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.nickname {
  margin-bottom: 18rpx;
  background: #1d8eee;
  display: block;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.team-video {
  background: #fff;
  padding: 17rpx;
  width: auto;
  overflow-x: hidden;
  display: block;
}
