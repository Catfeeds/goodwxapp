<import src="../template/template.wxml" />
<view class="music-tab">
  <view class="m-t">
    <text data-index="1" bindtap="handleTap" class="{{tabhideen?'t-active':''}}">视频</text>
  </view>
  <view class="m-t">
    <text data-index="2" bindtap="handleTap" class="{{!tabhideen?'t-active':''}}">舞曲</text>
  </view>
</view>
<view hidden="{{!tabhideen}}">
  <view hidden="{{video.ishistory}}">
    <view wx:for="{{collectData}}" wx:key="{{item}}" wx:for-index="idx" class="history-item">
      <text class="history-date">{{idx}}</text>
      <view class="history-content" wx:for="{{item}}" wx:key="{{dateitem.id}}" wx:for-item="dateitem">
        <navigator url="../video/video?video_id={{dateitem.id}}">
          <image class="item-image" src="{{dateitem.thumb}}"></image>
          <text class="item-text">{{dateitem.title}}</text>
        </navigator>
        <view class="delete" data-id="{{dateitem.id}}" bindtap="deleteVideo">删除</view>
      </view>
    </view>
  </view>
  <view class="nohistory" hidden="{{!video.ishistory}}">
    <template is="empty" data="{{...video.empty}}" />
  </view>

</view>
<view hidden="{{tabhideen}}">
    <view hidden="{{song.ishistory}}">
    <view wx:for="{{songCollectData}}" wx:key="{{item}}" wx:for-index="idx" class="history-item">
      <text class="history-date">{{idx}}</text>
      <view class="history-content" wx:for="{{item}}" wx:key="{{dateitem.id}}" wx:for-item="dateitem">
        <!--<navigator url="../video/video?video_id={{dateitem.id}}">-->
        <view data-id="{{dateitem.id}}" bindtap="toSong">
          <image class="item-image" src="{{dateitem.thumb?dateitem.thumb:'http://thumb.media.999d.com/xiaochengxu/defulat.jpg'}}"></image>
          <text class="item-text">{{dateitem.title}}</text>
          </view>
        <!--</navigator>-->
        <view class="delete" data-id="{{dateitem.id}}" bindtap="deleteSong">删除</view>
      </view>
    </view>
  </view>
  <view class="nohistory" hidden="{{!song.ishistory}}">
    <template is="empty" data="{{...song.empty}}" />
  </view>


</view>