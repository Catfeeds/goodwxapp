.clean-history{
    background: #fff;
    padding: 20rpx;
    text-align: right;
}
.music-tab {

  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 32rpx;
  background: #fff;
  z-index: 999;
}

.music-tab .m-t {
  width: 50%;
  display: inline-block;
  text-align: center;
}

.music-tab text {
  text-align: center;
  display: inline-block;
  width: 185rpx;
  line-height: 77rpx;
  box-sizing: border-box;
}

.t-active {
  border-bottom: 5rpx solid #358ed7;
  color: #358ed7;
}

.history-date{
    font-size: 28rpx;
    line-height: 45rpx;
    padding-left: 20rpx;
}
.history-content{
    position: relative;
    background: #fff;
    padding: 20rpx;
    border-bottom: 1rpx solid #e7e8eb;
}
.history-content image{
    vertical-align: top;
    width: 210rpx;  
    height: 120rpx;
    border-radius: 10rpx;
}
.history-content text{
    vertical-align: top;
    padding-left: 30rpx;
    font-size: 30rpx;
    color:#494949;
    display: inline-block;
    width: 470rpx;
}
.nohistory{
    text-align: center;
    padding: 30rpx;
}
.delete{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    border: 1rpx solid #e7e8eb;
    border-radius: 10rpx;
    padding: 8rpx 15rpx;
    font-size: 24rpx;
    color: #bbb;
}