
<import src="../template/template.wxml" />
<view class="teacher-tab-content">
        <view class="music-tab">
            <view class="m-t">
                <text data-index="1" bindtap="handleTap" class="{{tabhideen?'t-active':''}}">最新</text>
            </view>
            <view class="m-t">
                <text data-index="2" bindtap="handleTap" class="{{!tabhideen?'t-active':''}}">最热</text>
            </view>
        </view>
<!--最新-->
         <scroll-view scroll-y="true" style="height:100%" upper-threshold="50" lower-threshold="100" class="teacher-content" bindscrolltolower="scrolltolower" hidden="{{!tabhideen}}">
            <view class="tianchong"></view>
            <view class="content-main">

                <block wx:for="{{ newData.data }}" wx:key="{{item.id}}">
                    <template is="itemList" data="{{ ...item }}" />
                </block>

            </view>
            <view hidden="{{newData.hotshidden}}" class="box-more">
                <view wx:if="{{newData.hothidden}}">
                   <image src="../../images/loading.gif"/>
                加载中...
                </view>
                <view wx:else>
                    <text> 没有更多了 </text>
                </view>
            </view> 


        </scroll-view>
<!--最热-->
         <scroll-view scroll-y="true" style="height:100%" upper-threshold="50" lower-threshold="100" class="teacher-content" bindscrolltolower="scrolltolower" hidden="{{tabhideen}}">
            <view class="tianchong"></view>
            <view class="content-main">
                <block wx:for="{{ hotData.data }}" wx:key="{{item.id}}">
                    <template is="itemList" data="{{ ...item }}" />
                </block>

            </view>

            <view hidden="{{hotData.hotshidden}}" class="box-more">
                <view wx:if="{{hotData.hothidden}}">
                    <image src="../../images/loading.gif"/>
                加载中...
                </view>
                <view wx:else>
                    <text> 没有更多了 </text>
                </view>
            </view> 

        </scroll-view>

</view>