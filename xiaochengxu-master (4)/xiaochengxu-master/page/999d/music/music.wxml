<view class="music">
  <view class="music-tab">
    <view class="m-t">
      <text data-index="1" bindtap="handleTap" class="{{tabhideen?'t-active':''}}">最新</text>
    </view>
    <view class="m-t">
      <text data-index="2" bindtap="handleTap" class="{{!tabhideen?'t-active':''}}">最热</text>
    </view>
  </view>
  <view class="music-content">
    <scroll-view scroll-y="true" style="height:100%" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower" hidden="{{!tabhideen}}">
      <block wx:for="{{ newData.data }}" wx:for-index="idx" wx:key="{{item.id}}">
        <navigator url="./songlist?album_id={{item.id}}">
          <view class="music-item">
            <text wx:if="{{idx < 9 && idx >2}}">{{'0'+(idx+1)}}</text>
            <text wx:elif="{{idx==0}}" style="color:#e80b14">{{'0'+(idx+1)}}</text>
            <text wx:elif="{{idx==1}}" style="color:#f8aa30">{{'0'+(idx+1)}}</text>
            <text wx:elif="{{idx==2}}" style="color:#0a8aeb">{{'0'+(idx+1)}}</text>
            <text wx:else>{{idx+1}}</text>
            <text class="m_l_30">{{item.title}}</text>
            <icon class="arrow-icon"></icon>
          </view>
        </navigator>
      </block>
      <view hidden="{{newData.hotshidden}}" class="box-more">
        <view wx:if="{{newData.hothidden}}">
          <image src="../../images/loading.gif" /> 加载中...
        </view>
        <view wx:else>
          <text> 没有更多了 </text>
        </view>
      </view>
    </scroll-view>
    <scroll-view scroll-y="true" style="height:100%" upper-threshold="50" lower-threshold="100" bindscrolltolower="scrolltolower" hidden="{{tabhideen}}">
      <block wx:for="{{ recommendData.data }}" wx:for-index="idx" wx:key="id">
        <navigator url="./songlist?album_id={{item.id}}">
          <view class="music-item">
            <text wx:if="{{idx < 9}}">{{'0'+(idx+1)}}</text>
            <text wx:else>{{idx+1}}</text>
            <text class="m_l_30">{{item.title}}</text>
            <icon class="arrow-icon"></icon>
            <icon wx:if="{{idx==0}}" class="flame-icon"></icon>
          </view>
        </navigator>
      </block>
      <view hidden="{{recommendData.hotshidden}}" class="box-more">
        <view wx:if="{{recommendData.hothidden}}">
          <image src="../../images/loading.gif" /> 加载中...
        </view>
        <view wx:else>
          <text> 没有更多了 </text>
        </view>
      </view>
    </scroll-view>
  </view>
</view>