.music {
  background: #fff;
  height: 100%;
}

.music-tab {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 32rpx;
  background: #fff;
  z-index: 999;
}

.music-tab .m-t {
  width: 50%;
  display: inline-block;
  text-align: center;
}

.music-tab text {
  text-align: center;
  display: inline-block;
  width: 185rpx;
  line-height: 77rpx;
  box-sizing: border-box;
}

.t-active {
  border-bottom: 5rpx solid #358ed7;
  color: #358ed7;
}

.music-content {
  position: absolute;
  top: 80rpx;
  bottom: 0;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  width: 100%;
}

.music-content .c-box {
  display: none;
}

.music-content .c-active {
  display: block;
}

.music-item {
  padding: 25rpx 20rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #f1f1f1;
}

.music-item text {
  line-height: 0;
}

.music-item icon {
  float: right;
}
