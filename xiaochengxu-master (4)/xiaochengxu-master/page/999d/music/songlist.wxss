page{
    background: #fff;
}
.songlist-item{
    box-sizing: border-box;
    padding: 10px 0 5px 10px;
}
.item-box{
    display: inline-block;
}
.item-box.ibl{
    width: 110rpx;
    height: 110rpx;
}
.item-box.ibr{
    float: right;
    width: 610rpx;
    height: 110rpx;
    border-bottom:1rpx solid #e4e4e4;
}
.item-box image{
    width: 100%;
    height: 100%;
}
.item-album-name{
    font-size: 28rpx;
    line-height: 36rpx;
    color: #323232;
}
.item-singer,.item-download{
    font-size: 22rpx;
    color: #6f6f6f;
    display: block;
    line-height: 30rpx;
}


