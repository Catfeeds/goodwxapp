<import src="../template/template.wxml" />
<scroll-view scroll-y="true" style="height:100%" upper-threshold="50" class="video" lower-threshold="100" bindscrolltolower="scrolltolower">
  <view class="section">
    <audio binderror="audioErrorCallback" id="audio-source" name="{{songData.title}}" author="{{songData.singer}}" src="{{songData.play_url}}">
    </audio>
    <image src="http://thumb.media.999d.com/xiaochengxu/m_bck.png" class="m-bck"></image>
    <view class="guangpan {{!isplay?'rotate-play':''}}">
      <button class="audio-pause-icon" hidden="{{isplay}}" bindtap="audioPause"></button>
      <button class="audio-play-icon" hidden="{{!isplay}}" bindtap="audioPlay"></button>
    </view>
    <view class="progress-box">
      <text>{{timestart}}</text>
      <view class="progress-bar">
        <slider bindchange="sliderchange" value="{{startpay}}" selected-color="#777777" max="{{songData.duration}}" />

        <!--<view style="width:{{playwidth}}%" class="progress-width"></view>-->
      </view>
      <text>{{timeend}}</text>
    </view>
  </view>
  <view class="section-box">
  </view>
  <view class="video-options">
    <view class="options-item" bindtap="collect">
      <block wx:if="{{iscollect}}">
        <icon class="shoucan-icon size30"></icon>
        <text>收藏</text>
      </block>
      <block wx:else>
        <icon class="shoucan-selected-icon size30"></icon>
        <text class="shoucan-text-color">已收藏</text>
      </block>
    </view>
  </view>
  <view class="video-team">
    <image src="{{songData.thumb?songData.thumb:'http://thumb.media.999d.com/xiaochengxu/defulat.jpg'}}"></image>
    <view class="song-name">
      <text>{{songData.title}}</text>
      <text>{{songData.singer}}</text>
    </view>
  </view>
  <view class="video-tab">
    <view class="main-title">
      <text>相关视频</text>
    </view>
    <view class="video-tab-content">
      <template is="empty" data="{{...empty}}" />
      <view wx:for="{{ recommendData }}" class="tab-item" wx:key="{{item.id}}">
        <view class="item-box item-left">
          <navigator url="../video/video?video_id={{item.id}}">
            <image src="{{item.thumb.normal}}"></image>
          </navigator>
        </view>
        <view class="item-box item-right">
          <navigator url="../video/video?video_id={{item.id}}">
            <text>{{item.title}}</text>
          </navigator>
          <view class="v-item-count">
            <icon class="bofang2-icon size25"></icon>
            {{item.play_count}}次播放
          </view>
        </view>
      </view>
    </view>
  </view>
  <view hidden="{{hotshidden}}" class="box-more">
    <view wx:if="{{hothidden}}">
      <image src="../../images/loading.gif" /> 加载中...
    </view>
    <view wx:else>
      <text> 没有更多了 </text>
    </view>
  </view>
</scroll-view>
<loading hidden="{{hidden}}"></loading>