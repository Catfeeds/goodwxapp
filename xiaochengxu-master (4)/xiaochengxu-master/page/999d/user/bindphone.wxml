<!--page/999d/user/bindphone.wxml-->

<form bindsubmit="formSubmit" bindreset="formReset">
  
  <view class="section">
    <view class="section__title">手机号</view>
    <input name="mobile" placeholder="请输入手机号" />
  </view>
  <view class="section">
    <view class="section__title">手机号验证码</view>
    <input name="smscode" placeholder="请输入手机验证码" />
    <button bindtap="sendcode">获取验证码</button>
  </view>
  <view class="btn-area">
    <button formType="submit">提交</button>
    <!--<button formType="reset">Reset</button>-->
  </view>
</form>