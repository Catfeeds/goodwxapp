
/**首页搜索栏*/
.index-search{
    width: 100%;
    background: #1d8eee;
    height: 85rpx;
}
.search-view{
    display: inline-block;
    width:570rpx;
    height: 55rpx;
    background: #49baff;
    border-radius: 27rpx;
    text-align: center;
    margin-left: 35rpx;
    margin-top: 15rpx;
    font-size: 26rpx;
    color: #ceedff;
    font-weight: 300;
    line-height: 55rpx;
}
.history-icon{
    display: inline-block;
    margin-left: 25rpx;
}
/**首页导航*/
.nav-list {
    width: 100%;
    display: flex;
    display: -webkit-flex;
    background: #fff;
    margin-bottom: 20rpx;
}
.nav-list .nav-icon{
    flex: 1;
    padding: 30rpx 0;
    text-align: center;
}

.nav-list .nav-icon icon{
    display: block;
    width: 90rpx;
    height: 90rpx;
    margin: 0 auto
}
.nav-list .nav-icon text{
    display: block;
    font-size: 26rpx;
    color: #323232;
    margin-top: 15rpx;

}
.nav-list .nav-icon icon.hot-icon{
   background: url(http://thumb.media.999d.com/xiaochengxu/shouye_zuire@2x.png?3) no-repeat;
  background-size: 100% 100%; 
}
.nav-list .nav-icon icon.wuqu-icon{
   background: url(http://thumb.media.999d.com/xiaochengxu/shouye_wuqu@2x.png?3) no-repeat;
  background-size: 100% 100%; 
}

.nav-list .nav-icon icon.mingshi-icon{
   background: url(http://thumb.media.999d.com/xiaochengxu/shouye_mingshi@2x.png?3) no-repeat;
  background-size: 100% 100%; 
}
.nav-list .nav-icon icon.jiaoyi-icon{
   background: url(http://thumb.media.999d.com/xiaochengxu/shouye_fenlei@2x.png?3) no-repeat;
  background-size: 100% 100%; 
}

/*首页内容*/
.shouye-content{
    background: #fff;
    padding: 0 17rpx;
    width: auto;
    overflow-x: hidden;
    display: block;
}


