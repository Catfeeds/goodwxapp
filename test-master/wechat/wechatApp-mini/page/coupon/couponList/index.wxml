<view class='color_a {{cardType == 1 ? "color_b" : ""}} {{active_tab == "wan" ? "color_c" : ""}}'>
<view class='login_b' wx:if="{{!showMiniUserCards.length}}" >
  <view class='i1'>
    <image src='http://lingju360.com/miniapp/resources/image/new/0.png'></image>
  </view>
  <view wx:if='{{cardType == 0 ? true : false}}'>
    <view class='t1'>暂无可使用的优惠券</view>
    <navigator url='/page/coupon/index' hover-class="none">
      <view class='t2'>前往优惠券列表领取</view>
    </navigator>
  </view>

  <view wx:if='{{cardType == 1 ? true : false}}'>
    <view class='t1'>暂无可使用的代金券</view>
    <navigator url='/page/vouchers/index' hover-class="none">
      <view class='t2 color_2'>前往代金券列表领取</view>
    </navigator>
  </view>

</view>

<!--空内容提示窗口  -->

<view  class='padd'>

<view class='order_tab'>

    <view wx:key="index" data-index="{{item.num}}" catchtap='change_active_tab' class='li {{ item.num === active_tab ? "active" : ""  }}' wx:for="{{tab}}">{{item.text}}<text>{{item.t}}</text></view>

</view>

<view class='order_content' wx:if="{{showMiniUserCards.length}}">

  <navigator url='/page/coupon/index' hover-class='none' wx:if='{{cardType == 0 ? true : false}}'>
    <view class='title'>
      优惠券
      <text>获取更多</text>
    </view>
  </navigator>

  <navigator url='/page/vouchers/index' hover-class='none' wx:if='{{cardType == 1 ? true : false}}'>
    <view class='title title_2'>
      代金券
      <text>获取更多</text>
    </view>
  </navigator>

  <view class='list' wx:for='{{showMiniUserCards}}' wx:key="index">
    
    <view class='i_left'>
      <view class='t1 t' style='color:{{item.color}}'>￥<text>{{item.couponMoney}}</text> </view>
       <view wx:if="{{cardType != 1}}"  class='t2 t' style='color:{{item.color}}'>满{{item.couponLeast}}可用</view> 
    </view>

    <view class='i_right'>
      <view class='t1' >
        {{cardType == 1 ? "代金券" : item.couponName}}
        <!-- <text style='background-color:{{item.color}}'>优惠券</text>
        <text>{{'满'+ item.couponLeast +'减'+ item.couponMoney + '代金券'}}</text> -->
      </view>
      <view class='t2'><text>{{ item.shopId == 0 ? "门店通用" : "限门店" }}</text></view>
      <view class='t3'>有效期至：{{item.endTime}}</view>

      <view wx:if='{{cardType == 0 ? true : false}}'>
        <image wx:if="{{item.isUse == false ? true :false }}" src='http://lingju360.com/miniapp/resources/image/new/dsy.png'></image>
        <image wx:if="{{item.isUse == true ? true :false }}" src='http://lingju360.com/miniapp/resources/image/new/sy.png'></image>
        <image wx:if="{{item.isUse == 'wan' ? true :false }}" src='http://lingju360.com/miniapp/resources/image/new/guoqi.png'></image> 
      </view>

      <view wx:if='{{cardType == 1 ? true : false}}'>
        <image wx:if="{{item.isUse == false ? true :false }}" src='http://lingju360.com/miniapp/resources/image/slices/i2.png'></image>
        <image wx:if="{{item.isUse == true ? true :false }}" src='http://lingju360.com/miniapp/resources/image/slices/i1.png'></image>
        <image wx:if="{{item.isUse == 'wan' ? true :false }}" src='http://lingju360.com/miniapp/resources/image/slices/i0.png'></image> 
      </view>

    </view>

  </view>
</view>

</view>
</view>