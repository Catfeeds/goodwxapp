page {
  background-color: #f0f0f0;
}

clearfix:after {
  content: '';
  display: "content";
  clear: 'both';
}

.order_tab {
  top: 0;
  display: flex;
  position: fixed;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  /* box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3); */
  background-color: #fff;
  z-index: 999;
  border-bottom: 20rpx solid #f0f0f0;
}

.order_tab view {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  /* border-bottom: 6rpx solid #fff; */
  transition: all 0.3s ease;
}

.order_tab view >text {
  margin-left: 20rpx;
}

.order_content {
  background-color: #fff;
  border-top: 20rpx solid #f2f2f2;
  padding: 0rpx 20rpx 30rpx;
}

.padd {
  padding-top: 100rpx;
}

.order_content .title {
  padding-top: 20rpx;
  font-size: 32rpx;
  color: #333;
  padding-left: 60rpx;
  background: url(http://lingju360.com/miniapp/resources/image/index3/pinkGift@2x.png) no-repeat 10rpx 27rpx;
  background-size: 30rpx 30rpx;
}
.order_content .title.title_2{
  background: url(http://lingju360.com/miniapp/resources/image/slices/active_2.png) no-repeat 10rpx 27rpx;
  background-size: 30rpx 30rpx;
}

.order_content .title text {
  float: right;
  font-size: 28rpx;
  padding-right: 40rpx;
  color: #666;
  background: url(http://lingju360.com/miniapp/resources/image/manage/index/icon.png@2x.png) no-repeat right center;
  background-size: 26rpx 26rpx;
}



.order_content .list >view {
  float: left;
  background: #fff;
  padding-top: 15rpx;
}

.order_content .list .i_left {
  width: 35%;
}



.order_content .list .i_left .t1 {
  transform: translateX(-20rpx);
  font-size: 60rpx;
  padding: 20rpx 0 10rpx;
}

.order_content .list .i_left .t1 text {
  font-size: 70rpx;
}

.order_content .list .i_left .t2 {
  font-size: 30rpx;
}

.order_content .list .i_right {
  width: 60%;
  position: relative;
}

.order_content .list .i_right image {
  position: absolute;
  right: 0;
  top: 35rpx;
  width: 130rpx;
  height: 130rpx;
}

.order_content .list .i_right .t1 {
  height: 30rpx;
  padding-top: 3rpx;
  font-size: 26rpx;
  font-weight: 800;
  color: #666;
}



.order_content .list .i_right .t2 text {
  font-size: 28rpx;
}



.order_content .list .i_right .t1 text:nth-of-type(1)::after {
  position: absolute;
  /* content: ""; */
  left: -28rpx;
  top: 0;
  width: 0;
  height: 0;
  border-top: 20rpx solid transparent;
  border-right: 30rpx solid #ff8400;
  border-bottom: 20rpx solid transparent;
}

.order_content .list .i_right .t1 text:nth-of-type(2) {
  font-size: 28rpx;
  color: #666;
}

.order_content .list .i_right .t3 {
  font-size: 24rpx;
  margin-bottom: 30rpx;
  color: #666;
}

