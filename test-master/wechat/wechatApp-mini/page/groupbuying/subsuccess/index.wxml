
<view class='suc'>
  <icon  type='success' size='60'/>
  <text>购买成功</text>
</view>

<view class='suc_c'>
    <view class='over'>
       <view class='food_tag'>{{name}}</view><view class='reward'>{{code.length}}张</view>
    </view>    
    <view class='my_reward' >
        <view class='t1 {{active_index == index ? "active" :"" }}' wx:for="{{codeJson}}">
           
           <view class='tit' data-index='{{index}}'  catchtap='change_active_index'>
            券码：<text>  {{item.str}}</text> <text >查看二维码</text>
           </view>

          <view class='img_box'>
            <image src='{{item.qrcode}}' ></image>
          </view>

        </view>
        
        <view class='reward_remark'  >
          <image src='https://lingju360.com/miniapp/resources/image/icon/7.png'/>购买成功，可在 "我的订单" 中查看
        </view>
    </view>     
</view>

<view class='finish' catchtap='back'>
   完成
</view>



