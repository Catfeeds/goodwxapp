<!--page/groupbuying/submitorder/index.wxml-->

<view class='bj'>
<view class='orderdetail'>
  {{option.name}} <text>¥{{option.price}}</text>
</view>

<view class='num_s'>
  数量
  <view>
     <view catchtap='minus' class='btns'>-</view>
     <view class='numbers'>{{buyNum}}</view>
     <view catchtap='add' class='btns'>+</view>
  </view>
</view>
<view class='num_s total'>
  小计 <text>¥{{allPrice}}</text>
</view>
<view class='total pocket'>
   实付金额 <text>¥{{allPrice}}</text>
</view>

</view>

<view class='order_remark'>
   <image src='https://lingju360.com/miniapp/resources/image/groupBuying/ino.png'/><text>随时退</text>
   <image src='https://lingju360.com/miniapp/resources/image/groupBuying/ino.png'/><text>过期退</text>
   <image src='https://lingju360.com/miniapp/resources/image/groupBuying/icontime.png'/><text>免预约</text>
</view>
<view catchtap='submit' class='toorder'>
   总计：<text>  ¥{{allPrice}}</text>
   <view>提交订单</view>
</view>

