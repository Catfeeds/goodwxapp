page{
  background-color: #f0f0f0;
}
.orderdetail{
  border-top: 30rpx solid #f0f0f0;
  color: #333333;
  padding:0 30rpx;
  line-height:88rpx;
  height: 88rpx;
  font-size:30rpx;
  border-bottom: 1px solid #f0f0f0;
}
.orderdetail text{
  float: right;
}
.num_s{
  height: 113rpx;
  width: 690rpx;
  line-height: 113rpx;
  border-bottom: 1px solid #f0f0f0;
  margin:0 auto;
  font-size:30rpx;
  position: relative;
}
.num_s >view{
  position: absolute;
  right: 0;
  top:0;
  
}
.num_s view .btns{
  display: inline-block;
  border: 1px solid #999999;
  background: #fff;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  width: 78rpx;
}
.num_s view .numbers{
  display: inline-block;
  width: 88rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  border-bottom: 1px solid #999999;
  border-top: 1px solid #999999;
}
.num_s view .btns:nth-child(1){
  border-radius: 8rpx 0 0 8rpx;
}
.num_s view .btns:nth-child(3){
  color:#FFC938;
  border-radius: 0 8rpx 8rpx 0;
}
.total{
  border-bottom:none;
  height: 97rpx;
  line-height: 97rpx;
}
.total text {
   color:#FF3D5E;
   font-weight:600;
   float: right;
}
.pocket{
  border-top:20rpx solid #f0f0f0;
  padding: 0 30rpx;
  font-size:30rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.order_remark{
  width:690rpx;
  padding: 30rpx 30rpx;
  
  background: #f0f0f0;
  color:#02C40B;
}
.order_remark image{
  width:36rpx;
  height: 36rpx;
  position:relative;
  top:8rpx;
  margin-right:5px;

}
.order_remark text{
   margin-right:5px;
}
.bj{
  background-color: #fff;
}
.toorder{
  width: 750rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding-left:30rpx;
  font-size:30rpx;
  position:absolute;
  bottom: 0;
  z-index: 100;
  background-color: #fff;
}
.toorder text{
  color:#FF3D5E;
}
.toorder view{
  position: absolute;
  color:#fff;
  right: 0;
  top:0;
  background: #FFC938;
  height:100rpx;
  text-align: center;
  width:290rpx;
  line-height:100rpx;
}