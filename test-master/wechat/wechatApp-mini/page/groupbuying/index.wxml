<!--空内容提示窗口  -->


<swiper wx:if="{{0}}" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}" duration="{{500}}">
  <block  wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" mode="scaleToFill" class="slide-image imgsss" />
    </swiper-item>
  </block>
</swiper>

<view class="groupbuying" wx:if="{{groupPurchaseList.length}}">
 
  <view class="li" wx:for="{{groupPurchaseList}}" wx:key="{{index}}" catchtap='toGroupdetail' data-id='{{item.id}}'>
    <view class="f_l img_box">
      <image src="https://flashgoing.oss-cn-shenzhen.aliyuncs.com/{{item.coverImg}}"></image>
    </view>
    <view class="list_text f_l">
      <view class="t1">{{item.name}}</view>
      <!-- <view class="t2">{{item.description}}</view> -->
      <view class="t3">售价：¥{{item.price}} <text class="t5">原价：¥{{item.oldPrice}}</text> <text class="t4"> 详情</text> </view>
    </view>
  </view>


</view>