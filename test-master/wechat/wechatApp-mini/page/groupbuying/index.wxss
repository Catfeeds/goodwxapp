.groupbuying .li {
  overflow: hidden;
  background-color: #fff;
  padding: 20rpx;
  /* padding-left: 55rpx; */
  border-bottom: 20rpx solid #f0f0f0;
  position: relative;
}

.groupbuying .li .img_box{
  width: 160rpx;
  height: 135rpx;
  overflow: hidden;
}
.groupbuying .li .img_box image{
  width: 100%;
  height: 100%;
}

.groupbuying .li .list_text{
  padding-left: 30rpx;
  font-size: 28rpx;
}

.groupbuying .li .list_text .t1{
  padding-top: 20rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: 800;
}

.groupbuying .li .list_text .t2{
  margin-top: 15rpx;
  color: #666666;
  font-size: 26rpx;
}

.groupbuying .li .list_text .t3{
  margin-top: 20rpx;
  color: #ff8502;
  font-size: 32rpx;
}

.groupbuying .li .list_text .t3 text{
  margin-top: 15rpx;
  color: #999;
  font-size: 26rpx;
}

.groupbuying .li .list_text .t3 text.t4{
  position: absolute;
  background: url(https://lingju360.com/miniapp/resources/image/jt3.png) no-repeat right center;
  background-size: 14rpx 25rpx;
  padding-right: 30rpx;
  bottom: 80rpx;
  right: 20rpx;
}

.groupbuying .li .list_text .t3 text.t5{
  text-decoration:line-through;
  padding-left: 30rpx;
  font-style: oblique;
}