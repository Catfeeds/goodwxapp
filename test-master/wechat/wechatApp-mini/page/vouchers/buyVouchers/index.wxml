
<alert show="{{alert.show}}" type="{{alert.type}}" title="{{alert.title}}"></alert> 
<!--page/vouchers/buyVouchers/index.wxml-->
<view class='big-view'>
  <!--第一部分-->
  <view class='vouchers-box'>
    <view class='vouchers'>

      <view class='vouchers-money'>
        <view class='par-value'>￥{{verifyList.money}}</view>
        <view class='selling-price'>仅售{{verifyList.price}}元</view>
      </view>

      <view class='vouchers-validity'>
        <view class='vouchers-size'>{{verifyList.name}}</view>
        <view class='date'>有效期至：{{verifyList.endTime}}</view>
      </view>

    </view>
  </view>
  <!--分割线-->
  <view class='split-line'></view>
  <!--第二部分-->
  <view class='buy-number-box'>

    <view class='buy-number'>
      <text class='buy-number-size'>购买数量</text>
      <text class='minus' catchtap='minus'></text>
      <text class='num'>{{num}}</text>
      <text class='add' catchtap='add'></text>
    </view>

    <view class='total-prices'>
      <text class='total-prices-size'>总计</text>
      <text class='total-prices-money'><text>￥</text>{{totalMoney}}</text>
    </view>

  </view>
  <!--第三部分-->
  <view catchtap='pay_money' class='pay-money'>去支付</view>
</view>