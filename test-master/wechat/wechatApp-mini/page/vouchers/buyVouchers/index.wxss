/* page/vouchers/buyVouchers/index.wxss */

.big-view {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  background-color: #f2f2f2;
}

.vouchers-box {
  padding: 22rpx 0 20rpx 0;
  background-color: #fff;
}

.vouchers-box .vouchers {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  width: 690rpx;
  height: 182rpx;
  border: 1rpx solid #ff8502;
  margin: 0 auto;
}

.vouchers-box .vouchers .vouchers-money {
  width: 165rpx;
  margin-left: 60rpx;
  text-align: left;
  margin-top: 28rpx;
}

.vouchers-box .vouchers .vouchers-money .par-value {
  font-size: 60rpx;
  color: #ff8502;
}

.vouchers-box .vouchers .vouchers-money .selling-price {
  font-size: 26rpx;
  color: #ff8502;
  text-indent: 20rpx;
}

.vouchers-box .vouchers .vouchers-validity {
  margin-left: 35rpx;
}

.vouchers-box .vouchers .vouchers-validity .vouchers-size {
  font-size: 32rpx;
  color: #ff8502;
  margin-top: 45rpx;
}

.vouchers-box .vouchers .vouchers-validity .date {
  font-size: 28rpx;
  color: #666;
  margin-top: 14rpx;
}

/*第二部分*/

.buy-number-box {
  padding-left: 82rpx;
  padding-bottom: 50rpx;
  background-color: #fff;
}

.buy-number-box .buy-number {
  padding-top: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.buy-number-box .buy-number .buy-number-size {
  font-size: 28rpx;
  color: #666;
}

.buy-number-box .buy-number .minus {
  position: relative;
  top: 7rpx;
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  background: url("http://lingju360.com/miniapp/resources/image/index3/minus.png")no-repeat;
  background-size: 100% 100%;
  margin-left: 320rpx;
}

.buy-number-box .buy-number .add {
  position: relative;
  top: 7rpx;
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  background: url("http://lingju360.com/miniapp/resources/image/index3/add.png")no-repeat;
  background-size: 100% 100%;
}

.buy-number-box .buy-number .num {
  display: inline-block;
  width: 70rpx;
  text-align: center;
  font-size: 36rpx;
  color: #666;
}
.buy-number-box .total-prices{
  margin-top: 33rpx;
}

.buy-number-box .total-prices .total-prices-size {
  font-size: 28rpx;
  color: #666;
}

.buy-number-box .total-prices .total-prices-money {
  display: inline-block;
  position: relative;
  font-size: 36rpx;
  color: #ff8502;
  width: 145rpx;
  margin-left: 375rpx;
  text-align: center;
}
/*第三部分*/
.pay-money{
  width: 86%;

  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background-color: #ff8502;
  margin: 50rpx auto 0 auto;
}

/*分割线*/

.split-line {
  width: 100%;
  height: 20rpx;
  background-color: #f2f2f2;
}
