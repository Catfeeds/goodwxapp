page{
  background: #f0f0f0;
}
.coupon{
  padding: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.coupon .li{
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 3rpx 5rpx rgba(0,0,0,0.1);
  margin-bottom: 30rpx;
  height: 200rpx;
}
.coupon .li .box_left{
  width:68%;
  float: left;
  border-right:1rpx #f0f0f0 dashed; 
  box-sizing: border-box;
  position: relative;
}

.coupon .li .box_left::after{
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  top: -15rpx;
  right: -15rpx;
}

.coupon .li .box_left::before{
  content: '';
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  bottom: -15rpx;
  right: -15rpx;
}

.coupon .li .box_right{
  width: 32%;
  float: left;
  text-align: center;
}
.coupon .li .box_right .t1{
  margin: 30rpx 0 20rpx;
}
.coupon .li .box_right .t1 text{
  color: #f60808;
  font-size: 50rpx;
}
.coupon .li .box_right .t1 text:nth-of-type(2){
  margin-left: 5rpx;
  font-size: 25rpx;
}
.coupon .li .box_right .t2{
  width: 60%;
  margin: 0 auto;
  background-color: #fff;
  border: 1rpx solid #f60808;
  color: #f60808;
  padding: 10rpx 0;
  border-radius: 8rpx;
}

.coupon .li .box_left .i_left{
  float: left;
  width: 40%;
  position: relative;
  height: 200rpx;
}
.coupon .li .box_left .i_right{
  float: left;
  width: 60%;
  box-sizing: border-box;
  position: relative;
  height: 200rpx;
}
.coupon .li .box_left .i_right .t1{
  margin: 20rpx 0 25rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
}
.coupon .li .box_left .i_right .t2{
  margin-bottom: 110rpx;
}
.coupon .li .box_left .i_left .num text{
  font-size: 40rpx;
}
.coupon .li .box_left .i_left .num{
  text-align: center;
  color: #f60808;
  font-size: 60rpx;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  margin: 40rpx 0 10rpx;
  font-weight: 600;
}
.coupon .li .box_left .i_left .t2{
  font-size: 24rpx;
  padding-left: 20rpx;
}
.coupon .li .box_left .i_left .t3{
  left: 30rpx;
}
.coupon .li  .t3{
  position: absolute;
  bottom: 20rpx;
  height: 40rpx;
  overflow: hidden;
  font-size: 24rpx;
}