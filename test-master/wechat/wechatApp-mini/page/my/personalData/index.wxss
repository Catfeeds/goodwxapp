page{
  background: #f0f0f0;
}
.list_box{
  border-top: 20rpx solid #f0f0f0;
  background: #fff;
}



.list_box .li{
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  color: #333;
  position: relative;
}

.list_box .li::after{
  content: '';
  position: absolute;
  bottom: -1rpx;
  height: 1rpx;
  left: 0rpx;
  width: 100%;
  background: #f0f0f0;
}

.list_box .li .title{
  float: left;
}

.list_box .li .more,.list_box .li .right_icon{
  float: right;
}


.list_box .li .right_icon{
  width: 80rpx;
  height: 100rpx;
  background: url(https://lingju360.com/miniapp/resources/image/icon-edit@2x.png) no-repeat center right;
  background-size: 30rpx 32rpx;
  margin-left: 10rpx;
}

.user_box{
  border-top: 20rpx solid #f0f0f0;
  background: #fff;
  text-align: center;
}

.user_box .image_box{
  width: 160rpx;
  height: 160rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  margin: 30rpx auto 20rpx;
  overflow: hidden;
}
.user_box .image_box image{
  width: 160rpx;
  height: 160rpx;
  display: block;
}
.user_box .t{
  padding-bottom: 30rpx;
  font-size: 30rpx;
  color: #333;
}