<alert show="{{alert.show}}" type="{{alert.type}}" title="{{alert.title}}"></alert>
<view class='zz' catchtap='showcheck_btn' wx:if="{{showcheck}}"></view>


<view class='couponList {{!showcheck ? "active":""}}'>
  <view class="yes-select-menu-box {{ 1 ? 'ani' :''}}">
    <view class='title'>
      <view class='t1'>代金券</view>
      <view class='t2'>（温馨提示：每笔订单可以使用多张代金券）</view>
    </view>
    <scroll-view scroll-y="true">

      <view class='li' wx:for="{{cashCouponList}}" wx:key="{{index}}" catchtap='check' data-id='{{item.id}}' data-index='{{index}}'>
        <view>
          <text> {{item.couponMoney}}元代金券</text>
        </view>
        <view>
          <text>有效期至 :{{item.endTime}}</text>
        </view>

        <view wx:if="{{ !item.check }}" class='check '></view>
        <view wx:if="{{ item.check }}" class='check active'></view>

      </view>

    </scroll-view>

    <view catchtap='check_cashCouponList' class='ok_btn'>
      <view>确定</view>
    </view>

  </view>
</view>

<view class='zz' catchtap='showcheck_2_btn' wx:if="{{showcheck_2}}"></view>
<view class='couponList {{!showcheck_2 ? "active":""}}'>
  <view class="yes-select-menu-box {{ 1 ? 'ani' :''}}">
    <view class='title'>
      <view class='t1'>优惠券</view>
      <view class='t2'>（温馨提示：每笔订单优惠券只能用一张）</view>
    </view>
    <scroll-view scroll-y="true">

      <view class='li' wx:for="{{couponList}}" wx:key="{{index}}" catchtap='check_2' data-id='{{item.id}}' data-index='{{index}}'>
        <view>
          <text> 满{{item.couponLeast}}减{{item.couponMoney}}元优惠券</text>
        </view>
        <view>
          <text>有效期至 :{{item.endTime}}</text>
        </view>

        <view wx:if="{{ !item.check }}" class='check '></view>
        <view wx:if="{{ item.check }}" class='check active'></view>

      </view>

    </scroll-view>

    <view catchtap='check_CouponList' class='ok_btn'>确定</view>

  </view>
</view>





<view class="neworderlist">

  <view class='_border'>

    <view class='block'>

      <view class='title pd'>
        <text>订单编号：</text>
        <text>{{totalOrder.orderNo}}</text>
      </view>

      <view class='top_list pd'>
        <view class='li'>
          <text class='t_2' decode="{{true}}">总   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 价</text>
          <text class='red'>￥{{allMoney}}</text>
        </view>
        <view class='li'>
          <text>就餐桌号</text>
          <text>{{totalOrder.deskNo}}</text>
        </view>
        <view class='li'>
          <text>就餐人数</text>
          <text>{{totalOrder.useNum}}人</text>
        </view>
        <view class='li'>
          <text>下单时间</text>
          <text>{{totalOrder.createdDate}}</text>
        </view>
        <!-- <view class='li'wx:if="{{items.length<=0 ? false : true }}"> -->
        
        <view wx:if="{{!paytoo}}">
        
          <view class='li yell' wx:if="{{items.length<=0 ? false : true}}">
          <text class='t_3' decode="{{true}}">使&nbsp;&nbsp;用&nbsp;&nbsp;券</text>
          <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{items}}" wx:key="{{index}}">
              <radio color="#ff8400" value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
            </label>
          </radio-group>
          <!-- <text>（二选一）</text> -->
        </view>
        <view class='li yell' wx:if="{{activeitems == 'couponList' ? true : false }}">
          <text class='t_3' decode="{{true}}">优&nbsp;&nbsp;惠&nbsp;&nbsp;券</text>
          <text catchtap='showcheck_2'>{{CouponList_text}}</text>
        </view>
        <view class='li yell' wx:if="{{activeitems == 'cashCouponList' ? true : false }}">
          <text class='t_3' decode="{{true}}">代&nbsp;&nbsp;金&nbsp;&nbsp;券</text>
          <text catchtap='showcheck'>{{cashCouponList_text}}</text>
        </view>
        
        </view>

        <view wx:if="{{paytoo}}">

          <view class='li yell' wx:if="{{couponList.length>0 ? true : false }}">
            <text class='t_3' decode="{{true}}">优&nbsp;&nbsp;惠&nbsp;&nbsp;券</text>
            <text >已选一张{{couponList[0].couponName}}</text>
          </view>

          <view class='li yell' wx:if="{{cashCouponList.length>0 ? true : false }}">
            <text class='t_3' decode="{{true}}">代&nbsp;&nbsp;金&nbsp;&nbsp;券</text>
            <text >已选{{cashCouponList.length}}张代金券</text>
          </view>

        </view>


      </view>

    </view>

    <view class='lin' wx:if="{{0}}">
      <view class="gopay"  wx:if="{{!paytoo}}" catchtap='pay'>
        去支付
      </view>
      <view class="gopay"  wx:if="{{paytoo}}" catchtap='pay_too'>
        支付
      </view>
    </view>

  </view>


</view>


<view class="neworderlist" style='padding-bottom:120rpx;'>



  <view class='_border'>
    <view class='menu_list'>

      <view class='goods_t_t clearfix'>
        <view>
          <text>商品</text>
        </view>
        <view>
          <text>单价</text>
          <text>数量</text>
          <text>金额</text>
        </view>
      </view>
      <!--商品列表  -->
      <view class='goodslist'>
        <view wx:for='{{orderMenuList}}' wx:key="{{index}}">
          <view class='li clearfix'>
            <view>
              <text>{{item.menuName}}{{item.flag == '7' ? '/退':''}}{{item.isFree ? '/赠':''}}</text>
            </view>
            <view>
              <text>￥{{item.price}}</text>
              <text>{{item.weight}}</text>
              <text>￥{{item.isFree || item.flag == '7' ? '0':(item.price * item.weight) }}</text>
            </view>
          </view>
          <view class='tast'>
            <view wx:if="{{item.menuSpecName}}">
              <text>规格：{{item.menuSpecName}}</text>
            </view>
            <view wx:if="{{item.flavour}}">
              <text>做法：{{item.flavour}}</text>
            </view>
          </view>

        </view>
      </view>

      <view class='total_m'>

        <view>合计金额：
          <text>￥{{totalOrder.checkoutMoney}}</text>
        </view>
         
         <view wx:if="{{totalOrder.specialMoney ==0 ? false : true}}">减免金额：<text>￥{{totalOrder.specialMoney}}</text></view>
         <view wx:if="{{totalOrder.discountMoney ==0 ? false : true}}">折扣金额：<text>￥{{totalOrder.discountMoney}}</text></view>
         <view wx:if="{{totalOrder.roundingMoney ==0 ? false : true}}">舍入金额：<text>￥{{totalOrder.roundingMoney}}</text></view>
      </view>

      <view class='lin gohome'>
      <view class="gopay2"  catchtap='gohome'>
        返回首页
      </view>

      <view class="gopay2"  wx:if="{{!paytoo}}" catchtap='pay'>
        去支付
      </view>
      <view class="gopay2"  wx:if="{{paytoo}}" catchtap='pay_too'>
        支付
      </view>
    </view>

    </view>
  </view>


</view>