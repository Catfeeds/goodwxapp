<view class="dineManagement" wx:if="{{detailsOrderShop.length}}">

  <view class='li' wx:for="{{detailsOrderShop}}" wx:key="{{index}}" catchtap='toOrder_2' data-deskId='{{item.deskId}}' data-id='{{item.id}}' data-orderNo='{{item.orderNo}}'>
  
    <view class='_border'>

      <view class='_b'>
        <view>订单号：{{item.orderNo}} <text>{{item.payStatus== 1 ? '支付成功':''}}{{item.payStatus== 2 ? '支付失败':''}}{{(item.payStatus== 0)&&(item.payId<=0) ? '待结算':''}}{{(item.payStatus== 0)&&(item.payId>0) ? '待支付':''}}</text> </view>
      </view>
    
      <view class='_t'>
        <view class='b' catchtap='topay' data-deskId='{{item.deskId}}' data-id='{{item.id}}' data-orderNo='{{item.orderNo}}' wx:if="{{item.payStatus== 2}}">再次支付</view>
        <view class='b' catchtap='topay' data-deskId='{{item.deskId}}' data-id='{{item.id}}' data-orderNo='{{item.orderNo}}' wx:if="{{(item.payStatus== 0)&&(item.payId<=0)}}">去结算</view>
        <view class='b' catchtap='topay_2' data-deskId='{{item.deskId}}' data-id='{{item.id}}' data-orderNo='{{item.orderNo}}' wx:if="{{(item.payStatus== 0)&&(item.payId>0)}}">支付</view>
        <view class='r_text'>
          <view>消费金额：￥{{item.totalMoney}}</view>
          <view>实付金额：<text class='yell'>￥{{item.actualMoney}}</text> </view>
          <view>下单时间：{{item.createdDate}}</view>
        </view>
      </view>

      
    
    </view>
  
  </view>

</view>


<view class='dineManagement_no' wx:if="{{showdetailsOrderShop}}">


  <view class='i1'>
    <image src='http://lingju360.com/miniapp/resources/image/new/0.png'></image>
  </view>
  <view class='t1'>暂无订单</view>

</view>