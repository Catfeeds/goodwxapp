.order_tab {
  top: 0;
  display: flex;
  position: fixed;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  /* box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3); */
  background-color: #fff;
  z-index: 999;
  border-bottom: 20rpx solid #f0f0f0;
}

.order_tab view {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  /* border-bottom: 6rpx solid #fff; */
  transition: all 0.3s ease;
}

.order_tab view >text {
  margin-left: 20rpx;
}

.order_tab .active {
  position: relative;
  color: #ff8502;
}

.order_tab .active::after {
  content: '';
  border-bottom: 6rpx solid #ff8502;
  bottom: 0;
  left: 22%;
  width: 50%;
  position: absolute;
  color: #ff8502;
}