page{
  background-color: #f2f2f2;
}
.orderManagement{
  padding: 30rpx;
  border-top: 20rpx solid #f2f2f2;
  border-bottom: 20rpx solid #f2f2f2;
  background-color: #fff;
}
._border{
  border: 1rpx solid #ebebeb;
  padding:0 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  
}
.orderManagement .li{
  margin-bottom: 30rpx;
  height: 150rpx;
  line-height: 150rpx;
  position: relative;
  
}

.orderManagement .li .icon{
  position: absolute;
  top: -0rpx;
  right: 30rpx;
  width: 30rpx;
  height: 100%;
  background: url(https://lingju360.com/miniapp/resources/image/jt3.png) no-repeat center center;
  background-size: 17rpx 31rpx;
}
.orderManagement .img_box{
  width: 62rpx;
  height: 62rpx;
  display: inline-block;
  position: absolute;
  left: 60rpx;
  top: 50rpx;
}

.orderManagement .img_box image{
  display: block;
  width: 100%;
  height: 100%;
}

.orderManagement .li .img_box.icon1{
  height: 52rpx;
}

.orderManagement .li .img_box.icon2{
  height: 52rpx;
}

.orderManagement .li .img_box.icon3{
  height: 52rpx;
}

.orderManagement .li .img_box.icon4{
  width: 54rpx;
  height: 54rpx;
}

.orderManagement .li:last-child{
  margin-bottom: 0;
}

.orderManagement .li .t1{
  padding-left: 140rpx;
  float: left;
}
.orderManagement .li .t2{
  float: right;
  color: #666;
  padding-right: 70rpx;
}