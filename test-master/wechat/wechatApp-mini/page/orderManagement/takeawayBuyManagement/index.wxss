.takeawaylist{
  border-top: 20rpx solid #f0f0f0;
  background-color: #f0f0f0;
}

.takeawaylist .li{
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 20rpx solid #f0f0f0;
}

.takeawaylist .li .titel{
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 35rpx;
  line-height: 80rpx;
}
.takeawaylist .li .titel .yellor{
  color: #ff8400;
}
.takeawaylist .li .titel .t2{
  float: right;
  font-size: 28rpx;
}
.takeawaylist .li .bottom_box {
  padding: 20rpx 0;
}
.takeawaylist .li .text text{
  font-size: 28rpx;
  line-height: 70rpx;
  color: #333;
}

.takeawaylist .li .text .t1{
  color: #999;
  margin-right: 30rpx; 
}
.takeawaylist .li .text .t3{
  float: right;
}