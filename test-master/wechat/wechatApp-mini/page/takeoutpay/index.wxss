.take-out-box {
  max-width: 750px;
  min-width: 300px;
  margin: 0 auto;
  /*border: 1px solid blue;*/
}

/*头部*/

.take-out-box .header {
  max-width: 750px;
  min-width: 300px;
  margin: 0 auto;
  width: 100%;
  position: fixed;
  top: 0;
  height: 200rpx;
  background: url("https://lingju360.com/miniapp/resources/images/takeout/banner.png") no-repeat;
  background-size: 100% 100%;
  z-index: 100;
  border-bottom: 20rpx solid #dedfe0;
}

/*左边*/

.take-out-box .header .header-left {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 135rpx;
  height: 135rpx;
  border-radius: 50%;
}

.take-out-box .header .header-left image {
  display: block;
  width: 100%;
}

/*右边*/

.take-out-box .header .header-right {
  height: 100%;
  margin-left: 200rpx;
  color: #fff;
}

.take-out-box .header .header-right text {
  position: relative;
  display: block;
  font-size: 24rpx;
}

.take-out-box .header .header-right text.t1 {
  margin-top: 30rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.take-out-box .header .header-right text.t2,
.take-out-box .header .header-right text.t3 {
  line-height: 40rpx;
}

.scroll-main {
  position: relative;
  top: 105rpx;
}

.scroll-main .zz{
  height: 5000rpx;
  width: 180rpx;
  position: fixed;
  background: #f0f0f0;
  left: 0;
  z-index: 999;
}

.scroll-main .zz2{
  height: 10rpx;
  width: 100%;
  position: fixed;
  background: #f0f0f0;
  left: 0rpx;
  top: 0rpx;
  z-index: 9999;
}

.scroll-main .scroll-view_1 {
  /* max-height: 1000rpx; */
  height: calc(100% - 200rpx);
  position: fixed;
  left: 0px;
  top: 105rpx;
  width: 180rpx;
  float: left;
  background: #f0f0f0;
  z-index: 999999;
}

.scroll-main .scroll-view_2 {
  max-height: 1000rpx;
  padding-top: 1rpx;
  margin-left: 0rpx;
  padding-bottom: 120rpx;
}

.scroll-main .scroll-view_1 view {
  background-color: #f0f0f0;
  border-bottom: 1px solid #dedfe0;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  padding-left: 40rpx;
  color: #333;
}
.scroll-main .scroll-view_1 view.hot2{
  background: url(https://lingju360.com/miniapp/resources/image/new/z.png) no-repeat;
  background-size:28rpx 26rpx; 
  background-position: 23rpx 38rpx;
}
.scroll-main .scroll-view_1 view.hot{
  background: url(https://lingju360.com/miniapp/resources/image/new/r.png) no-repeat;
  background-size:24rpx 26rpx; 
  background-position: 25rpx 38rpx;
}

.scroll-main .scroll-view_1 view.active {
  background-color: #fff;
  border-right: 1px solid #fff;
  color: #333;
  position: relative;
}
.scroll-main .scroll-view_1 view.active::after{
  position: absolute;
   content: ''; 
  left: 0;
  top: 0;
  height: 100%;
  width: 10rpx;
  background-color: #ff8400;
}

.activeCategoryId{
  font-size: 28rpx;
  border-left: 10rpx solid #ff8400;
  padding-left: 25rpx;
