.queue{
  padding:0 60rpx;
}
.queue .text{
  text-align: center;
  margin-top: 60rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 30rpx;
}
.queue .content{
  height: 760rpx;
}

.queue .content .li{
  height: 253.3333333333333rpx;
  position: relative;
  text-align: center;
}
.queue .content .li .t1{
  padding-top: 70rpx;
  font-size: 30rpx;
}
.queue .content .li .t2{
  font-size: 58rpx;
  
}
.queue .content .li:nth-of-type(1),.queue .content .li:nth-of-type(3){
  background-color: #f6f6f6;
  border-radius:16rpx ;
  color: #666;
}
.queue .content .li:nth-of-type(2){
  background-color: #fce9d5;
  color: #ff8400;
}

.queue .content .li:nth-of-type(2)::after,.queue .content .li:nth-of-type(3)::after{
  content: '';
  background-color: #fff;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -25rpx;
  left: -25rpx;
  border-radius: 50%;
}
.queue .content .li:nth-of-type(2)::before,.queue .content .li:nth-of-type(3)::before{
  content: '';
  background-color: #fff;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -25rpx;
  right: -25rpx;
  border-radius: 50%;
}

.queue .t{

  text-align: center;
  letter-spacing:1rpx;
  line-height: 48rpx;
  padding: 30rpx 30rpx;
  color: #666;
  font-size: 28rpx;
}

.btn {
  background:#ff8400;
  color:#fff;
  border-radius:60rpx;
  margin:0 20rpx;
  height:90rpx;
  text-align:center;
  line-height:90rpx;
  width: auto;
  font-size: 32rpx;
}
