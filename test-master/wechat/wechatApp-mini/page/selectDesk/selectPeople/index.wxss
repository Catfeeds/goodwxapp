.scan{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  background-color:#ff8400;
  line-height: 100rpx;
  color: #fff;
  font-size:32rpx;
  border-top: 70rpx solid #fff;
} 
.queue{
  padding:60rpx 30rpx 0;
  display: block;
}
.queue .text{
  text-align: center;
  margin-top: 60rpx;
  font-size: 36rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.queue .scroll_view{
  padding-bottom: 160rpx;
  overflow: hidden;
  text-align: center;
}
.queue .scroll_view .li{
  display: inline-block;
  margin: 0 27rpx;
  width: 80rpx;
  text-align: center;
  padding: 20rpx 0;
}



.queue .scroll_view .li view{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius:8rpx;
  border:1rpx solid #ff8400;
  line-height: 80rpx; 
  color: #ff8502;
  font-size: 35rpx;
  transition: all ease 0.1s;
}

.queue .scroll_view .li.active view{
  background-color: #ff8400;
  color: #fff;
}
.queue .t{

  text-align: center;
  letter-spacing:1rpx;
  line-height: 48rpx;
  padding: 30rpx 30rpx;
  color: #666;
  font-size: 28rpx;
}

.queue_title{
  color: #333;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 30rpx solid #f2f2f2;
}