.scan{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  background-color:#ff8400;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #fff;
} 

/* 第二版点菜 */
.dish_tab{
  display: flex;
  position: fixed;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  background-color: #fff;
  z-index: 999;
}

 .dish_tab view {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  border-bottom: 6rpx solid #fff;
  transition: all 0.3s ease;
}
.dish_tab view >text{
    margin-left:20rpx;
}

.dish_tab .active {
  border-bottom: 4rpx solid #ff8400;
  color: #ff8400;
}
.desklist{
  padding:20rpx 40rpx 130rpx;
  overflow: hidden;
  flex-wrap:wrap;
  font-size:36rpx;
}
.desk_li{
  float: left;
  text-align: center;
  width: 33.33333333333%;
  padding: 20rpx;
  box-sizing: border-box;
}
.desk_li .in{
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  background-color: #fff;
  color: #ccc;
  /* box-shadow: 0rpx 2rpx 8rpx rgba(0,0,0,0.3); */
  
}
.desk_li .in view:nth-child(1){
  height:62rpx;
  font-size: 30rpx;
  line-height:62rpx;
  overflow: hidden;
}
.desk_li .in view:nth-child(2){
  height: 60rpx;
  line-height:60rpx;
  font-size: 28rpx;
  width: 80%;
  margin: 0 auto;
  border-top:0.5rpx dashed  #ccc;
  letter-spacing:1px;
}


.desk_li.flag_0 .in{
  border:1rpx solid #ff8400;
  background-color:#fff;
  color: #ff8400;
}
.desk_li.flag_0 .in view:nth-child(2){
  border-top:0.5rpx dashed  #ff8400;

}

.desklist .choosed .in{
    border:1rpx solid #ff8400;
   background:#ff8400;
   color: #fff;
}
.desklist .choosed .in .mine_c{
   border-top:0.5rpx dashed  #fff;
}