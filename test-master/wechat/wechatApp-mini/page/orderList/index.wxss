 .order_tab{
  display: flex;
  position: fixed;
  height: 100rpx;
  width: 100%;
  z-index: 99999999999999;
  line-height: 100rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
  background-color: #fff;
}

 .order_tab view {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  border-bottom: 6rpx solid #fff;
  transition: all 0.3s ease;
}
.order_tab view >text{
    margin-left:0rpx;
}

.order_tab .active {
  border-bottom: 4rpx solid #ff8400;
  color: #ff8400;
}
.order_content{
  /* padding-top:120rpx; */
  background-color: #f0f0f0;
}
.order_content .list{
  overflow: hidden;
  border-bottom:20rpx solid #f0f0f0;
  border-top:20rpx solid #f0f0f0;
}
.order_content .list >view{
   float:left;
   background: #fff;
   padding-top:30rpx;
   height:170rpx;
}
.order_content .list > view:nth-child(1){
  width:25%;
}
.order_content .list > view:nth-child(1) image{
  display:block;
  height:100rpx;
  width: 130rpx;
  margin:0 auto;
}
.order_content .list > view:nth-child(2){
  width:50%;
  font-size:30rpx;
  z-index: 999999;
  position: relative;
}
.order_content .list > view:nth-child(2) view{
  margin-bottom:10rpx;
  font-size: 24rpx;
}
.order_content .list > view:nth-child(2) .shopname{
  font-size:24rpx;
  /* font-weight:700; */
}
.order_content .list > view:nth-child(2) .t_t_p{
  color:#E91C23;
}
.order_content .list > view:nth-child(3){
  width:25%;
  font-size:30rpx;
}
.order_content .list >view:nth-child(3) .status{
   color:#5CBFBF;
   width:100%;
   margin: 0 auto;
   text-align:center;
   margin-bottom:32rpx;
}
.order_content .list > view:nth-child(3) .deal{
   margin: 0 auto;
   padding: 10rpx 0;
   border-radius:8rpx; 
   width:70%;
   text-align:center;
   border: 1px solid;
   color:#E91C23;
   position: relative;
   z-index: 999999999999999999;
}
/* 去支付 取消需要添加的class */
.order_content .list >view:nth-child(3) .payment{
  color:#ED9937;
}
.order_content .list >view:nth-child(3) .cel{
  color:#E91C23;
}


