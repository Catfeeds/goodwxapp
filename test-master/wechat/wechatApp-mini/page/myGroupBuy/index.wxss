/* page/groupbuying/subsuccess/index.wxss */
page{
  background:#f0f0f0;
  }
.suc{
  height: 300rpx;
  width: 100%;
  text-align: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.suc icon{
  display: block;
  position:relative;
  top:70rpx;
}
.suc text{
  display: block;
  font-size:30rpx;
  margin-top:90rpx;
}
.suc_c{
  border-radius: 8rpx 8rpx;
  width:710rpx;
  margin: 30rpx auto;
  background: #fff;
}
.suc_c >view{
  padding: 20rpx 30rpx;
  font-size:30rpx;
}
.over{
  overflow: hidden;
}
.reward{
  float: left;
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size:30rpx;
  background:#FC5A3A;
  color: #fff;
  border-radius: 8rpx 8rpx;
  margin: -5rpx 0 0 20rpx;
  text-align: center;
}
.food_tag{
    float: left;   
}

.suc_c .my_reward view.t1{
  height: 120rpx;
  line-height: 120rpx;
  overflow: hidden;
  transition: height ease 0.3s;
  border-bottom:1px solid #f0f0f0;

}

.suc_c .my_reward view.t1.active{
  height: 630rpx;
}

.suc_c .my_reward view.t1 .img_box{
  border-top: 1rpx solid #f0f0f0;
  overflow: hidden;
  text-align: center;
}

.suc_c .my_reward view.t1 .img_box image{
  width: 400rpx;
  height: 400rpx;
  margin:50rpx 30rpx;
}

.suc_c .my_reward view.t1 text{
  overflow: hidden;
  color:#FECC46;
}

.suc_c .my_reward view.t1 text:nth-of-type(2){
  color: #333;
  float: right;
}
.reward_remark image{
  width:30rpx;
  height:30rpx;
  position:relative;
  top:5rpx;
  margin-right:10rpx;

}
.reward_remark{
  height: 89rpx;
  line-height: 89rpx;
  font-size:26rpx;
  color:#A3A3A3;
}
.finish{
  background: #FECC46;
  width: 690rpx;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
  color: #fff;
  font-size:30rpx;
  text-align: center;
  border-radius: 8rpx 8rpx;
}