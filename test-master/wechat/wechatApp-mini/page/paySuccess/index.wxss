page{
  background-color: #f0f0f0;
}

.text_list{
  margin-bottom: 40rpx;
}
.text_list .li{
  line-height: 80rpx;
}
.success{
  border-top: 30rpx solid #f0f0f0;
  border-bottom: 30rpx solid #f0f0f0;
  background-color:#fff;
  padding:40rpx 30rpx;
}
.money{
  color: #ff8502;
}
._border{
  border: 1rpx solid #ebebeb;
  border-radius: 15rpx;
  padding: 30rpx;
}
.success .top{
  text-align: center;
  padding: 0 30rpx 40rpx;
}
.success .top image{
  width: 120rpx;
  height: 120rpx;
  margin-top: 10rpx;
}

.success .top view{
  padding: 30rpx 0 0;
  font-size: 32rpx;
}

.success .menu_list{
  padding: 30rpx;
  border-bottom: 20rpx solid #f0f0f0;
  background-color:#fff;
}

.success .menu_list .t1{
  color: #999;
  width: 160rpx;
  display: inline-block;
}

.success .menu_list .t2{
  color: #666;
}

.success .title {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  color: rgb(51, 51, 51);
  font-size: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
  font-weight: 800;
}

.list-food .food_li {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: rgb(51, 51, 51);
  font-size: 26rpx;
  position: relative;
  background: #fff;
  border-bottom: 1px solid #f0f0f0;
}

.list-food .food_li .t2, .pay-money-box .t2 {
  position: absolute;
  right: 200rpx;
}

.list-food .food_li .t1 {
  color: rgb(142, 142, 142);
}

.success .foot{
  border-bottom: 20rpx solid #f0f0f0;
  font-size: 30rpx;
  text-align: right;
  padding-right: 30rpx;
  line-height: 90rpx;
  color: #333;
  background: #fff;
  font-weight: 800;
}

.success .foot text{
  /* color: #ff3d5e; */
}

.btn{
  margin-bottom: 10rpx;
  border-radius:10rpx;
  background-color: #fff;
}
.success_btn .li:nth-of-type(1) .btn{
  color: #fc2a3e;
  border:1rpx solid #fc2a3e;
}
.success_btn .li:nth-of-type(2) .btn{
  color: #ff8502;
  border:1rpx solid #ff8502;
  
}
.success_btn{
  display: flex;
}
.success_btn .li{
  flex: 1;
}