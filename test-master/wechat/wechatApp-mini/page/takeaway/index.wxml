
<view wx:if="{{headsculpture}}" class="anni {{show_menu_Name == 0 ?'':'show'}}"> <image src="{{headsculpture}}"></image> <view>{{menu_Name}} {{mark}}1</view></view>


<view class="header clearfix" wx:if="{{0}}">
  <view class='input_box'>
    <input type='text' value='{{queryList}}' bindinput='queryList' placeholder-class="phcolor" placeholder='请输入菜品名称或菜品编号'></input>
  </view>
</view>

<view class="header top_tip clearfix">
  <view class='li li1'>
    <text>满￥{{takeoutData.leastMoney}}</text>
    <text>￥{{takeoutData.distributMoney}}</text>
    <text>{{takeoutData.leastDistance}}km</text>
  </view>
  <view class='li'>
    <text>起送</text>
    <text>配送费</text>
    <text>距离</text>
  </view>
</view>

<view wx:if="{{showAlert}}" class="zz" catchtap='hidealert'></view>
<view wx:if="{{showAlert}}" class="dialog">
  <view class='span'catchtap='hidealert'><image src="https://lingju360.com/miniapp/resources/image/manage/index/food/xx.png" ></image></view>
  <view class="tit">{{showData.name}}</view>
  <view wx:if="{{showData.menuspecjson}}" class='p'>规格：</view>
  <view wx:if="{{showData.menuspecjson}}" class='ul'>
    <view catchtap='change_menuspecjson' data-index='{{index}}' class="{{index == showData.active_menuspecjson  ? 'active' : ''}}" wx:key="{{index}}" wx:for="{{showData.menuspecjson}}" >{{item.name}}</view>
  </view>
  <view wx:if="{{showData.flavour[0].length>0}}" class='p'>口味：</view>
  <view wx:if="{{showData.flavour[0].length>0}}" class='ul'>
    <view catchtap='change_flavour' data-index='{{index}}' class="{{index == showData.active_flavour  ? 'active' : ''}}" wx:key="{{index}}" wx:for="{{showData.flavour}}" >{{item}}</view>
  </view>
  <view class="btn2">
    <view class="n">￥{{showData.menuspecjson[showData.active_menuspecjson].price}}{{showData.menuspecjson ? "" : showData.price}}</view>
    <view catchtap='add_alert' class="b">选好了</view>

  </view>
</view>

<view class='toast' wx:if="{{!menudata.length}}">暂无数据...</view>

<view wx:if="{{menudata.length}}" class="scroll-main">
  <view class="zz" wx:if="{{1}}"></view>
  <view class="zz2"></view>
  <scroll-view scroll-y="true" class="scroll-view_1">
    <view wx:key="{{index}}" wx:for-items="{{menu}}" data-name="{{item.id}}" data-namea="{{item.name}}" class="{{item.name == '特价'  ? 'hot2' : ''}} +  {{item.name == '活动'  ? 'hot' : ''}} + {{activeCategoryId == item.id ? 'active' : ''}}" bindtap="tabClick">
      {{item.name}}
    </view>
  </scroll-view>

   <view id="menu_list"  class="right-scroll" >

    <view wx:if="{{menudata.length}}">
      <view class='activeCategoryId'>{{activeCategoryName}}</view>
      <view class="list">

        <view wx:for-items="{{menudata}}" data-id="{{item.id}}" wx:key="{{index}}" hidden='{{!(activeCategoryId == item.menuTypeId)}}' class="li">
          <view class="image_box" data-id="{{item.id}}" catchtap="imgbox">
            <image src="https://flashgoing.oss-cn-shenzhen.aliyuncs.com/{{item.picture}}" ></image>
          </view>

          <view class="more">
            <view class="t1">{{item.name}}</view>
            <view class="t2">No.{{item.menuNo}}</view>
            <view class="t3">
              <view class="n">￥</view>
              <view>{{item.price}}</view>
              <view class='t2'>/ {{item.unitName}}</view>
            </view>
          </view>

          <view class="jia" data-isNeedWeigh="{{item.isNeedWeigh }}" data-unit="{{item.unit }}" data-menuSpecJson="{{item.menuSpecJson }}" data-flavour="{{item.flavour}}" data-id="{{item.id}}" data-price="{{item.price}}" data-menuPicture="{{item.picture}}" data-name="{{item.name}}" catchtap="add" src=""></view>
          <view class="jia jian" hidden="{{!buymenu[item.id].num}}" data-name="{{item.name}}" data-id="{{item.id}}"  catchtap="minus"></view>
          <text class="jia num" hidden="{{!buymenu[item.id].num}}">{{ buymenu[item.id].num }}</text>


        </view>
      </view>





    </view>
  </view> 



