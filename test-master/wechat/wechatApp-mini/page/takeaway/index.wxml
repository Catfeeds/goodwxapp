<view class="footer" hidden="{{!menudata.length}}">
  <view class="num"  wx:if="{{num}}">{{num}}</view>
  <image wx:if="{{!num}}" src="https://lingju360.com/miniapp/resources/image/manage/index/food/shop.png"></image>
  <view catchtap="" wx:if="{{num}}" class="rmb">¥{{price}}</view>


  

  <view class='sub_box' wx:if="{{num}}" catchtap="settle">
    <view class="sub"  >选好了</view>
  </view>

  <view class='sub_box sub_box_2' catchtap='tomore'  wx:if="{{OrderMember}}">
    <view class="sub"  >已点菜</view>
  </view>

  <view class='sub_box no' wx:if="{{!num}}">
    <view class="sub"  >未选菜品</view>
  </view>



</view>



