<view class="addList">
  <view  wx:if="{{rangeAddressList.length>0}}" class='tit'>可选地址：</view>

  <view class='li' wx:for-items="{{rangeAddressList}}" wx:key="{{index}}">

    <view class='top' data-id='{{item.id}}' catchtap='address' >
      <text class='t1'>{{item.name}}</text>
      <text class='t2'>{{item.phone}}</text>
    </view>
    <view class='more' data-id='{{item.id}}' catchtap='address' >
      <text class='t2'> {{item.address}}{{item.addrDetail}}</text>
    </view>

    <view class='bottom'>


      <text data-isDefault='{{item.isDefault}}' data-index='{{index}}' data-id='{{item.id}}' catchtap='changedef'   class='def {{ item.isDefault == true ? "active":"" }}'>默认地址</text>

      <text catchtap='delAddress' class='del' data-isDefault='{{item.isDefault}}' data-id='{{item.id}}' >删除</text>

      <text catchtap='edit' class='edit' data-id='{{item.id}}' >编辑</text>

    </view>

  </view>

  <view wx:if="{{notRangeAddressList.length>0}}" class='tit tit2'>不在配送范围：</view>

  <view class='li' wx:for-items="{{notRangeAddressList}}" wx:key="{{index}}">

    <view class='top' data-id='{{item.id}}' catchtap='notaddress' >
      <text class='t1'>{{item.name}}</text>
      <text class='t2'>{{item.phone}}</text>
    </view>
    <view class='more' data-id='{{item.id}}' catchtap='notaddress' >
      <text class='t2'> {{item.address}}{{item.addrDetail}}</text>
    </view>

    <view class='bottom'>


      <text data-isDefault='{{item.isDefault}}' data-index='{{index}}' data-id='{{item.id}}' catchtap='changedef'   class='def {{ item.isDefault == true ? "active":"" }}'>默认地址</text>

      <text catchtap='delAddress' class='del' data-isDefault='{{item.isDefault}}' data-id='{{item.id}}' >删除</text>

      <text catchtap='edit' class='edit' data-id='{{item.id}}' >编辑</text>

    </view>

  </view>




</view>




<view catchtap='pageto' class="btn_bom">
  <view class="classname">新增地址</view>
</view>