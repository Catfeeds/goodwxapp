<view class="submit">


  <navigator wx:if="{{!activeAddressId}}" url='./addAdd/index'  >

    <view class='add'>

      <view class='top'>
        <text class='t1'>您还没有收获地址！</text>
        <text class='t2'>去添加</text>
      </view>
    </view>

  </navigator>

  <navigator wx:if="{{activeAddressId}}" url='./addList/index?active= {{addList.id}}'>

    <view class='add'>

      <image mode="scaleToFill" src="https://lingju360.natappvip.cc/miniapp/resources/image/add/a.png"></image>

      <view class='top'>
        <text class='t1'>收货人：{{addList.name}}</text>
        <text class='t2'>{{addList.phone}}</text>
      </view>
      <view class='more'>
        <text class='t1'>收货地址：</text>
        <text class='t2'>{{addList.address}}{{addList.addrDetail}}</text>
      </view>
    </view>

  </navigator>

  <view wx:if="{{0}}" class='timer block'>

    <view class='li'>
      <text>支付方式：</text>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array2}}">
        <view class="picker p3">
          {{array2[index]}}
        </view>
      </picker>
    </view>

    <view class='li'>
      <text>选择优惠券：</text>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array3}}">
        <view class="picker p3">
          {{array3[index]}}
        </view>
      </picker>
    </view>



  </view>



<view class="title">订单号：{{resdata.orderNo}}</view>


<view wx:if="{{0}}" class="neworderlist">



  <view class='_border'>
    <view class='menu_list'>

      <view class='goods_t_t clearfix'>
        <view>
          <text>商品</text>
        </view>
        <view>
          <text>单价</text>
          <text>数量</text>
          <text>金额</text>
        </view>
      </view>
      <!--商品列表  -->
      <view class='goodslist'>
        <view wx:for='{{orderMenuList}}' wx:key="{{index}}">
          <view class='li '>
            <view>
              <text>{{item.menuName}}{{item.flag == '7' ? '/退':''}}{{item.isFree ? '/赠':''}}</text>
            </view>
            <view>
              <text>￥{{item.price}}</text>
              <text>{{item.num}}</text>
              <text>￥{{item.isFree ? '0':(item.price * item.weight) }}</text>
            </view>
          </view>
          <view class='tast'>
            <view wx:if="{{item.menuSpecName}}">
              <text>规格：{{item.menuSpecName}}</text>
            </view>
            <view wx:if="{{item.flavour}}">
              <text>做法：{{item.flavour}}</text>
            </view>
          </view>

        </view>
      </view>

      <!-- <view class='total_m'>
        <view>合计金额：
          <text>￥{{totalOrder.billMoney}}</text>
        </view>
      </view> -->

    </view>
  </view>


</view>

  <view wx:if="{{1}}" class="list-food">
  <view class="food_li" >
      <text class="t1 f_l">菜名</text>
      <text class="t2 ">份数</text>
      <text class="t3 f_r">单价</text>
    </view>
    <view class="food_li" wx:key="{{item.id}}" wx:for-items="{{resdata.orderMenuList}}" >
      <text class="t1 f_l">{{item.menuName}} {{item.menuSpecName}} {{item.flavour}}</text>
      <text class="t2 ">{{item.weight}}份</text>
      <text class="t3 f_r">¥{{item.price}}</text>
      
    </view>

    <view class="food_li" >
      <text class="t1 f_l">餐盒费</text>
      <text class="t2 ">{{lunchBoxNum}}份</text>
      <text class="t3 f_r">¥{{lunchBoxMoney}}</text>
    </view>
    <view class="food_li" >
      <text class="t1 f_l">配送费</text>
      <text class="t2 "></text>
      <text class="t3 f_r">¥{{takeoutData.distributMoney}}</text>
    </view>

  </view>


  <view class="pay-money-box">
    <text class="t1 f_1">支付金额</text>
    <!-- <text class="t2">(数量{{num}})</text> -->
    <text class="t3 f_r">¥{{resdata.amount}}</text>
  </view>


  <view wx:if="{{0}}"  class="table">

  <view class="hander li">
      <text>额外消费内容</text>
      <text>单价</text>
      <text>份数</text>
  </view>


   <view class="body isflavour li" wx:key="{{item.index}}" data-id="{{item.id}}" wx:for="{{moreData}}">
      
      <view class='menu'>
        <text>{{item.name}}</text>
        <text>¥ {{item.price}}</text>
        <view>
          <image hidden='{{item.weight == 0 ? true: false}}'  class="jia" data-menuId="{{item.menuId}}" data-menuSpecId="{{item.menuSpecId}}" data-flavour="{{item.flavour}}" data-id="{{item.id}}" data-index="{{item.index}}" data-weight="{{item.weight}}" catchtap="del"  src="https://lingju360.com/miniapp/resources/image/new/jia.png"></image>
          <text  hidden='{{item.weight == 0 ? true: false}}'>{{item.num}}</text>
          <image class="jia" data-id="{{item.id}}" data-index="{{item.index}}" data-menuId="{{item.menuId}}" data-menuSpecId="{{item.menuSpecId}}" data-flavour="{{item.flavour}}"  data-isneedweigh="{{item.isNeedWeigh}}" data-weight="{{item.weight}}" catchtap="add"  src="https://lingju360.com/miniapp/resources/image/new/jian.png"></image>
        </view>
      </view>
      
  </view> 
</view> 

  <view wx:if="{{0}}" class="table">

    <view class="hander li">
      <text>消费内容</text>
      <text>单价</text>
      <text>总价</text>
      <text>数量</text>
    </view>

    <view class="body li" wx:key="{{item.id}}" data-id="{{item.id}}" wx:for-items="{{moreData}}">
      <text>{{item.name}}</text>
      <text>¥ {{item.price}}</text>
      <text>¥ {{item.totalPrice}}</text>
      <view>
        <image class="jia" data-id="{{item.id}}" catchtap="del" src="https://lingju360.natappvip.cc/miniapp/resources/image/new/jia.png"></image>
        <text>{{item.num}}</text>
        <image class="jia" data-id="{{item.id}}" catchtap="add" src="https://lingju360.natappvip.cc/miniapp/resources/image/new/jian.png"></image>
      </view>
    </view>


    <view class="foot">
      金额
      <text>¥ {{sumprice}}</text>
    </view>

  </view>

  <view class='timer block'>

    <view class='li'>
      <!-- <text>送达时间：</text> -->
