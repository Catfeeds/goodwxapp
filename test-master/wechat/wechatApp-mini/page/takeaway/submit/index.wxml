        <view class="picker">
          送达时间：{{time}}
        </view>
      </picker> -->
      <!-- <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker p3">
          {{array[index]}}
        </view>
      </picker> -->
    </view>

    <view class='li'>
      <input class="i1" placeholder="备注信息" bindinput="bindremark" value="{{remark}}" />
    </view>

  </view>
</view>






<view class="footer">
  <view class="num">实付:</view>
  <view class="rmb">¥{{resdata.amount}}</view>
  <view class="sub" catchtap="sub">立即支付</view>
</view>