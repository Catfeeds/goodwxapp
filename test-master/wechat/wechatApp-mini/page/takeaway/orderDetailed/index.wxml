<view class='orderDeta'>

<view class='top'>

      <view wx:if="{{orderTakeout.orderStatus == 0}}" class='t2 yellor'>待接单</view>
      <view wx:if="{{orderTakeout.orderStatus == 1 && orderTakeout.flowStatus == 0}}" class='t2 yellor'>已接单</view>
      <view wx:if="{{orderTakeout.flowStatus == 1 && orderTakeout.orderStatus == 1}}" class='t2 yellor'>待取货</view>
      <view wx:if="{{orderTakeout.flowStatus == 2 && orderTakeout.orderStatus == 1}}" class='t2 yellor'>配送中</view>
      <view wx:if="{{orderTakeout.flowStatus == 3 && orderTakeout.orderStatus == 2}}" class='t2 yellor'>已送达</view>

      
      
</view>

<view class='menuList'>

  <view class='titel'>
    {{orderTakeout.shopName}}
  </view>

  <view class='n_ul'>

    <!-- <view class='li hander' >
    
      <view class='t'>
        <text class='t1'>菜名</text>
        <text class='t2'>{{}}</text>
        <text class='t3'>份数</text>
        <text class='t4'>单价</text>
      </view>
    
    </view> -->

    <view class='li' wx:for="{{orderMenuList}}" wx:key="{{item.menuId}}">
    
      <view class='t'>
        <text class='t1'>{{item.menuName}} {{item.menuSpecName}} {{item.flavour}}</text>
        <text class='t2'>{{}}</text>
        <text class='t3'>X{{item.weight}}</text>
        <text class='t4'>¥{{item.price}}</text>
      </view>
    
    </view>

    <view class='li hander'>
      <view class='t'>
        <text class='t1'>餐盒</text>
        <text class='t4'>¥{{orderTakeout.lunchBoxMoney}}</text>
      </view>
    </view>

    <view class='li'>
      <view class='t'>
        <text class='t1'>配送费</text>
        <text class='t4'>¥{{orderTakeout.cusFee}}</text>
      </view>
    </view>
  
  </view>

  <view class='payMoney '>
    <text  style='color:#f42d40'>实付金额  ￥{{orderTakeout.actualMoney}}</text>
  </view>

</view>

<view class='menuList'>

  <view class='titel'>
    配送信息
  </view>

  <view class='n_ul n2_ul'>

    <view class='li'>
      <view class='t'>
        <text class='t6'>收货信息</text>
        <text class='t5'>{{addData.name}}  {{addData.phone}}</text>
      </view>
    </view>

    <view class='li'>
      <view class='t'>
        <text class='t7'>{{addData.province}}{{addData.city}}{{addData.area}}{{addData.address}}{{addData.addrDetail}}</text>
      </view>
    </view>
    
    <view class='li'>
      <view class='t'>
        <text class='t6'>配送方式</text>
        <text class='t5'>{{orderTakeout.deliveryType == 0 ? '达达配送' : '商家配送'}}</text>
      </view>
    </view>
  
  </view>

</view>

<view class='menuList'>

  <view class='titel'>
    订单信息
  </view>

  <view class='n_ul n2_ul'>

     <view class='li'>
      <view class='t'>
        <text class='t6'>下单编号</text>
        <text class='t5'>{{orderTakeout.orderNo}}</text>
        <view bindtap='Clip' class='Clip'>复制</view>
      </view>
    </view> 

    <view class='li'>
      <view class='t'>
        <text class='t6'>下单时间</text>
        <text class='t5'>{{orderTakeout.createdDate}}</text>
      </view>
    </view>

    <view class='li'>
      <view class='t'>
        <text class='t6'>支付方式</text>
        <text class='t5'>{{orderTakeout.payTypeStr}}</text>
      </view>
    </view>

    <view class='li' wx:if="{{orderTakeout.remark}}">
      <view class='t'>
        <text class='t6'>备注信息</text>
        <text class='t5' style='color:#ff8400'>{{orderTakeout.remark}}</text>
      </view>
    </view>
  
  </view>

</view>

</view> 