/* page/takeaway/orderDetailed/index.wxss */
page{
  background-color: #f0f0f0;
}
.orderDeta .top{
  background-color: #fff;
  text-align: center;
  padding: 50rpx;
  font-weight: 900;
  font-size: 40rpx;
}
.orderDeta .menuList{
  background: #fff;
  margin: 20rpx;
  border-radius: 8rpx;
}
.orderDeta .menuList .titel{
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 800;
  border-bottom: 1rpx solid #f0f0f0;
}
.orderDeta .menuList .n_ul{
  padding: 0 30rpx;
}
.orderDeta .menuList .n_ul .li .t{
  display: flex;
}
.orderDeta .menuList .n_ul .li.hander{
  border-top: 1rpx solid #f0f0f0;
}

.orderDeta .menuList .n_ul .li .t text{
  flex: 1;
  text-align: center;
  line-height: 80rpx;
}
.orderDeta .menuList .n_ul .li .t text.t1{
  flex: 2;
  text-align: left;
}
.orderDeta .menuList .n_ul .li .t text.t4{
  text-align: right;
}
.orderDeta .menuList .payMoney{
  border-top: 1rpx solid #f0f0f0;
  line-height: 100rpx;
  font-weight: 800;
  text-align: right;
  padding: 0 30rpx;
}

.orderDeta .menuList .n2_ul .li .t{
  display: block;
  position: relative;
}
.orderDeta .menuList .n2_ul .li .t .Clip{
  position: absolute;
  right: 0;
  top: 18rpx;
  padding: 6rpx 18rpx;
  color: #ff8400;
  border: 1rpx solid #ff8400;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.orderDeta .menuList .n2_ul .li .t .t6{
  margin-right: 30rpx;
  width: 130rpx;
  font-size: 28rpx;
  display: inline-block;
}
.orderDeta .menuList .n2_ul .li .t .t5{
  color: #666;
  font-size: 28rpx;
}
.orderDeta .menuList .n2_ul .li .t .t7{
  color: #666;
  font-size: 28rpx;
  padding-left: 160rpx;
  display: inline-block;
  text-align: left;
  line-height: 60rpx;
}