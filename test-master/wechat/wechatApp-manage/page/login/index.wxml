<view class="user">

    <view class='login'>
      <image src='https://lingju360.com/shop/resources/image/manage/index/logo.png'></image>
    </view>

    <view class="block">
        <view class="li">
            <input type='text' bindinput="inputUsername" placeholder-class="phcolor"  placeholder='请输入账号'></input>
        </view>
        <view class="li">
            <input password='true' confirm-type="登陆" bindconfirm="userLogin" bindinput="inputPassword" placeholder-class="phcolor" placeholder='请输入密码'></input>
        </view>
    </view>
    <view class="btn" catchtap='userLogin'>登录</view>
</view>