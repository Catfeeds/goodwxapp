page {
  height: auto;
  background-color: #fff;
}

.user .block {
  background-color: #fff;
  font-size: 30rpx;
  padding: 60rpx 80rpx 0;
}

.user .block .li {
  padding: 30rpx 0rpx 6rpx;
  border-bottom: 1rpx solid #ccc;
  font-size: 28rpx;
  color: #666;
  height: 100rpx;
  box-sizing: border-box;
  position: relative;
}

.user .block .li input{
  padding-left: 70rpx;
  margin-top: 8rpx;
  font-size: 30rpx;
  display:block;
height:1.4rem;
text-overflow:clip;
overflow:hidden;
white-space:nowrap;
font-family:UICTFontTextStyleBody;
min-height:1.4rem;

}


.user .block .li::after{
  content: '';
  position: absolute;
  background:url(https://lingju360.com/shop/resources/image/manage/index/icon_01.png) no-repeat center center;
  background-size: 36rpx 36rpx;
  left: 10rpx;
  top: 32rpx;
  height: 60rpx;
  width: 60rpx;
}

.user .block .li:nth-of-type(2):after{
  content: '';
  position: absolute;
  background:url(https://lingju360.com/shop/resources/image/manage/index/icon_03.png) no-repeat center center;
  background-size: 36rpx 36rpx;
 
}

.user .block .li text:nth-of-type(2) {
  float: right;
  color: #999;
}

.user .btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #5eb9f3;
  font-size: 30rpx;
  color: #fff;
  margin: 70rpx 80rpx;
  border-radius: 40rpx;
  margin-top: 60rpx;
  width: auto;
}

.login{
  height: 112rpx;
  margin: 130rpx auto 30rpx;
  text-align: center;
}

.login image{
  width: 340rpx;
  height: 112rpx;
}