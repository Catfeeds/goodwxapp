.payQrcode{
  padding-top: 80rpx;
}
.payQrcode .qrcode{
  width: 500rpx;
  height: 500rpx;
  background-color: #666;
  margin: 0 auto;

}

.payQrcode .qrcode image{
  width: 100%;
  height: 100%;
}

.payQrcode .price{
  margin-top: 0rpx;
  text-align: center;
  line-height: 130rpx;
  font-size: 50rpx;
  color: #ff8400;
  font-weight: 800;
}

.payQrcode .payButton{
  text-align: center;
  margin-top: 30rpx;
}

.payQrcode .payButton view{
  width: 312rpx;
  display: inline-block;
  border: 1rpx solid #ff8400;
  padding: 18rpx 0;
  border-radius: 10rpx;
  color: #ff8400;
}
.payQrcode .payButton view.active{
  color: #fff;
  background-color: #ff8400;
}
.payQrcode .payButton view:nth-of-type(1){
  margin-right: 30rpx;
}
.payQrcode .text{
  text-indent: 80rpx;
  padding: 40rpx;
  color: #666;
  font-size: 30rpx;
  line-height: 50rpx;
}