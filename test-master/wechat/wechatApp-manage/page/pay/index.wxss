
.t_t{
  width:690rpx;
  margin:0 auto;
}
.account_msg{
  font-size: 32rpx;
  height:85rpx;
  line-height:85rpx;
  letter-spacing: 1px;
	color: #333333;
  border-bottom:2rpx solid #ebebeb;
}
.account_money{
  padding:39rpx 40rpx;
  border-bottom:20rpx solid #f1f1f1;
  overflow: hidden;
}
.account_money view{
  height:89rpx;
  width:314rpx;
  border:2rpx solid #f1f1f1;
  border-radius: 8px;
  line-height:82rpx;
  text-align:left;
  color: #333333;
  background:#f1f1f1;
  position: relative;
}
.account_money_1 view {
  text-align: center !important;
}
.account_money_1 view text{
  margin-left: 0 !important;
}
.account_money view text{
  margin-left: 110rpx;
}
.account_money view image{
  position: absolute;
  left: 25rpx;
  top: 15rpx;
  width: 60rpx;
  height: 60rpx;
}
.account_money view:nth-child(2n-1){
  float:left;
}
.account_money view:nth-child(2n){
  float:right;
}
.account_money .account_money_msg{
   margin-bottom:0rpx !important;
}
.account_money view:nth-child(1){
  margin-bottom:30rpx;
}
.account_money view:nth-child(2){
  margin-bottom:30rpx;
}
.account_money .active{
  color: #5fbaf4;
  border:2rpx solid #5fbaf4;
  background:url(https://lingju360.com/miniapp/resources/image/pay/active.png) no-repeat right top #fff;
  background-size: 60rpx 60rpx;
}
.tax_items{
  padding:40rpx 40rpx 40rpx 40rpx;
  border-bottom:20rpx solid #f1f1f1;         
}
.tax_items view{
  height:80rpx;
  line-height: 80rpx;
  font-size:32rpx;
  color: #333333;
}
.tax_items view:nth-child(1){
   margin-bottom:20rpx;  
}
.tax_items view input{
  width:550rpx;
  height:80rpx;
  background-color: #f1f1f1;
  border-radius: 8px;
  float: right;
  padding-left:20rpx;
  font-size: 28rpx;
}
.pay_msg{
   height:100rpx;
   font-size: 28rpx;
   line-height:100rpx;
   width: 660rpx;
   margin: 0 auto;
   border-bottom:2rpx solid #ebebeb;
}
.pay_msg text{
  float: right;
  letter-spacing: 1px;
}
.pay_msg .money{
  color: #5fbaf4;
}
.get_money{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  background-color: #5ebbf5;
}
.bott{
  padding-bottom: 96rpx;
}