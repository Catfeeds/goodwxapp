.details_list{
  width: 100%;
  padding-bottom: 260rpx;
}
.details_list .li {
  position: relative;
  /* border-bottom: 20rpx solid #f0f0f0; */
  border-top: 20rpx solid #f0f0f0;
  overflow: hidden;
  font-size: 30rpx;
  background-color: #fff;
  display: flex;
  white-space: nowrap;
}
.details_list .li #content{
  height:140rpx;
  width: 750rpx;
  display: inline-block;
  float: left;
}
.details_list .li #food_back{
  height:140rpx;
  background:#F42712;
  border-left:30rpx solid #f0f0f0;
  width:150rpx;
  display: inline-block;
  line-height:140rpx;
  text-align: center;
  color:#fff;

}

.details_list .li .b_img {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 30rpx;
  top: 20rpx;
  border-radius: 15rpx;
}

.details_list .li .edit {
  position: absolute;
  width: 32rpx;
  height: 30rpx;
  right: -40rpx;
  top: 6rpx;
}

.details_list .li .text {
  position: absolute;
  left: 150rpx;
  top: 30rpx;
}

.details_list .li .text .t2 {
  position: relative;
  display: inline-block;
  color: #999;
}

.details_list .li .right_text {
  position: absolute;
  right: 30rpx;
  top: 15rpx;
}

.details_list .li .right_text .t1 {
  color: #ff5a11;
  margin-bottom: 15rpx;
}

.details_list .li .right_text .t2 {
  color: #fff;
  background-color: #ddd;
  text-align: center;
  padding: 0rpx 20rpx;
  border-radius: 30rpx;
  height: 40rpx;
  line-height:40rpx;
  font-size: 28rpx;
  min-width: 100rpx;
}
.details_list .li .right_text .t2.active{
  background-color: #ff5a11;
}

.details_btn {
  position: fixed;
  bottom:0rpx;
  background: #f0f0f0;
  padding: 30rpx;
  padding-bottom: 0rpx;
}

.details_btn .b {
  width:690rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background: #6dbff4;
  margin-bottom: 30rpx;
}

.details_btn .b.b1 {
  background-color: #41dc6a;
}
