<view class="index">
    <modal hidden="{{hiddenmodalput}}" title="{{menuname}}" confirm-text="确定" cancel-text="取消"  bindcancel="cancel"         bindconfirm="confirm">  
      <input type='text' value='{{value}}' bindinput='input_' placeholder="请输入价格"/>
    </modal>

  <view class="details_list">
      <scroll-view class="li" scroll-x="{{true}}" wx:for="{{orderMenuList}}"  scroll-into-view="{{toView}}" bindscrolltolower="scrollIt" id='{{index}}'>
        <view id="content">
          <image class="b_img" src='https://flashgoing.oss-cn-shenzhen.aliyuncs.com/{{item.menuPicture}}'/>
          <view class="text">
              <view class="t1">{{item.menuName}}{{item.flavour ? (' / '+item.flavour):''}}{{item.menuSpecName ? (' / '+item.menuSpecName):''}}</view>
              <view class="t2">{{item.weight}}{{item.unitName}}
                  <image wx:if="{{0}}" class="edit" src="https://lingju360.com/shop/resources/image/manage/index/edit.png" data-id='{{item.id}}' data-index='{{index}}' data-billsLogId='{{item.billsLogId}}' data-menuName='{{item.menuName}}'  catchtap='modalinput' />
              </view>
          </view>
          <view class="right_text">
              <view class="t1">￥{{item.price}}</view>
              <view class="t2  {{ !item.free ? 'active':'' }}" catchtap='{{item.free ? "":"serving"}}' data-index="{{index}}"  data-id='{{item.id}}'>{{item.free ?'已赠菜':'赠菜'}}</view>
          </view>
        </view>
        <view id="food_back" data-id='{{item.id}}' data-index="{{index}}"   catchtap='food_back'>
        退菜
        </view>
      </scroll-view>
  </view>

  <view class="details_btn">
      <!-- <view class="b b1" catchtap='to_takeoutpay'>继续点菜</view> -->
       <view catchtap='pay' class="b b2">结账</view> 
      <view class="b b1" catchtap='to_home'>返回首页</view>
  </view>
</view>