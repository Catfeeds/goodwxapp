<view wx:if="{{MiniDetail}}">

  <view class="order-detail-list-text">
    <view class="li">菜名
      <text class="ttt">单价</text>
      <text class="f_r">数量</text>
    </view>
  </view>

  <view class="order-detail-list-text">
    <view class="li" wx:for="{{MiniDetail}}" wx:key="{{index}}">{{item.menuName}}{{item.name}}{{item.flavour ? "/"+ item.flavour : "" }}{{item.menuSpecName ? "/"+item.menuSpecName : "" }} {{ (item.isFree == 1)&&(item.flag !== 7) ?"（赠菜）":""}} {{item.flag == 7?"（退菜）":""}}{{item.flag == 5?"（已取消）":""}}
      <text class="ttt">￥{{item.price}}</text>
      <text class="f_r">x{{item.weight}}</text>
    </view>
  </view>

  <view class="order-detail-pic">
  </view>

  <view class="order-detail-list-money">
    合计 ：
    <text class="f_r yell">￥{{allmoney}}</text>
  </view>


  <view catchtap='sub' class='btn'> 确认下单 </view>

</view>




