 <view class="index">

  <view class="details_list">
      <view class="li" wx:for="{{cateringBookMenus}}"  id='{{index}}'>
        <view id="content">
          <image class="b_img" src='https://flashgoing.oss-cn-shenzhen.aliyuncs.com/{{item.menuPicture}}'/>
          <view class="text">
              <view class="t1">{{item.menuName}}</view>
              <view class="t2">{{item.weight}}{{item.unitName}}</view>
          </view>
          <view class="right_text">
              <view class="t2">￥{{item.price}}</view>
            </view>
        </view>
      </view>
  </view>

  <view class="details_btn">
      <view class="b b1" catchtap='to_takeoutpay'>扫一扫</view>
      <view class="b b2">确认下单</view>
  </view>
</view> 


