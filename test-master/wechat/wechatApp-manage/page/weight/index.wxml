<view class="header">
  <view class='input_box'>
    <input type='text' bindinput='query' placeholder-class="phcolor" placeholder='请输入餐桌号码'></input>
  </view>
</view>



<view class='schedule menu_list'>
  <view class='li ' wx:for="{{List}}">
    <navigator url="{{'list/index?id=' + item.id }}" hover-class="none">
      <view class='img_box  {{item.noWeightedCount == 0 ? "no-all-weighted":"" }}'>{{item.deskNo}}</view>
      <view class='text'>
        <view class='t1'>消费 ¥
          <text>{{item.totalPrices}}</text>
        </view>
        <view class='t2'>点菜{{item.amount}}份/已上{{item.complete}}份</view>
      </view>
    </navigator>
  </view>

</view>