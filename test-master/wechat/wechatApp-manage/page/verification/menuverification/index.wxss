/* page/verification/menuverification/index.wxss */

.table-verification {
  background-color: #f0f0f0;
}

.tab-h {
  height: 88rpx;
  width: 100%;
  overflow: hidden;
  line-height: 88rpx;
  background: #fff;
  font-size: 26rpx;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  color: #999999;
  border-bottom: 30rpx solid #f2f2f2;
}

.tab-item {
  display: inline-block;
  width: 33.3333333%;
  text-align: center;
  
}

.tab-item.active {
  color: #5ebbf5;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 60%;
  left: 20%;
  background: #5ebbf5;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.tab-content {
  margin-top: 118rpx;
}

.scoll-h {
  height: 100%;
}

/*-------*/

.item-ans {
  padding: 27rpx 30rpx; 
  background-color: #fff;
}

.item-ans ._border{
  border: 1rpx solid #ebebeb;
  padding: 0 35rpx;
  border-radius: 15rpx;
}

.item-ans .table-message {
  display: flex;
  color: #333333;
  flex-direction: row;
  border-bottom: 1rpx dashed #e2e2e2;
  padding-bottom: 35rpx;
}

.item-ans .table-message .table-message-left {
  position: relative;
  width: 50%;
  font-size: 30rpx;
}

.item-ans .table-message .table-message-left .table-type {
  margin-top: 32rpx;
}

.item-ans .table-message .table-message-right {
  position: relative;
  width: 50%;
  height: 213rpx;
  line-height: 213rpx;
  text-align: right;
}

.item-ans .table-message .table-message-right .number .num {
  font-size: 26rpx;
}

.item-ans .table-message .table-message-right .number .jian {
  position: relative;
  display: inline-block;
  width: 21rpx;
  height: 34rpx;
  background: url('https://lingju360.com/shop/resources/image/verification/jian.png')no-repeat;
  background-size: 100% 100%;
  top: 8rpx;
  margin-left: 16rpx;
}

.item-ans .expense-money {
  font-size: 30rpx;
  color: #333333;
  padding: 20rpx 0rpx 30rpx 0rpx;
  text-align: right;
}

.item-ans .expense-money .money {
  display: inline-block;
  color: #5ebbf5;
}

