/*弹框*/

.warm-prompt {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 540rpx;
  height: 274rpx;
  margin-left: -270rpx;
  margin-top: -137rpx;
  border-radius: 20rpx;
  background-color: #fff;
  z-index: 101;
}

.warm-prompt .warm-prompt-font {
  font-size: 30rpx;
  text-align: center;
  margin-top: 50rpx;
}

.warm-prompt .dishes {
  text-align: center;
}

.warm-prompt .dishes text {
  position: relative;
  font-size: 26rpx;
  letter-spacing: 2rpx;
  top: 20rpx;
}

.warm-prompt .delete {
  width: 100%;
  height:95rpx;
  line-height:95rpx;
  margin-top: 50rpx;
  border-top: 1rpx solid #9ea9bc;
}

.warm-prompt .delete text {
  display: inline-block;
  height: 100%;
  font-size: 30rpx;
  color: #0e7dff;
  text-align: center;
}
.warm-prompt .delete .confirm{
  width: 50%
}

.warm-prompt .delete .cancel {
   width: 49.6%;
  border-right: 1rpx solid #9ea9bc;
}
