/* page/verification/alreadyMenuverification/index.wxss */

.orders-title {
  position: relative;
  font-size: 26rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #f4f4f4;
  padding-left: 25rpx;
}

.orders-detail {
  background-color: #ebe8eb;
}

.orders-title .orders-font {
  display: inline-block;
  width: 130rpx;
  position: absolute;
  right: 37rpx;
  font-size: 30rpx;
  color: #1c84fe;
  margin-left: 8rpx;
  text-align: right;
  border-top: 1rpx solid #ebebeb;
}

.orders-detail .orders-li {
  background-color: #fff;
  padding: 30rpx;
}

.orders-detail .orders-li .orders-number {
  display: flex;
  flex-direction: row;
  padding: 0rpx 0 23rpx 0;
  border-bottom: 1rpx dashed #e2e2e2;
}

.orders-detail .orders-li .orders-number .nickname-img {
  width: 123rpx;
  height: 99rpx;
  border-radius: 50%;
  overflow: hidden;
}

.orders-detail .orders-li .orders-number .nickname-img image {
  width: 100%;
  height: 100%;
}

.orders-detail .orders-li .orders-number .orders-number-right {
  width: 100%;
  padding-left: 18rpx;
}

.orders-detail .orders-li .orders-number .orders-number-right .wx-nickname {
  font-size: 27rpx;
  font-weight: bolder;
}

.orders-detail .orders-li .orders-number .orders-number-right .food-orders-number {
  font-size: 27rpx;
  margin-top: 25rpx;
}

.orders-detail .orders-li .orders-number .orders-number-right .food-orders-number checkbox-group {
  position: absolute;
  right: 66rpx;
  display: inline-block;
}

.orders-detail .orders-li .orders-number .orders-number-right .food-orders-number  .checkbox {
  zoom: 70%;
}

.orders-detail .orders-li .orders-main {
  margin: 0 auto;
}

.orders-detail .orders-li .orders-main .orders-nav {
  position: relative;
  border-bottom: 1rpx dashed #e2e2e2;
  padding: 24rpx 0 20rpx 0;
}

.orders-detail .orders-li .orders-main .orders-nav text {
  font-size: 26rpx;
}

.orders-detail .orders-li .orders-main .orders-nav .price {
  margin-left: 240rpx;
}

.orders-detail .orders-li .orders-main .orders-nav .number {
  margin-left: 150rpx;
}

.orders-detail .orders-li .foods-list-box {
  width: 100%;
  border-bottom: 1rpx dashed #e2e2e2;
}

.orders-detail .orders-li .orders-main .food-list {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main {
  line-height: 100%;
  margin-bottom: 18rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main text {
  font-size: 26rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main .menuName {
  display: inline-block;
  width: 275rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main .price {
  display: inline-block;
  width: 225rpx;
  position: relative;
  left: 15rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main .num {
  position: relative;
  left: -4rpx;
  display: inline-block;
  width: 63rpx;
  text-align: center;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main image {
  width: 38rpx;
  height: 37rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main .minus {
  position: relative;
  left: -4rpx;
  top: 8rpx;
}

.orders-detail .orders-li .orders-main .food-list .food-list-main .add {
  position: relative;
  left: -4rpx;
  top: 8rpx;
}

.orders-detail .orders-li .orders-main  .specification {
  font-size: 26rpx;
  padding-left: 25rpx;
}

.orders-detail .orders-li .orders-main  .specification text {
  font-size: 26rpx;
}

.orders-detail .orders-li .orders-main  .make {
  font-size: 26rpx;
  padding-left: 25rpx;
  margin-top: 14rpx;
}

.orders-detail .orders-li .orders-main  .make text {
  font-size: 26rpx;
}

.orders-detail .orders-li .total-price {
  text-align: right;
  margin-top: 15rpx;
  font-size: 26rpx;
}

.orders-detail .orders-li .total-price .total-price-font {
  font-size: 26rpx;
  font-weight: bolder;
}

.orders-detail .orders-li .total-price  .price {
  font-size: 26rpx;
  color: #e93e44;
}

.checkbox-label {
  position: absolute;
  right: 40rpx;
}

/*分割*/

.cutting-line {
  width: 100%;
  height: 14rpx;
  background-color: #ebe8eb;
}

/* //修改 */

._border{
  border: 1rpx solid #ebebeb; 
  padding: 30rpx;
  border-radius: 15rpx;
}