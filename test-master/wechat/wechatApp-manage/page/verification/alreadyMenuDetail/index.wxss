view,text{
  font-size:30rpx;
  color:#333333;
}
.clearfix::after{
  content:'';
  display: block;
  clear:both;
}
.al_detail{
  padding: 30rpx 30rpx;
  border-bottom: 20rpx solid #f0f0f0;
  border-top: 30rpx solid #f0f0f0;
}
.al_detail .al_detail_msg{
  border: solid 1px #ebebeb;
  border-radius: 8rpx 8rpx;
  padding:0 30rpx;
}
.al_detail .al_detail_msg>view:nth-child(1){
  padding:30rpx 0rpx;
}
.al_detail .al_detail_msg>view:nth-child(2){
  border-bottom:1px dotted #f0f0f0;
  border-top:1px dotted #f0f0f0;
}
.al_detail .al_detail_msg>view:nth-child(2) .msgs{
  padding:20rpx 0rpx;
}

.al_detail .al_detail_msg>view:nth-child(2) .msgs .t_ts{
  color: #ff8502;
}
.al_detail .al_detail_msg>view:nth-child(3){
  padding:30rpx 0;
}
.al_detail .al_detail_msg>view:nth-child(3) view{
  width: 149rpx;
	height: 60rpx;
  line-height: 60rpx;
  text-align: center;
	background-color: #5ebbf5;
	border-radius: 30rpx;
  font-size:35rpx;
  float: right;
  margin-right: 30rpx;
  color:#fff;
}


.neworderlist{
  padding: 0 30rpx 30rpx 30rpx;
}
.neworderlist ._border .menu_list .tag{
   padding: 30rpx 0rpx;
}
.neworderlist .pd{
  border-bottom: 1rpx dashed #e2e2e2;
  padding-bottom: 15rpx;
}
.neworderlist .lin{
  margin-top: 15rpx;
}
.neworderlist .red{
  color: #c20813;
}

.neworderlist .block .title{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx dashed #e2e2e2;
  font-weight: 800;
  
}
.neworderlist .block .title text{
font-size: 33rpx;
}
.neworderlist .block .title text:nth-of-type(1){
  margin-right: 10rpx;
}
.neworderlist .top_list .li{
  height: 70rpx;
  line-height: 70rpx;
}
.neworderlist .top_list .li text:nth-of-type(1){
  width: 160rpx;
  display: inline-block;
  text-align: left;
  position: relative;
}
.neworderlist .top_list .li text:nth-of-type(1).t_2{
   /* letter-spacing: 20rpx;  */
}
.neworderlist .top_list .li text:nth-of-type(1).t_3{
  /* letter-spacing: 10rpx; */
}
.neworderlist .top_list .li text:nth-of-type(1)::after{
  content: ':';
  position: absolute;
  right: 18rpx;
}
.neworderlist .lin{
  height:80rpx;
  padding-right:10rpx;
}
.neworderlist .lin .gopay{
  color:#fff;
  width:168rpx;
  padding: 10rpx 0;
  border-radius: 50rpx;
  text-align: center;
  font-size:26rpx;
  float: right;
  position: relative;
  background-color: #ff8502;
  top:6rpx;

}
.menu_list{
  padding:0;
  width:100%;
  margin:0;
}
.menu_list .tag{
  height:100rpx;
  line-height:100rpx;
  border-bottom:1rpx dashed #e2e2e2;
  font-weight:800;
  
}
.menu_list .tag text{
font-size: 33rpx;
}
.menu_list .goods_t_t{
  height:100rpx;
  line-height:100rpx;
  border-bottom:1rpx dashed #e2e2e2;
  
}
.menu_list .goods_t_t text{
  font-size: 32rpx;
}
.menu_list .goods_t_t >view{
  float: left;
}
.menu_list .goods_t_t >view:nth-child(1){
    width:30%;
    height: auto;
}
.menu_list .goods_t_t >view:nth-child(2){
    width:70%;
    display:flex;
    flex-direction: row;
    justify-content:space-between; 
}
.menu_list .goods_t_t >view:nth-child(2) text{
  min-width: 100rpx;
  text-align: left;
  display: inline-block;
}
.menu_list .goodslist{
   border-bottom:1px solid #f0f0f0;
   padding-bottom: 30rpx;
   z-index: 99;
}
.menu_list .goodslist >view .li{  
  padding:15rpx 0rpx 15rpx 0rpx;
  margin-bottom:0rpx;
  position: static;
  line-height: 40rpx;
}
.menu_list .goodslist >view .li>view{
  float:left;
}
.menu_list .goodslist >view .li>view:nth-child(1){
  width:30%;
  height: auto;
}
.menu_list .goodslist >view .li>view:nth-child(2){
  width:70%;
  display:flex;
  flex-direction: row;
  justify-content:space-between; 
}
.menu_list .goodslist >view .li>view:nth-child(2) text{
  min-width: 100rpx;
  text-align: left;
  display: inline-block;
}
.menu_list .goodslist >view .tast{
   padding-left:30rpx;
}
.menu_list .total_m{
  height: 80rpx;
  font-size: 30rpx;
  padding: 0rpx 30rpx;
}
.menu_list .total_m >view{
  width:100%;
  text-align: right;
  line-height: 80rpx;
}
.menu_list .total_m >view text{
  color:#ff8502;
}