
<view class="header">
  <view class='input_box'>
    <input type='text' placeholder-class="phcolor" placeholder='请输入餐桌号码' bindinput='queryList'></input> 
  </view>
</view>



<view class='schedule menu_list'>

  <view class='li ' wx:for="{{listData}}" wx:for-index="idx" wx:key="{{index}}">
  
    <view class='menu_list_box'  id="{{item.id}}" data-deskNo='{{item.deskNo}}' catchtap='desk_detail'>
    <view class='img_box'>{{item.deskNo}}</view>
    <view class='text'>
      <view class='t1'>消费 ¥ <text>{{item.totalPrices}}</text></view>
      <view class='t2'>点菜{{item.amount}}份/已上{{item.amount}}份</view>
    </view>
    </view>

    <view class=' rgith middle_cont' catchtap="changTable" id="{{item.id}}">换桌</view>
    <view class=' rgith add'>{{item.location}}</view>
  
  </view>

</view>