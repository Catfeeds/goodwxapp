/* pages/sp_details/sp_details.wxss */
.banner {height: 750rpx;width: 750rpx;}
.banner wx-image {width: 100%;height: 100%;}

.sp_details {padding: 0 10px;margin-bottom: 3rem;}
.sp_details .sp_name {font-weight: bold;font-size: 28rpx;color: #333;line-height: 38rpx;}
.sp_details .info {display: flex;font-size: 28rpx;border-bottom: 0.5rpx solid #ccc;padding: 0.5rem 0;}
.sp_details .info .price {flex: 1;}
.sp_details .info .price .p1 {color: #e22d30;}
.sp_details .info .price .p2 {font-size: 0.7rem;text-decoration: line-through;margin-left: 5px;color: #909090;}
.sp_details .info .xiaoliang {color: #909090;}
.sp_details .info.cuxiao wx-text {background-color: red;color: #fff;text-align: center;border-radius: 3px;}
.sp_details .info.j_but {display: flex;align-items: center;}
.sp_details .info.j_but .number_but {display: flex;align-items: center;border: 0.5rpx solid #ccc;}
.delete, .add {width: 100rpx;text-align: center;font-size: 1rem;height: 50rpx;line-height: 50rpx;}
.add {color: red;}
.number_but wx-input {border-left: 0.5rpx solid #ccc;border-right: 0.5rpx solid #ccc;text-align: center;height: 50rpx;line-height: 50rpx;width: 100rpx;}
.sp_details .info .zongjia {text-align: center;width: 100%;}
.sp_details .info .zongjia text {color: red;}
.sp_details .detail_tab {display: flex;border-bottom: 0.5rpx solid #ccc;
font-size: 28rpx;}
.sp_details .detail_tab .sp_js, .sp_pj {width: 50%;text-align: center;
padding: 0.5rem 0;}
.sp_details .detail_tab .sp_pj {border-left: 0.5rpx solid #ccc;}
.sp_details .js_img {margin-top: 0.5rem;}
.sp_details .js_img wx-image {width: 100%;}


.buy{position:fixed;bottom:0;left:0;right:0;background-color:#fff;z-index:10;display:flex;align-items:center;height:90rpx}
.min_but{width:106rpx;font-size:24rpx;text-align:center;color:#909090;position:relative}
.min_but wx-image{width:1.3rem; margin-bottom: -10rpx}
.big_but{width:325rpx;height:90rpx;line-height:90rpx;text-align:center;color:#fff;font-size:32rpx}
.sp_cart{background-color:#ff9600}
.sp_buy{background-color:#e4393c}
.cart_number{position:absolute;right:15rpx;top:-5rpx;height:35rpx;line-height:35rpx;border-radius:35rpx;background:#e4393c;color:#fff;font-size:24rpx; padding:0 10rpx}
.cart_number.on{-webkit-animation:to_cart .3s ease;animation:to_cart .3s ease}

.m_mask{position:fixed;top:0;left:0;width:100%;z-index:10;height:100%;background:rgba(0,0,0,.7)}
.lj_pay{position:fixed;bottom:0;left:0;right:0;z-index:20;background-color:#f2f2f2}
.pay_top{display:flex;align-items:center;background-color:#fff;padding:10px}
.pay_title{flex:1;text-align:center;color:#333;font-size:32rpx}
.pay_close wx-image{width:38rpx;height:38rpx}
.pay_address{ font-size: 0}
.caidai{ width: 100%}
.pay_address .address_info{ display: flex; align-items: center; padding: 30rpx 30rpx;background-color: #fff}
.pay_address .address_info .icon wx-image{ width: 45rpx}
.pay_address .address_info .ad_tx{ margin-left: 20rpx; flex: 1}
.pay_address .address_info .ad_tx .ad_name{ font-size: 32rpx;  color: #2c2f43;}
.pay_address .address_info .ad_tx .ad_desp{ font-size: 28rpx; margin-top: 10rpx; color: #9b9b9b}
.pay_address .address_info .jt wx-image{ width: 25rpx; height: 25rpx}

.shop_info{flex:1;display:flex;background-color:#fff;margin-top:.5rem;padding:15rpx 20rpx}
.pay_goods .sp_img wx-image{width:145rpx}
.sp_tx{margin-left:10rpx;margin-right:15rpx;margin-top:10rpx;position:relative;width:100%}
.pay_sp_name{font-size:26rpx}
.sp_number{font-size:26rpx;display:flex;align-items:center;margin-top:15rpx}
.number_but{display:flex;align-items:center;border:1px solid #ccc}
.add,.delete{width:85rpx;text-align:center;font-size:1rem;height:20px;line-height:20px}
.add{color:red}
.number_but wx-input{border-left:1px solid #ccc;border-right:1px solid #ccc;text-align:center;height:20px;width:90rpx}
.sp_price{position:absolute;right:0;bottom:20rpx;text-align:right}.pay_price{font-size:26rpx;color:#757575;text-decoration:line-through;text-align:right}
.sale_price{font-size:30rpx;color:red;text-align:right}

.pay_but{text-align:center;background-color:#c81616;color:#fff;font-size:29rpx;padding:25rpx 0}
