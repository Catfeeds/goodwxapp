<!--pages/cart/cart.wxml-->
<view class="container">

<!--收货地址-->
    <view class="pay_address" bindtap="pay_Address">
        <view class='address_info'>
            <view class='icon'>
                   <image src="../../image/lbs.png" mode='widthFix'></image>
            </view>
            <view class='ad_tx'>
              <view class='ad_name'>收货人：王忠云</view>
              <view class='ad_desp'>收货地址：山东济南历下区华强国际中心A座21</view>
            </view>
            <view class='jt'>
              <image src="../../image/right.png"></image>
            </view>
        </view>
    </view>
<!--收货地址-->

<!--购物车列表-->
<view class="cart_list">

  <view class="shop">
     <view class="shop_check">
    <!-- wx:if 是否选择显示不同图标 circle-->
     <icon wx:if="{{item.selected}}" type="success" color="#e51c23" size="20" bindtap="selectList" data-index="{{index}}"></icon>
     <icon wx:else  type="success" color="#cccccc" size="20" bindtap="selectList" data-index="{{index}}" ></icon>

     </view>
     <view class="shop_info">
        <view class="sp_img">
           <image src="../../image/sp.jpeg" ></image>
        </view>
        <view class="sp_tx">
          <view class="sp_name">商品名称商品名称商品名称</view>
          <view class="sp_number">数量：
            <view class="number_but">
                <view class="delete" bindtap="minusCount" data-index="{{index}}" data-cartid="{{item.CartId}}">-</view>  
                <input type="text" value="0"/>
                <view class="add" bindtap="addCount" data-index="{{index}}" data-cartid="{{item.CartId}}">+</view>
            </view>
          </view>
        </view>
     </view>
     <view class="sp_right">
        <button bindtap="deleteList" data-index="{{index}}" data-cartid="{{item.CartId}}">删 除</button>
        <view class="price">￥599</view>
        <view class="sale_price">￥499</view>
     </view>
  </view>


</view>
<!--购物车列表-->
<!-- 底部操作栏 -->
<view class="foot">
  <view class="foot_left">
     <icon wx:if="{{selectAllStatus}}"  type="success" color="#e51c23" size="20" bindtap="selectAll"></icon>
     <icon wx:else  type="success" color="#cccccc" size="20" bindtap="selectAll"></icon>
     <view class="qx_tx">全选</view>
  </view>
  <view class="foot_center">
    <view class="totalPrice">总计:<text>￥{{totalPrice}}</text></view>
    <view class="youhui">全场包邮，已优惠￥0.00</view>
  </view>
  <view class="foot_right" bindtap="gobuy_cart">去结算<text>({{s_sp}}件)</text></view>
</view>
<!-- 底部操作栏 -->
</view>
