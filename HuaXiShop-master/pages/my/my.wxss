/* pages/my/my.wxss */
.container {
    background-color: #F2f2f2;
}

.userinfo{ display: flex; align-items: center; background-color: #c81616; margin-top: 10rpx; padding:40rpx}
.userinfo wx-image{ width: 120rpx; height: 120rpx; border-radius: 50%}
.u_tx{ color: #fff; margin-left: 20rpx}
.u_name{ font-size: 32rpx}
.u_number{ font-size: 29rpx; margin-top: 20rpx}

.info_list{ margin-top: 20rpx;border-top: 0.5rpx solid #bbbbbb;}
.weui_cell{
    position: relative;
    display: flex;
    padding: 12rpx 12rpx 12rpx 25rpx;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 0.5rpx solid #bbbbbb;
    background-color: #fff;
}
.weui_cell_hd{
  display: inline-block;
  width: 60rpx;
  margin-right: 15rpx;
}
.weui_cell_hd image{
  width: 100%;
  height: 60rpx;
  vertical-align: -2px;
}
.weui_cell_bd{
  display: inline-block;
}
.weui_cell_bd_p{
  font-size: 29rpx;
}

.with_arrow{
  position: absolute;
  top: 25rpx;
  right: 25rpx;
}

.with_arrow wx-image{
width: 28rpx;
height: 28rpx;
}
.cell2{ margin-top: .5rem;border-top: 0.5rpx solid #bbbbbb;}
.weui_phone{ position: absolute;
  top: 15px;
  right: 15px; color: #c81616; font-size: 29rpx}
