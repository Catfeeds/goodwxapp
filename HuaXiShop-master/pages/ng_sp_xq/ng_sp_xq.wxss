}

.sp_img wx-image {
  width: 145rpx;
}

.sp_tx {
  margin-left: 10rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  position: relative;
  width: 100%;
}

.pay_sp_name {
  font-size: 26rpx;
}

.sp_number {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.number_but {
  display: flex;
  align-items: center;
  border: 1px solid #ccc;
}

.delete, .add {
  width: 85rpx;
