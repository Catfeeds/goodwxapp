  margin-left: 16rpx;
  width: 144rpx;
  height: 144rpx;
  opacity: 1;
  border-radius: 5%;
}

.qunzhuIfon .nameview {
  font-size: 12.5pt;
  margin: 20rpx 10rpx;
  color: #fff;
  flex: 1;
}

.container {
  background-color: #fff;
}

.sp_details {
  padding: 0 10px;
  margin-bottom: 3rem;
}

.banner {
  height: 750rpx;
  width: 750rpx;
}

.banner wx-image {
  width: 100%;
  height: 100%;
}

.sp_name {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  line-height: 38rpx;
}

.info {
  display: flex;
  font-size: 28rpx;
  border-bottom: 0.5rpx solid #ccc;
  padding: 0.5rem 0;
}

.buyerinfo {
  flex-direction: row;
  padding: 0.5rem 0;
  border-bottom: 0.5rpx solid #ccc;
}

.buyerinfo image {
  width: 81rpx;
  height: 81rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  border: 5rpx;
}

.price {
  flex: 1;
}

.xiaoliang {
  color: #909090;
}

.cuxiao wx-text {
  background-color: red;
  color: #fff;
  text-align: center;
  border-radius: 3px;
}

.j_but {
  display: flex;
  align-items: center;
}

.number_but {
  display: flex;
  align-items: center;
  border: 0.5rpx solid #ccc;
}

.delete, .add {
  width: 100rpx;
  text-align: center;
  font-size: 1rem;
  height: 50rpx;
  line-height: 50rpx;
}

.number_but wx-input {
  border-left: 0.5rpx solid #ccc;
  border-right: 0.5rpx solid #ccc;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  width: 100rpx;
}

.zongjia {
  text-align: center;
  width: 100%;
}

.zongjia text {
  color: red;
}

.detail_tab {
  display: flex;
  border-bottom: 0.5rpx solid #ccc;
  font-size: 28rpx;
}

.sp_js, .sp_pj {
  width: 50%;
  text-align: center;
  padding: 0.5rem 0;
}

.sp_pj {
  border-left: 0.5rpx solid #ccc;
}

.js_img {
  margin-top: 0.5rem;
}

.js_img wx-image {
  width: 100%;
}

.pj_tx {
  margin-top: 0.5rem;
  display: none;
}

.pinglun {
  border: 0.5rpx solid #ccc;
  height: 4rem;
  width: 100%;
}

.pj_tx wx-button {
  width: 3.5rem;
  font-size: 0.8rem;
  height: 1.5rem;
  line-height: 1.5rem;
  float: left;
  margin-top: 0.5rem;
}

.buy {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  z-index: 10;
  display: flex;
  align-items: center;
  height: 90rpx;
}

.home_btn {
  width: 106rpx;
  font-size: 24rpx;
  text-align: center;
  color: #909090;
  position: relative;
}

.home_btn wx-image {
  width: 45rpx;
  height: 45rpx;
}

.big_but {
  width: 325rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background: #e43a3d;
}

.sp_cart {
  background-color: #ff9600;
}

.cart_number {
  position: absolute;
  right: 15rpx;
  top: -5rpx;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  border-radius: 50%;
  background: #e4393c;
  color: #fff;
  font-size: 24rpx;
}

.cart_number.on {
  -webkit-animation: to_cart 0.3s ease;
  animation: to_cart 0.3s ease;
}

@-webkit-keyframes to_cart {
  0% {
    -webkit-transform: scale(1.5);
  }
}

@keyframes to_cart {
  0% {
    transform: scale(1.5);
  }
}

.m_mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}

.lj_pay {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 20;
  background-color: #f2f2f2;
}

.pay_top {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 10px;
}

.pay_title {
  flex: 1;
  text-align: center;
  color: #333;
  font-size: 32rpx;
}

.pay_close wx-image {
  width: 38rpx;
