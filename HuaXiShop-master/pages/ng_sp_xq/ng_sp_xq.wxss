  display: flex;
  align-items: center;
  padding: 30rpx 30rpx;
  background-color: #fff;
}

.pay_address .address_info .icon wx-image {
  width: 45rpx;
}

.pay_address .address_info .ad_tx {
  margin-left: 20rpx;
  flex: 1;
}

.pay_address .address_info .ad_tx .ad_name {
  font-size: 32rpx;
  color: #2c2f43;
}

.pay_address .address_info .ad_tx .ad_desp {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #9b9b9b;
}

.pay_address .address_info .jt wx-image {
  width: 25rpx;
