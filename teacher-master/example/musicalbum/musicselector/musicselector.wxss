.xm-class-item{

 margin:15px 0;
background-color:#fff;
border-radius:2px;
overflow:hidden;
font-size:15px;

}



.xm-class-cell{
  padding:12px 10px;
position:relative;
display:-webkit-box;
display:-webkit-flex;
display:flex;
-webkit-box-align:center;
-webkit-align-items:center;
align-items:center;

}

.xm-class-cell:first-child:before {
display:none;

}



.xm-class-cell:before {
content:" ";
position:absolute;
left:0;
top:0;
right:15px;
height:1px;
border-top:1rpx solid #e8edf7;
color:#d9d9d9;
left:15px;

}

 .xm-class-title {
  font-size:17px;
}  


page {
background-color:white;
font-size:16px;
font-family:-apple-system-font, Helvetica Neue, Helvetica, sans-serif;

}

