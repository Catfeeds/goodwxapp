<view class='help'>
<button class='kefu-btn' open-type='contact'><view class='xm-kefu'></view></button>
</view>
<form bindsubmit="submit" report-submit="true">

<view wx:if="{{!show_associate}}" class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
    <view  wx:if="{{loaded}}" class="page__bd">
      <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
     <!-- =========角色的开始 -->
      <view class="weui-cells__title" style='font-size:18px;color:#4c4c4c;'>设置您在<open-data type="groupName" open-gid="{{gid}}"></open-data>的身份信息</view>
      <view class="weui-cells__title">角色选择</view>
      <view class="weui-cells weui-cells_after-title">
        <radio-group bindchange="roleChange">
          <label class="weui-cell weui-check__label" wx:for="{{roleItems}}" wx:key="value">
            <radio class="weui-check" value="{{item.value}}" color='#1e90ff' checked="{{item.checked}}" />

            <view class="weui-cell__bd">{{item.name}}</view>
            <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
              <icon class="weui-icon-radio" color='#1e90ff' type="success_no_circle" size="16"></icon>
            </view>
          </label>
        </radio-group>
      </view>

     <!-- =========角色的结束 -->
      

       <!-- =========家长的开始 -->
      <view class="weui-cells__title"  wx:if="{{roleItems[0].checked}}">我是学生家长</view>
      <view class="weui-cells weui-cells_after-title"  wx:if="{{roleItems[0].checked}}">
      

       <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">学生姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="name" placeholder="您家小孩真实名字"/>
                </view>
            </view>

          <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">电话号码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type='number' name="phone" placeholder="请输入您的电话号码"/>
                </view>
            </view>



        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">关系</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindRelationChange" value="{{relationIndex}}" color='#1e90ff' range="{{relationships}}">
              <view class="weui-select weui-select_in-select-after">{{relationships[relationIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>
      <!-- =========家长的结束 -->


       <!-- =========老师的开始 -->
      <view class="weui-cells__title"  wx:if="{{roleItems[1].checked}}">我是老师</view>
      <view class="weui-cells weui-cells_after-title"  wx:if="{{roleItems[1].checked}}">
           <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">老师姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="teacher_name" placeholder="请输入您的姓名"/>
                </view>
            </view>


           <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">电话号码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" type='number' name="teacher_phone" placeholder="请输入您的电话号码"/>
                </view>
            </view>

        <view class="weui-cell weui-cell_select">
          <view class="weui-cell__hd weui-cell__hd_in-select-after">
            <view class="weui-label">所教科目</view>
          </view>
          <view class="weui-cell__bd">
            <picker bindchange="bindSubjectChange" color='#1e90ff' value="{{subjectIndex}}" range="{{subjects}}">
              <view class="weui-select weui-select_in-select-after">{{subjects[subjectIndex]}}</view>
            </picker>
          </view>
        </view>
      </view>
      <!-- =========家长的结束 -->

      <view class="weui-btn-area">

          <button class="weui-btn btn_save_info" type="primary" color='#1e90ff' style='background-color:#1e90ff;' formType="submit" loading="{{btn_loadding}}" disabled="{{btn_disabled}}">  保存身份信息</button>
      </view>
    </view>
 

</view>











<view wx:else class="page" style='height:{{winHeight}}px;background-color:#fff;'>


  <view class="weui-cells__title" style='padding-left:30px;padding-top:20px;padding-bottom:20px;padding-right:30px;'>
    <view style='padding:5px' class="xm_auth_tip">微信名{{member.wx_name}}、电话号码是{{member.phone}}的用户已经身份配置为{{member.name}}的家长</view>
    <view  style='padding:5px' class="xm_auth_tip_1">如你和{{member.wx_name}}都是{{member.name}}的家长,请点击关联，后面所有的操作都是共享的</view>
    <view  style='padding:5px' class="xm_auth_tip_2">如果班级学生存在重名情况，且你和"{{member.wx_name}}"没有任何关系，则点击不关联</view> </view>


  <view class='category-flex' style='padding-left:40px;padding-right:40px;'>

    <view class='category-cells'>
      <!-- <text class="category-cell-image-2"> </text> -->
      <image style="height: 70px;width: 70px;border-radius:10px" src='{{currentUser.wx_avatar_url}}'></image>
      <view class='category-cell-title'>
        {{currentUser.wxname}}
      </view>
    </view>
    <view class='category-cells'>
      <view class='category-cell-title'>
        关联
      </view>
      <text class="category-cell-image-4"> </text>

    </view>


    <view class='category-cells'>
      <!-- <text class="category-cell-image-2"> </text> -->
      <image style="height: 70px;width: 70px;border-radius:10px" src='{{member.wx_avatar}}' ></image>
      <view class='category-cell-title'>
        {{member.wx_name}}
      </view>
    </view>


  </view>
   <view class="weui-btn-area">
            <button class="weui-btn" loading="{{button_loadding}}" type="primary" disabled='{{button_disable}}' style='background-color:#1e90ff;width:80%' bindtap='associate'>进行关联</button>
        </view>
          <view class="weui-btn-area">
            <button class="weui-btn" loading="{{button_loadding}}" type="default" disabled='{{button_disable}}' style='width:80%' from="resubmit" formType="submit">不关联</button>
        </view> 

</view>

 </form>