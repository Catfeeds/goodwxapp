
<view>
  <view>
    <scroll-view scroll-y="true" class="top container" style="height:{{winHeight}}px" lower-threshold="200" bindscrolltolower="lower">
      <block wx:for="{{msgs}}">
        <view class="feed-item">
          <view class="feed-source">
            <view class="avatar" bindtap="goOther" data-poster_id="{{item.from_user_id}}"  style=" display: flex;justify-content: space-between;">
              <image src="{{item.rate.from_avatar}}"></image>
              <view style=" display: flex;flex-direction: column;justify-content: space-between;">
                <text>{{item.rate.from_name}}老师</text>
                <text style="font-size:24rpx;color:#afaaaa">{{item.rate.create_at}}</text>
              </view>
            </view>
            <view class="feed-time" bindtap="show_comment_input" data-id="{{item._id}}">
              <text class="item-more" style="color:#287FAF;"></text>
            </view>
          </view>
          <view class="feed-content">
            <view class="answer-body">
              <view data-id="1">
                  <text class="answer-txt">给本次作业{{item.rate.value}}颗星</text>
              </view>
            </view>
          </view>
          <view class="text-content">
            <navigator url="../notify/notify?_id={{item.notify}}&cid={{item.cls}}">
              <text>{{item.feedback_text}}</text>
              <view class="question">
                <block wx:for="{{item.feedback_photo}}" wx:for-item="it">
                  <image wx:if="{{item.feedback_photo.length==1}}" mode="widthFix" style="width:50%;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                  <image wx:elif="{{item.feedback_photo.length==2}}" mode="widthFix" style="width:27%;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                  <image wx:elif="{{item.feedback_photo.length==3}}" mode="widthFix" style="width:27%;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                  <image wx:elif="{{item.feedback_photo.length==4}}" mode="widthFix" style="width:27%;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                </block>
              </view>
              <view wx:if="{{item.post.video}}">
                <view class="question">
                  <image wx:if="{{item.video_thumb}}" mode="widthFix" style="width:50%;" data-imgUrl="{{item.post.video_thumb}}" src="{{item.post.video_thumb}}"></image>
                  <image src="/image/play.png" mode="widthFix" style="width:40px;position:absolute;top:35%;left:18%;;background-position: center center; background-repeat: no-repeat; " />
                </view>
              </view>

              
               <view wx:if="{{item.feedback_record}}">
                <view class="question">
                  <view  class='xm-record-play-btn' hover-class='xm-record-play-btn-hover'>
                     <image  style='height:15px;width:15px;' src='../../image/record-msg.png'></image>
                      </view>
                </view>
              </view>
            </navigator>
          </view>
          
        </view>
      </block>
         <view wx:if="{{no_data}}" class="empty"> o(╯□╰)o,还没有内容</view>
        <view wx:elif="{{no_more}}" class="no_more_loading">没有更多了</view>
        <view wx:else class="no_more_loading">数据加载中...</view>
    </scroll-view>
  </view>
  <view class="fix_label" catchtap="hideFix" style="{{setshow==0?'display:none':''}}">
    <view class="fix_con" catchtap="stop">
      <view class="fix_header">
        <text>回复一下</text>
      </view>
      <view class="weui-cells" style="margin-left: 30px;margin-right: 30px;border: 1px solid #E8E8E8;">
        <textarea placeholder="回复一下" value="{{content}}" bindblur="textAreaBlur" />
      </view>
      <view class="fix_footer">
        <view class="fix_footer_btn" hover="true" hover-class="fix_footer_btn_hover" catchtap="hidde_comment">
          <text>取消</text>
        </view>
        <view class="fix_footer_btn" hover="true" catchtap="send" hover-class="fix_footer_btn_hover">
          <text style="color:#4876FF">发送</text>
        </view>
      </view>

      <!-- <button class="fix_btn"  catchtap="hidde_comment"  hover-class="fix_btn_hover">提交</button>-->
    </view>
  </view>
</view>