.xm-homework-cell {
  padding: 6px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.xm-homework-cell:first-child:before {
  display: none;
}

.xm-homework-cell:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 15px;
  height: 1px;
  border-top: 1rpx solid #e8edf7;
  color: #d9d9d9;
  left: 15px;
}

