  <image src='../../image/loadding.gif' mode='aspectFit' style='width:150px;background-color: white;margin-top:100px'></image>
</view> -->
<view class="page" wx:if="{{loaded}}">

  <view>
    <view class="main-profile-flex">
      <view style=" flex: 1;display:flex;align-items: center;">
        <view>
          <image style='height:50px;width:50px' src="{{user.wx_avatar_url}}" />
        </view>
        <view style='padding-left:10px'>{{user.nickname}}老师</view>
      </view>
      <view style=" flex: 1; display: flex;justify-content: flex-end;" bindtap="navigate" id="my">
        <text class="main-profile-more"> </text>
      </view>
    </view>

    <view class='category-flex'>
      <view class='category-cells' hover-class="btn_hover" bindtap="navigate" id="msgs" style="position: relative;">
        <text class="category-cell-image-2"> </text>
        <view wx:if="{{all_msgs_count>0}}" class='weui-badge' style="position: absolute;top: 1em;right:2.5em;">{{all_msgs_count}}</view>
        <view class='category-cell-title'>
          消息
        </view>
      </view>
      <view class='category-cells' hover-class="btn_hover" bindtap="navigate" id="add">
        <text class="category-cell-image-1"></text>
        <view class='category-cell-title'>
          我要发布
        </view>
      </view>

      <view class='category-cells' hover-class="btn_hover" bindtap="navigate" id="class">
        <text class="category-cell-image-3"> </text>
        <view class='category-cell-title'>
          我的班级
        </view>
      </view>



      <view class='category-cells' hover-class="btn_hover" bindtap="navigate" id="more">
        <text class="category-cell-image-4"> </text>
        <view class='category-cell-title'>
          更多
        </view>
      </view>
    </view>



    <!-- border-bottom:10rpx solid #F8F8F8; -->
    <view class="weui-panel__bd" style='background-color:white;margin-top:15px' wx:if="{{teacher_notice.length>0}}">
      <swiper autoplay="false" vertical="true" interval="4000" duration="300" style='height:43px' indicator-active-color="#1e90ff">
        <block wx:for="{{teacher_notice}}">
          <swiper-item>
            <view bindtap='goNotice' data-href="{{item.href}}" class="weui-media-box weui-media-box_appmsg" style='padding:5px 25px 8px 15px' hover-class="weui-cell_active">
              <view class="weui-media-box__hd weui-media-box__hd_in-appmsg" style='width:30px;height:30px;line-height:40px'>
                <image class="weui-media-box__thumb" src="{{item.icon}}" />
              </view>
              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__title" style='font-size:14px;color:#282828	'>{{item.title}}</view>
                <!-- <view class="weui-media-box__desc" style='font-size:13px;line-height:1.6;'>{{item.desc}}</view> -->
              </view>
              <view class="weui-cell__ft weui-cell__ft_in-access" style='font-size:14px'></view>
            </view>

          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>

  <view>
    <view wx:if="{{recents.length>0}}" class="weui-panel__bd" style='background-color:#fff;border-bottom:2px solid #F8F8F8;border-top:7px solid #F8F8F8;'>
      <navigator url='../albums/albums'>
        <view class="weui-media-box weui-media-box_appmsg" style='padding:5px 25px 8px 15px' hover-class="weui-cell_active">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg" style='width:40px;height:40px;line-height:40px'>
            <image wx:if="{{recents[0].type==0}}" class="weui-media-box__thumb" style="border-radius:3px;" src="{{aliyunImageOssPreUrl+recents[0].urls[0]}}?x-oss-process=image/resize,w_100,h_100,m_fill/auto-orient,1/quality,q_100/interlace,1/format,jpg" />

            <image wx:if="{{recents[0].type==1}}" class="weui-media-box__thumb" style="border-radius:3px;" src="{{aliyunVideoOssPreUrl+recents[0].url+aliyunVideoCoverExt}}" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <block wx:for="{{recents}}" wx:key="id">
              <view class="weui-media-box__title" style='font-size:13px;color:#282828;line-height:2'>
                <text wx:if="{{item.roletype==2}}">{{item.creator_name}}老师</text>
                <text wx:else>{{item.creator_name}}{{item.role}}</text> 上传了{{item.type==1?'视频':'照片'}}
                <label style='padding-left:20px;color:#787878'>{{item.friendly_create_at}}</label>
              </view>
            </block>
          </view>
          <view class="weui-cell__ft weui-cell__ft_in-access" style='font-size:14px'></view>
        </view>
      </navigator>
    </view>



    <view style='background-color:#fff;display:flex;justify-content: space-between; align-items: center;padding-right:20px;border-bottom:1rpx solid #F8F8F8;border-top:5px solid #F8F8F8;'>
      <view style='padding:10px 15px;font-size:17px;color:#F8F8F8,font-weight: 600;' class='wobuzhid'>
        <label wx:if="{{!date}}" style='border-left:3px solid #1e90ff;padding-left:5px'>最近我发布的</label>
        <label wx:else style='border-left:3px solid #1e90ff;padding-left:5px'>{{date}}的发布</label>
      </view>

      <view>
        <picker mode="date" value="{{date}}" bindchange="bindDateChange">
          <view class="picker">
            按日期查看
          </view>
        </picker>
      </view>
    </view>



    <block wx:for="{{dateNotifies}}" wx:key="date" wx:for-item="oneday">
      <view style='border-radius:10px;'>
        <view class="xm-member-cells__title" style='background-color:#fff;padding-bottom:5px;padding-top:5px;margin-top:0px;margin-bottom:0px;font-size:16px;color:#242729'>
          <view class="datetitle" wx:if="{{oneday.alias}}"> {{oneday.alias}}
            <label>({{oneday.date}})</label>
            <label style='font-size:12px;color: #999;'>{{oneday.day}}</label>
          </view>
          <view class="datetitle" wx:else> {{oneday.alias}}
            <label>{{oneday.date}}</label>
            <label style='font-size:12px;color: #999;'>{{oneday.day}}</label>
          </view>
          <view class="xm-member-invite"> </view>
        </view>
        <view class="xm-member-cells xm-member-cells_after-title">
          <block wx:for="{{oneday.notifies}}" wx:key="id">
            <view class="xm-member-cell" wx:if="{{item.type!=1&&item.need_feedback}}" style='padding:5px 15px;' hover-class="btn_hover" data-cid="{{item.cls}}" bindtap='detail' id="{{item._id}}">
              <view class="xm-member-cell__hd" style="position: relative;margin-right: 10px;">
                <view src="{{item.creator_wx_avatar}}" style="font-size:14px; text-align: center; color:white;  background: #5e9bf1;width: 50px; height: 50px; display: block;border-radius:10%;justify-content:center;flex-direction:column;display:flex;">
                  <view>{{item.feedback_count}}人</view>
                  <view>反馈</view>
                </view>

              </view>
              <view class="xm-member-cell__bd" style='flex:3'>
                <view style="font-size: 15px;padding:7px 5px;">{{item.class_name}}: {{item.subject}}作业</view>
                <view style="font-size: 13px;color: #888888;padding:7px 5px;">{{item.feedback_type}} {{item.end_day}}前交作业</view>
              </view>

              <view style="font-size: 13px;color: white;display:flex;justify-content: space-between;-webkit-box-flex:1;-webkit-flex:1;flex:1">
                <view class='xm-member-more'>
                  <label> </label>
                </view>
              </view>
            </view>

            <view class="xm-member-cell" wx:else style='padding:5px 15px;' hover-class="btn_hover" data-cid="{{item.cls}}" bindtap='detail' id="{{item._id}}">
              <view class="xm-member-cell__hd" style="position: relative;margin-right: 10px;">
                <view src="{{item.creator_wx_avatar}}" style="font-size:14px; text-align: center; color:white;  background: #5e9bf1;width: 50px; height: 50px; display: block;border-radius:10%;justify-content:center;flex-direction:column;display:flex;">
                  <view>{{item.accept_count}}人</view>
                  <view>确认</view>
                </view>

              </view>
              <view class="xm-member-cell__bd">
                <view style="font-size: 15px;padding:7px 5px;">{{item.class_name}}:{{item.type==1?'班级通知':item.subject+'作业'}}</view>
                <view style="font-size: 13px;color: #888888;padding:7px 5px;">{{item.type==1?item.text_content:'此作业无需反馈'}}</view>
              </view>
              <view style="font-size: 13px;color: white;display:flex;justify-content: space-between;-webkit-box-flex:1;-webkit-flex:1;flex:1">
                <view class='xm-member-more'>
                  <label> </label>
                </view>
              </view>
            </view>
          </block>
        </view>
      </view>
    </block>

    <view wx:if="{{no_data}}" class="xm_notify_empty" style='width:100%;padding-top:50px;text-align:center;background-color:#fff;'>
      还没有发布作业或通知
    </view>

  </view>








  <view class="page__ft">
    <image src="images/icon_footer.png" style="width: 84px; height: 19px;"></image>
  </view>
</view>