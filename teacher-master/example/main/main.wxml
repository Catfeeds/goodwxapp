<view wx:if="{{show_pub}}" style=' background-color: #fff;height: 100%;left:0;top:0;width: 100%;z-index: 99;font-size: 14px;position: fixed;text-align: center;vertical-align: middle;display: inline-block;color: rgb(111, 116, 116);opacity: 0.95;'>

  <view class="weui-loadmore weui-loadmore_line" style='margin:0em auto;;margin-top:50px'>
    <view class="weui-loadmore__tips weui-loadmore__tips_in-line" style='color:#282828'>发布作业或通知</view>
  </view>
  <view class='category-flex' style='padding-left:30px;padding-right:30px'>

    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="1">
      <text class="category-cell-pub-1"></text>
      <view class='category-cell-title'>
        发布作业
      </view>
    </view>
    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="2">
      <text class="category-cell-pub-2"> </text>
      <view class='category-cell-title'>
        发布通知
      </view>
    </view>


    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="4">
      <text class="category-cell-pub-4"></text>
      <view class='category-cell-title' style='font-size:13px'>
        高级作业
      </view>
    </view>

    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="6">
      <text class="category-cell-pub-6"></text>
      <view class='category-cell-title'>
        帮助
      </view>
    </view>

  </view>


  <view class="weui-loadmore weui-loadmore_line" style='margin:0.5em auto;color:#282828	;margin-top:70px'>
    <view class="weui-loadmore__tips weui-loadmore__tips_in-line" style='color:#282828'>班级相册和文件共享</view>
  </view>
  <view class='category-flex' style='padding:0px 50px;'>
    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="3">
      <text class="category-cell-pub-3"> </text>
      <view class='category-cell-title'>
        上传照片
      </view>
    </view>

    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="5">
      <text class="category-cell-pub-5"> </text>
      <view class='category-cell-title'>
        上传小视频
      </view>
    </view>

    <view class='category-cells' hover-class="btn_hover" bindtap="publish" id="add" data-mode="7">
      <text class="category-cell-pub-7"> </text>
      <view class='category-cell-title'>
        上传文件
      </view>
    </view>


  </view>

  <view style='padding:50px;'>
    <text bindtap='closePub' class="category-cell-pub-close"></text>
  </view>
</view>





<navigator wx:if="{{isExpOpenid}}" url='../exptip/exptip?exit=exit' class='exp'>
  <view class='exp_sub1'>退出</view>
  <view class='exp_sub2'>体验</view>
</navigator>

<view class='help'>
  <button class='kefu-btn' open-type='contact'>
    <view class='xm-kefu'></view>
  </button>
</view>
