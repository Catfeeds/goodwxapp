<view>
  <view>
    <view>
      <scroll-view scroll-y="true" class="top container" style="height:{{winHeight}}px" lower-threshold="200" bindscrolltolower="lower">
        <block wx:for="{{msgs}}">
          <view class="feed-item">
            <view class="feed-source">
              <view class="avatar" bindtap="goOther" data-poster_id="{{item.from_user_id}}" style=" display: flex;justify-content: space-between;">
                <image src="{{item.current_last1?item.last1.from_avatar:item.last2.from_avatar}}"></image>
                <view style=" display: flex;flex-direction: column;justify-content: space-between;">
                  <text>{{item.current_last1?(item.last1.from_name+item.last1.from_roleStr):(item.last2.from_name+item.last2.from_roleStr)}}</text>
                  <text style="font-size:24rpx;color:#afaaaa">{{item.friendly_update_at}}</text>
                </view>
              </view>
              <view class="feed-time" bindtap="show_comment_input" data-to_openid="{{item.current_last1?item.last1.from_openid:item.last2.from_openid}}"  data-to_role="{{item.current_last1?item.last1.from_role:item.last2.from_role}}" 
              data-to_name="{{item.current_last1?item.last1.from_name:item.last2.from_name}}" data-feedback_id="{{item.accept._id}}" data-dialog_id="{{item._id}}">
                <text class="item-more" style="color:#287FAF;">回复</text>
              </view>
            </view>
            <view class="feed-content">
              <view class="answer-body">
                <view data-id="1" style="margin-right:35px;">
                  <text class="answer-txt">
                    <text wx:if="{{item.is_secret==true&&item.main_id}}" style="color:#b12222">私密回复:</text>
                    <text wx:if="{{item.is_secret==true&&!item.main_id}}" style="color:#b12222">私密评论:</text>
                    <text>{{item.current_last1?item.last1.content:item.last2.content}}</text>
                  </text>
                </view>
              </view>
            </view>
            <view class="text-content" wx:if="{{item.accept}}">
               <navigator url="../notify/notify?_id={{item.accept.notify}}&cid={{item.accept.cls}}">
                <text>{{item.accept.feedback_text?item.accept.feedback_text:''}}</text>
                <view class="question">
                  <block wx:for="{{item.accept.feedback_photo}}" wx:for-item="it">
                    <image wx:if="{{item.accept.feedback_photo.length==1}}" mode="widthFix" style="width:50%;height:80px;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                    <image wx:elif="{{item.accept.feedback_photo.length==2}}" mode="widthFix" style="width:27%;height:80px;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                    <image wx:elif="{{item.accept.feedback_photo.length==3}}" mode="widthFix" style="width:27%;height:80px;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                    <image wx:elif="{{item.accept.feedback_photo.length>3}}" mode="widthFix" style="width:27%;height:80px;margin-left:5px" data-imgUrl="{{it}}" src="{{it}}"></image>
                  </block>
                </view>
                <view wx:if="{{item.accept.video}}">
                  <view class="question">
                    <image wx:if="{{item.post.video_thumb}}" mode="widthFix" style="width:50%;" data-imgUrl="{{item.post.video_thumb}}" src="{{item.post.video_thumb}}"></image>
                    <image src="/image/play.png" mode="widthFix" style="width:40px;position:absolute;top:35%;left:18%;;background-position: center center; background-repeat: no-repeat; " />
                  </view>
                </view>

                
               <view wx:if="{{item.accept.feedback_record}}">
                <view class="question">
                  <view  class='xm-record-play-btn' hover-class='xm-record-play-btn-hover'>
                     <image  style='height:15px;width:15px;' src='../../image/record-msg.png'></image>
                      </view>
                </view>
              </view>

              <view wx:if="{{item.accept.feedback_video}}">
                 <view class="question">
                    <image  mode="widthFix" style="width:50%;"  src="/image/video2.png"></image>
                    <!-- <image src="/image/play.png" mode="widthFix" style="width:40px;position:absolute;top:35%;left:18%;;background-position: center center; background-repeat: no-repeat; " /> -->
                  </view>
              </view>
              </navigator>
            </view>

             <view class="text-content" wx:else>
               <text>该内容已删除</text>
             </view>
            <block  wx:for="{{item.list}}" wx:for-item="e">
              <view wx:if="{{!(item.current_last1&&e._id==item.last1._id)}}" class="comments-reply">
                <text style="color:#287FAF;">{{e.from_name}}{{e.from_roleStr}}</text>
                <text wx:if="{{index!=0}}"> 回复 </text>
                <text  wx:if="{{index!=0}}" style="color:#287FAF;">{{e.to_name}}{{e.to_roleStr}}</text>
                <text>:{{e.content}}</text>
              </view>
            </block>
          </view>
        </block>
        <view wx:if="{{no_data}}" class="empty"> o(╯□╰)o,还没有内容</view>
        <view wx:elif="{{no_more}}" class="no_more_loading">没有更多了</view>
        <view wx:else class="no_more_loading">数据加载中...</view>
      </scroll-view>
    </view>
  </view>
  <view class="fix_label" catchtap="hideFix" style="{{setshow==0?'display:none':''}}">
    <form bindsubmit="send" report-submit="true" >
      <view class="fix_con" catchtap="stop">
        <view class="fix_header">
          <text>回复一下</text>
        </view>
        <view class="weui-cells" style="margin-left: 30px;margin-right: 30px;border: 1px solid #E8E8E8;">
          <textarea placeholder="回复一下" show-confirm-bar="false" name="comment" value="{{content}}" style="height:105px;width:100%" />
        </view>
        <view class="fix_footer">
          <button class="fix_footer_btn" catchtap="hidde_comment" hover-class="fix_footer_btn_hover"> 取消 </button>
          <button class="fix_footer_btn" form-type="submit" hover-class="fix_footer_btn_hover"> 提交 </button>
        </view>
      </view>
    </form>
  </view>
</view>