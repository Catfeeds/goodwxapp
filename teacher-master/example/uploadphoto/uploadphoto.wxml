
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml" >
  <form bindsubmit="submit" report-submit="true">

    <view class="page__bd">
      <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>


      <view class="weui-cells__title">上传照片</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
          <view class="weui-cell__bd">
            <textarea class="weui-textarea" name="desc" placeholder="输入简单的描述" style="height: 4.3em" />
            <!-- <view class="weui-textarea-counter">0/200</view> -->
          </view>
        </view>
        <view class="weui-uploader__bd" style='padding:10px 10px;margin-right:0px;'>
          <view class="weui-uploader__files" id="uploaderFiles">
            <block wx:for="{{selectedImgs}}" wx:key="*this">
              <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}" style='position:relative'>
                <image style='width:60px;height:60px;border:1px solid #ddd;' class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                <view class="weui-badge" id="{{item}}" catchtap='removeImg' style='position:absolute;top:-0.1em;right:-0.4em;background-color:#bbb8b8;'>X</view>
              </view>
            </block>


            <view class="weui-uploader__file"  wx:if="{{tmp_video}}" style='position:relative'>
                <video style='width:150px;height:150px' src='{{tmp_video}}'></video>
                <view class="weui-badge" id="{{item}}" catchtap='removeVideo' style='position:absolute;top:-0.7em;right:-0.4em;background-color:#bbb8b8;'>X</view>
              </view>
          </view>
  
         
        </view>
         <view style='display:flex'>
                <view  class="xm-photo-logo" wx:if="{{type==0}}" style='margin-left:20px' bindtap='chooseImage'> </view>
                <view  class="xm-video-logo" wx:if="{{type==1}}" style='margin-left:20px'   bindtap='chooseVideo'> </view>           
           </view>
      </view>



  <view wx:if="{{!init_cid}}" class="weui-cells__title">照片所属的班级</view>
        <view wx:if="{{!init_cid}}" class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange" >
                <label class="weui-cell weui-check__label" wx:for="{{class_items}}" wx:key="value">
                    <radio class="weui-check" color='#1e90ff' value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon color='#1e90ff' class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                </label>
            </radio-group>
          
        </view>





      <view  wx:if="{{!init_album_id}}" class="weui-cells__title"  >选择相册</view>
        <view wx:if="{{!init_album_id}}" class="weui-cells weui-cells_after-title">
            <navigator url="../albumselector/albumselector?cid={{init_cid?init_cid:select_cid}}&gid={{init_gid?init_gid:select_gid}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__bd">{{album_name}}</view>
                <view class="weui-cell__ft weui-cell__ft_in-access"></view>
            </navigator>
        </view>



      <view class="weui-btn-area" style='margin-top:40px'>
        <button class="weui-btn btn_save_info" type="primary" formType="submit" loading="{{btn_loadding}}" disabled="{{btn_disabled}}" style='background-color:#1e90ff'> 确认发布</button>
      </view>
    </view>
  </form>
</view>