<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <form bindsubmit="submit" report-submit="true">
    <view class="page__bd">
        <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>


        <view class="weui-cells__title">相册名字</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" id="name" name="name" placeholder="请输入名字" />
                </view>
            </view>
        </view>

        

  <view wx:if="{{class_items&&class_items.length>0}}" class="weui-cells__title">照片所属的班级</view>
        <view  wx:if="{{class_items&&class_items.length>0}}" class="weui-cells weui-cells_after-title">
            <radio-group bindchange="radioChange" >
                <label class="weui-cell weui-check__label" wx:for="{{class_items}}" wx:key="value">
                    <radio class="weui-check" color='#1e90ff' value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon color='#1e90ff' class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                    </view>
                </label>
            </radio-group>
          
        </view>


        <view class="weui-btn-area">
            <button class="weui-btn" style='background-color:#1e90ff;' formType="submit" type="primary" bindtap="showTopTips">确定</button>
        </view>
    </view>

    </form>
</view>
