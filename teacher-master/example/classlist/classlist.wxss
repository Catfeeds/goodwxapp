.xm-class-item{

 margin:6px 0;
background-color:#fff;
border-radius:2px;
overflow:hidden;
font-size:17px;

}



.xm-class-cell{
  padding:10px 15px;
position:relative;
display:-webkit-box;
display:-webkit-flex;
display:flex;
-webkit-box-align:center;
-webkit-align-items:center;
align-items:center;

}

