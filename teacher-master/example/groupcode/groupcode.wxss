
.xm-class-item{

 margin:15px 0;
background-color:#fff;
border-radius:2px;
overflow:hidden;
font-size:17px;
color:#2c2c2c;
}



.xm-class-cell{
  padding:10px 15px;
position:relative;
display:-webkit-box;
display:-webkit-flex;
display:flex;
-webkit-box-align:center;
-webkit-align-items:center;
align-items:center;

}

.xm-class-cell:first-child:before {
display:none;

}



.xm-class-cell:before {
content:" ";
position:absolute;
left:0;
top:0;
right:15px;
height:1px;
border-top:1rpx solid #e8edf7;
color:#d9d9d9;
left:15px;

}


 .xm-class-about:before {
 font-family: 'iconfont';
  font-size: 25px;
  color: #1e90ff;
  content: '\e9b0'; 
} 



 .xm-class-share::before {
 font-family: 'iconfont';
  font-size: 25px;
  color: #00CC33;
  content: '\e66f'; 
} 
  

 .xm-class-kefu::before {
 font-family: 'iconfont';
  font-size: 25px;
  color: #FF9933;
  content: '\e690'; 
} 



 .xm-class-group::before {
 font-family: 'iconfont';
  font-size: 25px;
  color: #CC00FF;
  content: '\e9a8'; 
} 

 .xm-class-add::before {
 font-family: 'iconfont';
  font-size: 25px;
  color: #DAA520;
  content: '\e64a'; 
} 


 .xm-class-title {
  font-size:16px;
}  


.xm-class-more:after {
content:" ";

display:inline-block;
height:6px;
width:6px;
border-width:2px 2px 0 0;
border-color:#c8c8cd;
border-style:solid;
-webkit-transform:matrix(.71,.71,-.71,.71,0,0);
transform:matrix(.71,.71,-.71,.71,0,0);
top:-2px;
position:absolute;
top:50%;
margin-top:-4px;
right:25px;

}
