.msg_tip::before {
  font-family: 'iconfont';
  font-size: 22px;
  color: #1e90ff;
  content: '\e727';
}


.btn_hover {
  background-color: #eee;
}

.btn_without_border::after{
border: none;
}

.help {
  background-color: #e6e6e6;
  height: 50px;
  border-radius: 25px;
  left: 80%;
  top: 80%;
  width: 50px;
  z-index: 99;
  font-size: 14px;
  position: fixed;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
  color: rgb(111, 116, 116);
  line-height: 50px;
  opacity: 0.6;
}

.musicMode {
  width:auto;
height:auto;
padding:5px;
background-color:#0066FF;
color:white;

  border-radius: 7px;
  left: 75%;
  top: 80%;
  
  z-index: 99;
  font-size: 12px;
  position: fixed;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
  opacity: 0.8;
}

.exp {
  
  top: 70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  background-color: #e6e6e6;
  height: 50px;
  border-radius: 25px;
  left: 80%;
  width: 50px;
  z-index: 99;
  position: fixed;
  text-align: center;
  vertical-align: middle;
  color:#0099FF;
  line-height: 50px;
  opacity: 1;
}

.exp_sub1 {
  flex: 1;
  line-height: 20px;
  margin-top: 8px;
}

.exp_sub2 {
  flex: 1;
  line-height: 20px;
  margin-bottom: 8px;
}

.xm-kefu:before {
  font-family: 'iconfont';
  font-size: 30px;
  color: #0000FF;
  content: '\e796';
}


.xm-upload:before {
  font-family: 'iconfont';
  font-size: 30px;
  color: #1e90ff;
  content: '\e7d3';
}


.kefu-btn {
  padding-left: 0;
  padding-right: 0;
  line-height: 50px;
  display: initial;
}

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}
