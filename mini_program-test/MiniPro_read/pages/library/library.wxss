page{
  width:100%;
  height:100%;
  background: #9B9B9B;
  margin: 0;
  padding: 0;
  text-align: center;
  font-weight:500;
}
.ipx{
  padding-top:86rpx;
  padding-bottom:46rpx;
}
.bg{
  position: relative;
}
.bg .cid_text{
  height:92rpx;
  line-height:92rpx;
  font-family: "Hiragino Sans GB";
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.bg .shelf_bg{
  width:700rpx;
  height:350rpx;
}
/*书架*/
.books-box{
  width:700rpx;
  height:1090rpx;
  margin: auto;
  padding-left:75rpx;
  position: absolute;
  left:25rpx;
  top:92rpx;
  /*background: url('../../images/shelf/bookshelf_o.png') no-repeat;*/
  /*background-size: cover;*/
}
.books-box .lis{
  margin:auto;
  /*width:556rpx;*/
  text-align: center;
}
.books-box .li{
  float: left;
  width:300rpx;
  height:270rpx;
  margin-top:40rpx;
  margin-bottom:60rpx;
  position: relative;
}
.books-box .li .book_bg{
  width:210rpx;
  height:270rpx;
}
.books-box .li .cover_pic{
  width:160rpx;
  height:160rpx;
  position: absolute;
  left:75rpx;
  top:15rpx;
  z-index: 2;
}
.books-box .li .max-box{
  width:77rpx;
  height:77rpx;
  position: absolute;
  top: 0;
  right: 55rpx;
  z-index: 3;
}
.books-box .li .max-box image{
  width:77rpx;
  height:77rpx;
}
.books-box .li .max-box view{
  position: absolute;
  width:44rpx;
  top: 2rpx;
  right: 4rpx;
  font-family: "Hiragino Sans GB";
  font-size: 22rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
}
.books-box .li .cover_name{
  width:170rpx;
  height:48rpx;
  margin-left:30rpx;
  position: absolute;
  left:38rpx;
  top:176rpx;
  font-size: 20rpx;
  color: #2B2B2B;
  line-height: 22rpx;
  letter-spacing:1.2rpx;
  text-align: center;
  display: flex;
  align-items: center;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/*弹框提示*/
.modal-box{
  position: fixed;
  top: 30%;
  margin-left:75rpx;
  width: 600rpx;
  height: 390rpx;
}
.modal-box .modal_bg{
  width: 600rpx;
  height: 390rpx;
}
.modal-box .modal_btn{
  position: absolute;
  width:240rpx;
  height:110rpx;
  top: 246rpx;
  left: 180rpx;
}
.modal-box .text{
  position: absolute;
  width:460rpx;
  font-size: 28rpx;
  color: #953821;
  letter-spacing: 4rpx;
  line-height: 50rpx;
  top:40rpx;
  left:70rpx;
}
.modal-box text{
  display: block;
  text-align: center;
}
.modal-box text.title{
  font-size:36rpx;
  margin-bottom:10rpx;
}
.modal-box text .four{
  display: inline;
  font-size:36rpx;
  color:#FFA900;
}