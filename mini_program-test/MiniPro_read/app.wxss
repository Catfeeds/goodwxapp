/*查看详情*/
.info_wrap{
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5);
    width:100vw;
    height:100vh;
}
.info{
    width:500rpx;
    height:800rpx;
    position: relative;
    margin: auto;
    margin-top:180rpx;
}
.info_bg{
    width:500rpx;
    height:800rpx;
}
.button_off{
    width:140rpx;
    height:79rpx;
    position: absolute;
    top:-30rpx;
    right:-70rpx;
}
.info view.total{
    position: absolute;
    font-size:32rpx;
    color: #2B2B2B;
    top:170rpx;
    left: 30rpx;
    width:440rpx;
    height:560rpx;
    overflow: scroll;
}