page{
    width:100%;
    height:100vh;
    background-color: rgba(0, 0, 0, .75);
    background-image: url('https://qnfile.abctime.com/regis_bg.png');
    background-size: 100% 100%;
    /*background: #1EB7DE;*/
    margin: 0;
    padding: 0;
    /*font-weight:500;*/
}
.login_title{
    position: fixed;
    top:60rpx;
    width:100vw;
    text-align: center;
    color:#fff;
    font-size:40rpx;
    font-weight:500;
    letter-spacing: 1.5rpx;
}
.form-list {
    padding-top:480rpx;
}

.form-item {
    margin: auto;
    position: relative;
    box-sizing: border-box;
    display: flex;
    width:660rpx;
    height:100rpx;
    background-image: url('https://qnfile.abctime.com/input_bg.png');
    background-size: 100% 100%;
    border-radius: 100rpx;
    line-height: 100rpx;
    background-color: #272D39;
    margin-bottom:20rpx;
}
.form-item image{
    width:60rpx;
    height: 60rpx;
    margin-left:35rpx;
    margin-top:20rpx;
}
.form-item .code_img{
    width:42rpx;
    height: 46rpx;
    margin-left:46rpx;
    margin-top:27rpx;
    margin-right:15rpx;
}
.form-item input{
    width: 480rpx;
    height: 100rpx;
    text-overflow: ellipsis;
    margin-left:10rpx;
    line-height: 100rpx;
    /*background-color: #272D39;*/
    /*font-weight:500;*/
}
.form-item .code{
    width: 220rpx;
    height: 70rpx;
    margin-top:13rpx;
    margin-right:30rpx;
    line-height: 70rpx;
    padding: 0 0 0 0;
    border: none;
    outline: none;
    color:#3EBDEF;
    font-size:24rpx;
    font-weight:300;
    background-color: #272D39;
}
.form-item .sel_image{
    margin-top:40rpx;
    margin-left:0;
    width: 38rpx;
    height: 22rpx;
}
.next-btn {
    width: 560rpx;
    height: 120rpx;
    background-image: url('https://qnfile.abctime.com/button_bg.png');
    background-size: cover;
    margin: auto;
    margin-top:40rpx;
    font-size: 50rpx;
    text-align: center;
    line-height: 120rpx;
    border-radius: 20rpx;
    color:#953821;
}
.ipx{
    margin-top:70rpx;
}
switch {
    position: absolute;
    right: 40rpx;
    top: 50%;
    margin-right: -10rpx;
    margin-top: -16px;
    transform: scale(0.9);
    transform-origin: right center;
}
input{
  color:#FFD169;
}
.input-placeholder {
    color: #394356;
}
.save-btn {
    width: 90%;
    height: 80rpx;
    margin: 0 auto;
    font-size: 32rpx;
    text-align: center;
    line-height: 80rpx;
    background-color: #2EA9DF;
    border-radius: 6rpx;
    color: #fff;
}

.save-btn:active {
    background-color: #369DC9;
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 400rpx;
    height: 80rpx;
    margin-left: -200rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}
.fade-in {
    animation: fadeIn .3s forwards;
}
@keyframes fadeIn {
  from {
    opacity: 0;
    -webkit-transform: translate3d(0, 100%, 0);
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: none;
    transform: none;
  }
}

.area-item {
    line-height: 60rpx;
    text-align: center;
}

/*地区选择*/
.distpicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 550rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
}
.distpicker-btn {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    width: 100%;
    padding: 0 40rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #fafafa;
    color: #586C94;
}

.distpicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 560rpx;
    background-color: #fff;
}
.mask {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .4);
}
/*年级选择*/
.gradepicker_wrap{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 99;
    width: 100%;
    height: 100vh;
    background-color: rgba(0,0,0,0.4);
}
.gradepicker {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 550rpx;
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    background-color: #fff;
    text-align: center;
}
.gradepicker-content {
    box-sizing: border-box;
    width: 100%;
    height: 550rpx;
    background-color: #fff;
}
.gradepicker-in{
    height:110rpx;
    line-height:110rpx;
    color: #000;
}
.gradepicker .grade-item{
    height:110rpx;
    line-height:110rpx;
    color: #000;
}
.hidden {
    display: none;
}
/*逆时针旋转图片90°*/
.rotateLeft{
    /*-webkit-transform-origin: 30% 55%;*/
    /*transform-origin: 30% 55%;*/
    transform: rotate(180deg);
}
.tran_bg{
    position: fixed;
    z-index: 1001;
    top: 0;
    width:100%;
    height:100%;
    background: transparent;
}