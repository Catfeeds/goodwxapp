#canvas-box{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width:0px;
    height: 0px;
    overflow:hidden;
}
#shareCanvas{
    position: absolute;
    top:100vh;
    left:100vw;
    background: transparent;
    width:750px;
    height:1334px;
}
.tran_bg{
    position: fixed;
    z-index: 101;
    top: 0;
    width:100%;
    height:100%;
    background: transparent;
}
.message {
    position: fixed;
    top: 80%;
    left: 50%;
    width: 500rpx;
    height: 80rpx;
    margin-left: -250rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 20px;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    opacity: 0;
}
.fade-in {
    animation: fadeIn .3s forwards;
}