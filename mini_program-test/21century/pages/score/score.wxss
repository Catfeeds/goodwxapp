page{
    width:100%;
    height:100vh;
    background: #1EB7DE;
    background-image: url('http://file.abctime.com/score_bg.png');
    background-size: 100% 100%;
    color:#000000;
    text-align: center;
    font-weight:500;
}
.wrap{
    position: absolute;
    top: 0;
    left: 0;
    width:100%;
    height:100vh;
    z-index: 100;
}
.header{
    display: flex;
}
.ipx{
    padding-top:60rpx;
}
/*倒计时*/
.count_down{
    font-size: 28rpx;
    color: #2B2B2B;
    width:540rpx;
    letter-spacing: 1px;
    line-height: 50rpx;
    margin-left:55rpx;
    margin-top:37rpx;
}
.count_time{
    color: white;
    display: inline-block;
    /*width:45rpx;*/
}
/*查询按钮*/
.query-box{
    position: relative;
    width:150rpx;
    height:80rpx;
    /*margin-left:45rpx;*/
    margin-top:23rpx;
}
.query-box text{
    position: absolute;
    color: #FFFFFF;
    display: block;
    width:100%;
    font-size:28rpx;
    line-height:70rpx;
}
.query-box .query_btn{
    position: absolute;
    display: block;
    left: 0;
    top: 0;
    width:150rpx;
    height:80rpx;
}
/*头像*/
.head{
    width:160rpx;
    height:160rpx;
    margin: auto;
    margin-top:15rpx;
    position: relative;
}
.head .head_icon{
    width:160rpx;
    height:160rpx;
}
.head .head_img{
    position: absolute;
    left:10rpx;
    top:10rpx;
    width:140rpx;
    height:140rpx;
    border-radius: 70rpx;
}
/*主要内容*/
.main{
    margin-top:10rpx;
}
.main .num{
    font-size: 28rpx;
    color: #2B2B2B;
    letter-spacing: 1rpx;
    /*line-height: 50rpx;*/
}
.main .num text{
    color: #FFFFFF;
}
.main .fScore{
    margin: auto;
    width:322rpx;
    height:276rpx;
    position: relative;
}
.main .score{
    margin: auto;
    width:260rpx;
    height:224rpx;
    position: relative;
}
.main .fScore .fScore_img{
    display: block;
    width:322rpx;
    height:276rpx;
}
.main .score .score_img{
    display: block;
    width:260rpx;
    height:224rpx;
}
.main .fScore text{
    display: block;
    width:100%;
    position: absolute;
    top: 10%;
    font-size:85rpx;
    color:#fafafa;
}
.main .score text{
    display: block;
    width:100%;
    position: absolute;
    top: 12%;
    font-size:70rpx;
    color:#fafafa;
}
.main .score_e{
    margin: auto;
    margin-top:16rpx;
    /*width:400rpx;*/
    width:428rpx;
    font-size:22rpx;
}
.main .score_e .sc_box{
    display: flex;
}
.main .score_e .bg{
    background: #19405F;
    /*width:328rpx;*/
    width:328rpx;
    height:14rpx;
    border-radius: 18rpx;
    margin-top: 8rpx;margin-left: 16rpx;
}
.main .score_e .bg .read_score,.main .score_e .bg .select_score{
    background: #F4A03B;
    border-radius: 18px;
    height:14rpx;
}
.main .score_e .f_text{
    display: block;
    width:475rpx;
    text-align: left;
    margin-left:60rpx;
}
.main .code-box text{
    display: block;
    font-size: 26rpx;
    color: #2B2B2B;
    letter-spacing: 1rpx;
    margin-top:15rpx;
    /*margin-bottom:15rpx;*/
}
.main .code-box image{
    display: block;
    margin: auto;
    margin-top:28rpx;
    margin-bottom:32rpx;
    width:180rpx;
    height:180rpx;
}
.ipx_top15{
    margin-top:20rpx;
}
.ipx_top50{
    margin-top:50rpx;
}
.footer{
    position: absolute;
    left:25rpx;
    bottom:15rpx;
    width:700rpx;
    margin:auto;
}
.footer .btn-box{
    margin: auto;
    margin-top:15rpx;
    width:560rpx;
    height:120rpx;
    position: relative;
}
.footer .btn-box image{
    width:560rpx;
    height:120rpx;
}
.footer .btn-box text{
    display: block;
    width:560rpx;
    position: absolute;
    top: 30rpx;
    font-size:32rpx;
    color: #953821;
}
