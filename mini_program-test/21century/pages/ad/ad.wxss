page{
  width:100%;
  height:100vh;
  background: #1EB7DE;
  background-image: url('https://qnfile.abctime.com/adver_bg.png');
  background-size: 100% 100%;
  color:#ffffff;
  text-align: center;
  font-weight:500;
}
.header{
  display: block;
  padding-top:40rpx;
  font-size: 30rpx;
  color: #2B2B2B;
  letter-spacing: 1.64rpx;
  /*line-height: 50rpx;*/
}
.content{
  margin-top:200rpx;
  letter-spacing: 1.57rpx;
  line-height: 50rpx;
}
.ipx{
  margin-top:350rpx;
}
.content view{
  text-align: left;
  width:600rpx;
  margin:auto;
  font-size: 28rpx;
  color: #FFFFFF;
  letter-spacing: 1.04rpx;
  line-height:70rpx;
}
.content view span{
  font-size:36rpx;
  color:#FFC400;
}
.content view .tag{
  font-size:30rpx;
  color:#FFC400;
}
.code-box image{
  /*display: inline-block;*/
  width:190rpx;
  height:190rpx;
  margin-top:10rpx;
}
.code-box view{
  /*display: inline-block;*/
  vertical-align: top;
  line-height:60rpx;
  font-size: 26rpx;
  color: #2B2B2B;
  letter-spacing: 1rpx;
}
.books{
  display: block;
  margin:auto;
  margin-top:10rpx;
  width:550rpx;
  height:270rpx;
}
.hidden{
  display: none;
}