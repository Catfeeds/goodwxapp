  position: fixed;
  top: 30%;
  margin-left:75rpx;
  width: 600rpx;
  height: 390rpx;
}
.modal-box .modal_bg{
  width: 600rpx;
  height: 390rpx;
}
.modal-box .modal_btn{
  position: absolute;
  width:240rpx;
  height:110rpx;
  top: 246rpx;
  left: 180rpx;
}
.modal-box .text{
  position: absolute;
  width:460rpx;
  font-size: 28rpx;
