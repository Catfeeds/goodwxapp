}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/*书架header*/
.shelf_head{
  width:100%;
  text-align: center;
}
/*主题标识*/
.scene_title{
  display: flex;
  text-align: left;
}
.scene_title image{
  display: inline-block;
  margin-top:40rpx;
  margin-left:36rpx;
  /*line-height:50rpx;*/
  width:26rpx;
  height:26rpx;
}
.scene_title text{
  display: inline-block;
  width:340rpx;
  margin-top:22rpx;
  margin-left:18rpx;
  line-height:50rpx;
  font-size:32rpx;
  color: #FFFFFF;
}
/*cid选择区域*/
.cid_one{
  display: flex;
  align-items: center;
  position: relative;
  justify-content: space-between;
  background-color:black;
  width:260rpx;
  height:50rpx;
  margin: auto;
  margin-top:22rpx;
  border-radius: 20rpx;
  padding-left:20rpx;
  /*border-bottom:2rpx solid rgb(255, 255, 255);*/
}
.cid{
  padding-left:40rpx;
  color:rgb(34, 154, 181);
  height:50rpx;
  line-height:50rpx;
  text-align: center;
}
.cid_box{
  position: absolute;
  z-index: 100;
  justify-content: space-between;
  background-color:black;
  width:280rpx;
  height:500rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 0 0;
  overflow: scroll;
  margin-left:195rpx;
  margin-top:10rpx;
  /*margin-left:500rpx;*/
}
.cid_select{
  margin: auto;
  /*z-index: 100;*/
  /*position: absolute;*/
  /*width:214rpx;*/
  /*height:500rpx;*/
  /*border-radius: 20rpx;*/
  /*overflow: scroll;*/
  /*margin-top:20rpx;*/
  /*小程序中z-index和absolute需要同时存在，元素才能脱离文档。*/
}
.select_one{
  position: static;
  text-align: center;
  background-color:#000;
  width:280rpx;
  /*脱离文档后元素width不能再用百分比。*/
  height:63rpx;
  line-height:60rpx;
  color:#D7A944;
}
.cid_image{
  z-index: 100;
  position: absolute;
  right:5rpx;
  width: 38rpx;
  height: 22rpx;
  margin: 0;
  padding:10rpx 20rpx 4rpx 0;
  transition: All 0.4s ease;
  -webkit-transition: All 0.4s ease;
}
/*逆时针旋转图片90°*/
.rotateLeft{
  -webkit-transform-origin: 30% 55%;
  transform-origin: 30% 55%;
  transform: rotate(180deg);
}
/*下方nav*/
.btn21{
  width:560rpx;
  height:130rpx;
  margin: auto;
  text-align: center;
  position: relative;
}
