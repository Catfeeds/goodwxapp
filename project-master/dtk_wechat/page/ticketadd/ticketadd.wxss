@import "../../common/weui.wxss";
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.containerBox{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.radio {
  margin-right: 20rpx;
}
.section{
  margin:0 30rpx;
}
.sectionbottom{
  position: relative;
}
.section-box{
  position: relative;
  background: #fff;
  margin:30rpx 0 0 ;
  border-radius: 10rpx;
  padding-top: 50rpx;
}
.section__title{
  width: 28%;
}
.section-mian{
  padding:8rpx 0 0 0;
  font-size: 34rpx;
  float: left;
}
.addBusiness{
  position: fixed;
  bottom: 250rpx;
