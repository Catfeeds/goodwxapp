  z-index: 5;
}
.searchList{
  padding:10rpx 0 20rpx 0;
  margin:0 30rpx;
}
.section.money .calicon{
  height: 100rpx;
  float:right;
  margin-right: 0;
  width: 50rpx;
}
.section.money .calicon image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}
.searchListBox{
  pad: 10rpx 0;
}
.view_hide{
    display: none;
}
.view_show{
    display: block;
}
.guarantor_hide{
    display: none;
}
.guarantor_show{
    display: block;
}
.addTiele{
  padding:0 30rpx 0 40rpx;
  background: linear-gradient(#fff, #fff 60%, #f4f4f4);
  border-bottom: 2rpx solid #D8D8D8;
  height: 80rpx;
  line-height: 80rpx;
}
.label_hide{
    display: none;
}
.label_show{
    display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.btn-area{
  margin:0;
  padding-top:5rpx;
  padding-bottom: 5rpx;
}
button[type="orange"] {
color:#fff;
background-color:#fe9250;
}
.lable-list{
  float: left;
  border: 2rpx solid #dfede6;
  border-radius: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #dfede6;
  color: #4c9d89;
  font-size: 28rpx;
  margin:10rpx 10rpx 0 0;

}
.lable-main{
  min-height: 40rpx;
  border-bottom:2rpx solid #EEEFEF;
}
.labelText{
  padding:0 20rpx 0 0;
  float: left;
}
.searchUsed{
   padding:20rpx 20rpx 20rpx 40rpx;
   background: #fff;
   height: 60rpx;
}
.used{
  float: left;
}
.usedlabel{
  float: left;
  border: 2rpx solid #c8c8c8;
  border-radius: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #ffffff;
  color: #000;
  font-size: 24rpx;
  margin:0 0 0 10rpx;
}
.orangebutton{
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1000;
}
.drawer_hide{
    display: none;
}
.drawer_show{
    display: block;
}
.guarantee_hide{
  display: none;
}
.guarantee_show{
    display: block;
}
.labeldelete{
  float: left;
}
.todo-text{
  float: left;
}
.money{
  position: relative;
}
.moneytext{
  position: absolute;
  top: 0;
  right: 0;
  color: #d94d3f
}
.fundsType_show{
    display: block;
}
.fundsType_hide{
  display: none;
}
.client_hide{
  display: none;
}
.client_show{
  display: block;
}
.pic{
  float: right;
  margin:8rpx 30rpx 0 0;
  width:164rpx;
  height:164rpx;
  position: relative;
}
.pic image{
  width:160rpx;
  height:160rpx;
  border-radius:10rpx;
  border:2rpx solid #ccc;
  overflow:hidden;
  background:#fff;
}
.picright{
  float: right;
  margin-right:0;
  color:#d43836;
  border-radius:10rpx;
  height: 44rpx;
  line-height: 44rpx;
  padding: 8rpx 20rpx;
  position: relative;
  top: 20rpx;
  border:1px solid #d43836;
  font-size: 28rpx;
}
.sectionpic{
  border-top:2rpx solid #EEEFEF;
  padding: 20rpx 0 20rpx;
  margin:0 30rpx;

}
.prompt{
  color: #888889;
  font-size: 24rpx;
  position: relative;
  padding: 6rpx 20rpx;
}
.add-title{
  position: absolute;
  color: #fff;
  padding-left:24rpx;
  font-size: 32rpx;
  z-index:5;
  left: 0;
  top: 2rpx;
}
.picslocalDelete{
  position: absolute;
  right: -20rpx;
  top: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  color: #000;
}
.picslocalDelete image{
  width: 30rpx;
  height: 30rpx;
  border-radius: 40rpx;
}