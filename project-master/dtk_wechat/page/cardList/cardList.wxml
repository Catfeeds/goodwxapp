<view class="container">
  <!--业务推广-->
  <view class="business">
    <view class="business-list">
      <view class="listbox clearfix fillet"  wx:for="{{msgList}}"  wx:key="id" id="{{item.id}}" bindtap="listClick">
        <view class="list-title-avatar">
          <image class="avatarsrc" src="{{item.creator.avatar}}"></image>
          <view class="list-title-avatar-text">{{item.creator.name}}</view>
        </view>
        <view class="listbox-info" style="-webkit-line-clamp:{{item.creator.name.length > 5 ? 4 : 3}}">
          <text class="listbox-info-text">{{item.spreadfirst[0]}}</text>{{item.spread}}
        </view>
        <text class="time">{{item.update_datetime}}</text>
      </view>
    </view>
  </view>
</view>
<loading hidden="{{loadingHidden}}">
    加载中...
  </loading>
