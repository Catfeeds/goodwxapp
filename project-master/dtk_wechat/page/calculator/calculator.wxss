@import "../../common/weui.wxss";
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.containerBox{
  padding-top:40rpx;
}
.radio {
  margin-right: 20rpx;
}
.section{
  margin:0 30rpx;
}
.sectionbottom{
  border-bottom: 2rpx solid #D8D8D8;
  position: relative;
}
.section-box:nth-of-type(1){
  margin:0 30rpx 20rpx 30rpx;
}
.section-box{
  background: #fff;
  margin:0 30rpx 40rpx 30rpx;
  border-radius: 10rpx;
}
.section__title{
  width: 32%;
}
.section-mian{
  padding:12rpx 0 0 0;
}
.addBusiness{
  position: fixed;
  bottom: 250rpx;
  right: 20rpx;
  z-index: 5;
}
.searchList{
   padding:10rpx 20rpx 20rpx 40rpx;
   background: #fff;
   box-shadow: inset 0 0 20rpx #d5d5d5;

}
.searchListBox{
  pad: 10rpx 0;
}
.view_hide{
    display: none;
}
.view_show{
    display: block;
}
.guarantor_hide{
    display: none;
}
.guarantor_show{
    display: block;
}
.addTiele{
  padding:0 20rpx;
  background: linear-gradient(#fff, #fff 60%, #f4f4f4);
  border-bottom: 2rpx solid #D8D8D8;
  height: 80rpx;
  line-height: 80rpx;
}
.label_hide{
    display: none;
}
.label_show{
    display: block;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.btn-area{
  margin:0;
  padding:5rpx 30rpx;
}
button[type="orange"] {
color:#fff;
background-color:#fe9250;
}
.lable-list{
  float: left;
  border: 2rpx solid #007ba0;
  border-radius: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #00b7ee;
  color: #fff;
  font-size: 24rpx;
  margin:10rpx 0 0 10rpx;

}
.lable-main{
  background: #fff;
  min-height: 40rpx;
}
.labelText{
  padding:0 20rpx 0 0;
  float: left;
}
.searchUsed{
   padding:20rpx 20rpx 20rpx 40rpx;
   background: #fff;
   height: 60rpx;
}
.used{
  float: left;
}
.usedlabel{
  float: left;
  border: 2rpx solid #c8c8c8;
  border-radius: 10rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #ffffff;
  color: #000;
  font-size: 24rpx;
  margin:0 0 0 10rpx;
}
.orangebutton{
  position: absolute;
  right: 20rpx;
   top: 0;
   z-index: 1000;
}
.drawer_hide{
    display: none;
}
.drawer_show{
    display: block;
}
.guarantee_hide{
  display: none;
}
.guarantee_show{
    display: block;
}
.labeldelete{
  float: left;
}
.todo-text{
  float: left;
}
.money{
  position: relative;
}
.money.sum{
  padding-top: 32rpx;
}
.section_sum{
  font-size: 60rpx;
  color: #c83835;
  text-align: center; 
}
.section_sum>text{
  font-size: 24rpx;
}
.money.sum>text{
  clear: both;
  text-align: center;
  font-size: 24rpx;
  color: #888888;
  display: block;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #EEEFEF;
  padding-bottom: 20rpx;
}
.moneytext{
  position: absolute;
  top: 0;
  right: 0;
  color: #d43836
}
.fundsType_show{
    display: block;
}
.fundsType_hide{
  display: none;
}
.client_hide{
  display: none;
}
.client_show{
  display: block;
}
.moneytext>text, .moneytext>image{
  float: right;
  margin-right: 4rpx;
}
.moneytext>image{
  vertical-align: middle;
  margin: 28rpx 4rpx 0 0;
  width: 32rpx;
  height: 32rpx;
}
.section_message{
  display: flex;
  flex-flow: row wrap;
  height: 70rpx;
  line-height: 70rpx;
}
.section_days, .section_accural {
  width: 50%;
  font-size: 26rpx;
}
.section_days .section__title, 
.section_accural .section__title {
  width: 41%;
}
.section_days .section__title{
  margin-left: 30rpx;
}
.section_days .content, 
.section_accural .content {
  color: #c83835;
}
