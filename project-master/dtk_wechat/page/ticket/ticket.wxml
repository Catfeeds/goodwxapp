<import src="../../templates/personalInfo.wxml"/>
<view class="listBox" hidden="{{listBox}}">
  <!--<view class="list-title">
    <view class="list-title-box">
      <button type="red" hover-class="other-button-hover" bindtap="addList"><image style="width:32rpx; height:32rpx;" src="{{imgsrc}}"></image> 增加票据</button>
    </view>
  </view>
  -->
  <view class="swiper-tab">  
    <view class="swiper-tab-list"><text data-current="0" bindtap="swichNav" class="{{currentTab==0 ? 'on' : ''}}">全部</text></view>  
    <view class="swiper-tab-list"><text data-current="1" bindtap="swichNav" class="{{currentTab==1 ? 'on' : ''}}">我的</text></view> 
    <view class='addbusiness' bindtap="addList"><image src="../../image/addbusiness.png"></image></view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}rpx" bindchange="bindChange">  
    <swiper-item>
      <!-- 资金业务=全部  begin -->
      <!-- 没有数据显示 -->
      <view hidden="{{nothingAll}}">
        <template is="nothing"></template>
      </view>
      <view class="list-main-all" wx:for="{{msgAllList}}"  id="{{item.id}}" bindtap="listClick">
        <view class="ticketList-title-type" wx:if="{{item.draft_status==1}}"><image src="../../image/complete.png"></image></view>
        <view class='list-all-title clearfix'>
          <text class="list-all-title-box" wx:if="{{item.draft_type==1}}">银承纸票</text>
          <text class="list-all-title-box" wx:elif="{{item.draft_type==2}}">商承纸票</text>
          <text class="list-all-title-box" wx:elif="{{item.draft_type==3}}">银承电票</text>
          <text class="list-all-title-box" wx:elif="{{item.draft_type==4}}">商承电票</text>
          <text class='list-all-title-time'>{{item.update_datetime}}</text>
        </view>
        <view class='list-all-main clearfix'>
          <image class='list-all-main-image' src="{{item.creator.avatar ? item.creator.avatar : '../../image/m.png'}}"></image>
          <view class='list-all-main-title clearfix'><text>{{item.creator.name ? item.creator.name:'保密'}}</text><text wx:if="{{item.creator.user_id}}">({{item.creator.user_id}})</text></view>
          <view class="ticketList-mian clearfix">
            <view class="ticketList-mian-list" style='width:40%;'>
              <view class="border-right" style='padding-left:0;'>
                <view>总金额</view>
                <text class="color-red">{{item.draft_value}}<text class="color-red-info" wx:if="{{item.draft_value !== '不限'}}">万</text></text>
              </view>
            </view>
            <view class="ticketList-mian-list" style='width:60%;'>
              <view class='ticketList-mian-list-padding'>
                <view>售价：<text class="color-red">{{item.sell_price}}<text wx:if="{{item.sell_price !== '不限'}}">元</text></text></view>
                <view>汇票张数：{{item.draft_count}}张</view>
              </view>
            </view>
          </view>
        </view>
      </view>
      <!-- 资金业务=全部  end -->
    </swiper-item>  
    <swiper-item> 
      <!-- 资金业务=我的  begin --> 
      <!-- 没有数据显示 -->
      <view hidden="{{nothing}}">
        <template is="nothing"></template>
      </view>
        <view class="list-main-lists"  wx:for="{{msgList}}"  wx:key="id" id="{{item.id}}" data-draftstatus="{{item.draft_status}}" bindtap="listClick" bindtouchend="touchend"  bindlongtap="mylongtap">
        <view class="ticketList-title clearfix" >
          <view class="list-main-lists-left-text"><image src="{{item.cardImage}}"></image></view>
          <view class="ticketList-title-text" wx:if="{{item.draft_type==1}}">银承纸票</view>
          <view class="ticketList-title-text" wx:elif="{{item.draft_type==2}}">商承纸票</view>
          <view class="ticketList-title-text" wx:elif="{{item.draft_type==3}}">银承电票</view>
          <view class="ticketList-title-text" wx:elif="{{item.draft_type==4}}">商承电票</view>
          <view class="ticketList-mian-list endtime">{{item.update_datetime}}</view>
          <view class="ticketList-title-type" wx:if="{{item.draft_status==1}}"><image src="../../image/complete.png"></image></view>
        </view>
        <view class="ticketList-mian clearfix">
          <view class="ticketList-mian-list" style='width:40%;'>
            <view class="border-right">
              <view>总金额</view>
              <text class="color-red">{{item.draft_value}}<text class="color-red-info" wx:if="{{item.draft_value !== '不限'}}">万</text></text>
            </view>
          </view>
          <view class="ticketList-mian-list">
            <view class='ticketList-mian-list-padding'>
              <view>售价：<text class="color-red">{{item.sell_price}}<text wx:if="{{item.sell_price !== '不限'}}">元</text></text></view>
              <view>汇票张数：{{item.draft_count}}张</view>
            </view>
          </view>
        </view>
        <!--<view class="ticketList-footer clearfix"><view class="bank">承兑人：</view><view class="bank bank-width">{{item.acceptance}}</view></view>-->
      </view>
      <!-- 资金业务=我的  end --> 
    </swiper-item>
  </swiper>
</view>
<loading hidden="{{loadingHidden}}">
    加载中...
</loading>
