<!--detail.wxml-->
<import src="../../templates/personalInfo.wxml"/>
<view hidden="{{detailBox}}">
<view class="list-box">
  <view class="list">
    <!-- 个人信息 -->
    <template is="personal" data="{{msgList}}"></template>
    <!-- 资金业务信息 -->
    <view class="list-main fillet">
      <image wx:if="{{msgList.fund_status=='1'}}" class="abolition" style="width:120rpx; height:120rpx;" src="../../image/complete2.png"></image>
      <view class="list-main-h">
        <view class="clearfix">
          <view class="list-draft">
            <view class="list-draft-je" style="font-size:{{fundsvalue == '不限' ? '28rpx' : '44rpx'}}">{{fundsvalue}}<text class="list-draft-je-unit">{{msgList.fundsvalueunit}}</text></view>
            <view class="list-draft-lx">{{msgList.funds_type}}</view>
          </view>
          <view class="list-time">
            <view class="list-draft-yield-rate"  style="font-size:{{msgList.yield_rate == '不限' ? '28rpx' : '44rpx'}}">{{msgList.yield_rate}}<text class="list-draft-yield-rate-unit">{{msgList.yieldrateunit}}</text></view>
            <view class="flex-item">{{msgList.yield_rate_item}}</view>
          </view>
        </view>
        <view class="list-main-h-info">业务期限：<text class="deadline">{{msgList.funds_duration}}</text> <text>{{msgList.day}}</text> <text style="padding-left:30rpx;">开始时间：{{msgList.funds_start_date}}</text></view>
      </view>
    </view>
  </view>
  <view class="list fillet" wx:if="{{msgList.customer_name !== null}}">
    <view class="list-guarantors">
      <view class="list-guarantors-title"><image src="{{image01}}"></image>客户信息</view>
      <view class="list-guarantors-box">
        <view class="location-viewlist clearfix"><text class="location">客户名称：</text><text class="location-text">{{msgList.customer_name=='' ? '保密' : msgList.customer_name}}</text></view>
        <view class="location-viewlist clearfix"><text class="location">交易地点：</text><text class="location-text">{{msgList.address=='' ? '全国' : msgList.address}}</text></view>
        <view class="location-viewlist clearfix viewlist-noborder"><text class="location">所属银行：</text><text class="location-text">{{msgList.funds_bank=='' ? '保密' : msgList.funds_bank}}</text></view>
      </view>
    </view>
  </view>
  <view class="list fillet" wx:if="{{msgList.funds_comment !== null}}">
    <view class="list-guarantors">
      <view class="list-guarantors-title"><image src="{{image04}}"></image>备注</view>
      <view class="list-guarantors-box">
        <view class="paddingleft viewlist-noborder"><text>{{msgList.funds_comment=='' ? '无' : msgList.funds_comment}}</text></view>
      </view>
    </view>
  </view>
</view>
<view class="makePhoneCall">
  <view class='share-box'><button class='share-box-button' open-type="share"><view class='share-box-main'>分享</view></button></view>
  <view class="makePhoneCall-box">
    <button class="call" type="{{msgList.creator.user_id.length == 13 ? 'lightgreen' : 'default'}}" bindtap="{{msgList.creator.user_id.length == 13 ? 'makePhoneCall' : ''}}">
    <image src="{{call}}"></image>拨打电话
    </button>
  </view>
</view>
</view>
<loading hidden="{{loadingHidden}}">
	加载中...
</loading>

