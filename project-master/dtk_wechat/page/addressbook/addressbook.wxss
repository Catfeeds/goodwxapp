.container{
  padding: 100rpx 30rpx 30rpx 30rpx;
}
.abbressbook{
  background: #fff;
  border-radius: 10rpx;
  border-top-right-radius:100rpx;
  min-height: 414rpx;
  margin-top: 30rpx;
  position: relative;
}
.abbressbook-main{
  padding: 20rpx 30rpx 20rpx 48rpx;
}
.abbressbook-title{
  font-size: 40rpx;
  color: #435ba0
}
.abbressbook-title text{
  font-size: 28rpx;
  color: #221814;
}
.abbressbook-list{
  padding-top: 20rpx;
  font-size: 28rpx;
}
.abbressbook-address{
  font-size: 28rpx;
  color: #fff;
}
.abbressbook-list-box{
  min-height: 50rpx;
  line-height: 50rpx;
}
.abbressbook-image{
  float: left;
  margin-right: 15rpx;
  margin-top: 3rpx;
  width: 30rpx;
  height: 30rpx;
}
.abbressbook-list-box text{
  float: left;
  width: 400rpx;
  word-wrap:break-word;
  line-height: 40rpx;
}
.abbressbook-address{
  position: relative;
  margin-top: 40rpx;
  z-index: 9;
}
.abbressbook-address-image{
  position: absolute;
  height: 159rpx;
  width: 100%;
  left: 0;
  bottom: 0;
}
.abbressbook-address view{
  height: 40rpx;
  line-height: 40rpx;
}
.address-title{
  float: left;
}
.address-mian{
  float: left;
  width: 500rpx;
}
.abbressbook-avatar-image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.searchBox{
  width: 100%;
  background-color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 0 4rpx 6rpx #d5d5d5;
  z-index: 9;
}
.searchBox .section{
  width: 80%;
  margin: 0 auto;
  position: relative;
}
.searchBox input{
  display: inline-block;
  width: 90%;
  height: 80rpx;
  vertical-align: middle;
  float: left;
  margin-top: 10rpx;
}
.searchBox input::input-placeholder{
  font-size: 4rpx;
}
.searchBox .searchicon{
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}
.searchBox .searchicon icon{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.btn-area{
  padding: 0 30rpx;
}