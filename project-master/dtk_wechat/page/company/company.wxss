/* company.wxss */
.company-left{
  float: left;
  width: 200rpx;
  text-align: center
}
.listBox{
  padding: 0 30rpx;
}
.avatar{
  width: 200rpx;
  height: 144rpx;
  text-align: center
}
.avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 2rpx solid #ccc;
  overflow: hidden;
  background: #fff;
  float: left;
  margin:0 0 0 30rpx;

}
.list-main-lists{
  background-color: #fff;
  height: 200rpx;
  padding: 20rpx 30rpx 20rpx 0;
  position: relative;
  box-shadow:0 10rpx 10rpx #d5d5d5;
  margin-bottom: 40rpx;
  margin-top: 30rpx;
  border-radius: 10rpx;
}
.company-right{
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 140rpx;
}
.authflag{
  padding: 0;
  margin: 0;
}
.tel{
  padding-top: 20rpx;
}
.view_hide{
    display: none;
}
.view_show{
    display: block;
}
.view_hide_list{
    display: none;
}
.view_show_list{
    display: block;
}
.approve{
  position: absolute;
  left: -4rpx;
  top: -58rpx;
  width: 120rpx;
  height: 120rpx;
}
.rolebutton{
  display:inline-block;
line-height:2.3;
font-size:26rpx;
padding:0 1.34em;
color:#e64340;
border:2rpx solid #e64340;
background-color:transparent;
border-radius:10rpx;
margin-top:20rpx;
margin-bottom:20rpx;

}
