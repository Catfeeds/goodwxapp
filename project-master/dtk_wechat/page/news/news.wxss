.container{
  margin:0 30rpx;
}
.news{
  background: #fff;
  border-radius: 10rpx;
  box-shadow:0 10rpx 10rpx #d5d5d5;
  padding: 10rpx 30rpx 20rpx 30rpx;
  margin-top: 30rpx;
  }
.news-title{
  font-size: 40rpx;
  color: #221814;
  padding-bottom: 20rpx;
}
.news-box-image{
  float: left;
  width: 160rpx;
  height: 120rpx;
  border-radius: 10rpx;
}
.news-box-text{
  float: right;
  width: 440rpx;
  font-size: 30rpx;
  color: #888889;
  line-height: 45rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.time{
  float:left;
  width: 100%;
  text-align: right;
  font-size: 28rpx;
  color: #888889;
  line-height: 40rpx;
  padding-top:10rpx; 
}