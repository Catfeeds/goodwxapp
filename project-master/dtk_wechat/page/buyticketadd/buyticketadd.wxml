<view class="container"  >
  <view class="containerBox">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="section-box">
        <image class="section-box-image" src="../../image/title.png"></image>
        <view class="add-title">基础信息</view>
        <view class="section clearfix" style="border:0;">
          <view class="section__title"><text class="section__title_text">汇票类型：</text></view>
          <view class="buyticketadd-box">
            <radio-group name="draft_type" bindchange="radioChange">
              <label><radio value="1" checked="true"/>不限</label>
              <label><radio value="2"/>纸票</label>
              <label><radio value="3"/>电票</label>
            </radio-group>
          </view>
        </view>
        <view class="section clearfix">
          <view class="section__title"><text class="section__title_text">承兑人：</text></view>
          <view class="buyticketadd-box">
            <checkbox-group name="acceptance_type" bindchange="acceptanceTypeChange">
              <label style="width:100%;" data-type="1" ontap="acceptanceTypeClick"><checkbox value="1" checked="{{acceptancetypetrue}}"/>不限</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="2" checked="{{acceptancetypefalse}}"/>大商</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="3" checked="{{acceptancetypefalse}}"/>国股</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="4" checked="{{acceptancetypefalse}}"/>城商</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="5" checked="{{acceptancetypefalse}}"/>农商</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="7" checked="{{acceptancetypefalse}}"/>农信</label>
              <label data-type="2" ontap="acceptanceTypeClick"><checkbox value="6" checked="{{acceptancetypefalse}}"/>财司</label>
            </checkbox-group>
          </view>
        </view>
        <view class="section clearfix">
          <view class="section__title"><text class="section__title_text">金额：</text></view>
          <view class="buyticketadd-box">
            <checkbox-group name="draft_value" bindchange="acceptanceValueChange">
              <label style="width:100%;" data-type="1" ontap="acceptanceValueClick"><checkbox value="1" checked="{{acceptancevaluetrue}}"/>不限</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="2" checked="{{acceptancevaluefalse}}"/>5万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="3" checked="{{acceptancevaluefalse}}"/>10万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="4" checked="{{acceptancevaluefalse}}"/>20万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="5" checked="{{acceptancevaluefalse}}"/>50万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="6" checked="{{acceptancevaluefalse}}"/>100万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="7" checked="{{acceptancevaluefalse}}"/>200万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="8" checked="{{acceptancevaluefalse}}"/>300万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="9" checked="{{acceptancevaluefalse}}"/>500万</label>
              <label data-type="2" ontap="acceptanceValueClick"><checkbox value="10" checked="{{acceptancevaluefalse}}"/>1000万</label>
            </checkbox-group>
          </view>
        </view>
        <view class="section clearfix">
          <view class="section__title"><text class="section__title_text">期限：</text></view>
          <view class="buyticketadd-box">
            <checkbox-group name="draft_term" bindchange="acceptanceTermChange">
              <label data-type="1" ontap="acceptanceTermClick"><checkbox value="1" checked="{{acceptancetermtrue}}"/>不限</label>
              <label data-type="2" ontap="acceptanceTermClick"><checkbox value="2" checked="{{acceptancetermfalse}}"/>1个月</label>
              <label data-type="2" ontap="acceptanceTermClick"><checkbox value="3" checked="{{acceptancetermfalse}}"/>3个月</label>
              <label data-type="2" ontap="acceptanceTermClick"><checkbox value="4" checked="{{acceptancetermfalse}}"/>6个月</label>
              <label data-type="2" ontap="acceptanceTermClick"><checkbox value="5" checked="{{acceptancetermfalse}}"/>12个月</label>
            </checkbox-group>
          </view>
        </view>
        <view class="section">
          <view class="section__title">交易地点：</view>
          <input class="weui-input section-mian " name="address" placeholder="请输入交易地点" />
        </view>
      </view>
      <view class="section-box">
        <image class="section-box-image" src="../../image/title.png"></image>
        <view class="add-title">业务备注</view>
        <view class="section clearfix" style="border:0;height:auto;">
            <textarea name="draft_comment" placeholder="请输入业务备注" />
        </view>
      </view>
      <view class="btn-area">
        <button type="red" formType="submit" disabled="{{disabled}}">提交</button>
      </view>
    </form>
  </view>
</view>