<view hidden="{{listBox}}">
  <view class="container">
    <view class="abbressbook">
      <view class="abbressbook-main">
        <view class="abbressbook-title">{{dataList.name}}<text>{{dataList.position == null || dataList.position == '' ? '' : "（"+dataList.position+"）"}}</text></view>
        <view class="abbressbook-list clearfix">
          <view class="abbressbook-list-box clearfix"><image class="abbressbook-image" src="../../image/phone.png"></image><text>{{dataList.user_id == null || dataList.user_id == '' ? '无' : dataList.user_id}}</text></view>
          <view class="abbressbook-list-box clearfix"><image class="abbressbook-image" src="../../image/position.png"></image><text>{{dataList.address}}</text></view>
          <view class="abbressbook-list-box clearfix"><image class="abbressbook-image" src="../../image/city.png"></image><text>{{dataList.company == null || dataList.company == '' ? '无' : dataList.company}}</text></view>
        </view>
        <view class="abbressbook-address">
          <view class="clearfix"><text class="address-title">微信：</text><text class="address-mian">{{dataList.wechat == null || dataList.wechat == '' ? '保密' : dataList.wechat}}</text></view>
          <view class="clearfix" wx:if="{{dataList.email}}"><text class="address-title">邮箱：</text><text class="address-mian">{{dataList.email}}</text></view>
        </view>
      </view>
      <image class="abbressbook-address-image" wx:if="{{dataList.gender=='1'}}" src="../../image/abbressbook_qj_man.png"></image>
      <image class="abbressbook-address-image" wx:elif="{{dataList.gender=='2'}}" src="../../image/abbressbook_qj_woman.png"></image>
      <image class="abbressbook-address-image" wx:else src="../../image/abbressbook_qj_unknown.png"></image>
      <image class="abbressbook-avatar-image" src="{{dataList.avatar}}"></image>
    </view>


    <view class="abbressbook-detail" wx:if="{{dataList.comment}}">
      <view class="abbressbook-main">
        <view class="abbressbook-detail-title"><text>简 介</text></view>
        <view class="abbressbook-detail-box"><text>{{dataList.comment}}</text></view>
      </view>
      <image class="abbressbook-address-image" wx:if="{{dataList.gender=='1'}}" src="../../image/abbressbook_bg_man.png"></image>
      <image class="abbressbook-address-image" wx:elif="{{dataList.gender=='2'}}" src="../../image/abbressbook_bg_woman.png"></image>
      <image class="abbressbook-address-image" wx:else src="../../image/abbressbook_bg_unknown.png"></image>
    </view>


  </view>
  <view class="makePhoneCall">
    <view class='share-box'><button class='share-box-button' open-type="share"><view class='share-box-main'>分享</view></button></view>
  <view class="makePhoneCall-box">
    <button class="call" type="lightgreen" bindtap="makePhoneCall"><image src="{{call}}">
    </image>拨打电话</button>
  </view>
</view>
</view>
<loading hidden="{{loadingHidden}}">
  加载中...
</loading>
