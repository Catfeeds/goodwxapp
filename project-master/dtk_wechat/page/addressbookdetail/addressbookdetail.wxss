.container{
  padding: 0 30rpx;
}
.abbressbook{
  background: #fff;
  border-radius: 10rpx;
  border-top-right-radius:100rpx;
  min-height: 414rpx;
  margin-top: 30rpx;
  position: relative;
}
.abbressbook-detail{
  background: #fff;
  border-radius: 10rpx;
  border-top-left-radius:100rpx;
  min-height: 414rpx;
  margin-top: 30rpx;
  position: relative;
}
.abbressbook-main{
  padding: 20rpx 30rpx 20rpx 48rpx;
}
.abbressbook-title{
  font-size: 40rpx;
  color: #435ba0
}
.abbressbook-title text{
  font-size: 28rpx;
  color: #221814;
}
.abbressbook-list{
  padding-top: 20rpx;
  font-size: 28rpx;
}
.abbressbook-address{
  font-size: 28rpx;
  color: #fff;
}
.abbressbook-list-box{
  height: 50rpx;
  line-height: 50rpx;
}
.abbressbook-image{
  float: left;
  margin-right: 15rpx;
  margin-top: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.abbressbook-list-box text{
  float: left;
  width: 400rpx;
  word-wrap:break-word;
}
.abbressbook-address{
  position: relative;
  margin-top: 40rpx;
  z-index: 9;
}
.abbressbook-address-image{
  position: absolute;
  height: 159rpx;
  width: 100%;
  left: 0;
  bottom: 0;
}
.abbressbook-address view{
  height: 40rpx;
  line-height: 40rpx;
}
.address-title{
  float: left;
}
.address-mian{
  float: left;
  width: 500rpx;
}
.abbressbook-avatar-image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.abbressbook-detail-title{
  text-align: right;
  font-size: 32rpx;
  padding-top: 30rpx;
  padding-right: 48rpx;
}
.abbressbook-detail-title text{
  border-bottom: 5rpx solid #435ba0;
}
.abbressbook-detail-box{
  padding-top: 16rpx;
  padding-right: 48rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #221814;
}