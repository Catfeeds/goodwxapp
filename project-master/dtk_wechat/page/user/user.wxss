/* user.wxss */
@import "../../common/weui.wxss";
label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.containerBox{
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 10rpx;
  background: #fff;
  box-shadow:0 10rpx 10rpx #d2d3d3;
}
.section{
  margin:0 30rpx;
  height: auto;
  min-height: 100rpx;
}
.radio {
  margin-right: 20rpx;
}
.section__title{
  width: 28%;
}
.section-mian{
  padding:8rpx 0 0 0;
}
.section__box{
  text-align: right;
  color: #888889;
}
.section__box_text{
  line-height: 50rpx;
  padding-top: 24rpx;
}
.head{
  position: relative;
  background: #d43836;
   text-align: center;
   padding: 40rpx 0;
   border-bottom-right-radius: 60%;
   border-bottom-left-radius: 60%;
   width: 120%;
   height: 212rpx;
   margin-left: -10%;
}
.avatar{
  padding: 60rpx 0 30rpx;
  width: 142rpx;
  height: 142rpx;
  position: absolute;
  left: 50%;
  bottom: -71rpx;
  margin-left:-71rpx; 
}
.avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 2rpx solid #ccc;
  overflow: hidden;
  background: #fff;
}
.editavatar{
  padding:30rpx 0 0 0;
  text-align: center;
  color: #d43836;
}
.editavatar text{
  margin: 0 20rpx;
}
page {
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.index-hd{
  text-align: center;
  padding: 180rpx 0;
}
.index-logo{
   width: 172rpx; 
   height: 172rpx; 
   margin: 0 auto;
}
.page-section {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.page-body-title {
  font-size: 60rpx;
  line-height: 200rpx;
}
.page-body-text {
  color: #bbb;
  font-size: 28rpx;
  line-height: 40rpx;
  margin: 0 0 100rpx 0;
  text-align: center;
}
.page-body-button {
  width: 100%;
}
.loginInfo{
 text-align: center;
 padding-top: 40rpx;
}
.copyright{
  padding:20rpx 0 20rpx 0;
}
.user-login{
  padding:0 30rpx;
  text-align: center;
}
.user-login-text{
 padding: 20rpx 0;
}
.applylist{
  float: left;
  width: 50%;
}
.apply navigator{
  width: 95%;
  text-align: center;
  color:#000000;
  background-color:#F8F8F8;
  margin-bottom:20rpx;
  border-radius:10rpx;
  font-size:36rpx;
  line-height:2.0;
  border:2rpx solid rgba(0, 0, 0, 0.2);
}
.container{
  min-height: auto;
}
.btn-area{
  margin:30rpx 30rpx 0;
  width: auto;
}
.comment-tltle{
  border-bottom: 2rpx solid #eeeeee;
  padding: 10rpx 0;
  margin-bottom: 10rpx;
  margin: 0 30rpx;
}
.comment{
  padding: 15rpx 30rpx;
  color: #888889;
}
.public-image{
  width:39rpx;
  height: 25rpx;
}
.edit-image{
  width:32rpx;
  height: 31rpx;
  position: relative;
  top: 5rpx;
  margin:0 0 0 20rpx ;
}
.head-box{
  width: 100%;
  height: 340rpx;
  overflow:hidden;
}