.list-title{
  padding:20rpx 0;
  background: #fff;
  box-shadow: 0 10rpx 10rpx #d5d5d5;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1;
}
.list-title-box{
  padding:0 30rpx;
}
.list-main{
  padding: 200rpx 30rpx 20rpx 30rpx;
}
.list-main-lists{
  background: #fff;
  margin-bottom: 30rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 12rpx #d5d5d5;
  border-radius: 10rpx;
}
.card-lift{
  float: left;
}
.card-lift-image image{
  width: 160rpx;
  height: 160rpx;
  float: left;
}
.card-right{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  padding:0 20rpx 0 0;
  line-height: 48rpx;
  float: left;
  font-size: 28rpx;
}
.card-operate{
  text-align: right;
  padding-right: 30rpx;
}
.card-operate button{
  margin-left: 20rpx;
  margin-bottom: 0;
  float:right;
}
.delete{
  position: absolute;
  right:0;
  top:0;
  width: 100rpx;
  height: 100rpx;
}
