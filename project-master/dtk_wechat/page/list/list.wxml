<import src="../../templates/personalInfo.wxml"/>
<view class="listBox" hidden="{{listBox}}">
<!--
  <view class="list-title" wx:if="{{urlid !== 'company'}}">
    <view class="list-title-box">
      <button type="red" hover-class="other-button-hover" bindtap="addList"><image style="width:32rpx; height:32rpx;" src="{{imgsrc}}"></image> 增加资金业务</button>
    </view>
  </view>
-->
  <view class="swiper-tab">  
    <view class="swiper-tab-list"><text data-current="0" bindtap="swichNav" class="{{currentTab==0 ? 'on' : ''}}">全部</text></view>  
    <view class="swiper-tab-list"><text data-current="1" bindtap="swichNav" class="{{currentTab==1 ? 'on' : ''}}">我的</text></view> 
    <view class='addbusiness' bindtap="addList"><image src="../../image/addbusiness.png"></image></view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}rpx" bindchange="bindChange">  
    <swiper-item>
      <!-- 资金业务=全部  begin -->
      <!-- 没有数据显示 -->
      <view hidden="{{nothingAll}}">
        <template is="nothing"></template>
      </view>
      <view class="list-main-all" wx:for="{{msgAllList}}"  wx:key="id" id="{{item.id}}" bindtap="listClick">
        <image wx:if="{{item.fund_status=='1'}}" class="abolition" style="width:120rpx; height:120rpx;" src="{{complete}}"></image>
        <view class='list-all-title clearfix'>
          <text class='list-all-title-box'>{{item.funds_type}}</text>
          <text class='list-all-title-time'>{{item.update_datetime}}</text>
        </view>
        <view class='list-all-main clearfix'>
          <image class='list-all-main-image' src="{{item.creator.avatar ? item.creator.avatar : '../../image/m.png'}}"></image>
          <view class='list-all-main-title clearfix'><text>{{item.creator.name ? item.creator.name:'保密'}}</text><text wx:if="{{item.creator.user_id}}">({{item.creator.user_id}})</text></view>
          <view class='list-all-main-box clearfix'>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>业务金额</view>
              <view class='list-all-main-box-info' style="font-size:{{item.funds_value == '不限' ? '28rpx' : '44rpx'}}">{{item.funds_value}}<text wx:if="{{item.funds_value !== '不限'}}">万</text></view>
            </view>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>日收益</view>
              <view class='list-all-main-box-info' style="font-size:{{item.yield_rate == '面议' ? '28rpx' : '44rpx'}}">{{item.yield_rate}}<text wx:if="{{item.yield_rate !== '面议'}}">‰</text></view>
            </view>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>业务期限</view>
              <view class='list-all-main-box-info' style="font-size:{{item.funds_duration == '不限' ? '28rpx' : '44rpx'}}" >{{item.funds_duration}}<text wx:if="{{item.funds_duration !== '不限'}}">天</text></view>
            </view>
          </view>
        </view>
      </view>
      <!-- 资金业务=全部  end -->
    </swiper-item>  
    <swiper-item> 
      <!-- 资金业务=我的  begin --> 
      <!-- 没有数据显示 -->
      <view hidden="{{nothing}}">
        <template is="nothing"></template>
      </view>
      <view class="list-main-all height-me" wx:for="{{msgList}}"  wx:key="id" id="{{item.id}}"  data-draftstatus="{{item.fund_status}}"  bindtap="listClick" bindtouchend="touchend"  bindlongtap="mylongtap">
        <image wx:if="{{item.fund_status=='1'}}" class="abolition" style="width:120rpx; height:120rpx;" src="{{complete}}"></image>
        <view class='list-all-main-me clearfix'>
          <image class='list-all-main-image' style='top:16rpx;width:45rpx; height:45rpx;' src="{{item.imgTitle}}"></image>
          <view class='list-all-main-title clearfix' style='padding-top:0;padding-bottom:10rpx;'>
            <text class='list-all-title-box fontsize'>{{item.funds_type}}</text>
            <text class='list-all-title-time'>{{item.update_datetime}}</text>
          </view>
          <view class='list-all-main-box clearfix'>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>业务金额</view>
              <view class='list-all-main-box-info' style="font-size:{{item.funds_value == '不限' ? '28rpx' : '44rpx'}}">{{item.funds_value}}<text wx:if="{{item.funds_value !== '不限'}}">万元</text></view>
            </view>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>日收益</view>
              <view class='list-all-main-box-info' style="font-size:{{item.yield_rate == '面议' ? '28rpx' : '44rpx'}}">{{item.yield_rate}}<text wx:if="{{item.yield_rate !== '面议'}}">‰</text></view>
            </view>
            <view class='list-all-main-box-text'>
              <view class='list-all-main-box-title'>业务期限</view>
              <view class='list-all-main-box-info' style="font-size:{{item.funds_duration == '不限' ? '28rpx' : '44rpx'}}">{{item.funds_duration}}<text wx:if="{{item.funds_duration !== '不限'}}">天</text></view>
            </view>
          </view>
        </view>
      </view>
      <!-- 资金业务=我的  end --> 
    </swiper-item>
  </swiper>
</view>
<loading hidden="{{loadingHidden}}">
加载中...
</loading>
