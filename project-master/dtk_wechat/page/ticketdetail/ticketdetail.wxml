<import src="../../templates/personalInfo.wxml"/>
<view hidden="{{detailBox}}">
<view class="list-box">
  <!-- 个人信息 -->
  <template is="personal" data="{{msgList}}"></template>
  <!-- 票源信息 -->
  <view class="list fillet">
    <image wx:if="{{msgList.draft_status=='1'}}" class="abolition" style="width:120rpx; height:120rpx;" src="../../image/complete2.png"></image>
    <view class="list-guarantors">
      <view class="list-guarantors-title"><image class="cardImage" src="{{msgList.cardImage}}"></image>{{msgList.draft_type}}</view>
      <view class="list-guarantors-box" style="padding-top:0;">
        <view class="viewlist clearfix"><text class="redcolor fl">总金额：{{msgList.draft_value}}</text><text class="fr graycolor">汇票张数：{{msgList.draft_count}}</text></view>
        <view class="viewlist redcolor" hidden="{{inputHidden}}">
          售价：<input  bindinput="sumChange" disabled="{{input}}" value="{{draftprice}}" type="digit"/>
          <view class="operate" wx:if="{{userId==uid && msgList.draft_status !== 1}}">
            <image src="../../image/edit.png" hidden="{{isEdit}}" bindtap="edit"></image>
            <image src="../../image/comfirmEdit.png" hidden="{{isComfirm}}" bindtap="comfirmEdit"></image>
            <image src="../../image/cancelEdit.png" hidden="{{isComfirm}}" bindtap="cancelEdit"></image>
          </view>
        </view>
        <view class="viewlist redcolor" hidden="{{textHidden}}">
          售价：{{msgList.sell_price}}
          <view class="operate" wx:if="{{userId==uid && msgList.draft_status !== 1}}">
            <image src="../../image/edit.png" hidden="{{isEdit}}" bindtap="edit"></image>
          </view>
        </view>
        <view class="viewlist">到期日期：{{msgList.draft_end_date}}</view>
        <view class="location-viewlist  clearfix"><text class="location">承兑人：</text><text class="location-text">{{msgList.acceptance}}</text></view>
        <view class="location-viewlist viewlist-noborder clearfix"><text class="location">交易地点：</text><text class="location-text">{{msgList.address=='' ? '全国' : msgList.address}}</text></view>
      </view>
    </view>
  </view>
  <!-- 票源图片 -->
  <view class="list fillet">
    <view class="list-guarantors">
      <view class="list-guarantors-title"><image src="{{image05}}"></image>票源图片</view>
      <view class="list-guarantors-box clearfix" wx:if="{{msgList.pics.length < 1}}">未添加票源图片</view>
      <view class="list-guarantors-box clearfix" wx:else>
        <view class="label-box" wx:for="{{msgList.pics}}"  wx:for-index="id" wx:for-item="item">
          <image  src="{{item}}" data-src="{{item}}"  bindtap="previewImagePic"></image>
        </view>
      </view>
    </view>
  </view>
  <!-- 标签信息 -->
  <view class="list fillet">
    <view class="list-guarantors">
      <view class="list-guarantors-title"><image src="{{image06}}"></image>标签信息</view>
      <view class="list-guarantors-box clearfix" wx:if="{{msgList.tags.length < 1}}">未添加标签信息</view>
      <view class="list-guarantors-box clearfix" wx:else>
        <view class="label-box-tags" wx:for="{{msgList.tags}}"  wx:for-index="id" wx:for-item="item">{{item}}</view>
      </view>
    </view>
  </view>
</view>
<view class="makePhoneCall">
  <view class='share-box'><button class='share-box-button' open-type="share"><view class='share-box-main'>分享</view></button></view>
  <view class="makePhoneCall-box">
    <button class="call" type="{{msgList.creator.user_id.length == 13 ? 'lightgreen' : 'default'}}" bindtap="{{msgList.creator.user_id.length == 13 ? 'makePhoneCall' : ''}}"><image src="{{call}}">
    </image>拨打电话</button>
  </view>
</view>
</view>
<loading hidden="{{loadingHidden}}">
	加载中...
</loading>
