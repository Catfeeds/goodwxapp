@import "../../common/weui.wxss";
label {
  display: inline-block;
  width: 50%;
  text-align: center;
}
.cardadd{
  padding: 20rpx 0;
}
.cardadd-button{
  padding:10rpx 30rpx;
}
.textarea-box{
  background: #fff;
  border-radius: 10rpx;
  margin: 0 30rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.containerBox{
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.radio {
  margin-right: 20rpx;
}
.sectionbottom{
  position: relative;
}
.section-box{
  background: #fff;
  margin:0 0 10rpx;
  border-radius: 10rpx;
}
.section__title{
  width: 28%;
  padding: 0;
}
.add-title{
  color: #595757;
  padding-left:30rpx;
  font-size: 28rpx;
}
.buyticketadd-box{
  float: left;
  width: 72%;
  line-height: 70rpx;
  padding:5px 0 10px 0;
  font-size: 28rpx;
}
.section {
  border-top:2rpx solid #EEEFEF;
  margin:0 20rpx;
  height: auto;
  min-height:100rpx;
}
checkbox, wx-radio{
  font-size: 28rpx;
  margin-right:0;
}
.section textarea{
  float: left;
  width: 100%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  line-height: 44rpx;
  height: 410rpx;
}
.section-mian{
  padding:8rpx 0 0 0;
  font-size: 34rpx;
}
.btn-area{
  padding: 0;
}
.prompt{
  color: #888889;
  font-size: 24rpx;
}
.template-title{
  color: #ea583d;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx 0;
}
.template-list-box{
  background: #fff;
  border-radius: 10rpx;
  box-shadow:0 10rpx 10rpx #d5d5d5;
  font-size: 32rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.rotate{
  transform:rotate(180deg);
}
.template-list-title{
  text-align: center;
  font-weight: bold;
  padding: 5rpx 0 6rpx;
}
.template-title-text{
  color: #f2982f;
  font-size: 32rpx;
  padding: 0 10rpx;
}
.template-title-text2{
  color: #ed7038;
  font-size: 32rpx;
  padding: 0 10rpx;
}
.template-title-text3{
  color: #d43836;
  font-size: 32rpx;
  padding: 0 10rpx;
}
.template-list-title image{
  width: 160rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
}
.template-text{
  font-size: 28rpx;
  line-height: 42rpx;
  padding: 0 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}