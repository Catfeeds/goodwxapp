<!--drawer.wxml-->
<view class="container">
  <view class="containerBox">
    <form bindsubmit="formSubmit" bindreset="formReset">
      <view class="section-box">
          <view class="section" style="border:0;">
            <view class="section__title">用户名：</view>
              <input type="number" class="weui-input section-mian" name="user_id" placeholder="请输入用户名" bindinput="mobileInputEvent" />
          </view>
          <view class="section">
            <view class="section__title">设置密码：</view>
              <input type="password" class="weui-input section-mian" name="user_passwd" placeholder="请输入用户密码" />
          </view>
          <view class="section">
            <view class="section__title">确认密码：</view>
              <input type="password" class="weui-input section-mian" name="confirm_passwd" placeholder="确认密码" />
          </view>
        </view>
        <view class="section-box">
          <view class="section" style="border:0;">
            <view class="section__title">姓名：</view>
              <input class="weui-input section-mian" name="name" placeholder="请输姓名" />
          </view>
          <view class="section">
            <view class="section__title">微信号：</view>
              <input class="weui-input section-mian" name="wechat" placeholder="请输微信号"  />
          </view>
          <view class="section">
            <view class="section__title">公司名称：</view>
              <input class="weui-input section-mian" name="company_name" placeholder="请输公司名称"/>
          </view>
          <view class="section">
            <view class="section__title">工作地点：</view>
              <input class="weui-input section-mian" name="address" placeholder="请输工作地点"/>
          </view>
      </view>
      <view class="section-box">
        <view class="section" style="border:0;" wx:if="{{isCode}}">
          <view class="section__title">图形验证码：</view>
            <input class="weui-input section-mian inputmin" name="imgCaptcha"  bindinput="imgInputEvent" />
            <image class="imgCode" src="{{imgCode}}" bindtap="clickImgCode"></image>
        </view>
        <view class="section">
            <view class="section__title">短信验证码：</view>
            <input class="weui-input section-mian inputmin" name="captcha" />
            <button type="primary" size="mini" plain="true" class="codeButton" bindtap="picCode" disabled="{{buttonDisable}}">{{verifyCodeTime}}</button>
        </view>

        

      </view>
      <view class="btn-area">
        <button type="warn" formType="submit">提交</button>
      </view>
    </form>
  </view>
</view>
