page{
  min-width: 640rpx;
}
.bottom{
  margin-bottom: 30rpx;
}
.calendarBox{
  background-color: #fff;
  padding: 40rpx 12rpx 4rpx;
}
.calendarBox .exchange{
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}
.calendarBox .exchangeBox{
  display: inline-block;
}
.calendarBox .type{
  display: inline-block;
  width: 160rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #f00;
}
.calendarBox .type:first-child{
  border-radius: 12rpx 0 0 12rpx;
}
.calendarBox .type:last-child{
  border-left: none;
  border-radius: 0 12rpx 12rpx 0;
}
.calendarBox .selected{
  background: #D43836;
  color: #fff;
}
.chooseBox{
  width: 100%;
  position: relative;
  margin-bottom: 40rpx;
}
.last, .next{
  width: 100rpx;
  height: 60rpx;
  position: absolute;
  top: 6rpx;
}
.last{
  left: -12rpx;
  text-align: right;
}
.next{
  right: -4rpx;
  text-align: left;
}
.last image, .next image{
  width: 48rpx;
  height: 48rpx;
}
.chooseBox .choose{
  width: 40%;
  text-align: center;
  color: #fe5850;
  font-size: 44rpx;
  margin: 0 auto;
}
.dayBox{
  color: gray;
  font-size: 32rpx;
}
.dayBox, .dayLimit{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
}
.calendarBox .dayItem, .calendarBox .dateItem{
  width: 14.28%;
  display: inline-block;
  text-align: center;
  border-bottom: 1px solid rgba(205, 201, 201, 0.8);
}
.calendarBox .dateItem:nth-last-child(-n+7){
  border: none;
}
.calendarBox .dayItem:nth-child(7n),
.calendarBox .dayItem:nth-child(7n-1),
.calendarBox .dateItem:nth-child(7n) .day,
.calendarBox .dateItem:nth-child(7n-1) .day{
  color: #f00;
}
.dayLimit{
  margin-bottom: 30rpx;
}
.calendarBox .dateItem text{
  display: block;
  margin:0;
  padding: 0;
}
.calendarBox .dateItem .day{
  font-size: 44rpx;
  font-weight: bold;
  font-family: 'Arial';
  height: 60rpx;
  line-height: 60rpx;
  color: #333;
  margin-top: 16rpx;
}
.calendarBox .dateItem .accural{
  color: #fe5850;
  font-size: 28rpx;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 16rpx;
}
.circle{
  width:108rpx;
}
.today{
  border-radius:100%;
  background-color: #fe5850;
}
.calendarBox .dateItem .today .day,
.calendarBox .dateItem .today .accural{
  color: #fff;
}
