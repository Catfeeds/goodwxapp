<view class="code-wrap">
  <view class="code-info">
    <text>复制框内整段文字{{state.code}}</text>
  </view>
  <view class="btn-copy" bindtap="handleCopy">{{state.isCopyed ? '复制成功, 请打开手机tb' : '一键复制口令'}}</view>
  <view class="copy-tips" wx:if="{{state.isShowCopyTips && !state.isCopyed}}">
    <text>Tips: </text>复制失败，请更新微信版本到最新版
  </view>
</view>
