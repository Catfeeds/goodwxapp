<form bindsubmit="formSubmit" report-submit='true'>
  <button formType="submit" class="formIdBtn">
    <view>
      <scroll-view class="switch-tab" scroll-x="{{true}}" scroll-y="true">
        <view wx:for="{{state.tabs}}"
              catchtap="handleTab"
              wx:key="{{index}}"
              class="item {{index === props.dataTemp.tabIndex ? 'active' : ''}}"
              style="{{'width: ' +  100 / state.tabs.length + '%'}}"
              data-index="{{index}}">
          <text
            class="content" data-index="{{index}}" catchtap="handleTab">{{item}}
          </text>
        </view>
      </scroll-view>

      <scroll-view class="order-view" scroll-y="{{true}}" scroll-x="{{false}}" style="height: calc(100vh - 90rpx)"
                   bindscrolltolower="getNextPage" lower-threshold="200">
        <view class="order-item" wx:for="{{props.dataOrders.data}}" wx:for-item="pItem" wx:for-index="pIndex" wx:key="groupOrderId">
          <navigator class="cell" open-type="navigate" url="/pages/product/detail?id={{item.orderItem.productId}}" wx:for="{{pItem.orderItems}}" >
            <view class="img-box">
              <image src="{{item.orderItem.img}}" />
            </view>
            <view>
              <view class="title">{{item.orderItem.productName}}</view>
              <view class="info">
                <text class="type">{{pItem.memberLimit}}人团</text>
                <text class="price">￥{{pItem.paidPrice/100 + '(运费' + pItem.priceDetail.logisticsAmount/100 + ')'}}</text>
                <text class="status" wx:if="{{pItem.status === 'FAILED'}}">组团失败</text>
                <text class="status" wx:if="{{pItem.status === 'SUCCESS'}}">组团成功</text>
                <text class="status" wx:if="{{pItem.status === 'ACTIVE'}}">组团中</text>
              </view>
            </view>
          </navigator>
          <view class="handle-btn">
            <view class="btn-groupDetail"><navigator url="/pages/groupDetail/index?groupOrderNo={{pItem.groupOrderNo}}">查看团详情</navigator></view>
            <view class="btn-orderDetail"><navigator url="/pages/order/detail?orderNo={{pItem.orderNo}}">订单详情</navigator></view>
          </view>
        </view>
      </scroll-view>
      <view class="empty" wx:if="{{props.dataOrders.data.length === 0}}">
        <view class="image-wrapper">
          <image src="../../images/empty@3x.png"></image>
        </view>
        <view class="tip">还没有相关订单哟~</view>
      </view>
    </view>
  </button>
</form>
