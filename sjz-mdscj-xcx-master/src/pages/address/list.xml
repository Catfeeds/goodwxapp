<form bindsubmit="formSubmit" report-submit='true'>
  <button formType="submit" class="formIdBtn">
    <view class="address">
      <image class="address-title" src="../../images/envelope_title.png"></image>
      <view class="address-none" wx:if="{{props.list.length == 0}}">
        <view class="icon"></view>
        <text class="info">你还没有收货地址哦～</text>
        <navigator url="detail" class="item" hover-class="none">
          <button class="btn-add">添加地址</button>
        </navigator>
      </view>
      <view wx:else>
        <scroll-view scroll-y="true" class="address-list">
          <navigator wx:for="{{props.list}}" wx:key="{{index}}" url="{{'detail?id=' + item.id}}">
            <view class="address-item">
              <text class="name">{{item.consignee}}  {{item.phone}}</text>
              <view class="detail">
                <text class="isDefault" wx-if="{{item.isDefault}}">(默认)</text>
                <text class="text">{{item.province}} {{item.city}} {{item.district}} {{item.street}}</text>
              </view>
              <image src="../../images/arrow@3x.png" class="arrow" />
            </view>
          </navigator>
        </scroll-view>
        <navigator url="detail" class="address-add">
          <image src="../../images/address_add@3x.png" class="add-icon"/>
          <text class="btn-add-block">新增收货地址</text>
        </navigator>
      </view>
    </view>
  </button>
</form>
