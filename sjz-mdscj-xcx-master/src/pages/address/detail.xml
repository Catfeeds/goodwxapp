<form bindsubmit="formSubmit" report-submit='true'>
  <button formType="submit" class="formIdBtn">
    <view class="detail">
      <image class="address-title" src="../../images/envelope_title.png"></image>
      <form class="form" bindsubmit="handelSubmit">
        <view class="section clearfix">
          <view class="title">收件人</view>
          <input name="input" value="{{props.detail.consignee}}" class="controller" data-field="consignee" bindblur="changeInput" placeholder="请填写收件人" />
        </view>

        <view class="section clearfix">
          <view class="title">手机号</view>
          <input name="number" value="{{props.detail.phone}}" class="controller" data-field="phone" bindblur="changeInput"  placeholder="请填写手机号" />
        </view>

        <view class="section">
          <view class="title">省市区</view>
          <picker bindchange="bindPickerChange" data-field="0" value="{{props.detail.indexRegion0}}" range="{{props.region0}}" range-key="name">
            <view class="region-show">
              {{props.region0[props.detail.indexRegion0].name || '请选择省'}}
            </view>
          </picker>
          <picker wx:if="{{props.region1.length}}" bindchange="bindPickerChange" data-field="1" value="{{props.detail.indexRegion1}}" range="{{props.region1}}" range-key="name">
            <view class="region-show">
              {{props.region1[props.detail.indexRegion1].name  || '请选择市'}}
            </view>
          </picker>
          <picker wx:if="{{props.region2.length}}" bindchange="bindPickerChange" data-field="2" value="{{props.detail.indexRegion2}}" range="{{props.region2}}" range-key="name">
            <view class="region-show">
              {{props.region2[props.detail.indexRegion2].name  || '请选择区'}}
            </view>
          </picker>
        </view>

        <view class="section section-area clearfix">
          <view class="title">详细地址</view>
          <view class="textarea-wrapper">
            <textarea  class="controller textarea" value="{{props.detail.street}}" data-field="street" bindblur="changeInput" auto-height placeholder="请填写详细地址" />
          </view>
        </view>

        <view class="section clearfix">
          <view class="title">邮政编码</view>
          <input name="input" class="controller" value="{{props.detail.zipcode}}" maxlength="6" data-field="zipcode" bindblur="changeInput" placeholder="请填写邮政编码（选填）" />
        </view>
        <view class="section clearfix">
          <view class="title setDefault">设置为默认地址</view>
          <switch class="switch" checked="{{props.detail.isDefault}}" bindchange="changeDefault" color="#ff2551" />
        </view>

        <button class="submit" formType="submit">保存</button>
        <button wx:if="{{state.id}}" class="submit del" catchtap="delAddress">删除</button>
      </form>
    </view>
  </button>
</form>
