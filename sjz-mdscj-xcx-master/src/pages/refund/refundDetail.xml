<form bindsubmit="formSubmit" report-submit='true'>
  <button formType="submit" class="formIdBtn">
    <view class="wrap-refund">
      <view class="list-refund-steps">
        <view class="refund-step-item" wx:for="{{props.dataDetails}}" wx:key="{{index}}">
          <view class="item-box">
            <view class="refund-info">
              <text class="status">{{item.statusShow}}</text>
              <text class="time">{{item.timeShow}}</text>
            </view>
            <view class="refund-info">买家要求： {{item.typeShow}}</view>
            <view class="refund-info">退款金额： {{item.refundAmount / 100}}</view>
            <view class="refund-info">退款原因： {{item.reasonShow}}</view>
            <view class="refund-info"
                  wx-if="{{item.status !== 'APPLYING' && item.status !== 'REJECTED'}}">联系人： {{item.refundAddress.consignee}}</view>
            <view class="refund-info"
                  wx-if="{{item.status !== 'APPLYING' && item.status !== 'REJECTED'}}">联系方式： {{item.refundAddress.phone}}</view>
            <view class="refund-info">备注： {{item.memo||item.rejectMemo || ''}}</view>
          </view>
        </view>
      </view>

      <block wx:if="{{props.dataDetails.length}}">
        <view class="btn-bottom-fixed" wx-if="{{props.dataDetails[0].status === 'APPLYING'}}" catchtap="handleRefundCancel">取消申请</view>
      </block>
    </view>
  </button>
</form>
