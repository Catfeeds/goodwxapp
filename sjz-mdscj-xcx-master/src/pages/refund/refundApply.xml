<form bindsubmit="formSubmit" report-submit='true'>
  <button formType="submit" class="formIdBtn">
    <view class="wrap-refund">
      <view class="list-form">
        <view class="form-item">
          <label class="form-lbl">申请服务</label>
          <view class="form-main">
            <picker
              bindchange="bindPickerChange"
              data-field="refundType"
              vaule="{{props.dataRefunds.refundTypeIndex}}"
              range="{{props.dataRefunds.enumRefundType}}"
              range-key="value"
              disabled="{{true}}">
              <view class="picker">
                {{props.dataRefunds.enumRefundType[props.dataRefunds.refundTypeIndex].value}}
              </view>
            </picker>
          </view>
        </view>
        <view class="form-item">
          <label class="form-lbl">申请原因</label>
          <view class="form-main">
            <picker
              bindchange="bindPickerChange"
              data-field="refundReason"
              vaule="{{props.dataRefunds.refundReasonIndex}}"
              range="{{props.dataRefunds.enumRefundReason}}"
              range-key="value"
              disabled="{{false}}">
              <view class="picker">
                {{props.dataRefunds.enumRefundReason[props.dataRefunds.refundReasonIndex].value}}
              </view>
            </picker>
          </view>
        </view>
        <view class="form-item">
          <label class="form-lbl">退货金额</label>
          <view class="form-main">
            ￥{{props.detail.orderItems[0].orderItem.subtotal / 100}}
          </view>
        </view>
        <view class="form-item">
          <label class="form-lbl">申请说明</label>
          <view class="form-main">
            <textarea placeholder="最多200字" placeholder-class="textarea-pr" data-field="refundMemo" bindinput="handleChangeValue"></textarea>
          </view>
        </view>
      </view>
      <view class="btn-refund" catchtap="handleBtnRefund">提交申请</view>
    </view>
  </button>
</form>
