<view class="product-item">
  <view id="upInfo" class="up-info" wx:if="{{props.item.isCurrent}}">
    <image src="http://img-prod.kkkd.com/FogaRj_aexxZV8SaZ5n5HDeGtJFE"></image>
    <text>今日已推商品</text>
  </view>
  <view class="product-card">
    <view class="mod-swiper">
      <swiper
        class="swiper"
        indicator-dots="{{state.indicatorDots}}" circular="{{state.circular}}"
        indicator-color="{{state.indicatorColor}}" indicator-active-color="{{state.indicatorActiveColor}}"
        autoplay="{{state.autoplay}}" interval="{{state.interval}}" duration="{{state.duration}}">
        <block wx:key="*this" wx:for="{{props.item.imageUrls}}">
          <swiper-item>
            <image src="{{item}}" mode="aspectFill" class="swiper-banner"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="mod-info">
      <view class="name">{{props.item.prodName}}</view>
      <view class="price-info pre" wx:if="{{props.item.prodType === 1}}">
        <view class="price-pre">定金:￥<text class="price">{{props.item.promotionPrice}}</text></view>
        <view>预售价：<text class="price">￥{{props.item.salesPrice}}</text></view>
      </view>
      <view class="price-info" wx:else="">
        <view class="price-coupon"><text>{{props.item.showCouponPrice}}元</text></view>
        <view class="price-new">
          券后价：<view class="price"><text>￥</text>{{props.item.promotionPrice}}</view>
        </view>
      </view>
      <view class="code">{{props.item.taokePwd}}</view>
    </view>
    <view class="copy-tips" wx:if="{{state.isShowCopyTips && !state.isCopyed}}">
      <text>Tips: </text>复制失败，请更新微信版本到最新版
    </view>
    <view class="btn-copy-code" bindtap="handleCopy">{{state.isCopyed ? '复制成功，请打开手机淘宝' : '一键复制'}}</view>
  </view>
  <view class="down-info" wx:if="{{props.item.isCurrent}}">
    <image src="http://img-prod.kkkd.com/Fk-Z55wL9rVA5Zqv2Xt58OqO3-Gh"></image>
    <text>即将推荐商品</text>
  </view>
</view>
