<navigator url="{{'../product/detail?id=' + props.item.id}}" class="item" hover-class="none">
  <view>
    <component key="qnimage" url="{{props.item.imgUrl}}" />
    <text class="name">{{props.item.name}}</text>
    <view>
      <text class="promotion-type"  wx:if="{{props.item.promotion.promotionType === 'TUAN'}}">拼</text>
      <text class="price">¥{{props.item.price}}</text>
    </view>
  </view>
</navigator>
