<view hidden="{{!props.show}}" class="sku-panel" catchtap="handleClose">
  <view class="sku-panel-body" catchtap="handleBodyTap">

    <view class="sku-info">
      <image src="{{state.skuInfo.imgUrl}}" mode="widthFix" class="sku-info-img"/>
      <view class="sku-info-right">
        <text class="sku-info-price">{{state.skuInfo.price}}</text>
        <text class="sku-info-text">库存：{{state.skuInfo.amount}}件</text>
        <text class="sku-info-text">{{state.skuInfo.skuStr}}</text>
      </view>
      <image class="sku-info-close" catchtap="handleClose"
        src="../../images/icon_close.png"></image>
    </view>

    <scroll-view scroll-y="true" class="sku-panel-items">
      <view class="sku-item" wx:for="{{props.skuDimensions}}" wx:for-item="dimension" wx:key="{{dimension.id}}">
        <text class="sku-item-title">{{dimension.specName}}</text>
        <view class="sku-item-btns">
          <view wx:for="{{dimension.listSkuDimensionData}}" wx:key="{{item.id}}" 
            class="sku-item-btn{{state.selectedSku[dimension.id] && state.selectedSku[dimension.id].id === item.id ? ' sku-item-btn-selected' : ''}}" 
            catchtap="handleSkuSelect" data-sku="{{item}}" data-dimension="{{dimension}}">
            {{item.name}}
          </view>
        </view>
      </view>

      <view class="sku-item">
        <text class="sku-item-title">数量</text>
        <view class="sku-item-btns">
          <component key="counter" name="counter"/>
        </view>
      </view>
    </scroll-view>

    <view class="sku-panel-ok" catchtap="handleOkTap">
      <text>确定</text>
    </view>

  </view>
</view>
