<view class="counter">
  <text class="counter-minus {{props.value > 1 ? 'active' : ''}}" catchtap="handleMinus">-</text>
  <input class="counter-input" disabled="{{true}}" type="digit" value="{{props.value}}" bindinput="handleInput"/>
  <text class="counter-plus {{props.value < props.max ? 'active' : ''}}" catchtap="handlePlus">+</text>
</view>
