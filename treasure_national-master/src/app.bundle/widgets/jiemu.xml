<?xml version="1.0"?>
<Page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      height="wrap"
      marginTop="20dp">
    <View width="match 0.8" borderCorner="10sp" clipToBounds="true" height="100dp" gravity="centerHorizontal"  contentGravity="centerHorizontal">
        <ImageView id="jiemu" background="#0000ff" height="matchWidth 0.5" ></ImageView>
        <View background="#272727" alpha="0.7"></View>
        <View layout="horizontal" height="30dp" width="wrap" marginTop="20dp" >
            <ImageView src="/images/left.png" height="30dp" width="wrap"></ImageView>
            <TextView id="textName" fontColor="#f7cd9f" fontSize="30dp" contentGravity="center" height="30dp" width="wrap" text="国家宝藏"></TextView>
            <ImageView src="/images/right.png" height="30dp" width="wrap"></ImageView>
        </View>
        <View height="1dp" width="match 0.8" background="#bd956a" gravity="bottom" marginBottom="30dp"></View>
        <TextView id="time" fontColor="#bd956a" fontSize="14dp" height="wrap" width="wrap" gravity="bottom" marginBottom="10dp" text="播出时间:2017.11.2.20:00-21:00"></TextView>
    </View>
</Page>