<?xml version="1.0"?>
<View xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../View.xsd" width="80dp"
      height="wrap" layout="vertical">
    <include src="Circle.js"/>
    <View height="40dp" width="40dp" gravity="centerHorizontal">
        <View id="huge_circle" height="40dp" anchorX="0.5" anchorY="0.5" width="40dp" background="#000000" borderCorner="40dp" clipToBounds="true"
              gravity="center">
        </View>
        <View  id="mid_circle" height="24dp" width="24dp" background="#90000000" borderCorner="24dp"
              clipToBounds="true" anchorX="0.5" anchorY="0.5"
              gravity="center" borderColor="#40F8F8F8" borderWidth="1dp"/>
        <View id="small_circle" height="10dp" width="10dp" background="#FFFFFF" borderCorner="10dp"
              clipToBounds="true"
              gravity="center"/>
    </View>
    <!--<View id="belowContent" marginTop="5dp" contentGravity="centerHorizontal"/>-->

</View>