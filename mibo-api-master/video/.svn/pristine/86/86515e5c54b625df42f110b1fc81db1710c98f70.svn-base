/*media queries*/
@media (max-width: 320px) {
  html {
    font-size: 75%;
  }
}
@media (min-width: 320px) and (max-width: 400px) {
  html {
    font-size: 87.5%;
  }
}
@media (min-width: 400px) and (max-width: 480px) {
  html {
    font-size: 93.5%;
  }
}
@media (min-width: 480px) and (max-width: 540px) {
  html {
    font-size: 100%;
  }
}
@media (min-width: 540px) and (max-width: 720px) {
  html {
    font-size: 112%;
  }
}
@media (min-width: 720px) and (max-width: 960px) {
  html {
    font-size: 130%;
  }
}
@media (min-width: 960px) {
  html {
    font-size: 150%;
  }
}

/*reset style*/
html, body, h1, h2, h3, h4, h5, h6, div, dl, dt, dd, ul, ol, menu, li, p, blockquote, pre, hr, table, caption, thead, tbody, tfoot, th, td, form, fieldset, legend, input, button, textarea {
  margin: 0;
  padding: 0;
}
body, textarea, input, button, select, legend {
  line-height: 1.8em;
  font-family: '微软雅黑', arial;
  font-size: 1rem;
  font-weight: normal;
  color: #262626;
}
textarea, input, button {
  outline: none;
}
body {
  margin: 0 auto;
  background: #fff;
}
fieldset, img, iframe, abbr {
  border: none;
}
h1, h2, h3, h4, h5, h6, em, strong {
  font-weight: normal;
}
h1, h2, h3, h4, h5, h6 {
  font-size: 1em;
}
ul, dl, dt, dl, li {
  list-style: none;
}
li {
  list-style-position: outside;
  vertical-align: top;
}
q {
  font-style: normal;
  font-variant: normal;
}
table {
  border-spacing: 0;
  border-collapse: collapse;
}
caption, th {
  font-weight: normal;
  text-align: left;
}
sup, sub {
  font-size: 83%;
}
pre, code, kbd, samp {
  font-family: inherit;
}
i, cite, em, var, address, dfn {
  font-style: normal;
}
del, ins, a, a:hover {
  text-decoration: none;
}
a, a:hover, button, * {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
button {
  cursor: pointer;
}
input {
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
textarea {
  overflow: auto;
  resize: none;
}
/* md_pop */
.md_pop1 {
  position: fixed;
  z-index: 10000;
  top: 0;
  left: 0;
  margin: 0 auto;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.md_pop1 > .md_pop_mask {
  position: absolute;
  z-index: inherit;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: .5;
  background: #000;

  filter: Alpha(opacity=50);
}
.md_pop1 > .md_pop_wrap {
  position: absolute;
  z-index: inherit;
  top: 50%;
  width: 100%;
}
.md_pop1 .md_pop_main {
  position: relative;
  top: -5.5rem;
  margin: 0 auto;
  width: 90%;
  height: 11rem;
  overflow: hidden;
  border-radius: 1rem;
  background: #fbfbfb;
}
.md_pop1 .md_pop_close {
  position: absolute;
  top: 1.5rem;
  right: 1rem;
  width: 1rem;
  height: 1rem;
  cursor: pointer;
  text-indent: -9999px;
  text-align: left;
  color: #dfdfdf;
  background-image: url('http://user.qbcdn.com/images/md_pop.png');
  background-repeat: no-repeat;
  background-position: 0 0;
  background-size: 100%;
}
.md_pop1 .md_pop_cont {
  margin: 0 auto;
}

/*code*/
.code {
  margin: 0 auto;
  height: 11rem;
}
.code .code_title {
  padding-top: 1rem;
  line-height: 2rem;
  font-size: 1.3rem;
  font-weight: normal;
  text-align: center;
  color: #262626;
}
.code .code_main {
  margin: 0 auto;
  padding: 1rem 2rem 0.5rem 2rem;
}
.code .code_main_top{
  margin: 0 auto;
}
.code .code_input_box {
  display: block;
  overflow: hidden;
  border: #b2b2b2 1px solid;
}
.code .code_input {
  box-sizing: border-box;
  padding: .3rem;
  width: 100%;
  height: 2rem;
  vertical-align: top;
  border: none;
  background: #fff;
}
.code .code_pic {
  float: right;
  margin-left: .5rem;
  width: 4rem;
  height: 2rem;
}
.code .code_pic > img {
  max-width: 4rem;
  height: 2rem;
}
.code .code_warn {
  line-height: 1.5rem;
  min-height: 1.5rem;
  font-size: .85rem;
  color: #d03a24;
}
.code .code_btn_box {
  text-align: center;
  border-top: #b2b2b2 1px solid;
}
.code .code_btn {
  display: inline-block;
  width: 100%;
  height: 3rem;
  line-height: 3rem;
  font-size: 1.3rem;
  text-decoration: none;
  color: #157efb;
}
