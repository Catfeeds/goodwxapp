<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>邀请好友</title>
	<link rel="stylesheet" href="../res/css/reset.css">
	<link id="artDialog-skin" href="../res/dialog/skins/blue.css" rel="stylesheet" />
	<style>
		.main{
			position: relative;
			margin: 0 auto;
		}
		.main img{
			width:100%;
		}
		.click-btn{
			position: absolute;
			top:40%;
			left:25%;
			display: inline-block;
			width: 50%;
		}
		.click-btn img{
			width: 100%;
		}
		#dialog img{
			display:inline-block;
			width:180px;
		}
	</style>
</head>
<body>
	<div class="main">
		<img src="./img/invite.jpg" alt="">
		<a class="click-btn" href="javascript:share();"><img src="./img/invite-btn.png" alt=""></a>
	</div>

<script src="../res/dialog/source/artDialog.js" type="text/javascript"></script>
<script src="../res/js/mibo-common-1.0.0.js"></script>
<script>
	function share() {
		var html = '<div id="dialog" ><a href="javascript:qqShare()"><img src="./img/qq.png" alt=""></a><a href="javascript:wechatShare();"><img src="./img/wechat.png" alt=""></a><a href="javascript:friendShare();"><img src="./img/wechat_friend.png" alt=""></a><a href="javascript:sinaShare();"><img src="./img/sina.png" alt=""></a></div>';
		art.dialog({
			"title":"分享至",
			'background':'#000',
			'content':html,
			'zIndex':99,
		});
	}
	var userInfoStr = getCurrentUserInfo();
	userInfo = eval('(' + userInfoStr + ')');
    window.wechatShareInfo = {"desc":"您的好友邀请您体验米播，注册送大礼","imgUrl":"http://mibores.yahalei.com/img/pub/201610/default_cover_of_no_achor.jpg","title":"好友的邀请","type":1};
    window.friendShareInfo = {"desc":"您的好友邀请您体验米播，注册送大礼","imgUrl":"http://mibores.yahalei.com/img/pub/201610/default_cover_of_no_achor.jpg","title":"好友的邀请","type":2};
    window.sinaShareInfo = {"desc":"您的好友邀请您体验米播，注册送大礼","imgUrl":"http://mibores.yahalei.com/img/pub/201610/default_cover_of_no_achor.jpg","title":"好友的邀请","type":3};
    window.qqShareInfo = {"desc":"您的好友邀请您体验米播，注册送大礼","imgUrl":"http://mibores.yahalei.com/img/pub/201610/default_cover_of_no_achor.jpg","title":"好友的邀请","type":4};
	wechatShareInfo.link = "http://miboos.yahalei.com/index.php?g=Web&m=login&a=index&user_id=" + userInfo.id;
	friendShareInfo.link = "http://miboos.yahalei.com/index.php?g=Web&m=login&a=index&user_id=" + userInfo.id;
	sinaShareInfo.link = "http://miboos.yahalei.com/index.php?g=Web&m=login&a=index&user_id=" + userInfo.id;
	qqShareInfo.link = "http://miboos.yahalei.com/index.php?g=Web&m=login&a=index&user_id=" + userInfo.id;
    function qqShare() {
     	var shareInfo = window.qqShareInfo;
        
        onShare(JSON.stringify(shareInfo));
    }
     function wechatShare() {
     	var shareInfo = window.wechatShareInfo;
        
        onShare(JSON.stringify(shareInfo));
    }
     function friendShare() {
     	var shareInfo = window.friendShareInfo;
        
        onShare(JSON.stringify(shareInfo));
    }
     function sinaShare() {
     	var shareInfo = window.sinaShareInfo;
        
        onShare(JSON.stringify(shareInfo));
    }
</script>
</body>
</html>
