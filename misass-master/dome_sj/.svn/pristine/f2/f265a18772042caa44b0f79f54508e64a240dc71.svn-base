
body{
    background-color: #f1f1f1;
}
h2{
    height: 4rem;
    background-color: #ffffff;
    line-height: 4rem;
    font-size: 2rem;
    text-align: center;
}
/*大层*/
#find_main{
    width:90%;
    margin: 20px auto 0 auto;
}
/*瀑布流层*/
.waterfall{
    -moz-column-count:2; /* Firefox */
    -webkit-column-count:2; /* Safari 和 Chrome */
    column-count:2;
    -moz-column-gap: 1em;
    -webkit-column-gap: 1em;
    column-gap: 1em;
}
/*一个内容层*/
.item{
    /*padding: 1em;*/
    /*margin: 0 0 1em 0;*/
    -moz-page-break-inside: avoid;
    -webkit-column-break-inside: avoid;
    break-inside: avoid;
    /*border: 1px solid #000;*/
   margin-bottom: 1rem;
}
.item img{
    border-top-right-radius: 0.5rem;
    border-top-left-radius: 0.5rem;
}
#find_main .waterfall .item .find_detail{
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    border-bottom-right-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(1){
    padding: 10px 0 10px 10px;
    font-size: 1rem;
    flex-wrap: wrap;
    width: 8rem;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(2){
    display: flex;
    justify-content: center;
    align-items: center;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(2) icon{
    margin-right: 0.6rem;
}