/*镇辉*/

/*首页*/
.index_bg{background: #f1f1f1; }
.index_search_box{width: 92%; margin: 0.7rem auto; border-radius: 5px; background: #d5d4d9;  }
.index_search_box a{display: flex; align-items:center; justify-content: center ; color: #666; padding: 0.5rem 0; font-size: 1.3rem; }
.index_search_box span:nth-child(1){width: 5%; margin-right: 5px; }

.index_banner_swiper{position: relative; overflow: hidden; }
.index_banner .swiper-pagination{text-align: right; width: 85%;}

.index_goods_classify{padding: 10px 0; background: #fff; box-shadow: 0px 0.5px 30px #666; }
.index_goods_classify .swiper-slide .box{ width: 100%; }
.index_goods_classify .swiper-slide .box a{ display: flex; flex-direction:column; }
.index_goods_classify .swiper-slide .pic{/*padding: 0 1rem;*/  }
.index_goods_classify .swiper-slide .pic img{width: 3rem;  margin: 0 auto; }
.index_goods_classify .swiper-slide .txt{text-align: center; font-size: 1rem; color: #090909;}

.index_brand{margin: 10px auto; background: #ccc; background: #fff;}
.index_title_box{text-align: center; position: relative; padding: 0.5rem 0; background: #fff;  }
.index_title_box{text-align: center; position: relative; padding: 0.5rem 0;  }
.index_title_box h2{display: inline-block;  padding:0 0.5rem; background: #fff; color: #333;  position: relative; z-index: 1; font-size: 2rem; }
.index_title_box span.line{position: absolute; left: 0%; top:50%; right: 0%; margin: 0 auto;  width: 45%; height: 1px; background: #333;    }
.index_brand .index_title_box span.line{width: 30%;}
.index_brand_list{background: #f1f1f1;  }


.index_new_tswk .swiper-wrapper{ height: auto; }
.index_new_tswk_swiper{margin: 0.5rem auto 1rem; width: 90%; height: 24rem; }
.index_new_tswk .swiper-slide a{display: flex; flex-direction:column; background:#fff; border-radius: 5px; overflow: hidden; box-shadow: 2px 5px 10px rgba(0,0,0,0.1);  }
.index_new_tswk .pic { overflow:hidden;}
.index_new_tswk .txt {padding: 1rem 1rem 1.5rem; display: flex; align-items:center; justify-content:space-between; color: rgba(51,51,51,0.4);  }
.index_new_tswk .txt span.txt_name{margin-right: 1rem; color: #666;}
.index_new_tswk .txt  span em{font-size: 1rem; }
.index_new_tswk .swiper-pagination{margin-right: 1rem; bottom: 0%;}

.index_footer_banner{position: relative;  margin: 10px auto 0; }
.index_footer_banner_box{position:absolute; left: 0%; bottom: 0%; right: 0%; margin: 0 auto;  display: flex; align-items:center; justify-content:space-between; padding: 0 1rem; background: rgba(51,51,51,0.6); color:#fff; height: 3.5rem; } 
.index_footer_banner_box .txt{font-size: 1.3rem;  } 
.index_footer_banner_box .R{display: flex; align-items:center;  border: 1px solid #fff; padding:0.2rem 0.5rem; } 
.index_footer_banner_box .R .xin{width:1.5rem; height: 1.5rem;  background: url('../images/index_xin_no.png') no-repeat center center/100%; } 
.index_footer_banner_box .R .xin.on{background-image: url('../images/index_xin_yes.png') } 
.index_footer_banner_box .R .num{padding-left: 15px; } 

.index_goods_recommend{margin: 10px auto 20%; background: #fff;}
.index_goods_recommend .swiper-slide .box a{ display: flex; flex-direction:column;}
.index_goods_recommend .swiper-slide .pic{  }
.index_goods_recommend .swiper-slide .txt{text-align: center; display: flex; flex-direction:column; color: #333; }
.index_goods_recommend .swiper-slide .txt span{padding:0.5rem;}


/*底部导航*/
.nav{position: fixed; left:0%; bottom: 0%; right: 0%; margin: 0 auto;  display: flex; flex-direction:row; text-align: center; justify-content:space-around; z-index: 10000; background:#fff;}
.nav a{position: relative; display: flex; flex-direction:column; width: 15%; align-items: center; padding: 5px 0; color:#929292; font-size: 1rem;}
.nav a.on{ color:#3e3e3e; }
.nav a.on img:nth-child(1){ display: none; }
.nav a img:nth-child(1){ display: black; }
.nav a.on img:nth-child(2){ display: block; }
.nav a img:nth-child(2){ display: none; }
.nav a img{ width: 60%;  }
.nav a em.index_cart_num{ position: absolute; left: 75%; top: 0px; border: 1px solid red; border-radius: 100rem; color: red; font-size: 1rem; padding:0 0.3rem; }

/*返回顶部*/
.Totop{position: fixed; right: 10px; bottom: 15%; width:10%; background: #fff; z-index: 1000; }

/*搜索页*/
.search_top_box{display: flex; align-items:center; justify-content: center ; width: 92%; margin: 0.7rem auto;  }
.search_top_box .a_L{ padding:0.5rem 1rem 0.5rem 0;  }
.search_top_box .a_L img{width: 65%;  }
.search_top_box .M{display: flex; flex:1; align-items:center; justify-content: center ; color: #666; border-radius: 5px; padding: 0.5rem 0; font-size: 1.3rem; background: #d5d4d9; }
.search_top_box .M input{background: rgba(0,0,0,0);}
.search_top_box .M span:nth-child(1){width: 5%; margin-right: 5px; }
.search_top_box .R{ padding-left: 0.5rem; font-size: 1.4rem; }

.search_content_box{padding: 1rem 1.5rem; }
.search_content_box .title{color: #666; padding:1rem 0; font-size: 1.3rem; overflow: hidden; }
.search_content_box ul{overflow: hidden;width: 110%; }
.search_content_box ul li{ float: left; margin: 0 5% 5% 0; background: #d5d4d9; padding:0.5rem; border-radius: 5px;  }

/*商品详情*/
.goods_details_bg{ background: #f1f1f1;  color: #333;}
.top_back_box{position: relative;  text-align: center; padding: 1rem 0;  background: #fff; }
.top_back_box a{ position: absolute; left: 0%; top:0%;  padding: 1rem; width: 3%; }

.goods_details_banner_swiper{position: relative; overflow: hidden; }
.goods_details_introduction{padding: 0.5rem 1rem 1rem; margin: 1px auto; background: #fff;  }
.goods_details_introduction_bottom{display: flex; align-itmes:center; justify-content:space-between; margin-top: 0.5rem;}
.goods_details_introduction_bottom .txt{font-weight: bold; }
.goods_details_introduction_bottom .txt em{font-weight: bold; color: #a4162e; }
.goods_details_like{width: 10%; background: url('../images/goods_details_xin_no.png') no-repeat center center/60% 100%; }.goods_details_like{width: 10%; background: url('../images/goods_details_xin_no.png') no-repeat center center/60% 100%; }

.goods_details_parameter{padding: 1rem;  background: #fff;  }
.goods_details_parameter p{ display: flex; align-items:center; padding-bottom: 0.5rem; }
.goods_details_parameter p strong{width: 25%; font-weight: bold;}
.goods_details_parameter p em{ font-weight: bold; margin-right: 1rem;}

.goods_details_tab_title{display: flex; align-items:center;  background: #fff; }
.goods_details_tab_title span{flex:1; text-align: center; padding:1rem 0; border-bottom: 1px solid #fff; }
.goods_details_tab_title span.on{border-bottom: 1px solid #333;  }

.goods_details_tab_content{background: #fff; margin-bottom: 15%;}
.goods_details_tab_content li{display: none;  min-height: 30rem; }
.goods_details_tab_content li.on{display: block; }
.goods_details_bottom_box{position: fixed; left: 0%; bottom: 0%;  display: flex; align-items:center;  width: 100%; background: #fff; }
.goods_details_bottom_box span{flex:1; text-align: center; padding: 1rem 0; color: #fff;  font-weight: bold; } 
.goods_details_bottom_box span:nth-child(1){background: #999999;  } 
.goods_details_bottom_box span:nth-child(2){background: #333333;  } 

.goods_details_pop{position: fixed; left: 0%; top:0%;  width: 100%; height: 100vh; z-index: 100; background: rgba(0,0,0,0.5);}
.goods_details_pop_box{position: fixed; left: 0%; bottom:0%;  width: 100%; height:67vh;background: #fff;}
.goods_details_pop_top{ display: flex; align-items:center; padding: 1rem; }
.goods_details_pop_img{width: 35%; margin-top: -10%;}
.goods_details_pop_txt{display: flex; padding: 1rem; flex-direction:column; line-height: 2rem;}
.goods_details_delete{position: absolute; right: 5px; top:05px; width: 10%; z-index: 10;  }

.goods_details_pop_option{max-height: 20rem; overflow-x:hidden;  padding: 1rem; }
.goods_details_pop_option ul{ display: flex; align-items:center;  flex-wrap: wrap; margin: 1rem auto;   }
.goods_details_pop_option ul li{ padding: 0.5rem 1.5rem; border: 1px solid #999999; margin: 0% 5% 3%; }
.goods_details_pop_option ul li.on{ background: #333333; color:#fff; }
.goods_details_pop_option p span{ margin-left: 5%;  }
.goods_details_pop_num_box{display: flex; align-items:center; justify-content:space-between; padding:0 1rem; }
.goods_details_pop_num_box .R{display: flex; align-items:center;  }
.goods_details_pop_num_box .R span{padding: 0.3rem 0.7rem; border: 1px solid #999999;   }
.goods_details_pop_add{ border: 1px solid #333; background: #333; color: #fff;  }
.goods_details_pop_number{padding: 0 1rem; }

.goods_details_pop_confirm{position: absolute; left: 0%; bottom: 0%; right: 0%; margin: 0 auto;  padding: 1rem 0; text-align: center; background: #333; color: #fff; }














