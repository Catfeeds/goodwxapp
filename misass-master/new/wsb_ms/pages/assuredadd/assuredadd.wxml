<!--新增投保人-->
<view class='policyadd'>
  <view class='policyadd_top'>
    <view class='policyadd_big'>
      <text>角色</text>
      <view class='policyadd_type'>
        <view wx:for='{{roleArr}}' wx:key='*this'>
          <icon class='iconfont {{_role==index?"icon_cricled":"icon_cricle"}}' data-index='{{index}}' bindtap='roleChecked'></icon>
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    <view class='policyadd_big'>
      <text>投保人类型</text>
      <view class='policyadd_type'>
        <view wx:for='{{plocyTypeArr}}' wx:key='*this'>
          <icon class='iconfont {{_type ==index?"icon_cricled":"icon_cricle"}}' data-index='{{index}}' bindtap='typeChecked'></icon>
          <text>{{item}}</text>
        </view>
      </view>
    </view>
    <view class='policyadd_person' wx:if='{{_person}}'>
      <view class='policyadd_small'>
        <text>投保人名称</text>
        <input placeholder='广州市顺丰物流有限公司' />
      </view>
      <view class='policyadd_small'>
        <text>所在区域</text>
        <input placeholder='广东省-广州市-海珠区' bindtap='selectDistrict' value='{{areaInfo}}' />
      </view>
      <view class='policyadd_small'>
        <text>证件类型</text>
        <input placeholder='身份证' />
      </view>
      <view class='policyadd_small'>
        <text>证件号码</text>
        <input placeholder='450256200808008549X' />
      </view>
      <view class='policyadd_small'>
        <text>联系人手机号码</text>
        <input placeholder='{{_phonenum}}' bindblur='getphonenum' value='{{phonenum}}' />
      </view>
      <view class='policyadd_small'>
        <text>电子邮件</text>
        <input placeholder='{{_email}}' bindblur='bluremail' value='{{email}}' />
      </view>
    </view>
    <view class='policyadd_person' wx:if='{{!_person}}'>
      <view class='policyadd_small'>
        <text>公司</text>
        <input placeholder='广州市顺丰物流有限公司' />
      </view>
      <view class='policyadd_small'>
        <text>投保人名称</text>
        <input placeholder='陈汉卿' />
      </view>
      <view class='policyadd_small'>
        <text>所在区域</text>
        <input placeholder='广东省-广州市-海珠区' bindtap='selectDistrict' value='{{areaInfo}}' />
      </view>
      <view class='policyadd_small'>
        <text>证件类型</text>
        <input placeholder='身份证' />
      </view>
      <view class='policyadd_small'>
        <text>证件号码</text>
        <input placeholder='450256200808008549X' />
      </view>
      <view class='policyadd_small'>
        <text>联系人姓名</text>
        <input placeholder='江纯' />
      </view>
      <view class='policyadd_small'>
        <text>联系人手机号码</text>
        <input placeholder='{{_phonenum}}' bindblur='getphonenum' value='{{phonenum}}' />
      </view>
      <view class='policyadd_small'>
        <text>电子邮件</text>
        <input placeholder='{{_email}}' bindblur='bluremail' value='{{email}}' />
      </view>
    </view>
  </view>
  <view class='policyadd_bottom'>
    <button bindtap='saveAddpolicy'>保存</button>
  </view>
</view>



<!--滑动选择地区  -->
<!-- 所在地区 -->
<view class="dialog-mask {{addressMenuIsShow?'cover':''}}" style="z-index:3;visibility:{{addressMenuIsShow ? 'visible': 'hidden'}}" bindtap="hideCitySelected" />
<!--城市三级联动-->
<!--使用动画时不能wx:if="{{city.length>0&&isVisible}}" ，不能hidden=''属性否则无动画效果-->
<view class="picker-view" animation="{{animationAddressMenu}}" style="visibility:{{addressMenuIsShow ? 'visible':'hidden'}}">
  <view style="height:6%;width:100%;position:fixed;bottom:125px;z-index:10;background:#c6c6c6;display:flex;align-items:center;justify-content:space-between;">
    <text catchtap="cityCancel" style='margin-left:32rpx;'>取消</text>
    <text>编辑地址</text>
    <text style="float: right" catchtap="citySure" style='margin-right:32rpx;color:#00aff5'>确定</text>
  </view>
  <!--"可以显示默认的城市，使用后级联选择城市反应很慢就不使用了-->
  <picker-view style="width: 100%; height: 300rpx;z-index:9;background-color:#fff;position:fixed;bottom:0" bindchange="cityChange" value="{{value}}">
    <picker-view-column>
      <view wx:for="{{provinces}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{areas}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>