@import '../../font/iconfont.wxss';
.policyadd{
  margin-bottom: 50rpx;
}
.policyadd_top .policyadd_big {
  height: 130rpx;
  display: flex;
  flex-direction: column;
}
.policyadd_top .policyadd_big .policyadd_type{
  display: flex;
  flex: 1;
  align-items: center;
  padding-left: 20rpx;
}
.policyadd_top .policyadd_big .policyadd_type>view{
    flex: 1;
}
.policyadd_top .policyadd_big .policyadd_type>view icon{
    margin-right: 10rpx;
    font-size: 40rpx;
    flex-direction: column
}
.policyadd_top .policyadd_big >text{
  display: flex;
  align-items: center;
  font-size: 34rpx;
  height:30rpx;
  margin-top:20rpx;
  padding-left: 20rpx;
}
.policyadd_top .policyadd_big:nth-child(1){
  border-top: 3rpx solid #bbbbbb;
}
.policyadd_top .policyadd_person .policyadd_small{
  border-bottom: 3rpx solid #bbbbbb;
  display: flex;
  flex-direction: column;
  height: 140rpx;
}
.policyadd_top .policyadd_person>view>input{
     padding-left: 20rpx;
     flex:1;
     color:#bbb;
}
.policyadd_top .policyadd_person .policyadd_small>text{
     border-bottom: 3rpx solid #bbbbbb;
     flex: 1;
     padding-left: 20rpx;
     margin-top:10rpx;
}
.policyadd_bottom{
  z-index: 99;
  margin-top: 30rpx;
}
.policyadd_bottom>button{
  width: 100%;
  background-color :#fff; 
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9
}

/*弹窗 滑动选择*/
.cover {
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:rgba(66,66,66,0.6);
  z-index: 100
}
 .list_data_btn{
  position:fixed;
  bottom:280rpx;
  display:flex;
  left:0;
  width:100%;
  z-index:100;
  justify-content: space-between;
  background-color: #F7F7F7;
  height: 70rpx;
  line-height:70rpx;
}
.list_data_btn>text{
  font-size: 32rpx;
}
 .list_data_btn>text:nth-of-type(1){
  color: #a8a8a8;
  margin-left: 30rpx;
}
.list_data_btn>text:nth-of-type(2){
  color: #030303;
}
.list_data_btn>text:nth-of-type(3){
  color: #00aff5;
   margin-right: 30rpx;
}
picker-view{
  position: fixed;
  text-align: center;
  bottom: 0
}
.picker-item{
  line-height: 34px;
}
