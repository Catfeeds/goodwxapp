</view>

<view class='phonemodel' wx:if='{{_phoneshow}}'>
      <view>
       <text>编辑手机号码</text>
      </view>
      <view class='phonemodel_ov'>
         <input placeholder='请输入新的手机号码' type='number' value='{{phonenum}}'  bindblur='getphonenum'/> 
         <button bindtap='getCode'>获取验证码</button>
      </view>
      <view class='phonemodel_ov'>
        <input placeholder='请输入验证码' type='number' />
      </view>
      <view class='phonemodel_btn'>
          <button bindtap='closehide'>取消</button>
          <button bindtap='phonesure'>确定</button>
      </view> 
</view>

