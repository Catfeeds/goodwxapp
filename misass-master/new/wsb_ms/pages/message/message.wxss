/* pages/message/message.wxss */
.message{
  height: 100%;
  margin-bottom:30rpx;
}
.message_search{
  width: 90%;
  border: 3rpx solid #bbbbbb;
  margin: 10rpx  auto 0 auto;
   padding-left:20rpx; 
  border-radius:10rpx;
  height: 60rpx;
  font-size: 32rpx;
  padding-top:5rpx;
  box-sizing: border-box;
  color: #888;
  display:flex;

}
.message_content{
  width: 90%;
  margin: 0 auto;
}
.message_content .message_list{
  margin-top: 50rpx;

}
.message_content .message_list .message_data{
  margin-bottom:10rpx;
  background-color:#aaaaaa;
  display:block;
  width:360rpx;
  text-align:center;
  margin:0 auto;
  height:50rpx;
  line-height:50rpx;
  color:#fff;
  font-size:30rpx;
   border: 3rpx solid #bbbbbb;
}
.message_content .message_list .message_oul{
  display:flex;
  flex-direction:column;
  border:3rpx solid #bbb;
  margin-top:10rpx;
  padding:15rpx;
  border-radius:10rpx;
  font-size:30rpx;
}
.message_content .message_list .message_oul>text:nth-of-type(1){
  font-size:32rpx;
}
.message_content .message_list .message_oul>view:nth-child(n+1){
  margin-top: 10rpx;
}
.message_content .message_list .message_oul>text:nth-last-child(1){
  margin-top: 40rpx;
  cursor:pointer;
  color: #00aff5;
  width:150rpx;
}