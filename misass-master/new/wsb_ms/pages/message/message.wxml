<!--pages/message/message.wxml-->
<view class='message'>
    <text class='message_search'>江纯</text>
    <view class="message_content">
        <view class='message_list' wx:for="{{msgArr}}" wx:for-item="list" wx:key="*this">
          <text class='message_data'>{{list.data}}</text>
          <view class='message_oul'>
            <text>订单状态通知</text>
            <text>{{list.explain}}</text>
            <view>
                <text>微速保订单号:</text>
                <text>{{list.number}}</text>
            </view>
            <view>
                  <text>最新状态:</text>
                  <text>{{list.state}}</text>
            </view>
            <text class='massage_view' bindtap='massage_view' data-index= "{{index}}">查看详情</text> 
          </view>
        </view>
    </view>
</view>
