/* pages/invitation/invitation.wxss */
.invitation{
  width: 100%;
}
image{
  width: 120rpx;
  height: 120rpx;
}
.invitation_content{
  display: flex;
  width: 85%;
  margin: 50rpx  auto 0 auto;
  height: 600rpx;
  border: 3rpx solid #bbbbbb;
  flex-direction: column;
}
.invitation_content>view{
  display: flex;
}
.invitation_content>view:nth-of-type(1){
  height: 150rpx;
  margin: 10rpx 0 0 30rpx;
  justify-content: flex-start;
  align-items: center;
}
.invitation_content>view:nth-of-type(1) image{
  margin-right: 20rpx;
}
.invitation_content>view:nth-of-type(2){
  height: 120rpx;
  justify-content:center;
  align-items: center;
  font-size:38rpx;
}
.invitation_content>view:nth-of-type(3){
  width: 70%;
  justify-content:center;
  align-items: center;
  font-size:32rpx;
  margin: 0 auto;
  color: #bbbbbb;
}
.invitation_content>view:nth-of-type(4){
    margin-top: 70rpx;
}
.invitation_content>view>button{
    width: 75%;
    height: 80rpx;
    justify-content: center;
    font-size: 32rpx;
    color: #fff;
    background-color: #00b1fc;
}