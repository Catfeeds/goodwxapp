/* pages/addsonaccount/addsonaccount.wxss */
@import '../../font/iconfont.wxss';
.addson>text{
    font-size: 38rpx;
    padding-left: 20rpx;
    border-bottom: 3rpx solid #bbbbbb;
    display: flex;
    padding-bottom: 5rpx;
}
.addson .addson_wx{
  display: flex;
  height: 150rpx;
  border-bottom: 3rpx solid #bbbbbb;
}
.addson .addson_wx>view{
    flex: 4;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.addson .addson_wx>view>text{
  display: flex;
  flex: 1;
  align-items: center;
}
.addson .addson_wx>view>text:nth-of-type(1){
    align-items: flex-end;
}
.addson .addson_wx>view>text:nth-of-type(2){
    font-size: 26rpx;
    color: #a8a8a8
}
.addson .addson_wx>icon{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.addson .addson_wx>button{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #fff;
    padding: 0;
    margin: 0;
    border:none;
    border-left-color: #fff;
}
button::after {
  border: 0;
} 





