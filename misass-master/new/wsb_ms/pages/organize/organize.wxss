/* pages/policymsg/policymsg.wxss */
@import '../../font/iconfont.wxss';
.policymsg{
  overflow-x: hidden;
}
.policymsg_top{
  margin-bottom: 120rpx;
}
.policymsg_top>view:nth-of-type(1){
    width: 100%;
    display: flex;
    justify-content: flex-end;
    margin-bottom: 10rpx;
}
.policymsg_top .policymsg_msg{
  margin-right: 20rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.policymsg_top .policymsg_top_list{
    display: flex;
    flex-direction: column;
}
.policymsg_top .policymsg_top_list>text{
    width: 100%;
    background-color: #e6e6e6;
    color: #a8a8a8;
    padding-left: 50rpx;
    height: 70rpx;
    display: flex;
    align-items: center;
}
.policymsg_top .policymsg_top_list>view{
    padding-left: 50rpx;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-right: 40rpx;
}
.policymsg_top .policymsg_top_list>view>view{
  display: flex;
}
.policymsg_top .policymsg_top_list>view>view view{
  display: flex;
}
.policymsg_top .policymsg_top_list>view>view>view>icon{
    color: #00aff5;
    display: flex;
    justify-content: center;
    align-items: center;
}
.policymsg_top .policymsg_top_list>view>view>icon:nth-of-type(1){
    margin-right: 25rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.policymsg_bottom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #a8a8a8;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color:#fff;
}
.policymsg_bottom icon{
    display:flex;
    align-items:center;
    margin-right:10rpx;
    color:#00aff5;
    margin-top:7rpx;
}
.policymsg_bottom.policymsg_tab,.policymsg_tab icon{
  color: #a8a8a8;
}

.model .model_content .model_scale{
    font-size: 26rpx;
    margin-top: 5rpx;
}

.policymsg_top .policymsg_top_list>view>image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.policymsg_top .policymsg_top_list>.policymsg_auto{
  height: auto;
  margin:20rpx 0;
  display: flex;
}
.policymsg_top .policymsg_top_list>.policymsg_auto>text{
  flex: 3;
  margin-left: 30rpx;
}
.policymsg_top .policymsg_top_list>.policymsg_auto>view{
  flex: 2;
}
.policymsg_top .policymsg_top_list>.policymsg_auto>view text{
  font-size: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #00aff5;
  margin-left:20rpx;
}
.policymsg_top .policymsg_top_list>.policymsg_auto .policymsg_right{
    justify-content: flex-end;
    margin-right: 40rpx;
    color: #00aff5;
}

/*弹窗 滑动选择*/
.cover {
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:rgba(66,66,66,0.6);
  z-index: 2
}
 .list_data_btn{
  position:fixed;
  bottom:280rpx;
  display:flex;
  left:0;
  width:100%;
  z-index:6;
  justify-content: space-between;
  background-color: #F7F7F7;
  height: 70rpx;
  line-height:70rpx;
}
.list_data_btn>text{
  font-size: 32rpx;
}
 .list_data_btn>text:nth-of-type(1){
  color: #a8a8a8;
  margin-left: 30rpx;
}
.list_data_btn>text:nth-of-type(2){
  color: #030303;
}
.list_data_btn>text:nth-of-type(3){
  color: #00aff5;
   margin-right: 30rpx;
}
picker-view{
  position: fixed;
  text-align: center;
  bottom: 0
}
