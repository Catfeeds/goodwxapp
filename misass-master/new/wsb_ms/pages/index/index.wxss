/**index.wxss**/
page{
  height: 100%;
  background-color: #e1e1e5
}
.container{
   background-color: #fff;
   width:100%;
   border-radius: 2rpx;
   display: flex;
}
.home_top{
  width: 100%
}
.home_top image{
  width: 100%;
  height: 250rpx
}
.home_bootom{
  width: 100%;
  margin-top: 55rpx;
}
.home_bootom .home_list{
  display:flex;
  margin-bottom:50rpx;
}
.home_bootom .home_list .home_list_img{
  width:170rpx;
  height:170rpx;
  margin-left:40rpx;
  margin-right: 40rpx
}
.home_bootom .home_list .home_list_detail{
  display:flex;
  flex-direction:column;
  font-size: 32rpx;
  width:65%;
}
.home_bootom .home_list .home_list_detail>text:nth-of-type(2){
  margin: 10rpx 0;
  color: #8d8d8d;
  font-size: 26rpx;
} 
.home_bootom .home_list .home_list_detail .home_detail_price>text{
   color: #8d8d8d;
    font-size: 26rpx;
}
.home_bootom .home_list .home_list_detail .home_detail_price>text:nth-of-type(1){
    color: #e54444;
    font-size: 32rpx;
}


