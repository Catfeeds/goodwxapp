/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
page{
  font-size: 32rpx;
}


/*仿照模态框*/

#mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index:2;

}

.model{
    background-color: #fff;
    width: 80%;
    height:279rpx;
    position: fixed;
    top: 35%;
    bottom: 0;
    left: 10%;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index:3;

}
.model .model_content{
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #000;
}
.model .model_content>text{
  display: flex;
  justify-content: center;
}
.model .model_result{
  flex: 1;
  display: flex;
  width: 100%;
}
.model .model_result>text{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 2rpx solid #9ea6b7;
  color: #0076ff;
}
.model .model_result>text:nth-of-type(1){
    border-right: 2rpx solid #9ea6b7;
}