/* pages/me/me.wxss */
@import "../../font/iconfont.wxss";
.me{
  height: 100%;
  font-size: 36rpx;
}
.me .me_top{
  display: flex;
  align-items:center;
  padding:16rpx 32rpx;
}
.me .me_top .me_img{
  width: 250rpx;
  height: 220rpx;
  border-radius:50%;
}
.me .me_top .me_msg{
  margin-left:50rpx;
  height: 220rpx;
  margin-top:20rpx;
}
.me .me_top .me_msg>view{
  margin: 10rpx 0;
}
.me .me_top .me_icon{
 position: absolute;
 right: 50rpx;
 height: 220rpx;
 top:85rpx;
 font-size:40rpx;
}
/*中间内容部分*/
.me .me_content{
  margin-top: 50rpx;
}
.me .me_content .me_list{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 150rpx;
  border-bottom: 3rpx solid #bbbbbb;
}
.me .me_content .me_list:nth-of-type(1){
   border-top: 3rpx solid #bbbbbb;
}
.me .me_content .me_list .me_icon_lit{
  font-size:50rpx;
  margin-left: 50rpx;
  margin-right: 20rpx;
}

.me .me_content .me_list>view{
  justify-content: center;
  align-items: center;
}
.me .me_content .me_list .me_icon_lib{
  position: absolute;
  right: 50rpx;
  font-size:40rpx;
}
.me .me_content .me_list .me_icon_tel{
  font-size: 34rpx;
}