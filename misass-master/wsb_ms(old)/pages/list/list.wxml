<!--pages/list/list.wxml-->
<view class='{{_date == 1?"cover":""}}' style="display:{{_date == 1?'block':'none'}}">
 <view class='list_data_btn'>
                   <text bindtap='closeDate'>取消</text>
                   <text bindtap='rightDate'>确定</text>
              </view>
              <picker-view indicator-style="height: 50px;" style="width: 100%; height:400rpx;text-align:center;z-index:5;color:#000;background:#fff;" value="{{value}}" bindchange="bindChange">
                  <picker-view-column>
                    <view wx:for="{{years}}" style="line-height: 50px" wx:key="*this">{{item}}年</view>
                  </picker-view-column>
                  <picker-view-column>
                    <view wx:for="{{months}}" style="line-height: 50px" wx:key="*this">{{item}}月</view>
                  </picker-view-column>
                  <picker-view-column>
                    <view wx:for="{{days}}" style="line-height: 50px" wx:key="*this">{{item}}日</view>
                  </picker-view-column>
              </picker-view>
</view>
<view class='{{_state == 1?"cover":""}}' style="display:{{_state == 1?'block':'none'}}">
 <view class='list_data_btn'>
                   <text bindtap='closeState'>取消</text>
                   <text bindtap='rightState'>确定</text>
              </view>
              <picker-view indicator-style="height: 50px;" style="width: 100%; height:400rpx;text-align:center;z-index:5;color:#000;background:#fff;" value="{{value}}" bindchange="bindState">
                  <picker-view-column>
                    <view wx:for="{{stateArr}}" style="line-height: 50px" wx:key='*this'>{{item}}</view>
                  </picker-view-column>
              </picker-view>
</view>
<view class='list' style='overflow: hidden;'>
    <view class='list_top'>
      <input class='list_search' value='江纯'/>
      <view class='list_time'>
           <view class='list_data' bindtap='clickDate'>
              <text>{{year}}年{{month}}月{{day}}日</text>
              <icon class='iconfont icon-dowm'></icon>
            </view>
           <view class='list_state' bindtap='clickState'>
              <text>{{state}}</text>
              <icon class='iconfont icon-dowm'></icon>
            </view>
         </view>
      </view>
      <view class='list_detail'>
          <view class='list_oul'>
              <view class='list_oli' wx:for="{{detailAerr}}"  wx:for-item='list' wx:key='*this'>
                <text>{{list.title}}</text>
                <text>{{list.num}}</text>
              </view>
          </view>
      </view>
    <view class='list_bottom' wx:for='{{personArr}}'   wx:for-item='wsb' wx:key='*this'>
        <view class='list_outline'>
          <view>
              <text>微速保订单号:</text>
              <text>{{wsb.wsbNum}}</text>
          </view>
          <view>
              <text>{{wsb.ZAorder}}</text>
          </view>
          <view>
              <text>{{wsb.ZAbail}}</text>
          </view>
          <view class='list_status'>
              <view class='list_grade'>
                <text>{{wsb.carNum}}</text>
                <text>{{wsb.date}}</text>
                <text>{{wsb.payDate}}</text>
              </view>
              <view class='list_pri_status'>
                <text>{{wsb.money}}</text>
                <text class='{{wsb.payClass}}'>{{wsb.payState}}</text>
              </view>
          </view>
          <view class='list_person'>
              <text class='iconfont icon-warn'>{{wsb.changeState}}</text>
              <text>{{wsb.orderPerson}}</text>
          </view>
          <view class='list_btn'>
              <button bindtap='viewDetail'  data-index='{{index}}'>查看</button>
              <button bindtap='cancelDetail' data-index='{{index}}'>作废</button>
          </view>
    </view>
</view>

         <view id='mask' wx:if='{{_show}}'>

        </view>  
        <view class='model' wx:if='{{_show}}'>
              <view class='model_content'>
                  <text>确认作废微速保订单</text>
                  <text>WSB1000010001</text>
              </view>
              <view class='model_result'>
                  <text bindtap='modelClose' data-cindex='{{index}}'>取消</text>
                  <text bindtap='modelConfirm' data-oindex='{{index}}'>确认</text>
              </view>
        </view>
        </view>


