</view>

<view class='insure'>
    <view class='insure_content'>
     <view bindtap="clickProduct">
          <text>{{product}}</text>
          <icon class='iconfont icon-dowm'></icon>
      </view>
      <view bindtap="clickHolder">
          <text>{{holder}}</text>
          <icon class='iconfont icon-dowm'></icon>
      </view>
        <view bindtap='clickInsurant'> 
          <text>{{insurant}}</text>
          <icon class='iconfont icon-dowm'></icon>
      </view>
      <view>
          <input placeholder='货物名称'/>
      </view>
      <view bindtap='clickCargo'>
          <text>{{cargoType}}</text>
          <icon class='iconfont icon-dowm'></icon>
      </view>
        <view>
          <input placeholder='货物件数'/>
          <view bindtap='clickPack'>
            <text>{{packType}}</text>
            <icon class='iconfont icon-dowm'></icon>
          </view>
        </view>
        <view bindtap='inputCar'>
          <text>{{carNumber}}</text>
        </view>
        <view bindtap="selectStart">
          <text>{{startArea}}</text>
          <icon class='iconfont icon-dowm'></icon>
        </view>
        <view bindtap="selectDistrict">
          <text>{{areaInfo}}</text>
          <icon class='iconfont icon-dowm'></icon>
        </view>
        <view bindtap='clickDate'>
          <text>{{dateValue}}</text>
          <icon class='iconfont icon-dowm'></icon>
        </view>
        <view  wx:if='{{ifDown}}' class='active'>
          <input placeholder='货物价值' value='{{goods}}'/> 
          <view class='iconfont icon-dowm active' bindtap='clickGoods'></view>
        </view>
        <view wx:if='{{!ifDown}}'>
          <text>{{goods}}</text>
          <view class='iconfont icon-dowm active' bindtap='clickGoods'></view>
        </view>
    </view>
    <view class='insure_protocol'>
      <label class='iconfont {{_iconChange?"icon-checked":"icon-check"}}' bindtap='iconChange' data-iconv='{{_iconChange}}'></label>
      <view class='insure_protocol_col'>我已阅读并同意<text bindtap='clauses'>《保险条款》</text>和<text bindtap='need'>《投保须知》</text></view>
    </view>
    <view class='insure_btn' bindtap='previewPolicy'>
      <button class='{{_iconChange?"active":""}}'>预览保单</button>
    </view> 
</view>


