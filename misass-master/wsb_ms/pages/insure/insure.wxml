<!--起运地  -->
<view class="dialog-mask aa" style="z-index:11;visibility:{{startState ? 'visible': 'hidden'}}" bindtap="hideCitySelected" />
<!--城市三级联动-->
<!--使用动画时不能wx:if="{{city.length>0&&isVisible}}" ，不能hidden=''属性否则无动画效果-->
<view class="picker-view" animation="{{animationAddressStart}}" style="visibility:{{startState ? 'visible':'hidden'}}">
  <view style="height:31%;width:100%;position:fixed;bottom:125px;z-index:6;background:#c6c6c6;display:flex;align-items:center;justify-content:space-between;">
    <text catchtap="cityStartCancel" style='margin-left:32rpx;'>取消</text>
    <text style="float: right" catchtap="cityStart" style='margin-right:32rpx;color:#00aff5'>确定</text>
  </view>
  <!--"可以显示默认的城市，使用后级联选择城市反应很慢就不使用了-->
  <picker-view style="width: 100%; height: 300rpx;" bindchange="cityChange" value="{{value}}" wx:key="">
    <picker-view-column>
      <view wx:for="{{provinces}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{areas}}" class="picker-item" wx:key="id">
        {{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>
