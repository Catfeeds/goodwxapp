/* pages/account/account.wxss */
@import '../../font/iconfont.wxss';
.account{

}
.account .account_title{
  width:85%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;

}
.account .account_title>image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.account_content .account_similar{
    padding-left: 7.5%;
    height: 100rpx;
    border-bottom: 3rpx solid #bbbbbb;
    display: flex;
    align-items: center;
    
}
.account_content .account_similar>text:nth-of-type(1){
    flex: 2
}
.account_content .account_similar>text:nth-of-type(2){
    flex:4;
    color: #aaaaaa;
}
.account_content .account_similar>icon{
   align-items: center;
   justify-content: center;
   display: flex;
   font-size: 36rpx;
   margin-right: 30rpx;
}
.account_content .account_similar:nth-of-type(1){
    border-top: 3rpx solid #bbbbbb;
}
.account_footer{
  margin-top: 200rpx;
}
.account_footer button{
  background-color: #fff;
}



/*更改手机号码弹窗样式*/
.phonemodel{
  position: fixed;
  left: 10%;
  width: 80%;
  height: 400rpx;
  top: 20%;
  background-color: #fff;
  z-index: 99;
  border-radius: 10rpx;
}
.phonemodel>view{
  display: flex;
}
.phonemodel>view:nth-of-type(1){
  display: flex;
  justify-content: center;
  height: 80rpx;
  line-height: 80rpx;
}
.phonemodel>view>input{
  border: 3rpx solid #bbbbbb;
  height: 70rpx;
  padding-left: 20rpx;
  margin-right: 5rpx;
}
.phonemodel>view.phonemodel_ov{
    width: 95%;
    margin: 0 auto 30rpx auto;
    display: flex;
    align-items: center;
}
.phonemodel>view>button{
  display: flex;
  height: 60rpx;
  font-size: 26rpx;
  justify-content: center;
  align-items: center;
  white-space: nowrap
}
.phonemodel .phonemodel_btn>button{
  width: 160rpx;
}

