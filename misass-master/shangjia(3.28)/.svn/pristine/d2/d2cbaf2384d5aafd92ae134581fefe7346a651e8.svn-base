
body{
    background-color: #f1f1f1;
}
h2{
    height: 4rem;
    background-color: #ffffff;
    line-height: 4rem;
    font-size: 2rem;
    text-align: center;
}
/*大层*/
#find_main{
    width:90%;
    margin: 20px auto 0 auto;
}
/*瀑布流层*/
.waterfall{
    -moz-column-count:2; /* Firefox */
    -webkit-column-count:2; /* Safari 和 Chrome */
    column-count:2;
    -moz-column-gap: 1em;
    -webkit-column-gap: 1em;
    column-gap: 1em;
}
/*一个内容层*/
.item{
    /*padding: 1em;*/
    /*margin: 0 0 1em 0;*/
    -moz-page-break-inside: avoid;
    -webkit-column-break-inside: avoid;
    break-inside: avoid;
    /*border: 1px solid #000;*/
   margin-bottom: 1rem;
}
.item img{
    border-top-right-radius: 0.5rem;
    border-top-left-radius: 0.5rem;
}
#find_main .waterfall .item .find_detail{
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    border-bottom-right-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(1){
    padding: 10px 0 10px 10px;
    font-size: 1rem;
    flex-wrap: wrap;
    width: 8rem;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(2){
    display: flex;
    justify-content: center;
    align-items: center;
}
#find_main .waterfall .item .find_detail>p:nth-of-type(2) icon{
    margin-right: 0.6rem;
}

/*****************************发现结束****************************************/

/*****************************购物车开始****************************************/

.car_header{
    display: flex;
    height: 3rem;
    line-height: 3rem;
    background-color: #fff;
}
.car_header .icon-back{
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;

}
.car_header>h2{
     display: flex;
     flex: 5;
    justify-content: center;
    align-items: center;
    height: 3rem;
    line-height: 3rem;
    font-size: 1.5rem;
 }
.car_header>p{
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    font-size: 1rem;
    background-color: #fff;
    color: #666666;
}

.car_main{
    background-color: #f1f1f1;
}
.car_main .car_del{
    background-color: #ffffff;
    height: 3rem;
    display: none;
    justify-content: flex-end;
    align-items: center;
    margin-top: 0.2rem;
    display: none;
}
.car_main .car_main_del{
    display: flex;
}
.car_main .car_del>button{
    height: 2.25rem;
    width: 4.75rem;
    margin-right: 1rem;
    border-radius: 0.2rem;
    font-size: 1rem;
    color: #fff;
    background-color: #333333;
}
/*******内容*********/
.car_main .car_content{
    /*background-color: orange;*/
}
.car_main .car_content .car_content_ul{
    background-color: #f1f1f1;
}
.car_main .car_content .car_content_ul .car_content_li .car_list_title{
    height: 3rem;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    margin: 0.2rem 0;
}
.car_main .car_content .car_content_ul .car_content_li .car_list_title>span{
    margin-left: 1rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_list_title>label{
    margin-left: 1rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol{
    padding: 1rem 0;
    background-color: #fff;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 1rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li>label{
    display: flex;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li_img{
    width: 10rem;
    height: 10rem;
    margin: 0 1rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_list_detail{
    display: flex;
    flex-direction: column;
    padding-right: 0.5rem;

}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_list_detail .car_detail_top{
    flex: 1;
    display: flex;
    flex-direction: column;
    margin-bottom: 3rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_list_detail .car_detail_top>p:nth-of-type(2){
    margin-top: 1rem;
    color: #999999;
    font-size: 1rem;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_list_detail .car_detail_price{
    flex: 1;
    display: flex;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li .car_detail_price{
    display: flex;
    border-bottom: 1px solid #dedede;
    justify-content: space-between;
    padding-bottom: 1rem;
}

.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li .car_detail_price .car_detail_pri{
    display: flex;
    flex: 2;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li .car_detail_price .car_detail_pri>p:nth-of-type(2){
    color: #a4162e;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li .car_detail_price .car_detail_num{
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
}
.car_main .car_content .car_content_ul .car_content_li .car_ol .car_li .car_detail_price .car_detail_num>span{
    margin: 0 0.8rem;
}





/******尾部*****/
.car_main .car_footer{
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    /*应该要固定的*/
    background-color: #ffffff;
    margin-top: 0.2rem;
    border: 1px solid #f1f1f1;
    width: 100%;
    display: flex;
    height: 3rem;
    line-height: 3rem;
    justify-content: space-between;
}
.car_main .car_footer .car_footer_all{
    font-size: 1.2rem;
    font-weight: bold;
    margin-right: 8rem;
}
.car_aa + label{
    background-color: white;
    border-radius: 5px;
    border:1px solid #d3d3d3;
    width:20px;
    height:20px;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    line-height: 20px;
}

.car_aa:checked + .tick{
    background: url("right.png") #fff no-repeat center;
}

#car_footer_all + label{
    background-color: white;
    border-radius: 5px;
    border:1px solid #d3d3d3;
    width:20px;
    height:20px;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
    line-height: 20px;
}
#car_footer_all:checked + .tick{
    background: url("right.png") #fff no-repeat center;
}
.car_main .car_footer .car_footer_total{
    /*margin-right: -2rem;*/
}
.car_main .car_footer .car_footer_total>span:nth-of-type(1){
    font-size: 1rem;
}
.car_main .car_footer>button{
    width: 7rem;
}

