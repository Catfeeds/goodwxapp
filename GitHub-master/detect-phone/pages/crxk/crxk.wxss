/* pages/crxk/crxk.wxss */
.crxk-root{
  width: 100%;
  padding-bottom: 30rpx;
}
.crxk-{
  padding: 3px;
}
.crxk-top{
  width: 100%;
  height: 350rpx;
  position: relative;
}
.crxk-img{
  position: absolute;
  width: 100%;
  height: 100%;
}
.crxk-title{
  position: absolute;
  width: 60%;
  height: 140rpx;
  top: 80rpx;
  left: 20%;
  border: 5rpx solid white;
  padding-top: 30rpx;
  text-align: center;
}
.crxk-title-s{
  display: block;
}
.crxk-share{
  display: block;
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
}
.crxk-phone{
  padding: 5%;
}
.crxk-phone-item{
  display: flex;
  justify-content: space-between
}
.crxk-line{
  width: 100%;
  background: gainsboro;
  height: 5rpx;
  margin-top: 3rpx;
}
.crxk-btn{
  width: 90%;
  margin-left: 5%;
  margin-top: 15rpx;
  font-size: 15px;
}
.bg{
  background-color: #1AAD19;
  color: white;
}
.phone-list{
	width: 85%;
	margin-left: 7.5%;
	height: 500rpx;
}
.phones-item{
	margin-top: 10rpx;
	background: white;
	width: 100%;
	height: 150rpx;
	position: relative;

}
.avatar{
	height: 100rpx;
	width: 100rpx;
	position: absolute;
	left: 20rpx;
	top: 30rpx;
}
.item-centure{
	position: absolute;
	left: 140rpx;
	top: 30rpx;
	font-size: 10pt;
}
.userName{
	width: 260rpx;
  font-size: 13pt;
  margin-top: 15rpx;
}
.phone-model{
	position: absolute;
	top: 35rpx;
	right: 6%;
	color: grey;
	font-size: 16pt;
}