/**index.wxss**/
.container{
  padding:100rpx 0;
  height:100%;
  width:100%;
  position: fixed;
}

.cards{
  margin-top: 200rpx;
  height: 787rpx;
  width: 520rpx;
  background-color: rgba(234, 194, 63,0.9);
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  border: #000 8rpx dashed;
  position: relative;
}
.name{
  font-size: 30rpx;
  color:#000;
  font-weight: bolder;
  margin-bottom: 15rpx;
}

.inputList{
  width: 100%;
  display: flex;
  flex-direction: column;
}


.houseworkListItem{
  float: left;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-right: 10rpx;
  border: dashed #888888 2rpx;
  border-radius: 10rpx;
}

.houseworkItemText{
  color: #292929;
  font-size: 34rpx;
  margin-right: 10rpx;
}

.buttonArea{
  position: absolute;
  width: 500rpx;
  left: 50%;
  margin-left: -250rpx;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.myButton {
  height: 64rpx;
  line-height: 64rpx;
  color: #ffffff;
  font-size: 36rpx;
  background-color:rgb(84, 159, 70);
}   
.tapStyle{
  color:#ffffff;
  background-color:rgb(84, 159, 70);
}


