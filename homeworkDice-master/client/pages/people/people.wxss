/**index.wxss**/
.container{
  padding:100rpx 0;
  height:100%;
  width:100%;
  position: fixed;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 25%;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx; 
  border-radius: 50%;
  border: solid #000;
  
}
.userinfo-nickname {
  /* color: black; */
  color: rgb(252, 64, 99);  
  font-weight: bold;
  background-color: black; 
  /* background-color: rgb(252, 64, 99);  */
  border-radius: 50%; 
}
.userinput{
  margin-top: 50rpx;
  height: 50%;
}
.cards{
  height: 600rpx;
  width: 520rpx;
  background-color: rgba(234, 194, 63,0.9);
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
  border: #000 8rpx dashed;
}
.inputTip{
  font-size: 30rpx;
  color:#000;
  font-weight: bolder;
  display: block;
  margin-bottom: 30rpx;
}

.myInput{
  border: 2rpx solid #f1f1f1; 
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 1px #aaa;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255,0.5);
  margin-right: 10rpx;
}

.buttonArea{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.myButton {
  height: 64rpx;
  line-height: 64rpx;
  color: #ffffff;
  font-size: 36rpx;
  background-color:rgb(84, 159, 70);
}   
.tapStyle{
  color:#ffffff;
  background-color:rgb(84, 159, 70);
}



.houseworkListItem{
  float: left;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-right: 10rpx;
  border: dashed #888888 2rpx;
  border-radius: 10rpx;
}

.houseworkItemText{
  color: #292929;
  font-size: 34rpx;
  margin-right: 10rpx;
}

.placeholderStyle{
  font-size: 28rpx;
  /* color: #fff; */
}

.cover{
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}

.drawerBox{
  width: 650rpx;  
  height: 150rpx;
  overflow: hidden;  
  position: fixed;  
  top: 65%;  
  left: 0;  
  z-index: 1001;  
  background-color: rgb(234, 194, 63);
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 10px;  
}
.drawerContent{
  width: 90%;
  margin: 37rpx auto;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  background-color: rgb(234, 194, 63);
}
.drawerButton{
  height: 74rpx;
  line-height: 74rpx;
  background-color: rgb(234, 194, 63);
  border: solid #000 4rpx;
  font-weight: bold;
  box-shadow: 5rpx 5rpx 4rpx;

}
