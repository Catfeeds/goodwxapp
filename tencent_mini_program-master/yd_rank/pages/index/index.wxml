<!--index.wxml-->
<view class="container">
  <view class="personal">
    <image class="personal-bg" src="../img/bg@2x.png"></image>
    <image class="personal-logo" src="../img/logo@2x.png" background-size="cover"></image>

    <view class="personal-avatar">
    <navigator url="../duel/duel">
     <image class="userinfo-avatar" src="{{wxInfo.avatarUrl}}" background-size="cover"></image> 
    </navigator>
     <text class="userinfo-nickname">{{wxInfo.nickName}}</text>
    </view>

    <view class="personal-row">
      <image class="personal-icon" src="../img/icon_step@2x.png"></image>
      <text class="personal-label">今日步数</text>
      <text class="personal-span">{{ydInfo.steps}}</text>
    </view>

    <navigator url="../rank/rank">
    <view class="personal-row personal-row_custom">
      <image class="personal-icon" src="../img/icon_rank@2x.png"></image>
      <text class="personal-label">步数排行</text>
      <text class="personal-span">{{ydInfo.district}}{{ydInfo.rank}}</text>
    </view>
    </navigator>

    <!--<navigator url="../rank/rank">-->
      <button open-type="share">转发到微信群，查看群内排行</button>
    <!--</navigator>-->
    <text class="personal-hint">使用APP获得个人数据</text>
  </view>
</view>



  