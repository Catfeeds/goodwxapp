@import '../comm/swtch.wxss';
.hotlistItemView{
   background-color: #ffffff;
   height: 90rpx;
   border-bottom: solid 1rpx #eeeeee;
   position: relative;
 }
 .hotlistItemView .avatarView{
     position: absolute;
 }
.avatarView .hotlistAvatar{
    position: relative;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    left: 32rpx;
    top: 20rpx;
}
.hotlistItemView .unameAndTagsView{
    left: 102rpx;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}
.unameAndTagsView .uname{
    margin-top: 4rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    color: #333333;
    display: block;
}

.unameAndTagsView .tags{
    font-size: 22rpx;
    margin-top: 12rpx;
    line-height: 22rpx;
    color: #999999;
    display: block;
}
.vote_theme{
  margin-top: 12rpx;
  font-size: 36rpx;
  color: #333333;
  margin-left: 32rpx;
  padding-bottom: 32rpx;
}
.aready_end{
  position: absolute;
  background-color: #eeeeee;
  top: -1rpx;
  right: 0rpx;
  width: 80rpx;
  height: 45rpx;
  text-align: center;

}
.aread_end_test{
  margin-top: -4rpx;
  font-size: 22rpx;
  color:  #999999;
}
.ing_test{
  margin-top: -4rpx;
  font-size: 22rpx;
  color:  #00cfc4;
}
.select_title{
  margin-left: 32rpx;
  font-size: 22rpx;
  color: #999999;
  
}
.max_select{
  position: absolute;
  left: 32rpx;
  transform: translateY(-100%)

}
.count_select{
   position: absolute;
   right: 32rpx;
   transform: translateY(-100%)
}
.ticket_count{
  font-size: 24rpx;
  color: #999999;
}
.option_item{
  border-bottom: 1px solid #d9d9d9;
}
.option_name{
  color: #666666;
  font-size: 30rpx;
}
.end_time{
   font-size: 22rpx;
   color: #999999;
   padding-top: 16rpx;
   padding-bottom: 8rpx;
   border-bottom: 1rpx solid #d9d9d9;
}
.theme_img{
  padding-left: 16rpx;
  padding-right: 16rpx;
  width: 100%;
  -webkit-box-sizing:border-box;
  box-sizing:border-box; 
  margin-bottom: 32rpx;
}
.signup_container{
    padding-top:16rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content:flex-start;
    padding-left:32rpx;
    padding-bottom:16rpx;
    border-bottom: 1px solid #d9d9d9;
}
.signup_container_item{
  background-color: #00cfc4;
} 
.signup_item{
    width:60rpx;
    height:60rpx;
    margin:4rpx;
    border-radius:30rpx;
}
.signup_text{
  line-height: 60rpx;
  height: 60rpx;
  margin-top: 4rpx;
  font-size: 28rpx;
  color: #999999;
  margin-left: 32rpx;
}
.check_img{
  margin-top: 10rpx;
  width: 50rpx;
  height: 50rpx;
}

.check_bg{
  background-color: #efefef;
}
.bottom_publish_view{
  position: fixed;
  bottom: 0rpx;
  height: 100rpx;
  width: 100%;
  font-size: 40rpx;
  color: #ffffff; 
  text-align: center;
  background-color: #00cfc4;
}
.bottom_publish{
  height: 100rpx;
  line-height: 100rpx;
}
.vote_content{
  font-size: 28rpx;
  color: #666666;
  margin-left: 32rpx;
  padding-bottom: 32rpx;
}
.not_remian{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #dfdfdf;
  overflow: hidden;
  margin-top: 20rpx;
}
.not_remian_text{
  float: left;
  height: 32px;
  font-size: 36rpx;
  margin-left: 32rpx;
  color: #333333;
  line-height: 32px;
}
.not_remian_temp{
  float: right;
  margin-right: 32rpx;
}
.not_remain_time{
   height: 32px;
  font-size: 28rpx;
  margin-left: 16rpx;
  color: #999999;
  line-height: 32px;
}