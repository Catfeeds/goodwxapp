<import src="../comm/swtch.wxml" />
<view class="page" style="backgroud-color:#ffffff;overflow-x: hidden;padding-bottom:100rpx;">
  <view style="height:16px;backgroud-color:#efefef;">
  </view>
  <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{tipMsg}}</view>
  <view class='hotlistItemView' bindtap='avatarclick'>
    <view class='avatarView'>
      <image class='hotlistAvatar' mode='aspectFill' src='{{memo.createrUser.wxInfo.avatarUrl}}'></image>
    </view>
    <view class='unameAndTagsView'>
      <text class="uname">{{memo.createrUser.wxInfo.nickName}}</text>
      <text class="tags">{{memo.createTimes}}</text>
    </view>
    <view class="aready_end">
      <text class="{{vote.isEnd?'aread_end_test':'ing_test'}}">{{memo.tag}}</text>
    </view>
  </view>
  <view class="vote_theme">
    {{memo.title}}
  </view>
  <view class="vote_content">
    {{memo.content}}
  </view>
  <view class="weui-cells__tips end_time">结束时间:{{memo.endTimes}}</view>
  <view class="signup_container" wx:if="{{memo.users.length > 0}}">
    <block wx:for="{{memo.users}}" wx:for-item="item">
      <image class="signup_item" src="{{item.wxInfo.avatarUrl}}" />
    </block>
    <text class="signup_text">已参与</text>
  </view>
  <view class="remian" wx:if="{{!memo.hasAttend && !memo.isMe}}">
    <view class="weui-cells weui-cells_after-title" style="border-top:none;">
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">提醒我一下</view>
        <view class="weui-cell__ft">
          <switch bindchange="switchhandle" />
        </view>
      </view>
    </view>
    <view wx:if="{{showRemain}}">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">提醒日期</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="date" value="{{remaindate}}" start="2015-09-01" end="2017-09-01" bindchange="remainDateChange">
            <view class="weui-input">{{remaindate}}</view>
          </picker>
        </view>
      </view>
      <view class="weui-cell weui-cell_input" style="border-bottom:1px solid #dfdfdf;">
        <view class="weui-cell__hd">
          <view class="weui-label">提醒时间</view>
        </view>
        <view class="weui-cell__bd">
          <picker mode="time" value="{{remaintime}}" start="09:01" end="21:01" bindchange="remainTimeChange">
            <view class="weui-input">{{remaintime}}</view>
          </picker>
        </view>
      </view>
      <button bindtap="submit" class="weui-btn" type="primary">确定</button>
    </view>
  </view>
  <view class="not_remian" wx:if="{{memo.hasAttend && !memo.isEnd}}">
  <text class="not_remian_text">开启提醒</text><text class='not_remain_time' wx:if="{{async.checked}}">( {{ memo.remainTime}} )</text>
  <view class="zan-panel not_remian_temp" >
    <template is="zan-switch" data="{{ ...async, componentId: 'async' }}" />
  </view>
  </view>
  <!-- <view class="bottom_publish_view" bindtap="edit" wx:if="{{isMe}}">
      <text class="bottom_publish">编辑</text>
    </view>  -->
</view>