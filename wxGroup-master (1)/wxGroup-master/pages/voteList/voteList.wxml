<import src="../comm/empty.wxml" />
<view class='hotlistBackGroundView' style='height:{{winHeight}}rpx; overflow-x: hidden;'>
 <scroll-view scroll-y='true' style='height:{{winHeight}}rpx;'  bindscrolltolower='lower'> 
  <template is="emptyView" wx:if="{{empty}}" data="{{...emptyData}}"/>
    <block wx:for-items='{{voteList}}'>
    <view class="margin_view"></view>
      <view class='hotlistItemView' bindtap='avatarclick'>
        <view class='avatarView'>
          <image class='hotlistAvatar' mode='aspectFill' src='{{item.creater.wxInfo.avatarUrl}}'></image>
        </view>
        <view class='unameAndTagsView'>
          <text class="uname">{{item.creater.wxInfo.nickName}}</text>
          <text class="tags">{{item.createTime}}</text>
        </view>
        <view class="aready_end">
          <text class="{{item.isEnd?'aread_end_test':'ing_test'}}">{{item.voteTag}}</text>
        </view>
      </view>
      <view class="vote_theme">
        {{item.theme}}
      </view>
      <view wx:if="{{item.imgurl.length > 0}}">
        <image mode="scaleToFill" class="theme_img" src="{{item.imgurl}}"></image>
      </view>
      <view data-vote-id='{{item.voteId}}' class="vote_status_info_view" bindtap="lookVote">
        <view class="vote_status_info">{{item.voteStatusInfo}}</view>
      </view>
      <view class="bottom_margin_view" wx:if="{{index == voteList.length -1}}"></view>
    </block>
     <view  class="bottom_publish_view" bindtap="publish">
      <text class="bottom_publish">发起投票</text>
    </view> 
   </scroll-view> 
</view>