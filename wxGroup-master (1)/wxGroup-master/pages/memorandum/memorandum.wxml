<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
  <view class="page__bd">
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{tipMsg}}</view>
    <!-- <view class="weui-cells__title">文本框</view> -->
    <view class="weui-cells weui-cells_after-title" style="margin-top:20px;">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入备忘标题" bindinput="titleInput"/>
        </view>
      </view>
    </view>
    
    <view class="weui-cells weui-cells_after-title" style="margin-top:10px;" >
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" maxlength="80" bindinput="contentInput" placeholder="简单点描述下吧" style="height: 3.3em" />
          <view class="weui-textarea-counter">{{contentCount}}</view>
        </view>
      </view>
    </view>

    <view class="weui-cell weui-cell_input" style="margin-top:20px;">
      <view class="weui-cell__hd">
        <view class="weui-label">结束日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="weui-input">{{date}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">结束时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
          <view class="weui-input">{{time}}</view>
        </picker>
      </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_switch">
        <view class="weui-cell__bd">开启提醒</view>
        <view class="weui-cell__ft">
          <switch bindchange="switchhandle" />
        </view>
      </view>
    </view>
    <view class="remian" wx:if="{{showRemain}}">
    <view class="weui-cell weui-cell_input" >
      <view class="weui-cell__hd">
        <view class="weui-label">提醒日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{remaindate}}" start="2015-09-01" end="2017-09-01" bindchange="remainDateChange">
          <view class="weui-input">{{remaindate}}</view>
        </picker>
      </view>
    </view>

    <view class="weui-cell weui-cell_input" style="border-bottom:1px solid #dfdfdf;">
      <view class="weui-cell__hd">
        <view class="weui-label">提醒时间</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="time" value="{{remaintime}}" start="09:01" end="21:01" bindchange="remainTimeChange">
          <view class="weui-input">{{remaintime}}</view>
        </picker>
      </view>
    </view>
    </view>
    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="publish">发布</button>
    </view>
  </view>
</view>