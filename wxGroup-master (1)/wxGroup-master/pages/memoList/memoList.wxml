<import src="../comm/empty.wxml" />
<view class='hotlistBackGroundView' style='height:{{winHeight}}rpx; overflow-x: hidden;'>
  <scroll-view scroll-y='true' style='height:{{winHeight}}rpx;' bindscrolltolower='lower'>
    <template is="emptyView" wx:if="{{empty}}" data="{{...emptyData}}" />
    <block wx:for-items='{{memoList}}'>
    <view bindtap="lookMemo" data-memo-id='{{item.id}}' class='item_con' >
      <view class="margin_view"></view>
      <view class='hotlistItemView' bindtap='avatarclick'>
        <view class='avatarView'>
          <image class='hotlistAvatar' mode='aspectFill' src='{{item.createrUser.wxInfo.avatarUrl}}'></image>
        </view>
        <view class='unameAndTagsView'>
          <text class="uname">{{item.createrUser.wxInfo.nickName}}</text>
          <text class="tags">{{item.createTimes}}</text>
        </view>
        <view class="aready_end">
          <text class="{{item.isEnd?'aread_end_test':'ing_test'}}">{{item.memoTag}}</text>
        </view>
      </view>
      <view class="vote_theme">
        <text class='memo_title'> {{item.title}} </text>
        <text class='memo_content'>  {{item.content}} </text>
        <text class='memo_endTime'> 结束时间:{{item.endTime}} </text>
      </view>
      <!-- <view data-memo-id='{{item.id}}' class="vote_status_info_view" bindtap="lookVote">
        <view class="vote_status_info">{{item.memoStatusInfo}}</view>
      </view> -->
      </view>
      <view class="bottom_margin_view" wx:if="{{index == memoList.length -1}}"></view>
    </block>
    <view class="bottom_publish_view" bindtap="publish">
      <text class="bottom_publish">添加备忘录</text>
    </view>
  </scroll-view>
</view>