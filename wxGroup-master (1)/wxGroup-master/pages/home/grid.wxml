<view class="page" style="overflow-x: hidden;">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class="swiper">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="100%" height="150" mode="aspectFill"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="tools_name">工具应用</view>
  <view class="page__bd">
    <view class="weui-grids">
      <block wx:for="{{grids}}" wx:key="*this">
        <navigator url="{{item.jumpUrl}}" open-type="navigate" class="weui-grid" hover-class="weui-grid_active">
          <image class="weui-grid__icon" src="../../imgs/icon_tabbar.png" />
          <view class="weui-grid__label">{{item.menuName}}</view>
        </navigator>
      </block>
    </view>
  </view>
  <view class="weui-footer weui-footer_fixed-bottom" style="margin-Bottom:20px;">
    <view class="weui-footer__links">
      <navigator  open-type='redirect'  class="weui-footer__link">群活动助手</navigator>
    </view>
    <view class="weui-footer__text">Copyright © 2008-2016 sunchuanwen</view>
  </view>
</view>