.lend-bg {
  position: relative;
  height:100%;
}

.lend-word {
  /*font-family: PingFang-SC-Regular;*/
  font-size: 32rpx;
  color: #323232;
  letter-spacing: -0.31rpx;
  float: left;
  line-height: 60rpx;
  font-weight: bold;
}

.lend-bar {
  font-size: 30rpx;
  color: #646464;
  letter-spacing: -0.31rpx;
  float: left;
  line-height: 60rpx;
  font-weight: bold;
}

.lend-code {
  width: 660rpx;
  height: 80rpx;
  border: 1px solid #36be7a;
  border-radius: 4px;
}

.lend-user-photo {
  float: left;
}

.lend-photo {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
}

.lend-user-info {
  float: left;
  /*font-family: PingFangSC-Regular;*/
  font-size: 26rpx;
  color: #323232;
  letter-spacing: -0.63rpx;
  line-height: 44rpx;
}

.lend-scan {
  width: 34rpx;
  height: 34rpx;
}

.book-sale {
  /* font-family: PingFang-SC-Regular; */
  font-size: 30rpx;
  color: #1e1e1e;
  letter-spacing: 1.07rpx;
  float: left;
  line-height: 60rpx;
}

.book-lend {
  /* font-family: PingFang-SC-Regular; */
  font-size: 30rpx;
  color: #969696;
  letter-spacing: 1.07rpx;
  float: left;
  line-height: 60rpx;
}

.book-radio {
  float: right;
}

.lend-button {
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  background: #36be7a;
  /*font-family: PingFang-SC-Medium;*/
  font-size: 32rpx;
  color: #fff;
  letter-spacing: -0.41rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 0px;
}

.lend-unused-button {
  background: #DCDCDC;
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  /*font-family: PingFang-SC-Medium;*/
  font-size: 32rpx;
  color: #fff;
  letter-spacing: -0.41rpx;
  line-height: 90rpx;
  text-align: center;
}

.lend-success-flex {
  width: 100%;
}

.lend-success {
  font-size: 30rpx;
  color: #969696;
  letter-spacing: 1.07rpx;
  line-height: 40rpx;
  font-weight: bold;
  margin: 30rpx auto;
  padding-right: 40rpx;
  padding-left: 40rpx;
}

.lend-success-label {
  width: 200rpx;
}

.lend-width-190{
  width:190rpx;
}

.lend-width-330{
  width:330rpx;
}

.lend-width-160{
  width:160rpx;
}
