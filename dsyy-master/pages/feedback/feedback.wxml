<view class="border-top" style="border-top">
  <form bindsubmit="bindFormSubmit">
    <view class="feedback-textarea margin-left-30 margin-right-30 margin-top-30 margin-bottom-30">
      <textarea name="suggestion" class="padding-top-20 padding-bottom-20 padding-left-20 padding-right-20" placeholder="请您输入你遇到的问题及宝贵意见，我们会努力改进" auto-focus />
    </view>
    <view class="feedback-word margin-left-30 margin-right-30 margin-top-30 margin-bottom-30">联系方式 </view>
    <view class="feedback-input margin-left-30 margin-right-30 margin-top-30 margin-bottom-30">
      <input name="contact" class="padding-left-20 padding-right-20" placeholder="QQ／邮箱／电话" />
    </view>
    <view class="margin-left-30 margin-right-30 margin-top-30 margin-bottom-30">
      <button formType="submit" class="feedback-button">提交反馈</button>
    </view>
  </form>
</view>
<!-- 黑框提示并消失 -->  
<toast hidden="{{toastHidden}}" bindchange="toastChange">  
    {{notice_str}}  
</toast>  