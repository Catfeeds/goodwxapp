.book {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0rpx;
  border-bottom: 1px rgba(255, 255, 255, 0.2) solid;
}

.book-img {
  float: left;
}

.book-img-big {
  width: 210rpx;
  height: 315rpx;
}

.book-img-sml {
  width: 200rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.book-info {
  padding-left: 40rpx;
  float: left;
  width: 460rpx;
  font-size: 14px;
}

.book-title-font{
  /*font-family: .PingFang-SC-Regular;*/
