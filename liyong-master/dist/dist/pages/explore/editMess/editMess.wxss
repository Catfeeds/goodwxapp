#page {
  width: 100%;
  min-height: 100vh;
}
.edit {
  padding: 0 30rpx;
  border-top: 2rpx solid #ddd;
}
.editHead {
  height: 140rpx;
  width: 100%;
  line-height: 140rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
}
.myImg {
  width: 80%;
}
.userImg {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}
.isRight {
  height: 28rpx;
  width: 28rpx;
  margin-top: 56rpx;
}
.userMess {
  font-size: 28rpx;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #ddd;
}
.userDec {
  font-size: 28rpx;
  border-bottom: 2rpx solid #ddd;
  display: flex;
  justify-content: space-around;
}
.selMes {
  line-height: 100rpx;
}
.nickname {
  height: 100%;
  border: none;
}
.declaration {
  height: 80rpx;
  width: 518rpx;
}
.editBtn {
  width: 100%;
  height: 88rpx;
  border-radius: 10rpx;
  background: #ffe46f;
  line-height: 88rpx;
  margin-top: 140rpx;
  border: #fff;
}
