#page {
  min-height: 100vh;
  background: #ddd;
}
.banner {
  width: 100%;
  height: 240rpx;
}
.bannerImg {
  width: 100%;
  height: 100%;
}
.tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0rpx 0rpx 4rpx #b3b3b3;
  background: #fff;
  border-bottom: 4rpx solid #e8e8e8;
}
.tabView {
  width: 120rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.saleMain {
  padding: 0rpx 30rpx 0rpx 30rpx;
  background: #fff;
}
.panicBuy {
  padding: 20rpx 0;
  display: flex;
  border-bottom: 2rpx solid #e8e8e8;
}
.buyImg {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.del {
  text-decoration: line-through;
}
.pro {
  width: 380rpx;
  height: 28rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  position: relative;
}
.pro .onlysale {
  position: absolute;
  top: -6rpx;
  left: 150rpx;
}
.group__bodyNavTab--active {
  color: #333;
  position: relative;
}
.group__bodyNavTab--active::after {
  content: '';
  width: 100rpx;
  height: 4rpx;
  background: #ffe46f;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
}
.only {
  position: absolute;
  top: 0rpx;
}
.saleimg {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  position: relative;
}
.saleimg .out {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #000;
  opacity: 0.7;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  position: absolute;
  top: 50rpx;
  left: 30rpx;
}
.timer {
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #ddd;
  padding: 20rpx 0;
}
.specialmain {
  width: 80%;
}
.line {
  text-decoration: line-through;
  color: #999;
}
.timeBorder {
  border: 2rpx solid #ddd;
}
.time {
  display: flex;
}
.time >text {
  display: block;
  width: 40rpx;
  text-align: center;
}
