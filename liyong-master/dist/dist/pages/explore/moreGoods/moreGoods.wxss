#page {
  min-height: 100vh;
}
.banner {
  width: 100%;
  padding: 20rpx;
}
.banner .bannerImg {
  width: 100%;
  height: 376rpx;
  z-index: 10;
}
.moreThings {
  height: 128rpx;
  width: 100%;
  padding: 20rpx 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  border-top: 2rpx solid #f3f3f3;
  background: #fff;
  overflow: hidden;
}
.moreBtn {
  height: 88rpx;
  line-height: 88rpx;
  background: #ffe46f;
  border: 0;
}
.things {
  padding: 0 30rpx;
}
.txt {
  padding: 30rpx 0;
}
.bottom {
  width: 100%;
  height: 128rpx;
}
.goods {
  border-top: 2rpx solid #e8e8e8;
  padding: 20rpx 0;
  margin: 0 20rpx;
  display: flex;
  justify-content: space-between;
}
.goodsImg {
  width: 200rpx;
  height: 200rpx;
}
.goodsMes {
  width: 470rpx;
}
.goodsTex {
  font-size: 28rpx;
  display: block;
}
.user {
  height: 50rpx;
  display: flex;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.userImg {
  width: 50rpx;
  height: 50rpx;
  margin-left: -10rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.userNum {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #666;
}
.goodsPrice {
  display: flex;
  color: #991f5c;
  margin-top: 20rpx;
}
.vip {
  padding-right: 20rpx;
}
.profit {
  padding-left: 20rpx;
}
.small {
  font-size: 20rpx;
}
.big {
  font-size: 32rpx;
}
