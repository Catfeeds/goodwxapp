#page {
  padding: 0 30rpx;
}
.search {
  padding: 10rpx 0;
}
input {
  background: #f3f3f3;
  border-radius: 200rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}
.searchIcon {
  width: 30rpx;
  height: 30rpx;
  z-index: 10;
  position: absolute;
  top: 24rpx;
  left: 300rpx;
}
.scroll {
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
}
.class {
  width: 96rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  padding: 0 12rpx;
}
.tab__bodyNavTab--active {
  border-bottom: 6rpx solid #ffe46f;
}
.goods {
  border-top: 2rpx solid #e8e8e8;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
}
.goodsImg {
  width: 200rpx;
  height: 200rpx;
}
.goodsMes {
  width: 470rpx;
}
.goodsTex {
  font-size: 28rpx;
  display: block;
}
.user {
  height: 50rpx;
  display: flex;
  line-height: 50rpx;
  margin-top: 20rpx;
}
.userImg {
  width: 50rpx;
  height: 50rpx;
  margin-left: -10rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.userNum {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #666;
}
.goodsPrice {
  display: flex;
  color: #991f5c;
  margin-top: 20rpx;
}
.vip {
  padding-right: 20rpx;
}
.profit {
  padding-left: 20rpx;
}
.small {
  font-size: 20rpx;
}
.big {
  font-size: 32rpx;
}
