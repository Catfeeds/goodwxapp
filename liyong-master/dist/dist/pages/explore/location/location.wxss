#page {
  width: 100%;
  min-height: 100vh;
  position: relative;
}
.locTop {
  padding: 20rpx 30rpx 0 30rpx;
}
.citySearch {
  height: 68rpx;
  border: 2rpx solid #b3b3b3;
  border-radius: 4rpx;
  padding-left: 60rpx;
  line-height: 68rpx;
}
.seaImg {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 100rpx;
  left: 54rpx;
}
.delImg {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  top: 100rpx;
  right: 54rpx;
  z-index: 5;
}
.region {
  padding: 0 30rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
  font-style: PingFangHK-Medium;
}
.city {
  width: 210rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  border: 2rpx solid;
  border-radius: 4rpx;
  border: 2rpx solid #999;
}
.nowCity {
  color: #800080;
  border-color: #800080;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.area {
  display: flex;
  flex-wrap: wrap;
}
.letter {
  height: 50rpx;
  line-height: 50rpx;
  background: #f3f3f3;
  padding-left: 30rpx;
}
.allCity {
  margin-top: 20rpx;
}
.moreCity {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  box-shadow: 0 1rpx #e8e8e8;
}
.allLetter {
  width: 30rpx;
  height: 736rpx;
  position: fixed;
  right: 10rpx;
  top: 256rpx;
  text-align: center;
  color: #991f5c;
}
.allLetter >text {
  height: 30rpx;
}
.desCity {
  border-top: 1rpx solid #e8e8e8;
}
.noCity {
  text-align: center;
  margin-top: 260rpx;
}
