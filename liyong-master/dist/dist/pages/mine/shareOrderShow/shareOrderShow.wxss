#page {
  padding: 0 30rpx;
  padding-bottom: 148rpx;
}
.shareOrder__author {
  padding: 40rpx;
  text-align: center;
}
.shareOrder__author .avatar {
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.shareOrder__author .nickname {
  font-size: 28rpx;
}
.shareOrder__content {
  padding: 40rpx 0;
  border-top: 2rpx solid #f3f3f3;
}
.shareOrder__content .description {
  font-size: 28rpx;
}
.shareOrder__content image {
  margin-top: 20rpx;
  width: 100%;
}
