#page {
  padding: 0 30rpx;
}
.inputGroup,
.textareaGroup,
.radioGroup {
  font-size: 28rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f3f3f3;
}
.inputGroup label,
.textareaGroup label,
.radioGroup label {
  width: 112rpx;
}
.inputGroup {
  height: 100rpx;
}
.inputGroup input {
  flex: 1;
  margin-left: 60rpx;
}
.inputGroup picker {
  flex: 1;
  height: 40rpx;
}
.inputGroup--noBorder {
  border: 0;
}
.textareaGroup {
  height: 140rpx;
}
.textareaGroup label {
  margin-top: -40rpx;
}
.textareaGroup textarea {
  flex: 1;
  height: 80rpx;
  margin-left: 60rpx;
}
.radioGroup {
  height: 100rpx;
}
.radioGroup .tag {
  display: inline-block;
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f3f3f3;
  border-radius: 4rpx;
}
.radioGroup .tag--active {
  background: #ffe46f;
}
.submitWrapper {
  padding: 20rpx 30rpx;
  width: 100%;
  height: 128rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow: 0 -2rpx 4rpx #e8e8e8;
}
.submitWrapper button {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  background: #ffe46f;
  border-radius: 4rpx;
}
.submitWrapper button::after {
  content: none;
}
