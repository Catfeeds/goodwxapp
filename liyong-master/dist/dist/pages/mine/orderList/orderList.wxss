page {
  background: #e8e8e8;
}
.actionBar {
  width: 100%;
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  border-top: 2rpx solid #ddd;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  box-shadow: 0 -2rpx 4rpx #e8e8e8;
}
.actionBar__item {
  min-width: 104rpx;
  font-size: 26rpx;
  line-height: 100rpx;
  color: #999;
  text-align: center;
}
.actionBar__item--active {
  position: relative;
  font-weight: bold;
  color: #333;
}
.actionBar__item--active::after {
  content: '';
  display: block;
  width: 100rpx;
  height: 6rpx;
  background: #ffe46f;
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
}
.orderList {
  padding-top: 100rpx;
}
.orderList--empty {
  margin-top: 120rpx;
  text-align: center;
}
.orderList--empty image {
  width: 240rpx;
  height: 180rpx;
}
.orderList--empty .button {
  margin-top: 40rpx;
  display: inline-block;
  padding: 0;
  width: 490rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border: 0;
}
.order {
  padding: 0 30rpx;
  background: #fff;
}
.order__header {
  height: 80rpx;
  display: flex;
  align-items: center;
}
.order__body {
  height: 220rpx;
  border-top: 2rpx solid #ddd;
  position: relative;
}
.order__body .posters {
  width: 640rpx;
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
}
.order__body .poster {
  width: 120rpx;
  height: 120rpx;
  vertical-align: top;
  border-radius: 6rpx;
}
.order__body .label {
  margin-top: 2rpx;
}
.order__body .arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  position: absolute;
  right: 0;
  top: 90rpx;
}
.order__footer {
  height: 100rpx;
  border-top: 2rpx solid #ddd;
}
.order__footer .btn {
  text-align: center;
  width: 140rpx;
  line-height: 52rpx;
  font-size: 26rpx;
  border-radius: 4rpx;
}
.order__footer .btn.primary {
  background: #ffe46f;
}
.order__footer .btn.default {
  background: #fff;
  border: 2rpx solid #999;
}
