page {
  background: #e8e8e8;
}
.orderExpress__header {
  height: 300rpx;
  padding: 0 30rpx;
  background: #fff;
}
.orderExpress__header .posters {
  padding: 20rpx 0;
  padding-right: 40rpx;
  white-space: nowrap;
  overflow: scroll;
  margin-left: -20rpx;
  margin-right: -40rpx;
}
.orderExpress__header .posters::-webkit-scrollbar {
  display: none;
}
.orderExpress__header .posters image {
  width: 120rpx;
  height: 120rpx;
  margin-left: 20rpx;
  vertical-align: top;
}
.orderExpress__header .info {
  height: 140rpx;
  border-top: 2rpx solid #f3f3f3;
}
.orderExpress__header .info image {
  width: 80rpx;
  height: 80rpx;
}
.orderExpress__feed {
  background: #fff;
  padding: 0 30rpx;
  position: relative;
}
.orderExpress__feed .item {
  display: flex;
}
.orderExpress__feed .item .left {
  width: 70rpx;
  position: relative;
}
.orderExpress__feed .item .left::before {
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  background: #e8e8e8;
  border-radius: 50%;
  position: absolute;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}
.orderExpress__feed .item .left::after {
  content: '';
  display: block;
  width: 2rpx;
  height: 100%;
  background: #ddd;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%) scalcX(0.5);
}
.orderExpress__feed .item .right {
  flex: 1;
  margin-left: 30rpx;
  color: #999;
  padding: 20rpx 0;
  border-top: 2rpx solid #f3f3f3;
}
.orderExpress__feed .item .right .content {
  font-size: 28rpx;
}
.orderExpress__feed .item .right .datetime {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.orderExpress__feed .item--first .left::before {
  background: #ffe46f;
  border: 6rpx solid #fff7d4;
  margin-top: -6rpx;
}
.orderExpress__feed .item--first .left::after {
  height: calc(100% - 30rpx);
  top: 30rpx;
}
.orderExpress__feed .item--first .right {
  border-top: 0;
}
.orderExpress__feed .item--first .right .content {
  color: #991f5c;
}
.orderExpress__feed .moreBtn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  bottom: 26rpx;
  right: 30rpx;
}
.orderExpress__feed .moreBtn .arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
  border-right: 3rpx solid #666;
  border-bottom: 3rpx solid #666;
  margin-left: 20rpx;
  margin-top: -8rpx;
}
