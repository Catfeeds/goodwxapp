page {
  background: #e8e8e8;
}
.orderDetail__address {
  height: 212rpx;
  padding: 40rpx 30rpx;
  background: #fff;
}
.orderDetail__address .icon {
  width: 40rpx;
  height: 40rpx;
}
.orderDetail__address .name,
.orderDetail__address .telphone {
  font-weight: bold;
}
.orderDetail__address .tag {
  width: 64rpx;
  height: 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  text-align: center;
  color: #991f5c;
  border: 2rpx solid #991f5c;
  border-radius: 4rpx;
}
.orderDetail__merchGroup {
  background: #fff;
}
.orderDetail__merchGroup .header {
  height: 100rpx;
  padding: 20rpx 30rpx;
}
.orderDetail__merchGroup .main {
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f3f3f3;
}
.orderDetail__merchGroup .main .merch {
  padding: 20rpx;
  background: #f3f3f3;
}
.orderDetail__merchGroup .main .merch__poster {
  width: 120rpx;
  height: 120rpx;
}
.orderDetail__merchGroup .main .arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
}
.orderDetail__merchGroup .main .merchType {
  font-size: 28rpx;
}
.orderDetail__merchGroup .main .merchType__quantity {
  margin-left: 10rpx;
  color: #991f5c;
}
.orderDetail__merchGroup .main .merchType__price {
  text-align: right;
}
.orderDetail__merchGroup .footer {
  height: 100rpx;
  padding: 20rpx 30rpx;
  border-top: 2rpx solid #f3f3f3;
  text-align: right;
  justify-content: flex-end;
}
.orderDetail__merchGroup .button {
  padding: 0;
  width: 140rpx;
  height: 60rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  border-color: #999;
  border-radius: 4rpx;
}
.orderDetail__merchGroup .button--primary {
  border: 0;
  line-height: 60rpx;
}
.orderDetail__bills {
  height: 486rpx;
  padding: 30rpx;
  background: #fff;
}
.orderDetail__bills .bill__total {
  height: 100rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f3f3f3;
}
.orderDetail__bills .bill__total .unit {
  margin-top: 14rpx;
}
.orderDetail__payments {
  background: #fff;
  height: 148rpx;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #666;
}
