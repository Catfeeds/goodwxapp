#page {
  min-height: 100vh;
  background: #fff;
}
.cover {
  height: 320rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/cover-bg-cb0fbda9f4.png");
  background-size: cover;
  padding-top: 100rpx;
  padding-left: 40rpx;
  color: #9e7f5a;
}
.cover .getCoinLink {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ffe46f;
  border-radius: 30rpx 0 0 30rpx;
  text-align: center;
}
.cover .getCoinLink .icon {
  width: 60rpx;
  height: 60rpx;
}
.cover .getCoinLink .arrow {
  margin-left: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #9e7f5a;
  border-right: 4rpx solid #9e7f5a;
  transform: rotate(45deg);
}
.records {
  border-top: 1rpx solid #ddd;
}
.record {
  height: 120rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}
