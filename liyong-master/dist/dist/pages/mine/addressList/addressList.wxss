page {
  background: #e8e8e8;
}
.addressList__searchBar {
  height: 160rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}
.addressList__searchHint {
  font-size: 24rpx;
  line-height: 32rpx;
  color: #991f5c;
}
.addressList__hint {
  padding: 30rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #999;
}
.addressList {
  padding-bottom: 140rpx;
}
.addressList--empty {
  width: 100%;
  position: absolute;
  top: 320rpx;
  text-align: center;
}
.addressList--empty image {
  width: 160rpx;
  height: 160rpx;
  vertical-align: top;
}
.addressList--empty view {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.addBtn {
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  width: 690rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffe46f;
  border-radius: 4rpx;
}
.addBtn .icon {
  width: 28rpx;
  height: 28rpx;
}
