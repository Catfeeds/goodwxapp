page {
  background: #e8e8e8;
}
.topBar {
  width: 100%;
  height: 120rpx;
  padding: 20rpx 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  font-size: 28rpx;
  background: #fff;
  border-top: 2rpx solid #f3f3f3;
  z-index: 100;
}
.topBar input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #b3b3b3;
}
.topBar button {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #ffe46f;
}
.couponList {
  padding: 150rpx 30rpx 0;
}
.coupon__nonuse {
  width: 690rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  text-align: center;
  margin-bottom: 30rpx;
}
.couponList--expired {
  padding-top: 30rpx;
}
.couponList--empty {
  width: 100%;
  position: absolute;
  top: 320rpx;
  text-align: center;
}
.couponList--empty image {
  width: 160rpx;
  height: 160rpx;
  vertical-align: top;
}
.couponList--empty view {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.couponMore {
  padding: 20rpx 0;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}
.couponMore .link {
  color: #991f5c;
}
