#page {
  padding-bottom: 148rpx;
}
.fixedBar {
  width: 100%;
  height: 200rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 100;
}
.topBar {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  background: #fff;
}
.topBar input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #b3b3b3;
}
.topBar button {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #ffe46f;
}
.actionBar {
  height: 100rpx;
  display: flex;
  text-align: center;
  border-bottom: 2rpx solid #f3f3f3;
}
.actionBar__item {
  line-height: 100rpx;
  font-size: 28rpx;
  color: #999;
}
.actionBar__item--active {
  font-weight: bold;
  color: #333;
  position: relative;
}
.actionBar__item--active::after {
  content: '';
  display: block;
  width: 120rpx;
  height: 6rpx;
  background: #ffe46f;
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
}
.giftCardList {
  margin-top: 200rpx;
  padding: 30rpx;
}
.giftCardList--empty {
  width: 100%;
  position: absolute;
  top: 400rpx;
  text-align: center;
}
.giftCardList--empty image {
  width: 160rpx;
  height: 160rpx;
  vertical-align: top;
}
.giftCardList--empty view {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #999;
}
.giftCardList--empty .button {
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  width: 240rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #ddd;
}
.giftCardList--empty .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
