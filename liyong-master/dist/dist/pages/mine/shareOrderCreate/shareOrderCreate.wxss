#page {
  padding: 40rpx 30rpx;
  padding-bottom: 148rpx;
}
.shareOrder__merch {
  display: flex;
}
.merch__poster {
  width: 160rpx;
  height: 160rpx;
}
.merch__stars {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.merch__starHint {
  color: #666;
  font-size: 24rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
}
.icon-star-empty {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/stars@2x-a5fef714ab.png");
  background-size: 134rpx 96rpx;
  background-position: 134rpx 96rpx;
  width: 62rpx;
  height: 62rpx;
}
.icon-star-fill {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/stars@2x-a5fef714ab.png");
  background-size: 134rpx 96rpx;
  background-position: 62rpx 96rpx;
  width: 62rpx;
  height: 62rpx;
}
.uploadImages {
  margin: 0 -6rpx;
}
.uploadImage {
  display: inline-block;
  float: left;
  width: 226rpx;
  height: 226rpx;
  position: relative;
  margin-left: 6rpx;
  margin-bottom: 6rpx;
}
.uploadImage .icon-remove {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.uploadImage image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.shareOrder__textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #f3f3f3;
  font-size: 28rpx;
  line-height: 40rpx;
}
