#page {
  padding: 30rpx;
  padding-bottom: 148rpx;
}
.saleSupport__merchType {
  display: flex;
  height: 80rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #f3f3f3;
}
.saleSupport__from {
  font-size: 28rpx;
}
.saleSupport__from .inputGroup {
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 2rpx solid #f3f3f3;
}
.saleSupport__from .inputGroup input {
  margin-left: 40rpx;
  font-size: 28rpx;
}
.saleSupport__from .inputGroup picker {
  margin-left: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
}
.saleSupport__from .inputGroup .arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
  border-top: 4rpx solid #ddd;
  border-right: 4rpx solid #ddd;
}
.saleSupport__from .textareaGroup {
  padding: 30rpx 0;
}
.saleSupport__from .textareaGroup textarea {
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  border: 2rpx solid #f3f3f3;
  padding: 20rpx;
  font-size: 28rpx;
}
.saleSupport__from .uploadImageGroup .uploadImages {
  margin-top: 20rpx;
  margin-left: -4rpx;
  margin-right: -4rpx;
}
.saleSupport__from .uploadImageGroup .uploadImage {
  float: left;
  width: 166rpx;
  height: 166rpx;
  margin: 0 4rpx;
  position: relative;
}
.saleSupport__from .uploadImageGroup .uploadImage .icon-remove {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.saleSupport__from .uploadImageGroup .uploadImage image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}
