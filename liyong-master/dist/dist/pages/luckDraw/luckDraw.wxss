#page {
  min-height: 100vh;
  max-width: 100%;
  background: url("https://imgcdn.youhaodongxi.com/weapp/luck-draw-bg-a6e59b9a30.png");
  background-size: cover;
  box-sizing: border-box;
  padding: 40rpx 40rpx 136rpx 40rpx;
  overflow: hidden;
}
image.title {
  width: 420rpx;
  height: 230rpx;
  display: block;
  margin: 0 auto;
}
view.notice {
  width: 440rpx;
  background: #fff;
  height: 60rpx;
  border-radius: 30rpx;
  margin: 0 auto;
  position: relative;
  padding-left: 80rpx;
  line-height: 60rpx;
  opacity: 0.8;
  transition: all 0.2s;
}
view.notice.notice--hide {
  opacity: 0;
  visibility: hidden;
}
view.notice image.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-sizing: border-box;
  position: absolute;
  left: -10rpx;
  bottom: 0;
}
view.notice text.nickname {
  min-width: 120rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
view.trunTable {
  width: 670rpx;
  height: 670rpx;
  margin: 0 auto;
  position: relative;
}
view.trunTable view.table,
view.trunTable image.table {
  position: absolute;
  width: 100%;
  height: 100%;
}
view.trunTable view.prizes {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
view.trunTable view.prize {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
  transform-origin: 50% 50%;
}
view.trunTable view.prize .prize__component {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  top: 80rpx;
  left: 50%;
  transform: translateX(-50%);
}
view.trunTable image.pointer {
  position: absolute;
  width: 240rpx;
  height: 240rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
view.times text {
  margin: 0 10rpx;
}
.winnerList,
.rules {
  width: 670rpx;
  background: rgba(255,255,255,0.75);
  margin-top: 100rpx;
  border-radius: 10rpx;
  position: relative;
  padding: 60rpx 40rpx 40rpx 40rpx;
}
.winnerList .title,
.rules .title {
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 40rpx;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translate(-50%, -50%);
  box-shadow: 0 0 10rpx #fff0b0;
}
.winnerList {
  height: 460rpx;
}
.winnerList scroll-view {
  width: 100%;
  height: 100%;
  overflow-style: scrollbar;
}
.winnerList .winner {
  padding: 20rpx 0rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #ddd;
  font-size: 24rpx;
}
.winnerList .winner .winner__avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.winnerList .winner .winner__nickname {
  flex: 1;
  margin-left: 20rpx;
}
.winnerList .winner .winner__prize {
  color: #991f5c;
  margin-left: 76rpx;
}
.winnerList .winner--fisrt {
  border: 0;
}
.rules {
  padding: 80rpx 40rpx 40rpx 40rpx;
}
.rules text {
  line-height: 34rpx;
}
#thanksModal .modal__body {
  padding: 40rpx 95rpx;
  text-align: center;
}
#thanksModal .modal__body > image {
  display: block;
  width: 216rpx;
  height: 160rpx;
  margin: 0 auto;
}
#winnerModal .modal__body {
  padding: 40rpx 55rpx;
  text-align: center;
}
#winnerModal .modal__body .coupon {
  height: 160rpx;
  background: #fff0b0;
  position: relative;
}
#winnerModal .modal__body .coupon::before,
#winnerModal .modal__body .coupon::after {
  content: '';
  display: block;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  left: 162rpx;
}
#winnerModal .modal__body .coupon::before {
  top: -20rpx;
}
#winnerModal .modal__body .coupon::after {
  bottom: -20rpx;
}
#winnerModal .modal__body .coupon__left {
  height: 100%;
  width: 180rpx;
}
#winnerModal .modal__body .coupon__right {
  height: 100%;
  border-left: 4rpx dashed #fff;
  padding-left: 20rpx;
  text-align: left;
  line-height: 32rpx;
}
#winnerModal .modal__body .overText {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
#winnerModal .modal__body .winCold {
  width: 120rpx;
  height: 120rpx;
  margin-top: 40rpx;
}
