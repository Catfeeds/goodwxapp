page {
  background: #e8e8e8;
}
#page {
  padding-bottom: 152rpx;
}
.merchBuy__address {
  height: 180rpx;
  padding: 40rpx 30rpx;
  background: #fff;
  border-bottom: 6rpx solid transparent;
  border-image: url("https://imgcdn.youhaodongxi.com/weapp/icon-address-border-4118c7a5aa.png");
}
.merchBuy__address .icon {
  width: 40rpx;
  height: 40rpx;
}
.merchBuy__address .name,
.merchBuy__address .telphone {
  font-weight: bold;
}
.merchBuy__address .tag {
  width: 64rpx;
  height: 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  text-align: center;
  color: #991f5c;
  border: 2rpx solid #991f5c;
  border-radius: 4rpx;
}
.merchBuy__address .arrow {
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  border-top: 2rpx solid #b3b3b3;
  border-right: 2rpx solid #b3b3b3;
}
.merchBuy__address--empty {
  height: 108rpx;
  padding: 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.merchBuy__merchTypes {
  padding: 20rpx 30rpx;
  background: #fff;
}
.merchBuy__merchTypesLimit {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  background: #fff0b0;
}
.merchBuy__bill {
  height: 540rpx;
  padding: 30rpx;
  background: #fff;
  font-size: 28rpx;
}
.merchBuy__bill .merchAmount,
.merchBuy__bill .expressFee {
  display: flex;
  justify-content: space-between;
  position: relative;
}
.merchBuy__bill .coupon,
.merchBuy__bill .giftCard,
.merchBuy__bill .coin {
  border-top: 2rpx solid #f3f3f3;
}
.merchBuy__bill .coupon,
.merchBuy__bill .giftCard {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.merchBuy__bill .coupon .arrow,
.merchBuy__bill .giftCard .arrow {
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  border-top: 2rpx solid #b3b3b3;
  border-right: 2rpx solid #b3b3b3;
  position: relative;
  top: 12rpx;
}
.merchBuy__bill .icon-order-coupon {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/orderBill@2x-1c7d484839.png");
  background-size: 90rpx 40rpx;
  background-position: 90rpx 40rpx;
  width: 40rpx;
  height: 40rpx;
}
.merchBuy__bill .icon-order-gift-card {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/orderBill@2x-1c7d484839.png");
  background-size: 90rpx 40rpx;
  background-position: 40rpx 40rpx;
  width: 40rpx;
  height: 40rpx;
}
.merchBuy__bill .coin {
  padding: 30rpx 0;
}
.merchBuy__bill .coin__actionWrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.merchBuy__bill .coin__action {
  width: 240rpx;
  height: 60rpx;
  border: 2rpx solid #999;
  display: flex;
  align-items: center;
}
.merchBuy__bill .coin__action .minus,
.merchBuy__bill .coin__action .add {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}
.merchBuy__bill .coin__action .add::before,
.merchBuy__bill .coin__action .add::after,
.merchBuy__bill .coin__action .minus::before {
  content: '';
  display: block;
  width: 30rpx;
  height: 4rpx;
  background: #991f5c;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.merchBuy__bill .coin__action .add::after {
  height: 30rpx;
  width: 4rpx;
}
.merchBuy__bill .coin__action .add {
  border-left: 2rpx solid #999;
}
.merchBuy__bill .coin__action .minus {
  border-right: 2rpx solid #999;
}
.merchBuy__bill .coin__action .add--disabled::before,
.merchBuy__bill .coin__action .add--disabled::after,
.merchBuy__bill .coin__action .minus--disabled::before {
  background: #ccc;
}
.fixedBottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fixedBottom .button {
  width: 240rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  border-radius: 4rpx;
}
.fixedBottom .total__unit,
.fixedBottom .total__price {
  color: #991f5c;
}
.fixedBottom .total__name {
  font-size: 24rpx;
  margin-top: 6rpx;
}
.fixedBottom .total__unit {
  font-size: 28rpx;
  margin-top: 4rpx;
}
.fixedBottom .total__price {
  font-size: 40rpx;
}
