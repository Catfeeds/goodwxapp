#page {
  padding: 20rpx 30rpx 140rpx 20rpx;
}
#page textarea {
  margin-top: 20rpx;
  padding: 20rpx;
  width: 100%;
  height: 160rpx;
  border: 2rpx solid #f3f3f3;
  font-size: 28rpx;
}
#page .fixedBottom {
  height: 120rpx;
  display: flex;
  align-items: center;
}
#page .fixedBottom .button {
  height: 80rpx;
  flex: 1;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
#page .fixedBottom .button--default {
  border: 2rpx solid #666;
}
