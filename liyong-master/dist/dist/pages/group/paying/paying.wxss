.countdown {
  height: 80rpx;
  background: #fff0b0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
.summary {
  margin-top: 40rpx;
  text-align: center;
}
.summary__amount {
  margin-top: 10rpx;
  font-size: 60rpx;
  line-height: 60rpx;
  color: #991f5c;
}
.merchs {
  margin-top: 40rpx;
  padding: 0 30rpx;
}
.merch {
  margin-top: 20rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  background: #e8e8e8;
}
.merch__poster {
  width: 120rpx;
  height: 120rpx;
}
.merch__title {
  margin-left: 20rpx;
  flex: 1;
  font-size: 28rpx;
}
