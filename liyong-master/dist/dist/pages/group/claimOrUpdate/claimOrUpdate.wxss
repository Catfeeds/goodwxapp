#page {
  min-height: 100vh;
  background: url("https://imgcdn.youhaodongxi.com/weapp/index-bg-a51e4cdb6a.png");
  background-size: cover;
  padding: 20rpx 24rpx 0 24rpx;
}
.main {
  height: calc(100vh - 20rpx);
}
.cover {
  height: 200rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/cover-bg-cb0fbda9f4.png");
  background-size: 100% auto;
  border-radius: 20rpx 20rpx 0 0;
  padding: 50rpx 30rpx;
}
.content {
  height: calc(100vh - 200rpx);
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  margin-top: -20rpx;
  padding: 60rpx 40rpx 0 40rpx;
}
input {
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #b3b3b3;
  border-radius: 10rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
}
.input-placeholder {
  color: #999;
}
.switchView {
  height: 400rpx;
}
.switchView .setQrcode {
  width: 280rpx;
  height: 280rpx;
}
.switchView .noSetQrcode {
  margin-top: 100rpx;
}
button {
  width: 440rpx;
  margin: 0 auto;
}
.overText {
  display: block;
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
