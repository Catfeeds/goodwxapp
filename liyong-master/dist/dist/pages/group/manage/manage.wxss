#page {
  min-height: 100vh;
  background: url("https://imgcdn.youhaodongxi.com/weapp/cover-transparent-bg-22c1108d06.png") #fff0b0;
  background-repeat: no-repeat;
  background-size: 100% auto;
  padding: 24rpx 24rpx 74rpx 24rpx;
}
.profile {
  height: 100rpx;
  position: relative;
}
.profile .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.profile .grade {
  width: 60rpx;
  height: 40rpx;
  border: 2rpx solid #991f5c;
  border-radius: 20rpx;
  color: #991f5c;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
}
.profile .help {
  width: 32rpx;
  height: 32rpx;
  padding: 4rpx;
  position: absolute;
  top: 4rpx;
  right: 0;
}
#modal .modal__body {
  padding: 50rpx 35rpx 40rpx 35rpx;
}
#modal .modal__body .poster {
  display: block;
  width: 560rpx;
  height: 560rpx;
}
