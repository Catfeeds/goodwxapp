#page {
  padding-bottom: 140rpx;
}
swiper {
  height: 420rpx;
  overflow: hidden;
}
swiper video,
swiper image {
  width: 100%;
}
swiper .wx-swiper-dot {
  width: 10rpx;
  height: 10rpx;
  background: #fff;
}
swiper .wx-swiper-dot-active {
  width: 30rpx;
  height: 10rpx;
  border-radius: 5rpx;
  background: #ffe46f;
}
.merch__buyers {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  font-size: 24rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: #666;
}
.merch__buyers .arrow {
  margin-left: 10rpx;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg);
  border-top: 3rpx solid #666;
  border-right: 3rpx solid #666;
}
.merch__buyers .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: -10rpx;
  border: 2rpx solid #fff;
  vertical-align: top;
}
.merch__title {
  font-weight: bold;
  padding: 0 30rpx;
}
.merch__tag {
  display: inline-block;
  height: 40rpx;
  font-size: 22rpx;
  line-height: 36rpx;
  padding: 0 10rpx;
  color: #991f5c;
  border: 2rpx solid #991f5c;
  border-radius: 4rpx;
}
.merch__intro {
  font-size: 22rpx;
  line-height: 30rpx;
  color: #666;
}
.merch__types {
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.merch__delivery {
  height: 240rpx;
  border-top: 2rpx solid #ddd;
  padding: 30rpx;
  font-size: 26rpx;
}
.merch__delivery .arrow {
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
  border-top: 4rpx solid #666;
  border-right: 4rpx solid #666;
  margin-top: 8rpx;
  margin-right: 4rpx;
}
.merch__delivery .button {
  padding: 0;
  width: 300rpx;
  height: 60rpx;
  line-height: 56rpx;
  margin: 0 auto;
}
.merch__expressFee {
  height: 88rpx;
  border-top: 2rpx solid #ddd;
  font-size: 26rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
}
.merch__author {
  padding-top: 100rpx;
  border-top: 2rpx solid #ddd;
  text-align: center;
  position: relative;
}
.merch__author .avatar {
  position: absolute;
  top: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 10;
}
.merch__author .avatar::after {
  content: '甄选师';
  display: block;
  width: 68rpx;
  height: 24rpx;
  font-size: 16rpx;
  line-height: 24rpx;
  background: #ffe46f;
  border-radius: 12rpx;
  position: absolute;
  top: 72rpx;
  left: 50%;
  transform: translateX(-50%);
}
.merch__author .avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  vertical-align: top;
}
.merch__author .content {
  width: 560rpx;
  min-height: 140rpx;
  border: 2rpx solid #b3b3b3;
  font-size: 22rpx;
  padding: 60rpx 76rpx 32rpx;
  margin: 0 auto;
  position: relative;
}
.merch__author .content::before,
.merch__author .content::after {
  content: '';
  display: block;
  background: #fff;
  position: absolute;
}
.merch__author .content::before {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/quotes@2x-d043a73b97.png");
  background-size: 66rpx 28rpx;
  background-position: 66rpx 28rpx;
  width: 28rpx;
  height: 28rpx;
  top: 40rpx;
  left: 0;
  transform: translateX(-50%);
}
.merch__author .content::after {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/quotes@2x-d043a73b97.png");
  background-size: 66rpx 28rpx;
  background-position: 28rpx 28rpx;
  width: 28rpx;
  height: 26rpx;
  bottom: 40rpx;
  right: 0;
  transform: translateX(50%);
}
.merch__author .icon-slogan-edit {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -2rpx;
  right: -2rpx;
}
.merch__shareOrderList,
.merch__detail {
  margin-top: 40rpx;
  padding: 0 30rpx;
}
.merch__shareOrderList .title,
.merch__detail .title {
  margin: 0 auto;
  padding: 20rpx 0;
  width: 64rpx;
  font-weight: bold;
  border-bottom: 6rpx solid #ffe46f;
}
.merch__shareOrderList .button {
  padding: 0;
  width: 300rpx;
  height: 60rpx;
  line-height: 56rpx;
  margin: 0 auto;
}
.fixedBottom {
  width: 100%;
  height: 120rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  box-shadow: 0 -2rpx 4rpx #e8e8e8;
  background: #fff;
  display: flex;
  align-items: center;
  z-index: 100;
}
.fixedBottom .iconWrapper {
  width: 120rpx;
  height: 100rpx;
}
.fixedBottom .icon-home {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/bottomNav@2x-46af567ed3.png");
  background-size: 200rpx 130rpx;
  background-position: 130rpx 60rpx;
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx auto;
}
.fixedBottom .button {
  padding: 0;
  width: 600rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
}
.modal__subscribeSuccess .modal__body {
  width: 590rpx;
  height: 596rpx;
  text-align: center;
}
.modal__subscribeSuccess .icon {
  margin-top: 60rpx;
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  vertical-align: top;
}
.modal__subscribeSuccess .button {
  margin: 0 auto;
  margin-top: 60rpx;
  width: 510rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal__delivery .modal__body {
  width: 590rpx;
  padding: 40rpx;
}
.modal__delivery .content {
  margin-top: 20rpx;
  border-top: 2rpx solid #f3f3f3;
  padding-top: 20rpx;
  font-size: 28rpx;
}
.popup__selectMerchType .popup__header,
.popup__selectLocation .popup__header {
  height: 100rpx;
  padding: 30rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.popup__selectMerchType .popup__body,
.popup__selectLocation .popup__body {
  border-top: 2rpx solid #f3f3f3;
}
.popup__selectMerchType .popup__body {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.popup__selectMerchType .merchType {
  display: table;
  margin-top: 30rpx;
  border: 2rpx solid #999;
  padding: 0 20rpx;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  border-radius: 2%;
}
.popup__selectMerchType .merchType--active {
  border: 2rpx solid #991f5c;
  color: #991f5c;
  background: #fff7d4;
}
.popup__selectMerchType .popup__footer {
  height: 120rpx;
  padding: 20rpx 30rpx;
}
.popup__selectMerchType .popup__footer .button {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
}
.popup__selectLocation .popup__header .item {
  text-align: center;
  padding: 0 30rpx;
}
.popup__selectLocation .popup__header .item--active {
  position: relative;
}
.popup__selectLocation .popup__header .item--active::after {
  content: '';
  display: block;
  width: 100%;
  height: 6rpx;
  background: #ffe46f;
  position: absolute;
  left: 0;
  bottom: -32rpx;
}
.popup__selectLocation .popup__body {
  padding: 0 30rpx;
}
.popup__selectLocation .popup__body .item {
  padding: 0 30rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  color: #666;
  border-bottom: 2rpx solid #f3f3f3;
}
