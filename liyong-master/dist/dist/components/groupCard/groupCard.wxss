.grounpRemarks {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.wxName {
  width: 81%;
  white-space: normal;
  word-wrap: break-word;
}
.card {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  position: relative;
}
.card--claimed::before,
.card--canClaim::before,
.card--promoting::before,
.card--canPromote::before,
.card--claimed::after,
.card--canClaim::after,
.card--promoting::after,
.card--canPromote::after {
  display: block;
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  position: absolute;
  bottom: 110rpx;
  background: #fff0b0;
}
.card--claimed::before,
.card--canClaim::before,
.card--promoting::before,
.card--canPromote::before {
  left: -10rpx;
}
.card--claimed::after,
.card--canClaim::after,
.card--promoting::after,
.card--canPromote::after {
  right: -10rpx;
}
.card--promoting {
  padding-bottom: 0;
}
.card--claimed.card--promoting {
  padding-bottom: 20rpx;
}
.ellipsis {
  flex: 1;
  height: 40rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.promoting {
  height: 120rpx;
  background: #fffde7;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 -20rpx;
  margin-top: 30rpx;
}
.icon-notice {
  width: 40rpx;
  height: 40rpx;
}
.icon-fresh {
  width: 28rpx;
  height: 28rpx;
}
.update-text {
  margin-left: 10rpx;
  text-decoration: underline;
  color: #991f5c;
}
.icon-share {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  margin-left: 80rpx;
}
.button {
  vertical-align: middle;
  display: inline-block;
  margin: 0;
  background-color: transparent;
  border-radius: 4rpx;
}
.button::after {
  content: none;
}
.button.large {
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}
.button.small {
  font-size: 24rpx;
  line-height: 32rpx;
  padding: 0 15rpx;
}
.button.default {
  color: #666;
  border: 2rpx solid #666;
}
.button.purple {
  color: #991f5c;
  border: 2rpx solid #991f5c;
}
.button.disabled {
  color: #999;
}
.members {
  margin-top: 40rpx;
}
.members .avatars {
  flex: 1;
}
.members .avatar {
  width: 70rpx;
  height: 70rpx;
  border: 3rpx solid #fff;
  border-radius: 50%;
  box-sizing: border-box;
  vertical-align: top;
  margin-left: -10rpx;
}
.members .avatar--first {
  margin: 0;
}
