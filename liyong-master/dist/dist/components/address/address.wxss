.address {
  background: #fff;
  min-height: 240rpx;
  padding: 30rpx 30rpx 0rpx;
}
.address--limit {
  background: #e8e8e8;
  position: relative;
}
.address--limit::after {
  content: '超出配送范围';
  display: block;
  font-size: 24rpx;
  color: #991f5c;
  opacity: 1;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.address--limit .owner,
.address--limit .detail,
.address--limit .actionBar {
  opacity: 0.6;
}
.address--select {
  position: relative;
}
.address--select::after {
  content: '';
  display: #000;
  position: absolute;
  top: 0;
  right: 0;
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/addressActions@2x-aeba3de957.png");
  background-size: 140rpx 90rpx;
  background-position: 40rpx 40rpx;
  width: 40rpx;
  height: 40rpx;
}
.owner {
  display: flex;
  align-items: center;
}
.owner .nickname,
.owner .telphone {
  font-weight: bold;
}
.owner .telphone {
  margin-left: 30rpx;
}
.owner .label {
  display: inline-block;
  margin-left: 30rpx;
  width: 64rpx;
  height: 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  color: #991f5c;
  text-align: center;
  border: 2rpx solid #991f5c;
  border-radius: 4rpx;
}
.detail {
  display: block;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #999;
}
.actionBar {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  border-top: 2rpx solid #ddd;
  height: 80rpx;
  font-size: 26rpx;
}
.actionBar .icon {
  width: 40rpx;
  height: 40rpx;
}
.actionBar .icon.select {
  width: 30rpx;
  height: 30rpx;
}
.actionBar .icon.edit,
.actionBar .icon.remove {
  width: 80rpx;
  padding: 0 20rpx;
}
.actionBar .icon.remove {
  margin-left: 40rpx;
  margin-right: -20rpx;
}
.actionBar .text {
  flex: 1;
  margin-left: 20rpx;
}
