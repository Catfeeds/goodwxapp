.inputGroup {
  color: #999;
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 0 20rpx;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #f3f3f3;
  border-right: 2rpx solid #f3f3f3;
}
.inputGroup__label--reuiqred::after {
  content: '*';
  display: inline-block;
  color: #991f5c;
  padding-right: 20rpx;
}
.inputGroup__input {
  flex: 1;
}
view.change {
  display: flex;
  position: absolute;
  right: 20rpx;
}
view.please {
  width: 400rpx;
  text-align: right;
}
view.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
  margin-top: 40rpx;
}
.hide {
  display: none;
}
.show {
  display: block;
}
picker {
  flex: 1;
}
