.prize {
  width: 120rpx;
}
.coupon__poster {
  width: 120rpx;
  height: 80rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/draw-coupon-bg-0492e1c49e.png");
  background-size: 100% 100%;
  border-radius: 6rpx;
  color: #fff;
  text-align: center;
  padding-top: 4rpx;
  position: relative;
}
.coupon__poster .coupon__content {
  height: 44rpx;
  overflow: hidden;
}
.coupon__poster .coupon__currency {
  font-size: 16rpx;
}
.coupon__poster .coupon__amount {
  font-size: 48rpx;
  line-height: 48rpx;
}
.coupon__poster .coupon__type {
  font-size: 20rpx;
  line-height: 28rpx;
}
.coupon__poster--none {
  background: none;
  vertical-align: top;
}
.prize__text {
  display: block;
  font-size: 20rpx;
  line-height: 28rpx;
  margin-top: 10rpx;
  text-align: center;
}
.coin {
  width: 100%;
  text-align: center;
  font-size: 20rpx;
}
.coinImg {
  width: 100rpx;
  height: 100rpx;
}
