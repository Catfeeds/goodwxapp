.card {
  width: 100rpx;
  height: 140rpx;
  position: relative;
  text-align: center;
  border: 2rpx solid #f3f3f3;
}
.card .cart__index {
  width: 32rpx;
  height: 32rpx;
  text-align: left;
  color: #fff;
  font-size: 24rpx;
  line-height: 24rpx;
  padding-left: 6rpx;
  padding-top: 2rpx;
  background: #999;
  border-bottom-right-radius: 100%;
}
.card .image {
  display: inline-block;
  width: 72rpx;
  height: 72rpx;
  margin-top: -6rpx;
  vertical-align: top;
}
.card .text {
  margin-top: 4rpx;
  display: block;
  font-size: 20rpx;
  line-height: 24rpx;
}
.card--finished::before {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  background: #ffe46f;
  opacity: 0.6;
  position: absolute;
  left: 0;
  top: 0;
}
.card--finished::after {
  content: '';
  display: block;
  width: 40rpx;
  height: 40rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/icon-check-a0cf3ec558.png");
  background-size: cover;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.card--current {
  border-color: #991f5c;
}
.card--current .cart__index {
  background: #991f5c;
}
.card--large {
  width: 220rpx;
}
.card--large .image {
  width: 90rpx;
  height: 90rpx;
  margin-top: -26rpx;
}
