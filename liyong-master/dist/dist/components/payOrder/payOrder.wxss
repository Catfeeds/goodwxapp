.ui-flex {
  display: flex;
}
.payOrder {
  padding: 20rpx 0;
  display: flex;
  border-bottom: 2rpx solid #f3f3f3;
}
.payOrder__authAvatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.payOrder__right {
  margin-left: 20rpx;
  flex: 1;
}
.payOrder__authNickname {
  font-size: 26rpx;
  line-height: 36rpx;
  color: #666;
}
.payOrder__datetime {
  font-size: 20rpx;
  line-height: 32rpx;
  color: #999;
}
.payOrder__merchType {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.payOrder__merchType .name {
  font-size: 24rpx;
  color: #999;
}
.payOrder__merchType .status {
  font-size: 26rpx;
}
.payOrder__merchType .button {
  margin-left: 10rpx;
  width: 64rpx;
  height: 40rpx;
  font-size: 22rpx;
  line-height: 36rpx;
  border: 2rpx solid #999;
  text-align: center;
  border-radius: 4rpx;
}
