.popup__mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: rgba(0,0,0,0.7);
}
.popup__main {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 100;
}
.popup__closeIcon {
  width: 30rpx;
  height: 30rpx;
  box-sizing: content-box;
  background: url("https://imgcdn.youhaodongxi.com/weapp/icon-close-9c07bcf188.png");
  background-size: cover;
  position: absolute;
  top: 35rpx;
  right: 30rpx;
}
