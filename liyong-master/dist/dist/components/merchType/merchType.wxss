.ui-flex {
  display: flex;
}
.merchType {
  padding: 0 20rpx;
  background: #fff0b0;
}
.merchType--sellout {
  background: #f3f3f3;
}
.merchType__content {
  height: 130rpx;
  padding: 20rpx 0;
  display: flex;
}
.merchType__left {
  width: 220rpx;
}
.merchType__right {
  border-left: 2rpx solid #9e7f5a;
  padding-left: 20rpx;
  flex: 1;
  overflow: hidden;
}
.merchType__right--flexCenter {
  border-left: 2rpx solid #9e7f5a;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
}
.merchType__unit,
.merchType__price {
  display: inline-block;
  color: #991f5c;
}
.merchType__unit {
  font-size: 30rpx;
}
.merchType__price {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: bold;
}
.merchType__originPrice {
  margin-left: 6rpx;
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}
.merchType__name {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.subscribeWrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}
.merchType__quantity {
  font-size: 24rpx;
  color: #999;
}
.merchType__subscribe,
.merchType__subscribed {
  width: 120rpx;
  height: 40rpx;
  border-radius: 4rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.merchType__subscribe {
  background: #991f5c;
}
.merchType__subscribed {
  background: #999;
}
.merchType__hint {
  padding: 10rpx 0;
  border-top: 2rpx solid #9e7f5a;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #991f5c;
}
.merchType__hint .discount {
  display: flex;
  justify-content: space-between;
}
.merchType__hint .discount__countdown {
  display: flex;
}
.merchType__hint .discount__countdownText {
  color: #999;
}
.merchType__hint .countdown {
  margin-left: 10rpx;
}
