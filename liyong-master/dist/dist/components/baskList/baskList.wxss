.baskList {
  display: flex;
  padding: 30rpx 0 30rpx 30rpx;
  position: relative;
  border-bottom: 2rpx solid #ddd;
  width: 100%;
}
.userImg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.userMess {
  width: 600rpx;
}
.userIden {
  display: flex;
}
.userName {
  font-size: 26rpx;
  display: block;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.inGroup {
  display: block;
  font-size: 20rpx;
  color: #800080;
  border: 2rpx solid #800080;
  width: 100rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  margin-top: 2rpx;
  margin-left: 10rpx;
}
.reviewTex {
  font-size: 26rpx;
  margin-top: 30rpx;
}
.reviewPic {
  display: flex;
  flex-wrap: wrap;
  margin-right: -18rpx;
  overflow: hidden;
}
.reviewPic >image {
  height: 190rpx;
  width: 190rpx;
  margin-right: 16rpx;
  margin-top: 16rpx;
}
.link {
  width: 600rpx;
  height: 100rpx;
  background: #f3f3f3;
  margin-top: 20rpx;
  display: flex;
  padding: 10rpx;
}
.link >image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.link >text {
  font-size: 24rpx;
  display: block;
  width: 470rpx;
  overflow: hidden;
  white-space: wrap;
  text-overflow: ellipsis;
}
.buyMess {
  display: flex;
  margin-top: 26rpx;
  height: 50rpx;
  width: 600rpx;
  line-height: 50rpx;
  padding-left: 10rpx;
}
.buyUser {
  display: flex;
}
.buyerImg {
  width: 50rpx;
  height: 50rpx;
  margin-left: -10rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}
.buyNum {
  font-size: 20rpx;
  color: #666;
  margin-left: 10rpx;
  display: block;
}
.wantBtn {
  width: 160rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  background: #ffe46f;
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}
