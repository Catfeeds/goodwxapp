.feed {
  display: flex;
  height: 80rpx;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}
.feed__avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.feed__middle {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}
.feed__middle .nickname,
.feed__middle .content {
  display: block;
}
.feed__middle .nickname {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 34rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.feed__middle .content {
  font-size: 28rpx;
  margin-top: 6rpx;
}
.feed__middle .highLight {
  color: #991f5c;
}
.feed__right {
  font-size: 24rpx;
  color: #999;
}
