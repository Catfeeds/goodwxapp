.search {
  position: relative;
}
.search__input {
  width: 100%;
  height: 68rpx;
  border: 2rpx solid #f3f3f3;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  padding-left: 60rpx;
  padding-right: 20rpx;
  position: relative;
}
.search__input::before {
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/icon-search-a89b1afed8.png");
  background-size: 100% 100%;
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}
.search__clear {
  width: 28rpx;
  height: 28rpx;
  padding: 20rpx;
  position: absolute;
  right: 0;
  top: 0;
  box-sizing: content-box;
  z-index: 100;
}
