.modal__mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.7);
  z-index: 100;
}
.modal__mask--flash::after {
  content: '';
  display: block;
  width: 100%;
  height: 800rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/flash-light-bg-3f654e5286.png") 100%/100%;
  z-index: 100;
}
.modal__main {
  background: #fff;
  border-radius: 20rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 200;
}
.modal__closeIcon {
  width: 52rpx;
  height: 72rpx;
  background: url("https://imgcdn.youhaodongxi.com/weapp/modal-close-0648f17833.png");
  background-size: 100% 100%;
  position: absolute;
  right: 0;
  top: -72rpx;
  z-index: 200;
}
