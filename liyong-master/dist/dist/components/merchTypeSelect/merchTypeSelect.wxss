.merchTypeSelect {
  background: #fff0b0;
  padding: 0 20rpx;
}
.merchTypeSelect .main {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.merchTypeSelect .content {
  flex: 1;
}
.merchTypeSelect .title {
  font-size: 30rpx;
  font-weight: bold;
}
.merchTypeSelect .prices {
  display: flex;
  margin-top: 20rpx;
  color: #991f5c;
  align-items: center;
}
.merchTypeSelect .price__unit {
  font-size: 26rpx;
  height: 32rpx;
}
.merchTypeSelect .price__current {
  font-size: 40rpx;
}
.merchTypeSelect .price__origin {
  margin-left: 10rpx;
  font-size: 24rpx;
  height: 34rpx;
  text-decoration: line-through;
  color: #666;
}
.merchTypeSelect .action {
  width: 160rpx;
  display: flex;
}
.merchTypeSelect .action .icon-add {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/merchTypeAction@2x-afdd96ab16.png");
  background-size: 106rpx 106rpx;
  background-position: 48rpx 106rpx;
  width: 48rpx;
  height: 48rpx;
}
.merchTypeSelect .action .icon-minus {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/merchTypeAction@2x-afdd96ab16.png");
  background-size: 106rpx 106rpx;
  background-position: 48rpx 48rpx;
  width: 48rpx;
  height: 48rpx;
}
.merchTypeSelect .action .icon-add-disabled {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/merchTypeAction@2x-afdd96ab16.png");
  background-size: 106rpx 106rpx;
  background-position: 106rpx 106rpx;
  width: 48rpx;
  height: 48rpx;
}
.merchTypeSelect .action .icon-minus-disabled {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/merchTypeAction@2x-afdd96ab16.png");
  background-size: 106rpx 106rpx;
  background-position: 106rpx 48rpx;
  width: 48rpx;
  height: 48rpx;
}
.merchTypeSelect .num {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  line-height: 48rpx;
}
.merchTypeSelect .sellout {
  width: 160rpx;
  font-size: 28rpx;
  color: #991f5c;
  text-align: center;
}
.merchTypeSelect .hint {
  padding: 10rpx 0;
  color: #991f5c;
  font-size: 24rpx;
  line-height: 32rpx;
  border-top: 1rpx solid #9e7f5a;
}
.merchTypeSelect .discount {
  display: flex;
  justify-content: space-between;
}
.merchTypeSelect .discount__countdown {
  display: flex;
}
.merchTypeSelect .discount__countdownText {
  color: #999;
}
.merchTypeSelect .countdown {
  margin-left: 10rpx;
}
.merchTypeSelect .limit__district {
  margin-top: 10rpx;
}
.merchTypeSelect .limit__quantity {
  margin-top: 10rpx;
}
.merchTypeSelect--sellout {
  background: #f3f3f3;
}
