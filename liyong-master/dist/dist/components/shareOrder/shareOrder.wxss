.ui-flex {
  display: flex;
}
.ui-alignItemsCenter {
  align-items: center;
}
.shareOrder {
  width: 100%;
  display: flex;
  padding: 20rpx 0;
}
.shareOrder__left {
  width: 70rpx;
  height: 70rpx;
}
.shareOrder__AuthorAvatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.shareOrder__right {
  margin-left: 20rpx;
  flex: 1;
}
.shareOrder__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shareOrder__AuthorNickname,
.shareOrder__groupFriendTag {
  display: inline-block;
}
.shareOrder__AuthorNickname {
  font-size: 26rpx;
  color: #666;
}
.shareOrder__datetime {
  font-size: 20rpx;
  color: #999;
}
.shareOrder__groupFriendTag {
  margin-left: 10rpx;
  width: 100rpx;
  height: 30rpx;
  border: 2rpx solid #991f5c;
  color: #991f5c;
  font-size: 20rpx;
  line-height: 26rpx;
  text-align: center;
}
.shareOrder__stars {
  display: flex;
}
.shareOrder__stars .icon-share-order-star-default {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/stars@2x-a5fef714ab.png");
  background-size: 134rpx 96rpx;
  background-position: 100rpx 24rpx;
  width: 24rpx;
  height: 24rpx;
}
.shareOrder__stars .icon-share-order-star-active {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/stars@2x-a5fef714ab.png");
  background-size: 134rpx 96rpx;
  background-position: 134rpx 24rpx;
  width: 24rpx;
  height: 24rpx;
}
.shareOrder__stars >view {
  margin: 0 5rpx;
}
.shareOrder__content {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.shareOrder__posters {
  margin-top: 10rpx;
  position: relative;
}
.shareOrder__posters:before,
.shareOrder__posters:after {
  content: "";
  display: table;
}
.shareOrder__posters:after {
  clear: both;
}
.shareOrder__posters--one image {
  width: 396rpx;
  height: 396rpx;
}
.shareOrder__posters--two image {
  width: 294rpx;
  height: 294rpx;
}
.shareOrder__posters--two image.first {
  margin-right: 12rpx;
}
.shareOrder__posters--three image,
.shareOrder__posters--moreThree image {
  float: left;
  width: 192rpx;
  height: 194rpx;
}
.shareOrder__posters--three image.first,
.shareOrder__posters--moreThree image.first {
  width: 396rpx;
  height: 396rpx;
  margin-right: 12rpx;
}
.shareOrder__posters--three image.last,
.shareOrder__posters--moreThree image.last {
  margin-top: 8rpx;
}
.shareOrder__posters--moreThree .totalNumber {
  width: 60rpx;
  height: 36rpx;
  background: rgba(0,0,0,0.7);
  color: #fff;
  font-size: 20rpx;
  line-height: 36rpx;
  text-align: center;
  position: absolute;
  right: 0;
  bottom: 0;
}
.shareOrder__merchType {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
  bottom: 0;
}
