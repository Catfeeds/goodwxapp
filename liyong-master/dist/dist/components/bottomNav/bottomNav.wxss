.bottomNav {
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  font-size: 20rpx;
  color: #999;
  box-shadow: 0 -2rpx 4rpx #e8e8e8;
  background: #fff;
}
.bottomNav__item {
  flex: 1;
  text-align: center;
  align-items: center;
  justify-content: center;
}
.bottomNav__item .icon {
  display: block;
  margin: 0 auto;
  margin-top: 6rpx;
}
.bottomNav__item .icon-home {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/bottomNav@2x-46af567ed3.png");
  background-size: 200rpx 130rpx;
  background-position: 130rpx 60rpx;
  width: 60rpx;
  height: 60rpx;
}
