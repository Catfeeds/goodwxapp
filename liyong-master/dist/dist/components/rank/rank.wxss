.rank {
  height: 140rpx;
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
}
.rank__left {
  width: 60rpx;
  height: 100rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rank__left .icon {
  width: 60rpx;
  height: 60rpx;
}
.rank__left .text {
  color: #999;
  font-size: 40rpx;
}
.rank__middle {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.rank__middle .avatarWrapper {
  position: relative;
}
.rank__middle .avatar {
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.rank__middle .vip {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  right: 0;
  bottom: 0;
}
.rank__middle .nickname {
  margin-left: 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.rank__right {
  margin-left: 10rpx;
}
.rank__right .button {
  margin-top: 20rpx;
  width: 120rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 64rpx;
  background: linear-gradient(to left, #ffe46f, #ffec9a);
  text-align: center;
  border-radius: 8rpx;
}
.rank__right .button::after {
  content: none;
}
.rank__right .times,
.rank__right .prizes {
  text-align: right;
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  color: #999;
}
.rank__right .times .num,
.rank__right .prizes .num {
  margin: 0 8rpx;
  color: #991f5c;
}
.rank__right .times {
  margin-top: 30rpx;
}
.rank__right .times .num {
  font-size: 48rpx;
}
.rank__right .prizes {
  margin-top: 10rpx;
}
.rank--self {
  background: #e8e8e8;
}
