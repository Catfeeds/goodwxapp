.uploadImage {
  width: 100%;
  height: 100%;
  background: #e8e8e8;
  position: relative;
}
.uploadImage--noBackground {
  background: none;
}
.icon-plus::before,
.icon-plus::after {
  display: block;
  content: '';
  background: #ccc;
  position: absolute;
}
.icon-plus::before {
  height: 4rpx;
  width: 33.34%;
  top: 41%;
  left: 33.33%;
}
.icon-plus::after {
  width: 4rpx;
  height: 33.33%;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
}
.text {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  position: absolute;
  bottom: 20%;
}
.image {
  display: block;
  width: 100%;
  height: 100%;
  border: 2rpx solid #b3b3b3;
}
