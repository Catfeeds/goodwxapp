.giftCard {
  height: 280rpx;
  padding: 30rpx;
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/gift-card-bg-cb0fbda9f4.png");
  background-size: cover;
  border-radius: 20rpx;
}
.giftCard .giftCard__balance {
  text-align: right;
}
.giftCard .giftCard__balance .label,
.giftCard .giftCard__balance .balance {
  display: inline-block;
}
.giftCard .giftCard__balance .label {
  font-size: 24rpx;
  vertical-align: bottom;
}
.giftCard .giftCard__balance .balance {
  font-size: 70rpx;
  line-height: 70rpx;
  font-weight: bold;
}
.giftCard .giftCard__tag {
  font-size: 20rpx;
  line-height: 28rpx;
  text-align: right;
}
.giftCard .giftCard__content {
  margin-top: 40rpx;
  color: #7e6648;
}
.giftCard .giftCard__content .top,
.giftCard .giftCard__content .bottom {
  display: flex;
}
.giftCard .giftCard__content .bottom {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.giftCard .giftCard__content .name {
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
}
.giftCard .giftCard__content .btn {
  width: 100rpx;
  height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 36rpx;
  border: 2rpx solid #9e7f5a;
}
.giftCard .giftCard__content .total {
  flex: 1;
}
.giftCard--disabled {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/gift-card-bg-disabled-9ca1ba3275.png");
  position: relative;
}
.giftCard--disabled .giftCard__balance,
.giftCard--disabled .giftCard__tag,
.giftCard--disabled .giftCard__content {
  color: #666;
}
.giftCard--disabled .giftCard__balance .btn,
.giftCard--disabled .giftCard__tag .btn,
.giftCard--disabled .giftCard__content .btn {
  border-color: #999;
}
.giftCard--finished::before,
.giftCard--expired::before {
  display: block;
  content: '';
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
.giftCard--finished::before {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/giftCard@2x-0c1833b98d.png");
  background-size: 170rpx 146rpx;
  background-position: 80rpx 146rpx;
  width: 80rpx;
  height: 80rpx;
}
.giftCard--expired::before {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/giftCard@2x-0c1833b98d.png");
  background-size: 170rpx 146rpx;
  background-position: 170rpx 146rpx;
  width: 80rpx;
  height: 80rpx;
}
.giftCard--selected {
  position: relative;
}
.giftCard--selected::after {
  background-image: url("https://imgcdn.youhaodongxi.com/weapp/giftCard@2x-0c1833b98d.png");
  background-size: 170rpx 146rpx;
  background-position: 170rpx 56rpx;
  width: 56rpx;
  height: 56rpx;
  content: '';
  display: block;
  position: absolute;
  top: 20rpx;
  left: 20rpx;
}
