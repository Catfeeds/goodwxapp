/* pages/index/search/search.wxss */

page {
  background-color: #ebebeb;
}

.verification {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.verification-inside {
  width: 92%;
  margin-top: 34rpx;
}

.inputBox {
  position: relative;
  width: 100%;
  height: 108rpx;
  font-size: 36rpx;
  background-color: white;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.inputBox text {
  position: absolute;
  left: 21rpx;
  height: 100%;
  line-height: 108rpx;
  color: #191919;
}

.accountInp {
  width: 100%;
  height: 100%;
  padding: 21rpx;
  box-sizing: border-box;
  border: 0;
  border-radius: 5px;
  text-align: right;
}

.discountInfo,.paymentBox{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 34rpx;
}

.paymentBox{
  color: #555555;
}

.discountInfo text {
  display: inline-block;
}

.discountInfo {
  color: #ff4545;
}
button[plan]{
  border: 0;
}

.okBtn {
    margin-top: 60rpx;
    display: block;
    height: 100rpx;
    line-height: 100rpx;
    width: 100%;
    border-radius: 5px;
    background-color: #B1B1B1;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    letter-spacing: 2px;
}


.look{
  background-color: #fc512d;
}


