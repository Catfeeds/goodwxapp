<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    ">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="pano-news-web" />

	<dubbo:consumer
		check="false"
		timeout="300000"
		retries="0" />

	<dubbo:registry
		protocol="zookeeper"
		address="${zookeeperAddress}" />

	<!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
	<dubbo:reference
		id="newsService"
		interface="com.visualbusiness.pano.news.service.NewsService" />
	<dubbo:reference
			id="userService"
			interface="com.visualbusiness.pano.news.service.UserService" />
	<dubbo:reference
		id="panoService"
		interface="com.visualbusiness.pano.news.service.PanoService" />
	<dubbo:reference
		id="cosService"
		interface="com.visualbusiness.qcloud.service.CosService" />
	<dubbo:reference
		id="albumStatisticsService"
		interface="com.visualbusiness.pano.news.service.AlbumStatisticsService" />
	<dubbo:reference
			id="topicService"
			interface="com.visualbusiness.pano.news.service.TopicService" />
</beans>