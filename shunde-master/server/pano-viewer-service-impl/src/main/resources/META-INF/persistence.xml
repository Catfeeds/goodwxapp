<?xml version="1.0" encoding="UTF-8"?>
<persistence
	xmlns="http://java.sun.com/xml/ns/persistence"
	version="2.0">
	<persistence-unit
		name="panoPU"
		transaction-type="RESOURCE_LOCAL">
		<class>com.visualbusiness.pano.viewer.model.PanoWithGroupInfo</class>
		<class>com.visualbusiness.pano.viewer.model.PanoAlbum</class>
		<class>com.visualbusiness.pano.viewer.model.PanoAlbumLang</class>
		<class>com.visualbusiness.pano.viewer.model.PanoAlbumMta</class>
		<class>com.visualbusiness.pano.viewer.model.VendorMta</class>
		<class>com.visualbusiness.pano.viewer.model.MtaInfo</class>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property
				name="hibernate.c3p0.timeout"
				value="1800" />
			<property
				name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Driver" />
			<property
				name="hibernate.connection.url"
				value="${dbUrl}" />
			<property
				name="hibernate.connection.username"
				value="${dbUser}" />
			<property
				name="hibernate.connection.password"
				value="${dbPassword}" />
			<property
				name="hibernate.dialect"
				value="org.hibernate.dialect.MySQL5Dialect" />
			<property
				name="hibernate.show_sql"
				value="false" />
			<property
				name="hibernate.format_sql"
				value="false" />
			<property
				name="hibernate.use_sql_comments"
				value="false" />
			<property
				name="hibernate.hbm2ddl.auto"
				value="update" />
		</properties>
	</persistence-unit>
</persistence>
 