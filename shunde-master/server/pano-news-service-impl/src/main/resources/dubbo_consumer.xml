<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    ">

	<dubbo:consumer
		check="false"
		timeout="30000"
		retries="0" />

	<!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
	<dubbo:reference
		id="panoImageService"
		interface="com.visualbusiness.pano.process.service.PanoImageService" />
	<dubbo:reference
		id="panoMetaService"
		interface="com.visualbusiness.pano.process.service.PanoMetaService" />
	<dubbo:reference
		id="projectInfoService"
		interface="com.visualbusiness.pano.process.service.ProjectInfoService" />
	<dubbo:reference
		id="mtaService"
		interface="com.visualbusiness.qcloud.service.MtaService" />

</beans>