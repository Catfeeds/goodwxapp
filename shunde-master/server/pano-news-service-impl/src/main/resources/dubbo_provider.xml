<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    ">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="pano-news-service"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry
            protocol="zookeeper"
            address="${zookeeperAddress}"/>

    <!-- 用dubbo协议在20883端口暴露服务 -->
    <dubbo:protocol
            name="dubbo"
            port="20883"/>

    <!-- 声明需要暴露的服务接口 -->

    <dubbo:service
            interface="com.visualbusiness.pano.news.service.NewsService"
            ref="newsService"/>
    <dubbo:service
            interface="com.visualbusiness.pano.news.service.UserService"
            ref="userService" />
    <dubbo:service
            interface="com.visualbusiness.pano.news.service.TopicService"
            ref="topicService"/>
    <dubbo:service
            interface="com.visualbusiness.pano.news.service.PanoService"
            ref="panoService" />
    <dubbo:service
            interface="com.visualbusiness.pano.news.service.AlbumStatisticsService"
            ref="albumStatisticsService" />

</beans>
