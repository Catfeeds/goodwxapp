   <select id="selectUserPermission" parameterType="java.lang.String" resultMap="authList">
    SELECT
		r.resource_id, r.resource_name, r.menu_id, r.uri_pattern, r.status, r.create_time, r.is_valid, r.method_type, m.menu_id,m.menu_name
	FROM
		`user` u
	LEFT JOIN permission p ON u.role_id = p.role_id
	LEFT JOIN resource r ON p.resource_id = r.resource_id
	LEFT JOIN sys_menu m ON r.menu_id = m.menu_id
	WHERE u.is_valid = 1 AND u.user_name = ${userName}
