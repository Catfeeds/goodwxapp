<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.alibabatech.com/schema/dubbo 
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    ">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="pano-process-web" />

	<dubbo:consumer
		check="false"
		timeout="30000"
		retries="0" />

	<dubbo:registry
		protocol="zookeeper"
		address="${zookeeperAddress}" />

	<!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
	<dubbo:reference
		id="panoImageService"
		interface="com.visualbusiness.pano.process.service.PanoImageService" />
	<dubbo:reference
		id="accessCodeService"
		interface="com.visualbusiness.pano.process.service.AccessCodeService" />
	<dubbo:reference
		id="panoImageAccessCodeService"
		interface="com.visualbusiness.pano.process.service.PanoImageAccessCodeService" />
	<dubbo:reference
		id="panoGroupService"
		interface="com.visualbusiness.pano.process.service.PanoGroupService" />
	<dubbo:reference
		id="ptoTemplateService"
		interface="com.visualbusiness.pano.process.service.PtoTemplateService" />
	<dubbo:reference
		id="panoMetaService"
		interface="com.visualbusiness.pano.process.service.PanoMetaService" />
	<dubbo:reference
		id="panoImageDigestService"
		interface="com.visualbusiness.pano.process.service.PanoImageDigestService" />
	<dubbo:reference
		id="cosService"
		interface="com.visualbusiness.qcloud.service.CosService" />
	<dubbo:reference
		id="projectInfoService"
		interface="com.visualbusiness.pano.process.service.ProjectInfoService" />
	<dubbo:reference
		id="panoImagePatcherService"
		interface="com.visualbusiness.pano.process.service.PanoImagePatcherService" />

</beans>