<?xml version="1.0"?>
<View xmlns:xsi="//www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      height="50dp"
      layout="horizontal"
      background="#F7F7FA"
      contentGravity="centerVertical"
      borderWidth="1dp"
      borderColor="#EAEAED"
>
  <include src="BottomTab.js"/>
  <View width="fill 0.33" contentGravity="center">
    <View id="taskHall" index="0" width="wrap" height="wrap" layout="vertical" contentGravity="centerHorizontal">
      <ImageView height="24dp" width="24dp" src="../images/tab/rwdt.svg"/>
      <TextView text="任务大厅" height="wrap" width="wrap" fontSize="10dp" fontColor="#7F8389"/>
    </View>
  </View>
  <View width="fill 0.33" contentGravity="center">
    <View id="myTask" index="1" width="wrap" height="wrap" layout="vertical" contentGravity="centerHorizontal">
      <ImageView height="24dp" width="24dp" src="../images/tab/wdrw_hl.svg"/>
      <TextView text="我的任务" height="wrap" width="wrap" fontSize="10dp" fontColor="#F15A3F"/>
    </View>
  </View>
  <View width="fill 0.33" contentGravity="center">
    <View id="myAccount" index="2" width="wrap" height="wrap" layout="vertical" contentGravity="centerHorizontal">
      <ImageView height="24dp" width="24dp" src="../images/tab/wdzh.svg"/>
      <TextView text="我的账户" height="wrap" width="wrap" fontSize="10dp" fontColor="#7F8389"/>
    </View>
  </View>
</View>
