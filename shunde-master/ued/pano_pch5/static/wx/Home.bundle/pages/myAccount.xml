<?xml version="1.0"?>
<Page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="vertical"
      background="#F9F9F9"

>
  <include src="myAccount.js"/>
  <TextView fontColor="#888888" height="wrap" width="wrap" fontSize="14dp" text="账户信息" margin="10dp 0 10dp 15dp"/>
  <View layout="vertical" padding="15dp" background="#ffffff" height="wrap">
    <View height="20dp" marginBottom="10dp" contentGravity="centerVertical">
      <TextView fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" text="昵称"/>
      <TextView id="name" fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" gravity="right" text=""/>
    </View>
    <View height="20dp" marginBottom="10dp" contentGravity="centerVertical">
      <TextView fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" text="手机号"/>
      <TextView id="phone" fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" gravity="right" text=""/>
    </View>
    <View height="20dp"  contentGravity="centerVertical">
      <TextView fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" text="邮箱"/>
      <TextView id="e_mail" fontSize="14dp" fontColor="#888888" height="wrap" width="wrap" gravity="right" text=""/>
    </View>
  </View>
  <TextView id="logout" fontColor="#ffffff" fontSize="18dp" contentGravity="center" borderCorner="3dp" clipToBounds="true"
            background="#F15A3F" height="47dp" text="退出登录" width="match 0.89" gravity="centerHorizontal"
            marginTop="60dp"/>
</Page>
