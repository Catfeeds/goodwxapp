<?xml version="1.0"?>
<View xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="vertical"
      width="fill"
      height="wrap"
      contentGravity="centerVertical"
      id="facilityCellRootView"
      background="#ffffff"
      marginBottom="10dp">
  <View width="fill" height="1dp" background="#dcdcdc"/>
  <View width="wrap" height="wrap" layout="horizontal" margin="20dp 15dp 15dp 15dp" >
    <TextView id="facilityName" width="wrap" height="wrap" fontSize="18dp" fontColor="#333333" marginRight="4dp"/>
    <TextView id="facilityNum" width="wrap" height="wrap" fontSize="18dp" fontColor="#333333" />
  </View>

  <View layout="horizontal" height="wrap" margin="0dp 15dp 20dp 15dp">
    <ImageView height="20dp" width="20dp" src="../images/ic_place_24px.svg"/>
    <TextView id="address" fontSize="14dp" fontColor="#4A90E2" height="wrap"/>
  </View>

  <TextView text="拍摄清单" fontSize="14dp" fontColor="#888888" margin="0dp 15dp 10dp 15dp" height="wrap"/>
  <View height="1dp" background="#e5e5e5" marginBottom="13dp"/>

  <ScrollView id="facilityBox" width="fill" height="wrap" margin="0dp 15dp 40dp 15dp" layout="horizontal"/>
  <View width="fill" height="1dp" background="#dcdcdc"/>
</View>
