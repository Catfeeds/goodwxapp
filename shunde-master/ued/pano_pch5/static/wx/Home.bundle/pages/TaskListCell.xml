<?xml version="1.0"?>
<View xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="horizontal"
      width="fill"
      height="wrap"
      id="taskCellRootView">

    <View width="fill" height="match" layout="vertical"  gravity="left|centerVertical" contentGravity="centerVertical" padding="0 0 0 16">
        <TextView id="taskName" maxLine="1"  height="18dp" fontSize="18dp" fontColor="#333333"/>
        <TextView id="taskAddress" width="wrap" height="wrap" fontSize="13dp" fontColor="#888888" marginTop="6dp"/>
    </View>


    <View layout="horizontal" width="wrap" height="wrap" gravity="right" padding="20 20 20 20">

        <ImageView  width="20dp" height="20dp" src="../images/qrcode_gray.png" marginRight="12dp"/>
        <ImageView  width="8dp" height="14dp" src="../images/Chevron.svg" gravity="centerVertical"/>

    </View>

</View>
