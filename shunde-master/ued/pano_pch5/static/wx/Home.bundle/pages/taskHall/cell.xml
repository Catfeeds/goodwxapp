<?xml version="1.0"?>
<View xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../View.xsd"
      layout="vertical"
      height="wrap"
      background="#ffffff">

  <include src="cell.js"/>

  <View layout="frame" height="wrap" padding="15dp">

      <View layout="vertical" gravity="left" height="wrap" width="wrap">

            <!--瑞吉酒店-->
            <TextView id="tv_title" width="wrap" height="wrap" fontSize="17dp" fontColor="#363636" fontBold="true" marginBottom="8dp"/>

            <!--地点-->
            <View layout="horizontal"  height="wrap" marginBottom="8dp" marginLeft="-3dp">

                <!--地点图标-->
                <ImageView height="20dp" width="20dp" src="../../images/ic_place_24px.svg"/>

                <!--地点信息-->
                <TextView id="tv_adr" fontSize="14dp" fontColor="#7F8389" height="wrap" width="wrap"/>

            </View>

            <!--已申请-->
            <View layout="horizontal" height="wrap">

                <!--已申请前缀-->
                <TextView text="已申请：" width="wrap" height="wrap" fontColor="#7F8389"/>

                <!--已申请数量-->
                <TextView id="tv_shenqin_count" fontColor="#F15A3F"/>

            </View>

      </View>

      <View layout="vertical"  gravity="right"  width="wrap" height="wrap">

            <!--点位-->
            <View layout="horizontal" height="wrap" contentGravity="centerVertical" marginBottom="10dp">

                <!--点位数量-->
                <TextView id="tv_dianwei_count" fontColor="#F15A3F" width="wrap" height="wrap" fontSize="18dp" fontBold="true" paddingRight="5dp"/>

                <!--点位后缀-->
                <TextView text="点位" height="wrap" width="wrap" fontColor="#7F8389"/>

            </View>

            <!--时间-->
            <TextView id="tv_time" width="wrap" height="wrap" fontColor="#7F8389"/>

      </View>

  </View>

  <View  height="1dp" background="#dddddd"/>


</View>
