<?xml version="1.0"?>
<Page id="rootView"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="frame"
      background="#F9F9F9">

    <View layout="vertical">

        <View width="fill" height="wrap" >

            <View width="fill" height="wrap" layout="vertical">
                <View width="fill" height="44dp" background="#FFFFFF">
                    <ImageView src="../images/Logo_shot.svg" width="wrap" height="wrap" gravity="center" margin="12 0 12 0"/>
                </View>
                <View width="fill" height="1dp" background="#E5E5E5"/>
            </View>

            <View id="errorHintBox" background="#E64340" width="fill" height="35dp" visible="false">
                <TextView id="errorHint" width="wrap" height="wrap" text="验证码错误" fontSize="15dp" fontColor="#FFFFFF" gravity="center"/>
            </View>

        </View>

        <View width="fill" height="wrap" background="#FFFFFF" marginTop="16dp" layout="vertical">
            <View width="fill" height="1dp" background="#E5E5E5"/>

            <View id="phoneNum" width="fill" height="wrap" layout="frame" >
                <View layout="horizontal" width="fill" height="wrap">
                    <TextView width="wrap" height="wrap" text="国家/地区" fontColor="#333333" fontSize="16dp"
                              margin="12 14 12 16"/>
                    <TextView width="wrap" height="wrap" text="中国(+86)" fontColor="#333333" fontSize="16dp"
                              margin="12 16 12 0"/>
                </View>
                <ImageView width="8dp" height="14dp" src="../images/Chevron.svg" gravity="centerVertical|right" marginRight="16"/>

            </View>

            <View width="fill" height="1dp" marginLeft="16dp" background="#E5E5E5"/>

            <View id="phoneNum" width="fill" height="wrap" layout="horizontal" >
                <TextView width="wrap" height="wrap" text="手机号码" fontColor="#333333" fontSize="16dp" margin="12 20 12 16"/>
                <InputView id="phoneNumInput" width="fill" height="match" hint="填写手机号码"/>
                <View width="1dp" height="match" background="#E5E5E5"/>
                <TextView id="getVerifyCodeBtn" width="wrap" height="wrap" text="获取验证码" fontColor="#333333" fontSize="16dp" margin="10 12 12 10"/>
            </View>

            <View width="fill" height="1dp" marginLeft="16dp" background="#E5E5E5"/>

            <View id="verifyCode" width="fill" height="wrap" layout="horizontal">
                <TextView width="wrap" height="wrap" text="验证码" fontColor="#333333" fontSize="16dp"
                          margin="12 36 12 16"/>
                <InputView id="verifyCodeInput" width="fill" height="match" hint="请输入验证码"/>
            </View>

            <View width="fill" height="1dp" background="#E5E5E5"/>
        </View>

        <View id="nextBtn" width="fill" height="wrap"  margin="36 16 0 16">
            <View background="#F15A3F" width="fill" height="48dp" borderCorner="6dp" clipToBounds="true"/>
            <View width="wrap" height="wrap" gravity="center">
                <TextView text="下一步" width="wrap" height="wrap" fontSize="18dp" fontColor="#FFFFFF"/>
            </View>

            <View id="nextBtnCover" width="fill" height="48dp" background="#FFFFFF" alpha="0.4"/>

        </View>
    </View>


</Page>