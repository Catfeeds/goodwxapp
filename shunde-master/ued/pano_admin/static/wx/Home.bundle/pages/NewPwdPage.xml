<?xml version="1.0"?>
<Page id="rootView"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="frame"
      background="#F9F9F9">

    <View id="loginModule" layout="vertical">

        <View width="fill" height="wrap" >
            <View width="fill" height="wrap" layout="vertical">
                <View width="fill" height="44dp" background="#FFFFFF">
                    <ImageView src="../images/Logo_shot.svg" width="wrap" height="wrap" gravity="center" margin="12 0 12 0"/>
                </View>
                <View width="fill" height="1dp" background="#E5E5E5"/>
            </View>

            <View id="errorHintBox" background="#E64340" width="fill" height="35dp" visible="false">
                <TextView id="errorHint" width="wrap" height="wrap" text="两次密码不一致" fontSize="15dp" fontColor="#FFFFFF" gravity="center"/>
            </View>
        </View>

        <View width="fill" height="wrap" background="#FFFFFF" marginTop="16dp" layout="vertical">
            <View width="fill" height="1dp" background="#E5E5E5"/>

            <View id="newPwd" width="fill" height="wrap" layout="horizontal" >
                <TextView width="wrap" height="wrap" text="新密码" fontColor="#333333" fontSize="17dp"
                          margin="12 32 12 16"/>
                <InputView id="newPwdInput" width="fill" height="match" hint="请设置密码" inputType="password"/>
            </View>

            <View width="fill" height="1dp" marginLeft="16dp" background="#E5E5E5"/>

            <View id="newPwdConfirm" width="fill" height="wrap" layout="horizontal">
                <TextView width="wrap" height="wrap" text="确认密码" fontColor="#333333" fontSize="17dp"
                          margin="12 16 12 16"/>
                <InputView id="newPwdConfirmInput" width="fill" height="match" hint="请确认密码" inputType="password"/>
            </View>

            <View width="fill" height="1dp" background="#E5E5E5"/>
        </View>

        <View id="resetPwdBtn" width="fill" height="wrap" margin="24 16 0 16">
            <View background="#F15A3F" width="fill" height="48dp" borderCorner="6dp" clipToBounds="true"/>
            <View width="wrap" height="wrap" gravity="center">
                <TextView text="重置密码" width="wrap" height="wrap" fontSize="18dp" fontColor="#FFFFFF"/>
            </View>

            <View id="resetBtnCover" width="fill" height="48dp" background="#FFFFFF" alpha="0.4"/>

        </View>
    </View>


</Page>