<?xml version="1.0"?>
<Page id="rootView"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../View.xsd"
      layout="frame"
      background="#F9F9F9">

    <View id="loginModule" layout="vertical">

        <View width="fill" height="44dp" background="#FFFFFF">
            <ImageView src="../images/Logo_shot.svg" width="wrap" height="wrap" gravity="center" margin="12 0 12 0"/>
        </View>
        <View width="fill" height="1dp" background="#E5E5E5"/>

        <View width="fill" height="wrap" background="#FFFFFF" marginTop="16dp" layout="vertical">

            <ImageView width="90dp" height="90dp" src="../images/success.svg" marginTop="75dp" gravity="centerHorizontal"/>

            <TextView width="wrap" height="wrap" text="重置成功" fontColor="#333333" fontSize="20dp"
                          margin="30 0 15 0" gravity="center"/>

            <TextView width="wrap" height="wrap" text="密码重置成功, 直接登录继续操作" fontColor="#888888" fontSize="14dp"
                      margin="0 0 60 0" gravity="center"/>

        </View>

        <View id="goLoginBtn" width="fill" height="wrap" margin="0 16 0 16">
            <View background="#F15A3F" width="fill" height="48dp" borderCorner="6dp" clipToBounds="true"/>
            <View width="wrap" height="wrap" gravity="center">
                <TextView text="去登陆" width="wrap" height="wrap" fontSize="18dp" fontColor="#FFFFFF"/>
            </View>

        </View>
    </View>


</Page>