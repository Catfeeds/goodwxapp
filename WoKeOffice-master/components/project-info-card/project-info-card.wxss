.card-wrapper{
  display: flex;
  margin: 20rpx 20rpx;
  flex-direction: column;
  justify-content: start;
  align-items: flex-start;
  border-radius: 10rpx;
  background-color: #CCCCFF;
}

.card-header{
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  width: 680rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 60rpx;
  margin-top: 20rpx;
}

.project-avatar{
  width: 60rpx;
  height: 60rpx;
  background-color: lightsalmon;
}

.project-name{
  align-self: center;
  font-size: 40rpx;
  margin-left: 40rpx;
}

.line{
  margin-top: 20rpx;
  margin-left: 60rpx;
  width: 600rpx;
  height: 2rpx;
  background-color: #000000;
}

.card-content{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: start;
}

.todos{
  margin: 10rpx 50rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

.value{
  font-size: 32rpx;
  margin-left: 20rpx;
}

.spread{
  position: relative;
  left: 550rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #0099FF;
}
