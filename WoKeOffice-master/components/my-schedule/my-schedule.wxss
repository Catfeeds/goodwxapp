.container{
  display: flex;
  position: relative;
  flex-direction: column;
  width: 100%;
}

.content{
  display: flex;
  flex-direction: column;
  justify-content: start;
  margin: 10rpx 20rpx;
  width: 94%;
  height: 200rpx;
  border: 1rpx black solid;
  border-radius: 10rpx;
}

.manager-avatar{
  display: flex;
  flex-direction: column;
  position: relative;
  width: 40rpx;
  height: 40rpx;
  border-radius: 40rpx;
  background-color: lightsalmon;
  left: 50rpx;
  top: 60rpx;
}

.content-title{
  display: flex;
  position: relative;
  font-size: 40rpx;
  top: 0rpx;
  left: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 300rpx;
}

.content-time{
  display: flex;
  position: relative;
  font-size: 30rpx;
  width: 170rpx;
  top: 50rpx;
  color: gray;  
  left: 150rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.content-place{
  display: flex;
  position: relative;
  font-size: 30rpx;
  width: 170rpx;
  top: 20rpx;
  color: gray;
  height: 30rpx;
  left: 350rpx;
  line-height: 30rpx;
}