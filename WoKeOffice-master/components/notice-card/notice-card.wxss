.notice-wrapper{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: start;
  margin: 20rpx 20rpx;
  background-color: #99CCFF;
  border-radius: 10rpx;
}

.card-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 680rpx;
  height: 90rpx;
  margin: 20rpx;
}

.manager-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: lightsalmon;
  margin-left: 40rpx;
  margin-top: 40rpx;
}

.header-mid-info{
  margin-left: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 80rpx;
}

.manager-info{
  font-size: 32rpx;
  margin: 10rpx 0;
}

.teamname{
  font-size: 30rpx;
  color: #666666;
}

.header-tail{
  margin-left: auto;
  margin-right: 20rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.update-date{
  font-size: 28rpx;
  color: #666666;
  margin: 10rpx 0;
}

.visibility{
  font-size: 26rpx;
  color: #666666;
}

.notice-content{
  font-size: 32rpx;
  margin: 40rpx 60rpx;
}