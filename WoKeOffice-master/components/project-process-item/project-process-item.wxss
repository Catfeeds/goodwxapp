.item-wrapper{
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.date{
  width: 90rpx;
  height: 26rpx;
  line-height: 26rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  text-align: start;
  color: #666666;
}

.timeline-wrapper{
  display: flex;
  margin-left: 20rpx;
  width: 45rpx;
  height: 150rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.timeline{
  height: 53rpx;
  width: 6rpx;
  background-color: #66CC00;
}

.checkbox{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  border: 6rpx solid #66CC00;
}

.line{
  width: 20rpx;
  height: 6rpx;
  background-color: #66CC00;
}

.item-content-wrapper{
  height: 130rpx;
  background-color: white;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.item-content{
  font-size: 32rpx;
  margin-left: 30rpx;
  color: #66CC00;
}

.item-detail-wrapper{
  width: 200rpx;
  margin-left: 60rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}

.item-sendto{
  font-size: 24rpx;
  color: #66CC00;
}

.item-deadline{
  font-size: 24rpx;
  color: #66CC00;
}