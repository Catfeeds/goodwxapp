.item-wrapper{
  height: 160rpx;
  margin: 0 20rpx;
  border-bottom: 2rpx solid lightslategray;
  display: flex;
  align-items: center;
}

.member-avatar{
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: lightsalmon;
}

.member-name{
  font-size: 32rpx;
  margin-left: 40rpx;
}

.member-role-wrapper{
  margin-left: auto;
  margin-right: 20rpx;
  vertical-align: middle;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: lightpink;
  border: 2rpx solid lightgrey;
  border-radius: 10rpx;
}

.member-role{
  font-size: 28rpx;
  text-align: center;
}