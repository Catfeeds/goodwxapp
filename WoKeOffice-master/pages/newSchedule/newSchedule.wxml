<view class="container">
  <view class="project-name-wrapper">
    <image class="icon"></image>
    <input class="project-name"
      maxlength="9"
      placeholder="标题"
      value="{{projectName}}"/>
  </view>
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">日程表：</view>
  </view>
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">开始时间：</view>
    <picker mode="date" 
      bindchange="pickStartDate"
      start="{{startDate}}"
      end="2020-01-01"
      class="picker">
      <view class="picker-word">
        {{startDate}}
      </view>
    </picker>
  </view>
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">结束时间：</view>
    <picker mode="date" 
      bindchange="pickEndDate"
      start="{{endDate}}"
      end="2020-01-01"
      class="picker">
      <view class="picker-word">
        {{endDate}}
      </view>
    </picker>
  </view>
   <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">提醒：</view>
    <picker bindchange="pickTeam"
      value="{{team}}"
      range="{{array}}"
      class="picker">
      <view class="picker-word">
        {{array[team]}}
      </view>
    </picker>
  </view>
   <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">重复：</view>
    <picker bindchange="pickTeam"
      value="{{team}}"
      range="{{array}}"
      class="picker">
      <view class="picker-word">
        {{array[team]}}
      </view>
    </picker>
  </view>
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">归入团队：</view>
    <picker bindchange="pickTeam"
      value="{{team}}"
      range="{{array}}"
      class="picker">
      <view class="picker-word">
        {{array[team]}}
      </view>
    </picker>
  </view>
  <button class="weui_btn_mini" type="primary" bindtap="confirmShedule">确认创建该日程</button>
</view>