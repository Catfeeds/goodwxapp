<view class="container-default">
  <view class="tab-head">
    <view class="tab-head-item {{currentTab==0?'active':''}}" data-current="0" bindtap="switchNav">通知</view>
    <view class="tab-head-item {{currentTab==1?'active':''}}" data-current="1" bindtap="switchNav">项目</view>
    <view class="tab-head-item {{currentTab==2?'active':''}}" data-current="2" bindtap="switchNav">成员</view>
  </view>
  <swiper class="tab-content" current="{{currentTab}}" bindchange="switchHeadTab">
    <swiper-item>
      <scroll-view scroll-y="true" class="scroll-content">
        <notice-card class="notice-card"></notice-card>
        <notice-card class="notice-card"></notice-card>
        <notice-card class="notice-card"></notice-card>
        <notice-card class="notice-card"></notice-card>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y="true" class="scroll-content">
        <project-info-card></project-info-card>
        <project-info-card></project-info-card>
        <project-info-card></project-info-card>
        <project-info-card></project-info-card>
      </scroll-view> 
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y="true" class="scroll-content">
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
        <team-member-item></team-member-item>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>