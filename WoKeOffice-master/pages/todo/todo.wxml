<view class="container">
  <view class="project-name-wrapper">
    <image class="icon"></image>
    <input class="project-name"
      maxlength="9"
      placeholder="任务名称"
      value="{{projectName}}"/>
  </view>

  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">具体要求：</view>
  </view>
  <view class="page-section">
    <view class="textarea-wrp">
      <textarea bindblur="bindTextAreaBlur" auto-height />
    </view>
  </view>



  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">任务进度安排：</view>
  </view>
  
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">任务成员</view>
    <switch checked bindchange="changeVisibility" class="switch"></switch>
  </view>
  <button class="weui_btn_mini" type="primary" bindtap="confirmTodo">确认添加该任务</button>
</view>