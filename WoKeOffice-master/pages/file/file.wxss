.container{
  overflow: hidden;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.project-name-wrapper{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
}

.icon{
  width: 70rpx;
  height: 70rpx;
  margin-left: 20rpx;
  background-color: lightsalmon;
}

.project-name{
  margin-left: 40rpx;
  font-size: 34rpx;
}

.item-wrapper{
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
}

.item-word{
  margin-left: 40rpx;
  font-size: 34rpx;
}

.picker{
  margin-left: auto;
}

.picker-word{
  font-size: 28rpx;
  color: #888888;
  margin-right: 40rpx;
}

.switch{
  margin-left: auto;
  margin-right: 30rpx;
}

.weui_btn_mini{
  position: fixed;
  top: 85%;
  box-shadow: 2rpx 6rpx 16rpx 4rpx darkgray
}
