<view class="container">
  <view class="project-name-wrapper">
    <image class="icon"></image>
    <input class="project-name"
      maxlength="9"
      placeholder="文件名称"
      value="{{projectName}}"/>
  </view>
  <view class="item-wrapper">
    <image class="icon"></image>
    <view class="item-word">选择上传文件类型：</view>
    <picker bindchange="pickTeam"
      value="{{team}}"
      range="{{array}}"
      class="picker">
      <view class="picker-word">
        {{array[team]}}
      </view>
    </picker>
  </view>
  <button class="weui_btn_mini" type="primary" bindtap="confirmPush">确认上传该文件</button>
</view>