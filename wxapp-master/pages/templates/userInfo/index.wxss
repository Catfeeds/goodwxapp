@keyframes fade-in-animation {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fade-out-animation {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.user-info {
  height: 132rpx;
  position: relative;
  animation: fade-in-animation 1s linear;
}
.user-info > view {
  display: inline-block;
}
.user-info .user-avatar {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
}
.user-info .user-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* border: 8rpx solid #e4cdd1; */
  box-sizing: border-box;
}
.user-info .middle-box {
  width: 400rpx;
  height: 114rpx;
  position: absolute;
  left: 130rpx;
  top: 10rpx;
  margin-left: 20rpx;
  margin-right: 16rpx;
}
.user-info .middle-box .player-info {
  color: #FFFFFF;
}
.user-info .middle-box .player-info .user-name {
  display: inline-block;
  font-size: 32rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-weight: bold;
  position: absolute;
  left: 0;
  top: 6rpx;
}
.user-info .middle-box .player-info .money {
  position: absolute;
  height: 52rpx;
  top: 4px;
  right: 0;
  width: 180rpx;
}
.user-info .middle-box .player-info .money > view {
  width: 100%;
  height: 52rpx;
  position: absolute;
  border-radius: 100px;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.user-info .middle-box .player-info .money .mask {
  background: #000000;
  opacity: 0.4;
}
.user-info .middle-box .player-info .money .content {
  font-size: 24rpx;
  text-align: center;
  vertical-align: middle;
}
.user-info .middle-box .player-info .money .content text {
  position: relative;
  bottom: 6rpx;
}
.user-info .middle-box .player-info .money .content image {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  bottom: -4rpx;
  margin-right: 6rpx;
}
.user-info .middle-box .exp-info {
  margin-top: 6rpx;
}
.user-info .middle-box .exp-info .player-level {
  font-size: 14px;
  color: #55CAB9;
  position: absolute;
  left: 0;
  bottom: 0;
}
.user-info .middle-box .exp-info .exp-progress {
  position: absolute;
  width: 302rpx;
  height: 28rpx;
  right: 0;
  bottom: 0;
}
.user-info .middle-box .exp-info .exp-progress > view {
  position: absolute;
  top: 0;
  left: 0;
}
.user-info .middle-box .exp-info .exp-progress .mask {
  background: #000000;
  border-radius: 100px;
  opacity: 0.4;
  height: 28rpx;
  width: 302rpx;
}
.user-info .middle-box .exp-info .exp-progress .inner-bar {
  background-image: linear-gradient(-269deg, #EA7715 3%, #51F09A 58%, #26A8D2 95%);
  border-radius: 16px;
  height: 20rpx;
  top: 4rpx;
  left: 4rpx;
}
.user-info .middle-box .exp-info .exp-progress .inner-bar.android {
  top: 6rpx;
}
.user-info .view-radar {
  right: 0;
  top: 20rpx;
  position: absolute;
  width: 102rpx;
  height: 102rpx;
}
.user-info .view-radar .mask {
  padding: 18rpx;
  border-radius: 20rpx;
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0.4;
  background: #000000;
}
.user-info .view-radar image {
  width: 66rpx;
  height: 66rpx;
  position: absolute;
  left: 18rpx;
  top: 18rpx;
}
