<template name="share-btn">
    <view class="share-btn-wrapper" bindtap="onclickShare">
        <button open-type="share">
            <image src="https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a67ed6c0a73c.png"></image>
            {{shareText}}
        </button>
        <view class="remind-text" wx:if="{{extraShareInfo}}">{{extraShareInfo}}</view>
    </view>
</template>