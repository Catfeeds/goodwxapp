@import '../templates/userInfo/index.wxss';
@import './components/awardDialog/index.wxss';
@import './components/inviteDialog/index.wxss';

page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .page-index {
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  box-sizing: border-box;
  height: 100%;
  padding: 40rpx;
}
page .page-index .pk-rate {
  margin-top: 40rpx;
  text-align: center;
}
page .page-index .pk-rate image {
  width: 670rpx;
  height: 280rpx;
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.4);
}
page .page-index .image-box {
  margin-top: 30rpx;
}
page .page-index .image-box > view {
  display: inline-block;
}
page .page-index .image-box > view:nth-child(2) {
  margin-left: 30rpx;
}
page .page-index .image-box image {
  width: 320rpx;
  height: 320rpx;
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.4);
}
page .page-index .image-box .friends-rate {
  display: inline-block;
  box-shadow: 0 8rpx 12rpx 0 rgba(0, 0, 0, 0.4);
  width: 320rpx;
  height: 320rpx;
  border: none;
  padding: 0;
}
page .page-index .image-box .friends-rate:after {
  display: none;
}
page .page-index .btn-contact {
  background: #FF9100;
  border-radius: 72px;
  font-size: 32rpx;
  color: #FFFFFF;
  width: 480rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
page .page-index .btn-contact:after {
  display: none;
}
page .page-index .btn-help {
  background: none;
  font-size: 28rpx;
  color: #fff;
  opacity: 0.7;
}
page .page-index .btns {
  position: fixed;
  bottom: 40rpx;
  left: 18%;
}
page .page-index .back-home {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
  overflow: hidden;
  color: #fff;
  background: linear-gradient(#7A6AE7, #8939E4);
  float: right;
  font-size: 32rpx;
  position:relative;
  top:10rpx;

}
page .page-index .back-home view {
  height: 40rpx;
  line-height: 40rpx;
}
page .page-index .back-home view:first-child {
  margin-top: 20rpx;
}
