@import '../../../../css/variable/dialog.wxss';
.invite-dialog .dialog-box .dialog-mask {
  opacity: 0.4;
}
.invite-dialog .dialog-box .dialog-wrapper {
  transform: scale(0.25);
  opacity: 0;
}
.invite-dialog .dialog-box .dialog-wrapper .close-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
}
.invite-dialog .dialog-box .dialog-wrapper .close-icon image {
  width: 40rpx;
  height: 40rpx;
  opacity: .5;
}
.invite-dialog .dialog-box .dialog-wrapper .content {
  margin-top: 80rpx;
}
.invite-dialog .dialog-box .dialog-wrapper .content .img-libai {
  position: absolute;
  height: 140rpx;
  left: 280rpx;
  top: -160rpx;
}
.invite-dialog .dialog-box .dialog-wrapper .content .img-libai image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 8rpx solid #e4cdd1;
  box-sizing: border-box;
}
.invite-dialog .dialog-box .dialog-wrapper .content .user-name {
  font-size: 32rpx;
  color: #CDCDCE;
  text-align: center;
}
.invite-dialog .dialog-box .dialog-wrapper .content .invite-text {
  margin-top: 30rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
}
