<view class="dialog-component notice-dialog" wx:if="{{showDialog}}">
    <view class="dialog-box">
        <view class="dialog-mask">
        </view>
        <view class="dialog-wrapper" animation="{{noticeDlgAniData}}">
            <view class="title">{{dialogData.title}}</view>
            <view class="content">
                <view class="remind-text">
                    {{dialogData.content}}
                </view>
            </view>
        </view>
    </view>
</view>