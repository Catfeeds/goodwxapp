.dialog-component {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.dialog-component .dialog-box {
  position: relative;
  width: 100%;
  height: 100%;
}
.dialog-component .dialog-box .dialog-mask {
  z-index: 9998;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0;
}
.dialog-component .dialog-box .dialog-wrapper {
  position: absolute;
  box-sizing: border-box;
  top: 30%;
  left: 5%;
  z-index: 9999;
  width: 90%;
  height: 400rpx;
  margin: 0 auto;
  color: #000;
  vertical-align: middle;
  border-radius: 10rpx;
  padding-bottom: 30rpx;
  background: #282038;
  box-shadow: 0 5px 9px 0 rgba(0, 0, 0, 0.5);
}
.dialog-component .dialog-box .dialog-wrapper .title {
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
}
.dialog-component .dialog-box .dialog-wrapper .icon-close {
  position: absolute;
  right: 20rpx;
  top: 24rpx;
}
.dialog-component .dialog-box .dialog-wrapper .icon-close image {
  width: 22px;
  height: 22px;
}
.dialog-component .dialog-box .dialog-wrapper .content {
  padding: 0 30rpx 0 54rpx;
  font-size: 30rpx;
  color: #6D6D6E;
  position: relative;
}
.dialog-component .dialog-box .dialog-wrapper .action-btn {
  width: 320rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #CD1512;
  border-radius: 65px;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  margin: 0 auto;
  margin-top: 48rpx;
}
