@import "../../../../css/variable/common.wxss";

@keyframes timer-hidden-anim {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}
.timer-hidden {
  animation: timer-hidden-anim 1s forwards;
}
.timer {
  position: relative;
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
}
.timer .timer-bg {
  width: 100%;
  height: 100%;
}
.timer .timer-num {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: inline-block;
  width: 44.44%;
  height: 44.44%;
}
