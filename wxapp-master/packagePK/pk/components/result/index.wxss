@import "../../../../css/variable/common.wxss";
@keyframes win-bg-img-anim {
  from {
    opacity: 0;
    width: 1400rpx;
    height: 1000rpx;
  }
  to {
    opacity: 1;
    width: 700rpx;
    height: 500rpx;
  }
}
@keyframes fail-bg-img-anim {
  from {
    opacity: 0;
    width: 1000rpx;
    height: 1200rpx;
  }
  to {
    opacity: 1;
    width: 500rpx;
    height: 600rpx;
  }
}
@keyframes draw-bg-img-anim {
  from {
    opacity: 0;
    width: 1500rpx;
    height: 340rpx;
  }
  to {
    opacity: 1;
    width: 750rpx;
    height: 170rpx;
  }
}
@keyframes tips-img-anim {
  from {
    opacity: 0;
    width: 736rpx;
    height: 180rpx;
  }
  to {
    opacity: 1;
    width: 368rpx;
    height: 90rpx;
  }
}
.result-wrap .win .bg-img {
  animation: win-bg-img-anim 0.25s forwards;
}
.result-wrap .fail .bg-img {
  animation: fail-bg-img-anim 0.25s forwards;
}
.result-wrap .draw .bg-img {
  animation: draw-bg-img-anim 0.25s forwards;
}
.result-wrap .tips-img {
  animation: tips-img-anim 0.25s forwards;
}
@keyframes counterattack-anim {
  from {
    opacity: 0;
    top: -220rpx;
  }
  to {
    opacity: 1;
    top: -200rpx;
  }
}
@keyframes reward-anim {
  from {
    opacity: 0;
    top: -20rpx;
  }
  to {
    opacity: 1;
    top: 10rpx;
  }
}
.result-wrap .counterattack {
  animation: counterattack-anim 0.25s forwards;
}
.result-wrap .reward {
  animation: reward-anim 0.25s forwards;
}
.result-wrap {
  position: relative;
  width: 100%;
}
.result-wrap .img {
  width: 100%;
  height: 100%;
}
.result-wrap .win .counterattack {
  background: #15AA63;
  box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.2);
  border-radius: 60px;
  width: 120rpx;
  height: 56rpx;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 0;
  line-height: 56rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  text-align: center;
}
.result-wrap .win .bg-img {
  top: -340rpx;
}
.result-wrap .win .tips-img {
  top: -120rpx;
}
.result-wrap .draw .bg-img {
  top: -120rpx;
}
.result-wrap .fail .bg-img {
  top: -320rpx;
}
.result-wrap .bg-img {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 1;
}
.result-wrap .tips-img {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  z-index: 10;
  top: -90rpx;
}
.result-wrap .reward {
  position: absolute;
  z-index: 10;
  text-align: center;
  width: 100%;
}
.result-wrap .reward .img {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.result-wrap .reward .money {
  color: #FF9100;
}
.result-wrap .reward .express {
  color: #31D486;
}
.result-wrap .reward .money,
.result-wrap .reward .express {
  font-size: 28rpx;
  letter-spacing: 0;
  margin-top: 15rpx;
}
.result-wrap .reward .txt-left {
  margin-right: 10rpx;
}
.result-wrap .reward .txt-right {
  margin-left: 10rpx;
}
