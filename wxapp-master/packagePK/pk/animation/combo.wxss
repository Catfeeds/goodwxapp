@keyframes double-combo-anim {
  from {
    opacity: 0;
    width: 780rpx;
    height: 400rpx;
    z-index: 10;
  }
  20% {
    opacity: 1;
    z-index: 1;
    width: 390rpx;
    height: 200rpx;
  }
  40% {
    opacity: 1;
    z-index: 10;
    width: 468rpx;
    height: 240rpx;
  }
  60% {
    opacity: 1;
    z-index: 1;
    width: 390rpx;
    height: 200rpx;
  }
  80% {
    opacity: 0;
    width: 780rpx;
    height: 400rpx;
    z-index: 1;
  }
  to {
    opacity: 0;
    z-index: -1;
  }
}
.pk-wrapper .double-combo {
  animation: double-combo-anim 2.5s forwards;
}
