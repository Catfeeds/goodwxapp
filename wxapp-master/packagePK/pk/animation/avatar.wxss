@keyframes my-avatar-find-show-anim {
  from {
    top: 2%;
    opacity: 0;
  }
  to {
    top: 10%;
    opacity: 1;
  }
}
@keyframes my-avatar-find-hidden-anim {
  to {
    top: 2%;
    opacity: 0;
  }
  from {
    top: 10%;
    opacity: 1;
  }
}
.my-avatar-find-show {
  animation: my-avatar-find-show-anim 0.5s forwards;
}
.my-avatar-find-hidden {
  animation: my-avatar-find-hidden-anim 0.5s forwards;
}
@keyframes enemy-avatar-find-show-anim {
  from {
    top: 80%;
    opacity: 0.2;
  }
  to {
    top: 60%;
    opacity: 1;
  }
}
@keyframes enemy-avatar-find-hidden-anim {
  to {
    top: 80%;
    opacity: 0;
  }
  from {
    top: 60%;
    opacity: 1;
  }
}
.enemy-avatar-find-show {
  animation: enemy-avatar-find-show-anim 0.5s forwards;
}
.enemy-avatar-find-hidden {
  animation: enemy-avatar-find-hidden-anim 0.5s forwards;
}
@keyframes my-avatar-pk-show-anim {
  from {
    left: 2%;
    opacity: 0;
  }
  to {
    left: 7%;
    opacity: 1;
  }
}
@keyframes my-avatar-pk-hidden-anim {
  to {
    left: 2%;
    opacity: 0;
  }
  from {
    left: 7%;
    opacity: 1;
  }
}
.invite-find .my-avatar-find-show {
  animation: my-avatar-pk-show-anim 0.5s forwards;
}
.invite-find .my-avatar-find-hidden {
  animation: my-avatar-pk-hidden-anim 0.5s forwards;
}
@keyframes my-avatar-find-error-show-anim {
  from {
    top: 10%;
    opacity: 0;
  }
  to {
    top: 20%;
    opacity: 1;
  }
}
@keyframes my-avatar-find-error-hidden-anim {
  to {
    top: 20%;
    opacity: 0;
  }
  from {
    top: 10%;
    opacity: 1;
  }
}
.invite-find-error .my-avatar-find-error-show {
  animation: my-avatar-find-error-show-anim 0.5s forwards;
}
.invite-find-error .my-avatar-find-error-hidden {
  animation: my-avatar-find-error-hidden-anim 0.5s forwards;
}
.my-avatar-pk-show,
.my-avatar-over-show {
  animation: my-avatar-pk-show-anim 0.25s forwards;
}
.my-avatar-pk-hidden,
.my-avatar-over-hidden {
  animation: my-avatar-pk-hidden-anim 0.25s forwards;
}
@keyframes enemy-avatar-pk-show-anim {
  from {
    right: 2%;
    opacity: 0;
  }
  to {
    right: 7%;
    opacity: 1;
  }
}
@keyframes enemy-avatar-pk-hidden-anim {
  to {
    right: 2%;
    opacity: 0;
  }
  from {
    right: 7%;
    opacity: 1;
  }
}
.enemy-avatar-pk-show {
  animation: enemy-avatar-pk-show-anim 0.25s forwards;
}
.enemy-avatar-pk-hidden {
  animation: enemy-avatar-pk-hidden-anim 0.25s forwards;
}
.invite-find .enemy-avatar-find-show {
  animation: enemy-avatar-pk-show-anim 0.5s forwards;
}
.invite-find .enemy-avatar-find-hidden {
  animation: enemy-avatar-pk-hidden-anim 0.5s forwards;
}
