@import '../../pages/templates/rankItem/index.wxss';
@import '../../pages/templates/shareBtn/index.wxss';
@import './components/awardRulesDialog/index.wxss';

page {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
  position: fixed;
  top: 0;
  left: 0;
}
page .page-rank {
  height: 100%;
  background: url('https://imgs.genshuixue.com/0baijiatools/bda532b0bca7f8da677b8ec81acd50fb/bg.jpg') no-repeat center center;
  background-size: cover;
}
page .page-rank .rank-tab {
  width: 482rpx;
  height: 68rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
page .page-rank .rank-tab .tab-item {
  width: 240rpx;
  height: 68rpx;
  text-align: center;
  box-sizing: border-box;
  color: #fff;
  font-size: 28rpx;
  display: inline-block;
  border-radius: 0 8rpx 8rpx 0;
  line-height: 68rpx;
  border: 1px solid #FF9100;
}
page .page-rank .rank-tab .tab-item:first-child {
  border-radius: 8rpx 0 0 8rpx;
}
page .page-rank .rank-tab .tab-item.active {
  background: #F98206;
}
page .page-rank .awards {
  background: #15AA63;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-top: 4rpx;
  padding: 0 30rpx;
  position: relative;
}
@keyframes content-scroll-animation {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-230%);
  }
}
page .page-rank .awards .scroll-content {
  margin-right: 20rpx;
  width: 75%;
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: clip;
}
page .page-rank .awards .scroll-content .content {
  white-space: nowrap;
  font-size: 28rpx;
  position: relative;
  transform: translateX(100%);
  animation: content-scroll-animation 12s linear 1s infinite;
}
page .page-rank .awards text {
  font-size: 30rpx;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  right: 30rpx;
}
page .page-rank .rank-list {
  padding-top: 20rpx;
  height: 52%;
}
page .page-rank .rank-list.friend {
  height: 69%;
}
