/**app.wxss**/
.container {
    background-color: #efeff4;
}

/*发布按钮样式*/
.button-publish {
    height: 94rpx;
    width: 670rpx;
    border-radius: 20rpx;
    background-color: #57A1F9;
    font-size: 36rpx;
    color: #ffffff;
    text-align: center;
    line-height: 94rpx;
    box-shadow: 0 2px 10px 0;
    margin: 0 auto;
}
/*提示框样式*/
.toast {
    color: #fff;
    background-color: #111;
    opacity: 0.7;
    width: 400rpx;
    height: 140rpx;
    line-height: 140rpx;
    padding: 0 20rpx;
    text-align: center;
    border-radius: 10rpx;
    font-size: 34rpx;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto; 
}
.tapBtn {
    background-color: #3D7FCD;
}