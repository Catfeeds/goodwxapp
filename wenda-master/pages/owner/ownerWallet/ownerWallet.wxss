page {
    background-color: #efeff4;
}
.bannerContainer {
    width: 750rpx;
    height: 400rpx;
    position: relative;
    text-align: center;
    margin-bottom: 20rpx;
}
.topBanner {
    background-size: cover;
    width: 750rpx;
    height: 400rpx;
}
.out-wrapper {
    position: absolute;
    top: 36rpx;
    left: 297rpx;
    width: 140rpx;
    height: 140rpx;
    padding: 8rpx;
    border-radius: 50%;
    background: rgba(255,255,255,0.40);
    box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.15);
}
.headImg {
    width: 140rpx;
    height:140rpx;
    background-size: cover;
    border-radius: 50%;
}
.nickName {
    width: 750rpx;
    height: 48rpx;
    line-height: 48rpx;
    color: #fff;
    font-size: 34rpx;
    position: absolute;
    top: 204rpx; 
    overflow:hidden; 
    text-overflow:ellipsis;
}
.pocket-money {
    position: absolute;
    top: 252rpx;
    text-align: center;
    width: 100%;
    height: 67rpx;
    line-height: 67rpx;
    font-size: 48rpx;
    color: #fff;
}
.pocket-money text {
    font-size: 36rpx;
}
.income-money {
    position: absolute;
    top: 329rpx;
    text-align: center;
    width: 100%;
    height: 33rpx;
    line-height: 33rpx;
    font-size: 24rpx;
    color: #fff;
}
.content-wrapper {
    position: relative;
    margin: 0 auto 10rpx auto;
    width: 710rpx;
    height: 120rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2px 4px 0 rgba(217,217,217,0.10);
}
.pocket-icon {
    position: absolute;
    top: 20rpx;
    bottom: 20rpx;
    left: 20rpx;
    width: 80rpx;
    height: 80rpx;
}
.from {
    position: absolute;
    top: 10rpx;
    left: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
    width: 400rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #333;
}
.from text {
    text-overflow: ellipsis;
}
.time {
    position: absolute;
    left: 120rpx;
    bottom: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #999;
}
.income {
    color: #FF4D4D;
}
.income_f {
    color: #17CB35;
}
.income, .income_f{
    position: absolute;
    right: 20rpx;
    top: 4rpx;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 34rpx;
}
.income text, .income_f text {
    position: relative;
    top: -2rpx;
}
.type {
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #999;
    letter-spacing: 0;
}
.noContents {
    /*background: url("../../images/noContents.png") center center no-repeat;*/
    background-size: cover; 
    margin: 195rpx auto 10rpx auto;
    width: 179rpx;
    height: 168rpx;
}
.noText {
    width: 336rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    font-size: 28rpx;
    margin: 0 auto;
}