
<view class="bannerContainer">
    <view class="wrapper-bg1"></view>
    <view class="out-wrapper">
        <image class="headImg" src="{{avatarUrl}}"/>
    </view>
    <image class="vip-icon" src="{{vipIcon}}" wx:if="{{isAuthVip}}"/>
    <view class="wrapper-bg2">
        <view class="bg2-name textFontR">{{userName}}</view>
        <view class="bg2-id textFontR"></view>
        <view class="bg2-info textFontR">
            <view class="info-item">
                <view class="item-num">{{accepted}}</view>
                <view class="item-intro">被采纳</view>
            </view>
            <view class="info-item">
                <view class="item-num">{{answers}}</view>
                <view class="item-intro">回答</view>
            </view>
            <view class="info-item">
                <view class="item-num">{{shares}}</view>
                <view class="item-intro">分享</view>
            </view>
        </view>
    </view>
    <view class="wrapper-bg3 textFontR">
        <view class="bg3-title">认证介绍</view>
        <view class="bg3-content" wx:if="{{isAuthVip}}">{{content}}</view>
        <view class="bg3-auth" wx:if="{{!isAuthVip}}">
            <image class="bg3-pic" src="{{noAuth}}"></image>
            <view class="bg3-tag textFontR">TA还没有认证过呢~</view>
        </view>
    </view>

</view>