page {
    background: #efeff4;
    padding-top: 20rpx;
}
.apply {
    margin: 0 30rpx;
}
.title {
    width: 690rpx;
    height: 168rpx;
    font-size: 30rpx;
    line-height: 42rpx;
    color: #333;
}
.wx-num {
    width: 690rpx;
    overflow: hidden;
}
.wx-num view,
.intro view {
    margin: 8rpx 0 10rpx;
    color: #333;
    font-size: 34rpx;
    line-height: 48rpx;
    width: 690rpx;
}
.wx-num input,
.intro textarea {
    box-sizing: border-box;
    width: 690rpx;
    height: 80rpx;
    border: 2rpx solid #fc1;
    color: #999;
    line-height: 80rpx;
    font-size: 30rpx;
    background: #fff;
    border-radius: 10rpx;
    padding: 0 10rpx;
}
.intro {
    position: relative;
    width: 690rpx;
    overflow: hidden;
}
.intro view {
    margin: 40rpx 0 10rpx;
}
.intro textarea {
    width: 690rpx;
    height: 324rpx;
    padding: 9rpx 10rpx;
}
.intro text {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
    font-size: 24rpx;
    color: #999;
    letter-spacing: 0;
}
.complete {
    position: fixed;
    left: 40rpx;
    bottom: 40rpx;
    text-align: center;
    line-height: 94rpx;
    width: 670rpx;
    height: 94rpx;
    background: #fc1;
    box-shadow: 0 2rpx 10rpx 0 rgba(255, 204, 16, .72);
    border-radius: 20rpx;
    font-size: 36rpx;
    color: #333;
}
.success {
    margin: 0 30rpx;
    width: 690rpx;
    text-align: center;
}
.success image {
    position: fixed;
    left: 276rpx;
    top: 278rpx;
    width: 196rpx;
    height: 261rpx;
}
.success .tip1 {
    margin-top: 559rpx;
    color: #333;
    font-size: 34rpx;
    line-height: 48rpx;
}
.success .tip2 {
    margin-top: 59rpx;
    color: #999;
    font-size: 28rpx;
    line-height: 40rpx;
}