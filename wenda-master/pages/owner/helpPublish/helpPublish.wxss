page {
    background-color: #efeff4;
}
.text-wrapper, .voice-wrapper {
    position: relative;
    width: 690rpx;
    height: 340rpx;
    margin-top: 10rpx;
    padding: 20rpx 30rpx 0 30rpx;
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}
.textarea {
    width: 690rpx;
    height: 340rpx;
    line-height: 42rpx;
}
.wordRemindTip {
    position: absolute;
    right: 33rpx;
    bottom: 10rpx;
    font-size: 24rpx;
    line-height: 33rpx;
    color: #999;
}
.textarea-placeholder {
    font-size: 30rpx;
    line-height: 42rpx;
    color: #999;
}
.handleBtn {
    position: relative;
    width: 750rpx;
    height: 84rpx;
    background: #fff;
}
.voice, .keyboard {
    position: absolute;
    top: 0;
    left: 10rpx;
    width: 36rpx;
    height: 44rpx;
    padding: 20rpx;
}
.recordIcon {
    position: absolute;
    top: 100rpx;
    left: 295rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
}
.recordText {
    position: absolute;
    top: 270rpx;
    left: 303rpx;
    width: 144rpx;
    height: 33rpx;
    line-height: 33rpx;
    text-align: center;
    font-size: 24rpx;
    color: #999;
}
.playRecordBg {
    position: absolute;
    top: 100rpx;
    left: 134rpx;
    width: 416rpx;
    height: 100rpx;
}
.playRecordHorn {
    position: absolute;
    z-index: 10;
    top: 125rpx;
    left: 190rpx;
    width: 39rpx;
    height: 50rpx;
}
.playRecordTime {
    position: absolute;
    top: 130rpx;
    right: 134rpx;
    width: 46rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 34rpx;
    color: #4f4f4f;
}
.reRecord {
    position: absolute;
    top: 273rpx;
    left: 305rpx;
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border: 2rpx solid #FFCC11;
    border-radius: 16rpx;
    font-size: 36rpx;
    color: #FF4646;
}
.addPics {
    position: absolute;
    top: 0;
    right: 10rpx;
    width: 44rpx;
    height: 44rpx;
    padding: 20rpx;
}
.img-wrapper {
    width: 690rpx;
    height: 198rpx;
    padding: 0 30rpx;
    background: #fff;
    border-top: 1px solid #E5E5E5;
}
.payMoney {
    width: 670rpx;
    height: 94rpx;
    margin: 60rpx auto 40rpx auto;
    line-height: 94rpx;
    font-size: 36rpx;
    color: #333;
    background: #FFCC11;
    box-shadow: 0 2rpx 10rpx 0 rgba(255,204,16,0.72);
    border-radius: 20rpx;
}
.pic-item {
    width: 158rpx;
    height: 158rpx;
    float: left;
    margin: 20rpx 18rpx 20rpx 0;
}
.pic-item:last-child {
    margin-right: 0;
}
.pic-item {
    
    position: relative;
}
.pic-item image {
    width: 158rpx;
    height: 158rpx;
}
.delete-btn {
    position: absolute;
    z-index: 100;
    top: -10rpx;
    right: -10rpx;
    width: 30rpx;
    height: 30rpx;
    padding: 0 0 20rpx 20rpx;
    text-align: center;
}
.option-wrapper {
    margin-top: 42rpx;
}
.option-input-wrapper {
    display: flex;
    align-items: center;
}
.option {
    position: relative;
    width: 720rpx;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 0 0 30rpx;
    font-size: 34rpx;
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}
.tip {
    height: 33rpx;
    line-height: 33rpx;
    margin: 10px 0 20rpx 30rpx;
    font-size: 24rpx;
    color: #888;
}
.rule-wrapper {
    display: flex;
    flex-direction: column;
}
.rule-btn {
    flex: 0 0 48rpx;
    width: 136rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin: 0 auto;
    color: #57A1F9;
    font-size: 34rpx;
    text-align: center;
}
.rule-detail-wrapper {
    flex: 1;
    width: 750rpx;
    background: #fff;
}
.rule-detail {
    padding: 10rpx 0 20rpx 0;
    margin: 0 30rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #666;
    background: #fff;
}
.rule-detail-wrapper {
    position: fixed;
    bottom: 132rpx;
    left: 45rpx;
    width: 660rpx;
    height: 1070rpx;
    opacity: 1;
    background: #fff;
    z-index: 10;
    text-align: center;
    border-radius: 20rpx;
}
.rule-title{
    display: inline-block;
    margin: 40rpx auto 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
}
.rule-detail {
    text-align: left;
    display: inline-block;
    width: 580rpx;
    height: 798rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
}
.rule-btn1{
    background: #FFCC11;
    border-radius: 20rpx;
    color: #333;
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 34rpx;
    margin:40rpx auto 0;
}
.rule-close{
    width: 23.8rpx;
    height: 23.8rpx;
    background-image: url("../../../images/wrong.png");
    background-repeat: no-repeat;
    background-size: contain;
    position: absolute;
    top: 30.2rpx;
    right: 30.2rpx;
}
.rule-wrapper1{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000000;
    z-index: 9;
}