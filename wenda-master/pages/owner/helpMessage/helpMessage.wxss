page {
    background-color: #efeff4;
}
.textFontS{
    font-family: PingFangSC-Semibold;
}
.textFontR{
    font-family: PingFangSC-Regular;
}
.tabBar{
    height: 88rpx;
    line-height: 88rpx;
    width: 750rpx;
    top: 0;
    left: 0;
    position: fixed;
    display: flex;
    flex-direction: row;
    background-color: #FFF;
    z-index: 3;
}
.already-solve, 
.await-solve{
    height: 88rpx;
    width: 250rpx;
    line-height: 88rpx;
    font-size: 34rpx;
    text-align: center;
    color: #666;
}
.choose-orange{
    color: #FE7C3B;
    border-bottom: 4rpx solid #FE7C3B;
}
.already-solve{
    margin-left: 63rpx;
    margin-right: 124rpx;
}
.await-solve{
    margin-left: 20rpx;
}

.check-rules{
    display: inline-block;
    height: 42rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    text-align: center;
    color: #57A1F9;
    position: absolute;
    right:30rpx;
    top:23rpx;
}

.solve-div{
    position: relative;
}

.voteContent {
    width: 710rpx;
    background-color: #fff;
    position: relative;
    top:98rpx;
    margin: 0 auto 10rpx auto;
    box-shadow: 0 2rpx 4rpx 0 rgba(217,217,217,0.10);
    display: flex;
    flex-direction: column;
    padding: 20rpx 20rpx 10rpx;
}
.content-header{
    margin-left: 10rpx;
    margin-bottom: 10rpx;
}
.head-title {
    position: relative;
    display: inline-block;
    max-width: 690rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
}
.head-icon{
    width: 18rpx;
    height: 18rpx;
    background-color: #FF3737;
    display: inline-block;
    left: 5rpx;
    top: -10rpx;
    position: relative;
    border-radius: 50%;
}
.pay {
    position: absolute;
    top: 25rpx;
    right: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #ff5656;
}
.contentPic {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx 0 20rpx 20rpx;
    background-size: cover; 
}
.content-container{
    width: 690rpx;
    height: 84rpx;
    background-color: #eee;
    padding: 10rpx;
    left: 20rpx;
    top: 72rpx;
    border-radius: 8rpx;
}
.content-text {
    line-height: 42rpx;
    color: #666;
    font-size: 30rpx;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2; 
    word-break: break-all;
}
.content-voice {
    height: 84rpx;
    line-height: 84rpx;
    top: 10rpx;
    left: 80rpx;
}
.bubble-img{
    height: 84rpx;
    width: 416rpx;
    z-index: 1;
    margin-left: 80rpx;
}
.icon-img{
    position: relative;
    width: 39rpx;
    height: 50rpx;
    left: -360rpx;
    top: -17rpx;
    z-index: 2;
}
.voice-time{
    position: relative;
    text-align: center;
    left: -15rpx;
    top: -27rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 34rpx;
    font-family: SanFranciscoDisplay-Regular;
    color: #4F4F4F;
}


.contentFooter {
    margin-left: 10rpx;
    margin-top: 10rpx;
    width: 690rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    letter-spacing: 0;
}
.person_s {
    width: 20rpx;
    height: 26rpx;
    background-size: cover;
}
.solved-tag {
    display: inline-block;
    margin-right: 20rpx;
}
.solved-time {
    display: inline-block;
    color: #999;
    width: 200rpx;
}
.solved-desc {
    display: inline-block;
