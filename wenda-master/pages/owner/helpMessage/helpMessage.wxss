    text-align: center;
    font-size: 24rpx;
    color: #333;
    top: 22rpx;
    left: 340rpx;
}

.rule-wrapper{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000000;
    z-index: 9;
}
.rule-detail-wrapper {
    position: fixed;
    bottom: 132rpx;
    left: 45rpx;
    width: 660rpx;
    height: 1070rpx;
    opacity: 1;
    background: #fff;
    z-index: 10;
    text-align: center;
    border-radius: 20rpx;
}
.rule-title{
    display: inline-block;
    margin: 40rpx auto 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
}
.rule-detail {
    text-align: left;
    display: inline-block;
    width: 580rpx;
    height: 798rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
}
.rule-btn{
    background: #FFCC11;
    border-radius: 20rpx;
    color: #333;
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 34rpx;
    margin:40rpx auto 0;
}
.rule-close{
    width: 23.8rpx;
    height: 23.8rpx;
    background-image: url("../../../images/wrong.png");
    background-repeat: no-repeat;
    background-size: contain;
    position: absolute;
    top: 30.2rpx;
    right: 30.2rpx;
}