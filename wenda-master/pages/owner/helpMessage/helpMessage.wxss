}
.solved-desc2 {
    display: inline-block;
    width: 490rpx;
    text-align: right;
    color: #999;
}
.remain-time{
    display: inline-block;
    margin-right: 20rpx;
}
.solved-forward-img{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 124rpx;
}
.solved-forward-text{
    position: absolute;
