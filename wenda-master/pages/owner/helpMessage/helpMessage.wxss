}
.noText {
    width: 336rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    font-size: 28rpx;
    margin: 0 auto;
}
.nomore{
    position: relative;
    height: 66rpx;
    top:88rpx;
}
.nomore-img{
    position: absolute;
    width: 49.2rpx;
    height: 25.9rpx;
    left: 279.4rpx;
    top: 25.2rpx;
}
.nomore-text{
    position: absolute;
    height: 33rpx;
    width: 132rpx;
