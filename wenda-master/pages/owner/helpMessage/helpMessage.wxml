<view class="tabBar">
    <view class="textFontR already-solve {{isSolvedPage?'choose-orange':''}}" bindtap="toSolved">问答通知</view>
    <view class="textFontR await-solve {{!isSolvedPage?'choose-orange':''}}" bindtap="toUnSolved">系统消息</view>
</view>

<view class="solve-div">
    <block wx:for="{{list}}" wx:for-item="tag" wx:key="{{index}}">
        <view class="voteContent" bindtap="detailEv" data-helpid="{{tag.helpId}}" data-id="{{tag.id}}" data-unread="{{tag.unRead}}" data-category="{{tag.category}}">
            <!--<image class="head-img" src="{{tag.creatorImg}}"></image>-->
            <view class="content-header">
                <view class="head-title textFontR">{{tag.comment}}</view>
                <view class="head-icon" wx:if="{{tag.unRead}}"></view>
            </view>
            <!--<view class="pay textFontR">￥{{tag.amount}}</view>-->
            <view class="content-container">
                <view class="content-text textFontR" wx:if="{{tag.helpType==2}}">{{tag.content}}</view>
                <view class="content-voice" wx:if="{{tag.helpType==1}}">
                    <image class="bubble-img" src="{{pageImg.bubbleBig}}"></image>
                    <image class="icon-img" src="{{pageImg.sound}}"></image>
                    <text class="voice-time">{{tag.voiceDuration}}''</text>
                </view>
            </view>
            
            <view class="contentFooter">
                <text class="solved-time textFontR">{{tag.timeDesc}}</text>
                <text class="{{isSolvedPage?'solved-desc ':'solved-desc2'}} textFontR" data-helpid="{{tag.helpId}}">{{tag.desc}}</text>
            </view>
        </view>
    </block>

