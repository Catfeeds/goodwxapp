<view class="ownerHeader">
    <image src="../../../images/ownerLT.png" class="headerLT"></image>
    <image src="../../../images/ownerRB.png" class="headerRB"></image>
    <view class="headerAuth {{isSubmitAuth?'disable':''}}" data-flag="{{isSubmitAuth}}" bindtap="authEv">{{authText}}</view>
    <view class="headerImgCot">
        <image src="{{headImg}}" class="headerImg"></image>
        <image src="../../../images/bigv.png" class="vip" wx:if="{{ifAuth}}"></image>
    </view>
    <view class="headerName">{{headName}}</view>
</view>
<view class="ownerContent">
    <view class="contentList ownerWallet" bindtap="walletEv">我的钱包
        <text class="walletNum">共赚取{{account}}元</text>
        <image src="../../../images/goTo.png" class="contentListArrow"></image>
    </view>
    <view class="contentList ownerQues"  bindtap="quesEv">我的问技
        <image src="../../../images/goTo.png" class="contentListArrow"></image>
    </view>
    <view class="contentList ownerInfo"  bindtap="infoEv">消息通知
        <text class="infoTip" wx:if="{{ifShowInfo}}">{{infoNum}}</text>
        <text class="infoRed" wx:if="{{ifShowRedInfo}}"></text>
        <image src="../../../images/goTo.png" class="contentListArrow"></image>
    </view>
</view>

<view class="ownerDesc">
    <view class="descTitle">认证介绍</view>
    <view class="descNoAuth" wx:if="{{!ifAuth}}">
        <image src="../../../images/noAuth.png" class="descNoAuthImg"></image>
        <view class="descNoAuthText">TA还没有认证过呢~</view>
    </view>
    <view class="desAuth" wx:if="{{ifAuth}}">{{authContent}}</view>
</view>

<view class="contactCot">
    <contact-button
        class="contact"
    type="default-light" 
    size="25"
    session-from="weapp"
    >
    </contact-button>
    <view class="kf">客服</view>
</view>
