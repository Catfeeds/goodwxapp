page {
    background-color: #efeff4;
}
.ownerHeader {
    height: 360rpx;
    position: relative;
    background: linear-gradient(-180deg, #FFCC11 0%, #FE7C3B 99%);
}

.headerLT {
    position: absolute;
    width: 620rpx;
    height: 130rpx;
    /*background: url('../../../images/ownerLT.png') no-repeat;
    background-size: 620rpx 130rpx;*/
    top: 0;
    left: 0;
}
.headerRB {
    position: absolute;
    width: 620rpx;
    height: 130rpx;
    /*background: url('../../../images/ownerRB.png') no-repeat;
    background-size: 620rpx 130rpx;*/
    bottom: 0;
    right: 0;
}
.headerAuth {
    width: 140rpx;
    height: 48rpx;
    border: 2rpx solid #FFFFFF;
    box-shadow: 0 2rpx 5rpx 0 rgba(0,0,0,0.18);
    border-radius: 24rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    line-height: 48rpx;
    position: absolute;
    top: 24rpx;
    right: 20rpx;
}
.headerAuth.disable {
    border: 2rpx solid #999999;
    color: #999999;
}
.headerImgCot {
    width: 160rpx;
    height: 160rpx;
    background: rgba(255,255,255,0.60);
    box-shadow: 0 2rpx 8rpx 0 rgba(0,0,0,0.15);
    border-radius: 50%;
    position: relative;
    top: 68rpx;
    left: 50%;
    margin-left: -90rpx;
    padding: 10rpx;
}
.headerImg {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%; 
}
.vip {
    width: 60rpx;
    height: 60rpx;
    /*background: url('../../../images/bigv.png') no-repeat;
    background-size: 60rpx 60rpx;*/
    position: absolute;
    top: 118rpx;
    right: 0;
}
.headerName {
    height: 48rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    color: #FFFFFF;
    letter-spacing: 0;
    text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.16);
    position: absolute;
    bottom: 54rpx;
    left: 50%;
    -webkit-transform:translate(-50%);
}
.ownerContent {
    margin: 10rpx 0;
    background: #fff;
}
.contentList {
    height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #E5E5E5;
    font-size: 34rpx;
    color: #333333;
    line-height: 88rpx;
    position: relative;
}
.contentList:last-child {
    border: none;
}
.contentListArrow {
    content: '';
    width: 16rpx;
    height: 26rpx;
    /*background: url(../../../images/goTo.png) no-repeat;
    background-size: 16rpx 26rpx;*/
    top: 50%;
    margin-top: -13rpx;
    right: 21rpx;
    position: absolute;
}
.walletNum {
    font-size: 34rpx;
    color: #999999;
    height: 48rpx;
    position: absolute;
    right: 67rpx;
}
.infoTip {
    height: 40rpx;
    min-width: 40rpx;
    border-radius: 20rpx;
    background: #FF3737;
    color: #fff;
    font-size: 28rpx;
    display: block;
    position: absolute;
    text-align: center;
    line-height: 40rpx;
    right: 57rpx;
    top: 50%;
    margin-top: -20rpx;
}
.infoRed {
    width: 18rpx;
    height: 18rpx;
    background: #FF3737;
    border-radius: 9rpx;
    position: absolute;
    right: 57rpx;
    top: 50%;
    margin-top: -9rpx;
}
.ownerDesc {
    background: #fff;
    overflow: hidden;
}
.descTitle {
    height: 68rpx;
    line-height: 68rpx;
    margin-left: 30rpx;
    font-size: 34rpx;
    color: #333333;
}
.descNoAuth {
    height: 320rpx;
    position: relative;
}
.descNoAuthImg {
    height: 168rpx;
    /*background: url(../../../images/noAuth.png) no-repeat center center;
    background-size: 179rpx 168rpx;*/
    width: 180rpx;
    position: absolute;
    left: 50%;
    top: 14rpx;
    margin-left: -90rpx;
}
.descNoAuthText {
    font-size: 28rpx;
    color: #999999;
    text-align: center;
    margin-top: 10rpx;
    height: 122rpx;
    position: absolute;
    bottom: 0rpx;
    width: 100%;
}
.desAuth {
    font-size: 30rpx;
    color: #333333;
    letter-spacing: 0;
    line-height: 42rpx;
    margin: 5rpx 30rpx 20rpx;
    word-break: break-all;
}
.contactCot {
    height: 80rpx;
    width: 80rpx;
    background: rgba(0,0,0,0.27);
    box-shadow: 0 3rpx 6rpx 0 rgba(0,0,0,0.25);
    border-radius: 20rpx;
    position: fixed;
    right: 10rpx;
    bottom: 76rpx;
}
.contact {
    position: absolute;
    top: 5rpx;
    left: 50%;
    transform: translate(-50%);  
}
.kf {
    text-align: center;
    font-size: 25rpx;
    color: #FFFFFF;
    position: absolute;
    bottom: 0;
    width: 100%;
}