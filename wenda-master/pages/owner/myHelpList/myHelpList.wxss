page {
    background: #efeff4;
}
.buttonlist {
    height: 88rpx;
    width: 750rpx;
    background: #fff;
}
.buttonlist view {
    width: 250rpx;
    float: left;
    height: 88rpx;
    box-sizing: border-box;
    line-height: 88rpx;
    color: #666;
    font-size: 34rpx;
    text-align: center;
    border-bottom: 4rpx solid #fff;
}
.buttonlist .choose {
    border-bottom-color: #fe7c3b;
    color: #fe7c3b;
}
.list {
    background: #fff;
    padding: 20rpx 20rpx 10rpx;
    width: 710rpx;
    overflow: hidden;
    margin-top: 10rpx;
}
.reply-title {
    width: 690rpx;
    padding: 0 10rpx 10rpx;
    line-height: 42rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 30rpx;
    color: #333;
}
.content {
    color: #333;
    font-size: 30rpx;
    line-height: 42rpx;
    width: 690rpx;
    min-height: 42rpx;
    padding: 0 10rpx;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
}
.content text {
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    word-break: break-all;
}
.record {
    position: relative;
    width: 690rpx;
    height: 84rpx;
    padding: 0 10rpx;
}
.reply-content {
    color: #666;
    background: #eee;
    border-radius: 8rpx;
    min-height: 42rpx;
    padding: 10rpx;
}
.record image {
    position: absolute;
    top: 0;
    left: 70rpx;
    width: 416rpx;
    height: 84rpx;
}
.record .voice-deco {
    position: absolute;
    top: 17rpx;
    left: 126rpx;
    width: 39rpx;
    height: 50rpx;
}
.reply-content image {
    top: 10rpx;
}
.reply-content .voice-deco {
    top: 27rpx;
}
.record text {
    font-size: 34rpx;
    line-height: 84rpx;
    margin-left: 506rpx;
}
.list-footer {
    position: relative;
    height: 50rpx;
    width: 690rpx;
    color: #999;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.amount {
    position: relative;
    top: 3rpx;
    color: #ff5656;
    font-size: 36rpx;
    line-height: 50rpx;
    height: 50rpx;
    letter-spacing: 0;
}
.create-time {
    line-height: 50rpx;
    margin-left: 20rpx;
}
.answer-time {
    margin-left: 0;
}
.status {
    position: absolute;
    top: 11rpx;
    right: 0;
}
.status-choose {
    color: #ff5656;
}
.nomore {
    position: relative;
    margin-top: 20rpx;
    height: 33rpx;
}
.nomore image {
    position: absolute;
    top: 3rpx;
    left: 280rpx;
    height: 26rpx;
    width: 49rpx;
}
.nomore text {
    position: absolute;
    left: 340rpx;
    top: 0;
    color: #333;
    font-size: 24rpx;
    line-height: 33rpx;
}
.none {
    padding-top: 633rpx;
    background: url(../../../images/noAuth.png) no-repeat 260rpx 300rpx;
    background-size: 227rpx 236rpx;
    text-align: center;
    color: #333;
    line-height: 40rpx;
    font-size: 28rpx;
}