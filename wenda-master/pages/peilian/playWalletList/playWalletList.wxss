page {
    position: relative;
    background: #f2f2f2;
}

.none {
    display: none;
}

.w_container {
    margin-top: 10rpx;
    -webkit-overflow-scrolling : touch;
}

.list_item {
    position: relative;
    width: 100%;
    height: 100rpx;
    background: #fff;
    border-bottom: 1rpx solid #DFDFDF;
}

.list_item:last-child {
    border-bottom: none;
}

.list_item .trade_type {
    position: absolute;
    top: 10rpx;
    left: 30rpx;
    line-height: 48rpx;
    font-size: 34rpx;
    color: #333;
}

.list_item .trade_time {
    position: absolute;
    bottom: 12rpx;
    left: 30rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    color: #999;
}

.list_item .trade_num {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    line-height: 58rpx;
    font-size: 36rpx;
}

.list_item .add {
    color: #57A1F9;
}

.list_item .decrease {
    color: #FA5F5F;
}

.list-empty {
	margin: 280rpx auto 0;
	width: 244rpx;
	height: 280rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1501813667849.jpg) no-repeat;
	background-size: contain;
	overflow: hidden;
}
.list-empty view {
	margin-top: 208rpx;
	text-align: center;
	color: #999;
	line-height: 33rpx;
	font-size: 24rpx;
}