page {
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
.hide {
  display: none;
}
.body_b {
    position: relative;
    width: 100%;
    height: 100%;
    background: url("https://image.qunmee.com/wxapp/vote1502938396507.jpg") no-repeat;
    background-size: 100% 100%;
}
.discount_pic {
    position: absolute;
    left: 30rpx;
    bottom: 140rpx;
    width: 690rpx;
    height: 380rpx;
     background: url("https://image.qunmee.com/wxapp/vote1502938536003.jpg") no-repeat; 
    background-size: contain;
}
.headImg_wrapper {
    margin-bottom: 40rpx;
    font-size: 36rpx;
}
.headImg {
    display: inline-block;
    width: 82rpx;
    height: 82rpx;
    margin: 20rpx 10rpx 0 30rpx;
    border-radius: 50%;
    vertical-align: text-bottom;
}
.nickName {
  display: inline-block;
}
.desc {
    width: 100%;
    text-align: center;
    font-size: 36rpx;
}
.discount_btn {
    position: absolute;
    left: 165rpx;
    bottom: 22rpx;
    width: 368rpx;
    height: 90rpx;
     background: url("https://image.qunmee.com/wxapp/vote1502940163501.jpg") no-repeat; 
    background-size: contain;
}
.active_rule {
    position: absolute;
    z-index: 111;
    display: inline-block;
    bottom: 80rpx;
    width: 120rpx;
    left: 315rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
}
.rule-wrapper{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000000;
    z-index: 9;
}
.rule-detail-wrapper {
    position: fixed;
    bottom: 180rpx;
    left: 45rpx;
    width: 660rpx;
    height: 880rpx;
    opacity: 1;
    background: #fff;
    z-index: 10;
    text-align: center;
    border-radius: 20rpx;
}
.rule-title{
    display: inline-block;
    margin: 40rpx auto 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
}
.rule-detail {
    text-align: left;
    display: inline-block;
    width: 580rpx;
    height: 600rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
}
.rule-item{
    margin-bottom: 24rpx;
}
.rule-btn{
    background: #FFCC11;
    border-radius: 20rpx;
    color: #333;
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 34rpx;
    margin:40rpx auto 0;
}
.rule-close{
    width: 23.8rpx;
    height: 23.8rpx;
    background-image: url("https://image.qunmee.com/wxapp/vote1502941360430.jpg"); 
    background-repeat: no-repeat;
    background-size: contain;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
.rule-close-cover{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 14rpx;
    right: 14rpx;
}