page {
  background: #f2f2f2;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.num {
	padding: 20rpx;
	box-sizing: border-box;
	color: #999;
	font-size: 34rpx;
	line-height: 88rpx;
	margin: 40rpx 30rpx 10rpx;
	width: 690rpx;
	height: 88rpx;
	background: #fff;
	border: 2rpx solid #fc1;
	border-radius: 10rpx;
}
.list {
	margin-left: 8rpx;
	overflow: hidden;
}
.btn {
	float: left;
	margin: 20rpx 0 0 22rpx;
	text-align: center;
	box-sizing: border-box;
	color: #333;
	font-size: 36rpx;
	line-height: 88rpx;
	width: 334rpx;
	height: 88rpx;
	background: #fff;
	border: 2rpx solid #fc1;
	border-radius: 10rpx;
}
.btn-selected {
	background: #fc1;
}
.way {
	margin: 100rpx 30rpx 0;
}
.wx-pay {
	width: 690rpx;
	height: 88rpx;
	background: #fff;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502939231623.jpg) #fff 622rpx center no-repeat;
	background-size: 38rpx;
	border-radius: 10rpx;
}
.wx-img {
	padding-left: 100rpx;
	color: #333;
	font-size: 36rpx;
	line-height: 88rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1504511156840.jpg) 30rpx 14rpx no-repeat;
	background-size: 60rpx;
}
.confirm {
	margin: 315rpx auto 0;
	width: 600rpx;
	height: 100rpx;
	background: #fc1;
	border-radius: 10rpx;
	text-align: center;
	line-height: 100rpx;
	font-size: 34rpx;
	color: #fff;
}
.tip1 {
	margin-top: 20rpx;
	text-align: center;
	color: #666;
	font-size: 24rpx;
	line-height: 33rpx;
}
.tip1 text {
	color: #57a1f9;
}
.modal {
	position: fixed;
  top: 0;
  left: 0;
	width: 100%;
	height: 100%;
  z-index: 100;
}
.modal-back {
	width: 100%;
	height: 100%;
	background: #000;
	opacity: .5;
}
.inner1 {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	width: 660rpx;
	height: 920rpx;
	border-radius: 20rpx;
	background: #fff;
}
.close-wrap {
  position: absolute;
  top: 0;
  right: 0;
  height: 92rpx;
  width: 92rpx;
}
.close {
	position: absolute;
	left: 30rpx;
	top: 30rpx;
	width: 32rpx;
	height: 32rpx;
}
.title {
	margin-top: 80rpx;
	text-align: center;
	color: #333;
	font-size: 36rpx;
	line-height: 50rpx;
}
.rule {
	margin: 30rpx auto 0;
	width: 600rpx;
	height: 588rpx;
	overflow: scroll;
	font-size: 30rpx;
	color: #666;
	line-height: 42rpx;
}
.know {
	margin: 40rpx auto 0;
	background: #fc1;
	border-radius: 20rpx;
	width: 260rpx;
	height: 72rpx;
	line-height: 72rpx;
	text-align: center;
	font-size: 34rpx;
}