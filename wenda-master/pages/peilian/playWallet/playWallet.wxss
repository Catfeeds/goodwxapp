.flexTip {
  position: fixed;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.flexTip .flex_content {
  width: 540rpx;
  background: rgba(255,255,255,0.90);
  border-radius: 13rpx;
  overflow: hidden;
}

.flex_content .title {
  margin-top: 40rpx;
  width: 100%;
  font-size: 34rpx;
  text-align: center;
  color: #000000;
}

.flex_content .amount, .flex_content .account, .flex_content .cycle {
  margin: 20rpx 0 0 89rpx;
  font-size: 30rpx;
}

.amount .amountNum, .account .accountUser {
  display: inline-block;
} 

.flex_content .button {
  display: flex;
  display: -webkit-flex;
  margin-top: 46rpx;
  width: 100%;
  height: 89rpx;
  line-height: 89rpx;
  font-size: 34rpx;
  border-top: 1rpx solid #CDCED2;
}

.button .cancle, .button .confirm {
  flex: 1;
  -webkit-box-flex: 1;
  text-align: center;
}

.button .cancle {
  color: #FF4D4D;
  border-right: 1rpx solid #CDCED2;
}

.button .confirm {
  color: #0076FF;
}

.rule-wrapper{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000000;
    z-index: 9;
}
.rule-detail-wrapper {
    position: fixed;
    bottom: 20rpx;
    left: 45rpx;
    width: 660rpx;
    height: 1140rpx;
    opacity: 1;
    background: #fff;
    z-index: 10;
    text-align: center;
    border-radius: 20rpx;
}
.rule-title{
    display: inline-block;
    margin: 30rpx auto 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
}
.rule-detail {
    text-align: left;
    display: inline-block;
    width: 580rpx;
    height: 172rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    color: #333;
}
.rule-btn{
    background: #FFCC11;
    border-radius: 20rpx;
    color: #333;
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 34rpx;
    margin:16rpx auto 0;
}
.rule-close{
    width: 23.8rpx;
    height: 23.8rpx;
    position: absolute;
    top: 30.2rpx;
    right: 30.2rpx;
}
.rule-close-cover{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}
.rule-item{
    margin-bottom: 4rpx;
}





