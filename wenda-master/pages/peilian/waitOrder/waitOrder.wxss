page {
  background: #fff;
}
.wrap {
	overflow: hidden;
}
.wrap2 {
	text-align: center;
}
.tip1 {
	margin-top: 100rpx;
	text-align: center;
	font-size: 34rpx;
	line-height: 48rpx;
	color: #333;
}
.time {
	color: #ff4840;
	font-size: 72rpx;
	line-height: 64rpx;
	text-align: center;
	margin-top: 1rem;
}
.list {
	margin-top: 80rpx;
	overflow: hidden;
}
.list-item {
	position: relative;
	padding-left: 272rpx;
	color: #cacaca;
	font-size: 28rpx;
	line-height: 50rpx;
	height: 50rpx;
	margin-bottom: 60rpx;
}
.list-item image {
  position: absolute;
  left: 192rpx;
  top: 0;
  width: 50rpx;
  height: 50rpx;
}
.list-item-now {
	color: #e38c00;
}
.list-item-done {
	color: #999;
}
.list-item::after {
	content: '';
	display: block;
	width: 2rpx;
	height: 50rpx;
	background: #c3c3c3;
	position: absolute;
	top: 55rpx;
	left: 216rpx;
}
.list-item:last-of-type::after {
	display: none;
}
.cancel {
	margin-top: 130rpx;
	font-size: 28rpx;
	line-height: 40rpx;
	color: #999;
	text-align: center;
}
.black-modal {
	position: fixed;
	left: 0;
	top: 0;
	z-index: 100;
	height: 100%;
	width: 100%;
	background: rgba(0, 0, 0, .5);
}
.modal-inner {
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	bottom: 0;
	margin: auto;
	width: 660rpx;
	height: 507rpx;
	border-radius: 20rpx;
	background: #fff;
	text-align: center;
}
.modal-tip1 {
	margin: 80rpx 0 60rpx;
	font-size: 36rpx;
	line-height: 50rpx;
	color: #454d5d;
}
.modal-tip2 {
	margin-top: 60rpx;
	font-size: 30rpx;
	line-height: 42rpx;
	color: #454d5d;
}
.modal-btn {
	width: 260rpx;
	height: 72rpx;
	margin: 80rpx auto 0;
	background: #fc1;
	border-radius: 20rpx;
	font-size: 34rpx;
	line-height: 72rpx;
	color: #333;
}
.close-btn {
	position: absolute;
	right: 30rpx;
	top: 30rpx;
	width: 32rpx;
	height: 32rpx;
}