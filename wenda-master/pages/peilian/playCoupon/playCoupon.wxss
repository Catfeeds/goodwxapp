page {
  background: #f2f2f2;
}
.coupon-instructions {
	height: 60rpx;
	line-height: 60rpx;
	background: rgba(0,0,0,0.40);
	font-size: 30rpx;
	color: #FFCC11;
	letter-spacing: 0;
	padding-left: 72rpx;
	background: rgba(0,0,0,0.40) url(https://image.qunmee.com/wxapp/qunmee_task1502941298955.jpg) 30rpx center no-repeat;
	background-size: 32rpx 32rpx;
}
.coupon-blank {
	height: 960rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1501813667849.jpg) no-repeat center center;
	background-size: 244rpx 200rpx;
}
.coupon-list {
	height: 140rpx;
	background: #ffffff;
	margin: 20rpx 20rpx 0;
	position: relative;
	box-shadow: 2rpx 2rpx 6rpx #ccc;
}
.coupon-list.used:after , .coupon-list.overTime:after , .coupon-list.chosed:after  {
	content: '';
	display: block;
	width: 80rpx;
	height: 80rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502941261859.jpg) no-repeat;
	background-size: contain;
	position: absolute;
	top: 30rpx;
	right: 20rpx;
}
.coupon-list.overTime:after {
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502941219785.jpg) no-repeat;
	background-size: contain;
}
.coupon-list.chosed:after {
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502941161495.jpg) no-repeat;
	background-size: contain;
}
.coupon-list-split {
	display: block;
	content: '';
	width: 20rpx;
	height: 100%;
	top: 0;
	left: 160rpx;
	position: absolute;
	border-right: .1rpx dotted #ccc;
	position: relative;
}
.coupon-list-split:after {
	position: absolute;
	content: '';
	display: block;
	width: 20rpx;
	height: 20rpx;
	border-radius: 10rpx;
	background: #f2f2f2;
	top: -10rpx;
	left: 10rpx;
} 
.coupon-list-split:before {
	position: absolute;
	content: '';
	display: block;
	width: 20rpx;
	height: 20rpx;
	border-radius: 10rpx;
	background: #f2f2f2;
	bottom: -10rpx;
	left: 10rpx;
} 
