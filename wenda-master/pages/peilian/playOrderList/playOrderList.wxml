<view class="list" wx:if="{{show}}">
  <view class="list-empty" wx:if="{{!total}}">
    <view>暂无订单</view>
  </view> 
  <block wx:else>
    <view class="item" wx:for="{{list}}" wx:key="{{index}}" data-id="{{item.orderId}}" bindtap="toDetail">
      <image class="item-img" src="{{item.trainer.avatarUrl}}"></image>
      <view class="item-name">{{item.trainer.nickName}}</view>
      <view class="item-region">{{item.gameRegion}}</view>
      <view class="item-pai">{{item.levelName}}</view>
      <view class="item-level">{{item.gamePersons}}人</view>
      <view class="item-time">{{item.createTime}}</view>
      <view class="item-price {{item.status == '已取消' ? 'item-color' : ''}}"><text>{{item.amount / 100}}</text>元</view>
      <view class="item-num {{item.status == '已取消' ? 'item-color' : ''}}">{{item.gameNumber}}局</view>
      <view class="item-status {{item.status == '待认同' ? 'item-status-color' : ''}}">{{item.status}}</view>
    </view> 
  </block>
</view>