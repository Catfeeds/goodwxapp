page {
	background: #f2f2f2;
	padding-bottom: 20rpx;
}
.q-wrap {
	position: relative;
	display: inline-block;
	margin: 20rpx 0 0 80rpx;
	background: #ffde67;
	padding: 10rpx 20rpx;
	box-shadow: 0 2rpx 5rpx 0 rgba(0, 0, 0, .1);
	border-radius: 0 20rpx 20rpx 20rpx;
	color: #333;
	font-size: 24rpx;
	line-height: 30rpx;
}
.q-wrap::first-of-type {
	margin-top: 10rpx;
}
.q-wrap::before {
	content: '';
	display: block;
	position: absolute;
	left: -60rpx;
	top: 0;
	height: 50rpx;
	width: 50rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502959339366.jpg) no-repeat;
	background-size: contain;
}
.a-wrap {
	position: relative;
	margin: 10rpx 74rpx 0 80rpx;
	padding: 10rpx 20rpx;
	background: #fff;
	box-shadow: 0 2rpx 5rpx 0 rgba(0, 0, 0, .1);
	border-radius: 20rpx 0 20rpx 20rpx;
	color: #666;
	line-height: 30rpx;
	font-size: 24rpx;
}
.a-wrap::after {
	content: '';
	display: block;
	position: absolute;
	right: -60rpx;
	top: 0;
	height: 50rpx;
	width: 50rpx;
	background: url(https://image.qunmee.com/wxapp/qunmee_task1502959433108.jpg) no-repeat;
	background-size: contain;
}