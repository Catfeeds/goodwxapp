<view class="wrap" wx:if="{{show}}">
  <view class="header">
    <image src="../../../images/group2.png"></image>
    <view>账户：{{sum}}元</view>
    <text>更多订单，更多收益，每周一5点转账到零钱</text>
  </view>
  <view class="group" wx:for="{{groups}}" wx:key="{{index}}">
    <view class="title">{{item.name}}</view>
    <view class="item" wx:for="{{item.orders}}" wx:key="{{index}}">
      <image src="{{item.creator.avatarUrl ?item.creator.avatarUrl : '../../../images/head.png'}}" class="headimg"></image>
      <view class="name">{{item.creator.nickName}}</view>
      <view class="time">{{item.createTime}}</view>
      <view class="result">
        <view class="level">{{item.levelName}} {{item.gameNumber}}局</view>
        <view class="win">{{item.resultVictory}}胜</view>
        <view class="defeat">{{item.resultDefeat}}负</view>
        <view class="quit">{{item.resultLost}}没打</view>
      </view>
      <view class="money">{{item.commission / 100}}元</view>      
    </view>
  </view>
</view>