/* pages/index/rankList/rankList.wxss */
page {
    background-color: #efeff4;
}
.topBar {
    position: fixed;
    z-index: 100;
    top: 0;
    display: flex;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 34rpx;
    color: #666;
    background: #fff;
}
.list-btn {
    flex: 1;
    text-align: center;
    display: inline-block;
    width: 250rpx;
    background: #fff;
    border: none;
}
.share-btn {
    margin-left: 63rpx;
}
.master-btn {
    margin-right: 63rpx;
}
.active-btn {
    color: #FE7C3B;
    border-bottom: 4rpx solid #FE7C3B;
}
.myInfo {
    margin-top: 98rpx;
}
.list-item {
    position: relative;
    width: 100%;
    height: 160rpx;
    margin-bottom: 10rpx;
    background: #fff;
}
.word-me {
    position: absolute;
    top: 63rpx;
    left: 34rpx;
    width: 44rpx;
    height: 42rpx;
}
.headImg {
    position: absolute;
    top: 20rpx;
    left: 100rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}
.leftBottomSide, .rightTopSide {
    position: absolute;
    width: 164rpx;
    height: 56rpx;
}
.leftBottomSide {
    left: 0;
    bottom: 0;
}
.rightTopSide {
    right: 0;
    top: 0;
}
.userName {
    position: absolute;
    top: 56rpx;
    left: 234rpx;
    font-size: 34rpx;
    color: #333;
}
.shareTimes-wrapper {
    position: absolute;
    top: 56rpx;
    left: 500rpx;
    font-size: 34rpx;
    color: #666;
}
.shareTimes {
    margin-left: 10rpx;
    font-size: 34rpx;
    color: #FF4D4D;
}
.rank-img {
    position: absolute;
    top: 44rpx;
    left: 20rpx;
    width: 72rpx;
    height: 72rpx;
}
.rank-num {
    position: absolute;
    top: 52rpx;
    left: 30rpx;
    width: 48rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 40rpx;
    color: #333;
}
.list-item-rank {
    margin: 0;
    border-bottom: 1rpx solid #E5E5E5;
}
.list-item-rank:last-child{
    margin-bottom: 40rpx;
}
.shareRules-wrapper {
    position: fixed;
    right: 10rpx;
    bottom: 76rpx;
    z-index: 100;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background: rgba(0,0,0,0.27);
    box-shadow: 0 3rpx 6rpx 0 rgba(0,0,0,0.25);
    border-radius: 20rpx;
}
.shareRules {
   width: 50rpx;
   height: 71rpx;
   vertical-align: middle;
}
.rule-detail {
    text-align: left;
    display: inline-block;
    width: 585rpx;
    height: 462rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    letter-spacing: 0;
    color: #333;
    margin: 0 30rpx;
    background: #fff;
}
.rule-detail-wrapper {
    position: fixed;
    top: 178rpx;
    left: 45rpx;
    width: 660rpx;
    height: 734rpx;
    opacity: 1;
    background: #fff;
    z-index: 102;
    text-align: center;
    border-radius: 20rpx;
}
.rule-title{
    display: inline-block;
    margin: 40rpx auto 30rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 36rpx;
    color: #333;
}
.rule-btn1 {
    background: #FFCC11;
    border-radius: 20rpx;
    color: #333;
    width: 260rpx;
    height: 72rpx;
    line-height: 72rpx;
    font-size: 34rpx;
    margin:0 auto;
}
.rule-close-wrapper {
    position: absolute;
    top: 12.2rpx;
    right: 12.2rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
} 
.rule-close {
    display: inline-block;
    width: 23.8rpx;
    height: 23.8rpx;
}
.rule-wrapper-flex {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    background: #000000;
    z-index: 101;
}
.noContents {
    /*background: url("../../images/noContents.png") center center no-repeat;*/
    background-size: cover; 
    margin: 195rpx auto 10rpx auto;
    width: 179rpx;
    height: 168rpx;
}
.noText {
    width: 336rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #999;
    font-size: 28rpx;
    margin: 0 auto;
}
.nomore{
    position: relative;
    height: 66rpx;
}
.nomore-img{
    position: absolute;
    width: 49.2rpx;
    height: 25.9rpx;
    left: 279.4rpx;
    top: 25.2rpx;
}
.nomore-text{
    position: absolute;
    height: 33rpx;
    width: 132rpx;
    line-height: 33rpx;
    text-align: center;
    font-size: 24rpx;
    color: #333;
    top: 22rpx;
    left: 340rpx;
}