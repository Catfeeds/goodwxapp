        <image class="noContents" src="{{dataEmpty}}"></image>
        <view class="noText"><text>啥都木有，快来发布内容吧</text></view>
    </view>
    <view class="nomore" wx:if="{{nomore&&!empty}}">
        <image class="nomore-img" src="{{pageImg.smile}}"></image>
        <text class="nomore-text textFontR">没有更多了~</text>
