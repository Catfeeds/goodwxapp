<view class="bannerContainer">
    <view class="bannerText text1 textFontS"><text class="bannerNumber">{{title.presons}}</text> 人解决了 <text class="bannerNumber">{{title.questions}}</text> 个问题</view>
    <view class="bannerText text2 textFontS">平均用时 <text class="bannerNumber">{{title.avgTime}}</text> 分钟</view>
    <view class="bannerText text3 textFontS">用户平均获得 <text class="bannerNumber">{{title.avgMoney}}</text> 元</view>
    <view class="bannerBtn text4 textFontR" bindtap="publishEv">我要提问</view>
    <image class="bgbg" src="{{pageImg.bg}}"></image>
</view>

<view class="tabBar">
    <view class="textFontR already-solve {{!isSolvedPage?'choose-gray':''}}" bindtap="toSolved">已解决</view>
    <view class="textFontR await-solve {{isSolvedPage?'choose-gray':''}}" bindtap="toUnSolved">待解决</view>
    <view class="textFontR check-rules" bindtap="showRules">查看规则</view>
</view>

<view class="solve-div">
    <block wx:for="{{list}}" wx:for-item="tag" wx:key="{{index}}">
        <view class="voteContent" bindtap="detailEv" data-id="{{tag.id}}" >
            <image class="head-img" src="{{tag.creatorImg}}"></image>
            <view class="head-name textFontR">{{tag.creatorName}}</view>
            <view class="pay textFontR">￥{{tag.amount}}</view>
            <view class="content-text textFontR" wx:if="{{tag.helpType==2}}">{{tag.content}}</view>
            <view class="content-voice" wx:if="{{tag.helpType==1}}">
                <image class="bubble-img" src="{{pageImg.bubbleBig}}"></image>
                <image class="icon-img" src="{{pageImg.sound}}"></image>
                <text class="voice-time">{{tag.voiceDuration}}''</text>
            </view>
            <view class="contentFooter" wx:if="{{isSolvedPage}}">
                <view class="solved-tag textFontR">{{tag.clockRes}}</view>
                <view class="solved-time textFontR">{{tag.clockDesc}}</view>
            </view>
            <view class="contentFooter" wx:if="{{!isSolvedPage}}">
                <view class="remain-time textFontR">{{tag.clockDesc}}</view>
                <image class="solved-forward-img" src="{{pageImg.toSolve}}" data-id="{{tag.id}}"></image>
                <text class="solved-forward-text textFontR" bindtap="solveEv" data-id="{{tag.id}}">去回答</text>
            </view>
        </view>
    </block>

