<template name="a">
    <view class="bannerContainer">
    <image class="topBanner" src="https://image.qunmee.com/wxapp/vote1483781106525.jpg"/>
    <image class="headImg" src="{{userInfo.avatarUrl}}"/>
    <view class="nickName">{{userInfo.nickName}}</view>
    </view>
    <view class="publishBtn">
        <button class="button-publish" hover-class="tapBtn" bindtap="publishEv">{{text}}</button>
    </view>
    <block wx:for="{{list}}" wx:for-item="singleVote" wx:key="{{index}}">
        <view class="voteContent"  bindtap="toVote" data-id="{{singleVote.id}}">
            <image wx:if="{{leftImg}}" class="contentPic"  mode="aspectFill" src="{{singleVote.voteImg ? singleVote.voteImg : 'https://image.qunmee.com/wxapp/vote1483781050022.jpg?image=1'}}"/>
            <view wx:if="{{voteTitle}}" class="contentTitle">{{singleVote.voteName}}</view>
            <view wx:if="{{reformTitle}}" class="contentTitle">{{singleVote.content}}</view>
            <view wx:if="{{cardTitle}}" class="contentTitle">{{singleVote.cardDesc}}</view>
            <view wx:if="{{signTitle}}" class="contentTitle">{{singleVote.clockDesc}}</view>
            <!--<view class="deleteContainer" catchtap="deleteEv" data-id="{{singleVote.id}}">
                <image class="delete" src="../../images/delete.png"></image>
            </view>-->
            <view class="contentFooter">
                <image class="person_s" src="{{headImg}}"></image>
                <view wx:if="{{voteText}}" class="leftFooter">
                    <text>{{singleVote.userCount}}人参与投票</text>
                    <view wx:if="{{!singleVote.isShow}}" class="privite">密</view>
                </view>
                <view wx:if="{{reformText}}" class="leftFooter"><text>{{singleVote.userCount}}人已确认收到</text></view>
                <view wx:if="{{solitaireText}}" class="leftFooter"><text>{{singleVote.userCount}}人参与接龙</text></view>
                <view wx:if="{{cardText}}" class="leftFooter"><text>{{singleVote.userCount}}人添加名片</text></view>
                <view class="startTime">{{singleVote.createTime}}</view>
            </view>
        </view>
    </block>
    <view style="text-align:center" wx:if="{{empty}}">
        <image class="noContents" src="{{dataEmpty}}"></image>
        <view class="noText"><text>啥都木有，快来发布内容吧</text></view>
    </view>
</template>