/* pages/memo/memo.wxss */

.top-half {
  margin: 40rpx 0 30rpx 20rpx;
  align-items: center;
}

.header {
  font-size: 32rpx;
  padding: 0 0 0 20rpx;
}

.hholder {
  color: #e5e5e5;
}

.holder {
  color: #e5e5e5;
  padding-left: 40rpx;
}

.choose-date {
  height: 70rpx;
  margin: 70rpx 0 0 0;
  padding: 20rpx 0 20rpx 26rpx;
}

.dicon {
  width: 46rpx;
  height: 46rpx;
}

.picker {
  width: 100%;
  padding-left: 20rpx;
}

.note {
  width: 100%;
  margin: 80rpx 0 0 0;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  font-size: 36rpx;
  padding-left: 20rpx;
}

.mbottom {
  bottom: 0rpx;
  position: fixed;
  height: 7%;
  border-top: 2rpx solid #e5e5e5;
  background-color: #ffffff;
  width: 100%;
}

.confirm {
  width: 85%;
  letter-spacing: 20rpx;
  font-size: 30rpx;
  color: #8a8a8a;
}

.delete {
  width: 15%;
}