<!--pages/memo/memo.wxml-->
<scroll-view scroll-y class='s-container'>
  <view class='top-half h-container'>
     <image class='bicon' src="../../assets/images/dot.png"></image>
     <input class='header' placeholder='主题' bindinput='storeTitle' placeholder-class='hholder' maxlength='20' value='{{title}}'></input>
  </view>
  <view class='choose-date h-container'>
    <image class="dicon" src="../../assets/images/date.png"></image>
    <picker mode='date' value='{{picker_date}}' start='2012-06-25' end='2027-12-12' bindchange='bindDateChange'>
      <view class="picker">{{show_date}}</view>
    </picker>
  </view>
  <textarea class='note' placeholder='备注' bindinput='storeNote' placeholder-class='holder' maxlength='150' value='{{note}}'></textarea>
</scroll-view>
<view class="mbottom h-container">
  <view class="confirm v-container" bindtap='postMemo'>确认</view>
  <view class="delete v-container" bindtap='deleteMemo'><image class="dicon" src="../../assets/images/delete.png"></image></view>
</view>