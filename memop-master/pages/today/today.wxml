<!--index.wxml-->
<scroll-view scroll-y class="s-container">
  <view class="top-content v-container">
    <view class='motto'>我的一天</view>
    <view class="date">{{show_date}} {{week}}</view>
  </view>
  <view wx:if="{{has_todo}}" class='todo-list'>
    <block wx:for="{{todos}}" wx:key="*this">
      <view id="{{item.Id}}" class="todo-item h-container" bindtap='getNoteDetail'>
        <image class="icon" src="../../assets/images/fin.png"></image>
        <view class="title"><text>{{item.Title}}</text></view>
      </view>
      <view class='item-line'></view>
    </block>
  </view>
</scroll-view>
<view class="bottom h-container">
  <view class="add h-container">
    <image class="plus" src="../../assets/images/plus.png" bindtap='addMemo'></image>
    <text class="tip" bindtap='addMemo'>添加备忘事项</text>
  </view>
  <view class="corner">
    <picker mode="date" value="{{picker_date}}" start="2015-09-01" end="2028-09-01" bindchange="bindDateChange">
      <image class="plus" src="../../assets/images/more.png"></image>
    </picker>
  </view>
</view>

