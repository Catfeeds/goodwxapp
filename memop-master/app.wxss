/**app.wxss**/
.v-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.h-container {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.icon {
  width: 36rpx;
  height: 36rpx;
}

.forbid-scroll {
  height: 100%;
}

.s-container {
  height: 93%;
  background-color: #ffffff;
} 
.bottom {
  bottom: 0rpx;
  position: fixed;
  height: 7%;
  border-top: 2rpx solid #e5e5e5;
  background-color: #ffffff;
  width: 100%;
}

/* colored content */


.motto {
  color: #ffffff;
  font-size: 42rpx;
  margin-bottom: 10rpx;
}

.date {
  color: #ffffff;
  font-size: 24rpx;
}

/* todo list */
.mid-content {
  align-items: flex-start;
}

.todo-list {
  width: 100%;
  background-color: #ffffff;
}

.todo-item {
  width: 95%;
  align-items: center;
  padding: 20rpx 10rpx 20rpx 30rpx;
}

.title {
  color: #2c2c2c;
  font-size: 30rpx;
  margin-left: 30rpx;
  letter-spacing: 1rpx;
}

.item-line {
  height: 2rpx;
  background: #e5e5e5;
  transform: scaleY(.5);
  margin: 0 40rpx 0 28rpx;
}

/* add todo */
.add {
  height: 100%;
  width: 90%;
  align-items: center;
  margin-left: 40rpx;
}

.plus {
  width: 40rpx;
  height: 40rpx;
}


.corner {
  width: 10%;
  align-self: center;
  padding: 18rpx 0 0 40rpx;
}


/*
 * memo page
 */
.bicon {
  width: 54rpx;
  height: 54rpx;
}
